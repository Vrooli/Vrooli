{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "recipe-book",
    "displayName": "Recipe Book",
    "description": "Intelligent household recipe management with AI-powered search, generation, and multi-tenant sharing",
    "version": "1.0.0",
    "tags": [
      "lifestyle",
      "cooking",
      "recipes",
      "meal-planning",
      "ai-search",
      "semantic-search",
      "multi-tenant",
      "family-sharing",
      "nutrition",
      "go-api",
      "postgres-storage",
      "qdrant-vectors",
      "ollama-generation"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Recipe Book API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Recipe Book UI dev server port",
      "range": "35000-39999",
      "proxy_path": "/"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store recipes, ratings, user preferences, and meal history",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector database for semantic recipe search using embeddings",
      "initialization": [
        {
          "file": "initialization/storage/qdrant/collection.json",
          "type": "collection"
        }
      ]
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": false,
      "purpose": "Workflow automation for AI recipe generation and modification",
      "initialization": [
        {
          "file": "initialization/automation/n8n/recipe-generator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/recipe-modifier.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "purpose": "AI model for recipe generation, modification, and natural language processing",
      "models": [
        "llama3.2",
        "nomic-embed-text"
      ]
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": false,
      "purpose": "Store recipe photos and images",
      "buckets": [
        "recipe-photos"
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Cache popular recipes and search results for performance"
    },
    "scenario-authenticator": {
      "type": "scenario",
      "enabled": true,
      "required": true,
      "purpose": "Multi-tenant authentication and user profile management"
    },
    "contact-book": {
      "type": "scenario",
      "enabled": true,
      "required": false,
      "purpose": "Retrieve dietary restrictions and family member preferences"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Recipe Book health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "resource",
          "target": "postgres",
          "critical": true
        },
        {
          "name": "qdrant_connection",
          "type": "resource",
          "target": "qdrant",
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Recipe Book scenario",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/recipe-book-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "recipe-book",
            "targets": [
              "recipe-book"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-dependencies",
          "run": "cd api && go mod tidy",
          "description": "Install Go module dependencies"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI package dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI assets"
        },
        {
          "name": "build-api",
          "run": "cd api && go build -o recipe-book-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "initialize-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database schema and seed data"
        },
        {
          "name": "create-qdrant-collection",
          "run": "resource-qdrant create-collection recipes 768 || echo 'Collection may already exist'",
          "description": "Create Qdrant collection for recipe embeddings"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83c\udf73 Recipe Book initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}/api/v1\\n  CLI: recipe-book --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Recipe Book with API server and production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./recipe-book-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/recipe-book-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.cjs",
          "description": "Start Express server with built React app",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"\ud83c\udf73 Recipe Book running:\\n  UI: http://localhost:$UI_PORT\\n  API: http://localhost:$API_PORT\"",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Phased scenario tests",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute structured scenario test phases"
        }
      ]
    },
    "stop": {
      "description": "Stop Recipe Book services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f 'recipe-book-api' || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'scenarios/recipe-book/ui.*vite' || pkill -f 'scenarios/recipe-book/ui.*npm run dev' || true",
          "description": "Stop Vite UI dev server"
        }
      ]
    }
  }
}
