{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "game-dialog-generator",
    "displayName": "Game Dialog Generator",
    "description": "AI-powered character dialog generation for video games with jungle platformer aesthetics",
    "version": "1.0.0",
    "tags": [
      "game-development",
      "dialog-generation",
      "character-ai",
      "narrative-design",
      "voice-synthesis",
      "jungle-platformer",
      "creative-tools",
      "go-api",
      "nodejs-ui",
      "postgres-storage",
      "qdrant-vectors",
      "ollama-ai",
      "whisper-tts",
      "real-time-generation",
      "batch-processing"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Game Dialog Generator API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Jungle-themed character management UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store character definitions, dialog history, and project data",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/data/sample_characters.sql",
          "type": "data"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector embeddings for character traits, scene context, and semantic dialog search",
      "initialization": [
        {
          "file": "initialization/data/character_embeddings.json",
          "type": "collection_setup"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "purpose": "Local LLM for dialog generation and character personality modeling",
      "models": [
        "llama3.2",
        "nomic-embed-text"
      ]
    },
    "whisper": {
      "type": "whisper",
      "enabled": true,
      "required": false,
      "purpose": "Voice synthesis for character-specific audio generation",
      "fallback_behavior": "text-only dialog generation"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Game Dialog Generator health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "query": "SELECT 1 FROM characters LIMIT 1",
          "critical": true,
          "timeout": 5000,
          "interval": 60000
        },
        {
          "name": "qdrant_collection",
          "type": "http",
          "target": "http://localhost:6333/collections/characters",
          "critical": true,
          "timeout": 5000,
          "interval": 60000
        },
        {
          "name": "ollama_models",
          "type": "exec",
          "command": "resource-ollama list | grep -E '(llama3.2|nomic-embed-text)'",
          "critical": true,
          "timeout": 10000,
          "interval": 120000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 30000
    },
    "setup": {
      "description": "Initialize Game Dialog Generator with jungle platformer theme",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/game-dialog-generator-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "game-dialog-generator",
            "targets": [
              "game-dialog-generator"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "setup-qdrant-collections",
          "run": "resource-qdrant collection create characters 384 || echo \"Collection exists or creation skipped\"",
          "description": "Create Qdrant collection for character embeddings"
        },
        {
          "name": "setup-character-embeddings",
          "run": "resource-qdrant collection create scenes 384 || echo \"Scene collection exists or creation skipped\"",
          "description": "Create Qdrant collection for scene context embeddings"
        },
        {
          "name": "download-ollama-models",
          "run": "resource-ollama pull llama3.2 && resource-ollama pull nomic-embed-text || echo \"Models already available\"",
          "description": "Download required Ollama models for dialog generation"
        },
        {
          "name": "populate-sample-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add sample characters and scenes to resources"
        },
        {
          "name": "install-cli",
          "run": "chmod +x cli/game-dialog-generator && ln -sf $(pwd)/cli/game-dialog-generator ~/.local/bin/game-dialog-generator 2>/dev/null || true",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/game-dialog-generator"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o game-dialog-generator-api .",
          "description": "Build Go API binary",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install jungle-themed UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸŒ¿ Game Dialog Generator initialized! ðŸŽ® UI: http://localhost:${UI_PORT} ðŸ”§ API: http://localhost:${API_PORT} ðŸ’» CLI: game-dialog-generator --help'",
          "description": "Display service access URLs with jungle theme"
        }
      ]
    },
    "develop": {
      "description": "Start Game Dialog Generator with API and jungle-themed UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./game-dialog-generator-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/game-dialog-generator-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start jungle-themed UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸŒ¿ Services running! ðŸŽ® Jungle UI: http://localhost:${UI_PORT} ðŸ”§ Dialog API: http://localhost:${API_PORT} ðŸ’» CLI: game-dialog-generator --help'",
          "description": "Display all running service URLs with jungle theme"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute shared phased test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop jungle adventure services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"game-dialog-generator-api\" || true; sleep 1; pkill -9 -f \"game-dialog-generator-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/game-dialog-generator.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/game-dialog-generator.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
