{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "prompt-manager",
    "displayName": "Personal Prompt Manager",
    "description": "Campaign-based prompt storage and management tool with API access, CLI, and web interface for organizing AI prompts",
    "version": "1.0.0",
    "type": "productivity-application",
    "category": "personal-tools",
    "tags": [
      "prompt-management",
      "ai-tools",
      "productivity",
      "personal-assistant",
      "campaign-organization",
      "cli-tool"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8085-8099",
      "fallback": "auto",
      "description": "Main API port for prompt manager"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3005-3019",
      "fallback": "auto",
      "description": "Web UI server port"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Primary data storage for campaigns, prompts, tags, and metadata",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "purpose": "Vector database for semantic search of prompts"
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": false,
        "required": false,
        "purpose": "Local LLM for prompt testing and enhancement suggestions",
        "models": [
          "nomic-embed-text",
          "llama3.2"
        ]
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Prompt Manager",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "chmod +x cli/prompt-manager && ln -sf $(pwd)/cli/prompt-manager /usr/local/bin/prompt-manager 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o prompt-manager-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'Prompt Manager initialized - UI: http://localhost:${UI_PORT} - API: http://localhost:${SERVICE_PORT} - CLI: prompt-manager --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Prompt Manager with API and UI servers",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./prompt-manager-api &",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/prompt-manager-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT REACT_APP_API_URL=http://localhost:$SERVICE_PORT npm start &",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null && curl -sf http://localhost:$UI_PORT > /dev/null",
          "description": "Wait for services to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'Services running - UI: http://localhost:${UI_PORT} - API: http://localhost:${SERVICE_PORT} - CLI: prompt-manager --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Prompt Manager API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-campaigns-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/campaigns",
          "description": "Test API campaigns endpoint"
        },
        {
          "name": "test-cli-status",
          "run": "prompt-manager status",
          "description": "Test CLI status command"
        }
      ]
    },
    "stop": {
      "description": "Stop Prompt Manager services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'prompt-manager-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'npm.*start' || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'Prompt Manager services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}