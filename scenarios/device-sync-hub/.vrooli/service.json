{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "device-sync-hub",
    "displayName": "Device Sync Hub",
    "description": "Cross-device file and clipboard synchronization with real-time sync capabilities",
    "version": "1.0.0",
    "tags": [
      "sync",
      "cross-device", 
      "real-time",
      "mobile-first",
      "file-sharing",
      "clipboard-sync",
      "websocket",
      "go-api",
      "postgres-storage",
      "scenario-authenticator-integration"
    ]
  },
   "ports": {
     "api": {
       "env_var": "API_PORT",
       "description": "Device Sync Hub API port",
       "range": "15000-19999"
     },
     "ui": {
       "env_var": "UI_PORT",
       "description": "Device Sync Hub UI port",
       "range": "35000-39999"
     }
   },
  "resources": {
    "postgres": {
      "required": true,
      "description": "PostgreSQL database for sync items and device sessions"
    },
    "scenario-authenticator": {
      "required": true,
      "description": "Authentication service for user validation"
    },
    "redis": {
      "required": false,
      "description": "Optional Redis for auth caching and performance"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Device Sync Hub health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 10000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint", 
          "type": "http",
          "target": "http://localhost:${UI_PORT}/",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Device Sync Hub",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "device-sync-hub-api"
             ]
           },
            {
              "type": "cli",
              "targets": [
                "device-sync-hub"
              ]
            },
          {
            "type": "directory",
            "path": "data/files"
          }
        ]
      },
      "steps": [
        {
          "name": "create-data-dirs",
          "run": "mkdir -p data/files data/files/thumbnails",
          "description": "Create data directories for file storage"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o device-sync-hub-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "initialize-database",
          "run": "if command -v psql >/dev/null 2>&1 && [ -n \"${POSTGRES_URL:-}\" ]; then psql \"$POSTGRES_URL\" -f initialization/postgres/schema.sql 2>/dev/null || echo 'Database initialization skipped (will be handled at runtime)'; else echo 'PostgreSQL not available for initialization, will be handled at runtime'; fi",
          "description": "Initialize database schema if possible"
        },
        {
          "name": "show-urls",
          "run": "echo -e 'ðŸš€ Device Sync Hub initialized\\n  Web Interface: http://localhost:${UI_PORT:-37865}\\n  API: http://localhost:${API_PORT:-17865}\\n  CLI: device-sync-hub --help\\n\\nðŸ“± Access from mobile: Replace localhost with your computers IP address'",
          "description": "Display service access URLs and mobile setup instructions"
        }
      ]
    },
    "develop": {
      "description": "Start Device Sync Hub with API and UI servers",
      "env": {
        "VROOLI_LIFECYCLE_MANAGED": "true",
        "API_PORT": "${API_PORT:-17865}",
        "UI_PORT": "${UI_PORT:-37865}",
        "AUTH_SERVICE_URL": "${AUTH_SERVICE_URL:-http://localhost:15785}",
        "AUTH_PORT": "15785",
        "STORAGE_PATH": "${PWD}/data/files",
        "POSTGRES_URL": "${POSTGRES_URL:-postgresql://vrooli:lUq9qvemypKpuEeXCV6Vnxak1@localhost:5433/vrooli?sslmode=disable}",
        "REDIS_URL": "${REDIS_URL:-redis://localhost:6379}",
        "MAX_FILE_SIZE": "10485760",
        "DEFAULT_EXPIRY_HOURS": "24",
        "THUMBNAIL_SIZE": "200"
      },
      "steps": [
         {
           "name": "start-api",
           "run": "bash ${PWD}/api/start.sh",
           "description": "Start Go API server in background",
           "background": true,
           "condition": {
             "file_exists": "api/device-sync-hub-api"
           }
         },
        {
          "name": "start-ui",
          "run": "node ${PWD}/ui/server.js",
          "description": "Start UI static server",
          "background": true,
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
         {
           "name": "show-urls",
           "run": "echo -e 'ðŸš€ Device Sync Hub running\\n  Web Interface: http://localhost:${UI_PORT:-37865}\\n  API: http://localhost:${API_PORT:-17865}\\n  CLI: device-sync-hub --help\\n\\nðŸ“± Mobile Access: Replace localhost with your IP address\\n  Example: http://192.168.1.100:${UI_PORT:-37865}'",
           "description": "Display service access URLs"
         }
      ]
    },
    "test": {
      "description": "Run integration tests for Device Sync Hub",
      "env": {
        "VROOLI_LIFECYCLE_MANAGED": "true",
        "API_PORT": "${API_PORT:-17865}",
        "UI_PORT": "${UI_PORT:-37865}",
        "AUTH_SERVICE_URL": "http://localhost:15785",
        "AUTH_PORT": "15785",
        "STORAGE_PATH": "${PWD}/data/files",
        "POSTGRES_URL": "postgresql://vrooli:lUq9qvemypKpuEeXCV6Vnxak1@localhost:5433/vrooli?sslmode=disable",
        "DEFAULT_EXPIRY_HOURS": "1"
      },
      "steps": [
        {
          "name": "run-integration-tests",
          "run": "test/integration.sh",
          "description": "Execute comprehensive integration tests",
          "condition": {
            "file_exists": "test/integration.sh"
          }
        },
        {
          "name": "fallback-basic-tests",
          "run": "echo 'âš ï¸  Integration test runner not found, running basic tests...' && cd api && go build -o test-build . && rm test-build && curl -sf http://localhost:$API_PORT/health",
          "description": "Fallback to basic tests if integration runner not available",
          "condition": {
            "file_not_exists": "test/integration.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop Device Sync Hub services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"device-sync-hub-api\" || true; sleep 1; pkill -9 -f \"device-sync-hub-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/device-sync-hub.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/device-sync-hub.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}