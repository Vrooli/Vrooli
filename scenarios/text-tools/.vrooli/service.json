{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "text-tools",
    "displayName": "Text Tools",
    "description": "Comprehensive text processing and analysis platform providing diff, search, transformation, extraction, and NLP capabilities for all scenarios",
    "version": "1.0.0",
    "tags": [
      "foundation",
      "text-processing",
      "diff",
      "search",
      "nlp",
      "extraction",
      "transformation",
      "go-api",
      "postgres-storage",
      "minio-storage",
      "ollama-ai",
      "redis-cache",
      "qdrant-vectors"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/text-tools"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Text Tools API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Text Tools UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Text Tools health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Text Tools platform",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/text-tools-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "text-tools",
            "targets": [
              "text-tools"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod tidy && go build -o text-tools-api .",
          "description": "Build Go API binary",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "init-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database schema and seed data"
        },
        {
          "name": "create-minio-buckets",
          "run": "resource-minio create-bucket text-tools-data || true",
          "description": "Create MinIO storage buckets"
        },
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --collection text-tools || echo \"Embeddings generation skipped (optional)\"",
          "description": "Generate text embeddings for semantic search"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Text Tools initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: text-tools --help\\n\\nCore endpoints:\\n  POST /api/v1/text/diff\\n  POST /api/v1/text/search\\n  POST /api/v1/text/transform\\n  POST /api/v1/text/extract\\n  POST /api/v1/text/analyze'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Text Tools services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./text-tools-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/text-tools-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Serve production UI bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Text Tools running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: text-tools --help\\n\\nTry:\\n  text-tools diff file1.txt file2.txt\\n  text-tools search \"pattern\" *.txt\\n  text-tools extract document.pdf\\n  text-tools analyze --summary input.txt'",
          "description": "Display running service URLs and examples"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for text-tools",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop Text Tools services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"text-tools-api\" || true; sleep 1; pkill -9 -f \"text-tools-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"npm run dev\" || true; pkill -f \"vite\" || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store text metadata, operations history, and templates",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "Store large text files and processing results",
        "initialization": [
          {
            "file": "initialization/storage/minio/buckets.json",
            "type": "config"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": false,
        "purpose": "Enable semantic search, summarization, and NLP features",
        "models": [
          "llama3.2",
          "mistral",
          "nomic-embed-text"
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "Cache frequently accessed text and processing results"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "purpose": "Vector storage for semantic search and similarity matching"
      }
    }
  }
}
