{
  "metadata": {
    "reset": "none"
  },
  "description": "Validates applying professional styling theme to a chart",
  "requirements": ["CHART-P0-003-LIGHT"],
  "steps": [
    {
      "type": "navigate",
      "url": "http://localhost:${UI_PORT}/"
    },
    {
      "type": "wait",
      "selector": "@selector/CHART_PREVIEW_CONTAINER",
      "timeout": 5000
    },
    {
      "type": "click",
      "selector": "@selector/TAB_STYLES"
    },
    {
      "type": "wait",
      "duration": 300
    },
    {
      "type": "click",
      "selector": "@selector/STYLE_PROFESSIONAL"
    },
    {
      "type": "wait",
      "duration": 500
    },
    {
      "type": "assert",
      "selector": "@selector/CHART_SVG",
      "condition": "visible",
      "message": "Chart with professional theme should render successfully"
    }
  ],
  "cleanup": [],
  "fixtures": []
}
