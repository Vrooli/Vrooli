{
  "metadata": {
    "reset": "none"
  },
  "description": "Validates minimal theme application to chart in the UI",
  "requirements": ["CHART-P0-003-MINIMAL"],
  "steps": [
    {
      "type": "navigate",
      "url": "http://localhost:${UI_PORT}/"
    },
    {
      "type": "wait",
      "selector": "@selector/CHART_PREVIEW_CONTAINER",
      "timeout": 5000
    },
    {
      "type": "click",
      "selector": "@selector/TAB_STYLES"
    },
    {
      "type": "wait",
      "duration": 300
    },
    {
      "type": "click",
      "selector": "@selector/THEME_MINIMAL"
    },
    {
      "type": "wait",
      "duration": 500
    },
    {
      "type": "assert",
      "selector": "@selector/CHART_SVG",
      "condition": "visible",
      "message": "Chart SVG should be visible with minimal theme applied"
    }
  ],
  "cleanup": [],
  "fixtures": []
}
