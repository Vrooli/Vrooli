{
  "metadata": {
    "reset": "none"
  },
  "description": "Validates bar chart generation with sample data in the UI",
  "requirements": ["CHART-P0-001-BAR"],
  "steps": [
    {
      "type": "navigate",
      "url": "http://localhost:${UI_PORT}/"
    },
    {
      "type": "wait",
      "selector": "@selector/CHART_PREVIEW_CONTAINER",
      "timeout": 5000
    },
    {
      "type": "click",
      "selector": "@selector/CHART_TYPE_BAR"
    },
    {
      "type": "wait",
      "duration": 500
    },
    {
      "type": "assert",
      "selector": "@selector/CHART_SVG",
      "condition": "visible",
      "message": "Bar chart SVG should be visible after selecting bar chart type"
    }
  ],
  "cleanup": [],
  "fixtures": []
}
