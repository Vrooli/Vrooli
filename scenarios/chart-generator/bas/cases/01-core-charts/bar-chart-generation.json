{
  "metadata": {
    "name": "bar-chart-generation",
    "description": "Validates bar chart generation with sample data in the UI",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"CHART-P0-001-BAR\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "navigate-home",
      "action": {
        "type": "ACTION_TYPE_NAVIGATE",
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "chart-generator",
          "scenario_path": "/",
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE",
          "timeout_ms": 30000
        },
        "metadata": {
          "label": "Navigate to chart-generator home"
        }
      }
    },
    {
      "id": "wait-preview-container",
      "action": {
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/CHART_PREVIEW_CONTAINER",
          "state": "WAIT_STATE_VISIBLE",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Wait for chart preview container"
        }
      }
    },
    {
      "id": "click-bar-chart",
      "action": {
        "type": "ACTION_TYPE_CLICK",
        "click": {
          "selector": "@selector/CHART_TYPE_BAR"
        },
        "metadata": {
          "label": "Select bar chart type"
        }
      }
    },
    {
      "id": "wait-render",
      "action": {
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "wait_for": {
            "duration_ms": 500
          }
        },
        "metadata": {
          "label": "Wait for chart to render"
        }
      }
    },
    {
      "id": "assert-chart-visible",
      "action": {
        "type": "ACTION_TYPE_ASSERT",
        "assert": {
          "selector": "@selector/CHART_SVG",
          "mode": "ASSERTION_MODE_VISIBLE",
          "timeout_ms": 5000,
          "failure_message": "Bar chart SVG should be visible after selecting bar chart type"
        },
        "metadata": {
          "label": "Assert bar chart SVG visible"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-home",
      "target": "wait-preview-container",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "wait-preview-container",
      "target": "click-bar-chart",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "click-bar-chart",
      "target": "wait-render",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4",
      "source": "wait-render",
      "target": "assert-chart-visible",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
