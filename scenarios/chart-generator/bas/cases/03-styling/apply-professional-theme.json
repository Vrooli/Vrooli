{
  "metadata": {
    "name": "apply-professional-theme",
    "description": "Validates applying professional styling theme to a chart",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"CHART-P0-003-LIGHT\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "navigate-home",
      "action": {
        "type": "ACTION_TYPE_NAVIGATE",
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "chart-generator",
          "scenario_path": "/",
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE",
          "timeout_ms": 30000
        },
        "metadata": {
          "label": "Navigate to chart-generator home"
        }
      }
    },
    {
      "id": "wait-preview-container",
      "action": {
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/CHART_PREVIEW_CONTAINER",
          "state": "WAIT_STATE_VISIBLE",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Wait for chart preview container"
        }
      }
    },
    {
      "id": "click-styles-tab",
      "action": {
        "type": "ACTION_TYPE_CLICK",
        "click": {
          "selector": "@selector/TAB_STYLES"
        },
        "metadata": {
          "label": "Click styles tab"
        }
      }
    },
    {
      "id": "wait-tab-switch",
      "action": {
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "wait_for": {
            "duration_ms": 300
          }
        },
        "metadata": {
          "label": "Wait for tab switch"
        }
      }
    },
    {
      "id": "click-professional-theme",
      "action": {
        "type": "ACTION_TYPE_CLICK",
        "click": {
          "selector": "@selector/STYLE_PROFESSIONAL"
        },
        "metadata": {
          "label": "Select professional theme"
        }
      }
    },
    {
      "id": "wait-render",
      "action": {
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "wait_for": {
            "duration_ms": 500
          }
        },
        "metadata": {
          "label": "Wait for chart to render"
        }
      }
    },
    {
      "id": "assert-chart-visible",
      "action": {
        "type": "ACTION_TYPE_ASSERT",
        "assert": {
          "selector": "@selector/CHART_SVG",
          "mode": "ASSERTION_MODE_VISIBLE",
          "timeout_ms": 5000,
          "failure_message": "Chart with professional theme should render successfully"
        },
        "metadata": {
          "label": "Assert chart with professional theme visible"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-home",
      "target": "wait-preview-container",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "wait-preview-container",
      "target": "click-styles-tab",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "click-styles-tab",
      "target": "wait-tab-switch",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4",
      "source": "wait-tab-switch",
      "target": "click-professional-theme",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e5",
      "source": "click-professional-theme",
      "target": "wait-render",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e6",
      "source": "wait-render",
      "target": "assert-chart-visible",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
