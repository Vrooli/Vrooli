{
  "name": "kids-mode-dashboard",
  "version": "1.0.0",
  "description": "A safe, engaging dashboard for kids mode applications",
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Kids mode API server port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Kids mode web dashboard port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Kids Mode Dashboard health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    }
  },
  "setup": {
    "steps": [
      {
        "name": "install-cli",
        "run": "cd cli && ./install.sh"
      },
      {
        "name": "build-api",
        "run": "cd api && go build -o kids-mode-dashboard-api ."
      }
    ]
  }
}
