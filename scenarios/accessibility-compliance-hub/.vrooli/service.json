{
  "version": "1.0.0",
  "service": {
    "name": "accessibility-compliance-hub",
    "displayName": "Accessibility Compliance Hub",
    "parent": "vrooli",
    "type": "scenario",
    "category": "compliance",
    "tags": [],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/accessibility-compliance-hub"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    },
    "description": "Automated WCAG compliance testing, remediation, and monitoring for all Vrooli scenarios",
    "version": "1.0.0"
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Accessibility compliance hub API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Accessibility compliance hub UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "setup": {
      "description": "Install accessibility compliance hub CLI",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/accessibility-compliance-hub-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "accessibility-compliance-hub",
            "targets": [
              "accessibility-compliance-hub"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install CLI binary to ~/.vrooli/bin",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o accessibility-compliance-hub-api .",
          "description": "Build Go API server",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo -e 'ðŸš€ Accessibility Compliance Hub initialized\n  Dashboard: http://localhost:${UI_PORT}\n  CLI: accessibility-compliance-hub --help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start accessibility compliance hub services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./accessibility-compliance-hub-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/accessibility-compliance-hub-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start production UI server for dist bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo -e 'ðŸš€ Accessibility Compliance Hub running:\\n  Dashboard: http://localhost:'${UI_PORT}'\\n  API: http://localhost:'${API_PORT}'\\n  CLI: accessibility-compliance-hub --help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"accessibility-compliance-hub-api\" || true; sleep 1; pkill -9 -f \"accessibility-compliance-hub-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'python3 -m http.server.*35[0-9][0-9][0-9]' || true; pkill -f 'python3 -m http.server.*40[0-9][0-9][0-9]' || true; sleep 1",
          "description": "Stop UI process (kills any python http.server in UI port ranges)"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for accessibility-compliance-hub",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "health": {
      "description": "Accessibility compliance hub health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Database for storing audit reports, issues, remediation history, accessible patterns, and compliance metrics"
      },
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "description": "Workflow automation for compliance orchestration"
      },
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": true,
        "description": "DOM analysis and visual regression testing"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "description": "AI analysis of accessibility issues"
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "description": "Cache audit results and pattern matching (1-hour TTL)"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "description": "Vector storage for accessibility pattern matching (collections: accessible_patterns, issue_embeddings)"
      }
    }
  },
  "$schema": "../../../.vrooli/schemas/service.schema.json"
}
