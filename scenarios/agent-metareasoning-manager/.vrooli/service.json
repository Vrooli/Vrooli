{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "agent-metareasoning-manager",
    "displayName": "Agent Metareasoning Manager",
    "description": "Dashboard for managing metareasoning tools (prompts, workflows) that enhance agent decision-making",
    "version": "1.0.0",
    "tags": [
      "vrooli-enhancement",
      "vrooli-helpers",
      "metareasoning",
      "decision-support",
      "ai-enhancement",
      "reasoning-patterns",
      "windmill-ui",
      "prompt-management",
      "workflow-orchestration",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "qdrant-vectors"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "port": 20250,
      "fallback": "auto",
      "description": "Main coordination API port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/pros-cons-analyzer.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/swot-analysis.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/risk-assessment.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/self-review.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/reasoning-chain.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/vector-conversion-service.json",
          "type": "workflow"
        }
      ]
    },
    "windmill": {
      "type": "windmill",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/windmill/metareasoning-orchestrator.json",
          "type": "app"
        },
        {
          "file": "initialization/automation/windmill/prompt-tester.json",
          "type": "app"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2",
        "mistral",
        "codellama",
        "nomic-embed-text"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "execution history and workflow metadata",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "script"
        },
        {
          "file": "initialization/postgres/seed.sql",
          "type": "script"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": false,
      "purpose": "Vector database for semantic search of reasoning patterns, workflow templates, and decision history - enables AI-powered similarity matching and recommendation of relevant metareasoning strategies"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Agent Metareasoning Manager",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/agent-metareasoning-manager-api"
            ]
          },
          {
            "type": "cli",
            "command": "agent-metareasoning-manager"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o agent-metareasoning-manager-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Agent Metareasoning Manager initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  CLI: agent-metareasoning-manager --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start metareasoning manager with Go API server",
      "steps": [
        {
          "name": "ensure-api-built",
          "run": "if [ ! -f api/agent-metareasoning-manager-api ]; then echo 'Building API...'; cd api && go mod download && go build -o agent-metareasoning-manager-api main.go && echo 'API built successfully'; else echo 'API binary already exists'; fi",
          "description": "Ensure API binary exists"
        },
        {
          "name": "start-api-server",
          "run": "PORT=$SERVICE_PORT ./api/agent-metareasoning-manager-api",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/agent-metareasoning-manager-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$SERVICE_PORT\\n  CLI: agent-metareasoning-manager --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test metareasoning manager Go API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-workflows-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/workflows",
          "description": "Test API workflows endpoint"
        },
        {
          "name": "test-analyze-endpoint",
          "run": "bash test/test-analyze-endpoint.sh",
          "description": "Test API analysis endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats agent-metareasoning-manager.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/agent-metareasoning-manager.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop metareasoning manager services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'agent-metareasoning-manager-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Metareasoning Manager services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
