{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "graph-studio",
    "displayName": "Graph Studio",
    "description": "Unified platform for creating, validating, and converting all forms of graph-based visualizations and data structures",
    "version": "1.0.0",
    "tags": [
      "graphs",
      "diagrams",
      "mind-maps",
      "bpmn",
      "uml",
      "visualization",
      "knowledge-graphs",
      "workflow",
      "architecture",
      "plugin-system",
      "format-conversion",
      "go-api",
      "react-ui",
      "postgres-storage"
    ]
  },
   "ports": {
     "api": {
       "env_var": "API_PORT",
       "description": "Graph Studio API port",
       "range": "15000-19999"
     },
     "ui": {
       "env_var": "UI_PORT",
       "description": "Graph Studio UI port",
       "range": "35000-39999"
     }
   },
  "resources": {
    "postgres": {
      "required": true,
      "purpose": "Store graph metadata, relationships, and versioning",
      "initialization": {
        "database": "graph_studio",
        "schema_file": "initialization/postgres/schema.sql"
      }
    },
    "minio": {
      "required": true,
      "purpose": "Store large graph files and visualization assets",
      "initialization": {
        "buckets": ["graph-files", "graph-renders", "graph-exports"]
      }
    },
    "redis": {
      "required": false,
      "purpose": "Cache frequently accessed graphs and session state",
      "fallback": "No caching, direct database queries"
    },
    "ollama": {
      "required": false,
      "purpose": "AI-powered graph suggestions and natural language queries",
      "fallback": "Disable AI features"
    },
    "qdrant": {
      "required": false,
      "purpose": "Vector search for semantic graph similarity",
      "fallback": "Keyword-based search only"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Graph Studio health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 10000,
          "interval": 60000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Graph Studio",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "graph-studio-api"
             ]
           },
           {
             "type": "cli",
             "targets": [
               "graph-studio"
             ]
           },
          {
            "type": "file",
            "path": "initialization/postgres/schema.sql"
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o graph-studio-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && if [ -f package.json ]; then npm install; else echo 'No package.json found, skipping npm install'; fi",
          "description": "Install UI dependencies"
        },
        {
          "name": "initialize-postgres",
          "run": "if command -v resource-postgres >/dev/null; then resource-postgres ensure-db graph_studio; fi",
          "description": "Create PostgreSQL database if needed"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Graph Studio initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: graph-studio --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Graph Studio with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./graph-studio-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/graph-studio-api"
          },
          "env": {
            "VROOLI_LIFECYCLE": "active",
            "API_PORT": "${API_PORT}",
            "POSTGRES_HOST": "${resource.postgres.host}",
            "POSTGRES_PORT": "${resource.postgres.port}",
            "POSTGRES_USER": "${resource.postgres.user}",
            "POSTGRES_PASSWORD": "${resource.postgres.password}",
            "POSTGRES_DB": "graph_studio",
            "MINIO_ENDPOINT": "${resource.minio.endpoint}",
            "MINIO_ACCESS_KEY": "${resource.minio.access_key}",
            "MINIO_SECRET_KEY": "${resource.minio.secret_key}",
            "REDIS_URL": "${resource.redis.url}",
            "OLLAMA_URL": "${resource.ollama.url}",
            "QDRANT_URL": "${resource.qdrant.url}",
            "LOG_LEVEL": "info",
            "CORS_ORIGINS": "*",
            "MAX_GRAPH_SIZE": "10000",
            "PLUGIN_DIR": "./plugins"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm run dev",
          "description": "Start UI development server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          },
          "env": {
            "UI_PORT": "${UI_PORT}",
            "API_PORT": "${API_PORT}",
            "VITE_APP_NAME": "Graph Studio",
            "VITE_ENABLE_AI": "${resource.ollama.enabled}"
          }
        },
         {
           "name": "show-urls",
           "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: graph-studio --help'",
           "description": "Display all running service URLs"
         }
      ]
    },
    "test": {
      "description": "Test Graph Studio API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-plugins-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/v1/plugins",
          "description": "Test plugins listing endpoint"
        },
        {
          "name": "test-graph-creation",
          "run": "curl -sf -X POST http://localhost:$API_PORT/api/v1/graphs -H 'Content-Type: application/json' -d '{\"name\":\"Test Graph\",\"type\":\"mind-maps\"}'",
          "description": "Test graph creation endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "graph-studio help && graph-studio status",
          "description": "Test CLI help and status commands"
        }
      ]
    },
    "stop": {
      "description": "Stop Graph Studio services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"graph-studio-api\" || true; sleep 1; pkill -9 -f \"graph-studio-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/graph-studio.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/graph-studio.*vite\" 2>/dev/null || true",
          "description": "Stop UI development server"
        }
      ]
    }
  }
}