#!/usr/bin/env bash

# Graph Studio CLI
# Unified interface for graph operations

set -e

# Configuration
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
API_URL="${GRAPH_STUDIO_API_URL:-http://localhost:${API_PORT:-8080}}"
VERSION="1.0.0"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Helper functions
print_error() {
    echo -e "${RED}Error: $1${NC}" >&2
}

print_success() {
    echo -e "${GREEN}✓ $1${NC}"
}

print_info() {
    echo -e "${BLUE}ℹ $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}⚠ $1${NC}"
}

# Check if API is reachable
check_api() {
    if ! curl -s "${API_URL}/health" > /dev/null 2>&1; then
        print_error "Cannot connect to Graph Studio API at ${API_URL}"
        print_info "Make sure the API server is running"
        exit 1
    fi
}

# Show help
show_help() {
    cat << EOF
Graph Studio CLI v${VERSION}

Usage: graph-studio <command> [options]

Commands:
  status              Show operational status and loaded plugins
  help               Display this help message
  version            Show CLI and API version information
  list [type]        List all graphs or plugins
  create <name> <type>  Create a new graph
  get <id>           Get a specific graph
  update <id>        Update a graph
  delete <id>        Delete a graph
  validate <id>      Validate a graph
  convert <id> <format>  Convert graph to another format
  render <id> [format]   Render graph as image (svg/png/html)
  plugins            List available plugins
  
Options:
  --json             Output in JSON format
  --verbose          Show detailed output
  --api-url <url>    Override API URL

Examples:
  graph-studio list                    # List all graphs
  graph-studio list mind-maps          # List mind map graphs
  graph-studio create "Project" bpmn   # Create BPMN diagram
  graph-studio validate abc-123         # Validate graph
  graph-studio convert abc-123 mermaid # Convert to Mermaid
  graph-studio render abc-123 svg      # Render as SVG

Environment Variables:
  GRAPH_STUDIO_API_URL    API server URL (default: http://localhost:8080)

EOF
}

# Show status
show_status() {
    check_api
    
    response=$(curl -s "${API_URL}/health")
    
    if [[ "$1" == "--json" ]]; then
        echo "$response"
    else
        status=$(echo "$response" | jq -r '.status')
        version=$(echo "$response" | jq -r '.version')
        plugins_loaded=$(echo "$response" | jq -r '.plugins_loaded')
        plugins_active=$(echo "$response" | jq -r '.plugins_active')
        
        echo "Graph Studio Status"
        echo "=================="
        echo "Status:         $status"
        echo "Version:        $version"
        echo "Plugins Loaded: $plugins_loaded"
        echo "Plugins Active: $plugins_active"
        echo "API URL:        $API_URL"
    fi
}

# Show version
show_version() {
    if [[ "$1" == "--json" ]]; then
        echo "{\"cli_version\": \"${VERSION}\", \"api_url\": \"${API_URL}\"}"
    else
        echo "Graph Studio CLI v${VERSION}"
        echo "API URL: ${API_URL}"
    fi
}

# List graphs or plugins
list_items() {
    check_api
    
    local type="$1"
    local format="$2"
    
    if [[ "$type" == "plugins" ]] || [[ "$type" == "--plugins" ]]; then
        endpoint="/api/v1/plugins"
    else
        endpoint="/api/v1/graphs"
        if [[ -n "$type" ]] && [[ "$type" != "--json" ]]; then
            endpoint="${endpoint}?type=${type}"
        fi
    fi
    
    response=$(curl -s "${API_URL}${endpoint}")
    
    if [[ "$format" == "--json" ]] || [[ "$type" == "--json" ]]; then
        echo "$response"
    else
        if [[ "$endpoint" == *"plugins"* ]]; then
            echo "Available Plugins"
            echo "================="
            echo "$response" | jq -r '.plugins[] | "\(.id) - \(.name) (\(.category)): \(.description)"'
        else
            echo "Graphs"
            echo "======"
            echo "$response" | jq -r '.graphs[] | "\(.id) | \(.name) | \(.type) | \(.updated_at)"' | column -t -s '|'
        fi
    fi
}

# Create a new graph
create_graph() {
    check_api
    
    local name="$1"
    local type="$2"
    
    if [[ -z "$name" ]] || [[ -z "$type" ]]; then
        print_error "Usage: graph-studio create <name> <type>"
        exit 1
    fi
    
    data="{\"name\": \"${name}\", \"type\": \"${type}\"}"
    
    response=$(curl -s -X POST \
        -H "Content-Type: application/json" \
        -d "$data" \
        "${API_URL}/api/v1/graphs")
    
    if echo "$response" | jq -e '.error' > /dev/null 2>&1; then
        print_error "$(echo "$response" | jq -r '.error')"
        exit 1
    else
        id=$(echo "$response" | jq -r '.id')
        print_success "Created graph: $id"
        echo "$response" | jq '.'
    fi
}

# Get a specific graph
get_graph() {
    check_api
    
    local id="$1"
    
    if [[ -z "$id" ]]; then
        print_error "Usage: graph-studio get <id>"
        exit 1
    fi
    
    response=$(curl -s "${API_URL}/api/v1/graphs/${id}")
    
    if echo "$response" | jq -e '.error' > /dev/null 2>&1; then
        print_error "$(echo "$response" | jq -r '.error')"
        exit 1
    else
        echo "$response" | jq '.'
    fi
}

# Update a graph
update_graph() {
    check_api
    
    local id="$1"
    shift
    
    if [[ -z "$id" ]]; then
        print_error "Usage: graph-studio update <id> [--name <name>] [--description <desc>]"
        exit 1
    fi
    
    # Build update data from arguments
    data="{}"
    while [[ $# -gt 0 ]]; do
        case "$1" in
            --name)
                data=$(echo "$data" | jq --arg name "$2" '.name = $name')
                shift 2
                ;;
            --description)
                data=$(echo "$data" | jq --arg desc "$2" '.description = $desc')
                shift 2
                ;;
            *)
                shift
                ;;
        esac
    done
    
    response=$(curl -s -X PUT \
        -H "Content-Type: application/json" \
        -d "$data" \
        "${API_URL}/api/v1/graphs/${id}")
    
    if echo "$response" | jq -e '.error' > /dev/null 2>&1; then
        print_error "$(echo "$response" | jq -r '.error')"
        exit 1
    else
        print_success "Updated graph: $id"
    fi
}

# Delete a graph
delete_graph() {
    check_api
    
    local id="$1"
    
    if [[ -z "$id" ]]; then
        print_error "Usage: graph-studio delete <id>"
        exit 1
    fi
    
    # Confirm deletion
    read -p "Are you sure you want to delete graph $id? (y/N) " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        print_info "Deletion cancelled"
        exit 0
    fi
    
    response=$(curl -s -X DELETE "${API_URL}/api/v1/graphs/${id}")
    
    if echo "$response" | jq -e '.error' > /dev/null 2>&1; then
        print_error "$(echo "$response" | jq -r '.error')"
        exit 1
    else
        print_success "Deleted graph: $id"
    fi
}

# Validate a graph
validate_graph() {
    check_api
    
    local id="$1"
    
    if [[ -z "$id" ]]; then
        print_error "Usage: graph-studio validate <id>"
        exit 1
    fi
    
    response=$(curl -s -X POST "${API_URL}/api/v1/graphs/${id}/validate")
    
    if echo "$response" | jq -e '.error' > /dev/null 2>&1; then
        print_error "$(echo "$response" | jq -r '.error')"
        exit 1
    else
        valid=$(echo "$response" | jq -r '.valid')
        if [[ "$valid" == "true" ]]; then
            print_success "Graph is valid"
        else
            print_warning "Graph validation failed"
        fi
        
        # Show errors and warnings
        errors=$(echo "$response" | jq -r '.errors[]?' 2>/dev/null)
        warnings=$(echo "$response" | jq -r '.warnings[]?' 2>/dev/null)
        
        if [[ -n "$errors" ]]; then
            echo "Errors:"
            echo "$errors" | while IFS= read -r line; do
                echo "  - $line"
            done
        fi
        
        if [[ -n "$warnings" ]]; then
            echo "Warnings:"
            echo "$warnings" | while IFS= read -r line; do
                echo "  - $line"
            done
        fi
    fi
}

# Convert a graph
convert_graph() {
    check_api
    
    local id="$1"
    local format="$2"
    
    if [[ -z "$id" ]] || [[ -z "$format" ]]; then
        print_error "Usage: graph-studio convert <id> <target-format>"
        exit 1
    fi
    
    data="{\"target_format\": \"${format}\"}"
    
    response=$(curl -s -X POST \
        -H "Content-Type: application/json" \
        -d "$data" \
        "${API_URL}/api/v1/graphs/${id}/convert")
    
    if echo "$response" | jq -e '.error' > /dev/null 2>&1; then
        print_error "$(echo "$response" | jq -r '.error')"
        exit 1
    else
        new_id=$(echo "$response" | jq -r '.converted_graph_id')
        print_success "Converted to $format. New graph ID: $new_id"
        echo "$response" | jq '.'
    fi
}

# Render a graph
render_graph() {
    check_api
    
    local id="$1"
    local format="${2:-svg}"
    
    if [[ -z "$id" ]]; then
        print_error "Usage: graph-studio render <id> [format]"
        exit 1
    fi
    
    data="{\"format\": \"${format}\"}"
    
    if [[ "$format" == "svg" ]] || [[ "$format" == "html" ]]; then
        # For text formats, output directly
        curl -s -X POST \
            -H "Content-Type: application/json" \
            -d "$data" \
            "${API_URL}/api/v1/graphs/${id}/render"
    else
        # For binary formats, save to file
        output_file="graph_${id}.${format}"
        curl -s -X POST \
            -H "Content-Type: application/json" \
            -d "$data" \
            -o "$output_file" \
            "${API_URL}/api/v1/graphs/${id}/render"
        
        if [[ -f "$output_file" ]]; then
            print_success "Rendered to $output_file"
        else
            print_error "Failed to render graph"
            exit 1
        fi
    fi
}

# Main command handler
main() {
    # Parse global options
    while [[ $# -gt 0 ]] && [[ "$1" == --* ]]; do
        case "$1" in
            --api-url)
                API_URL="$2"
                shift 2
                ;;
            *)
                break
                ;;
        esac
    done
    
    # Handle commands
    case "${1:-}" in
        status)
            shift
            show_status "$@"
            ;;
        help|--help|-h)
            show_help
            ;;
        version|--version|-v)
            shift
            show_version "$@"
            ;;
        list)
            shift
            list_items "$@"
            ;;
        plugins)
            list_items "plugins" "$2"
            ;;
        create)
            shift
            create_graph "$@"
            ;;
        get)
            shift
            get_graph "$@"
            ;;
        update)
            shift
            update_graph "$@"
            ;;
        delete)
            shift
            delete_graph "$@"
            ;;
        validate)
            shift
            validate_graph "$@"
            ;;
        convert)
            shift
            convert_graph "$@"
            ;;
        render)
            shift
            render_graph "$@"
            ;;
        "")
            show_help
            ;;
        *)
            print_error "Unknown command: $1"
            echo "Run 'graph-studio help' for usage information"
            exit 1
            ;;
    esac
}

# Check for required tools
if ! command -v curl &> /dev/null; then
    print_error "curl is required but not installed"
    exit 1
fi

if ! command -v jq &> /dev/null; then
    print_error "jq is required but not installed"
    exit 1
fi

# Run main function
main "$@"