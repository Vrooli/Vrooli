{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "algorithm-library",
    "displayName": "Algorithm Library",
    "description": "Validated multi-language algorithm and data structure reference library with Judge0 execution",
    "version": "1.0.0",
    "tags": [
      "technical-reference",
      "algorithms",
      "data-structures",
      "validation",
      "benchmarking",
      "judge0",
      "multi-language",
      "ground-truth",
      "postgres-storage",
      "go-api",
      "native-go-execution"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Algorithm library API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Algorithm library web interface",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store algorithms, implementations, test cases, and validation results",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "judge0": {
      "type": "judge0",
      "enabled": true,
      "required": true,
      "purpose": "Execute and validate algorithm implementations in sandboxed environment"
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Cache frequently accessed algorithms and validation results for performance"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "purpose": "Generate algorithm explanations and suggest solutions for problems",
      "models": [
        "codellama",
        "mistral"
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Algorithm Library health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "target": "algorithm_library",
          "critical": true,
          "timeout": 3000,
          "interval": 60000
        },
        {
          "name": "judge0_availability",
          "type": "http",
          "target": "http://localhost:${RESOURCE_PORTS[judge0]}/about",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Algorithm Library with database and initial algorithms",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "api/algorithm-library-api"
             ]
           },
           {
             "type": "cli",
             "targets": [
               "algorithm-library"
             ]
           },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-dependencies",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database with algorithms"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o algorithm-library-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "verify-judge0",
          "run": "resource-judge0 status || echo 'Warning: Judge0 not running. Install with: resource-judge0 manage install'",
          "description": "Check Judge0 availability"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Algorithm Library initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: algorithm-library --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Algorithm Library services for development",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./algorithm-library-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/algorithm-library-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm run dev",
          "description": "Start React development server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Services running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Judge0: http://localhost:${RESOURCE_PORTS[judge0]}\\n  CLI: algorithm-library --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Algorithm Library functionality",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:${API_PORT}/health || echo 'API not running'",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-algorithm-search",
          "run": "curl -sf http://localhost:${API_PORT}/api/v1/algorithms/search?category=sorting || echo 'Search endpoint not available'",
          "description": "Test algorithm search endpoint"
        },
        {
          "name": "test-judge0-integration",
          "run": "bash tests/test-judge0-integration.sh",
          "description": "Test Judge0 execution",
          "condition": {
            "file_exists": "tests/test-judge0-integration.sh"
          }
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats algorithm-library.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/algorithm-library.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"algorithm-library-api\" || true; sleep 1; pkill -9 -f \"algorithm-library-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/algorithm-library.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/algorithm-library.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
