{
  "id": "lead-magnet",
  "name": "Lead Magnet Landing Page",
  "description": "Focused landing page template for capturing leads with a free resource offer (ebook, guide, template, etc.). Optimized for conversion with minimal distractions.",
  "version": "1.0.0",
  "metadata": {
    "author": "Vrooli Team",
    "category": "lead-generation",
    "tags": ["lead-magnet", "conversion", "email-capture", "freemium"],
    "created_at": "2025-11-25",
    "updated_at": "2025-11-25"
  },
  "sections": {
    "required": [
      {
        "id": "hero",
        "name": "Hero Section",
        "description": "Headline, value proposition, and lead capture form",
        "fields": {
          "headline": {
            "type": "string",
            "label": "Headline",
            "placeholder": "Get Your Free Developer Productivity Guide",
            "max_length": 120,
            "required": true
          },
          "subheadline": {
            "type": "string",
            "label": "Subheadline",
            "placeholder": "Learn 10 proven tactics to ship features 3x faster",
            "max_length": 200,
            "required": true
          },
          "resource_image_url": {
            "type": "string",
            "label": "Resource Preview Image URL",
            "placeholder": "/assets/guide-preview.png",
            "required": false
          }
        }
      },
      {
        "id": "lead-form",
        "name": "Lead Capture Form",
        "description": "Email capture form with minimal friction",
        "fields": {
          "form_title": {
            "type": "string",
            "label": "Form Title",
            "placeholder": "Download Now",
            "max_length": 60,
            "required": true
          },
          "cta_text": {
            "type": "string",
            "label": "Submit Button Text",
            "placeholder": "Get Instant Access",
            "max_length": 30,
            "required": true
          },
          "privacy_note": {
            "type": "string",
            "label": "Privacy Note",
            "placeholder": "We respect your privacy. Unsubscribe anytime.",
            "max_length": 150,
            "required": false
          },
          "require_name": {
            "type": "boolean",
            "label": "Require Name Field",
            "default": false
          }
        }
      },
      {
        "id": "benefits",
        "name": "Benefits Section",
        "description": "What leads will learn or gain from the resource",
        "fields": {
          "section_title": {
            "type": "string",
            "label": "Section Title",
            "placeholder": "What's Inside",
            "max_length": 80,
            "required": true
          },
          "benefits": {
            "type": "array",
            "label": "Key Benefits",
            "min_items": 3,
            "max_items": 5,
            "item_schema": {
              "title": {
                "type": "string",
                "label": "Benefit Title",
                "max_length": 60
              },
              "description": {
                "type": "string",
                "label": "Benefit Description",
                "max_length": 150
              },
              "icon": {
                "type": "string",
                "label": "Icon Name (Lucide)",
                "placeholder": "check"
              }
            }
          }
        }
      }
    ],
    "optional": [
      {
        "id": "social-proof",
        "name": "Social Proof Section",
        "description": "Testimonials or download count",
        "fields": {
          "testimonials": {
            "type": "array",
            "label": "Testimonials",
            "max_items": 3,
            "item_schema": {
              "quote": {
                "type": "string",
                "label": "Testimonial Quote",
                "max_length": 200
              },
              "author": {
                "type": "string",
                "label": "Author Name",
                "max_length": 60
              },
              "role": {
                "type": "string",
                "label": "Author Role/Company",
                "max_length": 80
              },
              "avatar_url": {
                "type": "string",
                "label": "Avatar URL"
              }
            }
          },
          "download_count": {
            "type": "number",
            "label": "Downloads/Subscribers Count"
          }
        }
      },
      {
        "id": "preview",
        "name": "Resource Preview",
        "description": "Preview of the resource content (table of contents, sample pages)",
        "fields": {
          "section_title": {
            "type": "string",
            "label": "Section Title",
            "placeholder": "Preview the Contents",
            "max_length": 80
          },
          "preview_items": {
            "type": "array",
            "label": "Preview Items (chapters, sections, etc.)",
            "item_schema": {
              "title": {
                "type": "string",
                "label": "Item Title",
                "max_length": 100
              },
              "description": {
                "type": "string",
                "label": "Brief Description",
                "max_length": 200
              }
            }
          }
        }
      }
    ]
  },
  "metrics_hooks": [
    {
      "id": "page_view",
      "name": "Page View",
      "description": "Track landing page loads",
      "event_type": "pageview",
      "required_fields": ["session_id", "timestamp"]
    },
    {
      "id": "form_view",
      "name": "Form View",
      "description": "Track when lead form comes into viewport",
      "event_type": "form_view",
      "required_fields": ["session_id", "timestamp"]
    },
    {
      "id": "form_start",
      "name": "Form Start",
      "description": "Track when user starts filling the form",
      "event_type": "form_start",
      "required_fields": ["session_id", "timestamp"]
    },
    {
      "id": "form_submit",
      "name": "Form Submit",
      "description": "Track lead capture submissions",
      "event_type": "form_submit",
      "required_fields": ["session_id", "email", "timestamp"]
    },
    {
      "id": "download",
      "name": "Resource Download",
      "description": "Track successful resource downloads",
      "event_type": "download",
      "required_fields": ["session_id", "lead_id", "timestamp"]
    }
  ],
  "customization_schema": {
    "branding": {
      "logo_url": {
        "type": "string",
        "label": "Logo URL",
        "placeholder": "/assets/logo.svg"
      },
      "primary_color": {
        "type": "string",
        "label": "Primary Color (hex)",
        "placeholder": "#10b981"
      },
      "accent_color": {
        "type": "string",
        "label": "Accent Color (hex)",
        "placeholder": "#f59e0b"
      },
      "font_family": {
        "type": "string",
        "label": "Font Family",
        "placeholder": "Inter, system-ui, sans-serif"
      }
    },
    "seo": {
      "title": {
        "type": "string",
        "label": "Page Title",
        "max_length": 60
      },
      "description": {
        "type": "string",
        "label": "Meta Description",
        "max_length": 160
      },
      "og_image": {
        "type": "string",
        "label": "Social Share Image URL"
      }
    },
    "email_delivery": {
      "from_email": {
        "type": "string",
        "label": "From Email Address",
        "placeholder": "hello@yourdomain.com"
      },
      "from_name": {
        "type": "string",
        "label": "From Name",
        "placeholder": "Your Company"
      },
      "resource_download_url": {
        "type": "string",
        "label": "Resource Download URL or Path",
        "placeholder": "/resources/guide.pdf"
      }
    }
  },
  "frontend_aesthetics": {
    "style": "clean, focused, high-conversion",
    "colors": "Vibrant greens/blues for primary actions. High contrast for readability.",
    "typography": "Clear hierarchy with large, readable headlines. Emphasis on benefits.",
    "layout": "Single-column, linear flow. Minimal navigation to reduce distractions.",
    "components": "Large CTA buttons, trust badges, social proof above the fold.",
    "animations": "Subtle entrance animations, focus on form fields."
  },
  "tech_stack": {
    "frontend": "React + TypeScript + Vite + TailwindCSS + shadcn/ui + Lucide icons",
    "backend": "Go (Gin framework) + PostgreSQL",
    "email": "SMTP or email service integration (SendGrid/Mailgun)",
    "analytics": "Custom events API (form funnel metrics)",
    "deployment": "Vrooli lifecycle system (local or production)"
  },
  "generated_structure": {
    "directories": [
      "api/",
      "ui/src/",
      "ui/public/",
      "initialization/postgres/",
      "test/",
      "docs/"
    ],
    "key_files": [
      ".vrooli/service.json",
      "Makefile",
      "README.md",
      "PRD.md",
      "api/main.go",
      "ui/src/App.tsx",
      "initialization/postgres/schema.sql"
    ]
  }
}
