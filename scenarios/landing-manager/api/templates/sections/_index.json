{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Section Registry",
  "description": "Single source of truth for all available landing page sections. Agents should read this file to discover available sections.",
  "_paths": {
    "_comment": "All paths relative to scenario root: scenarios/landing-manager/",
    "schema_base": "api/templates/sections/",
    "component_base": "generated/test/ui/src/components/sections/",
    "renderer": "generated/test/ui/src/pages/PublicHome.tsx",
    "types": "generated/test/ui/src/lib/api.ts",
    "db_schema": "initialization/postgres/schema.sql"
  },
  "_agent_instructions": {
    "read_first": "This file is the SINGLE SOURCE OF TRUTH for sections. Start here.",
    "to_add_section": [
      "1. Create schema: {schema_base}/{section-id}.json following _schema.json",
      "2. Create component: {component_base}/{SectionName}Section.tsx",
      "3. Register here: Add entry to 'sections' array below",
      "4. Wire renderer: Add import + switch case in {renderer}",
      "5. Update types: Add to SectionType union in {types}",
      "6. Update DB: Add to CHECK constraint in {db_schema} (line ~88)"
    ],
    "to_remove_section": [
      "1. Remove entry from 'sections' array below",
      "2. Delete {schema_base}/{section-id}.json",
      "3. Delete {component_base}/{SectionName}Section.tsx",
      "4. Remove from {renderer} imports and switch",
      "5. Remove from {types} SectionType union",
      "6. Remove from {db_schema} CHECK constraint"
    ],
    "to_modify_section": {
      "schema_only": "Edit {schema_base}/{id}.json - changes available fields",
      "component_only": "Edit {component_base}/{Name}Section.tsx - changes rendering",
      "both": "Ensure field names in schema match props expected by component"
    },
    "naming_conventions": {
      "section_id": "kebab-case (e.g., 'social-proof')",
      "schema_file": "{section-id}.json",
      "component_file": "{SectionName}Section.tsx (PascalCase, e.g., 'SocialProofSection.tsx')",
      "db_type": "Same as section_id"
    }
  },
  "version": "1.0.0",
