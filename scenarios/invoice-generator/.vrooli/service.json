{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "invoice-generator",
    "displayName": "Invoice Generator Pro",
    "description": "Professional invoice generation system with customizable templates, automated calculations, tax handling, and PDF export capabilities",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "business",
      "invoice",
      "billing",
      "accounting",
      "pdf-generation",
      "javascript-ui",
      "business-automation",
      "tax-calculation",
      "payment-tracking",
      "nodejs-ui",
      "go-api",
      "postgres-storage",
      "ollama-ai"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/invoice-generator"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Invoice generator API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Invoice Generator Pro UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Invoice Generator health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Invoice Generator Pro",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/invoice-generator-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "invoice-generator",
            "targets": [
              "invoice-generator"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o invoice-generator-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "if [ -f ui/package.json ]; then cd ui && npm run build; else echo 'UI workspace missing, skipping build'; fi",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ’¼ Invoice Generator Pro initialized\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Invoice Generator Pro with API server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./invoice-generator-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/invoice-generator-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ’¼ Services running:\\n  ðŸ“„ UI Dashboard: http://localhost:$UI_PORT\\n  âš™ï¸ API: http://localhost:$API_PORT'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for invoice-generator",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"invoice-generator-api\" || true; sleep 1; pkill -9 -f \"invoice-generator-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/invoice-generator.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/invoice-generator.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": false,
        "purpose": "AI-powered invoice data extraction from unstructured text",
        "models": [
          "llama3.2"
        ]
      },
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": false,
        "purpose": "Convert invoice HTML templates to professional PDF documents"
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "invoice data, client information, payment tracking",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      }
    },
    "scenarios": {}
  }
}