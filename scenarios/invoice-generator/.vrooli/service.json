{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "invoice-generator",
    "displayName": "Invoice Generator Pro",
    "description": "Professional invoice generation system with customizable templates, automated calculations, tax handling, and PDF export capabilities",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "business",
      "invoice",
      "billing",
      "accounting",
      "pdf-generation",
      "javascript-ui",
      "business-automation",
      "tax-calculation",
      "payment-tracking",
      "nodejs-ui",
      "go-api",
      "postgres-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Invoice generator API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Invoice Generator Pro UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "models": [
        "llama3.2"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "invoice data, client information, payment tracking",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Invoice Generator health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Invoice Generator Pro",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "invoice-generator-api"
             ]
           },
           {
             "type": "cli",
             "targets": [
               "invoice-generator"
             ]
           },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o invoice-generator-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ’¼ Invoice Generator Pro initialized\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Invoice Generator Pro with API server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./invoice-generator-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/invoice-generator-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
         {
           "name": "show-urls",
           "run": "echo 'ðŸ’¼ Services running:\\n  ðŸ“„ UI Dashboard: http://localhost:$UI_PORT\\n  âš™ï¸ API: http://localhost:$API_PORT'",
           "description": "Display all running service URLs"
         }
      ]
    },
    "test": {
      "description": "Test Invoice Generator Pro",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"invoice-generator-api\" || true; sleep 1; pkill -9 -f \"invoice-generator-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/invoice-generator.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/invoice-generator.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
