{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "feature-request-voting",
    "displayName": "Feature Request Voting",
    "description": "Democratic feature request voting and management system that enables any scenario/app to collect and prioritize user feedback",
    "version": "1.0.0",
    "tags": [
      "user-feedback",
      "feature-management",
      "voting-system",
      "multi-tenant",
      "saas-enhancement",
      "product-management",
      "kanban-board",
      "react-ui",
      "go-api",
      "postgres-storage",
      "scenario-authenticator"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "fallback": "auto",
      "description": "Feature voting API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT", 
      "fallback": "auto",
      "description": "Feature voting UI port",
      "range": "3000-4999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Persistent storage for feature requests, votes, and user data",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": false,
      "required": false,
      "purpose": "Caching layer for vote counts and hot feature requests"
    }
  },
  "integrations": {
    "scenario-authenticator": {
      "type": "scenario",
      "required": false,
      "purpose": "User authentication and authorization",
      "fallback": "Anonymous voting only"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Feature voting health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Feature Request Voting system",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/feature-voting-api"
            ]
          },
          {
            "type": "cli",
            "command": "feature-voting"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o feature-voting-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm install && npm run build",
          "description": "Build React UI"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Feature Request Voting initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: feature-voting --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start feature voting system",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./feature-voting-api",
          "description": "Start Go API server",
          "background": true,
          "condition": {
            "file_exists": "api/feature-voting-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm run dev",
          "description": "Start React UI dev server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: feature-voting --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test feature voting system",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:${API_PORT}/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-feature-requests-endpoint",
          "run": "curl -sf http://localhost:${API_PORT}/api/v1/scenarios/test/feature-requests",
          "description": "Test API feature requests endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats feature-voting.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/feature-voting.bats"
          }
        },
        {
          "name": "test-ui-build",
          "run": "cd ui && npm run build",
          "description": "Test UI build process",
          "condition": {
            "file_exists": "ui/package.json"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "source-pm",
          "run": "source \"${APP_ROOT}/scripts/lib/process-manager.sh\" 2>/dev/null || true",
          "description": "Source process manager"
        },
        {
          "name": "stop-api",
          "run": "pm::stop \"vrooli.develop.feature-request-voting.start-api\" 2>/dev/null || pkill -f \"feature-voting-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pm::stop \"vrooli.develop.feature-request-voting.start-ui\" 2>/dev/null || pkill -f \"npm run dev\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}