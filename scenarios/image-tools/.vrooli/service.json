{
  "service": {
    "name": "image-tools",
    "displayName": "Image Tools",
    "description": "Comprehensive image manipulation toolkit with compression, resizing, format conversion, and metadata management",
    "version": "1.0.0",
    "tags": ["image", "compression", "optimization", "conversion", "developer-tools"]
  },
  "version": "1.0.0",
  "category": "utilities",
  "author": "Vrooli",
  "status": "development",
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999"
    }
  },
  "resources": {
    "required": ["minio"],
    "optional": ["redis", "ollama"]
  },
  "dependencies": [],
  "initialization": {
    "automation": {
      "n8n": {
        "workflows": []
      }
    },
    "storage": {
      "minio": {
        "buckets": ["image-tools-originals", "image-tools-processed", "image-tools-cache"]
      }
    }
  },
  "api": {
    "type": "rest",
    "framework": "go-fiber",
    "endpoints": [
      {
        "path": "/api/v1/image/compress",
        "method": "POST",
        "description": "Compress image with quality settings"
      },
      {
        "path": "/api/v1/image/resize",
        "method": "POST",
        "description": "Resize image to specific dimensions"
      },
      {
        "path": "/api/v1/image/convert",
        "method": "POST",
        "description": "Convert between image formats"
      },
      {
        "path": "/api/v1/image/metadata",
        "method": "POST",
        "description": "Strip or modify image metadata"
      },
      {
        "path": "/api/v1/image/batch",
        "method": "POST",
        "description": "Process multiple images with same settings"
      },
      {
        "path": "/api/v1/plugins",
        "method": "GET",
        "description": "List available format plugins"
      }
    ]
  },
  "ui": {
    "type": "static",
    "framework": "vanilla-js",
    "style": "retro-photo-lab",
    "features": [
      "drag-drop-upload",
      "live-preview",
      "before-after-comparison",
      "batch-processing",
      "format-detection"
    ]
  },
  "cli": {
    "binary": "image-tools",
    "commands": [
      "compress",
      "resize",
      "convert",
      "metadata",
      "batch",
      "status",
      "help",
      "version"
    ]
  },
   "plugins": {
     "jpeg": {
       "library": "mozjpeg-go",
       "features": ["progressive", "optimize", "quality-control"]
     },
     "png": {
       "library": "pngquant-go",
       "features": ["color-reduction", "dithering", "transparency"]
     },
     "webp": {
       "library": "libwebp-go",
       "features": ["lossless", "quality", "alpha"]
     },
     "svg": {
       "library": "svgo",
       "features": ["minify", "optimize-paths", "remove-metadata"]
     }
   },
    "lifecycle": {
      "version": "2.0.0",
      "setup": {
        "description": "Initialize Image Tools",
        "condition": {
          "checks": [
            {
              "type": "binaries",
              "targets": [
                "image-tools-api"
              ]
            },
             {
               "type": "cli",
               "targets": [
                 "image-tools"
               ]
             },
            {
              "type": "resources",
              "populated": true
            }
          ]
        },
        "steps": [
          {
            "name": "install-cli",
            "run": "cd cli && ./install.sh",
            "description": "Install CLI command globally"
          },
          {
            "name": "build-api",
            "run": "cd api && go mod download && go build -o image-tools-api .",
            "description": "Build Go API binary"
          },
          {
            "name": "show-urls",
            "run": "echo 'üñºÔ∏è Image Tools initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: image-tools --help'",
            "description": "Display service access URLs"
          }
        ]
      },
      "develop": {
       "description": "Start image tools with API and UI servers",
       "steps": [
          {
            "name": "start-api",
             "run": "cd api && ./image-tools-api",
            "description": "Start Go API server in background",
            "background": true,
            "condition": {
               "file_exists": "api/image-tools-api"
            }
          },
         {
           "name": "start-ui",
           "run": "cd ui && node server.js",
           "description": "Start UI server in background",
           "background": true
         },
         {
           "name": "show-urls",
           "run": "echo 'üñºÔ∏è Image Tools running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: image-tools --help'",
           "description": "Display all running service URLs"
         }
       ]
     }
   },
  "performance": {
    "max_file_size_mb": 100,
    "concurrent_workers": 4,
    "cache_ttl_seconds": 3600,
    "timeout_seconds": 30
  },
  "deployment": {
    "docker": true,
    "kubernetes": true,
    "serverless": false
  }
}