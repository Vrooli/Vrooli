{
  "service": {
    "name": "image-tools",
    "displayName": "Image Tools",
    "description": "Comprehensive image manipulation toolkit with compression, resizing, format conversion, and metadata management",
    "version": "1.0.0",
    "tags": [
      "image",
      "compression",
      "optimization",
      "conversion",
      "developer-tools"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "utilities",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/image-tools"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "version": "1.0.0",
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999"
    }
  },
  "dependencies": {
    "resources": {
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "description": "Object storage for original and processed images",
        "initialization": [
          {
            "file": "initialization/storage/minio/buckets.json",
            "type": "config"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": false,
        "required": false,
        "description": "Cache processed images for faster retrieval"
      },
      "ollama": {
        "type": "ollama",
        "enabled": false,
        "required": false,
        "description": "AI-powered image analysis and smart cropping"
      }
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ]
    },
    "setup": {
      "description": "Initialize Image Tools",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/image-tools-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "image-tools",
            "targets": [
              "image-tools"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o image-tools-api .",
          "description": "Build Go API binary",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo \"üñºÔ∏è Image Tools initialized\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}\n  CLI: image-tools --help\"",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start image tools with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && PORT=${API_PORT} MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY:-minioadmin} MINIO_SECRET_KEY=${MINIO_SECRET_KEY:-minioadmin} MINIO_ENDPOINT=${MINIO_ENDPOINT:-localhost:9100} ./image-tools-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/image-tools-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Serve production UI bundle in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"üñºÔ∏è Image Tools running:\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}\n  CLI: image-tools --help\"",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for image-tools",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    }
  },
  "$schema": "../../../.vrooli/schemas/service.schema.json"
}
