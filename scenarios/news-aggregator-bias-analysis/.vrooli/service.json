{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "news-aggregator-bias-analysis",
    "displayName": "News Aggregator & Bias Analysis",
    "description": "Real-time news aggregation with AI-powered bias detection, fact-checking, and perspective analysis",
    "version": "1.0.0",
    "tags": [
      "news-application",
      "media",
      "news",
      "bias-detection",
      "fact-checking",
      "media-analysis",
      "journalism",
      "ai-analysis",
      "rss",
      "javascript-ui",
      "perspective-aggregator",
      "nodejs-ui",
      "go-api",
      "postgres-storage",
      "redis-cache"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/news-aggregator-bias-analysis"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "News Aggregator API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "News Aggregator UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "News Aggregator health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize News Aggregator & Bias Analysis",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/news-aggregator-bias-analysis-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "news-aggregator-bias-analysis",
            "targets": [
              "news-aggregator-bias-analysis"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o news-aggregator-bias-analysis-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo \"ðŸ“° News Aggregator initialized\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}\"",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start News Aggregator services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./news-aggregator-bias-analysis-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/news-aggregator-bias-analysis-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"ðŸš€ News Aggregator running:\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}\"",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for news-aggregator-bias-analysis",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"news-aggregator-bias-analysis-api\" || true; sleep 1; pkill -9 -f \"news-aggregator-bias-analysis-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/news-aggregator-bias-analysis.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/news-aggregator-bias-analysis.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2"
        ],
        "purpose": "AI-powered bias analysis, fact-checking, and content enrichment"
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store news articles, sources, bias analysis results, fact-check records, and user preferences",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache RSS feeds, trending topics, real-time updates, and analysis results"
      }
    }
  }
}
