{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "news-aggregator-bias-analysis",
    "displayName": "News Aggregator & Bias Analysis",
    "description": "Real-time news aggregation with AI-powered bias detection, fact-checking, and perspective analysis",
    "version": "1.0.0",
    "tags": [
      "news-application",
      "media",
      "news",
      "bias-detection",
      "fact-checking",
      "media-analysis",
      "journalism",
      "ai-analysis",
      "rss",
      "javascript-ui",
      "perspective-aggregator",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 25500,
      "fallback": "auto",
      "description": "News Aggregator API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 32750,
      "fallback": "auto",
      "description": "News Aggregator UI port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "shared_workflows": [
        "ollama",
        "structured-data-extractor"
      ],
      "initialization": [
        {
          "file": "initialization/n8n/rss-feed-fetcher.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/bias-analyzer.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/fact-checker.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/fact-checker-enhanced.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/news-enricher.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/perspective-aggregator.json",
          "type": "workflow"
        }
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store news articles, sources, bias analysis results, fact-check records, and user preferences",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache RSS feeds, trending topics, real-time updates, and analysis results"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "News Aggregator health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize News Aggregator & Bias Analysis",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/news-aggregator-bias-analysis-api"
            ]
          },
          {
            "type": "cli",
            "command": "news-aggregator-bias-analysis"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o news-bias-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo \"ðŸ“° News Aggregator initialized\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}\"",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start News Aggregator services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./news-bias-api",
          "description": "Start API server",
          "background": true,
          "condition": {
            "file_exists": "api/news-bias-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "show-running",
          "run": "echo \"ðŸš€ News Aggregator running:\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}\"",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test News Aggregator services",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-sources",
          "run": "curl -sf http://localhost:$API_PORT/api/sources",
          "description": "Test sources endpoint"
        },
        {
          "name": "test-articles",
          "run": "curl -sf http://localhost:$API_PORT/api/articles",
          "description": "Test articles endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "source-pm",
          "run": "source \"${APP_ROOT}/scripts/lib/process-manager.sh\" 2>/dev/null || true",
          "description": "Source process manager"
        },
        {
          "name": "stop-api",
          "run": "pm::stop \"vrooli.develop.news-aggregator-bias-analysis.start-api\" 2>/dev/null || pkill -f \"news-aggregator-bias-analysis-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pm::stop \"vrooli.develop.news-aggregator-bias-analysis.start-ui\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
