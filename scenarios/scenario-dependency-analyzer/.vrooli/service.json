{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "scenario-dependency-analyzer",
    "displayName": "Scenario Dependency Analyzer",
    "description": "Meta-intelligence capability for analyzing, visualizing, and optimizing scenario and resource dependencies within Vrooli",
    "version": "1.0.0",
    "tags": [
      "meta-intelligence",
      "dependency-analysis",
      "deployment-optimization",
      "architectural-intelligence",
      "capability-planning",
      "foundational-capability",
      "cross-scenario-multiplier",
      "go-api",
      "postgres-storage",
      "claude-code-integration",
      "qdrant-vectors",
      "graph-visualization"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/scenario-dependency-analyzer"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Dependency analysis API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Dependency graph visualization UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Scenario Dependency Analyzer health monitoring",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 60000
        },
        {
          "name": "dependency_analysis_test",
          "type": "http",
          "target": "http://localhost:${API_PORT}/api/v1/health/analysis",
          "critical": true,
          "timeout": 15000,
          "interval": 300000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 20000
    },
    "setup": {
      "description": "Initialize Scenario Dependency Analyzer with all dependencies",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/scenario-dependency-analyzer-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "scenario-dependency-analyzer",
            "targets": [
              "scenario-dependency-analyzer"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o scenario-dependency-analyzer-api .",
          "description": "Build Go dependency analysis API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install scenario-dependency-analyzer CLI command globally"
        },
        {
          "name": "setup-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize PostgreSQL schema and seed initial data"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "verify-cli",
          "run": "echo '\u2705 CLI installed at:' && which scenario-dependency-analyzer || echo '  /home/matthalloran8/.vrooli/bin/scenario-dependency-analyzer'",
          "description": "Verify CLI installation"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd0d Scenario Dependency Analyzer initialized\\n  Graph Visualization: http://localhost:${UI_PORT}\\n  Analysis API: http://localhost:${API_PORT}\\n  CLI: scenario-dependency-analyzer --help\\n\\n\ud83d\udcca Quick Commands:\\n  scenario-dependency-analyzer analyze all\\n  scenario-dependency-analyzer graph combined --format html\\n  scenario-dependency-analyzer optimize all'",
          "description": "Display service access URLs and usage examples"
        }
      ]
    },
    "develop": {
      "description": "Start dependency analyzer with API server and visualization UI",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./scenario-dependency-analyzer-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/scenario-dependency-analyzer-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Serve production UI bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd0d Scenario Dependency Analyzer Services Running:\\n  Graph Visualization: http://localhost:${UI_PORT}\\n  Analysis API: http://localhost:${API_PORT}\\n  Database: postgres://${RESOURCE_PORTS[postgres]}\\n\\n\ud83d\udccb CLI Usage: scenario-dependency-analyzer --help'",
          "description": "Display all running service URLs and CLI info"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for scenario-dependency-analyzer",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute scenario-dependency-analyzer --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop all dependency analyzer services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"scenario-dependency-analyzer-api\" || true; sleep 1; pkill -9 -f \"scenario-dependency-analyzer-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "true",
          "description": "Stop UI process"
        },
        {
          "name": "cleanup-temp-files",
          "run": "find /tmp -name 'dependency-analysis-*' -mtime +1 -delete 2>/dev/null || true",
          "description": "Clean up temporary analysis files"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store dependency metadata, analysis results, optimization recommendations, and graph data",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": true,
        "purpose": "AI-powered analysis of scenario code, configurations, and proposed scenario descriptions"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "purpose": "Generate embeddings for semantic similarity matching against Qdrant"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Semantic similarity matching for proposed scenarios and dependency pattern recognition"
      },
      "redis": {
        "type": "redis",
        "enabled": false,
        "required": false,
        "purpose": "Cache frequently accessed dependency data and analysis results for performance optimization"
      }
    },
    "scenarios": {}
  }
}
