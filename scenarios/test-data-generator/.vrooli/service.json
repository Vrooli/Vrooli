{
  "service": {
    "name": "test-data-generator"
  },
  "version": "1.0.0",
  "description": "Universal test data generator for all formats - JSON, YAML, CSV, XML, images, audio, video, PDFs",
  "category": "generation",
  "status": "testing",
  "metadata": {
    "author": "AI Agent",
    "created": "2024-01-09",
    "updated": "2024-01-09",
    "tags": [
      "test",
      "mock",
      "data",
      "generation",
      "faker",
      "media"
    ],
    "revenue_potential": "5000-10000",
    "reusability_score": 10,
    "complexity": "medium"
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Test data generator API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Test data generator UI port",
      "range": "35000-39999"
    }
  },
  "capabilities": [
    "generate_json",
    "generate_yaml",
    "generate_csv",
    "generate_xml",
    "generate_images",
    "generate_audio",
    "generate_video",
    "generate_pdf",
    "batch_generation",
    "deterministic_seeds",
    "schema_validation"
  ],
  "interfaces": {
    "api": {
      "enabled": true,
      "port": 3001,
      "base_path": "/api/v1",
      "health_endpoint": "/health",
      "docs_endpoint": "/docs"
    },
    "cli": {
      "enabled": true,
      "binary": "test-data-generator",
      "install_path": "~/.vrooli/bin/"
    },
    "ui": {
      "enabled": true,
      "port": 3002,
      "type": "web"
    }
  },
  "resources": {
    "required": [],
    "optional": [
      {
        "name": "redis",
        "purpose": "Caching frequently generated patterns",
        "fallback": "In-memory cache"
      },
      {
        "name": "minio",
        "purpose": "Store generated files for retrieval",
        "fallback": "Temporary filesystem"
      }
    ]
  },
  "initialization": {
    "scripts": [
      "initialization/startup.sh"
    ],
    "dependencies": {
      "system": [
        "nodejs",
        "npm",
        "ffmpeg"
      ],
      "npm": [
        "faker",
        "express",
        "canvas",
        "pdfkit",
        "fluent-ffmpeg"
      ]
    }
  },
  "deployment": {
    "local": {
      "type": "node",
      "entry": "api/server.js",
      "env": {
        "NODE_ENV": "production",
        "API_PORT": 3001,
        "UI_PORT": 3002,
        "CACHE_TTL": 3600,
        "MAX_FILE_SIZE": 104857600
      }
    },
    "docker": {
      "image": "vrooli/test-data-generator:1.0.0",
      "ports": [
        "3001:3001",
        "3002:3002"
      ],
      "volumes": [
        "/tmp/test-data:/app/temp"
      ]
    }
  },
  "cross_scenario": {
    "provides": [
      {
        "capability": "test_data_generation",
        "interface": "api",
        "endpoints": [
          "/generate/json",
          "/generate/image",
          "/generate/batch"
        ]
      }
    ],
    "consumes": []
  },
  "testing": {
    "unit_tests": "tests/api.test.js",
    "integration_tests": "tests/integration.test.sh",
    "test_runner": "tests/run-tests.sh",
    "coverage_target": 80
  },
  "monitoring": {
    "health_check": {
      "endpoint": "/health",
      "interval": 30,
      "timeout": 5
    },
    "metrics": {
      "enabled": true,
      "endpoint": "/metrics",
      "track": [
        "requests",
        "cache_hits",
        "generation_time",
        "errors"
      ]
    }
  },
  "security": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100
    },
    "max_request_size": "10MB",
    "allowed_origins": [
      "http://localhost:*"
    ],
    "input_validation": true
  },
  "evolution": {
    "current_version": "1.0.0",
    "roadmap": {
      "1.1.0": "Add Redis caching integration",
      "1.2.0": "Complex media generation",
      "2.0.0": "ML-powered realistic data"
    },
    "deprecations": []
  },
  "lifecycle": {
    "setup": {
      "description": "Initialize Test Data Generator",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "test-data-generator-api"
            ]
          },
          {
            "type": "cli",
            "targets": [
              "test-data-generator"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "install-deps",
          "run": "cd api && npm install && cd ../ui && npm install",
          "description": "Install dependencies"
        },
        {
          "name": "build-api",
          "run": "cd api && npm run build",
          "description": "Build API"
        },
        {
          "name": "show-urls",
          "run": "echo 'Test Data Generator initialized - API: http://localhost:${API_PORT} - UI: http://localhost:${UI_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start test-data-generator services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./test-data-generator-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/test-data-generator-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "show-urls",
          "run": "echo 'Test Data Generator running:\\n  API: http://localhost:${API_PORT}\\n  UI: http://localhost:${UI_PORT}'"
        }
      ]
    },
    "stop": {
      "description": "Stop test-data-generator services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"test-data-generator-api\" || true; sleep 1; pkill -9 -f \"test-data-generator-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/test-data-generator.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/test-data-generator.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "health": {
      "description": "Test Data Generator health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "version": "2.0.0"
  }
}
