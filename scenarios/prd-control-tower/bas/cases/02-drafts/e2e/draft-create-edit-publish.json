{
  "metadata": {
    "name": "draft-create-edit-publish",
    "description": "Draft editor workflow: navigate to catalog, open scenario, and access draft editor (NOTE: Save/Publish steps omitted due to Monaco+React controlled component limitation - see PROBLEMS.md)",
    "labels": {
      "reset": "full",
      "requirements_json": "[\"PCT-FUNC-002\", \"PCT-DRAFT-CREATE\", \"PCT-DRAFT-EDIT\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "navigate-home",
      "action": {
        "type": "ACTION_TYPE_NAVIGATE",
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "prd-control-tower",
          "scenario_path": "/",
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE",
          "timeout_ms": 30000
        },
        "metadata": {
          "label": "Open PRD Control Tower"
        }
      },
      "execution_settings": {
        "wait_after_ms": 1000
      }
    },
    {
      "id": "click-catalog-link",
      "action": {
        "type": "ACTION_TYPE_CLICK",
        "click": {
          "selector": "@selector/navigation.catalogLink"
        },
        "metadata": {
          "label": "Navigate to Catalog page"
        }
      },
      "execution_settings": {
        "timeout_ms": 10000,
        "wait_after_ms": 1000
      }
    },
    {
      "id": "assert-catalog-loaded",
      "action": {
        "type": "ACTION_TYPE_ASSERT",
        "assert": {
          "selector": "@selector/catalog.card",
          "mode": "ASSERTION_MODE_EXISTS",
          "timeout_ms": 10000,
          "failure_message": "Catalog should display scenario cards"
        },
        "metadata": {
          "label": "Catalog cards visible"
        }
      }
    },
    {
      "id": "click-first-card",
      "action": {
        "type": "ACTION_TYPE_CLICK",
        "click": {
          "selector": "@selector/catalog.card"
        },
        "metadata": {
          "label": "Click first scenario card"
        }
      },
      "execution_settings": {
        "timeout_ms": 10000,
        "wait_after_ms": 3000
      }
    },
    {
      "id": "assert-scenario-loaded",
      "action": {
        "type": "ACTION_TYPE_ASSERT",
        "assert": {
          "selector": "@selector/scenario.tabs.prd",
          "mode": "ASSERTION_MODE_EXISTS",
          "timeout_ms": 20000,
          "failure_message": "Scenario detail page should load with PRD tab"
        },
        "metadata": {
          "label": "Scenario control center loaded"
        }
      }
    },
    {
      "id": "click-edit-draft",
      "action": {
        "type": "ACTION_TYPE_CLICK",
        "click": {
          "selector": "a[href*='/draft/']"
        },
        "metadata": {
          "label": "Click Edit Draft button"
        }
      },
      "execution_settings": {
        "timeout_ms": 10000,
        "wait_after_ms": 2000
      }
    },
    {
      "id": "assert-editor-loaded",
      "action": {
        "type": "ACTION_TYPE_ASSERT",
        "assert": {
          "selector": "@selector/drafts.editor.textarea",
          "mode": "ASSERTION_MODE_EXISTS",
          "timeout_ms": 20000,
          "failure_message": "Draft editor should be visible after clicking Edit Draft"
        },
        "metadata": {
          "label": "Draft editor loaded"
        }
      }
    },
    {
      "id": "assert-editor-has-content",
      "action": {
        "type": "ACTION_TYPE_ASSERT",
        "assert": {
          "selector": ".monaco-editor .view-lines",
          "mode": "ASSERTION_MODE_EXISTS",
          "timeout_ms": 5000,
          "failure_message": "Editor should display content after loading"
        },
        "metadata": {
          "label": "Editor contains PRD content"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-home",
      "target": "click-catalog-link",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "click-catalog-link",
      "target": "assert-catalog-loaded",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "assert-catalog-loaded",
      "target": "click-first-card",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4",
      "source": "click-first-card",
      "target": "assert-scenario-loaded",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e5",
      "source": "assert-scenario-loaded",
      "target": "click-edit-draft",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e6",
      "source": "click-edit-draft",
      "target": "assert-editor-loaded",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e7",
      "source": "assert-editor-loaded",
      "target": "assert-editor-has-content",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
