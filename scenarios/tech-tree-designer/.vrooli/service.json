{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "tech-tree-designer",
    "displayName": "Tech Tree Designer",
    "description": "Strategic visualization and analysis of complete technology development pathways from basic tools to civilization-scale digital twins",
    "version": "1.0.0",
    "tags": [
      "strategic-planning",
      "civilization-intelligence",
      "technology-roadmap",
      "digital-twin-progression",
      "superintelligence-pathway",
      "cross-sector-optimization",
      "dependency-mapping",
      "progress-tracking",
      "ai-recommendations",
      "graph-visualization",
      "postgres-storage",
      "ollama-analysis",
      "strategic-consciousness"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/tech-tree-designer"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Tech tree analysis and strategic planning API",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Interactive tech tree visualization interface",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Tech Tree Designer health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "target": "tech_tree_db",
          "critical": true,
          "timeout": 5000,
          "interval": 60000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Tech Tree Designer with complete civilization roadmap",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/tech-tree-designer-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "tech-tree-designer",
            "targets": [
              "tech-tree-designer"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "initialize-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database with tech tree schemas and seed data"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install tech-tree-designer CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o tech-tree-designer-api .",
          "description": "Build Go API for strategic analysis and data management"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && pnpm install --ignore-workspace --no-frozen-lockfile",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && pnpm run build",
          "description": "Build interactive tech tree visualization interface"
        },
        {
          "name": "verify-civilization-data",
          "run": "./scripts/verify-postgres-data.sh",
          "description": "Validate civilization progress data directly in Postgres"
        },
        {
          "name": "show-urls",
          "run": "cat <<EOF\nðŸš€ Tech Tree Designer initialized\n  Strategic Dashboard: http://localhost:${UI_PORT}\n  Tree Analysis API: http://localhost:${API_PORT}/api/v1/tech-tree/analyze\n  Progress Tracking: http://localhost:${API_PORT}/api/v1/progress\n  CLI: tech-tree-designer --help\n\nðŸŽ¯ Civilization Progress: Ready for strategic intelligence acceleration\nEOF",
          "description": "Display tech tree access URLs and strategic overview"
        }
      ]
    },
    "develop": {
      "description": "Start tech tree designer with API server and production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./tech-tree-designer-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/tech-tree-designer-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start Express server with built visualization app",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "cat <<EOF\nðŸš€ Strategic Intelligence System Online:\n  ðŸ“Š Tech Tree Dashboard: http://localhost:${UI_PORT}\n  ðŸ§  Analysis API: http://localhost:${API_PORT}\n  ðŸ“ˆ Progress Tracking: http://localhost:${API_PORT}/api/v1/progress\n  ðŸŽ¯ Strategic CLI: tech-tree-designer --help\n\nðŸŒŸ Ready to guide Vrooli's evolution toward superintelligence\nEOF",
          "description": "Display all running strategic planning services"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for tech-tree-designer",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop tech tree designer services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"tech-tree-designer-api\" || true; sleep 1; pkill -9 -f \"tech-tree-designer-api\" 2>/dev/null || true",
          "description": "Stop API server"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"tech-tree-designer/ui/server\" || true; sleep 1; pkill -9 -f \"tech-tree-designer/ui/server\" 2>/dev/null || true",
          "description": "Stop UI development server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Storage for tech tree data, sector definitions, scenario mappings, and progress tracking",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "seed"
          },
          {
            "directory": "initialization/postgres/migrations",
            "type": "migration"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": false,
        "purpose": "AI-powered strategic analysis, dependency discovery, and development path optimization",
        "models": [
          "llama3.2",
          "mistral",
          "nomic-embed-text"
        ]
      },
      "openrouter": {
        "type": "openrouter",
        "enabled": true,
        "required": false,
        "purpose": "Advanced AI models for stage idea generation, tree expansion recommendations, and strategic planning"
      }
    }
  }
}
