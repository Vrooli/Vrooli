{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "scenario-improver",
    "displayName": "Scenario Improver",
    "description": "Continuous improvement system for existing Vrooli scenarios using Claude Code intelligence for PRD-driven validation and cross-scenario impact analysis",
    "version": "1.0.0",
    "tags": [
      "vrooli-enhancement",
      "continuous-improvement",
      "scenario-optimization",
      "prd-compliance",
      "validation-gates",
      "cross-scenario-analysis",
      "quality-assurance",
      "automated-improvement",
      "javascript-ui",
      "terminal-ui",
      "nodejs-ui",
      "go-api",
      "claude-code-integration",
      "postgres-storage",
      "direct-ai-analysis"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Scenario Improver API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Scenario Improver UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store improvement history, PRD compliance tracking, validation results, and cross-scenario impacts",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache improvement queue, validation results, and active improvement sessions"
    },
    "questdb": {
      "type": "questdb",
      "enabled": true,
      "required": false,
      "purpose": "Time-series storage for improvement metrics and success rate tracking"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Scenario Improver health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Scenario Improver",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/scenario-improver-api"
            ]
          },
          {
            "type": "cli",
            "command": "scenario-improver"
          },
          {
            "type": "cli",
            "command": "resource-claude-code",
            "description": "Claude Code CLI (required for AI analysis)"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x scenario-improver && ln -sf $(pwd)/scenario-improver ~/.local/bin/scenario-improver 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o scenario-improver-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ”§ Scenario Improver initialized\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Scenario Improver services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./scenario-improver-api",
          "description": "Start API server",
          "background": true,
          "condition": {
            "file_exists": "api/scenario-improver-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "show-running",
          "run": "echo 'ðŸš€ Scenario Improver running:\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}\n  CLI: scenario-improver --help'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test Scenario Improver services",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-scenarios",
          "run": "curl -sf http://localhost:$API_PORT/api/scenarios/list",
          "description": "Test scenarios endpoint"
        },
        {
          "name": "test-queue",
          "run": "curl -sf http://localhost:$API_PORT/api/queue/status",
          "description": "Test queue status endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f scenario-improver.start-api 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f scenario-improver.start-ui 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}