{
  "service": {
    "name": "video-downloader",
    "displayName": "Video Downloader",
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "tags": [],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/video-downloader"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    },
    "description": "Video downloader service with Go API and React UI",
    "version": "2.0.0"
  },
  "version": "2.0.0",
  "enabled": true,
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Video Downloader health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Video Downloader",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/video-downloader-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "video-downloader",
            "targets": [
              "video-downloader"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh . || echo \"Resource population skipped\"",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o video-downloader-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install --no-fund --no-audit",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udcf9 Video Downloader initialized\\n  API: http://localhost:${API_PORT}\\n  UI: http://localhost:${UI_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./video-downloader-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/video-downloader-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Services running:\\n  API: http://localhost:${API_PORT}\\n  UI: http://localhost:${UI_PORT}\\n  CLI: video-downloader --help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "timeout": 90,
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"video-downloader-api\" || true; sleep 1; pkill -9 -f \"video-downloader-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/video-downloader.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/video-downloader.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for video-downloader",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "redis": {
        "required": false
      },
      "postgres": {
        "required": false
      }
    }
  }
}
