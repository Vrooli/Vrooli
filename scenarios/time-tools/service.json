{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "time-tools",
    "displayName": "Time Tools",
    "description": "Comprehensive temporal operations and scheduling platform for timezone conversions, duration calculations, and intelligent scheduling",
    "version": "1.0.0",
    "type": "business-application",
    "category": "productivity",
    "tags": [
      "temporal-operations",
      "scheduling",
      "timezone-management",
      "calendar-integration",
      "productivity"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://vrooli.com"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/time-tools"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "ports": {
    "api": {
      "env_var": "TIME_TOOLS_PORT",
      "range": "dynamic",
      "description": "Main API port"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store calendar events, schedules, timezone data, and temporal analytics",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache and event bus"
    },
    "minio": {
      "type": "minio",
      "enabled": false,
      "required": false,
      "purpose": "Object storage for files and artifacts"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": false,
      "required": false,
      "purpose": "Vector database for semantic search"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize time-tools scenario",
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o time-tools-api",
          "description": "Build Go API server",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Time Tools initialized\\n  API: http://localhost:${TIME_TOOLS_PORT}\\n  CLI: time-tools --help'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start application services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && VROOLI_LIFECYCLE_MANAGED=true PORT=${TIME_TOOLS_PORT:-18765} ./time-tools-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/time-tools-api"
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Time Tools running:\\n  API: http://localhost:${TIME_TOOLS_PORT}\\n  CLI: time-tools --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test application functionality",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:${TIME_TOOLS_PORT}/api/v1/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-api-endpoints",
          "run": "bash test/test-api-endpoints.sh",
          "description": "Test API endpoints",
          "condition": {
            "file_exists": "test/test-api-endpoints.sh"
          }
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats cli-tests.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/cli-tests.bats"
          }
        },
        {
          "name": "test-integration",
          "run": "bash test.sh",
          "description": "Run full integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop application services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'time-tools-api' || true",
          "description": "Stop time-tools API server"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Application services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Enterprise-grade temporal operations platform that eliminates timezone errors, optimizes scheduling, and provides intelligent time management across global operations",
      "targetMarket": "Global enterprises, scheduling platforms, productivity tools, and any business requiring sophisticated time management",
      "painPoints": [
        "Manual timezone conversion errors leading to missed meetings",
        "Complex scheduling conflicts with multiple participants",
        "Lack of business hours and holiday awareness in scheduling"
      ],
      "solution": "Comprehensive temporal API with timezone intelligence, conflict detection, optimal scheduling algorithms, and business time calculations",
      "competitiveAdvantage": "Only platform combining timezone conversion, scheduling optimization, and business time calculations with AI-powered conflict resolution",
      "revenuePotential": {
        "initial": "$10,000",
        "recurring": "$2,000/month",
        "expansion": "$20,000",
        "totalEstimate": "$40,000"
      },
      "marketDemand": {
        "level": "High",
        "growth": "35% YoY",
        "evidence": "Growing demand for global scheduling solutions and timezone management tools"
      },
      "roi": {
        "developmentCost": "$5,000",
        "timeToMarket": "2 weeks",
        "breakEven": "3 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "2m",
        "responseTime": {
          "p50": "100ms",
          "p95": "500ms",
          "p99": "1000ms"
        },
        "throughput": {
          "minimum": 50,
          "target": 100,
          "peak": 500
        },
        "availability": "99.9%",
        "errorRate": "<1%"
      },
      "resources": {
        "cpu": {
          "minimum": "0.5",
          "target": "1.0",
          "maximum": "2.0"
        },
        "memory": {
          "minimum": "512Mi",
          "target": "1Gi",
          "maximum": "2Gi"
        },
        "storage": {
          "database": "10Gi",
          "files": "20Gi"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "Time Tools",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Vrooli",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#4F46E5",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "time_tools_db",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "description": "Application port (dynamically assigned)"
        },
        "ADMIN_PORT": {
          "type": "number",
          "description": "Admin dashboard port (dynamically assigned)"
        },
        "API_PORT": {
          "type": "number",
          "description": "API server port (dynamically assigned)"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": false
        },
        "notifications": {
          "enabled": true,
          "channels": [
            "email",
            "webhook"
          ]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "payments": {
          "enabled": false,
          "provider": "stripe"
        }
      },
      "integrations": [
        {
          "name": "Google Calendar",
          "type": "calendar",
          "required": false
        }
      ]
    },
    "aiGeneration": {
      "enabled": true,
      "placeholders": {
        "business": [
          "VALUE_PROPOSITION_PLACEHOLDER",
          "TARGET_MARKET_PLACEHOLDER",
          "PAIN_POINT_*_PLACEHOLDER",
          "SOLUTION_DESCRIPTION_PLACEHOLDER"
        ],
        "technical": [
          "SCENARIO_ID_PLACEHOLDER",
          "DATABASE_NAME_PLACEHOLDER",
          "APPLICATION_PATH_PLACEHOLDER"
        ],
        "revenue": [
          "*_REVENUE_PLACEHOLDER",
          "TOTAL_ESTIMATE_PLACEHOLDER",
          "DEVELOPMENT_COST_PLACEHOLDER"
        ]
      },
      "instructions": "Replace all _PLACEHOLDER values with specific details for the target scenario"
    }
  }
}