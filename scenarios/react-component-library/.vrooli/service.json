{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "react-component-library",
    "displayName": "React Component Library",
    "description": "Central UI for designing, previewing, editing, and tracking shared React UI components with AI-powered live editing and multi-viewport emulation",
    "version": "0.0.1",
    "type": "business-application",
    "category": "ai_tools",
    "tags": [
      "react-ui",
      "go-api",
      "component-library",
      "ui-designer",
      "preview-emulator",
      "ai-editing",
      "iframe-bridge"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/react-component-library"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Go API server",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "React UI",
      "range": "35000-39999"
    },
    "websocket": {
      "env_var": "WS_PORT",
      "description": "WebSocket channel",
      "range": "25000-29999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Standard API/UI health checks",
      "startup_grace_period": 15000,
      "checks": [
        {
          "name": "api",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 10000,
          "interval": 30000,
          "critical": true
        },
        {
          "name": "ui",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": false
        }
      ]
    },
    "setup": {
      "description": "Build API & UI, install CLI",
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI into ~/.vrooli/bin"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o react-component-library-api .",
          "description": "Compile Go API server"
        },
        {
          "name": "install-ui",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm install; else echo 'ui/ not present yet'; fi",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm run build; else echo 'ui/ not present yet'; fi",
          "description": "Build production UI bundle"
        }
      ]
    },
    "develop": {
      "description": "Launch API and Vite dev server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./react-component-library-api",
          "background": true,
          "description": "Start Go API server"
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        }
      ]
    },
    "test": {
      "description": "Execute phased test suite",
      "steps": [
        {
          "name": "run-tests",
          "run": "test-genie execute react-component-library --preset comprehensive",
          "description": "Run structure/unit/integration/business/performance phases"
        }
      ]
    },
    "stop": {
      "description": "Stop background processes",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f 'react-component-library-api' || true",
          "description": "Stop Go API"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Primary relational data store",
        "schema": "react-component-library"
      },
      "resource-openrouter": {
        "type": "ai-gateway",
        "enabled": true,
        "required": true,
        "description": "AI-powered code editing and component refactoring"
      }
    },
    "scenarios": {
      "app-issue-tracker": {
        "enabled": true,
        "required": true,
        "description": "Integration for component adoption workflow"
      }
    }
  }
}