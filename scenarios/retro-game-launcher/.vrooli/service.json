{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "retro-game-launcher",
    "displayName": "Retro Game Launcher",
    "description": "Platform for launching and managing retro games with AI-generated game creation capabilities",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "gaming",
      "retro",
      "entertainment",
      "ai-generation",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 28500,
      "fallback": "auto",
      "description": "Retro game launcher API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 35250,
      "fallback": "auto",
      "description": "Game launcher UI port"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store game metadata, user progress, and settings",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/n8n/game-generation-workflow.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2",
        "codellama"
      ]
    }
  },
  "sharedWorkflows": {
    "n8n": [
      "ollama"
    ]
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Retro Game Launcher health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Retro Game Launcher",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/retro-game-launcher-api"
            ]
          },
          {
            "type": "cli",
            "command": "retro-game-launcher"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o retro-game-launcher-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install React UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Retro Game Launcher initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: retro-game-launcher --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start retro game launcher with custom UI and Go API",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && ./retro-game-launcher-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/retro-game-launcher-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start React UI in background",
          "background": true,
          "condition": {
            "directory_exists": "ui/node_modules"
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Retro Game Launcher running:\\n  UI: http://localhost:$UI_PORT\\n  API: http://localhost:$API_PORT\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: retro-game-launcher --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test retro game launcher API, UI, and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-games-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/games",
          "description": "Test API games endpoint"
        },
        {
          "name": "test-ui-serving",
          "run": "curl -sf http://localhost:$UI_PORT",
          "description": "Test UI is serving content"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats retro-game-launcher.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/retro-game-launcher.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop retro game launcher services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'retro-game-launcher-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'react-scripts' || true",
          "description": "Stop React UI development server"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Retro Game Launcher services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}