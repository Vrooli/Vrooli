{
  "metadata": {
    "name": "Repository Status API",
    "description": "Validates /api/v1/repo/status returns branch + file change summary",
    "tags": ["e2e", "api", "git", "status"],
    "requirements": ["GCT-OT-P0-002A", "GCT-OT-P0-002B"],
    "reset": "none"
  },
  "settings": {},
  "nodes": [
    {
      "id": "status",
      "type": "http_request",
      "data": {
        "label": "GET /api/v1/repo/status",
        "method": "GET",
        "url": "{{API_URL}}/api/v1/repo/status",
        "headers": {
          "Content-Type": "application/json"
        },
        "assertions": [
          {"type": "status_code", "expected": 200},
          {"type": "json_path_exists", "path": "$.repo_dir"},
          {"type": "json_path_exists", "path": "$.branch.head"},
          {"type": "json_path_exists", "path": "$.files"},
          {"type": "json_path_exists", "path": "$.summary"},
          {"type": "json_path_exists", "path": "$.scopes"}
        ]
      }
    }
  ],
  "edges": []
}

