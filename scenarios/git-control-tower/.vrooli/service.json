{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "git-control-tower",
    "displayName": "Git Control Tower",
    "description": "Agent-friendly git repository control plane (REST API + CLI + UI)",
    "version": "1.0.0",
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "tags": [
      "git",
      "version-control",
      "devtools",
      "automation"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/git-control-tower"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 18700,
      "description": "Git Control Tower API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 36400,
      "description": "Git Control Tower UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Git Control Tower health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "startup_grace_period": 10000,
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": false
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "target": "vrooli",
          "critical": true,
          "timeout": 3000,
          "interval": 60000
        }
      ]
    },
    "setup": {
      "description": "Initialize Git Control Tower (build + install + schema)",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/git-control-tower-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "git-control-tower",
            "targets": [
              "git-control-tower"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o git-control-tower-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && (corepack pnpm install --ignore-workspace || pnpm install --ignore-workspace)",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && pnpm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "initialize-database",
          "run": "if [ -f initialization/postgres/schema.sql ]; then psql -h ${POSTGRES_HOST:-localhost} -p ${POSTGRES_PORT:-5432} -U ${POSTGRES_USER:-vrooli} -d ${POSTGRES_DB:-vrooli} -f initialization/postgres/schema.sql &> /dev/null || echo '⚠️  Schema initialization skipped (psql connection failed)'; else echo '⚠️  No schema.sql found (ok for scaffold)'; fi",
          "description": "Initialize database schema (best-effort; safe to skip in scaffold)"
        }
      ]
    },
    "develop": {
      "description": "Start Git Control Tower services for development",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./git-control-tower-api",
          "background": true,
          "description": "Start Go API server"
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        }
      ]
    },
    "test": {
      "description": "Execute phased test suite",
      "steps": [
        {
          "name": "run-tests",
          "run": "cd test && ./run-tests.sh",
          "description": "Run structure/unit/integration/business/performance phases"
        }
      ]
    },
    "stop": {
      "description": "Stop all services gracefully"
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Audit logs and metadata storage (uses shared vrooli database)"
      },
      "redis": {
        "type": "redis",
        "enabled": false,
        "required": false,
        "description": "Optional caching for diff/status operations"
      },
      "ollama": {
        "type": "ollama",
        "enabled": false,
        "required": false,
        "description": "AI-assisted commit message suggestions"
      },
      "resource-openrouter": {
        "type": "resource-openrouter",
        "enabled": false,
        "required": false,
        "description": "AI fallback for commit message suggestions"
      }
    }
  }
}
