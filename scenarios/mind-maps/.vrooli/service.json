{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "mind-maps",
    "displayName": "Mind Maps",
    "description": "AI-enabled mind mapping tool for visual organization and semantic search of ideas and knowledge",
    "version": "1.0.0",
    "type": "foundation",
    "category": "knowledge-management",
    "tags": [
      "mind-maps",
      "knowledge-graph",
      "semantic-search",
      "visual-organization",
      "ai-organization",
      "data-structuring",
      "cross-scenario-tool"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8100-8199",
      "fallback": "auto",
      "description": "Main API port for mind maps service"
    },
    "ui": {
      "env_var": "UI_PORT", 
      "range": "3100-3199",
      "fallback": "auto",
      "description": "UI server port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/auto-organize.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/auto-organize-enhanced.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/auto-organize-advanced.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/semantic-search.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/create-mindmap.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/update-mindmap.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/export-mindmap.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/document-to-mindmap.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/collaborative-sharing.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/intelligent-mindmap-builder.json",
            "type": "workflow"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "phi3.5:3.8b",
          "nomic-embed-text"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Persistent storage of mind maps and metadata",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "script"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Vector database for semantic search across mind map nodes",
        "initialization": [
          {
            "file": "initialization/qdrant/collections.json",
            "type": "collections"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "Real-time collaboration support and caching"
      }
    }
  },
  "shared_workflows": [
    "ollama",
    "embedding-generator"
  ],
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Mind Maps service",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x mind-maps && ln -sf $(pwd)/mind-maps /usr/local/bin/mind-maps 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o mind-maps-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        }
      ]
    },
    "develop": {
      "description": "Start Mind Maps services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./mind-maps-api &",
          "description": "Start Go API server in background",
          "background": true
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT node server.js &",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to be ready"
        }
      ]
    },
    "test": {
      "description": "Test Mind Maps services",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation"
        },
        {
          "name": "test-cli-commands",
          "run": "mind-maps --help",
          "description": "Test CLI basic commands"
        }
      ]
    },
    "stop": {
      "description": "Stop Mind Maps services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'mind-maps-api' || true",
          "description": "Stop Go API server"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        }
      ]
    }
  }
}
