{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "mind-maps",
    "displayName": "Mind Maps",
    "description": "AI-enabled mind mapping tool for visual organization and semantic search of ideas and knowledge",
    "version": "1.0.0",
    "tags": [
      "foundation",
      "knowledge-management",
      "mind-maps",
      "knowledge-graph",
      "semantic-search",
      "visual-organization",
      "ai-organization",
      "data-structuring",
      "cross-scenario-tool",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 25000,
      "fallback": "auto",
      "description": "Main API port for mind maps service"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 32500,
      "fallback": "auto",
      "description": "UI server port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/auto-organize.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/auto-organize-enhanced.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/auto-organize-advanced.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/semantic-search.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/create-mindmap.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/update-mindmap.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/export-mindmap.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/document-to-mindmap.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/collaborative-sharing.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/intelligent-mindmap-builder.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2",
        "phi3.5:3.8b",
        "nomic-embed-text"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Persistent storage of mind maps and metadata",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector database for semantic search across mind map nodes",
      "initialization": [
        {
          "file": "initialization/qdrant/collections.json",
          "type": "collection"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Real-time collaboration support and caching"
    }
  },
  "shared_workflows": [
    "ollama",
    "embedding-generator"
  ],
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Mind Maps health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Mind Maps service",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/mind-maps-api"
            ]
          },
          {
            "type": "cli",
            "command": "mind-maps"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x mind-maps && ln -sf $(pwd)/mind-maps ~/.local/bin/mind-maps 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o mind-maps-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        }
      ]
    },
    "develop": {
      "description": "Start Mind Maps services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && ./mind-maps-api",
          "description": "Start Go API server in background",
          "background": true
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && until curl -s http://localhost:$API_PORT/health > /dev/null 2>&1; do echo 'Waiting for API...'; sleep 1; done",
          "description": "Wait for API server to be ready"
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to be ready"
        }
      ]
    },
    "test": {
      "description": "Test Mind Maps services",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation"
        },
        {
          "name": "test-cli-commands",
          "run": "mind-maps --help",
          "description": "Test CLI basic commands"
        }
      ]
    },
    "stop": {
      "description": "Stop Mind Maps services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'mind-maps-api' || true",
          "description": "Stop Go API server"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        }
      ]
    }
  }
}