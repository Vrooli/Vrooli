{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "test-genie",
    "displayName": "Test Genie",
    "description": "AI test-orchestration scenario that generates and executes coverage suites",
    "version": "0.0.1",
    "type": "business-application",
    "category": "ai_tools",
    "tags": [
      "react-ui",
      "go-api"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/test-genie"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Go API server",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "React UI",
      "range": "35000-39999"
    },
    "websocket": {
      "env_var": "WS_PORT",
      "description": "WebSocket channel",
      "range": "25000-29999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Standard API/UI health checks",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "startup_grace_period": 15000,
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 10000,
          "interval": 30000,
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": false
        }
      ]
    },
    "setup": {
      "description": "Build API & UI, install CLI",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/test-genie-api"
            ]
          },
          {
            "type": "cli",
            "command": "test-genie"
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI into ~/.vrooli/bin"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o test-genie-api ./cmd/test-genie-api",
          "description": "Compile Go API server binary (test-genie-api)"
        },
        {
          "name": "install-ui-deps",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm install; else echo 'ui/ not present yet'; fi",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm run build; else echo 'ui/ not present yet'; fi",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83e\uddea Test Genie ready!\\n  \ud83c\udf10 API: http://localhost:${API_PORT}\\n  \ud83d\udda5\ufe0f  UI: http://localhost:${UI_PORT}\\n  \ud83d\udee0\ufe0f CLI: test-genie --help\\n  \ud83d\udce6 Queue Postgres URL: ${DATABASE_URL}'",
          "description": "Display service entrypoints after setup completes"
        }
      ]
    },
    "develop": {
      "description": "Launch API and Vite dev server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./test-genie-api",
          "background": true,
          "condition": {
            "file_exists": "api/test-genie-api"
          },
          "description": "Start Go API server"
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'Test Genie running:\\n  \ud83c\udf10 API: http://localhost:${API_PORT}\\n  \ud83d\udda5\ufe0f  UI: http://localhost:${UI_PORT}\\n  \ud83e\uddea Execute suites via: curl -X POST http://localhost:${API_PORT}/api/v1/executions'",
          "description": "Display scenario URLs for operators"
        }
      ]
    },
    "test": {
      "description": "Execute phased test suite",
      "steps": [
        {
          "name": "run-tests",
          "run": "test-genie execute test-genie --preset comprehensive",
          "description": "Run structure/unit/integration/business/performance phases"
        }
      ]
    },
    "stop": {
      "description": "Stop background processes",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f 'test-genie-api' || true",
          "description": "Stop Go API"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Primary relational data store",
        "schema": "test-genie"
      }
    }
  }
}