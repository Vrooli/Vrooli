{
  "name": "system-monitor",
  "version": "1.0.0",
  "description": "Server monitoring with AI-driven anomaly investigation",
  "runtime": {
    "protected": true,
    "protection_reason": "System health monitoring - needed to detect issues during automation"
  },
  "metadata": {
    "category": "vrooli-helpers",
    "importance": "important",
    "auto_start": false
  },
  "ports": {
    "api": {
      "env_var": "API_PORT"
    },
    "ui": {
      "env_var": "UI_PORT"
    }
  },
  "lifecycle": {
    "health": {
      "description": "System Monitor health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "version": "2.0.0"
  }
}
