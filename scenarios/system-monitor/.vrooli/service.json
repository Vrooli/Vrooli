{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "system-monitor",
    "displayName": "System Monitor",
    "description": "Server monitoring with AI-driven anomaly investigation",
    "version": "1.0.0",
    "tags": [
      "vrooli-helper",
      "monitoring",
      "system",
      "anomaly-detection",
      "ai-investigation",
      "dashboards",
      "alerts",
      "metrics",
      "dark-theme",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "node-red-flows",
      "postgres-storage",
      "redis-cache",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 30500,
      "fallback": "8083",
      "description": "System Monitor API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 3003,
      "fallback": "auto",
      "description": "Web UI dashboard port"
    }
  },
  "components": {
    "api": {
      "enabled": true,
      "language": "go",
      "path": "api",
      "main": "main.go"
    },
    "ui": {
      "enabled": true,
      "framework": "javascript",
      "path": "ui",
      "main": "server.js"
    },
    "cli": {
      "enabled": true,
      "language": "bash",
      "path": "cli",
      "command": "system-monitor"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "store metrics, thresholds, investigations, and reports"
    },
    "questdb": {
      "type": "questdb",
      "enabled": true,
      "required": true,
      "purpose": "time series data for metrics and performance analytics"
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "real-time alerts and caching"
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true
    },
    "node-red": {
      "type": "node-red",
      "enabled": true,
      "required": true,
      "purpose": "anomaly detection flows"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2:3b"
      ],
      "purpose": "anomaly investigation and analysis"
    },
    "claude-code": {
      "type": "claude-code",
      "enabled": true,
      "required": false,
      "purpose": "deep system investigation"
    },
    "grafana": {
      "type": "grafana",
      "enabled": true,
      "required": false,
      "purpose": "advanced metrics visualization"
    }
  },
  "initialization": {
    "postgres": [
      {
        "file": "initialization/postgres/schema.sql",
        "type": "schema"
      }
    ],
    "n8n": [
      {
        "name": "threshold-monitor",
        "file": "initialization/n8n/threshold-monitor.json",
        "active": true
      },
      {
        "name": "scheduled-reports",
        "file": "initialization/n8n/scheduled-reports.json",
        "active": true
      },
      {
        "name": "anomaly-investigator",
        "file": "initialization/n8n/anomaly-investigator.json",
        "active": true
      }
    ],
    "questdb": [
      {
        "file": "initialization/questdb/server.conf",
        "type": "config"
      }
    ],
    "redis": [
      {
        "file": "initialization/redis/redis.conf",
        "type": "config"
      }
    ]
  },
  "dependencies": {
    "shared_workflows": [
      "rate-limiter",
      "ollama",
      "structured-data-extractor"
    ]
  },
  "healthcheck": {
    "enabled": true,
    "interval": 30,
    "timeout": 10,
    "retries": 3,
    "endpoints": [
      {
        "type": "http",
        "url": "http://localhost:${API_PORT}/health",
        "method": "GET",
        "expected_status": 200
      }
    ]
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "stdout"
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "System Monitor health check configuration",
      "endpoints": {
        "api": "/health",
        "metrics": "/api/metrics/current",
        "investigations": "/api/investigations/latest"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize System Monitor",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/system-monitor-api"
            ]
          },
          {
            "type": "cli",
            "command": "system-monitor"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x system-monitor && ./install.sh",
          "description": "Install CLI command"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o system-monitor-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        }
      ]
    },
    "develop": {
      "description": "Start System Monitor app",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./system-monitor-api",
          "description": "Start API server",
          "background": true
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "show-urls",
          "run": "echo 'System Monitor running:\\n  UI: http://localhost:'$UI_PORT'\\n  API: http://localhost:'$API_PORT'\\n  Grafana: http://localhost:3004'",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Test System Monitor",
      "steps": [
        {
          "name": "test-api-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation"
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop System Monitor",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'system-monitor-api' || true; pkill -f 'node server.js' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}