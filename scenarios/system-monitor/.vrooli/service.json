{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "system-monitor",
    "displayName": "System Monitor",
    "description": "Server monitoring with AI-driven anomaly investigation",
    "version": "1.0.0",
    "tags": [
      "vrooli-helper",
      "emergency-response",
      "monitoring",
      "system",
      "maintenance",
      "anomaly-detection",
      "ai-investigation",
      "dashboards",
      "alerts",
      "metrics",
      "dark-theme",
      "react-ui",
      "typescript",
      "vite",
      "go-api",
      "node-red-flows",
      "postgres-storage",
      "redis-cache",
      "ollama-ai"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/system-monitor"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    },
    "importance": "important"
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "System Monitor API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 36232,
      "description": "Web UI dashboard port"
    }
  },
  "dependencies": {
    "shared_workflows": [
      "rate-limiter",
      "ollama",
      "structured-data-extractor"
    ],
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "store metrics, thresholds, investigations, and reports",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "questdb": {
        "type": "questdb",
        "enabled": true,
        "required": true,
        "purpose": "time series data for metrics and performance analytics",
        "initialization": [
          {
            "file": "initialization/questdb/server.conf",
            "type": "config"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "real-time alerts and caching",
        "initialization": [
          {
            "file": "initialization/redis/redis.conf",
            "type": "config"
          }
        ]
      },
      "node-red": {
        "type": "node-red",
        "enabled": true,
        "required": true,
        "purpose": "anomaly detection flows"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2:3b"
        ],
        "purpose": "anomaly investigation and analysis"
      },
      "codex": {
        "type": "codex",
        "enabled": true,
        "required": false,
        "purpose": "deep system investigation using Codex tooling",
        "models": [
          "codex-mini-latest"
        ]
      },
      "grafana": {
        "type": "grafana",
        "enabled": true,
        "required": false,
        "purpose": "advanced metrics visualization"
      }
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "System Monitor health check configuration",
      "endpoints": {
        "api": "/health",
        "metrics": "/api/metrics/current",
        "investigations": "/api/investigations/latest",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize System Monitor",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/system-monitor-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "system-monitor",
            "targets": [
              "system-monitor"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x system-monitor && ./install.sh",
          "description": "Install CLI command"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o system-monitor-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install React UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI for production"
        },
        {
          "name": "show-urls",
          "run": "echo 'System Monitor ready:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: system-monitor --help'",
          "description": "Display service endpoints after setup"
        }
      ]
    },
    "develop": {
      "description": "Start System Monitor app with production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./system-monitor-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/system-monitor-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.cjs",
          "description": "Start Express server with built React app",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'System Monitor running:\\n  UI: http://localhost:'$UI_PORT'\\n  API: http://localhost:'$API_PORT'\\n  Grafana: http://localhost:3004'",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for system-monitor",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"system-monitor-api\" || true; sleep 1; pkill -9 -f \"system-monitor-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/system-monitor.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/system-monitor.*vite\" 2>/dev/null || true",
          "description": "Stop React UI dev server"
        }
      ]
    }
  }
}
