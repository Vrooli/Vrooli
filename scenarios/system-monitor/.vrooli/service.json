{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "system-monitor",
    "displayName": "System Monitor",
    "description": "Real-time system monitoring with AI-driven anomaly investigations and reporting.",
    "version": "1.0.0",
    "type": "business-application",
    "category": "monitoring",
    "tags": [
      "monitoring",
      "observability",
      "anomaly-detection",
      "investigations",
      "reports",
      "react-ui",
      "go-api",
      "node-red",
      "postgres",
      "questdb",
      "redis",
      "ollama"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/system-monitor"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "System Monitor API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 36232,
      "description": "Web UI dashboard port"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Standard API/UI health checks",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "startup_grace_period": 15000,
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 10000,
          "interval": 30000,
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": false
        }
      ]
    },
    "setup": {
      "description": "Build API & UI, install CLI",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/system-monitor-api"
            ]
          },
          {
            "type": "cli",
            "command": "system-monitor"
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI into ~/.vrooli/bin"
        },
        {
          "name": "build-api",
          "run": "cd api && GOWORK=off go mod download && GOWORK=off go build -o system-monitor-api ./cmd/server",
          "description": "Build Go API server"
        },
        {
          "name": "install-ui-deps",
          "run": "if [ -f ui/package.json ]; then cd ui && (corepack pnpm install --ignore-workspace || pnpm install --ignore-workspace); else echo 'ui/ not present yet'; fi",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm run build; else echo 'ui/ not present yet'; fi",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo \"API: http://localhost:${API_PORT}\" && echo \"UI: http://localhost:${UI_PORT}\"",
          "description": "Display access URLs"
        }
      ]
    },
    "develop": {
      "description": "Launch API and UI server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./system-monitor-api",
          "background": true,
          "description": "Start Go API server in background",
          "condition": {
            "file_exists": "api/system-monitor-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.cjs",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"API: http://localhost:${API_PORT}\" && echo \"UI: http://localhost:${UI_PORT}\"",
          "description": "Display access URLs"
        }
      ]
    },
    "test": {
      "description": "Execute phased test suite via test-genie",
      "steps": [
        {
          "name": "run-tests",
          "run": "test-genie execute system-monitor --preset comprehensive",
          "description": "Run all test phases via test-genie"
        }
      ]
    },
    "stop": {
      "description": "Stop background processes",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f 'system-monitor-api' || true",
          "description": "Stop Go API"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'node server.cjs' || true",
          "description": "Stop UI server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Store thresholds, investigations, and reports",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "questdb": {
        "type": "questdb",
        "enabled": true,
        "required": true,
        "description": "Time-series metrics storage",
        "initialization": [
          {
            "file": "initialization/questdb/server.conf",
            "type": "config"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "description": "Real-time alerts and caching",
        "initialization": [
          {
            "file": "initialization/redis/redis.conf",
            "type": "config"
          }
        ]
      },
      "node-red": {
        "type": "node-red",
        "enabled": true,
        "required": true,
        "description": "Metric collection and anomaly detection workflows"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2:3b"
        ],
        "description": "AI analysis for anomaly investigations"
      },
      "codex": {
        "type": "codex",
        "enabled": true,
        "required": false,
        "models": [
          "codex-mini-latest"
        ],
        "description": "Deep system investigations using Codex tooling"
      },
      "grafana": {
        "type": "grafana",
        "enabled": true,
        "required": false,
        "description": "Optional dashboards for advanced visualization"
      }
    },
    "scenarios": {}
  }
}