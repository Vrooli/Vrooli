{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "document-manager",
    "displayName": "Document Manager",
    "description": "AI-powered documentation management SaaS platform with comprehensive analysis, improvement suggestions, and automated quality maintenance",
    "version": "2.0.0",
    "tags": [
      "business-application",
      "productivity",
      "documentation",
      "ai",
      "automation",
      "maintenance",
      "saas",
      "quality-assurance",
      "content-analysis",
      "custom-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Document manager coordination API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Document manager web interface port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store application metadata, agent configurations, improvement queue, and audit logs",
      "database": "document_manager",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector database for documentation embeddings, agent memory, and similarity pattern analysis",
      "initialization": [
        {
          "file": "initialization/storage/qdrant/collections.json",
          "type": "collection"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Real-time messaging, notification channels, and caching"
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/doc-monitor-workflow.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/improvement-processor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/notification-router.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2",
        "nomic-embed-text",
        "codellama"
      ]
    },
    "unstructured_io": {
      "type": "unstructured_io",
      "enabled": true,
      "required": false,
      "purpose": "Advanced document parsing and content extraction"
    }
  },
  "business_model": {
    "type": "saas",
    "target_revenue": "$25000-50000",
    "target_market": "Development teams, technical writers, documentation managers",
    "key_features": [
      "Multi-application documentation monitoring",
      "AI-powered improvement suggestions",
      "Automated agent workflows",
      "User-controlled approval processes",
      "Comprehensive analytics dashboard"
    ]
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Document Manager health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Document Manager with all resources and integrations",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "document-manager-api"
             ]
           },
            {
              "type": "cli",
              "targets": [
                "document-manager"
              ]
            },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add application data to resources (database schema, collections, workflows)"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o document-manager-api .",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "verify-models",
          "run": "curl -sf http://localhost:${RESOURCE_PORTS[ollama]}/api/tags | grep -E '(llama3.2|nomic-embed-text)' || echo 'Pulling required models...' && curl -X POST http://localhost:${RESOURCE_PORTS[ollama]}/api/pull -d '{\"name\": \"llama3.2\"}' & curl -X POST http://localhost:${RESOURCE_PORTS[ollama]}/api/pull -d '{\"name\": \"nomic-embed-text\"}' &",
          "description": "Verify and pull required AI models"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Document Manager initialized\\n  Web Interface: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${API_PORT}\\n  Database: postgresql://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/document_manager\\n  Vector DB: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  Redis: redis://localhost:${RESOURCE_PORTS[redis]}\\n  CLI: document-manager --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start document manager with coordination API and monitoring",
      "steps": [
         {
           "name": "start-api",
           "run": "cd api && POSTGRES_URL=\"postgresql://vrooli:lUq9qvemypKpuEeXCV6Vnxak1@localhost:5433/document_manager?sslmode=disable\" QDRANT_URL=\"http://localhost:6333\" OLLAMA_URL=\"http://localhost:11434\" REDIS_URL=\"redis://localhost:6379\" N8N_URL=\"http://localhost:5678\" ./document-manager-api",
           "description": "Start Go API server in background",
           "background": true,
           "condition": {
             "file_exists": "api/document-manager-api"
           }
         },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
        {
          "name": "configure-redis-notifications",
          "run": "redis-cli -p ${RESOURCE_PORTS[redis]} CONFIG SET notify-keyspace-events Ex > /dev/null 2>&1 || echo 'Redis keyspace notifications configured'",
          "description": "Configure Redis for pub/sub notifications"
        },
         {
           "name": "show-urls",
           "run": "echo 'ðŸš€ Document Manager running:\\n  Web Interface: http://localhost:$UI_PORT\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Coordination API: http://localhost:$API_PORT\\n  Vector search: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  CLI: document-manager --help'",
           "description": "Display service access URLs"
         }
      ]
    },
    "test": {
      "description": "Test document manager API, integrations, and workflows",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-database-connection",
          "run": "curl -sf http://localhost:$API_PORT/api/system/db-status",
          "description": "Test database connectivity"
        },
        {
          "name": "test-vector-db-connection",
          "run": "curl -sf http://localhost:$API_PORT/api/system/vector-status",
          "description": "Test vector database connectivity"
        },
        {
          "name": "test-ai-integration",
          "run": "curl -sf http://localhost:$API_PORT/api/system/ai-status",
          "description": "Test AI model integration"
        },
        {
          "name": "test-application-endpoints",
          "run": "curl -sf http://localhost:$API_PORT/api/applications && curl -sf http://localhost:$API_PORT/api/agents && curl -sf http://localhost:$API_PORT/api/queue",
          "description": "Test main API endpoints"
        },
        {
          "name": "test-ui-health",
          "run": "curl -sf http://localhost:$UI_PORT/ui-health",
          "description": "Test UI server health endpoint",
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats document-manager.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/document-manager.bats"
          }
        },
        {
          "name": "run-integration-tests",
          "run": "bash test/integration-test.sh",
          "description": "Run comprehensive integration tests",
          "condition": {
            "file_exists": "test/integration-test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"document-manager-api\" || true; sleep 1; pkill -9 -f \"document-manager-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/document-manager.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/document-manager.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
