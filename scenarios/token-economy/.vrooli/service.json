{
  "service": {
    "name": "token-economy"
  },
  "version": "1.0.0",
  "description": "Universal token economy for scenario rewards and achievements",
  "category": "platform",
  "author": "Vrooli AI",
  "license": "MIT",
  "visibility": "public",
  "tags": [
    "tokens",
    "economy",
    "rewards",
    "achievements",
    "wallet",
    "nft",
    "gamification"
  ],
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Token economy API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Token economy UI port",
      "range": "35000-39999"
    }
  },
  "capabilities": [
    "token-minting",
    "token-transfer",
    "wallet-management",
    "achievement-nft",
    "exchange-rates",
    "multi-tenancy",
    "parent-controls"
  ],
  "dependencies": {
    "scenarios": [
      "scenario-authenticator"
    ],
    "resources": {
      "required": [
        {
          "name": "postgres",
          "version": ">=15.0",
          "config": {
            "database": "token_economy",
            "schema": "public",
            "extensions": [
              "uuid-ossp",
              "pgcrypto"
            ]
          }
        },
        {
          "name": "redis",
          "version": ">=7.0",
          "config": {
            "maxmemory": "256mb",
            "maxmemory-policy": "allkeys-lru",
            "persistence": true
          }
        }
      ],
      "optional": [
        {
          "name": "qdrant",
          "version": ">=1.0",
          "purpose": "Achievement similarity search"
        },
        {
          "name": "minio",
          "version": ">=2023.0",
          "purpose": "Token metadata and icon storage"
        },
        {
          "name": "ollama",
          "version": ">=0.1",
          "purpose": "AI-powered exchange rate optimization"
        }
      ]
    }
  },
  "api": {
    "enabled": true,
    "port": "${PORT_TOKEN_ECONOMY_API:-11080}",
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": [
        "*"
      ]
    },
    "rateLimit": {
      "enabled": true,
      "requests": 1000,
      "window": "1m"
    },
    "endpoints": {
      "health": "/health",
      "metrics": "/metrics",
      "base": "/api/v1"
    }
  },
  "ui": {
    "enabled": true,
    "port": "${PORT_TOKEN_ECONOMY_UI:-11081}",
    "host": "0.0.0.0",
    "framework": "vanilla-js",
    "style": "modern-fintech",
    "features": [
      "wallet-dashboard",
      "transaction-history",
      "achievement-gallery",
      "exchange-interface",
      "parent-admin-panel"
    ]
  },
  "cli": {
    "enabled": true,
    "binary": "token-economy",
    "installPath": "~/.vrooli/bin/",
    "commands": [
      "wallet-create",
      "balance",
      "mint",
      "transfer",
      "swap",
      "history",
      "achievements",
      "admin-set-rate",
      "admin-stats"
    ]
  },
  "initialization": {
    "storage": {
      "postgres": {
        "schema": "initialization/storage/postgres/schema.sql",
        "seeds": "initialization/storage/postgres/seeds.sql",
        "migrations": "initialization/storage/postgres/migrations/"
      },
      "redis": {
        "config": "initialization/storage/redis/config.json"
      }
    }
  },
  "security": {
    "authentication": {
      "enabled": true,
      "provider": "scenario-authenticator",
      "jwt": {
        "secret": "${JWT_SECRET}",
        "expiry": "24h"
      }
    },
    "encryption": {
      "walletKeys": true,
      "algorithm": "AES-256-GCM"
    },
    "audit": {
      "enabled": true,
      "logLevel": "info",
      "retention": "90d"
    }
  },
  "performance": {
    "cache": {
      "enabled": true,
      "ttl": 60,
      "provider": "redis"
    },
    "database": {
      "poolSize": 20,
      "maxConnections": 100,
      "timeout": 5000
    },
    "targets": {
      "tps": 1000,
      "latency_p95": 100,
      "uptime": 99.9
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "endpoint": "/metrics",
      "prometheus": true
    },
    "logging": {
      "level": "${LOG_LEVEL:-info}",
      "format": "json",
      "destination": "stdout"
    },
    "alerts": {
      "enabled": false,
      "webhook": "${ALERT_WEBHOOK_URL}"
    }
  },
  "deployment": {
    "type": "docker",
    "replicas": {
      "api": 2,
      "ui": 1
    },
    "resources": {
      "api": {
        "cpu": "500m",
        "memory": "512Mi"
      },
      "ui": {
        "cpu": "200m",
        "memory": "256Mi"
      }
    },
    "healthCheck": {
      "path": "/health",
      "interval": 30,
      "timeout": 10,
      "retries": 3
    }
  },
  "revenue": {
    "model": "subscription",
    "tiers": [
      {
        "name": "family",
        "price": 10,
        "currency": "USD",
        "period": "month",
        "features": [
          "5 users",
          "10 token types",
          "1000 transactions/month"
        ]
      },
      {
        "name": "business",
        "price": 50,
        "currency": "USD",
        "period": "month",
        "features": [
          "50 users",
          "100 token types",
          "unlimited transactions"
        ]
      },
      {
        "name": "enterprise",
        "price": "custom",
        "features": [
          "unlimited users",
          "unlimited tokens",
          "SLA support",
          "custom features"
        ]
      }
    ],
    "trial": {
      "enabled": true,
      "duration": 30,
      "unit": "days"
    }
  },
  "metadata": {
    "created": "2025-09-07",
    "updated": "2025-09-07",
    "status": "development",
    "priority": "high",
    "impact": "platform-wide",
    "documentation": {
      "prd": "PRD.md",
      "readme": "README.md",
      "api": "docs/api.md",
      "integration": "docs/integration.md"
    }
  },
  "lifecycle": {
    "setup": {
      "description": "Initialize token-economy services",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "token-economy-api"
            ]
          },
          {
            "type": "cli",
            "targets": [
              "token-economy"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "build-api",
          "run": "cd api && go build -o token-economy-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command"
        }
      ]
    },
    "develop": {
      "description": "Start token-economy services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./token-economy-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/token-economy-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Token Economy running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: token-economy --help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop token-economy services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"token-economy-api\" || true; sleep 1; pkill -9 -f \"token-economy-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/token-economy.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/token-economy.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "health": {
      "description": "Token Economy health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "version": "2.0.0"
  }
}
