{
  "service": {
    "name": "token-economy",
    "displayName": "Token Economy",
    "parent": "vrooli",
    "type": "scenario",
    "category": "platform",
    "tags": [],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/token-economy"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    },
    "description": "Universal token economy for scenario rewards and achievements",
    "version": "1.0.0"
  },
  "version": "1.0.0",
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Token economy API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Token economy UI port",
      "range": "35000-39999"
    }
  },
  "dependencies": {
    "scenarios": {
      "scenario-authenticator": {
        "required": true,
        "version": "1.0.0",
        "versionRange": ">=0.0.0"
      }
    },
    "resources": {
      "postgres": {
        "version": ">=15.0",
        "config": {
          "database": "token_economy",
          "schema": "public",
          "extensions": [
            "uuid-ossp",
            "pgcrypto"
          ]
        },
        "required": true,
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seeds.sql",
            "type": "config"
          },
          {
            "file": "initialization/storage/postgres/migrations/",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "version": ">=7.0",
        "config": {
          "maxmemory": "256mb",
          "maxmemory-policy": "allkeys-lru",
          "persistence": true
        },
        "required": true,
        "initialization": [
          {
            "file": "initialization/storage/redis/config.json",
            "type": "config"
          }
        ]
      },
      "qdrant": {
        "version": ">=1.0",
        "purpose": "Achievement similarity search",
        "required": false
      },
      "minio": {
        "version": ">=2023.0",
        "purpose": "Token metadata and icon storage",
        "required": false
      },
      "ollama": {
        "version": ">=0.1",
        "purpose": "AI-powered exchange rate optimization",
        "required": false
      }
    }
  },
  "lifecycle": {
    "setup": {
      "description": "Initialize token-economy services",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/token-economy-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "token-economy",
            "targets": [
              "token-economy"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command"
        },
        {
          "name": "build-api",
          "run": "cd api && go build -o token-economy-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Token Economy ready:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: token-economy --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start token-economy services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./token-economy-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/token-economy-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Token Economy running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: token-economy --help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop token-economy services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"token-economy-api\" || true; sleep 1; pkill -9 -f \"token-economy-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/token-economy.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/token-economy.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "health": {
      "description": "Token Economy health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "version": "2.0.0",
    "test": {
      "description": "Comprehensive phased testing for token-economy",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute token-economy --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    }
  },
  "$schema": "../../../.vrooli/schemas/service.schema.json"
}