{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "palette-gen",
    "displayName": "Palette Gen",
    "description": "AI-powered color palette generator with harmony analysis and accessibility checking",
    "version": "1.0.0",
    "tags": [
      "creative-tool",
      "design",
      "color-palette",
      "design-tool",
      "accessibility",
      "wcag",
      "color-theory",
      "ui-design",
      "branding",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "redis-cache",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "26250-26499",
      "fallback": "auto",
      "description": "Main API port for palette generation"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "33500-33749",
      "fallback": "auto",
      "description": "UI server port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/palette-generator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/color-harmony-analyzer.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/accessibility-checker.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2:3b"
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Caching frequently requested palettes and user sessions"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Palette Gen",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/palette-gen-api"
            ]
          },
          {
            "type": "cli",
            "command": "palette-gen"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x palette-gen && cp palette-gen ~/.local/bin/",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o palette-gen-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo -e 'ðŸŽ¨ Palette Gen initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: palette-gen --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Palette Gen services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./palette-gen-api &",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/palette-gen-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT node server.js &",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null && curl -sf http://localhost:$UI_PORT > /dev/null",
          "description": "Wait for services to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo -e 'ðŸŽ¨ Palette Gen running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}\\n  CLI: palette-gen --help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Palette Gen services",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation"
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-palette-generation",
          "run": "echo '{\"theme\":\"ocean\",\"style\":\"vibrant\",\"num_colors\":5}' | curl -sf -X POST http://localhost:$SERVICE_PORT/generate -H 'Content-Type: application/json' -d @-",
          "description": "Test palette generation endpoint"
        },
        {
          "name": "test-ui-accessibility",
          "run": "curl -sf http://localhost:$UI_PORT | grep -q 'Palette Gen'",
          "description": "Test UI server is accessible"
        }
      ]
    },
    "stop": {
      "description": "Stop Palette Gen services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'palette-gen-api' || true",
          "description": "Stop Go API server"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Palette Gen services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
