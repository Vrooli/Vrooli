{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "palette-gen",
    "displayName": "Palette Gen",
    "description": "AI-powered color palette generator with harmony analysis and accessibility checking",
    "version": "1.0.0",
    "tags": [
      "creative-tool",
      "design",
      "color-palette",
      "design-tool",
      "accessibility",
      "wcag",
      "color-theory",
      "ui-design",
      "branding",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "redis-cache",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Main API port for palette generation",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "UI server port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/palette-generator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/color-harmony-analyzer.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/accessibility-checker.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2:3b"
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Caching frequently requested palettes and user sessions"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Palette Generator health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Palette Gen",
       "condition": {
         "checks": [
           {
             "type": "binaries",
             "targets": [
               "palette-gen-api"
             ]
           },
           {
             "type": "cli",
             "targets": [
               "palette-gen"
             ]
           },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x palette-gen && cp palette-gen ~/.local/bin/",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o palette-gen-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo -e 'ðŸŽ¨ Palette Gen initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: palette-gen --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Palette Gen services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./palette-gen-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/palette-gen-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
         {
           "name": "show-urls",
           "run": "echo -e 'ðŸŽ¨ Palette Gen running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: palette-gen --help'",
           "description": "Display running service URLs"
         }
      ]
    },
    "test": {
      "description": "Test Palette Gen services",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation"
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-palette-generation",
          "run": "echo '{\"theme\":\"ocean\",\"style\":\"vibrant\",\"num_colors\":5}' | curl -sf -X POST http://localhost:$API_PORT/generate -H 'Content-Type: application/json' -d @-",
          "description": "Test palette generation endpoint"
        },
        {
          "name": "test-ui-accessibility",
          "run": "curl -sf http://localhost:$UI_PORT | grep -q 'Palette Gen'",
          "description": "Test UI server is accessible"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"palette-gen-api\" || true; sleep 1; pkill -9 -f \"palette-gen-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/palette-gen.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/palette-gen.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
