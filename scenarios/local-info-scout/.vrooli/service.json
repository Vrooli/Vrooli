{
  "name": "local-info-scout",
  "version": "2.0.0",
  "description": "Local information scout service with Go API",
  "enabled": true,
  "ports": {
    "api": {
      "port": 28050,
      "env_var": "API_PORT",
      "fallback": "auto"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Local Info Scout health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Local Info Scout",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/local-info-scout-api"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh . || echo \"Resource population skipped\"",
          "description": "Add app data to resources"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o local-info-scout-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ” Local Info Scout initialized\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./local-info-scout-api",
          "description": "Start API server",
          "background": true
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  API: http://localhost:${API_PORT}\\n  UI: http://localhost:${UI_PORT}\\n  CLI: local-info-scout --help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "timeout": 60,
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "source-pm",
          "run": "source \"${APP_ROOT}/scripts/lib/process-manager.sh\" 2>/dev/null || true",
          "description": "Source process manager"
        },
        {
          "name": "stop-api",
          "run": "pm::stop \"vrooli.develop.local-info-scout.start-api\" 2>/dev/null || pkill -f \"local-info-scout-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pm::stop \"vrooli.develop.local-info-scout.start-ui\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "resources": {
    "redis": {
      "required": false
    },
    "postgres": {
      "required": false
    },
    "searxng": {
      "required": false
    }
  }
}
