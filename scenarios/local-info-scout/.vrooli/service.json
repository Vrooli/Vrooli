{
  "name": "local-info-scout",
  "version": "2.0.0",
  "description": "Local information scout service with Go API",
  "enabled": true,
  "ports": {
    "api": {
      "port": 28050,
      "env_var": "API_PORT",
      "fallback": "auto"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Local Info Scout health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Local Info Scout",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/local-info-scout-api"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh . || echo \"Resource population skipped\"",
          "description": "Add app data to resources"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o local-info-scout-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'üîç Local Info Scout initialized\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "steps": [
        {
          "name": "start_api",
          "run": "cd api && ./local-info-scout-api",
          "description": "Start API server",
          "background": true
        },
        {
          "name": "wait_for_api",
          "run": "timeout 10 bash -c 'until curl -sf http://localhost:$API_PORT/health; do sleep 1; done' || echo 'API health check timeout'",
          "description": "Wait for API to be ready"
        }
      ]
    },
    "timeout": 60
  },
  "resources": {
    "redis": {
      "required": false
    },
    "postgres": {
      "required": false
    },
    "searxng": {
      "required": false
    }
  }
}