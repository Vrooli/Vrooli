{
   "$schema": "../../../../.vrooli/schemas/service.schema.json",
   "version": "1.0.0",
   "service": {
     "name": "local-info-scout",
     "displayName": "Local Info Scout",
     "description": "Local information scout service with Go API",
     "version": "1.0.0",
     "tags": [
       "go-api"
     ]
   },
   "ports": {
     "api": {
       "env_var": "API_PORT",
       "description": "Local Info Scout API port",
       "range": "15000-19999",
       "default": 15050
     }
   },
   "resources": {
     "redis": {
       "type": "redis",
       "enabled": false,
       "required": false
     },
     "postgres": {
       "type": "postgres",
       "enabled": false,
       "required": false
     },
     "searxng": {
       "type": "searxng",
       "enabled": false,
       "required": false
     }
   },
   "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Local Info Scout health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Local Info Scout",
       "condition": {
         "checks": [
           {
             "type": "binaries",
             "targets": [
               "local-info-scout-api"
             ]
           },
           {
             "type": "cli",
             "targets": [
               "local-info-scout"
             ]
           }
         ]
       },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh . || echo \"Resource population skipped\"",
          "description": "Add app data to resources"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o local-info-scout-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ” Local Info Scout initialized\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "steps": [
           {
             "name": "start-api",
             "run": "cd api && export API_PORT=${API_PORT:-15050} && ./local-info-scout-api",
             "description": "Start Go API server in background",
             "background": true,
             "condition": {
               "file_exists": "api/local-info-scout-api"
             }
           },
         {
           "name": "show-urls",
           "run": "echo 'ðŸš€ Local Info Scout running:\\n  API: http://localhost:${API_PORT}\\n  CLI: local-info-scout --help'",
           "description": "Display service URLs and usage information"
         }
      ]
    },
    "test": {
      "description": "Run comprehensive test suite",
      "steps": [
        {
          "name": "run-tests",
          "run": "cd test && ./run-tests.sh",
          "description": "Execute all test phases"
        }
      ]
    },
    "timeout": 60,
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"local-info-scout-api\" || true; sleep 1; pkill -9 -f \"local-info-scout-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "# WARNING: Could not determine UI technology, using generic pattern\npkill -f \"scenarios/local-info-scout/ui\" || true; sleep 1; pkill -9 -f \"scenarios/local-info-scout/ui\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
     }
   }
 }
