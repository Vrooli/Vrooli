{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "local-info-scout",
    "displayName": "Local Info Scout",
    "description": "Local information scout service with Go API",
    "version": "1.0.0",
    "tags": [
      "go-api"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/local-info-scout"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Local Info Scout API port",
      "range": "15000-19999",
      "default": 15050
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Local Info Scout health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Local Info Scout",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/local-info-scout-api"
            ]
          },
          {
            "type": "cli",
            "command": "local-info-scout",
            "targets": [
              "local-info-scout"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh . || echo \"Resource population skipped\"",
          "description": "Add app data to resources"
        },
        {
          "name": "init-postgres",
          "run": "if [ -f initialization/postgres/schema.sql ]; then cat initialization/postgres/schema.sql | docker exec -i vrooli-postgres-main psql -U ${POSTGRES_USER:-vrooli} -d ${POSTGRES_DB:-vrooli} 2>&1 | grep -v 'already exists' || true; fi",
          "description": "Initialize PostgreSQL schema"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o local-info-scout-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "build-cli",
          "run": "cd cli && go build -o local-info-scout main.go",
          "description": "Build CLI binary"
        },
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install Local Info Scout CLI",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd0d Local Info Scout initialized\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Local Info Scout services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && export API_PORT=${API_PORT:-15050} REDIS_PORT=${REDIS_PORT:-6380} POSTGRES_PORT=${POSTGRES_PORT:-5433} POSTGRES_USER=${POSTGRES_USER:-vrooli} POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-} POSTGRES_DB=${POSTGRES_DB:-vrooli} && ./local-info-scout-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/local-info-scout-api"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Local Info Scout running:\\n  API: http://localhost:${API_PORT}\\n  CLI: local-info-scout --help'",
          "description": "Display service URLs and usage information"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for local-info-scout",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "timeout": 60,
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"local-info-scout-api\" || true; sleep 1; pkill -9 -f \"local-info-scout-api\" 2>/dev/null || true",
          "description": "Stop API process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": false
      },
      "searxng": {
        "type": "searxng",
        "enabled": false,
        "required": false
      }
    }
  }
}
