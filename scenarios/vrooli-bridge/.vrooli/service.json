{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "vrooli-bridge",
    "displayName": "Vrooli Bridge",
    "description": "Enables external projects to leverage Vrooli's intelligence by managing documentation injection and integration tracking",
    "version": "1.0.0",
    "tags": [
      "vrooli-enhancement",
      "project-management",
      "documentation",
      "integration",
      "cross-project",
      "filesystem",
      "go-api",
      "postgres-storage",
      "vanilla-ui"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Vrooli Bridge API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Project management dashboard",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Vrooli Bridge health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 60000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Vrooli Bridge",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/vrooli-bridge-api"
            ]
          },
          {
            "type": "cli",
            "command": "vrooli-bridge",
            "targets": [
              "vrooli-bridge"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o vrooli-bridge-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build static UI bundle from source"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Vrooli Bridge initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: vrooli-bridge --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Vrooli Bridge with API server and UI",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./vrooli-bridge-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/vrooli-bridge-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Serve production UI bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: vrooli-bridge --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Vrooli Bridge API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:${API_PORT}/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-projects-endpoint",
          "run": "curl -sf http://localhost:${API_PORT}/api/v1/projects",
          "description": "Test projects endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats vrooli-bridge.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/vrooli-bridge.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"vrooli-bridge-api\" || true; sleep 1; pkill -9 -f \"vrooli-bridge-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/vrooli-bridge/ui/server.py\" || true; sleep 1; pkill -9 -f \"scenarios/vrooli-bridge/ui/server.py\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "project registry and integration metadata",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": false,
        "required": false,
        "purpose": "cache project scanning results for faster UI updates"
      }
    }
  }
}
