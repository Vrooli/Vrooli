{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "product-manager-agent",
    "displayName": "Product Manager Agent",
    "description": "Product manager AI agent with Go API and React UI",
    "version": "1.0.0",
    "tags": [
      "product-management",
      "ai-agent",
      "go-api",
      "react-ui",
      "postgres-storage",
      "redis-cache",
      "ollama-ai",
      "qdrant-vectors"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/product-manager-agent"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Product Manager Agent health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Product Manager Agent",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/product-manager-agent-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "product-manager-agent",
            "targets": [
              "product-manager-agent"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh . || echo \"Resource population skipped\"",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "chmod +x cli/product-manager && mkdir -p ~/.local/bin && ln -sf $(pwd)/cli/product-manager ~/.local/bin/product-manager-agent",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o product-manager-agent-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install --no-fund --no-audit",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83c\udfaf Product Manager Agent initialized\\n  API: http://localhost:${API_PORT}\\n  UI: http://localhost:${UI_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./product-manager-agent-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/product-manager-agent-api"
          }
        },
        {
          "name": "wait_for_api",
          "run": "timeout 30 bash -c 'until curl -sf http://localhost:$API_PORT/health; do sleep 1; done' || echo 'API health check timeout'",
          "description": "Wait for API to be ready"
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83c\udfaf Product Manager Agent running\\n  API: http://localhost:${API_PORT}\\n  UI: http://localhost:${UI_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"product-manager-agent-api\" || true; sleep 1; pkill -9 -f \"product-manager-agent-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/product-manager-agent.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/product-manager-agent.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for product-manager-agent",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute product-manager-agent --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache analysis results and session management"
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store features, roadmaps, sprints, and analysis results"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2"
        ],
        "purpose": "AI-powered analysis for market research, competitor analysis, and decision support"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": false,
        "required": false,
        "purpose": "Semantic search for features and feedback (optional)"
      }
    }
  }
}