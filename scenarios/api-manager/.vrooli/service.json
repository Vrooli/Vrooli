{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "api-manager",
    "displayName": "API Manager",
    "description": "Comprehensive API auditing and improvement system for discovering, analyzing, and enhancing APIs across the Vrooli ecosystem",
    "version": "1.0.0",
    "tags": [
      "api-management",
      "security-audit",
      "performance-monitoring",
      "vulnerability-scanning",
      "api-discovery",
      "standardization",
      "intelligence-amplification",
      "vrooli-core"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com"
      }
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
            "description": "API Manager REST API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
            "description": "API Manager dashboard UI port", 
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "description": "Stores API inventory, vulnerability data, scan history, and performance metrics",
      "schema": "api_manager"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "description": "Security pattern analysis, vulnerability detection, and fix generation"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "description": "API pattern embeddings, vulnerability signatures, and similarity search"
    }
  },
    "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "API Manager health check configuration",
      "endpoints": {
        "api": "/api/v1/health",
        "ui": "/",
        "metrics": "/api/v1/metrics"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/api/v1/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize API Manager",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/api-manager-api",
              "cli/api-manager"
            ]
          },
          {
            "type": "dependencies",
            "targets": [
              "ui/node_modules"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o api-manager-api .",
          "description": "Build API server binary"
        },
        {
          "name": "build-cli",
          "run": "cd cli && go build -o api-manager .",
          "description": "Build CLI tool"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install --prefer-offline --no-audit --no-fund --loglevel error",
          "description": "Install UI dependencies"
        },
        {
          "name": "init-database",
          "run": "resource-postgres exec --database ${POSTGRES_DB} --file initialization/storage/postgres/schema.sql",
          "description": "Initialize database schema",
          "condition": {
            "file_exists": "initialization/storage/postgres/schema.sql"
          }
        }
      ]
    },
    "develop": {
      "description": "Start API Manager services in development mode",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && VROOLI_LIFECYCLE_MANAGED=true ./api-manager-api",
          "background": true,
          "description": "Start API server"
        },
        {
          "name": "wait-for-api",
          "run": "sleep 3",
          "description": "Wait for API to initialize"
        },
        {
          "name": "start-ui",
          "run": "cd ui && UI_PORT=${UI_PORT} PORT=${UI_PORT} API_MANAGER_URL=http://localhost:${API_PORT} npm run dev",
          "background": true,
          "description": "Start Vite dev server"
        },
        {
          "name": "show-status",
          "run": "echo \"âœ… API Manager is running:\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}/api/v1\\n  Health: http://localhost:${API_PORT}/api/v1/health\""
        }
      ]
    },
    "test": {
      "description": "Run API Manager test suite",
      "steps": [
        {
          "name": "test-api",
          "run": "cd api && go test -v ./...",
          "description": "Run API tests"
        },
        {
          "name": "test-cli",
          "run": "cd cli && go test -v ./...",
          "description": "Run CLI tests"
        },
        {
          "name": "test-ui",
          "run": "cd ui && npm test",
          "description": "Run UI tests",
          "optional": true
        }
      ]
    },
    "stop": {
      "description": "Stop API Manager services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"api-manager-api\" || true; sleep 1; pkill -9 -f \"api-manager-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"vite.*api-manager\" || true; sleep 1; pkill -9 -f \"vite.*api-manager\" 2>/dev/null || true",
          "description": "Stop Vite dev server"
        }
      ]
    },
    "shutdown": {
      "description": "Graceful shutdown of API Manager",
      "steps": [
        {
          "name": "save-state",
          "run": "curl -X POST http://localhost:${API_PORT}/api/v1/shutdown 2>/dev/null || true",
          "description": "Save current state before shutdown"
        },
        {
          "name": "stop-services",
          "run": "pkill -SIGTERM -f api-manager-api || true; pkill -SIGTERM -f 'vite.*api-manager' || true",
          "description": "Send termination signals"
        },
        {
          "name": "wait-for-cleanup",
          "run": "sleep 2",
          "description": "Wait for graceful shutdown"
        }
      ]
    }
  }
}
