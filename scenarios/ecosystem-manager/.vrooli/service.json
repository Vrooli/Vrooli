{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "ecosystem-manager",
    "displayName": "Ecosystem Manager",
    "description": "Unified system for generating and improving resources and scenarios",
    "version": "1.0.0",
    "tags": [
      "management",
      "resource-generator",
      "scenario-generator",
      "ai-orchestration",
      "metadata",
      "maintenance",
      "self-improvement"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/ecosystem-manager"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Ecosystem Manager API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 36110,
      "description": "Ecosystem Manager UI port"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Ecosystem Manager health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 10000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Ecosystem Manager",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/ecosystem-manager-api"
            ]
          },
          {
            "type": "cli",
            "command": "ecosystem-manager"
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "directories",
            "targets": [
              "queue/pending",
              "queue/in-progress",
              "queue/completed",
              "queue/failed",
              "data",
              "logs"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "create-directories",
          "run": "mkdir -p queue/{pending,in-progress,completed,failed,templates} data logs",
          "description": "Create required directory structure"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && if [ ! -f go.sum ]; then go mod tidy; fi && go build -o ecosystem-manager-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && if [ -f package.json ]; then npm install --silent; fi",
          "description": "Install UI dependencies if package.json exists",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI"
        },
        {
          "name": "validate-prompts",
          "run": "python3 -c \"import yaml; yaml.safe_load(open('prompts/sections.yaml'))\" || echo 'Warning: Prompts configuration may have YAML errors'",
          "description": "Validate prompts configuration",
          "condition": {
            "file_exists": "prompts/sections.yaml"
          }
        },
        {
          "name": "set-permissions",
          "run": "chmod +x api/ecosystem-manager-api || true",
          "description": "Set executable permissions"
        },
        {
          "name": "show-urls",
          "run": "echo \"ðŸŽ‰ Ecosystem Manager is ready at http://localhost:${API_PORT}\" && echo \"ðŸ“Š Dashboard: http://localhost:${UI_PORT}\" && echo \"ðŸ”Œ API Base: http://localhost:${API_PORT}/api\"",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Ecosystem Manager services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./ecosystem-manager-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/ecosystem-manager-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Serve production UI bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"ðŸŽ‰ Ecosystem Manager is running\" && echo \"ðŸ“Š Dashboard: http://localhost:${UI_PORT}\" && echo \"ðŸ”Œ API: http://localhost:${API_PORT}/api\"",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for ecosystem-manager",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop Ecosystem Manager services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"ecosystem-manager-api\" || true; sleep 1; pkill -9 -f \"ecosystem-manager-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/ecosystem-manager.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/ecosystem-manager.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        },
        {
          "name": "cleanup-stale-tasks",
          "run": "find queue/in-progress -name \"*.yaml\" -mmin +120 2>/dev/null | xargs -I {} mv {} queue/pending/ || true",
          "description": "Move stale in-progress tasks back to pending"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": true,
        "description": "AI for resource and scenario generation"
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Task queue and metadata storage"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "description": "Semantic search and similarity matching"
      },
      "redis": {
        "type": "redis",
        "enabled": false,
        "required": false,
        "description": "Optional caching layer"
      },
      "openrouter": {
        "type": "openrouter",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (resource_cli)"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      }
    },
    "scenarios": {}
  }
}