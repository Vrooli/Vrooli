{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "ecosystem-manager",
    "displayName": "Ecosystem Manager",
    "description": "Unified system for generating and improving resources and scenarios",
    "version": "1.0.0",
    "tags": [
      "management",
      "resource-generator",
      "scenario-generator",
      "ai-orchestration",
      "metadata",
      "maintenance",
      "self-improvement"
    ]
  },
  "maintenance": {
    "canDeactivate": true,
    "defaultState": "inactive",
    "category": "ecosystem-management",
    "priority": "high",
    "description": "Manages resource and scenario generation/improvement tasks",
    "safeToDeactivate": true,
    "resourceUsage": {
      "cpu": "medium",
      "memory": "medium",
      "disk": "low"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Ecosystem Manager API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 36110,
      "description": "Ecosystem Manager UI port"
    }
  },
  "resources": {
    "claude-code": {
      "type": "claude-code",
      "enabled": true,
      "required": true,
      "description": "AI for resource and scenario generation"
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "description": "Task queue and metadata storage"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "description": "Semantic search and similarity matching"
    },
    "redis": {
      "type": "redis",
      "enabled": false,
      "required": false,
      "description": "Optional caching layer"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Ecosystem Manager health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 10000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Ecosystem Manager",
      "condition": {
        "checks": [
            {
              "type": "binaries",
              "targets": [
                "api/ecosystem-manager-api"
              ]
            },
            {
              "type": "cli",
              "command": "ecosystem-manager"
            },
            {
              "type": "ui-bundle",
              "bundle_path": "ui/dist/index.html",
              "source_dir": "ui/src"
            },
          {
            "type": "directories",
            "targets": [
              "queue/pending",
              "queue/in-progress",
              "queue/completed",
              "queue/failed",
              "data",
              "logs"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "create-directories",
          "run": "mkdir -p queue/{pending,in-progress,completed,failed,templates} data logs",
          "description": "Create required directory structure"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && if [ ! -f go.sum ]; then go mod tidy; fi && go build -o ecosystem-manager-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && if [ -f package.json ]; then npm install --silent; fi",
          "description": "Install UI dependencies if package.json exists",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI"
        },
        {
          "name": "validate-prompts",
          "run": "python3 -c \"import yaml; yaml.safe_load(open('prompts/sections.yaml'))\" || echo 'Warning: Prompts configuration may have YAML errors'",
          "description": "Validate prompts configuration",
          "condition": {
            "file_exists": "prompts/sections.yaml"
          }
        },
        {
          "name": "set-permissions",
          "run": "chmod +x api/ecosystem-manager-api || true",
          "description": "Set executable permissions"
        },
        {
          "name": "show-urls",
          "run": "echo \"ðŸŽ‰ Ecosystem Manager is ready at http://localhost:${API_PORT}\" && echo \"ðŸ“Š Dashboard: http://localhost:${UI_PORT}\" && echo \"ðŸ”Œ API Base: http://localhost:${API_PORT}/api\"",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Ecosystem Manager services",
      "steps": [
         {
           "name": "start-api",
           "run": "cd api && ./ecosystem-manager-api",
           "description": "Start Go API server in background",
           "background": true,
           "condition": {
             "file_exists": "api/ecosystem-manager-api"
           }
         },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Serve production UI bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
         {
           "name": "show-urls",
           "run": "echo \"ðŸŽ‰ Ecosystem Manager is running\" && echo \"ðŸ“Š Dashboard: http://localhost:${UI_PORT}\" && echo \"ðŸ”Œ API: http://localhost:${API_PORT}/api\"",
           "description": "Display service URLs"
         }
      ]
    },
    "test": {
      "description": "Run Ecosystem Manager tests",
      "steps": [
        {
          "name": "api-tests",
          "run": "cd api && go test ./...",
          "description": "Run Go API tests"
        }
      ]
    },
    "stop": {
      "description": "Stop Ecosystem Manager services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"ecosystem-manager-api\" || true; sleep 1; pkill -9 -f \"ecosystem-manager-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui", 
          "run": "pkill -f \"scenarios/ecosystem-manager.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/ecosystem-manager.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        },
        {
          "name": "cleanup-stale-tasks",
          "run": "find queue/in-progress -name \"*.yaml\" -mmin +120 2>/dev/null | xargs -I {} mv {} queue/pending/ || true",
          "description": "Move stale in-progress tasks back to pending"
        }
      ]
    }
  },
  "api": {
    "base_url": "http://localhost:${API_PORT}/api",
    "endpoints": [
      {
        "path": "/tasks",
        "method": "GET",
        "description": "Get tasks with optional filters (status, type, operation, category)"
      },
      {
        "path": "/tasks",
        "method": "POST",
        "description": "Create new task"
      },
      {
        "path": "/tasks/{id}",
        "method": "GET",
        "description": "Get specific task"
      },
      {
        "path": "/tasks/{id}/status",
        "method": "PUT",
        "description": "Update task status and progress"
      },
      {
        "path": "/tasks/{id}/prompt",
        "method": "GET",
        "description": "Get prompt configuration for task"
      },
      {
        "path": "/operations",
        "method": "GET",
        "description": "Get available operation types"
      },
      {
        "path": "/maintenance/state",
        "method": "POST",
        "description": "Update maintenance state (active/inactive)"
      }
    ]
  },
  "ui": {
    "enabled": true,
    "path": "/",
    "description": "Trello-like task management interface"
  },
  "cli": {
    "command": "ecosystem-manager",
    "install_script": "./cli/install.sh"
  },
  "metadata": {
    "operations": {
      "resource-generator": {
        "description": "Generate new resources with v2.0 compliance",
        "effort_estimate": "4h",
        "deliverables": [
          "PRD.md",
          "Directory structure",
          "Health checks",
          "CLI integration"
        ]
      },
      "resource-improver": {
        "description": "Improve existing resources for compliance and reliability",
        "effort_estimate": "2h",
        "deliverables": [
          "Updated PRD.md",
          "Enhanced health checks",
          "Better CLI"
        ]
      },
      "scenario-generator": {
        "description": "Generate new scenarios with comprehensive PRDs",
        "effort_estimate": "6h",
        "deliverables": [
          "PRD.md",
          "API implementation",
          "UI",
          "Tests",
          "Documentation"
        ]
      },
      "scenario-improver": {
        "description": "Improve existing scenarios for PRD completion",
        "effort_estimate": "3h",
        "deliverables": [
          "PRD progression",
          "Feature enhancements",
          "Better UX"
        ]
      }
    },
    "categories": {
      "resource_categories": [
        "ai-ml",
        "storage",
        "automation",
        "monitoring",
        "communication",
        "security"
      ],
      "scenario_categories": [
        "productivity",
        "ai-tools",
        "business",
        "personal",
        "automation",
        "entertainment"
      ]
    },
    "queue": {
      "statuses": [
        "pending",
        "in-progress",
        "completed",
        "failed"
      ],
      "max_concurrent": 3,
      "retry_attempts": 2,
      "cooldown_minutes": 15
    },
    "monitoring": {
      "metrics": [
        "tasks_created",
        "tasks_completed",
        "success_rate",
        "average_completion_time",
        "prd_completion_percentage"
      ]
    }
  }
}
