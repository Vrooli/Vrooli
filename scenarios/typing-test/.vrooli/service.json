{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "typing-test",
    "displayName": "Typing Test",
    "description": "Interactive typing speed and accuracy test with AI-powered personalized coaching",
    "version": "1.0.0",
    "tags": [
      "skill-training",
      "productivity",
      "typing",
      "skill-assessment",
      "gamification",
      "ai-coaching",
      "leaderboard",
      "nodejs-ui",
      "go-api",
      "postgres-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Main API port for typing test service",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "UI server port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "models": [
        "llama3.2"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store user progress, typing history, and leaderboard data",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Typing Test health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Typing Test service",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/typing-test-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "typing-test",
            "targets": [
              "typing-test"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o typing-test-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Typing Test initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: typing-test --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Typing Test services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./typing-test-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/typing-test-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Services running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: typing-test --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Typing Test services",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-typing-endpoint",
          "run": "curl -sf -X POST http://localhost:$API_PORT/api/submit-score -H 'Content-Type: application/json' -d '{\\\"name\\\":\\\"test\\\",\\\"wpm\\\":60,\\\"accuracy\\\":95,\\\"score\\\":100,\\\"difficulty\\\":\\\"medium\\\",\\\"mode\\\":\\\"classic\\\"}'",
          "description": "Test typing submission endpoint"
        },
        {
          "name": "test-ui-response",
          "run": "curl -sf http://localhost:$UI_PORT | grep -q 'Typing Test'",
          "description": "Test UI server response"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"typing-test-api\" || true; sleep 1; pkill -9 -f \"typing-test-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/typing-test.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/typing-test.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
