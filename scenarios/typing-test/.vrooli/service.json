{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "typing-test",
    "displayName": "Typing Test",
    "description": "Interactive typing speed and accuracy test with AI-powered personalized coaching",
    "version": "1.0.0",
    "tags": [
      "skill-training",
      "productivity",
      "typing",
      "skill-assessment",
      "gamification",
      "ai-coaching",
      "leaderboard",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 31600,
      "fallback": "auto",
      "description": "Main API port for typing test service"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 37750,
      "fallback": "auto",
      "description": "UI server port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/typing-coach.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/typing-stats-processor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/adaptive-text-generator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/leaderboard-manager.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "models": [
        "llama3.2"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store user progress, typing history, and leaderboard data",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Typing Test health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Typing Test service",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/typing-test-api"
            ]
          },
          {
            "type": "cli",
            "command": "typing-test"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o typing-test-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Typing Test initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: typing-test --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Typing Test services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && ./typing-test-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/typing-test-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "../../scripts/lib/utils/wait-for-service.sh http://localhost:$API_PORT/health 10 2 && ../../scripts/lib/utils/wait-for-service.sh http://localhost:$UI_PORT 10 2",
          "description": "Wait for services to be ready"
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: typing-test --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Typing Test services",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-typing-endpoint",
          "run": "curl -sf -X POST http://localhost:$API_PORT/api/typing-test -H 'Content-Type: application/json' -d '{\\\"text\\\":\\\"test\\\",\\\"wpm\\\":60,\\\"accuracy\\\":95}'",
          "description": "Test typing submission endpoint"
        },
        {
          "name": "test-ui-response",
          "run": "curl -sf http://localhost:$UI_PORT | grep -q 'Typing Test'",
          "description": "Test UI server response"
        }
      ]
    },
    "stop": {
      "description": "Stop Typing Test services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'typing-test-api' || true",
          "description": "Stop Go API server"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Typing Test services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}