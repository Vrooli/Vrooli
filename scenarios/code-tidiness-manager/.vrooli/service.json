{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "code-tidiness-manager",
    "displayName": "Code Tidiness Manager",
    "description": "Automated technical debt detection, cleanup suggestion generation, and codebase maintenance intelligence",
    "version": "1.0.0",
    "tags": [
      "vrooli-enhancement",
      "maintenance",
      "code-quality",
      "technical-debt",
      "cleanup-automation",
      "go-api",
      "native-go-processing",
      "postgres-storage",
      "redis-cache",
      "dashboard-ui"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Code Tidiness Manager API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Cleanup dashboard UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store scan history, cleanup patterns, and learning data",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": false,
      "required": false,
      "purpose": "Cache scan results and temporary analysis data for performance"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": false,
      "purpose": "Vector storage for code similarity detection and duplicate identification"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "purpose": "AI-powered code analysis and suggestion refinement",
      "models": [
        "codellama",
        "mistral"
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Code Tidiness Manager health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "critical": true,
          "timeout": 5000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Code Tidiness Manager",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/code-tidiness-manager-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "code-tidiness-manager",
            "targets": [
              "code-tidiness-manager"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install Code Tidiness Manager CLI",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build the dashboard UI"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database with cleanup rules and patterns"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o code-tidiness-manager-api .",
          "description": "Build Go API server"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83e\uddf9 Code Tidiness Manager initialized\\n  Dashboard: http://localhost:${TIDINESS_UI_PORT}\\n  API: http://localhost:${TIDINESS_API_PORT}\\n  CLI: code-tidiness-manager --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Code Tidiness Manager services with production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./code-tidiness-manager-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/code-tidiness-manager-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.cjs",
          "description": "Start Express server with built React app",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83e\uddf9 Code Tidiness Manager running:\\n  Dashboard: http://localhost:${TIDINESS_UI_PORT}\\n  API: http://localhost:${TIDINESS_API_PORT}\\n  CLI: code-tidiness-manager --help\\n\\n  Run a scan: code-tidiness-manager scan'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Phased scenario testing using shared runner",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute structured scenario test phases"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"tidiness-manager-api\" || true; sleep 1; pkill -9 -f \"tidiness-manager-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/code-tidiness-manager.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/code-tidiness-manager.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "schedule": {
      "description": "Scheduled scanning configuration",
      "jobs": [
        {
          "name": "daily-scan",
          "cron": "0 2 * * *",
          "run": "code-tidiness-manager scan --deep",
          "description": "Daily deep scan at 2 AM"
        },
        {
          "name": "hourly-quick-scan",
          "cron": "0 * * * *",
          "run": "code-tidiness-manager scan --types backup_files,temp_files --quick",
          "description": "Hourly quick scan for obvious issues"
        }
      ]
    }
  }
}
