{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "code-tidiness-manager",
    "displayName": "Code Tidiness Manager",
    "description": "Automated technical debt detection, cleanup suggestion generation, and codebase maintenance intelligence",
    "version": "1.0.0",
    "tags": [
      "vrooli-enhancement",
      "maintenance",
      "code-quality",
      "technical-debt",
      "cleanup-automation",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "dashboard-ui"
    ]
  },
  "ports": {
    "api": {
      "env_var": "CTM_API_PORT",
      "port": 20260,
      "fallback": "auto",
      "description": "Code Tidiness Manager API port"
    },
    "ui": {
      "env_var": "CTM_UI_PORT",
      "port": 20261,
      "fallback": "auto",
      "description": "Cleanup dashboard UI port"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store scan history, cleanup patterns, and learning data",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache scan results and temporary analysis data for performance"
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/n8n/code-scanner.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/cleanup-executor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/pattern-analyzer.json",
          "type": "workflow"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": false,
      "purpose": "Vector storage for code similarity detection and duplicate identification"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "purpose": "AI-powered code analysis and suggestion refinement",
      "models": [
        "codellama",
        "mistral"
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Code Tidiness Manager health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${CTM_API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${CTM_UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "critical": true,
          "timeout": 5000
        },
        {
          "name": "redis_connection",
          "type": "redis",
          "critical": true,
          "timeout": 5000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Code Tidiness Manager",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/code-tidiness-manager-api"
            ]
          },
          {
            "type": "cli",
            "command": "code-tidiness-manager"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-dependencies",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build the dashboard UI"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database with cleanup rules and patterns"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o code-tidiness-manager-api .",
          "description": "Build Go API server"
        },
        {
          "name": "initial-scan",
          "run": "./cli/code-tidiness-manager scan --types backup_files,temp_files --limit 100 || echo 'Initial scan will run after startup'",
          "description": "Run initial limited scan to populate dashboard"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ§¹ Code Tidiness Manager initialized\\n  Dashboard: http://localhost:${CTM_UI_PORT}\\n  API: http://localhost:${CTM_API_PORT}\\n  CLI: code-tidiness-manager --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Code Tidiness Manager services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && ./code-tidiness-manager-api",
          "description": "Start Go API server",
          "background": true,
          "condition": {
            "file_exists": "api/code-tidiness-manager-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && npm run dev",
          "description": "Start UI development server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "wait-for-services",
          "run": "../../scripts/lib/utils/wait-for-service.sh http://localhost:$CTM_API_PORT/health 15 2",
          "description": "Wait for services to be ready"
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸ§¹ Code Tidiness Manager running:\\n  Dashboard: http://localhost:${CTM_UI_PORT}\\n  API: http://localhost:${CTM_API_PORT}\\n  CLI: code-tidiness-manager --help\\n\\n  Run a scan: code-tidiness-manager scan'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Code Tidiness Manager functionality",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go test ./...",
          "description": "Run Go unit tests",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$CTM_API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-scan-endpoint",
          "run": "curl -sf -X POST http://localhost:$CTM_API_PORT/api/v1/tidiness/scan -H 'Content-Type: application/json' -d '{\"paths\": [\"test/\"], \"types\": [\"backup_files\"]}'",
          "description": "Test scan initiation"
        },
        {
          "name": "test-suggestions-endpoint",
          "run": "curl -sf http://localhost:$CTM_API_PORT/api/v1/tidiness/suggestions",
          "description": "Test suggestions retrieval"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats code-tidiness-manager.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/code-tidiness-manager.bats"
          }
        },
        {
          "name": "test-cleanup-detection",
          "run": "bash test/test-cleanup-detection.sh",
          "description": "Test various cleanup pattern detections"
        }
      ]
    },
    "stop": {
      "description": "Stop Code Tidiness Manager services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'code-tidiness-manager-api' || true",
          "description": "Stop Go API server"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'npm run dev.*code-tidiness-manager' || true",
          "description": "Stop UI development server"
        },
        {
          "name": "cleanup-cache",
          "run": "resource-redis del 'ctm:*' || echo 'Cache cleanup skipped'",
          "description": "Clear Redis cache"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Code Tidiness Manager services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    },
    "schedule": {
      "description": "Scheduled scanning configuration",
      "jobs": [
        {
          "name": "daily-scan",
          "cron": "0 2 * * *",
          "run": "code-tidiness-manager scan --deep",
          "description": "Daily deep scan at 2 AM"
        },
        {
          "name": "hourly-quick-scan",
          "cron": "0 * * * *",
          "run": "code-tidiness-manager scan --types backup_files,temp_files --quick",
          "description": "Hourly quick scan for obvious issues"
        }
      ]
    }
  }
}