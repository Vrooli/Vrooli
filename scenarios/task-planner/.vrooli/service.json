{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "task-planner",
    "displayName": "Task Planner",
    "description": "General task planner and scheduler with AI-powered task refinement and implementation",
    "version": "1.0.0",
    "type": "business-application",
    "category": "saas-applications",
    "tags": [
      "task-management",
      "planning",
      "scheduling",
      "ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Task planner API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3000-3999",
      "fallback": "auto",
      "description": "Task dashboard UI port"
    }
  },
  "sharedWorkflows": {
    "n8n": [
      {
        "file": "initialization/n8n/ollama.json",
        "id": "ollama-universal",
        "purpose": "Shared Ollama API interface for all AI interactions"
      }
    ]
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store tasks, plans, and status",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Caching and real-time updates"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Vector database for semantic search of tasks and research"
      }
    },
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/task-parser.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/task-researcher.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/task-implementer.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/status-monitor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/task-suggester.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/task-dashboard.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "nomic-embed-text"
        ]
      }
    },
    "search": {
      "searxng": {
        "type": "searxng",
        "enabled": true,
        "required": false
      }
    },
    "agents": {
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": false
      },
      "agent-s2": {
        "type": "agent-s2",
        "enabled": true,
        "required": false
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Task Planner",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o task-planner-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Task Planner initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: task-planner --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start task planner with Go API server and UI",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./task-planner-api &",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/task-planner-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && UI_PORT=$UI_PORT SERVICE_PORT=$SERVICE_PORT node server.js &",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "wait-for-ui",
          "run": "sleep 2 && curl -sf http://localhost:$UI_PORT/health > /dev/null",
          "description": "Wait for UI server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Task Planner running:\\n  UI: http://localhost:$UI_PORT\\n  API: http://localhost:$SERVICE_PORT\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: task-planner --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test task planner Go API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-apps-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/apps",
          "description": "Test API apps endpoint"
        },
        {
          "name": "test-tasks-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/tasks",
          "description": "Test API tasks endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats task-planner.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/task-planner.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop task planner services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'task-planner-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'task-planner-ui' || pkill -f 'ui/server.js' || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Task Planner services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}