{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "task-planner",
    "displayName": "Task Planner",
    "description": "General task planner and scheduler with AI-powered task refinement and implementation",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "saas-applications",
      "task-management",
      "planning",
      "scheduling",
      "ai",
      "nodejs-ui",
      "go-api",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "ollama-ai"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/task-planner"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Task planner API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Task dashboard UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Task Planner health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Task Planner",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/task-planner-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "task-planner",
            "targets": [
              "task-planner"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o task-planner-api .",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Task Planner initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: task-planner --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start task planner with Go API server and UI",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./task-planner-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/task-planner-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Task Planner running:\\n  UI: http://localhost:$UI_PORT\\n  API: http://localhost:$API_PORT\\n  CLI: task-planner --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for task-planner",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute task-planner --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"task-planner-api\" || true; sleep 1; pkill -9 -f \"task-planner-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/task-planner.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/task-planner.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store tasks, plans, and status",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "data"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Caching and real-time updates"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Vector database for semantic search of tasks and research"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "nomic-embed-text"
        ]
      },
      "searxng": {
        "type": "searxng",
        "enabled": true,
        "required": false
      },
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": false
      },
      "agent-s2": {
        "type": "agent-s2",
        "enabled": true,
        "required": false
      }
    }
  }
}