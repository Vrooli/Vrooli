{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "resource-generator",
    "displayName": "Resource Generator",
    "description": "Automated system for creating new Vrooli resources with v2.0 contract compliance, scaffolding, and complete integration setup",
    "version": "1.0.0",
    "tags": [
      "vrooli-enhancement",
      "resource-creation",
      "scaffolding",
      "v2.0-contract",
      "automation",
      "ai-generation",
      "nodejs-ui",
      "go-api",
      "claude-code",
      "postgres-storage",
      "qdrant-memory"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Resource Generator API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Resource Generator UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "claude-code": {
      "type": "claude-code",
      "enabled": true,
      "required": true,
      "purpose": "AI-powered resource scaffolding and code generation"
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store resource templates, generation history, and v2.0 contract tracking",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/postgres/templates.sql",
          "type": "seed"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache generation queue, templates, and port allocations"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Semantic search for similar resources, pattern matching, and best practices"
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": false,
      "purpose": "Resource generation workflow automation",
      "initialization": [
        {
          "file": "initialization/n8n/resource-scaffolder.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/port-allocator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/contract-validator.json",
          "type": "workflow"
        }
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Resource Generator health check configuration",
      "endpoints": {
        "api": "/health",
        "generation": "/api/generation/status"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://${API_HOST:-localhost}:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Resource Generator",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/resource-generator-api"
            ]
          },
          {
            "type": "cli",
            "command": "resource-generator"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x resource-generator && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod init resource-generator && go mod tidy && go build -o resource-generator-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm init -y && npm install express",
          "description": "Install UI dependencies"
        }
      ]
    },
    "develop": {
      "description": "Start Resource Generator services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./resource-generator-api",
          "description": "Start Go API server",
          "background": true
        },
        {
          "name": "start-ui",
          "run": "cd ui && API_PORT=$API_PORT node server.js",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Resource Generator running:\\n  UI: http://${API_HOST:-localhost}:${UI_PORT}\\n  API: http://${API_HOST:-localhost}:${API_PORT}\\n  CLI: resource-generator --help'",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Resource Generator",
      "steps": [
        {
          "name": "test-api-health",
          "run": "curl -sf http://${API_HOST:-localhost}:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-template-listing",
          "run": "curl -sf http://${API_HOST:-localhost}:$API_PORT/api/templates",
          "description": "Test template listing"
        },
        {
          "name": "test-port-allocation",
          "run": "curl -sf http://${API_HOST:-localhost}:$API_PORT/api/ports/next",
          "description": "Test port allocation"
        },
        {
          "name": "test-cli",
          "run": "resource-generator list-templates",
          "description": "Test CLI functionality"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f resource-generator.start-api 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f resource-generator.start-ui 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "capabilities": {
    "scaffolding": {
      "description": "Generate complete resource directory structure",
      "templates": [
        "basic",
        "ai-powered",
        "data-processing",
        "workflow-automation",
        "monitoring"
      ]
    },
    "v2_contract": {
      "description": "Ensure all resources meet v2.0 contract requirements",
      "validations": [
        "health-checks",
        "lifecycle-hooks",
        "resource-dependencies",
        "port-management",
        "cli-integration"
      ]
    },
    "port_management": {
      "description": "Automatic port allocation and conflict prevention",
      "range": {
        "start": 20000,
        "end": 39999
      }
    },
    "integration": {
      "description": "Automatic CLI and Docker configuration",
      "features": [
        "cli-command-generation",
        "docker-compose-setup",
        "resource-registration",
        "documentation-generation"
      ]
    }
  }
}