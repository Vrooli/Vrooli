{
  "version": "1.0.0",
  "_metadata": {
    "description": "Baseline Lighthouse config for the React + Vite template",
    "last_updated": "2025-11-08T00:00:00Z"
  },
  "enabled": true,
  "pages": [
    {
      "id": "home",
      "path": "/",
      "label": "Home",
      "viewport": "desktop",
      "waitForSelector": "body",
      "thresholds": {
        "performance": { "error": 0.75, "warn": 0.85 },
        "accessibility": { "error": 0.90, "warn": 0.95 },
        "best-practices": { "error": 0.85, "warn": 0.90 },
        "seo": { "error": 0.80, "warn": 0.90 }
      }
    }
  ],
  "global_options": {
    "lighthouse": {
      "extends": "lighthouse:default",
      "settings": {
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "throttlingMethod": "simulate",
        "formFactor": "desktop"
      }
    },
    "chrome_flags": ["--headless", "--no-sandbox"],
    "timeout_ms": 90000
  }
}
