{
  "metadata": {
    "name": "create-new-chat",
    "description": "Validate creating a new chat session with bubble view mode",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"BUBBLE-001\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "navigate-home",
      "action": {
        "type": "ACTION_TYPE_NAVIGATE",
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "agent-inbox",
          "scenario_path": "/",
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE",
          "timeout_ms": 30000
        },
        "metadata": {
          "label": "Navigate to Agent Inbox UI"
        }
      }
    },
    {
      "id": "wait-inbox-container",
      "action": {
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/inbox.container",
          "state": "WAIT_STATE_VISIBLE",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Wait for inbox container to load"
        }
      }
    },
    {
      "id": "click-new-chat",
      "action": {
        "type": "ACTION_TYPE_CLICK",
        "click": {
          "selector": "@selector/inbox.newChatButton"
        },
        "metadata": {
          "label": "Click new chat button"
        }
      }
    },
    {
      "id": "wait-message-list",
      "action": {
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/inbox.messageList",
          "state": "WAIT_STATE_VISIBLE",
          "timeout_ms": 3000
        },
        "metadata": {
          "label": "Wait for chat view to open"
        }
      }
    },
    {
      "id": "assert-message-input",
      "action": {
        "type": "ACTION_TYPE_ASSERT",
        "assert": {
          "selector": "@selector/inbox.messageInput",
          "mode": "ASSERTION_MODE_VISIBLE",
          "timeout_ms": 5000,
          "failure_message": "Message input should be visible in new chat"
        },
        "metadata": {
          "label": "Verify message input is visible"
        }
      }
    },
    {
      "id": "assert-send-button",
      "action": {
        "type": "ACTION_TYPE_ASSERT",
        "assert": {
          "selector": "@selector/inbox.sendMessageButton",
          "mode": "ASSERTION_MODE_VISIBLE",
          "timeout_ms": 5000,
          "failure_message": "Send button should be visible in new chat"
        },
        "metadata": {
          "label": "Verify send button is visible"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-home",
      "target": "wait-inbox-container",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "wait-inbox-container",
      "target": "click-new-chat",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "click-new-chat",
      "target": "wait-message-list",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4",
      "source": "wait-message-list",
      "target": "assert-message-input",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e5",
      "source": "assert-message-input",
      "target": "assert-send-button",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
