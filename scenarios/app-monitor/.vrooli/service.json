{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "app-monitor",
    "displayName": "App Monitor",
    "description": "Dashboard to monitor and control all running scenarios with real-time health checks and performance metrics",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "monitoring",
      "maintenance",
      "dashboard",
      "docker",
      "health-check",
      "app-management",
      "metrics",
      "automation",
      "nodejs-ui",
      "go-api",
      "postgres-storage",
      "redis-cache",
      "ollama-ai"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/app-monitor"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "21600-21699",
      "description": "App monitoring coordination API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 21774,
      "description": "Web UI dashboard port (production)"
    },
    "vite": {
      "env_var": "VITE_PORT",
      "range": "21800-21899",
      "description": "Vite dev server port (development)"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "App Monitor health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize App Monitor with database schema and automation workflows",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/app-monitor-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "app-monitor"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o app-monitor-api .",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies for React app"
        },
        {
          "name": "verify-docker-access",
          "run": "docker version > /dev/null && echo '\u2705 Docker access verified' || echo '\u274c Docker access required for app monitoring'",
          "description": "Verify Docker access for app monitoring"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI for production"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 App Monitor initialized\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: app-monitor --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start app monitor with Go API server and production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./app-monitor-api",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/app-monitor-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Start Express server with built React app",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 App Monitor running:\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  API Server: http://localhost:${API_PORT}\\n  CLI: app-monitor --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for app-monitor",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute app-monitor --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"app-monitor-api\" || true; sleep 1; pkill -9 -f \"app-monitor-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/app-monitor.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/app-monitor.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store app metadata, monitoring data, status logs, and metrics",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Real-time event streaming, caching, and app notifications"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": false,
        "models": [
          "phi3.5:3.8b",
          "llama3.2"
        ],
        "purpose": "AI-powered analysis for unhealthy apps and performance optimization recommendations"
      },
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": false,
        "purpose": "Headless browser for capturing diagnostics when iframe bridge fails (console logs, network requests, screenshots, page HTML)"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      }
    },
    "scenarios": {
      "app-issue-tracker": {
        "required": true,
        "version": "2.0.0-file-based",
        "versionRange": ">=2.0.0-file-based",
        "description": "Auto-detected dependency via scenario_port_cli"
      },
      "scenario-auditor": {
        "required": true,
        "version": "1.0.0",
        "versionRange": ">=1.0.0",
        "description": "Auto-detected dependency via scenario_port_cli"
      }
    }
  }
}