{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "app-monitor",
    "displayName": "App Monitor",
    "description": "Dashboard to monitor and control all running scenarios with real-time health checks and performance metrics",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "monitoring",
      "dashboard",
      "docker",
      "health-check",
      "app-management",
      "metrics",
      "automation",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "node-red-flows",
      "windmill-apps",
      "postgres-storage",
      "redis-cache",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "port": 21600,
      "fallback": "auto",
      "description": "App monitoring coordination API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 3456,
      "fallback": "auto",
      "description": "Web UI dashboard port"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store app metadata, monitoring data, status logs, and metrics",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "script"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "script"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Real-time event streaming, caching, and app notifications"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "models": [
        "phi3.5:3.8b",
        "llama3.2"
      ],
      "purpose": "AI-powered analysis for unhealthy apps and performance optimization recommendations"
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/app-health-monitor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/app-performance-analyzer.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/auto-restart.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/resource-monitor.json",
          "type": "workflow"
        }
      ],
      "shared_workflows": [
        "ollama.json",
        "cache-manager.json",
        "rate-limiter.json",
        "n8n-workflow-executor.json"
      ]
    },
    "node-red": {
      "type": "node-red",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/node-red/docker-monitor.json",
          "type": "flow"
        }
      ]
    },
    "windmill": {
      "type": "windmill",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/windmill/app-monitor-dashboard.json",
          "type": "app"
        },
        {
          "file": "initialization/automation/windmill/app-control-panel.json",
          "type": "app"
        }
      ]
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize App Monitor with database schema and automation workflows",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/app-monitor-api"
            ]
          },
          {
            "type": "cli",
            "command": "app-monitor"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o app-monitor-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "verify-docker-access",
          "run": "docker version > /dev/null && echo 'âœ… Docker access verified' || echo 'âŒ Docker access required for app monitoring'",
          "description": "Verify Docker access for app monitoring"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ App Monitor initialized\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Node-RED flows: http://localhost:${RESOURCE_PORTS[node-red]}\\n  API: http://localhost:${SERVICE_PORT}\\n  CLI: app-monitor --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start app monitor with Go API server and automation workflows",
      "steps": [
        {
          "name": "ensure-api-built",
          "run": "if [ ! -f api/app-monitor-api ]; then echo 'Building API...'; cd api && go mod download && go build -o app-monitor-api main.go && echo 'API built successfully'; else echo 'API binary already exists'; fi",
          "description": "Ensure API binary exists"
        },
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./app-monitor-api",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/app-monitor-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && node server.js $UI_PORT $SERVICE_PORT",
          "description": "Start UI dashboard server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
        {
          "name": "wait-for-ui",
          "run": "sleep 2 && curl -sf http://localhost:$UI_PORT > /dev/null",
          "description": "Wait for UI server to be ready",
          "retry": {
            "max_attempts": 10,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ App Monitor running:\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Node-RED: http://localhost:${RESOURCE_PORTS[node-red]}\\n  API: http://localhost:$SERVICE_PORT\\n  CLI: app-monitor --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test app monitor API, CLI, and automation workflows",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-apps-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/apps",
          "description": "Test API apps endpoint"
        },
        {
          "name": "test-docker-access",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/docker/info",
          "description": "Test Docker API access through app monitor"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats app-monitor.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/app-monitor.bats"
          }
        },
        {
          "name": "test-automation-workflows",
          "run": "bash test/test-automation-integration.sh",
          "description": "Test n8n and Node-RED workflow integration"
        }
      ]
    },
    "stop": {
      "description": "Stop app monitor services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'app-monitor-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ App Monitor services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
