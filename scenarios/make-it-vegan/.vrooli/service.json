{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "make-it-vegan",
    "displayName": "Make It Vegan",
    "description": "Research if foods are vegan, find vegan alternatives and substitutes",
    "version": "1.0.0",
    "type": "saas-application",
    "category": "saas-applications",
    "tags": [
      "vegan",
      "food",
      "nutrition",
      "recipe",
      "alternatives",
      "substitutes",
      "dietary"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8200-8299",
      "fallback": "auto",
      "description": "Main API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3200-3299",
      "fallback": "auto",
      "description": "Web UI port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/vegan-checker.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/alternative-finder.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/recipe-veganizer.json",
            "type": "workflow"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2:3b"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": false,
        "purpose": "Store vegan food database and user preferences"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Make It Vegan app",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x make-it-vegan && ln -sf $(pwd)/make-it-vegan /usr/local/bin/make-it-vegan 2>/dev/null || true",
          "description": "Install CLI command"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o make-it-vegan-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ¥¬ Make It Vegan initialized' && echo '  UI: http://localhost:'$UI_PORT && echo '  API: http://localhost:'$SERVICE_PORT && echo '  n8n workflows: http://localhost:'${RESOURCE_PORTS[n8n]} && echo '  CLI: make-it-vegan --help'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Make It Vegan services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./make-it-vegan-api &",
          "description": "Start Go API server",
          "background": true,
          "condition": {
            "file_exists": "api/make-it-vegan-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT node server.js &",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'ðŸ¥¬ Make It Vegan running:' && echo '  UI: http://localhost:'$UI_PORT && echo '  API: http://localhost:'$SERVICE_PORT && echo '  CLI: make-it-vegan --help'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test Make It Vegan",
      "steps": [
        {
          "name": "test-api-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation"
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health || echo 'API health check failed'",
          "description": "Test API health"
        },
        {
          "name": "test-cli",
          "run": "make-it-vegan check 'milk, eggs, flour' || true",
          "description": "Test CLI functionality"
        }
      ]
    },
    "stop": {
      "description": "Stop Make It Vegan services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'make-it-vegan-api' || true; pkill -f 'node server.js' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}