{
  "$schema": "../../test-genie/schemas/lighthouse.schema.json",
  "version": "1.0.0",
  "service": "visited-tracker",
  "description": "Lighthouse configuration for visited-tracker performance audits",
  "enabled": true,
  "global_options": {
    "lighthouse": {
      "extends": "lighthouse:default",
      "settings": {
        "onlyCategories": [
          "performance",
          "accessibility",
          "best-practices",
          "seo"
        ],
        "skipAudits": ["uses-http2"]
      }
    },
    "timeout_ms": 90000,
    "retries": 1
  },
  "reporting": {
    "formats": ["json"],
    "fail_on_error": true
  },
  "pages": [
    {
      "id": "home-desktop",
      "path": "/",
      "label": "Home page - desktop",
      "viewport": "desktop",
      "thresholds": {
        "performance": { "error": 0.8, "warn": 0.85 },
        "accessibility": { "error": 0.95, "warn": 0.98 },
        "best-practices": { "error": 0.85, "warn": 0.9 },
        "seo": { "error": 0.8, "warn": 0.9 }
      }
    },
    {
      "id": "home-mobile",
      "path": "/",
      "label": "Home page - mobile",
      "viewport": "mobile",
      "thresholds": {
        "performance": { "error": 0.75, "warn": 0.85 },
        "accessibility": { "error": 0.9, "warn": 0.95 },
        "best-practices": { "error": 0.8, "warn": 0.9 },
        "seo": { "error": 0.75, "warn": 0.85 }
      },
      "waitForMs": 500
    }
  ]
}
