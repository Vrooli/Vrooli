{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "visited-tracker",
    "displayName": "Visited Tracker",
    "description": "Agent loop memory primitive enabling perfect cross-conversation file tracking for ecosystem-manager phases (Progress, UX, Refactor, Test)",
    "version": "1.0.0",
    "tags": [
      "agent-loop-memory",
      "phase-integration",
      "ecosystem-manager",
      "file-tracking",
      "visit-tracking",
      "staleness-detection",
      "code-analysis",
      "coverage-tracking",
      "developer-tools",
      "prioritization",
      "go-api",
      "systematic-review",
      "campaign-management"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "developer-tools",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/visited-tracker"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Visited Tracker API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Visit tracking dashboard port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Standard API/UI health checks",
      "startup_grace_period": 15000,
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 10000,
          "interval": 30000,
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": false
        }
      ]
    },
    "setup": {
      "description": "Build API & UI, install CLI",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/visited-tracker-api"
            ]
          },
          {
            "type": "cli",
            "command": "visited-tracker",
            "targets": [
              "visited-tracker"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          }
        ]
      },
      "steps": [
        {
          "name": "create-data-dir",
          "run": "mkdir -p data/campaigns",
          "description": "Create data directory for JSON file storage"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI into ~/.local/bin"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o visited-tracker-api .",
          "description": "Build the Go API binary (visited-tracker-api) for lifecycle orchestration"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && if [ -f package.json ]; then pnpm install; else echo 'No package.json found, skipping pnpm install'; fi",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && pnpm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Visited Tracker initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: visited-tracker --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Launch API and UI production server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./visited-tracker-api",
          "background": true,
          "description": "Start Go API server",
          "condition": {
            "file_exists": "api/visited-tracker-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Visited Tracker ready\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: visited-tracker --help'",
          "description": "Display service URLs after startup"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for visited-tracker",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute visited-tracker --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop background processes",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f 'visited-tracker-api' || true",
          "description": "Stop Go API"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'scenarios/visited-tracker.*server\\.js' || true",
          "description": "Stop UI server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {}
  }
}