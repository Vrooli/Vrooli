{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "web-scraper-manager",
    "displayName": "Web Scraper Manager",
    "description": "Unified dashboard for managing web scraping across multiple platforms (Huginn, Browserless, Agent-S2) with orchestrated workflows and data export",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "data-collection",
      "web-scraping",
      "automation",
      "multi-platform",
      "windmill-ui",
      "orchestration",
      "export",
      "monitoring",
      "go-api",
      "n8n-workflows",
      "windmill-apps",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "minio-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 31750,
      "fallback": "auto",
      "description": "Web scraper manager coordination API port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "purpose": "Workflow orchestration for coordinated scraping across platforms",
      "initialization": [
        {
          "file": "initialization/automation/n8n/scraper-orchestrator.json",
          "type": "workflow"
        }
      ]
    },
    "windmill": {
      "type": "windmill",
      "enabled": true,
      "required": true,
      "purpose": "UI dashboard for scraper management and monitoring",
      "initialization": [
        {
          "file": "initialization/automation/windmill/agents-manager.json",
          "type": "app"
        },
        {
          "file": "initialization/automation/windmill/analytics-panel.json",
          "type": "app"
        },
        {
          "file": "initialization/automation/windmill/dashboard-app.json",
          "type": "app"
        }
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store scraping agent configurations, results, metrics, and orchestration metadata",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "script"
        }
      ]
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": true,
      "purpose": "Store scraped assets, screenshots, and exported data files"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": false,
      "purpose": "Vector database for content similarity detection and duplicate removal"
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Job queues and caching for scraping orchestration"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "purpose": "AI models for intelligent content extraction and analysis",
      "models": [
        "llama3.2",
        "nomic-embed-text"
      ]
    },
    "huginn": {
      "type": "external-service",
      "enabled": false,
      "required": false,
      "purpose": "RSS/social media monitoring and scheduled scraping",
      "default_port": 4111,
      "health_endpoint": "/agents"
    },
    "browserless": {
      "type": "external-service",
      "enabled": false,
      "required": false,
      "purpose": "JavaScript-heavy sites, screenshots, PDF generation",
      "default_port": 4110,
      "health_endpoint": "/stats"
    },
    "agent-s2": {
      "type": "external-service",
      "enabled": false,
      "required": false,
      "purpose": "AI-powered web interaction and complex scraping",
      "default_port": 4113,
      "health_endpoint": "/health"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Web Scraper Manager",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/web-scraper-manager-api"
            ]
          },
          {
            "type": "cli",
            "command": "web-scraper-manager"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "base-setup",
          "run": "bash ../../scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "setup-storage-buckets",
          "run": "bash scripts/lib/setup-minio-buckets.sh",
          "description": "Create MinIO buckets for scraped content"
        },
        {
          "name": "setup-vector-collections",
          "run": "bash scripts/lib/setup-qdrant-collections.sh",
          "description": "Initialize Qdrant collections for content similarity",
          "condition": {
            "resource_enabled": "qdrant"
          }
        },
        {
          "name": "load-platform-configs",
          "run": "bash scripts/lib/load-platform-configs.sh",
          "description": "Load platform capability configurations into database"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o web-scraper-manager-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Web Scraper Manager initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n orchestrator: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${API_PORT}\\n  CLI: web-scraper-manager --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start web scraper manager with Go API server",
      "steps": [
        {
          "name": "ensure-api-built",
          "run": "if [ ! -f api/web-scraper-manager-api ]; then echo 'Building API...'; cd api && go mod download && go build -o web-scraper-manager-api main.go && echo 'API built successfully'; else echo 'API binary already exists'; fi",
          "description": "Ensure API binary exists"
        },
        {
          "name": "start-api-server",
          "run": "cd api && env PORT=$API_PORT ./web-scraper-manager-api",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/web-scraper-manager-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$API_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "initialize-redis-queues",
          "run": "redis-cli -h localhost -p ${RESOURCE_PORTS[redis]} LPUSH scraper:queue:init \"ready\" > /dev/null",
          "description": "Initialize Redis job queues"
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Web Scraper Manager running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n orchestrator: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$API_PORT\\n  MinIO: http://localhost:${RESOURCE_PORTS[minio]}\\n  CLI: web-scraper-manager --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test web scraper manager API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-agents-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/agents",
          "description": "Test API agents endpoint"
        },
        {
          "name": "test-platforms-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/platforms",
          "description": "Test API platforms endpoint"
        },
        {
          "name": "test-database-connection",
          "run": "bash test/test-database-connection.sh",
          "description": "Test PostgreSQL database connectivity and schema"
        },
        {
          "name": "test-storage-buckets",
          "run": "bash test/test-storage-buckets.sh",
          "description": "Test MinIO bucket accessibility"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats web-scraper-manager.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/web-scraper-manager.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop web scraper manager services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'web-scraper-manager-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Web Scraper Manager services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}