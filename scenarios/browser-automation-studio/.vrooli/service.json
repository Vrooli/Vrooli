{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "browser-automation-studio",
    "displayName": "Browser Automation Studio",
    "description": "Visual browser automation studio with AI-powered workflow builder and real-time debugging",
    "version": "1.0.0",
    "tags": [
      "browser-automation",
      "visual-workflows",
      "screenshot-capture",
      "ui-testing",
      "web-scraping",
      "ai-debugging",
      "workflow-builder",
      "real-time-execution",
      "go-api",
      "react-ui",
      "postgres-storage"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Browser Automation Studio API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Visual workflow builder UI port",
      "range": "35000-39999"
    },
    "websocket": {
      "env_var": "WS_PORT",
      "description": "WebSocket port for real-time updates",
      "range": "25000-29999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Browser Automation Studio health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 10000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Browser Automation Studio",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/browser-automation-studio-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "browser-automation-studio",
            "targets": [
              "browser-automation-studio"
            ]
          },
          {
            "type": "directory",
            "path": "initialization/storage/postgres"
          }
        ]
      },
      "steps": [
        {
          "name": "create-data-dirs",
          "run": "mkdir -p data/workflows data/executions data/screenshots",
          "description": "Create data directories for workflow storage"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o browser-automation-studio-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && if [ -f package.json ]; then pnpm install --filter . --no-optional; else echo 'No package.json found, skipping pnpm install'; fi",
          "description": "Install React UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && pnpm run build",
          "description": "Build React UI for production"
        },
        {
          "name": "setup-database",
          "run": "echo 'Database schema will be initialized on first API startup'",
          "description": "Prepare database schema"
        },
        {
          "name": "show-urls",
          "run": "printf 'ðŸš€ Browser Automation Studio initialized\\n  Workflow Builder: http://localhost:%s\\n  API: http://localhost:%s\\n  CLI: browser-automation-studio --help\\n' \"${UI_PORT:-?}\" \"${API_PORT:-?}\"",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start browser automation studio with production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./browser-automation-studio-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/browser-automation-studio-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start Express server with built React app",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "printf 'ðŸš€ Services running:\\n  Workflow Builder: http://localhost:%s\\n  API: http://localhost:%s\\n  CLI: browser-automation-studio --help\\n' \"${UI_PORT:-?}\" \"${API_PORT:-?}\"",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test browser automation studio API and CLI",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute comprehensive phased test suite"
        }
      ]
    },
    "production": {
      "description": "Start browser automation studio in production mode",
      "steps": [
        {
          "name": "build-ui",
          "run": "cd ui && pnpm run build",
          "description": "Build React UI for production"
        },
        {
          "name": "start-api",
          "run": "cd api && VROOLI_LIFECYCLE_MANAGED=true ./browser-automation-studio-api",
          "description": "Start Go API server with workflow engine",
          "background": true,
          "condition": {
            "file_exists": "api/browser-automation-studio-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start React UI production server",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "printf 'ðŸš€ Services running (PRODUCTION):\\n  Workflow Builder: http://localhost:%s\\n  API: http://localhost:%s\\n  CLI: browser-automation-studio --help\\n' \"${UI_PORT:-?}\" \"${API_PORT:-?}\"",
          "description": "Display all running service URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop all browser automation studio services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"browser-automation-studio-api\" || true; sleep 1; pkill -9 -f \"browser-automation-studio-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/browser-automation-studio.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/browser-automation-studio.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Workflow definitions and execution history storage",
        "schema": "browser_automation_studio"
      },
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": true,
        "description": "Core browser automation engine for workflow execution"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "description": "Screenshot and artifact storage with S3-compatible API"
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "description": "WebSocket pub/sub and execution caching"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": false,
        "description": "AI workflow generation and debugging assistance"
      },
      "openrouter": {
        "type": "openrouter",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (resource_cli)"
      }
    },
    "scenarios": {}
  }
}