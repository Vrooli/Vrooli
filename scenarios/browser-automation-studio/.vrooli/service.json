{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "browser-automation-studio",
    "displayName": "Browser Automation Studio",
    "description": "Visual browser automation studio with AI-powered workflow builder and real-time debugging",
    "version": "1.0.0",
    "tags": [
      "browser-automation",
      "visual-workflows",
      "screenshot-capture",
      "ui-testing",
      "web-scraping",
      "ai-debugging",
      "workflow-builder",
      "real-time-execution",
      "go-api",
      "react-ui",
      "postgres-storage"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Browser Automation Studio API port",
      "range": "20000-24999"
    },
    "ui": {
      "env_var": "UI_PORT", 
      "description": "Visual workflow builder UI port",
      "range": "40000-44999"
    },
    "websocket": {
      "env_var": "WS_PORT",
      "description": "WebSocket port for real-time updates",
      "range": "25000-29999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "description": "Workflow definitions and execution history storage",
      "schema": "browser_automation_studio"
    },
    "browserless": {
      "type": "browserless",
      "enabled": true,
      "required": true,
      "description": "Core browser automation engine for workflow execution"
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": true,
      "description": "Screenshot and artifact storage with S3-compatible API"
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "description": "WebSocket pub/sub and execution caching"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "description": "AI workflow generation and debugging assistance"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Browser Automation Studio health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 10000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http", 
          "target": "http://localhost:${UI_PORT}/",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Browser Automation Studio",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/browser-automation-studio-api"
            ]
          },
          {
            "type": "cli",
            "command": "browser-automation-studio"
          },
          {
            "type": "directory",
            "path": "initialization/storage/postgres"
          }
        ]
      },
      "steps": [
        {
          "name": "create-data-dirs",
          "run": "mkdir -p data/workflows data/executions data/screenshots",
          "description": "Create data directories for workflow storage"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o browser-automation-studio-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && if [ -f package.json ]; then npm install; else echo 'No package.json found, skipping npm install'; fi",
          "description": "Install React UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && if [ -f package.json ]; then npm run build; else echo 'No package.json found, skipping UI build'; fi",
          "description": "Build React UI for production"
        },
        {
          "name": "setup-database",
          "run": "echo 'Database schema will be initialized on first API startup'",
          "description": "Prepare database schema"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Browser Automation Studio initialized\\n  Workflow Builder: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: browser-automation-studio --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start browser automation studio with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && VROOLI_LIFECYCLE_MANAGED=true ./browser-automation-studio-api",
          "description": "Start Go API server with workflow engine",
          "background": true,
          "condition": {
            "file_exists": "api/browser-automation-studio-api"
          }
        },
        {
          "name": "start-ui", 
          "run": "cd ui && if [ -d dist ]; then node server.js; else npm run dev; fi",
          "description": "Start React UI server (production or development mode)",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Workflow Builder: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: browser-automation-studio --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test browser automation studio API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "timeout 30 bash -c 'until curl -sf http://localhost:$API_PORT/health; do sleep 2; done'",
          "description": "Test API health endpoint with retry"
        },
        {
          "name": "test-workflow-endpoints",
          "run": "curl -sf http://localhost:$API_PORT/api/v1/workflows",
          "description": "Test workflow listing endpoint"
        },
        {
          "name": "test-project-endpoints",
          "run": "curl -sf http://localhost:$API_PORT/api/v1/projects",
          "description": "Test project listing endpoint"
        },
        {
          "name": "test-ui-accessibility",
          "run": "curl -sf http://localhost:$UI_PORT/",
          "description": "Test UI accessibility"
        },
        {
          "name": "test-cli-commands",
          "run": "browser-automation-studio status && browser-automation-studio help",
          "description": "Test basic CLI functionality"
        }
      ]
    },
    "stop": {
      "description": "Stop all browser automation studio services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"browser-automation-studio-api\" || true; sleep 1; pkill -9 -f \"browser-automation-studio-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/browser-automation-studio.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/browser-automation-studio.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
