{
  "edges": [
    {
      "id": "edge-nav-app-ready",
      "source": "navigate-dashboard",
      "target": "wait-app-ready",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "edge-app-ready-wait",
      "source": "wait-app-ready",
      "target": "wait-for-page",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "edge-wait-screenshot-bridge-edge-screenshot-assert",
      "source": "wait-for-page",
      "target": "assert-dashboard",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ],
  "metadata": {
    "description": "Smoke test for AI workflow generation feature - verifies UI elements are present",
    "labels": {
      "reset": "none"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open BAS dashboard"
        },
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "browser-automation-studio",
          "scenario_path": "/",
          "timeout_ms": 30000,
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE"
        },
        "type": "ACTION_TYPE_NAVIGATE"
      },
      "id": "navigate-dashboard"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for React app to hydrate"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/app.shell.ready",
          "timeout_ms": 30000
        }
      },
      "id": "wait-app-ready"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for page load"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "duration_ms": 2000
        }
      },
      "id": "wait-for-page"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Dashboard body should be visible",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "body",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Dashboard loaded"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-dashboard"
    }
  ],
  "settings": {
    "viewport_height": 900,
    "viewport_width": 1440
  }
}
