{
  "metadata": {
    "description": "Validates real-time execution progress tracking in the UI",
    "version": 1,
    "reset": "none"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-workflow",
      "type": "subflow",
      "data": {
        "label": "Open demo workflow in builder",
        "workflowId": "@fixture/open-demo-workflow(projectName=@seed/projectName, projectFolder=@seed/projectFolder, workflowId=@seed/workflowId, workflowName=@seed/workflowName)"
      }
    },
    {
      "id": "capture-before-execution",
      "type": "screenshot",
      "data": {
        "label": "Capture before execution",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "start-execution",
      "type": "click",
      "data": {
        "label": "Start workflow execution",
        "selector": "@selector/header.buttons.execute",
        "timeoutMs": 5000
      }
    },
    {
      "id": "wait-for-execution-start",
      "type": "wait",
      "data": {
        "label": "Wait for execution viewer to render",
        "selector": "@selector/executions.viewer.root",
        "timeoutMs": 5000
      }
    },
    {
      "id": "verify-execution-started",
      "type": "assert",
      "data": {
        "label": "Execution indicator appears",
        "selector": "@selector/executions.viewer.status",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Execution status indicator should appear after starting a run"
      }
    },
    {
      "id": "capture-execution-progress",
      "type": "screenshot",
      "data": {
        "label": "Capture execution in progress",
        "fullPage": true
      }
    },
    {
      "id": "check-for-progress-elements",
      "type": "assert",
      "data": {
        "label": "Progress UI elements exist",
        "selector": "@selector/executions.viewer.status, @selector/heartbeat.indicator",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Progress UI should render while execution is running"
      }
    },
    {
      "id": "capture-mid-execution",
      "type": "screenshot",
      "data": {
        "label": "Capture mid-execution state",
        "fullPage": true
      }
    },
    {
      "id": "check-heartbeat-indicators",
      "type": "assert",
      "data": {
        "label": "Heartbeat indicators visible",
        "selector": "@selector/heartbeat.indicator",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Heartbeat indicator should render during execution",
        "continueOnFailure": true
      }
    },
    {
      "id": "assert-completion-state",
      "type": "assert",
      "data": {
        "label": "Execution reaches terminal state",
        "selector": "@selector/executions.viewer.statusCompleted, @selector/executions.viewer.statusFailed, @selector/executions.viewer.statusCancelled",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Execution should complete or fail within expected timeout"
      }
    },
    {
      "id": "capture-final-state",
      "type": "screenshot",
      "data": {
        "label": "Capture execution completed state",
        "fullPage": true,
        "waitForMs": 1000
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "call-open-workflow",
      "target": "capture-before-execution",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "capture-before-execution",
      "target": "start-execution",
      "type": "smoothstep"
    },
    {
      "id": "e3b",
      "source": "start-execution",
      "target": "wait-for-execution-start",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-execution-start",
      "target": "verify-execution-started",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "verify-execution-started",
      "target": "capture-execution-progress",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "capture-execution-progress",
      "target": "check-for-progress-elements",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "check-for-progress-elements",
      "target": "capture-mid-execution",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "capture-mid-execution",
      "target": "check-heartbeat-indicators",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "check-heartbeat-indicators",
      "target": "assert-completion-state",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "assert-completion-state",
      "target": "capture-final-state",
      "type": "smoothstep"
    }
  ]
}