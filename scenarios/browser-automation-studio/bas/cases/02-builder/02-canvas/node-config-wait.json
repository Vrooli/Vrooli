  "metadata": {
    "description": "Validates Wait node configuration with dynamic fields based on wait type selection",
    "labels": {
      "reset": "full"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open builder via fixture"
        },
        "subflow": {
          "args": {
            "projectFolder": "${@params/projectFolder}",
            "projectName": "${@params/projectName}"
          },
          "workflow_path": "actions/open-builder-from-demo.json"
        },
        "type": "ACTION_TYPE_SUBFLOW"
      },
      "id": "call-open-builder"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for builder"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/workflowBuilder.code.modeButton",
          "timeout_ms": 15000
        }
      },
      "execution_settings": {
        "wait_after_ms": 600
      },
      "id": "wait-builder"
    },
    {
      "action": {
        "drag_drop": {
          "source_selector": "@selector/nodePalette.cards.wait",
          "target_selector": ".react-flow__pane",
          "timeout_ms": 10000
        },
        "metadata": {
          "label": "Drag Wait node onto canvas"
        },
        "type": "ACTION_TYPE_DRAG_DROP"
      },
      "id": "drag-wait-node"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for node to render"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "duration_ms": 1500
        }
      },
      "id": "wait-node-render"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Wait node should appear",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Verify Wait node exists"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "verify-wait-node"
    },
    {
      "action": {
        "click": {
          "selector": ".react-flow__node:first-of-type"
        },
        "metadata": {
          "label": "Select Wait node"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "click-wait-node"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Wait type dropdown should be visible",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node.selected select",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Verify wait type selector exists"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "find-type-selector"
    },
    {
      "action": {
        "metadata": {
          "label": "Change wait type to 'element'"
        },
        "select_option": {
          "label": "Change wait type to 'element'",
          "selector": ".react-flow__node.selected select /*dup-1*/",
          "value": "element"
        },
        "type": "ACTION_TYPE_SELECT"
      },
      "id": "switch-to-element-wait"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Selector input should appear when wait type is 'element'",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node.selected input[placeholder*=\"Selector\" i]",
          "timeout_ms": 3000
        },
        "metadata": {
          "label": "Selector input should appear for element wait"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "verify-selector-input-appears"
    },
    {
      "action": {
        "input": {
          "selector": ".react-flow__node.selected input[placeholder*=\"Selector\" i] /*dup-1*/",
          "value": "#test-element"
        },
        "metadata": {
          "label": "Type selector value"
        },
        "type": "ACTION_TYPE_INPUT"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "type-selector"
    },
    {
      "action": {
        "click": {
          "selector": ".react-flow__pane"
        },
        "metadata": {
          "label": "Click canvas to save"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 1000
      },
      "id": "blur-selector-input"
    },
    {
      "action": {
        "click": {
          "selector": ".react-flow__node:first-of-type /*dup-1*/"
        },
        "metadata": {
          "label": "Re-select node"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "switch-to-time-wait"
    },
    {
      "action": {
        "metadata": {
          "label": "Switch back to time mode"
        },
        "select_option": {
          "label": "Switch back to time mode",
          "selector": ".react-flow__node.selected select /*dup-2*/",
          "value": "time"
        },
        "type": "ACTION_TYPE_SELECT"
      },
      "id": "change-to-time-mode"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Duration input should appear when wait type is 'time'",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node.selected input[type=\"number\"]",
          "timeout_ms": 3000
        },
        "metadata": {
          "label": "Duration input should appear for time wait"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "verify-duration-input-appears"
    },
    {
      "action": {
        "input": {
          "selector": ".react-flow__node.selected input[type=\"number\"] /*dup-1*/",
          "value": "3000"
        },
        "metadata": {
          "label": "Enter duration value"
        },
        "type": "ACTION_TYPE_INPUT"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "enter-duration"
    },
    {
      "action": {
        "click": {
          "selector": ".react-flow__pane /*dup-1*/"
        },
        "metadata": {
          "label": "Click canvas to save duration"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 1000
      },
      "id": "save-duration"
    }
  ],
  "settings": {
    "viewport_height": 1080,
    "viewport_width": 1920
  }
}
