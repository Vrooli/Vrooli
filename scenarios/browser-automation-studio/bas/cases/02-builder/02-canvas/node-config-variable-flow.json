  "metadata": {
    "description": "Validates SetVariable and UseVariable node configuration for data flow testing",
    "labels": {
      "reset": "full"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open builder via fixture"
        },
        "subflow": {
          "args": {
            "projectFolder": "${@params/projectFolder}",
            "projectName": "${@params/projectName}"
          },
          "workflow_path": "actions/open-builder-from-demo.json"
        },
        "type": "ACTION_TYPE_SUBFLOW"
      },
      "id": "call-open-builder"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for builder"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/workflowBuilder.code.modeButton",
          "timeout_ms": 15000
        }
      },
      "execution_settings": {
        "wait_after_ms": 600
      },
      "id": "wait-builder"
    },
    {
      "action": {
        "drag_drop": {
          "source_selector": "@selector/nodePalette.cards.setVariable",
          "target_selector": ".react-flow__pane",
          "timeout_ms": 10000
        },
        "metadata": {
          "label": "Drag SetVariable node (camelCase test)"
        },
        "type": "ACTION_TYPE_DRAG_DROP"
      },
      "id": "drag-setvariable-node"
    },
    {
      "action": {
        "assert": {
          "failure_message": "SetVariable node should appear (camelCase node type)",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Verify SetVariable node exists"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "verify-setvariable-node"
    },
    {
      "action": {
        "click": {
          "selector": ".react-flow__node:first-of-type"
        },
        "metadata": {
          "label": "Select SetVariable node"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "select-setvariable"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Variable name input should be visible",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node.selected input[placeholder*=\"variable\" i], .react-flow__node.selected input[placeholder*=\"name\" i]",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Variable name input exists"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "find-variable-name-input"
    },
    {
      "action": {
        "input": {
          "selector": ".react-flow__node.selected input:first-of-type",
          "value": "testVar"
        },
        "metadata": {
          "label": "Enter variable name"
        },
        "type": "ACTION_TYPE_INPUT"
      },
      "id": "enter-variable-name"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Value input should be visible",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node.selected input:nth-of-type(2), .react-flow__node.selected textarea",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Value input exists"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "find-value-input"
    },
    {
      "action": {
        "input": {
          "selector": ".react-flow__node.selected input:nth-of-type(2), .react-flow__node.selected textarea /*dup-1*/",
          "value": "test-value-123"
        },
        "metadata": {
          "label": "Enter variable value"
        },
        "type": "ACTION_TYPE_INPUT"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "enter-value"
    },
    {
      "action": {
        "click": {
          "selector": ".react-flow__pane"
        },
        "metadata": {
          "label": "Click canvas to save"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 1000
      },
      "id": "save-setvariable"
    },
    {
      "action": {
        "drag_drop": {
          "source_selector": "@selector/nodePalette.cards.useVariable",
          "target_selector": ".react-flow__pane",
          "timeout_ms": 10000
        },
        "metadata": {
          "label": "Drag UseVariable node (camelCase test)"
        },
        "type": "ACTION_TYPE_DRAG_DROP"
      },
      "id": "drag-usevariable-node"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for UseVariable node"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "duration_ms": 1500
        }
      },
      "id": "wait-second-node"
    },
    {
      "action": {
        "assert": {
          "failure_message": "UseVariable node should appear (camelCase node type)",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node:nth-of-type(2)",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Verify UseVariable node exists"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "verify-usevariable-node"
    },
    {
      "action": {
        "click": {
          "selector": ".react-flow__node:nth-of-type(2) /*dup-1*/"
        },
        "metadata": {
          "label": "Select UseVariable node"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "select-usevariable"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Variable reference input should be visible",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node.selected input",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Variable reference input exists"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "find-variable-reference-input"
    },
    {
      "action": {
        "input": {
          "selector": ".react-flow__node.selected input /*dup-1*/",
          "value": "testVar"
        },
        "metadata": {
          "label": "Reference the variable"
        },
        "type": "ACTION_TYPE_INPUT"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "enter-variable-reference"
    },
    {
      "action": {
        "click": {
          "selector": ".react-flow__pane /*dup-1*/"
        },
        "metadata": {
          "label": "Click canvas to save"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 1000
      },
      "id": "save-usevariable"
    }
  ],
  "settings": {
    "viewport_height": 1080,
    "viewport_width": 1920
  }
}
