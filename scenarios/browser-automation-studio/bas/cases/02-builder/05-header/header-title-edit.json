{
  "edges": [
    {
      "id": "e1",
      "source": "nav",
      "target": "proj",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "proj",
      "target": "wait-workflows",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e-wait-work",
      "source": "wait-workflows",
      "target": "work",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "work",
      "target": "wait1",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4",
      "source": "wait1",
      "target": "get-original",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e5",
      "source": "get-original",
      "target": "click-edit",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e6",
      "source": "click-edit",
      "target": "assert-input",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e7",
      "source": "assert-input",
      "target": "type-new",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e8",
      "source": "type-new",
      "target": "click-save",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e9",
      "source": "click-save",
      "target": "wait2",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e10",
      "source": "wait2",
      "target": "verify-saved",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ],
  "metadata": {
    "description": "Validates inline workflow title editing with save/cancel",
    "labels": {
      "reset": "full"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open BAS"
        },
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "browser-automation-studio",
          "scenario_path": "/",
          "timeout_ms": 45000,
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE"
        },
        "type": "ACTION_TYPE_NAVIGATE"
      },
      "execution_settings": {
        "wait_after_ms": 1200
      },
      "id": "nav"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/projects.card:first-of-type"
        },
        "metadata": {
          "label": "Open project"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "proj"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for workflows"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/workflows.card",
          "timeout_ms": 10000
        }
      },
      "execution_settings": {
        "wait_after_ms": 600
      },
      "id": "wait-workflows"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/workflows.card:first-of-type"
        },
        "metadata": {
          "label": "Open workflow"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "work"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "duration_ms": 3000
        }
      },
      "id": "wait1"
    },
    {
      "action": {
        "evaluate": {
          "expression": "document.querySelector('@selector/header.title.text')?.textContent?.trim() || ''",
          "store_result": "originalTitle"
        },
        "metadata": {
          "label": "Get original title"
        },
        "type": "ACTION_TYPE_EVALUATE"
      },
      "id": "get-original"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/header.title.editButton"
        },
        "metadata": {
          "label": "Click edit button"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "click-edit"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Title input should appear",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/header.title.input",
          "timeout_ms": 3000
        },
        "metadata": {
          "label": "Input visible"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-input"
    },
    {
      "action": {
        "input": {
          "clear_first": true,
          "selector": "@selector/header.title.input /*dup-1*/",
          "value": "Updated Workflow Title"
        },
        "metadata": {
          "label": "Type new title"
        },
        "type": "ACTION_TYPE_INPUT"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "type-new"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/header.title.saveButton"
        },
        "metadata": {
          "label": "Save title"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "click-save"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for save"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "duration_ms": 1500
        }
      },
      "id": "wait2"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Input should be hidden after save",
          "mode": "ASSERTION_MODE_NOT_EXISTS",
          "selector": "@selector/header.title.input /*dup-2*/",
          "timeout_ms": 3000
        },
        "metadata": {
          "label": "Input hidden"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "verify-saved"
    }
  ],
  "settings": {
    "viewport_height": 1080,
    "viewport_width": 1920
  }
}
