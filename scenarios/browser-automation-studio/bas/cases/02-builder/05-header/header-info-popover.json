{
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-dashboard",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "wait-for-dashboard",
      "target": "click-project",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "click-project",
      "target": "click-workflow",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4",
      "source": "click-workflow",
      "target": "find-info-button",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e5",
      "source": "find-info-button",
      "target": "click-info-button",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e6",
      "source": "click-info-button",
      "target": "assert-popover-visible",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e7-bridge-e8",
      "source": "assert-popover-visible",
      "target": "close-popover",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ],
  "metadata": {
    "description": "Validates that the info popover displays workflow metadata correctly",
    "labels": {
      "reset": "none"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open BAS dashboard"
        },
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "browser-automation-studio",
          "scenario_path": "/",
          "timeout_ms": 45000,
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE"
        },
        "type": "ACTION_TYPE_NAVIGATE"
      },
      "id": "navigate-dashboard"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for projects grid"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/projects.grid",
          "timeout_ms": 10000
        }
      },
      "execution_settings": {
        "wait_after_ms": 600
      },
      "id": "wait-for-dashboard"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/projects.card:first-of-type"
        },
        "metadata": {
          "label": "Open first project"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "resilience": {
          "success_selector": "@selector/workflows.card",
          "success_timeout_ms": 10000
        }
      },
      "id": "click-project"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/workflows.card:first-of-type"
        },
        "metadata": {
          "label": "Open workflow"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "resilience": {
          "success_selector": "@selector/workflowBuilder.canvas.root",
          "success_timeout_ms": 15000
        }
      },
      "id": "click-workflow"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Info button should be visible in workflow header",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/header.buttons.info",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Info button exists in header"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "find-info-button"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/header.buttons.info:not([data-dedupe=\"click\"])"
        },
        "metadata": {
          "label": "Click info button to open popover"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "resilience": {
          "success_selector": "@selector/header.info.popover",
          "success_timeout_ms": 8000
        }
      },
      "id": "click-info-button"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Info popover should appear after clicking info button",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/header.info.popover",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Info popover is visible"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-popover-visible"
    },
    {
      "action": {
        "keyboard": {
          "keys": [
            "Escape"
          ]
        },
        "metadata": {
          "label": "Close popover with Escape"
        },
        "type": "ACTION_TYPE_KEYBOARD"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "close-popover"
    }
  ],
  "settings": {
    "viewport_height": 1080,
    "viewport_width": 1920
  }
}
