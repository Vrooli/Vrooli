{
  "edges": [
    {
      "id": "e1",
      "source": "nav",
      "target": "proj",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "proj",
      "target": "wait-workflows",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "work",
      "target": "wait1",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4",
      "source": "wait1",
      "target": "assert-execute-btn",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e7",
      "source": "click-execute",
      "target": "wait-execution",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e8",
      "source": "wait-execution",
      "target": "check-feedback",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e-wait-work",
      "source": "wait-workflows",
      "target": "work",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e5-bridge-e6",
      "source": "assert-execute-btn",
      "target": "click-execute",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ],
  "metadata": {
    "description": "Validates execute button runs current workflow with feedback",
    "labels": {
      "reset": "none"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open BAS"
        },
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "browser-automation-studio",
          "scenario_path": "/",
          "timeout_ms": 45000,
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE"
        },
        "type": "ACTION_TYPE_NAVIGATE"
      },
      "execution_settings": {
        "wait_after_ms": 1200
      },
      "id": "nav"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/projects.card:first-of-type"
        },
        "metadata": {
          "label": "Open project"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "proj"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for workflows to load"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/workflows.card",
          "timeout_ms": 10000
        }
      },
      "execution_settings": {
        "wait_after_ms": 600
      },
      "id": "wait-workflows"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/workflows.card:first-of-type"
        },
        "metadata": {
          "label": "Open workflow with nodes"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "work"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for builder"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "duration_ms": 3000
        }
      },
      "id": "wait1"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Execute button should be visible",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/header.buttons.execute",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Execute button visible"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-execute-btn"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/header.buttons.execute /*dup-1*/"
        },
        "metadata": {
          "label": "Click execute"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "click-execute"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for execution to start"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "duration_ms": 2000
        }
      },
      "id": "wait-execution"
    },
    {
      "action": {
        "evaluate": {
          "expression": "(() =\u003e { const button = document.querySelector('@selector/header.buttons.execute'); if (!button) { return false; } const viewer = document.querySelector('@selector/executions.viewer.root'); return button.hasAttribute('disabled') || viewer !== null; })()",
          "store_result": "hasExecutionFeedback"
        },
        "metadata": {
          "label": "Check for execution feedback"
        },
        "type": "ACTION_TYPE_EVALUATE"
      },
      "id": "check-feedback"
    }
  ],
  "settings": {
    "viewport_height": 1080,
    "viewport_width": 1920
  }
}
