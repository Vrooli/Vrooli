{
  "metadata": {
    "description": "Validates locking and unlocking canvas to prevent/allow node interaction",
    "version": 1,
    "reset": "none"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-demo-workflow",
      "type": "subflow",
      "data": {
        "label": "Open seeded workflow via fixture",
        "workflowPath": "actions/open-demo-workflow.json",
        "params": {
              "projectName": "${@params/projectName}",
              "projectFolder": "${@params/projectFolder}",
              "workflowName": "${@params/workflowName}"
        }
      }
    },
    {
      "id": "find-lock-button",
      "type": "assert",
      "data": {
        "label": "Lock button exists",
        "selector": "@selector/toolbar.lockButton",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Lock button should exist in toolbar"
      }
    },
    {
      "id": "click-lock",
      "type": "click",
      "data": {
        "label": "Click lock to lock canvas",
        "selector": "@selector/toolbar.lockButton:not([data-dedupe=\"click\"])",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/toolbar.unlockButton",
          "successTimeoutMs": 8000
        }
      }
    },
    {
      "id": "click-unlock",
      "type": "click",
      "data": {
        "label": "Click lock to unlock canvas",
        "selector": "@selector/toolbar.unlockButton",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/toolbar.lockButton",
          "successTimeoutMs": 8000
        }
      }
    },
    {
      "id": "verify-toggle",
      "type": "evaluate",
      "data": {
        "label": "Verify lock toggle completed",
        "expression": "true",
        "storeResult": "lockToggleComplete"
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-demo-workflow-to-find-lock",
      "source": "call-open-demo-workflow",
      "target": "find-lock-button",
      "type": "smoothstep"
    },
    {
      "id": "e9-bridge-e10",
      "source": "click-lock",
      "target": "click-unlock",
      "type": "smoothstep"
    },
    {
      "id": "e7-bridge-e8",
      "source": "find-lock-button",
      "target": "click-lock",
      "type": "smoothstep"
    },
    {
      "id": "e11-bridge-e12",
      "source": "click-unlock",
      "target": "verify-toggle",
      "type": "smoothstep"
    }
  ]
}