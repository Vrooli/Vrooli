{
  "edges": [
    {
      "id": "call-open-demo-workflow-to-zoom-out-far",
      "source": "call-open-demo-workflow",
      "target": "zoom-out-far",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e5",
      "source": "zoom-out-far",
      "target": "zoom-out-more",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e8",
      "source": "click-fit-view",
      "target": "assert-nodes-visible",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e6-bridge-e7",
      "source": "zoom-out-more",
      "target": "click-fit-view",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ],
  "metadata": {
    "description": "Validates fit view centers and sizes canvas to show all nodes",
    "labels": {
      "reset": "none"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open seeded workflow via fixture"
        },
        "subflow": {
          "args": {
            "projectFolder": "${@params/projectFolder}",
            "projectName": "${@params/projectName}",
            "workflowName": "${@params/workflowName}"
          },
          "workflow_path": "actions/open-demo-workflow.json"
        },
        "type": "ACTION_TYPE_SUBFLOW"
      },
      "id": "call-open-demo-workflow"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/toolbar.zoomOutButton"
        },
        "metadata": {
          "label": "Zoom out far to offset view"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 300
      },
      "id": "zoom-out-far"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/toolbar.zoomOutButton /*dup-1*/"
        },
        "metadata": {
          "label": "Zoom out more"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 300
      },
      "id": "zoom-out-more"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/toolbar.fitViewButton, @selector/toolbar.fitViewMenuItem"
        },
        "metadata": {
          "label": "Click fit view button"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "resilience": {
          "success_selector": ".react-flow__node",
          "success_timeout_ms": 5000
        }
      },
      "id": "click-fit-view"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Nodes should be visible after fit view",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": ".react-flow__node",
          "timeout_ms": 3000
        },
        "metadata": {
          "label": "All nodes should be visible"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-nodes-visible"
    }
  ],
  "settings": {
    "viewport_height": 1080,
    "viewport_width": 1920
  }
}
