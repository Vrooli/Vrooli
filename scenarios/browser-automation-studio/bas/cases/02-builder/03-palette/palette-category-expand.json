{
  "edges": [
    {
      "id": "call-open-builder-to-wait-for-builder",
      "source": "call-open-builder",
      "target": "wait-for-builder",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e7",
      "source": "wait-for-builder",
      "target": "assert-palette-visible",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e10",
      "source": "find-category-header",
      "target": "click-first-category",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e11-bridge-e12",
      "source": "click-first-category",
      "target": "verify-category-interaction",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e8-bridge-e9",
      "source": "assert-palette-visible",
      "target": "find-category-header",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ],
  "metadata": {
    "description": "Validates node palette category expansion and collapse functionality",
    "labels": {
      "reset": "none"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open builder via fixture"
        },
        "subflow": {
          "args": {
            "projectFolder": "${@params/projectFolder}",
            "projectName": "${@params/projectName}"
          },
          "workflow_path": "actions/open-builder-from-demo.json"
        },
        "type": "ACTION_TYPE_SUBFLOW"
      },
      "id": "call-open-builder"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for workflow builder"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/workflowBuilder.code.modeButton",
          "timeout_ms": 15000
        }
      },
      "id": "wait-for-builder"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Node palette should be visible",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/nodePalette.container",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Node palette is visible"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-palette-visible"
    },
    {
      "action": {
        "evaluate": {
          "expression": "document.querySelector('@selector/nodePalette.category(category=navigation)') !== null",
          "store_result": "hasCategoryHeaders"
        },
        "metadata": {
          "label": "Check for expandable category headers"
        },
        "type": "ACTION_TYPE_EVALUATE"
      },
      "id": "find-category-header"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/nodePalette.categories.navigationToggle"
        },
        "metadata": {
          "label": "Click first category to toggle"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "continue_on_error": true,
        "wait_after_ms": 1000
      },
      "id": "click-first-category"
    },
    {
      "action": {
        "evaluate": {
          "expression": "true",
          "store_result": "categoryTestComplete"
        },
        "metadata": {
          "label": "Verify categories can be interacted with"
        },
        "type": "ACTION_TYPE_EVALUATE"
      },
      "id": "verify-category-interaction"
    }
  ],
  "settings": {
    "viewport_height": 1080,
    "viewport_width": 1920
  }
}
