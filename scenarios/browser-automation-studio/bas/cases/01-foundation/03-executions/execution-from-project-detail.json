{
  "metadata": {
    "description": "Validates workflow execution triggered from project detail view and monitors execution status",
    "version": 1,
    "reset": "none"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-workflow",
      "type": "subflow",
      "data": {
        "label": "Open seeded demo workflow via fixture",
        "workflowPath": "actions/open-demo-workflow.json",
        "params": {
              "projectName": "${@params/projectName}",
              "projectFolder": "${@params/projectFolder}"
        }
      }
    },
    {
      "id": "assert-execute-visible",
      "type": "assert",
      "data": {
        "label": "Execute button visible",
        "selector": "@selector/workflowBuilder.executeButton",
        "assertMode": "exists",
        "timeoutMs": 15000,
        "failureMessage": "Execute button should be visible once the builder has loaded"
      }
    },
    {
      "id": "click-execute",
      "type": "click",
      "data": {
        "label": "Click execute button",
        "selector": "@selector/workflowBuilder.executeButton",
        "timeoutMs": 30000,
        "waitForMs": 500,
        "resilience": {
          "successSelector": "@selector/executions.viewer.status, @selector/executions.list.item",
          "successTimeoutMs": 30000
        }
      }
    },
    {
      "id": "assert-execution-visible",
      "type": "assert",
      "data": {
        "label": "Execution indicators appear",
        "selector": "@selector/executions.viewer.status, @selector/executions.list.item, @selector/executions.viewer.stopButton",
        "assertMode": "exists",
        "timeoutMs": 30000,
        "failureMessage": "Execution status/entry should appear after executing"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "call-open-workflow",
      "target": "assert-execute-visible",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "assert-execute-visible",
      "target": "click-execute",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-execute",
      "target": "assert-execution-visible",
      "type": "smoothstep"
    }
  ]
}
