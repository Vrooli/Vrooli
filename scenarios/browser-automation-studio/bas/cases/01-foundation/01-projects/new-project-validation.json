  "metadata": {
    "description": "Validates that project creation form displays appropriate error messages for invalid inputs",
    "labels": {
      "reset": "none"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open BAS dashboard"
        },
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "browser-automation-studio",
          "scenario_path": "/",
          "timeout_ms": 45000,
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE"
        },
        "type": "ACTION_TYPE_NAVIGATE"
      },
      "id": "navigate-dashboard"
    },
    {
      "action": {
        "metadata": {
          "label": "Dismiss onboarding tutorial if present"
        },
        "subflow": {
          "workflow_path": "actions/dismiss-tutorial.json"
        },
        "type": "ACTION_TYPE_SUBFLOW"
      },
      "id": "dismiss-tutorial"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/dashboard.tabs.projects"
        },
        "metadata": {
          "label": "Navigate to Projects tab"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "click-projects-tab"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for new project button"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/dashboard.newProjectButton",
          "timeout_ms": 15000
        }
      },
      "execution_settings": {
        "wait_after_ms": 600
      },
      "id": "wait-for-projects"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/dashboard.newProjectButton"
        },
        "metadata": {
          "label": "Open new project modal"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "click-new-project"
    },
    {
      "action": {
        "assert": {
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/dialogs.project.root",
          "timeout_ms": 10000
        },
        "metadata": {
          "label": "Project modal visible"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-modal-visible"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/dialogs.project.submitButton"
        },
        "metadata": {
          "label": "Try submitting empty form"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "submit-empty-form"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Form should display error when project name is empty",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/dialogs.project.nameError:not([data-dedupe=\"required\"])",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Name required error appears"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-name-required-error"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Modal should stay open when validation fails",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/dialogs.project.root /*dup-1*/",
          "timeout_ms": 3000
        },
        "metadata": {
          "label": "Modal remains open"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-modal-still-open-1"
    },
    {
      "action": {
        "input": {
          "clear_first": true,
          "selector": "@selector/dialogs.project.nameInput",
          "value": "   "
        },
        "metadata": {
          "label": "Enter whitespace-only name"
        },
        "type": "ACTION_TYPE_INPUT"
      },
      "execution_settings": {
        "wait_after_ms": 300
      },
      "id": "fill-whitespace-only-name"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/dialogs.project.submitButton /*dup-1*/"
        },
        "metadata": {
          "label": "Submit whitespace-only name"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "submit-whitespace-name"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Form should reject whitespace-only project names",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/dialogs.project.nameError:not([data-dedupe=\"invalid\"])",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Invalid name error appears"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-invalid-name-error"
    },
    {
      "action": {
        "assert": {
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/dialogs.project.root /*dup-2*/",
          "timeout_ms": 3000
        },
        "metadata": {
          "label": "Modal remains open"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-modal-still-open-2"
    },
    {
      "action": {
        "input": {
          "clear_first": true,
          "selector": "@selector/dialogs.project.nameInput /*dup-1*/",
          "value": "This is an extremely long project name that exceeds reasonable character limits and should be rejected by the validation logic because it is far too verbose for practical use in the user interface"
        },
        "metadata": {
          "label": "Enter excessively long name"
        },
        "type": "ACTION_TYPE_INPUT"
      },
      "execution_settings": {
        "wait_after_ms": 300
      },
      "id": "fill-very-long-name"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/dialogs.project.submitButton /*dup-2*/"
        },
        "metadata": {
          "label": "Submit long name"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "id": "submit-long-name"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Form should reject overly long project names",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/dialogs.project.nameError:not([data-dedupe=\"length\"])",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Length error appears"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-length-error"
    }
  ],
  "settings": {
    "viewport_height": 900,
    "viewport_width": 1440
  }
}
