{
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "dismiss-tutorial",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e1a",
      "source": "dismiss-tutorial",
      "target": "click-projects-tab",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e1b",
      "source": "click-projects-tab",
      "target": "assert-projects-visible",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "assert-projects-visible",
      "target": "assert-project-cards-exist",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e6",
      "source": "click-first-project",
      "target": "assert-project-detail-visible",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e7",
      "source": "assert-project-detail-visible",
      "target": "assert-url-changed",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4-bridge-e5",
      "source": "assert-project-cards-exist",
      "target": "click-first-project",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ],
  "metadata": {
    "description": "Validates that projects are listed correctly and can be selected to navigate to project detail view",
    "labels": {
      "reset": "none"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open BAS dashboard"
        },
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "browser-automation-studio",
          "scenario_path": "/",
          "timeout_ms": 45000,
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE"
        },
        "type": "ACTION_TYPE_NAVIGATE"
      },
      "id": "navigate-dashboard"
    },
    {
      "action": {
        "metadata": {
          "label": "Dismiss onboarding tutorial if present"
        },
        "subflow": {
          "workflow_path": "actions/dismiss-tutorial.json"
        },
        "type": "ACTION_TYPE_SUBFLOW"
      },
      "id": "dismiss-tutorial"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/dashboard.tabs.projects"
        },
        "metadata": {
          "label": "Navigate to Projects tab"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "click-projects-tab"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Projects grid should be visible on dashboard",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/projects.grid /*dup-1*/",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Projects grid is visible"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-projects-visible"
    },
    {
      "action": {
        "assert": {
          "failure_message": "At least one project should be visible in the grid",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/projects.card",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "At least one project card exists"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-project-cards-exist"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/projects.card:first-of-type"
        },
        "metadata": {
          "label": "Click first project card"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "resilience": {
          "success_selector": "@selector/workflows.card",
          "success_timeout_ms": 15000
        }
      },
      "id": "click-first-project"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Project detail heading should render after selecting a project",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "h1, [role=\"heading\"]",
          "timeout_ms": 5000
        },
        "metadata": {
          "label": "Project detail heading appears"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "assert-project-detail-visible"
    },
    {
      "action": {
        "evaluate": {
          "expression": "window.location.pathname.includes('/projects/')",
          "store_result": "urlChanged"
        },
        "metadata": {
          "label": "Verify URL contains /projects/"
        },
        "type": "ACTION_TYPE_EVALUATE"
      },
      "id": "assert-url-changed"
    }
  ],
  "settings": {
    "viewport_height": 900,
    "viewport_width": 1440
  }
}
