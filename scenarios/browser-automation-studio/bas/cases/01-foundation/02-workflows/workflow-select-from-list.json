{
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "dismiss-tutorial",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e1a",
      "source": "dismiss-tutorial",
      "target": "click-projects-tab",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e1b",
      "source": "click-projects-tab",
      "target": "wait-for-dashboard",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "wait-for-dashboard",
      "target": "click-project",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e3",
      "source": "click-project",
      "target": "ensure-on-workflows-tab",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e4",
      "source": "ensure-on-workflows-tab",
      "target": "check-workflows-exist",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e9",
      "source": "click-first-workflow",
      "target": "verify-url-changed",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e10",
      "source": "verify-url-changed",
      "target": "wait-for-builder-mount",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e10a",
      "source": "wait-for-builder-mount",
      "target": "verify-builder-loaded",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e7-bridge-e8",
      "source": "check-workflows-exist",
      "target": "click-first-workflow",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ],
  "metadata": {
    "description": "Validates that workflows can be selected from project detail list and loaded into the builder",
    "labels": {
      "reset": "none"
    },
    "version": "1"
  },
  "nodes": [
    {
      "action": {
        "metadata": {
          "label": "Open BAS dashboard"
        },
        "navigate": {
          "destination_type": "NAVIGATE_DESTINATION_TYPE_SCENARIO",
          "scenario": "browser-automation-studio",
          "scenario_path": "/",
          "timeout_ms": 45000,
          "wait_until": "NAVIGATE_WAIT_EVENT_NETWORKIDLE"
        },
        "type": "ACTION_TYPE_NAVIGATE"
      },
      "id": "navigate-dashboard"
    },
    {
      "action": {
        "metadata": {
          "label": "Dismiss onboarding tutorial if present"
        },
        "subflow": {
          "workflow_path": "actions/dismiss-tutorial.json"
        },
        "type": "ACTION_TYPE_SUBFLOW"
      },
      "id": "dismiss-tutorial"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/dashboard.tabs.projects"
        },
        "metadata": {
          "label": "Navigate to Projects tab"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "wait_after_ms": 500
      },
      "id": "click-projects-tab"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for dashboard"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "selector": "@selector/projects.grid",
          "timeout_ms": 10000
        }
      },
      "execution_settings": {
        "wait_after_ms": 600
      },
      "id": "wait-for-dashboard"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/projects.card:first-of-type"
        },
        "metadata": {
          "label": "Open first project"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "resilience": {
          "success_selector": "@selector/workflows.card",
          "success_timeout_ms": 15000
        }
      },
      "id": "click-project"
    },
    {
      "action": {
        "evaluate": {
          "expression": "document.querySelector('@selector/workflows.card, @selector/workflowBuilder.search.input, @selector/toolbar.root') !== null",
          "store_result": "onWorkflowsTab"
        },
        "metadata": {
          "label": "Check if on workflows tab"
        },
        "type": "ACTION_TYPE_EVALUATE"
      },
      "id": "ensure-on-workflows-tab"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Workflows should be visible after opening a project",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/workflows.card",
          "timeout_ms": 15000
        },
        "metadata": {
          "label": "Verify workflows are listed"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "check-workflows-exist"
    },
    {
      "action": {
        "click": {
          "selector": "@selector/workflows.card:first-of-type"
        },
        "metadata": {
          "label": "Click first workflow in list"
        },
        "type": "ACTION_TYPE_CLICK"
      },
      "execution_settings": {
        "resilience": {
          "success_selector": "@selector/workflowBuilder.reactFlowReady",
          "success_timeout_ms": 20000
        }
      },
      "id": "click-first-workflow"
    },
    {
      "action": {
        "evaluate": {
          "expression": "window.location.pathname.includes('/workflows/')",
          "store_result": "urlChanged"
        },
        "metadata": {
          "label": "Verify URL contains /workflows/"
        },
        "type": "ACTION_TYPE_EVALUATE"
      },
      "id": "verify-url-changed"
    },
    {
      "action": {
        "metadata": {
          "label": "Wait for React Flow to mount and initialize"
        },
        "type": "ACTION_TYPE_WAIT",
        "wait": {
          "duration_ms": 2000
        }
      },
      "id": "wait-for-builder-mount"
    },
    {
      "action": {
        "assert": {
          "failure_message": "Workflow builder should render after selecting a workflow",
          "mode": "ASSERTION_MODE_EXISTS",
          "selector": "@selector/workflowBuilder.reactFlowReady",
          "timeout_ms": 20000
        },
        "metadata": {
          "label": "Verify builder elements exist"
        },
        "type": "ACTION_TYPE_ASSERT"
      },
      "id": "verify-builder-loaded"
    }
  ],
  "settings": {
    "viewport_height": 1080,
    "viewport_width": 1920
  }
}
