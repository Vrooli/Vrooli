{
  "metadata": {
    "description": "Ensures the demo project and default workflow remain available after boot.",
    "requirement": "BAS-WORKFLOW-DEMO-SEED",
    "version": 2
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 60000,
        "waitForMs": 500
      }
    },
    {
      "id": "capture-dashboard",
      "type": "screenshot",
      "position": {
        "x": 300,
        "y": -60
      },
      "data": {
        "label": "Capture dashboard",
        "fullPage": true,
        "captureDomSnapshot": true,
        "waitForMs": 1000
      }
    },
    {
      "id": "assert-demo-project",
      "type": "assert",
      "position": {
        "x": 500,
        "y": -40
      },
      "data": {
        "label": "Demo project card exists",
        "selector": "@selector/projects.card[data-project-name=\"Demo Browser Automations\"]:where(:not(:root))",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Demo Browser Automations project card should be visible on dashboard"
      }
    },
    {
      "id": "click-demo-card",
      "type": "click",
      "position": {
        "x": 680,
        "y": 20
      },
      "data": {
        "label": "Open demo project",
        "selector": "@selector/projects.card[data-project-name=\"Demo Browser Automations\"]",
        "waitForSelector": "@selector/projects.card[data-project-name=\"Demo Browser Automations\"]",
        "timeoutMs": 10000,
        "resilience": {
          "successSelector": "@selector/workflows.card",
          "successTimeoutMs": 15000
        }
      }
    },
    {
      "id": "assert-demo-workflow",
      "type": "assert",
      "position": {
        "x": 920,
        "y": 120
      },
      "data": {
        "label": "Demo workflow visible",
        "selector": "div[data-workflow-header] h3[title=\"Demo: Capture Example.com Hero\"]",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Expected demo workflow card to appear inside project detail"
      }
    }
  ],
  "edges": [
    {
      "id": "edge-nav-capture",
      "source": "navigate-dashboard",
      "target": "capture-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "edge-capture-assert",
      "source": "capture-dashboard",
      "target": "assert-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "edge-assert-click",
      "source": "assert-demo-project",
      "target": "click-demo-card",
      "type": "smoothstep"
    },
    {
      "id": "edge-click-wait",
      "source": "click-demo-card",
      "target": "assert-demo-workflow",
      "type": "smoothstep"
    }
  ]
}
