{
  "metadata": {
    "description": "Ensures the demo project and default workflow remain available after boot.",
    "requirement": "BAS-WORKFLOW-DEMO-SEED",
    "version": 2
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 60000,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-app-ready",
      "type": "wait",
      "position": {
        "x": 140,
        "y": -80
      },
      "data": {
        "label": "Wait for React app to hydrate",
        "waitType": "element",
        "selector": "[data-testid=\"app-ready\"]",
        "timeoutMs": 30000,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-for-demo-project",
      "type": "wait",
      "position": {
        "x": 280,
        "y": -120
      },
      "data": {
        "label": "Wait for demo project card",
        "waitType": "element",
        "selector": "[data-project-name=\"Demo Browser Automations\"][data-testid=\"project-card\"]",
        "timeoutMs": 20000,
        "waitForMs": 1500
      }
    },
    {
      "id": "debug-screenshot-1",
      "type": "screenshot",
      "position": {
        "x": 420,
        "y": -140
      },
      "data": {
        "label": "Debug: Before assertion",
        "fullPage": true,
        "captureDomSnapshot": true,
        "waitForMs": 500
      }
    },
    {
      "id": "capture-dashboard",
      "type": "screenshot",
      "position": {
        "x": 420,
        "y": -60
      },
      "data": {
        "label": "Capture dashboard",
        "fullPage": true,
        "captureDomSnapshot": true,
        "waitForMs": 1000
      }
    },
    {
      "id": "assert-demo-project",
      "type": "assert",
      "position": {
        "x": 500,
        "y": -40
      },
      "data": {
        "label": "Demo project card exists",
        "selector": "[data-testid=\"project-card\"][data-project-name=\"Demo Browser Automations\"]:where(:not(:root))",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Demo Browser Automations project card should be visible on dashboard"
      }
    },
    {
      "id": "click-demo-card",
      "type": "click",
      "position": {
        "x": 680,
        "y": 20
      },
      "data": {
        "label": "Open demo project",
        "selector": "[data-testid=\"project-card\"][data-project-name=\"Demo Browser Automations\"]",
        "waitForSelector": "[data-testid=\"project-card\"][data-project-name=\"Demo Browser Automations\"]",
        "timeoutMs": 10000,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-project",
      "type": "wait",
      "position": {
        "x": 820,
        "y": 80
      },
      "data": {
        "label": "Wait for project detail",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-demo-workflow",
      "type": "assert",
      "position": {
        "x": 1020,
        "y": 120
      },
      "data": {
        "label": "Demo workflow visible",
        "selector": "div[data-workflow-header] h3[title=\"Demo: Capture Example.com Hero\"]",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Expected demo workflow card to appear inside project detail"
      }
    }
  ],
  "edges": [
    {
      "id": "edge-nav-app-ready",
      "source": "navigate-dashboard",
      "target": "wait-app-ready",
      "type": "smoothstep"
    },
    {
      "id": "edge-app-ready-wait-project",
      "source": "wait-app-ready",
      "target": "wait-for-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "edge-wait-debug",
      "source": "wait-for-demo-project",
      "target": "debug-screenshot-1",
      "type": "smoothstep"
    },
    {
      "id": "edge-debug-capture",
      "source": "debug-screenshot-1",
      "target": "capture-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "edge-capture-assert",
      "source": "capture-dashboard",
      "target": "assert-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "edge-assert-click",
      "source": "assert-demo-project",
      "target": "click-demo-card",
      "type": "smoothstep"
    },
    {
      "id": "edge-click-wait",
      "source": "click-demo-card",
      "target": "wait-project",
      "type": "smoothstep"
    },
    {
      "id": "edge-wait-assert",
      "source": "wait-project",
      "target": "assert-demo-workflow",
      "type": "smoothstep"
    }
  ]
}
