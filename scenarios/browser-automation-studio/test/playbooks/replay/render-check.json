{
  "metadata": {
    "description": "Validates that execution replay artifacts are persisted and can be accessed for rendering",
    "requirement": "BAS-REPLAY-TIMELINE-PERSISTENCE",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-app-ready",
      "type": "wait",
      "position": {
        "x": 140,
        "y": -80
      },
      "data": {
        "label": "Wait for React app to hydrate",
        "waitType": "element",
        "selector": "@selector/app.shell.ready",
        "timeoutMs": 30000,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-for-demo-project",
      "type": "wait",
      "position": {
        "x": 280,
        "y": 0
      },
      "data": {
        "label": "Wait for demo project",
        "selector": "[data-project-name=\"Demo Browser Automations\"]@selector/projects.card",
        "timeoutMs": 15000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-demo-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open demo project",
        "selector": "@selector/projects.card[data-project-name=\"Demo Browser Automations\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000
      }
    },
    {
      "id": "wait-for-workflow",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for demo workflow",
        "selector": "div[data-workflow-header], h3[title]",
        "timeoutMs": 30000,
        "waitForMs": 2000,
        "waitType": "element"
      }
    },
    {
      "id": "click-execute",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Execute workflow",
        "selector": "@selector/workflowBuilder.executeButton",
        "timeoutMs": 10000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-execution",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for execution to complete",
        "durationMs": 35000,
        "waitType": "duration"
      }
    },
    {
      "id": "debug-screenshot-pre-assert",
      "type": "screenshot",
      "position": {
        "x": 1140,
        "y": -80
      },
      "data": {
        "label": "Debug: Capture state before assertion",
        "fullPage": true,
        "captureDomSnapshot": true,
        "waitForMs": 500
      }
    },
    {
      "id": "assert-execution-complete",
      "type": "assert",
      "position": {
        "x": 1280,
        "y": -60
      },
      "data": {
        "label": "Execution finished",
        "selector": "@selector/executions.viewer.statusCompleted, @selector/executions.viewer.statusFailed, @selector/executions.viewer.statusCancelled",
        "assertMode": "exists",
        "timeoutMs": 45000,
        "failureMessage": "Execution should reach terminal state (completed, failed, or cancelled)"
      }
    }
  ],
  "edges": [
    {
      "id": "e0",
      "source": "navigate-dashboard",
      "target": "wait-app-ready",
      "type": "smoothstep"
    },
    {
      "id": "e1",
      "source": "wait-app-ready",
      "target": "wait-for-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-demo-project",
      "target": "click-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-demo-project",
      "target": "wait-for-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-workflow",
      "target": "click-execute",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "click-execute",
      "target": "wait-for-execution",
      "type": "smoothstep"
    },
    {
      "id": "e5a",
      "source": "wait-for-execution",
      "target": "debug-screenshot-pre-assert",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "debug-screenshot-pre-assert",
      "target": "assert-execution-complete",
      "type": "smoothstep"
    }
  ]
}
