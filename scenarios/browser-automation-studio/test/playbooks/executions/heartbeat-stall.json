{
  "metadata": {
    "description": "Validates that execution heartbeat monitoring detects stalls and displays appropriate warnings",
    "requirement": "BAS-EXEC-HEARTBEAT-DETECTION",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "position": {
        "x": 300,
        "y": 0
      },
      "data": {
        "label": "Open demo project via fixture",
        "workflowId": "@fixture/open-demo-project"
      }
    },
    {
      "id": "click-execute-workflow",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Execute workflow",
        "selector": "@selector/workflowBuilder.executeButton",
        "timeoutMs": 10000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-execution-start",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for execution to start",
        "selector": "@selector/executions.viewer.root",
        "timeoutMs": 15000,
        "waitForMs": 2000,
        "waitType": "element"
      }
    },
    {
      "id": "wait-for-heartbeat-lag",
      "type": "wait",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Wait for heartbeat monitoring",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-heartbeat-indicator",
      "type": "assert",
      "position": {
        "x": 1400,
        "y": -60
      },
      "data": {
        "label": "Execution viewer functional",
        "selector": "@selector/executions.viewer.root:where(:not(:root))",
        "assertMode": "exists",
        "timeoutMs": 10000,
        "failureMessage": "Execution viewer should render"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "call-open-project",
      "target": "click-execute-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "click-execute-workflow",
      "target": "wait-for-execution-start",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "wait-for-execution-start",
      "target": "wait-for-heartbeat-lag",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "wait-for-heartbeat-lag",
      "target": "assert-heartbeat-indicator",
      "type": "smoothstep"
    }
  ]
}
