{
  "metadata": {
    "description": "Validates that execution heartbeat monitoring detects stalls and displays appropriate warnings",
    "requirement": "BAS-EXEC-HEARTBEAT-DETECTION",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-demo-project",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for demo project",
        "selector": "[data-testid=\"project-card\"][data-project-name=\"Demo Browser Automations\"]",
        "timeoutMs": 15000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-demo-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open demo project",
        "selector": "[data-testid=\"project-card\"][data-project-name=\"Demo Browser Automations\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000
      }
    },
    {
      "id": "wait-for-workflow-list",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for workflow list",
        "selector": "div[data-workflow-header]",
        "timeoutMs": 15000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-execute-workflow",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Execute workflow",
        "selector": "[data-testid=\"workflow-execute-button\"]",
        "timeoutMs": 10000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-execution-start",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for execution to start",
        "selector": "[data-testid=\"execution-viewer\"]",
        "timeoutMs": 15000,
        "waitForMs": 2000,
        "waitType": "element"
      }
    },
    {
      "id": "wait-for-heartbeat-lag",
      "type": "wait",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Wait for heartbeat monitoring",
        "durationMs": 2000
      }
    },
    {
      "id": "assert-heartbeat-indicator",
      "type": "assert",
      "position": {
        "x": 1400,
        "y": -60
      },
      "data": {
        "label": "Execution viewer functional",
        "selector": "[data-testid=\"execution-viewer\"]",
        "assertMode": "exists",
        "timeoutMs": 10000,
        "failureMessage": "Execution viewer should render"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-demo-project",
      "target": "click-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-demo-project",
      "target": "wait-for-workflow-list",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-workflow-list",
      "target": "click-execute-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "click-execute-workflow",
      "target": "wait-for-execution-start",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "wait-for-execution-start",
      "target": "wait-for-heartbeat-lag",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "wait-for-heartbeat-lag",
      "target": "assert-heartbeat-indicator",
      "type": "smoothstep"
    }
  ]
}
