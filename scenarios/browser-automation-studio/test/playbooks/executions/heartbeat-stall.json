{
  "metadata": {
    "description": "Validates that execution heartbeat monitoring detects stalls and displays appropriate warnings",
    "requirement": "BAS-EXEC-HEARTBEAT-DETECTION",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "data": {
        "label": "Open demo project via fixture",
        "workflowId": "@fixture/open-demo-project"
      }
    },
    {
      "id": "click-execute-workflow",
      "type": "click",
      "data": {
        "label": "Execute workflow",
        "selector": "@selector/workflowBuilder.executeButton",
        "timeoutMs": 10000,
        "resilience": {
          "successSelector": "@selector/executions.viewer.root",
          "successTimeoutMs": 15000
        }
      }
    },
    {
      "id": "assert-heartbeat-indicator",
      "type": "assert",
      "data": {
        "label": "Execution viewer functional",
        "selector": "@selector/executions.viewer.root:where(:not(:root))",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Execution viewer should render"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "call-open-project",
      "target": "click-execute-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "click-execute-workflow",
      "target": "assert-heartbeat-indicator",
      "type": "smoothstep"
    }
  ]
}
