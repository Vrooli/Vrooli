{
  "metadata": {
    "description": "Validates that workflow execution produces telemetry artifacts (screenshots, logs, progress updates)",
    "requirement": "BAS-EXEC-TELEMETRY-STREAM",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-demo-project",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for demo project card",
        "selector": "[data-project-name=\"Demo Browser Automations\"]@selector/projectCard",
        "timeoutMs": 15000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-demo-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open demo project",
        "selector": "@selector/projectCard[data-project-name=\"Demo Browser Automations\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000
      }
    },
    {
      "id": "wait-for-demo-workflow",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for demo workflow",
        "selector": "div[data-workflow-header]",
        "timeoutMs": 15000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-execute-workflow",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Execute demo workflow",
        "selector": "@selector/workflowExecuteButton",
        "timeoutMs": 10000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-execution-viewer",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for execution viewer",
        "selector": "@selector/executionViewer",
        "timeoutMs": 20000,
        "waitForMs": 2000,
        "waitType": "element"
      }
    },
    {
      "id": "assert-execution-progress",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": -60
      },
      "data": {
        "label": "Execution progress visible",
        "selector": "@selector/executionStatus, @selector/heartbeatIndicator",
        "assertMode": "exists",
        "timeoutMs": 10000,
        "failureMessage": "Execution should display progress indicator"
      }
    },
    {
      "id": "assert-execution-has-status",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Execution has status indicator",
        "selector": "@selector/executionStatus",
        "assertMode": "exists",
        "timeoutMs": 10000,
        "failureMessage": "Execution viewer should display execution status"
      }
    },
    {
      "id": "assert-viewer-functional",
      "type": "assert",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Execution viewer is functional",
        "selector": "@selector/executionTabLogs, @selector/executionTabScreenshots",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Execution viewer should render with tabs"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-demo-project",
      "target": "click-demo-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-demo-project",
      "target": "wait-for-demo-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-demo-workflow",
      "target": "click-execute-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "click-execute-workflow",
      "target": "wait-for-execution-viewer",
      "type": "smoothstep"
    },
    {
      "id": "e6a",
      "source": "wait-for-execution-viewer",
      "target": "assert-execution-progress",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "assert-execution-progress",
      "target": "assert-execution-has-status",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "assert-execution-has-status",
      "target": "assert-viewer-functional",
      "type": "smoothstep"
    }
  ]
}
