{
  "metadata": {
    "description": "Simple navigation test using direct URL instead of scenario",
    "requirement": "BAS-EXAMPLE-SIMPLE-NAV",
    "version": 1
  },
  "nodes": [
    {
      "id": "navigate-google",
      "type": "navigate",
      "data": {
        "label": "Navigate to Google",
        "destinationType": "url",
        "url": "https://www.google.com",
        "waitUntil": "networkidle2",
        "timeoutMs": 30000,
        "waitForMs": 3000
      }
    },
    {
      "id": "assert-google",
      "type": "assert",
      "data": {
        "label": "Google body renders",
        "selector": "body",
        "assertMode": "exists",
        "timeoutMs": 10000,
        "failureMessage": "Expected Google homepage to load"
      }
    }
  ],
  "edges": [
    {
      "id": "edge-nav-assert",
      "source": "navigate-google",
      "target": "assert-google",
      "type": "smoothstep"
    }
  ]
}
