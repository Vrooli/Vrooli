{
  "metadata": {
    "description": "Validates that workflow execution produces telemetry artifacts (screenshots, logs, progress updates)",
    "requirement": "BAS-EXEC-TELEMETRY-STREAM",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "data": {
        "label": "Open Demo project via fixture",
        "workflowId": "@fixture/open-demo-project(projectName=@seed/projectName, projectFolder=@seed/projectFolder)"
      }
    },
    {
      "id": "click-execute-workflow",
      "type": "click",
      "data": {
        "label": "Execute demo workflow",
        "selector": "@selector/workflowBuilder.executeButton",
        "timeoutMs": 10000,
        "resilience": {
          "successSelector": "@selector/executions.viewer.status",
          "successTimeoutMs": 15000
        }
      }
    },
    {
      "id": "assert-execution-progress",
      "type": "assert",
      "data": {
        "label": "Execution progress visible",
        "selector": "@selector/executions.viewer.status, @selector/heartbeat.indicator",
        "assertMode": "exists",
        "timeoutMs": 10000,
        "failureMessage": "Execution should display progress indicator"
      }
    },
    {
      "id": "assert-execution-has-status",
      "type": "assert",
      "data": {
        "label": "Execution has status indicator",
        "selector": "@selector/executions.viewer.status",
        "assertMode": "exists",
        "timeoutMs": 10000,
        "failureMessage": "Execution viewer should display execution status"
      }
    },
    {
      "id": "assert-viewer-functional",
      "type": "assert",
      "data": {
        "label": "Execution viewer is functional",
        "selector": "@selector/executions.tabs.logs, @selector/executions.tabs.screenshots",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Execution viewer should render with tabs"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "call-open-project",
      "target": "click-execute-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "click-execute-workflow",
      "target": "assert-execution-progress",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "assert-execution-progress",
      "target": "assert-execution-has-status",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "assert-execution-has-status",
      "target": "assert-viewer-functional",
      "type": "smoothstep"
    }
  ]
}
