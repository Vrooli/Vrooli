{
  "metadata": {
    "description": "Validates the 'Switch to Manual Builder' button in AI modal creates an empty workflow and loads the builder",
    "version": 1,
    "reset": "none"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 1200
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "data": {
        "label": "Open first project",
        "selector": "@selector/projects.card:first-of-type",
        "timeoutMs": 10000,
        "waitForMs": 500
      }
    },
    {
      "id": "click-new-workflow",
      "type": "click",
      "data": {
        "label": "Click New Workflow button",
        "selector": "@selector/workflows.newButton",
        "timeoutMs": 10000
      }
    },
    {
      "id": "assert-ai-modal-visible",
      "type": "assert",
      "data": {
        "label": "AI modal is visible",
        "selector": "[role=\"dialog\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "AI modal should appear"
      }
    },
    {
      "id": "click-manual-button",
      "type": "click",
      "data": {
        "label": "Click Switch to Manual Builder",
        "selector": "@selector/ai.modal.switchToManualButton",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/workflowBuilder.canvas.root",
          "successTimeoutMs": 15000,
          "successWaitMs": 500
        }
      }
    },
    {
      "id": "assert-modal-closed",
      "type": "assert",
      "data": {
        "label": "AI modal is closed",
        "selector": "[role=\"dialog\"] h2",
        "assertMode": "not_exists",
        "timeoutMs": 5000,
        "failureMessage": "AI modal should close after clicking manual builder button"
      }
    },
    {
      "id": "assert-builder-visible",
      "type": "assert",
      "data": {
        "label": "Workflow builder canvas is visible",
        "selector": "@selector/workflowBuilder.canvas.root",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Workflow builder should load after switching to manual"
      }
    },
    {
      "id": "verify-url-changed",
      "type": "evaluate",
      "data": {
        "label": "Verify URL changed to workflow view",
        "expression": "window.location.pathname.includes('/workflows/')",
        "storeResult": "urlChangedToWorkflow"
      }
    },
    {
      "id": "assert-palette-visible",
      "type": "assert",
      "data": {
        "label": "Node palette is visible",
        "selector": "@selector/nodePalette.container",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Node palette should be visible in builder"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "click-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-project",
      "target": "click-new-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "click-new-workflow",
      "target": "assert-ai-modal-visible",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "click-manual-button",
      "target": "assert-modal-closed",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "assert-modal-closed",
      "target": "assert-builder-visible",
      "type": "smoothstep"
    },
    {
      "id": "e14",
      "source": "assert-builder-visible",
      "target": "verify-url-changed",
      "type": "smoothstep"
    },
    {
      "id": "e15",
      "source": "verify-url-changed",
      "target": "assert-palette-visible",
      "type": "smoothstep"
    },
    {
      "id": "e7-bridge-e9",
      "source": "assert-ai-modal-visible",
      "target": "click-manual-button",
      "type": "smoothstep"
    }
  ]
}
