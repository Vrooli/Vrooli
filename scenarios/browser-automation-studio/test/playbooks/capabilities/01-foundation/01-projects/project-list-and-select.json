{
  "metadata": {
    "description": "Validates that projects are listed correctly and can be selected to navigate to project detail view",
    "version": 1,
    "reset": "project"
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "assert-projects-visible",
      "type": "assert",
      "data": {
        "label": "Projects grid is visible",
        "selector": "@selector/projects.grid /*dup-1*/",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Projects grid should be visible on dashboard"
      }
    },
    {
      "id": "assert-project-cards-exist",
      "type": "assert",
      "data": {
        "label": "At least one project card exists",
        "selector": "@selector/projects.card",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "At least one project should be visible in the grid"
      }
    },
    {
      "id": "capture-dashboard",
      "type": "screenshot",
      "data": {
        "label": "Capture dashboard with projects",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-first-project",
      "type": "click",
      "data": {
        "label": "Click first project card",
        "selector": "@selector/projects.card:first-of-type",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/workflows.card",
          "successTimeoutMs": 15000
        }
      }
    },
    {
      "id": "assert-project-detail-visible",
      "type": "assert",
      "data": {
        "label": "Project detail heading appears",
        "selector": "h1, [role=\"heading\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Project detail heading should render after selecting a project"
      }
    },
    {
      "id": "assert-url-changed",
      "type": "evaluate",
      "data": {
        "label": "Verify URL contains /projects/",
        "expression": "window.location.pathname.includes('/projects/')",
        "storeAs": "urlChanged"
      }
    },
    {
      "id": "capture-project-detail",
      "type": "screenshot",
      "data": {
        "label": "Capture project detail view",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "assert-projects-visible",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "assert-projects-visible",
      "target": "assert-project-cards-exist",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "assert-project-cards-exist",
      "target": "capture-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "capture-dashboard",
      "target": "click-first-project",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "click-first-project",
      "target": "assert-project-detail-visible",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "assert-project-detail-visible",
      "target": "assert-url-changed",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "assert-url-changed",
      "target": "capture-project-detail",
      "type": "smoothstep"
    }
  ]
}
