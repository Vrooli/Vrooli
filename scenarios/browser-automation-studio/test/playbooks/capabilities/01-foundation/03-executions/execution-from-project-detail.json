{
  "metadata": {
    "description": "Validates workflow execution triggered from project detail view and monitors execution status",
    "version": 1,
    "reset": "none"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "data": {
        "label": "Open Demo project via fixture",
        "workflowId": "@fixture/open-demo-project(projectName=@seed/projectName, projectFolder=@seed/projectFolder)"
      }
    },
    {
      "id": "capture-before-execution",
      "type": "screenshot",
      "data": {
        "label": "Capture workflow list before execution",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "hover-workflow-card",
      "type": "hover",
      "data": {
        "label": "Hover over workflow card to reveal actions",
        "selector": "@selector/workflows.card:first-of-type",
        "timeoutMs": 3000,
        "waitForMs": 1000
      }
    },
    {
      "id": "click-execute",
      "type": "click",
      "data": {
        "label": "Click execute button",
        "selector": "@selector/workflowBuilder.executeButton:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "check-execution-indicator",
      "type": "evaluate",
      "data": {
        "label": "Check for execution indicators",
        "expression": "document.querySelector('@selector/executions.list.item, @selector/executions.viewer.status, @selector/executions.viewer.stopButton)') !== null",
        "storeAs": "executionStarted"
      }
    },
    {
      "id": "capture-execution-started",
      "type": "screenshot",
      "data": {
        "label": "Capture execution in progress",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "capture-final-state",
      "type": "screenshot",
      "data": {
        "label": "Capture final state",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-project-to-capture-before-execution",
      "source": "call-open-project",
      "target": "capture-before-execution",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "capture-before-execution",
      "target": "hover-workflow-card",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "hover-workflow-card",
      "target": "click-execute",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-execute",
      "target": "check-execution-indicator",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "check-execution-indicator",
      "target": "capture-execution-started",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "capture-execution-started",
      "target": "capture-final-state",
      "type": "smoothstep"
    }
  ]
}
