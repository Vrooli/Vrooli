{
  "metadata": {
    "description": "Validates workflow execution triggered from project detail view and monitors execution status",
    "version": 1,
    "reset": "none"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "data": {
        "label": "Open Demo project via fixture",
        "workflowId": "@fixture/open-demo-project(projectName=@seed/projectName, projectFolder=@seed/projectFolder)"
      }
    },
    {
      "id": "hover-workflow-card",
      "type": "hover",
      "data": {
        "label": "Hover over workflow card to reveal actions",
        "selector": "@selector/workflows.card:first-of-type",
        "timeoutMs": 3000,
        "waitForMs": 300
      }
    },
    {
      "id": "click-execute",
      "type": "click",
      "data": {
        "label": "Click execute button",
        "selector": "@selector/workflowBuilder.executeButton:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "check-execution-indicator",
      "type": "evaluate",
      "data": {
        "label": "Check for execution indicators",
        "expression": "document.querySelector('@selector/executions.list.item, @selector/executions.viewer.status, @selector/executions.viewer.stopButton') !== null",
        "storeResult": "executionStarted"
      }
    }
  ],
  "edges": [
    {
      "id": "e7",
      "source": "hover-workflow-card",
      "target": "click-execute",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-execute",
      "target": "check-execution-indicator",
      "type": "smoothstep"
    },
    {
      "id": "call-open-project-to-capture-before-execution-bridge-e6",
      "source": "call-open-project",
      "target": "hover-workflow-card",
      "type": "smoothstep"
    }
  ]
}
