{
  "metadata": {
    "description": "Validates workflow creation via AI modal and loading into the workflow builder",
    "version": 1,
    "reset": "full"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000
      }
    },
    {
      "id": "wait-for-dashboard",
      "type": "wait",
      "data": {
        "label": "Wait for dashboard to load",
        "selector": "@selector/projects.grid",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "data": {
        "label": "Open first project",
        "selector": "@selector/projects.card:first-of-type",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/workflows.card",
          "successTimeoutMs": 15000
        }
      }
    },
    {
      "id": "click-new-workflow",
      "type": "click",
      "data": {
        "label": "Click New Workflow button",
        "selector": "@selector/workflows.newButton",
        "timeoutMs": 10000
      }
    },
    {
      "id": "check-if-ai-modal",
      "type": "evaluate",
      "data": {
        "label": "Check if AI modal appeared",
        "expression": "!!document.querySelector('@selector/ai.modal.root, @selector/dialogs.base.content, @selector/dialogs.responsive.overlay')",
        "storeResult": "aiModalVisible"
      }
    },
    {
      "id": "switch-to-manual",
      "type": "click",
      "data": {
        "label": "Switch to manual builder",
        "selector": "@selector/ai.modal.switchToManualButton",
        "timeoutMs": 5000,
        "continueOnError": false,
        "continueOnFailure": true
      }
    },
    {
      "id": "assert-builder-visible",
      "type": "assert",
      "data": {
        "label": "Verify builder elements exist",
        "selector": "@selector/workflowBuilder.canvas.root",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Workflow builder should render after creating a workflow"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-dashboard",
      "target": "click-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-project",
      "target": "click-new-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "click-new-workflow",
      "target": "check-if-ai-modal",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "check-if-ai-modal",
      "target": "switch-to-manual",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "switch-to-manual",
      "target": "assert-builder-visible",
      "type": "smoothstep"
    }
  ]
}
