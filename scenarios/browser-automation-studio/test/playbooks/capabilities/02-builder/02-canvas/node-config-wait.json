{
  "metadata": {
    "description": "Validates Wait node configuration with dynamic fields based on wait type selection",
    "version": 1,
    "reset": "full"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-builder",
      "type": "workflowCall",
      "data": {
        "label": "Open builder via fixture",
        "workflowId": "@fixture/open-builder-from-demo(projectName=@seed/projectName, projectFolder=@seed/projectFolder)"
      }
    },
    {
      "id": "wait-builder",
      "type": "wait",
      "data": {
        "label": "Wait for builder",
        "selector": "@selector/workflowBuilder.code.modeButton",
        "timeoutMs": 15000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "drag-wait-node",
      "type": "dragDrop",
      "data": {
        "label": "Drag Wait node onto canvas",
        "sourceSelector": "@selector/nodePalette.cards.wait",
        "targetSelector": ".react-flow__pane",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-node-render",
      "type": "wait",
      "data": {
        "label": "Wait for node to render",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "verify-wait-node",
      "type": "assert",
      "data": {
        "label": "Verify Wait node exists",
        "selector": ".react-flow__node",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Wait node should appear"
      }
    },
    {
      "id": "click-wait-node",
      "type": "click",
      "data": {
        "label": "Select Wait node",
        "selector": ".react-flow__node:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "capture-initial-state",
      "type": "screenshot",
      "data": {
        "label": "Capture Wait node initial state",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "find-type-selector",
      "type": "assert",
      "data": {
        "label": "Verify wait type selector exists",
        "selector": ".react-flow__node.selected select",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Wait type dropdown should be visible"
      }
    },
    {
      "id": "switch-to-element-wait",
      "type": "select",
      "data": {
        "label": "Change wait type to 'element'",
        "selector": ".react-flow__node.selected select /*dup-1*/",
        "value": "element",
        "timeoutMs": 5000,
        "waitForMs": 800
      }
    },
    {
      "id": "verify-selector-input-appears",
      "type": "assert",
      "data": {
        "label": "Selector input should appear for element wait",
        "selector": ".react-flow__node.selected input[placeholder*=\"Selector\" i]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Selector input should appear when wait type is 'element'"
      }
    },
    {
      "id": "capture-element-mode",
      "type": "screenshot",
      "data": {
        "label": "Capture element wait mode",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "type-selector",
      "type": "type",
      "data": {
        "label": "Type selector value",
        "selector": ".react-flow__node.selected input[placeholder*=\"Selector\" i] /*dup-1*/",
        "text": "#test-element",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "blur-selector-input",
      "type": "click",
      "data": {
        "label": "Click canvas to save",
        "selector": ".react-flow__pane",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "switch-to-time-wait",
      "type": "click",
      "data": {
        "label": "Re-select node",
        "selector": ".react-flow__node:first-of-type /*dup-1*/",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "change-to-time-mode",
      "type": "select",
      "data": {
        "label": "Switch back to time mode",
        "selector": ".react-flow__node.selected select /*dup-2*/",
        "value": "time",
        "timeoutMs": 5000,
        "waitForMs": 800
      }
    },
    {
      "id": "verify-duration-input-appears",
      "type": "assert",
      "data": {
        "label": "Duration input should appear for time wait",
        "selector": ".react-flow__node.selected input[type=\"number\"]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Duration input should appear when wait type is 'time'"
      }
    },
    {
      "id": "capture-time-mode",
      "type": "screenshot",
      "data": {
        "label": "Capture time wait mode",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "enter-duration",
      "type": "type",
      "data": {
        "label": "Enter duration value",
        "selector": ".react-flow__node.selected input[type=\"number\"] /*dup-1*/",
        "text": "3000",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "save-duration",
      "type": "click",
      "data": {
        "label": "Click canvas to save duration",
        "selector": ".react-flow__pane /*dup-1*/",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "verify-config-complete",
      "type": "screenshot",
      "data": {
        "label": "Capture final Wait node configuration",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-builder-to-wait-builder",
      "source": "call-open-builder",
      "target": "wait-builder",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "wait-builder",
      "target": "drag-wait-node",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "drag-wait-node",
      "target": "wait-node-render",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "wait-node-render",
      "target": "verify-wait-node",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "verify-wait-node",
      "target": "click-wait-node",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "click-wait-node",
      "target": "capture-initial-state",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "capture-initial-state",
      "target": "find-type-selector",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "find-type-selector",
      "target": "switch-to-element-wait",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "switch-to-element-wait",
      "target": "verify-selector-input-appears",
      "type": "smoothstep"
    },
    {
      "id": "e14",
      "source": "verify-selector-input-appears",
      "target": "capture-element-mode",
      "type": "smoothstep"
    },
    {
      "id": "e15",
      "source": "capture-element-mode",
      "target": "type-selector",
      "type": "smoothstep"
    },
    {
      "id": "e16",
      "source": "type-selector",
      "target": "blur-selector-input",
      "type": "smoothstep"
    },
    {
      "id": "e17",
      "source": "blur-selector-input",
      "target": "switch-to-time-wait",
      "type": "smoothstep"
    },
    {
      "id": "e18",
      "source": "switch-to-time-wait",
      "target": "change-to-time-mode",
      "type": "smoothstep"
    },
    {
      "id": "e19",
      "source": "change-to-time-mode",
      "target": "verify-duration-input-appears",
      "type": "smoothstep"
    },
    {
      "id": "e20",
      "source": "verify-duration-input-appears",
      "target": "capture-time-mode",
      "type": "smoothstep"
    },
    {
      "id": "e21",
      "source": "capture-time-mode",
      "target": "enter-duration",
      "type": "smoothstep"
    },
    {
      "id": "e22",
      "source": "enter-duration",
      "target": "save-duration",
      "type": "smoothstep"
    },
    {
      "id": "e23",
      "source": "save-duration",
      "target": "verify-config-complete",
      "type": "smoothstep"
    }
  ]
}
