{
  "metadata": {
    "description": "Validates opening and editing node properties/configuration",
    "version": 1,
    "reset": "full"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-demo-workflow",
      "type": "workflowCall",
      "data": {
        "label": "Open seeded workflow via fixture",
        "workflowId": "@fixture/open-demo-workflow(projectName=@seed/projectName, projectFolder=@seed/projectFolder, workflowName=@seed/workflowName)"
      }
    },
    {
      "id": "wait-builder",
      "type": "wait",
      "data": {
        "label": "Wait for builder",
        "selector": "@selector/workflowBuilder.code.modeButton",
        "timeoutMs": 15000,
        "waitForMs": 2000,
        "waitType": "element"
      }
    },
    {
      "id": "assert-nodes-exist",
      "type": "assert",
      "data": {
        "label": "Nodes exist on canvas",
        "selector": ".react-flow__node",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Workflow should have nodes"
      }
    },
    {
      "id": "capture-before-edit",
      "type": "screenshot",
      "data": {
        "label": "Capture before opening properties",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "double-click-node",
      "type": "click",
      "data": {
        "label": "Double-click node to open properties",
        "selector": ".react-flow__node:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 1500,
        "clickCount": 2
      }
    },
    {
      "id": "wait-for-properties",
      "type": "wait",
      "data": {
        "label": "Wait for properties panel/dialog",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "check-properties-visible",
      "type": "evaluate",
      "data": {
        "label": "Check if properties UI appeared",
        "expression": "document.querySelector('[role=\"dialog\"], [class*=\"properties\"], [class*=\"config\"], [class*=\"settings\"]') !== null || document.querySelector('input, textarea, select') !== null",
        "storeAs": "propertiesVisible"
      }
    },
    {
      "id": "capture-properties",
      "type": "screenshot",
      "data": {
        "label": "Capture properties UI",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "close-properties",
      "type": "keyboard",
      "data": {
        "label": "Close properties with Escape",
        "waitForMs": 500,
        "keys": ["Escape"]
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-demo-workflow-to-wait-builder",
      "source": "call-open-demo-workflow",
      "target": "wait-builder",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "wait-builder",
      "target": "assert-nodes-exist",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "assert-nodes-exist",
      "target": "capture-before-edit",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "capture-before-edit",
      "target": "double-click-node",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "double-click-node",
      "target": "wait-for-properties",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "wait-for-properties",
      "target": "check-properties-visible",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "check-properties-visible",
      "target": "capture-properties",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "capture-properties",
      "target": "close-properties",
      "type": "smoothstep"
    }
  ]
}
