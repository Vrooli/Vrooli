{
  "metadata": {
    "description": "Validates zoom out button decreases canvas zoom level",
    "version": 1,
    "reset": "project"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-demo-workflow",
      "type": "workflowCall",
      "data": {
        "label": "Open seeded workflow via fixture",
        "workflowId": "@fixture/open-demo-workflow(projectName=@seed/projectName, projectFolder=@seed/projectFolder, workflowName=@seed/workflowName)"
      }
    },
    {
      "id": "click-zoom-in-twice",
      "type": "click",
      "data": {
        "label": "Zoom in twice first",
        "selector": "@selector/toolbar.zoomInButton",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/workflowBuilder.canvas.root",
          "successTimeoutMs": 8000
        }
      }
    },
    {
      "id": "click-zoom-in-again",
      "type": "click",
      "data": {
        "label": "Zoom in again",
        "selector": "@selector/toolbar.zoomInButton /*dup-1*/",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/workflowBuilder.canvas.root",
          "successTimeoutMs": 8000
        }
      }
    },
    {
      "id": "get-zoomed-in-level",
      "type": "evaluate",
      "data": {
        "label": "Get zoomed in level",
        "expression": "(() => { const viewport = document.querySelector('.react-flow__viewport'); if (!viewport) return null; const transform = viewport.style.transform || 'translate(0px, 0px) scale(1)'; const match = transform.match(/scale\\(([\\d.]+)\\)/); return match ? parseFloat(match[1]) : 1; })()",
        "storeAs": "zoomedInLevel"
      }
    },
    {
      "id": "click-zoom-out",
      "type": "click",
      "data": {
        "label": "Click zoom out button",
        "selector": "@selector/toolbar.zoomOutButton",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/workflowBuilder.canvas.root",
          "successTimeoutMs": 8000
        }
      }
    },
    {
      "id": "get-zoomed-out-level",
      "type": "evaluate",
      "data": {
        "label": "Get zoom out level",
        "expression": "(() => { const viewport = document.querySelector('.react-flow__viewport'); if (!viewport) return null; const transform = viewport.style.transform || 'translate(0px, 0px) scale(1)'; const match = transform.match(/scale\\(([\\d.]+)\\)/); return match ? parseFloat(match[1]) : 1; })()",
        "storeAs": "zoomedOutLevel"
      }
    },
    {
      "id": "capture-after-zoom-out",
      "type": "screenshot",
      "data": {
        "label": "Capture after zoom out",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-demo-workflow-to-zoom-in",
      "source": "call-open-demo-workflow",
      "target": "click-zoom-in-twice",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "click-zoom-in-twice",
      "target": "click-zoom-in-again",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "click-zoom-in-again",
      "target": "get-zoomed-in-level",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "get-zoomed-in-level",
      "target": "click-zoom-out",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "click-zoom-out",
      "target": "get-zoomed-out-level",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "get-zoomed-out-level",
      "target": "capture-after-zoom-out",
      "type": "smoothstep"
    }
  ]
}
