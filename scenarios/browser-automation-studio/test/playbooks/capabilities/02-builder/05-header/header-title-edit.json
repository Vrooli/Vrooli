{
  "metadata": {
    "description": "Validates inline workflow title editing with save/cancel",
    "version": 1,
    "reset": "full"
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "nav",
      "type": "navigate",
      "data": {
        "label": "Open BAS",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 1200
      }
    },
    {
      "id": "proj",
      "type": "click",
      "data": {
        "label": "Open project",
        "selector": "@selector/projects.card:first-of-type",
        "timeoutMs": 5000
      }
    },
    {
      "id": "wait-workflows",
      "type": "wait",
      "data": {
        "label": "Wait for workflows",
        "selector": "@selector/workflows.card",
        "timeoutMs": 10000,
        "waitForMs": 600,
        "waitType": "element"
      }
    },
    {
      "id": "work",
      "type": "click",
      "data": {
        "label": "Open workflow",
        "selector": "@selector/workflows.card:first-of-type",
        "timeoutMs": 10000
      }
    },
    {
      "id": "wait1",
      "type": "wait",
      "data": {
        "label": "Wait",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "get-original",
      "type": "evaluate",
      "data": {
        "label": "Get original title",
        "expression": "document.querySelector('@selector/header.title.text')?.textContent?.trim() || ''",
        "storeResult": "originalTitle"
      }
    },
    {
      "id": "click-edit",
      "type": "click",
      "data": {
        "label": "Click edit button",
        "selector": "@selector/header.title.editButton",
        "timeoutMs": 5000
      }
    },
    {
      "id": "assert-input",
      "type": "assert",
      "data": {
        "label": "Input visible",
        "selector": "@selector/header.title.input",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Title input should appear"
      }
    },
    {
      "id": "type-new",
      "type": "type",
      "data": {
        "label": "Type new title",
        "selector": "@selector/header.title.input /*dup-1*/",
        "text": "Updated Workflow Title",
        "clearFirst": true,
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "click-save",
      "type": "click",
      "data": {
        "label": "Save title",
        "selector": "@selector/header.title.saveButton",
        "timeoutMs": 5000
      }
    },
    {
      "id": "wait2",
      "type": "wait",
      "data": {
        "label": "Wait for save",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "verify-saved",
      "type": "assert",
      "data": {
        "label": "Input hidden",
        "selector": "@selector/header.title.input /*dup-2*/",
        "assertMode": "not_exists",
        "timeoutMs": 3000,
        "failureMessage": "Input should be hidden after save"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "nav",
      "target": "proj",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "proj",
      "target": "wait-workflows",
      "type": "smoothstep"
    },
    {
      "id": "e-wait-work",
      "source": "wait-workflows",
      "target": "work",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "work",
      "target": "wait1",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait1",
      "target": "get-original",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "get-original",
      "target": "click-edit",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "click-edit",
      "target": "assert-input",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "assert-input",
      "target": "type-new",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "type-new",
      "target": "click-save",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-save",
      "target": "wait2",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "wait2",
      "target": "verify-saved",
      "type": "smoothstep"
    }
  ]
}
