{
  "metadata": {
    "description": "Validates Assert node configuration with mode-specific conditional fields",
    "requirement": "BAS-BUILDER-NODE-CONFIG",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-builder",
      "type": "workflowCall",
      "data": {
        "label": "Open builder via fixture",
        "workflowId": "@fixture/open-builder-from-demo"
      }
    },
    {
      "id": "wait-builder",
      "type": "wait",
      "data": {
        "label": "Wait for builder",
        "selector": "@selector/workflowBuilder.code.modeButton",
        "timeoutMs": 15000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "drag-assert-node",
      "type": "dragDrop",
      "data": {
        "label": "Drag Assert node onto canvas",
        "sourceSelector": "@selector/nodePalette.cards.assert",
        "targetSelector": ".react-flow__pane",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-node-render",
      "type": "wait",
      "data": {
        "label": "Wait for render",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "verify-assert-node",
      "type": "assert",
      "data": {
        "label": "Verify Assert node exists",
        "selector": ".react-flow__node",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Assert node should appear"
      }
    },
    {
      "id": "select-assert-node",
      "type": "click",
      "data": {
        "label": "Select Assert node",
        "selector": ".react-flow__node:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "capture-default-mode",
      "type": "screenshot",
      "data": {
        "label": "Capture default mode (exists)",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "find-mode-selector",
      "type": "assert",
      "data": {
        "label": "Mode selector exists",
        "selector": ".react-flow__node.selected select",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Assert mode dropdown should be visible"
      }
    },
    {
      "id": "switch-to-text-contains",
      "type": "select",
      "data": {
        "label": "Change mode to text_contains",
        "selector": ".react-flow__node.selected select /*dup-1*/",
        "value": "text_contains",
        "timeoutMs": 5000,
        "waitForMs": 800
      }
    },
    {
      "id": "verify-expected-value-appears",
      "type": "assert",
      "data": {
        "label": "Expected value input should appear",
        "selector": ".react-flow__node.selected input[placeholder*=\"Expected\" i]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Expected value input should appear for text_contains mode"
      }
    },
    {
      "id": "capture-text-contains-mode",
      "type": "screenshot",
      "data": {
        "label": "Capture text_contains mode",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "enter-selector",
      "type": "type",
      "data": {
        "label": "Enter selector",
        "selector": ".react-flow__node.selected input[placeholder*=\"Selector\" i]",
        "text": ".test-element",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "enter-expected-text",
      "type": "type",
      "data": {
        "label": "Enter expected text",
        "selector": ".react-flow__node.selected input[placeholder*=\"Expected\" i] /*dup-1*/",
        "text": "Success",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "find-case-sensitive-checkbox",
      "type": "assert",
      "data": {
        "label": "Case sensitive checkbox should exist",
        "selector": ".react-flow__node.selected input[type=\"checkbox\"]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Case sensitive checkbox should appear for text assertions"
      }
    },
    {
      "id": "toggle-case-sensitive",
      "type": "click",
      "data": {
        "label": "Toggle case sensitive option",
        "selector": ".react-flow__node.selected input[type=\"checkbox\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "capture-with-options",
      "type": "screenshot",
      "data": {
        "label": "Capture with case sensitive enabled",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "switch-to-attribute-mode",
      "type": "select",
      "data": {
        "label": "Change mode to attribute_equals",
        "selector": ".react-flow__node.selected select /*dup-2*/",
        "value": "attribute_equals",
        "timeoutMs": 5000,
        "waitForMs": 800
      }
    },
    {
      "id": "verify-attribute-name-input",
      "type": "assert",
      "data": {
        "label": "Attribute name input should appear",
        "selector": ".react-flow__node.selected input[placeholder*=\"Attribute\" i]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Attribute name input should appear for attribute_equals mode"
      }
    },
    {
      "id": "capture-attribute-mode",
      "type": "screenshot",
      "data": {
        "label": "Capture attribute_equals mode",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "save-configuration",
      "type": "click",
      "data": {
        "label": "Click canvas to save",
        "selector": ".react-flow__pane",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "verify-final-state",
      "type": "screenshot",
      "data": {
        "label": "Final Assert node configuration",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-builder-to-wait-builder",
      "source": "call-open-builder",
      "target": "wait-builder",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "wait-builder",
      "target": "drag-assert-node",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "drag-assert-node",
      "target": "wait-node-render",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "wait-node-render",
      "target": "verify-assert-node",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "verify-assert-node",
      "target": "select-assert-node",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "select-assert-node",
      "target": "capture-default-mode",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "capture-default-mode",
      "target": "find-mode-selector",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "find-mode-selector",
      "target": "switch-to-text-contains",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "switch-to-text-contains",
      "target": "verify-expected-value-appears",
      "type": "smoothstep"
    },
    {
      "id": "e14",
      "source": "verify-expected-value-appears",
      "target": "capture-text-contains-mode",
      "type": "smoothstep"
    },
    {
      "id": "e15",
      "source": "capture-text-contains-mode",
      "target": "enter-selector",
      "type": "smoothstep"
    },
    {
      "id": "e16",
      "source": "enter-selector",
      "target": "enter-expected-text",
      "type": "smoothstep"
    },
    {
      "id": "e17",
      "source": "enter-expected-text",
      "target": "find-case-sensitive-checkbox",
      "type": "smoothstep"
    },
    {
      "id": "e18",
      "source": "find-case-sensitive-checkbox",
      "target": "toggle-case-sensitive",
      "type": "smoothstep"
    },
    {
      "id": "e19",
      "source": "toggle-case-sensitive",
      "target": "capture-with-options",
      "type": "smoothstep"
    },
    {
      "id": "e20",
      "source": "capture-with-options",
      "target": "switch-to-attribute-mode",
      "type": "smoothstep"
    },
    {
      "id": "e21",
      "source": "switch-to-attribute-mode",
      "target": "verify-attribute-name-input",
      "type": "smoothstep"
    },
    {
      "id": "e22",
      "source": "verify-attribute-name-input",
      "target": "capture-attribute-mode",
      "type": "smoothstep"
    },
    {
      "id": "e23",
      "source": "capture-attribute-mode",
      "target": "save-configuration",
      "type": "smoothstep"
    },
    {
      "id": "e24",
      "source": "save-configuration",
      "target": "verify-final-state",
      "type": "smoothstep"
    }
  ]
}
