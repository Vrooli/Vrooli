{
  "metadata": {
    "description": "Navigates to the BAS dashboard and opens the seeded demo project",
    "fixture_id": "open-demo-project",
    "requirements": [
      "BAS-WORKFLOW-DEMO-SEED"
    ],
    "parameters": [
      {
        "name": "projectId",
        "type": "string",
        "required": true,
        "default": "@seed/projectId",
        "description": "Project identifier created by the seed script"
      },
      {
        "name": "projectName",
        "type": "string",
        "required": true,
        "default": "@seed/projectName",
        "description": "Project name created by the seed script"
      },
      {
        "name": "projectFolder",
        "type": "string",
        "required": true,
        "default": "@seed/projectFolder",
        "description": "Seed project folder path"
      }
    ],
    "reset": "project"
  },
  "nodes": [
    {
      "id": "fixture-seed-state",
      "type": "workflowCall",
      "data": {
        "label": "Load seed metadata",
        "workflowId": "@fixture/load-seed-state"
      }
    },
    {
      "id": "fixture-navigate-dashboard",
      "type": "navigate",
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "fixture-click-demo",
      "type": "click",
      "data": {
        "label": "Select demo project",
        "selector": "@selector/projects.cardById(id=\"${fixture.projectId}\")",
        "timeoutMs": 10000,
        "resilience": {
          "successSelector": "h1",
          "successTimeoutMs": 10000
        }
      }
    },
    {
      "id": "fixture-assert-demo-heading",
      "type": "assert",
      "data": {
        "label": "Verify project header",
        "selector": "h1",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Project header should be visible"
      }
    }
  ],
  "edges": [
    {
      "id": "fixture-edge-0",
      "source": "fixture-seed-state",
      "target": "fixture-navigate-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "fixture-edge-1",
      "source": "fixture-navigate-dashboard",
      "target": "fixture-click-demo",
      "type": "smoothstep"
    },
    {
      "id": "fixture-edge-2",
      "source": "fixture-click-demo",
      "target": "fixture-assert-demo-heading",
      "type": "smoothstep"
    }
  ]
}
