{
  "metadata": {
    "description": "Smoke test for AI workflow generation feature - verifies UI elements are present",
    "requirement": "BAS-AI-GENERATION-SMOKE",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 30000,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-app-ready",
      "type": "wait",
      "position": {
        "x": 140,
        "y": -80
      },
      "data": {
        "label": "Wait for React app to hydrate",
        "waitType": "element",
        "selector": "@selector/appReady",
        "timeoutMs": 30000,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-for-page",
      "type": "wait",
      "position": {
        "x": 280,
        "y": 0
      },
      "data": {
        "label": "Wait for page load",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "debug-screenshot-pre-assert",
      "type": "screenshot",
      "position": {
        "x": 400,
        "y": -80
      },
      "data": {
        "label": "Debug: Capture state before assertion",
        "fullPage": true,
        "captureDomSnapshot": true,
        "waitForMs": 500
      }
    },
    {
      "id": "assert-dashboard",
      "type": "assert",
      "position": {
        "x": 540,
        "y": 0
      },
      "data": {
        "label": "Dashboard loaded",
        "selector": "body",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Dashboard body should be visible"
      }
    }
  ],
  "edges": [
    {
      "id": "edge-nav-app-ready",
      "source": "navigate-dashboard",
      "target": "wait-app-ready",
      "type": "smoothstep"
    },
    {
      "id": "edge-app-ready-wait",
      "source": "wait-app-ready",
      "target": "wait-for-page",
      "type": "smoothstep"
    },
    {
      "id": "edge-wait-screenshot",
      "source": "wait-for-page",
      "target": "debug-screenshot-pre-assert",
      "type": "smoothstep"
    },
    {
      "id": "edge-screenshot-assert",
      "source": "debug-screenshot-pre-assert",
      "target": "assert-dashboard",
      "type": "smoothstep"
    }
  ]
}
