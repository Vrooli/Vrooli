{
  "metadata": {
    "description": "Validates project editing functionality including name and description updates",
    "requirement": "BAS-PROJECT-EDIT",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-projects",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for projects grid",
        "selector": "[data-testid=\"projects-grid\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-first-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open first project",
        "selector": "[data-testid=\"project-card\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-project-detail",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for project detail to load",
        "selector": "h1",
        "timeoutMs": 5000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "get-original-name",
      "type": "evaluate",
      "position": {
        "x": 800,
        "y": -80
      },
      "data": {
        "label": "Store original project name",
        "expression": "document.querySelector('h1')?.textContent?.trim() || 'Unknown'",
        "storeAs": "originalName"
      }
    },
    {
      "id": "click-edit-button",
      "type": "click",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Click edit/pencil button",
        "selector": "[data-testid=\"project-edit-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 1500
      }
    },
    {
      "id": "assert-edit-modal-visible",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Edit modal is visible",
        "selector": "[data-testid=\"project-modal\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Project edit modal should appear after clicking edit button"
      }
    },
    {
      "id": "generate-new-name",
      "type": "evaluate",
      "position": {
        "x": 1400,
        "y": -80
      },
      "data": {
        "label": "Generate updated project name",
        "expression": "`Updated Project ${Date.now()}`",
        "storeAs": "updatedName"
      }
    },
    {
      "id": "update-name",
      "type": "type",
      "position": {
        "x": 1600,
        "y": -80
      },
      "data": {
        "label": "Enter updated name",
        "selector": "[data-testid=\"project-modal-name-input\"]",
        "text": "{{updatedName}}",
        "clearFirst": true,
        "timeoutMs": 5000,
        "waitForMs": 300
      }
    },
    {
      "id": "update-description",
      "type": "type",
      "position": {
        "x": 1800,
        "y": -80
      },
      "data": {
        "label": "Update description",
        "selector": "[data-testid=\"project-modal-description-input\"]",
        "text": "Updated description for integration test validation",
        "clearFirst": true,
        "timeoutMs": 5000,
        "waitForMs": 300
      }
    },
    {
      "id": "submit-changes",
      "type": "click",
      "position": {
        "x": 2000,
        "y": -80
      },
      "data": {
        "label": "Submit project updates",
        "selector": "[data-testid=\"project-modal-submit\"]",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-modal-close",
      "type": "wait",
      "position": {
        "x": 2200,
        "y": -80
      },
      "data": {
        "label": "Wait for modal to close",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-modal-closed",
      "type": "assert",
      "position": {
        "x": 2400,
        "y": -80
      },
      "data": {
        "label": "Modal is closed after save",
        "selector": "[data-testid=\"project-modal\"] /*dup-1*/",
        "assertMode": "not_exists",
        "timeoutMs": 5000,
        "failureMessage": "Modal should close after successful project update"
      }
    },
    {
      "id": "verify-name-updated",
      "type": "wait",
      "position": {
        "x": 2600,
        "y": -80
      },
      "data": {
        "label": "Wait for UI to reflect changes",
        "durationMs": 1000,
        "waitType": "duration"
      }
    },
    {
      "id": "capture-updated-state",
      "type": "screenshot",
      "position": {
        "x": 2800,
        "y": -80
      },
      "data": {
        "label": "Capture updated project detail",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-projects",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-projects",
      "target": "click-first-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-first-project",
      "target": "wait-for-project-detail",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-project-detail",
      "target": "get-original-name",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "get-original-name",
      "target": "click-edit-button",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "click-edit-button",
      "target": "assert-edit-modal-visible",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "assert-edit-modal-visible",
      "target": "generate-new-name",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "generate-new-name",
      "target": "update-name",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "update-name",
      "target": "update-description",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "update-description",
      "target": "submit-changes",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "submit-changes",
      "target": "wait-for-modal-close",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "wait-for-modal-close",
      "target": "assert-modal-closed",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "assert-modal-closed",
      "target": "verify-name-updated",
      "type": "smoothstep"
    },
    {
      "id": "e14",
      "source": "verify-name-updated",
      "target": "capture-updated-state",
      "type": "smoothstep"
    }
  ]
}
