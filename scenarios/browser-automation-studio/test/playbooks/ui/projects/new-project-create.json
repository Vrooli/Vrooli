{
  "metadata": {
    "description": "Creates a new project and verifies it appears in the project list with success feedback",
    "requirement": "BAS-PROJECT-CREATE-SUCCESS",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "click-new-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open new project modal",
        "selector": "@selector/dashboard.newProjectButton",
        "timeoutMs": 15000,
        "resilience": {
          "successSelector": "@selector/dialogs.project.root",
          "successTimeoutMs": 10000
        }
      }
    },
    {
      "id": "assert-modal-visible",
      "type": "assert",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Project modal visible",
        "selector": "@selector/dialogs.project.root",
        "assertMode": "exists",
        "timeoutMs": 10000
      }
    },
    {
      "id": "generate-project-name",
      "type": "evaluate",
      "position": {
        "x": 800,
        "y": -60
      },
      "data": {
        "label": "Generate unique project name",
        "expression": "`Test Project ${Date.now()}`",
        "storeAs": "projectName"
      }
    },
    {
      "id": "fill-project-name",
      "type": "type",
      "position": {
        "x": 1000,
        "y": -60
      },
      "data": {
        "label": "Enter project name",
        "selector": "@selector/dialogs.project.nameInput",
        "text": "{{projectName}}",
        "clearFirst": true,
        "timeoutMs": 5000
      }
    },
    {
      "id": "fill-project-description",
      "type": "type",
      "position": {
        "x": 1200,
        "y": -60
      },
      "data": {
        "label": "Enter project description",
        "selector": "@selector/dialogs.project.descriptionInput",
        "text": "Automated test project created by workflow validation",
        "clearFirst": true,
        "timeoutMs": 5000
      }
    },
    {
      "id": "click-create",
      "type": "click",
      "position": {
        "x": 1400,
        "y": -60
      },
      "data": {
        "label": "Click Create button",
        "selector": "@selector/dialogs.project.submitButton",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/projects.grid",
          "successTimeoutMs": 15000
        }
      }
    },
    {
      "id": "wait-for-project-list-update",
      "type": "wait",
      "position": {
        "x": 2000,
        "y": -60
      },
      "data": {
        "label": "Wait for project list refresh",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-project-in-list",
      "type": "assert",
      "position": {
        "x": 2200,
        "y": -60
      },
      "data": {
        "label": "New project appears in list",
        "selector": "@selector/projects.card",
        "assertMode": "exists",
        "timeoutMs": 10000,
        "failureMessage": "Newly created project should appear in the projects grid"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "click-new-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-new-project",
      "target": "assert-modal-visible",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "assert-modal-visible",
      "target": "generate-project-name",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "generate-project-name",
      "target": "fill-project-name",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "fill-project-name",
      "target": "fill-project-description",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "fill-project-description",
      "target": "click-create",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "wait-for-project-list-update",
      "target": "assert-project-in-list",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "click-create",
      "target": "wait-for-project-list-update",
      "type": "smoothstep"
    }
  ]
}
