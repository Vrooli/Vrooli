{
  "metadata": {
    "description": "Validates that projects are listed correctly and can be selected to navigate to project detail view",
    "requirement": "BAS-PROJECT-LIST-SELECT",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-projects",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for projects grid to load",
        "selector": "@selector/projectsGrid",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "assert-projects-visible",
      "type": "assert",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Projects grid is visible",
        "selector": "@selector/projectsGrid /*dup-1*/",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Projects grid should be visible on dashboard"
      }
    },
    {
      "id": "assert-project-cards-exist",
      "type": "assert",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "At least one project card exists",
        "selector": "@selector/projectCard",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "At least one project should be visible in the grid"
      }
    },
    {
      "id": "capture-dashboard",
      "type": "screenshot",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Capture dashboard with projects",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-first-project",
      "type": "click",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Click first project card",
        "selector": "@selector/projectCard:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-url-change",
      "type": "wait",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Wait for navigation to complete",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-url-changed",
      "type": "evaluate",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Verify URL contains /projects/",
        "expression": "window.location.pathname.includes('/projects/')",
        "storeAs": "urlChanged"
      }
    },
    {
      "id": "assert-project-detail-visible",
      "type": "wait",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Wait for project detail elements",
        "selector": "h1, [role=\"heading\"]",
        "timeoutMs": 5000,
        "waitForMs": 500,
        "waitType": "element"
      }
    },
    {
      "id": "capture-project-detail",
      "type": "screenshot",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Capture project detail view",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-projects",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-projects",
      "target": "assert-projects-visible",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "assert-projects-visible",
      "target": "assert-project-cards-exist",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "assert-project-cards-exist",
      "target": "capture-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "capture-dashboard",
      "target": "click-first-project",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "click-first-project",
      "target": "wait-for-url-change",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "wait-for-url-change",
      "target": "assert-url-changed",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "assert-url-changed",
      "target": "assert-project-detail-visible",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "assert-project-detail-visible",
      "target": "capture-project-detail",
      "type": "smoothstep"
    }
  ]
}
