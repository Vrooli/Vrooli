{
  "metadata": {
    "description": "Verifies the New Project modal closes through all affordances (X, Cancel, Escape, backdrop click)",
    "requirement": "BAS-PROJECT-DIALOG-CLOSE",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1440,
      "height": 900,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-projects",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for projects grid",
        "selector": "[data-testid=\"projects-grid\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "open-modal-x-test",
      "type": "click",
      "position": {
        "x": 400,
        "y": -100
      },
      "data": {
        "label": "Open project modal (X button test)",
        "selector": "[data-testid=\"dashboard-new-project-button\"]",
        "timeoutMs": 15000,
        "waitForMs": 1500
      }
    },
    {
      "id": "assert-modal-visible-1",
      "type": "assert",
      "position": {
        "x": 600,
        "y": -100
      },
      "data": {
        "label": "Modal is visible",
        "selector": "[data-testid=\"project-modal\"]",
        "assertMode": "exists",
        "timeoutMs": 10000
      }
    },
    {
      "id": "close-with-x",
      "type": "click",
      "position": {
        "x": 800,
        "y": -100
      },
      "data": {
        "label": "Click X button",
        "selector": "[data-testid=\"dialog-close-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "assert-closed-x",
      "type": "assert",
      "position": {
        "x": 1000,
        "y": -100
      },
      "data": {
        "label": "Modal closed (X button)",
        "selector": "[data-testid=\"project-modal\"]",
        "assertMode": "not_exists",
        "timeoutMs": 5000,
        "failureMessage": "Modal should close when X button is clicked"
      }
    },
    {
      "id": "open-modal-cancel-test",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open project modal (Cancel button test)",
        "selector": "[data-testid=\"dashboard-new-project-button\"]",
        "timeoutMs": 15000,
        "waitForMs": 1500
      }
    },
    {
      "id": "assert-modal-visible-2",
      "type": "assert",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Modal is visible",
        "selector": "[data-testid=\"project-modal\"]",
        "assertMode": "exists",
        "timeoutMs": 10000
      }
    },
    {
      "id": "close-with-cancel",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Click Cancel button",
        "selector": "[data-testid=\"project-modal-cancel\"]",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "assert-closed-cancel",
      "type": "assert",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Modal closed (Cancel button)",
        "selector": "[data-testid=\"project-modal\"]",
        "assertMode": "not_exists",
        "timeoutMs": 5000,
        "failureMessage": "Modal should close when Cancel button is clicked"
      }
    },
    {
      "id": "open-modal-escape-test",
      "type": "click",
      "position": {
        "x": 400,
        "y": 100
      },
      "data": {
        "label": "Open project modal (Escape key test)",
        "selector": "[data-testid=\"dashboard-new-project-button\"]",
        "timeoutMs": 15000,
        "waitForMs": 1500
      }
    },
    {
      "id": "assert-modal-visible-3",
      "type": "assert",
      "position": {
        "x": 600,
        "y": 100
      },
      "data": {
        "label": "Modal is visible",
        "selector": "[data-testid=\"project-modal\"]",
        "assertMode": "exists",
        "timeoutMs": 10000
      }
    },
    {
      "id": "close-with-escape",
      "type": "keyboard",
      "position": {
        "x": 800,
        "y": 100
      },
      "data": {
        "label": "Press Escape key",
        "key": "Escape",
        "waitForMs": 500
      }
    },
    {
      "id": "assert-closed-escape",
      "type": "assert",
      "position": {
        "x": 1000,
        "y": 100
      },
      "data": {
        "label": "Modal closed (Escape key)",
        "selector": "[data-testid=\"project-modal\"]",
        "assertMode": "not_exists",
        "timeoutMs": 5000,
        "failureMessage": "Modal should close when Escape key is pressed"
      }
    }
