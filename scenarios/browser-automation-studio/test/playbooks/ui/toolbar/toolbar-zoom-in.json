{
  "metadata": {
    "description": "Validates zoom in button increases canvas zoom level",
    "requirement": "BAS-TOOLBAR-ZOOM-IN",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Open Demo project",
        "selector": "[data-testid=\"project-card\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-workflows",
      "type": "wait",
      "position": {
        "x": 200,
        "y": -100
      },
      "data": {
        "label": "Wait for workflows to load",
        "selector": "[data-testid=\"workflow-card\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-workflow",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open existing workflow",
        "selector": "[data-testid=\"workflow-card\"]:first-of-type",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-builder",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for workflow builder",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-toolbar-visible",
      "type": "assert",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Workflow toolbar is visible",
        "selector": "[data-testid=\"workflow-toolbar\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Workflow toolbar should be visible"
      }
    },
    {
      "id": "get-initial-zoom",
      "type": "evaluate",
      "position": {
        "x": 1000,
        "y": -100
      },
      "data": {
        "label": "Get initial zoom level",
        "expression": "(() => { const viewport = document.querySelector('.react-flow__viewport'); if (!viewport) return null; const transform = viewport.style.transform || 'translate(0px, 0px) scale(1)'; const match = transform.match(/scale\\(([\\d.]+)\\)/); return match ? parseFloat(match[1]) : 1; })()",
        "storeAs": "initialZoom"
      }
    },
    {
      "id": "capture-before-zoom",
      "type": "screenshot",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Capture canvas before zoom",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-zoom-in",
      "type": "click",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Click zoom in button",
        "selector": "[data-testid=\"toolbar-zoom-in-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "get-zoomed-level",
      "type": "evaluate",
      "position": {
        "x": 1600,
        "y": -100
      },
      "data": {
        "label": "Get zoom level after zoom in",
        "expression": "(() => { const viewport = document.querySelector('.react-flow__viewport'); if (!viewport) return null; const transform = viewport.style.transform || 'translate(0px, 0px) scale(1)'; const match = transform.match(/scale\\(([\\d.]+)\\)/); return match ? parseFloat(match[1]) : 1; })()",
        "storeAs": "zoomedLevel"
      }
    },
    {
      "id": "verify-zoom-increased",
      "type": "assert",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Zoom level increased",
        "selector": ".react-flow__viewport[style*=\"scale\"]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Canvas should have zoom transformation applied"
      }
    },
    {
      "id": "capture-after-zoom",
      "type": "screenshot",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Capture canvas after zoom",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "click-project",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "click-project",
      "target": "wait-workflows",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-workflow",
      "target": "wait-for-builder",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-builder",
      "target": "assert-toolbar-visible",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "assert-toolbar-visible",
      "target": "get-initial-zoom",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "get-initial-zoom",
      "target": "capture-before-zoom",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "capture-before-zoom",
      "target": "click-zoom-in",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "click-zoom-in",
      "target": "get-zoomed-level",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "get-zoomed-level",
      "target": "verify-zoom-increased",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "verify-zoom-increased",
      "target": "capture-after-zoom",
      "type": "smoothstep"
    },
    {
      "id": "e-wait-click-workflow",
      "source": "wait-workflows",
      "target": "click-workflow",
      "type": "smoothstep"
    }
  ]
}
