{
  "metadata": {
    "description": "Validates locking and unlocking canvas to prevent/allow node interaction",
    "requirement": "BAS-TOOLBAR-LOCK-CANVAS",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-demo-workflow",
      "type": "workflowCall",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Open seeded workflow via fixture",
        "workflowId": "@fixture/open-demo-workflow"
      }
    },
    {
      "id": "find-lock-button",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Lock button exists",
        "selector": "@selector/toolbar.lockButton",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Lock button should exist in toolbar"
      }
    },
    {
      "id": "capture-unlocked",
      "type": "screenshot",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Capture unlocked state",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-lock",
      "type": "click",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Click lock to lock canvas",
        "selector": "@selector/toolbar.lockButton",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/toolbar.unlockButton",
          "successTimeoutMs": 8000
        }
      }
    },
    {
      "id": "capture-locked",
      "type": "screenshot",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Capture locked state",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-unlock",
      "type": "click",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Click lock to unlock canvas",
        "selector": "@selector/toolbar.unlockButton",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/toolbar.lockButton",
          "successTimeoutMs": 8000
        }
      }
    },
    {
      "id": "capture-unlocked-again",
      "type": "screenshot",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Capture unlocked state again",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "verify-toggle",
      "type": "evaluate",
      "position": {
        "x": 2400,
        "y": 0
      },
      "data": {
        "label": "Verify lock toggle completed",
        "expression": "true",
        "storeAs": "lockToggleComplete"
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-demo-workflow-to-find-lock",
      "source": "call-open-demo-workflow",
      "target": "find-lock-button",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "find-lock-button",
      "target": "capture-unlocked",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "capture-unlocked",
      "target": "click-lock",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-lock",
      "target": "capture-locked",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "capture-locked",
      "target": "click-unlock",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "click-unlock",
      "target": "capture-unlocked-again",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "capture-unlocked-again",
      "target": "verify-toggle",
      "type": "smoothstep"
    }
  ]
}
