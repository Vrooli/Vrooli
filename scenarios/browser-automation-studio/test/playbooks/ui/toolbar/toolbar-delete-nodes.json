{
  "metadata": {
    "description": "Validates deleting selected nodes using toolbar delete button",
    "requirement": "BAS-TOOLBAR-DELETE",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-dashboard",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for dashboard",
        "selector": "[data-testid=\"projects-grid\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open project",
        "selector": "[data-testid=\"project-card\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-project",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for project detail",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "click-workflow",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Open workflow",
        "selector": "[data-testid=\"workflow-card\"]:first-of-type",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-builder",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for builder",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-nodes-exist",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Workflow has nodes",
        "selector": ".react-flow__node",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Workflow should have nodes to delete"
      }
    },
    {
      "id": "count-initial-nodes",
      "type": "evaluate",
      "position": {
        "x": 1400,
        "y": -100
      },
      "data": {
        "label": "Count initial nodes",
        "expression": "document.querySelectorAll('.react-flow__node').length",
        "storeAs": "initialNodeCount"
      }
    },
    {
      "id": "click-first-node",
      "type": "click",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Select first node",
        "selector": ".react-flow__node:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "capture-before-delete",
      "type": "screenshot",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Capture before delete",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-delete-button",
      "type": "click",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Click toolbar delete button",
        "selector": "[data-testid=\"toolbar-delete-button\"], button[title*=\"delete\" i], button[aria-label*=\"delete\" i]",
        "timeoutMs": 5000,
        "waitForMs": 1500
      }
    },
    {
      "id": "count-final-nodes",
      "type": "evaluate",
      "position": {
        "x": 2200,
        "y": -100
      },
      "data": {
        "label": "Count nodes after delete",
        "expression": "document.querySelectorAll('.react-flow__node').length",
        "storeAs": "finalNodeCount"
      }
    },
    {
      "id": "verify-node-deleted",
      "type": "evaluate",
      "position": {
        "x": 2400,
        "y": -100
      },
      "data": {
        "label": "Verify node count decreased",
        "expression": "(() => { const initial = parseInt(localStorage.getItem('initialNodeCount') || '0'); const final = parseInt(localStorage.getItem('finalNodeCount') || '0'); return final < initial; })()",
        "storeAs": "nodeWasDeleted"
      }
    },
    {
      "id": "capture-after-delete",
      "type": "screenshot",
      "position": {
        "x": 2600,
        "y": 0
      },
      "data": {
        "label": "Capture after delete",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {"id": "e1", "source": "navigate-dashboard", "target": "wait-for-dashboard", "type": "smoothstep"},
    {"id": "e2", "source": "wait-for-dashboard", "target": "click-project", "type": "smoothstep"},
    {"id": "e3", "source": "click-project", "target": "wait-project", "type": "smoothstep"},
    {"id": "e4", "source": "wait-project", "target": "click-workflow", "type": "smoothstep"},
    {"id": "e5", "source": "click-workflow", "target": "wait-builder", "type": "smoothstep"},
    {"id": "e6", "source": "wait-builder", "target": "assert-nodes-exist", "type": "smoothstep"},
    {"id": "e7", "source": "assert-nodes-exist", "target": "count-initial-nodes", "type": "smoothstep"},
    {"id": "e8", "source": "count-initial-nodes", "target": "click-first-node", "type": "smoothstep"},
    {"id": "e9", "source": "click-first-node", "target": "capture-before-delete", "type": "smoothstep"},
    {"id": "e10", "source": "capture-before-delete", "target": "click-delete-button", "type": "smoothstep"},
    {"id": "e11", "source": "click-delete-button", "target": "count-final-nodes", "type": "smoothstep"},
    {"id": "e12", "source": "count-final-nodes", "target": "verify-node-deleted", "type": "smoothstep"},
    {"id": "e13", "source": "verify-node-deleted", "target": "capture-after-delete", "type": "smoothstep"}
  ]
}
