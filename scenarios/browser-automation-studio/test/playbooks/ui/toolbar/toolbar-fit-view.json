{
  "metadata": {
    "description": "Validates fit view centers and sizes canvas to show all nodes",
    "requirement": "BAS-TOOLBAR-FIT-VIEW",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-demo-workflow",
      "type": "workflowCall",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open seeded workflow via fixture",
        "workflowId": "@fixture/open-demo-workflow"
      }
    },
    {
      "id": "wait-for-builder",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for builder",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "zoom-out-far",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Zoom out far to offset view",
        "selector": "@selector/toolbar.zoomOutButton",
        "timeoutMs": 5000,
        "waitForMs": 300
      }
    },
    {
      "id": "zoom-out-more",
      "type": "click",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Zoom out more",
        "selector": "@selector/toolbar.zoomOutButton /*dup-1*/",
        "timeoutMs": 5000,
        "waitForMs": 300
      }
    },
    {
      "id": "capture-before-fit",
      "type": "screenshot",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Capture before fit view",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-fit-view",
      "type": "click",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Click fit view button",
        "selector": "@selector/toolbar.fitViewButton, @selector/toolbar.fitViewMenuItem",
        "timeoutMs": 5000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-fit-animation",
      "type": "wait",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Wait for fit view animation",
        "durationMs": 1000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-nodes-visible",
      "type": "assert",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "All nodes should be visible",
        "selector": ".react-flow__node",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Nodes should be visible after fit view"
      }
    },
    {
      "id": "capture-after-fit",
      "type": "screenshot",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Capture after fit view",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-demo-workflow-to-wait-for-builder",
      "source": "call-open-demo-workflow",
      "target": "wait-for-builder",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-builder",
      "target": "zoom-out-far",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "zoom-out-far",
      "target": "zoom-out-more",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "zoom-out-more",
      "target": "capture-before-fit",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "capture-before-fit",
      "target": "click-fit-view",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "click-fit-view",
      "target": "wait-for-fit-animation",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "wait-for-fit-animation",
      "target": "assert-nodes-visible",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "assert-nodes-visible",
      "target": "capture-after-fit",
      "type": "smoothstep"
    }
  ]
}
