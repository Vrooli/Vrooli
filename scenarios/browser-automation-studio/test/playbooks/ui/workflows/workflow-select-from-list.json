{
  "metadata": {
    "description": "Validates that workflows can be selected from project detail list and loaded into the builder",
    "requirement": "BAS-WORKFLOW-SELECT",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-dashboard",
      "type": "wait",
      "data": {
        "label": "Wait for dashboard",
        "selector": "@selector/projects.grid",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "data": {
        "label": "Open first project",
        "selector": "@selector/projects.card:first-of-type",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/workflows.card",
          "successTimeoutMs": 15000
        }
      }
    },
    {
      "id": "ensure-on-workflows-tab",
      "type": "evaluate",
      "data": {
        "label": "Check if on workflows tab",
        "expression": "document.querySelector('@selector/workflows.card, @selector/workflowBuilder.search.input, @selector/toolbar.root)') !== null",
        "storeAs": "onWorkflowsTab"
      }
    },
    {
      "id": "check-workflows-exist",
      "type": "assert",
      "data": {
        "label": "Verify workflows are listed",
        "selector": "@selector/workflows.card",
        "assertMode": "exists",
        "timeoutMs": 15000,
        "failureMessage": "Workflows should be visible after opening a project"
      }
    },
    {
      "id": "capture-workflow-list",
      "type": "screenshot",
      "data": {
        "label": "Capture workflow list",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-first-workflow",
      "type": "click",
      "data": {
        "label": "Click first workflow in list",
        "selector": "@selector/workflows.card:first-of-type",
        "timeoutMs": 5000,
        "resilience": {
          "successSelector": "@selector/workflowBuilder.canvas.reactFlow",
          "successTimeoutMs": 20000
        }
      }
    },
    {
      "id": "verify-url-changed",
      "type": "evaluate",
      "data": {
        "label": "Verify URL contains /workflows/",
        "expression": "window.location.pathname.includes('/workflows/')",
        "storeAs": "urlChanged"
      }
    },
    {
      "id": "verify-builder-loaded",
      "type": "assert",
      "data": {
        "label": "Verify builder elements exist",
        "selector": "@selector/workflowBuilder.canvas.reactFlow",
        "assertMode": "exists",
        "timeoutMs": 20000,
        "failureMessage": "Workflow builder should render after selecting a workflow"
      }
    },
    {
      "id": "capture-builder",
      "type": "screenshot",
      "data": {
        "label": "Capture loaded workflow builder",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-dashboard",
      "target": "click-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-project",
      "target": "ensure-on-workflows-tab",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "ensure-on-workflows-tab",
      "target": "check-workflows-exist",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "check-workflows-exist",
      "target": "capture-workflow-list",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "capture-workflow-list",
      "target": "click-first-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-first-workflow",
      "target": "verify-url-changed",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "verify-url-changed",
      "target": "verify-builder-loaded",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "verify-builder-loaded",
      "target": "capture-builder",
      "type": "smoothstep"
    }
  ]
}
