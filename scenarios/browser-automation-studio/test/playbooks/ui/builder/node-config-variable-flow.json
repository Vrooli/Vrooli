{
  "metadata": {
    "description": "Validates SetVariable and UseVariable node configuration for data flow testing",
    "requirement": "BAS-BUILDER-NODE-CONFIG",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {"x": 0, "y": 0},
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-dashboard",
      "type": "wait",
      "position": {"x": 200, "y": 0},
      "data": {"label": "Wait for dashboard", "durationMs": 2000, "waitType": "duration"}
    },
    {
      "id": "click-demo-project",
      "type": "click",
      "position": {"x": 400, "y": 0},
      "data": {
        "label": "Open Demo Browser Automations project",
        "selector": "[data-testid=\"project-card\"][data-project-name=\"Demo Browser Automations\"]",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-project",
      "type": "wait",
      "position": {"x": 600, "y": 0},
      "data": {"label": "Wait for project", "durationMs": 2000, "waitType": "duration"}
    },
    {
      "id": "create-workflow",
      "type": "click",
      "position": {"x": 800, "y": 0},
      "data": {
        "label": "Create workflow",
        "selector": "[data-testid=\"new-workflow-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 3000
      }
    },
    {
      "id": "wait-for-ai-modal",
      "type": "wait",
      "position": {"x": 900, "y": 0},
      "data": {
        "label": "Wait for AI modal",
        "selector": "[data-testid=\"ai-prompt-modal\"]",
        "timeoutMs": 8000,
        "waitType": "element",
        "continueOnError": true
      }
    },
    {
      "id": "switch-to-manual",
      "type": "click",
      "position": {"x": 950, "y": 0},
      "data": {
        "label": "Switch to manual builder",
        "selector": "[data-testid=\"switch-to-manual-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 1000,
        "continueOnError": true
      }
    },
    {
      "id": "wait-builder",
      "type": "wait",
      "position": {"x": 1000, "y": 0},
      "data": {
        "label": "Wait for builder",
        "selector": "[data-testid=\"workflow-builder-code-mode-button\"]",
        "timeoutMs": 15000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "drag-setvariable-node",
      "type": "dragDrop",
      "position": {"x": 1200, "y": 0},
      "data": {
        "label": "Drag SetVariable node (camelCase test)",
        "sourceSelector": "[data-testid=\"node-palette-setvariable-card\"], [data-testid=\"node-palette-setVariable-card\"]",
        "targetSelector": ".react-flow__pane",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-first-node",
      "type": "wait",
      "position": {"x": 1400, "y": 0},
      "data": {"label": "Wait for SetVariable node", "durationMs": 1500, "waitType": "duration"}
    },
    {
      "id": "verify-setvariable-node",
      "type": "assert",
      "position": {"x": 1600, "y": 0},
      "data": {
        "label": "Verify SetVariable node exists",
        "selector": ".react-flow__node",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "SetVariable node should appear (camelCase node type)"
      }
    },
    {
      "id": "select-setvariable",
      "type": "click",
      "position": {"x": 1800, "y": 0},
      "data": {
        "label": "Select SetVariable node",
        "selector": ".react-flow__node:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "capture-setvariable",
      "type": "screenshot",
      "position": {"x": 2000, "y": 0},
      "data": {"label": "Capture SetVariable node", "fullPage": true, "waitForMs": 500}
    },
    {
      "id": "find-variable-name-input",
      "type": "assert",
      "position": {"x": 2200, "y": 0},
      "data": {
        "label": "Variable name input exists",
        "selector": ".react-flow__node.selected input[placeholder*=\"variable\" i], .react-flow__node.selected input[placeholder*=\"name\" i]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Variable name input should be visible"
      }
    },
    {
      "id": "enter-variable-name",
      "type": "type",
      "position": {"x": 2400, "y": 0},
      "data": {
        "label": "Enter variable name",
        "selector": ".react-flow__node.selected input:first-of-type",
        "text": "testVar",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "find-value-input",
      "type": "assert",
      "position": {"x": 2600, "y": 0},
      "data": {
        "label": "Value input exists",
        "selector": ".react-flow__node.selected input:nth-of-type(2), .react-flow__node.selected textarea",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Value input should be visible"
      }
    },
    {
      "id": "enter-value",
      "type": "type",
      "position": {"x": 2800, "y": 0},
      "data": {
        "label": "Enter variable value",
        "selector": ".react-flow__node.selected input:nth-of-type(2), .react-flow__node.selected textarea",
        "text": "test-value-123",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "save-setvariable",
      "type": "click",
      "position": {"x": 3000, "y": 0},
      "data": {
        "label": "Click canvas to save",
        "selector": ".react-flow__pane",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "capture-setvariable-configured",
      "type": "screenshot",
      "position": {"x": 3200, "y": 0},
      "data": {"label": "Capture configured SetVariable", "fullPage": true, "waitForMs": 500}
    },
    {
      "id": "drag-usevariable-node",
      "type": "dragDrop",
      "position": {"x": 3400, "y": 0},
      "data": {
        "label": "Drag UseVariable node (camelCase test)",
        "sourceSelector": "[data-testid=\"node-palette-usevariable-card\"], [data-testid=\"node-palette-useVariable-card\"]",
        "targetSelector": ".react-flow__pane",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-second-node",
      "type": "wait",
      "position": {"x": 3600, "y": 0},
      "data": {"label": "Wait for UseVariable node", "durationMs": 1500, "waitType": "duration"}
    },
    {
      "id": "verify-usevariable-node",
      "type": "assert",
      "position": {"x": 3800, "y": 0},
      "data": {
        "label": "Verify UseVariable node exists",
        "selector": ".react-flow__node:nth-of-type(2)",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "UseVariable node should appear (camelCase node type)"
      }
    },
    {
      "id": "select-usevariable",
      "type": "click",
      "position": {"x": 4000, "y": 0},
      "data": {
        "label": "Select UseVariable node",
        "selector": ".react-flow__node:nth-of-type(2)",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "capture-usevariable",
      "type": "screenshot",
      "position": {"x": 4200, "y": 0},
      "data": {"label": "Capture UseVariable node", "fullPage": true, "waitForMs": 500}
    },
    {
      "id": "find-variable-reference-input",
      "type": "assert",
      "position": {"x": 4400, "y": 0},
      "data": {
        "label": "Variable reference input exists",
        "selector": ".react-flow__node.selected input",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Variable reference input should be visible"
      }
    },
    {
      "id": "enter-variable-reference",
      "type": "type",
      "position": {"x": 4600, "y": 0},
      "data": {
        "label": "Reference the variable",
        "selector": ".react-flow__node.selected input",
        "text": "testVar",
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "save-usevariable",
      "type": "click",
      "position": {"x": 4800, "y": 0},
      "data": {
        "label": "Click canvas to save",
        "selector": ".react-flow__pane",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "verify-complete-flow",
      "type": "screenshot",
      "position": {"x": 5000, "y": 0},
      "data": {"label": "Capture complete variable flow", "fullPage": true, "waitForMs": 500}
    }
  ],
  "edges": [
    {"id": "e1", "source": "navigate-dashboard", "target": "wait-dashboard", "type": "smoothstep"},
    {"id": "e2", "source": "wait-dashboard", "target": "click-demo-project", "type": "smoothstep"},
    {"id": "e3", "source": "click-demo-project", "target": "wait-project", "type": "smoothstep"},
    {"id": "e4", "source": "wait-project", "target": "create-workflow", "type": "smoothstep"},
    {"id": "e5", "source": "create-workflow", "target": "wait-for-ai-modal", "type": "smoothstep"},
    {"id": "e5a", "source": "wait-for-ai-modal", "target": "switch-to-manual", "type": "smoothstep"},
    {"id": "e5b", "source": "switch-to-manual", "target": "wait-builder", "type": "smoothstep"},
    {"id": "e6", "source": "wait-builder", "target": "drag-setvariable-node", "type": "smoothstep"},
    {"id": "e7", "source": "drag-setvariable-node", "target": "wait-first-node", "type": "smoothstep"},
    {"id": "e8", "source": "wait-first-node", "target": "verify-setvariable-node", "type": "smoothstep"},
    {"id": "e9", "source": "verify-setvariable-node", "target": "select-setvariable", "type": "smoothstep"},
    {"id": "e10", "source": "select-setvariable", "target": "capture-setvariable", "type": "smoothstep"},
    {"id": "e11", "source": "capture-setvariable", "target": "find-variable-name-input", "type": "smoothstep"},
    {"id": "e12", "source": "find-variable-name-input", "target": "enter-variable-name", "type": "smoothstep"},
    {"id": "e13", "source": "enter-variable-name", "target": "find-value-input", "type": "smoothstep"},
    {"id": "e14", "source": "find-value-input", "target": "enter-value", "type": "smoothstep"},
    {"id": "e15", "source": "enter-value", "target": "save-setvariable", "type": "smoothstep"},
    {"id": "e16", "source": "save-setvariable", "target": "capture-setvariable-configured", "type": "smoothstep"},
    {"id": "e17", "source": "capture-setvariable-configured", "target": "drag-usevariable-node", "type": "smoothstep"},
    {"id": "e18", "source": "drag-usevariable-node", "target": "wait-second-node", "type": "smoothstep"},
    {"id": "e19", "source": "wait-second-node", "target": "verify-usevariable-node", "type": "smoothstep"},
    {"id": "e20", "source": "verify-usevariable-node", "target": "select-usevariable", "type": "smoothstep"},
    {"id": "e21", "source": "select-usevariable", "target": "capture-usevariable", "type": "smoothstep"},
    {"id": "e22", "source": "capture-usevariable", "target": "find-variable-reference-input", "type": "smoothstep"},
    {"id": "e23", "source": "find-variable-reference-input", "target": "enter-variable-reference", "type": "smoothstep"},
    {"id": "e24", "source": "enter-variable-reference", "target": "save-usevariable", "type": "smoothstep"},
    {"id": "e25", "source": "save-usevariable", "target": "verify-complete-flow", "type": "smoothstep"}
  ]
}
