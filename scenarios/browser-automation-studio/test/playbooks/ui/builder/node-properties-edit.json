{
  "metadata": {
    "description": "Validates opening and editing node properties/configuration",
    "requirement": "BAS-BUILDER-NODE-CONFIG",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {"x": 0, "y": 0},
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-dashboard",
      "type": "wait",
      "position": {"x": 200, "y": 0},
      "data": {
        "label": "Wait for dashboard",
        "selector": "[data-testid=\"projects-grid\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "position": {"x": 400, "y": 0},
      "data": {
        "label": "Open Demo Browser Automations project",
        "selector": "[data-testid=\"project-card\"][data-project-name=\"Demo Browser Automations\"]",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-project",
      "type": "wait",
      "position": {"x": 600, "y": 0},
      "data": {"label": "Wait for project", "durationMs": 2000, "waitType": "duration"}
    },
    {
      "id": "wait-for-demo-workflow",
      "type": "wait",
      "position": {"x": 700, "y": 0},
      "data": {
        "label": "Wait for demo workflow card",
        "selector": "[data-testid=\"workflow-card\"][data-workflow-name=\"Demo: Capture Example.com Hero\"]",
        "timeoutMs": 15000,
        "waitType": "element"
      }
    },
    {
      "id": "click-workflow",
      "type": "click",
      "position": {"x": 800, "y": 0},
      "data": {
        "label": "Open seeded demo workflow",
        "selector": "[data-testid=\"workflow-card\"][data-workflow-name=\"Demo: Capture Example.com Hero\"]",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-builder",
      "type": "wait",
      "position": {"x": 1000, "y": 0},
      "data": {
        "label": "Wait for builder",
        "selector": "[data-testid=\"workflow-builder-code-mode-button\"]",
        "timeoutMs": 15000,
        "waitForMs": 2000,
        "waitType": "element"
      }
    },
    {
      "id": "assert-nodes-exist",
      "type": "assert",
      "position": {"x": 1200, "y": 0},
      "data": {
        "label": "Nodes exist on canvas",
        "selector": ".react-flow__node",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Workflow should have nodes"
      }
    },
    {
      "id": "capture-before-edit",
      "type": "screenshot",
      "position": {"x": 1400, "y": 0},
      "data": {"label": "Capture before opening properties", "fullPage": true, "waitForMs": 500}
    },
    {
      "id": "double-click-node",
      "type": "click",
      "position": {"x": 1600, "y": 0},
      "data": {
        "label": "Double-click node to open properties",
        "selector": ".react-flow__node:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 1500,
        "clickCount": 2
      }
    },
    {
      "id": "wait-for-properties",
      "type": "wait",
      "position": {"x": 1800, "y": 0},
      "data": {
        "label": "Wait for properties panel/dialog",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "check-properties-visible",
      "type": "evaluate",
      "position": {"x": 2000, "y": -100},
      "data": {
        "label": "Check if properties UI appeared",
        "expression": "document.querySelector('[role=\"dialog\"], [class*=\"properties\"], [class*=\"config\"], [class*=\"settings\"]') !== null || document.querySelector('input, textarea, select') !== null",
        "storeAs": "propertiesVisible"
      }
    },
    {
      "id": "capture-properties",
      "type": "screenshot",
      "position": {"x": 2200, "y": 0},
      "data": {"label": "Capture properties UI", "fullPage": true, "waitForMs": 500}
    },
    {
      "id": "close-properties",
      "type": "keyboard",
      "position": {"x": 2400, "y": 0},
      "data": {
        "label": "Close properties with Escape",
        "key": "Escape",
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {"id": "e1", "source": "navigate-dashboard", "target": "wait-dashboard", "type": "smoothstep"},
    {"id": "e2", "source": "wait-dashboard", "target": "click-project", "type": "smoothstep"},
    {"id": "e3", "source": "click-project", "target": "wait-project", "type": "smoothstep"},
    {"id": "e3a", "source": "wait-project", "target": "wait-for-demo-workflow", "type": "smoothstep"},
    {"id": "e4", "source": "wait-for-demo-workflow", "target": "click-workflow", "type": "smoothstep"},
    {"id": "e5", "source": "click-workflow", "target": "wait-builder", "type": "smoothstep"},
    {"id": "e6", "source": "wait-builder", "target": "assert-nodes-exist", "type": "smoothstep"},
    {"id": "e7", "source": "assert-nodes-exist", "target": "capture-before-edit", "type": "smoothstep"},
    {"id": "e8", "source": "capture-before-edit", "target": "double-click-node", "type": "smoothstep"},
    {"id": "e9", "source": "double-click-node", "target": "wait-for-properties", "type": "smoothstep"},
    {"id": "e10", "source": "wait-for-properties", "target": "check-properties-visible", "type": "smoothstep"},
    {"id": "e11", "source": "check-properties-visible", "target": "capture-properties", "type": "smoothstep"},
    {"id": "e12", "source": "capture-properties", "target": "close-properties", "type": "smoothstep"}
  ]
}
