{
  "metadata": {
    "description": "Validates deleting a node using keyboard (Delete/Backspace) after selection",
    "requirement": "BAS-BUILDER-DELETE-NODE",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-demo-workflow",
      "type": "workflowCall",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Open seeded workflow via fixture",
        "workflowId": "@fixture/open-demo-workflow"
      }
    },
    {
      "id": "wait-for-builder",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for builder to load",
        "selector": "@selector/workflowBuilderCodeModeButton",
        "timeoutMs": 15000,
        "waitType": "element"
      }
    },
    {
      "id": "assert-nodes-exist",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Workflow has nodes to delete",
        "selector": ".react-flow__node",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Workflow should have at least one node"
      }
    },
    {
      "id": "count-initial-nodes",
      "type": "evaluate",
      "position": {
        "x": 1400,
        "y": -100
      },
      "data": {
        "label": "Count initial nodes",
        "expression": "document.querySelectorAll('.react-flow__node').length",
        "storeAs": "initialNodeCount"
      }
    },
    {
      "id": "capture-before-delete",
      "type": "screenshot",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Capture canvas before delete",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-first-node",
      "type": "click",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Click first node to select it",
        "selector": ".react-flow__node:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "verify-node-selected",
      "type": "assert",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Node is selected (has selected class)",
        "selector": ".react-flow__node.selected, .react-flow__node[data-selected=\"true\"]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Node should be selected after clicking"
      }
    },
    {
      "id": "press-delete-key",
      "type": "keyboard",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Press Delete key",
        "keys": [
          "Delete"
        ],
        "timeoutMs": 3000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-delete",
      "type": "wait",
      "position": {
        "x": 2400,
        "y": 0
      },
      "data": {
        "label": "Wait for node removal",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "count-final-nodes",
      "type": "evaluate",
      "position": {
        "x": 2600,
        "y": -100
      },
      "data": {
        "label": "Count remaining nodes",
        "expression": "document.querySelectorAll('.react-flow__node').length",
        "storeAs": "finalNodeCount"
      }
    },
    {
      "id": "verify-node-deleted",
      "type": "evaluate",
      "position": {
        "x": 2800,
        "y": -100
      },
      "data": {
        "label": "Verify node count decreased",
        "expression": "(() => { const initial = Number({{initialNodeCount}} || 0); const final = Number({{finalNodeCount}} || 0); return Number.isFinite(initial) && Number.isFinite(final) && final < initial; })()",
        "storeAs": "nodeWasDeleted"
      }
    },
    {
      "id": "capture-after-delete",
      "type": "screenshot",
      "position": {
        "x": 3000,
        "y": 0
      },
      "data": {
        "label": "Capture canvas after delete",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-demo-workflow-to-wait-for-builder",
      "source": "call-open-demo-workflow",
      "target": "wait-for-builder",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "wait-for-builder",
      "target": "assert-nodes-exist",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "assert-nodes-exist",
      "target": "count-initial-nodes",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "count-initial-nodes",
      "target": "capture-before-delete",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "capture-before-delete",
      "target": "click-first-node",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "click-first-node",
      "target": "verify-node-selected",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "verify-node-selected",
      "target": "press-delete-key",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "press-delete-key",
      "target": "wait-for-delete",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "wait-for-delete",
      "target": "count-final-nodes",
      "type": "smoothstep"
    },
    {
      "id": "e14",
      "source": "count-final-nodes",
      "target": "verify-node-deleted",
      "type": "smoothstep"
    },
    {
      "id": "e15",
      "source": "verify-node-deleted",
      "target": "capture-after-delete",
      "type": "smoothstep"
    }
  ]
}
