{
  "metadata": {
    "description": "Validates that the info popover displays workflow metadata correctly",
    "requirement": "BAS-HEADER-INFO-POPOVER",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-dashboard",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for projects grid",
        "selector": "@selector/projects.grid",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open first project",
        "selector": "@selector/projects.card:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-project-detail",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for project detail",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "click-workflow",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Open workflow",
        "selector": "@selector/workflows.card:first-of-type",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-builder",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for builder to load",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "find-info-button",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Info button exists in header",
        "selector": "@selector/header.buttons.info",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Info button should be visible in workflow header"
      }
    },
    {
      "id": "click-info-button",
      "type": "click",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Click info button to open popover",
        "selector": "@selector/header.buttons.info",
        "timeoutMs": 5000,
        "waitForMs": 1500
      }
    },
    {
      "id": "assert-popover-visible",
      "type": "assert",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Info popover is visible",
        "selector": "@selector/header.info.popover",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Info popover should appear after clicking info button"
      }
    },
    {
      "id": "capture-popover",
      "type": "screenshot",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Capture info popover",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "close-popover",
      "type": "keyboard",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Close popover with Escape",
        "waitForMs": 500,
        "keys": [
          "Escape"
        ]
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-dashboard",
      "target": "click-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-project",
      "target": "wait-for-project-detail",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-project-detail",
      "target": "click-workflow",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "click-workflow",
      "target": "wait-for-builder",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "wait-for-builder",
      "target": "find-info-button",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "find-info-button",
      "target": "click-info-button",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "click-info-button",
      "target": "assert-popover-visible",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "assert-popover-visible",
      "target": "capture-popover",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "capture-popover",
      "target": "close-popover",
      "type": "smoothstep"
    }
  ]
}
