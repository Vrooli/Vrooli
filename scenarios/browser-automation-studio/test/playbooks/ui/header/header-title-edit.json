{
  "metadata": {
    "description": "Validates inline workflow title editing with save/cancel",
    "requirement": "BAS-HEADER-TITLE-EDIT",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "nav",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "proj",
      "type": "click",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Open project",
        "selector": "[data-testid=\"project-card\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-workflows",
      "type": "wait",
      "position": {
        "x": 400,
        "y": -100
      },
      "data": {
        "label": "Wait for workflows",
        "selector": "[data-testid=\"workflow-card\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "work",
      "type": "click",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Open workflow",
        "selector": "[data-testid=\"workflow-card\"]:first-of-type",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait1",
      "type": "wait",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Wait",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "get-original",
      "type": "evaluate",
      "position": {
        "x": 800,
        "y": -100
      },
      "data": {
        "label": "Get original title",
        "expression": "document.querySelector('[data-testid=\"header-workflow-title\"]')?.textContent?.trim() || ''",
        "storeAs": "originalTitle"
      }
    },
    {
      "id": "click-edit",
      "type": "click",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Click edit button",
        "selector": "[data-testid=\"header-title-edit-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "assert-input",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Input visible",
        "selector": "[data-testid=\"header-title-input\"]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Title input should appear"
      }
    },
    {
      "id": "type-new",
      "type": "type",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Type new title",
        "selector": "[data-testid=\"header-title-input\"] /*dup-1*/",
        "text": "Updated Workflow Title",
        "clearFirst": true,
        "timeoutMs": 5000,
        "waitForMs": 500
      }
    },
    {
      "id": "click-save",
      "type": "click",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Save title",
        "selector": "[data-testid=\"header-title-save-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait2",
      "type": "wait",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Wait for save",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "verify-saved",
      "type": "assert",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Input hidden",
        "selector": "[data-testid=\"header-title-input\"] /*dup-2*/",
        "assertMode": "not_exists",
        "timeoutMs": 3000,
        "failureMessage": "Input should be hidden after save"
      }
    },
    {
      "id": "cap",
      "type": "screenshot",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Capture",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "nav",
      "target": "proj",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "proj",
      "target": "wait-workflows",
      "type": "smoothstep"
    },
    {
      "id": "e-wait-work",
      "source": "wait-workflows",
      "target": "work",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "work",
      "target": "wait1",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait1",
      "target": "get-original",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "get-original",
      "target": "click-edit",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "click-edit",
      "target": "assert-input",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "assert-input",
      "target": "type-new",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "type-new",
      "target": "click-save",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-save",
      "target": "wait2",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "wait2",
      "target": "verify-saved",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "verify-saved",
      "target": "cap",
      "type": "smoothstep"
    }
  ]
}
