{
  "metadata": {
    "description": "Validates execute button runs current workflow with feedback",
    "requirement": "BAS-HEADER-EXECUTE",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "nav",
      "type": "navigate",
      "data": {
        "label": "Open BAS",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "proj",
      "type": "click",
      "data": {
        "label": "Open project",
        "selector": "@selector/projects.card:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-workflows",
      "type": "wait",
      "data": {
        "label": "Wait for workflows to load",
        "selector": "@selector/workflows.card",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "work",
      "type": "click",
      "data": {
        "label": "Open workflow with nodes",
        "selector": "@selector/workflows.card:first-of-type",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait1",
      "type": "wait",
      "data": {
        "label": "Wait for builder",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-execute-btn",
      "type": "assert",
      "data": {
        "label": "Execute button visible",
        "selector": "@selector/header.buttons.execute",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Execute button should be visible"
      }
    },
    {
      "id": "cap-before",
      "type": "screenshot",
      "data": {
        "label": "Capture before execute",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-execute",
      "type": "click",
      "data": {
        "label": "Click execute",
        "selector": "@selector/header.buttons.execute /*dup-1*/",
        "timeoutMs": 5000,
        "waitForMs": 3000
      }
    },
    {
      "id": "wait-execution",
      "type": "wait",
      "data": {
        "label": "Wait for execution to start",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "check-feedback",
      "type": "evaluate",
      "data": {
        "label": "Check for execution feedback",
        "expression": "(() => { const button = document.querySelector('@selector/header.buttons.execute'); if (!button) { return false; } const viewer = document.querySelector('@selector/executions.viewer.root'); return button.hasAttribute('disabled') || viewer !== null; })()",
        "storeAs": "hasExecutionFeedback"
      }
    },
    {
      "id": "cap-after",
      "type": "screenshot",
      "data": {
        "label": "Capture after execute",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "nav",
      "target": "proj",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "proj",
      "target": "wait-workflows",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "work",
      "target": "wait1",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait1",
      "target": "assert-execute-btn",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "assert-execute-btn",
      "target": "cap-before",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "cap-before",
      "target": "click-execute",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "click-execute",
      "target": "wait-execution",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "wait-execution",
      "target": "check-feedback",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "check-feedback",
      "target": "cap-after",
      "type": "smoothstep"
    },
    {
      "id": "e-wait-work",
      "source": "wait-workflows",
      "target": "work",
      "type": "smoothstep"
    }
  ]
}
