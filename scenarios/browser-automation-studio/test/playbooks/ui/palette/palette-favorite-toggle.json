{
  "metadata": {
    "description": "Validates toggling node favorites in the palette",
    "requirement": "BAS-PALETTE-FAVORITE-TOGGLE",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-builder",
      "type": "workflowCall",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Open builder via fixture",
        "workflowId": "@fixture/open-builder-from-demo"
      }
    },
    {
      "id": "wait-for-builder",
      "type": "wait",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Wait for workflow builder",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-node-card-visible",
      "type": "assert",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Node cards are visible in palette",
        "selector": "[data-testid=\"node-palette-navigate-card\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Node palette cards should be visible"
      }
    },
    {
      "id": "find-favorite-button",
      "type": "assert",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Favorite button exists on node card",
        "selector": "[data-testid=\"node-palette-navigate-favorite-button\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Favorite button should exist on node cards"
      }
    },
    {
      "id": "capture-before-favorite",
      "type": "screenshot",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Capture before favoriting",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-favorite-button",
      "type": "click",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Click favorite button to toggle",
        "selector": "[data-testid=\"node-palette-navigate-favorite-button\"] /*dup-1*/",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "capture-after-favorite",
      "type": "screenshot",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Capture after favoriting",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "verify-favorite-toggled",
      "type": "evaluate",
      "position": {
        "x": 2400,
        "y": 0
      },
      "data": {
        "label": "Verify favorite was toggled",
        "expression": "true",
        "storeAs": "favoriteTestComplete"
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-builder-to-wait-for-builder",
      "source": "call-open-builder",
      "target": "wait-for-builder",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "wait-for-builder",
      "target": "assert-node-card-visible",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "assert-node-card-visible",
      "target": "find-favorite-button",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "find-favorite-button",
      "target": "capture-before-favorite",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "capture-before-favorite",
      "target": "click-favorite-button",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "click-favorite-button",
      "target": "capture-after-favorite",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "capture-after-favorite",
      "target": "verify-favorite-toggled",
      "type": "smoothstep"
    }
  ]
}
