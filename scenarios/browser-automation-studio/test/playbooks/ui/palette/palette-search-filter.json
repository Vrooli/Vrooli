{
  "metadata": {
    "description": "Validates palette search filters nodes by name, description, and keywords",
    "requirement": "BAS-PALETTE-SEARCH",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "nav",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "proj",
      "type": "click",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Open project",
        "selector": "[data-testid=\"project-card\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-workflows",
      "type": "wait",
      "position": {
        "x": 200,
        "y": -100
      },
      "data": {
        "label": "Wait for workflows to load",
        "selector": "[data-testid=\"workflow-card\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "work",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open workflow",
        "selector": "[data-testid=\"workflow-card\"]:first-of-type",
        "timeoutMs": 10000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait1",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-palette",
      "type": "assert",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Palette visible",
        "selector": "[data-testid=\"node-palette-container\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Palette should be visible"
      }
    },
    {
      "id": "count-before",
      "type": "evaluate",
      "position": {
        "x": 1000,
        "y": -100
      },
      "data": {
        "label": "Count all nodes",
        "expression": "document.querySelectorAll('[data-testid^=\"node-palette-\"][data-testid$=\"-card\"]').length",
        "storeAs": "totalNodes"
      }
    },
    {
      "id": "search",
      "type": "type",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Search 'navigate'",
        "selector": "[data-testid=\"node-palette-search-input\"]",
        "text": "navigate",
        "clearFirst": false,
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "count-after",
      "type": "evaluate",
      "position": {
        "x": 1400,
        "y": -100
      },
      "data": {
        "label": "Count filtered",
        "expression": "document.querySelectorAll('[data-testid^=\"node-palette-\"][data-testid$=\"-card\"]:not([style*=\"display: none\"])').length",
        "storeAs": "filteredNodes"
      }
    },
    {
      "id": "assert-navigate-visible",
      "type": "assert",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Navigate node visible",
        "selector": "[data-testid=\"node-palette-navigate-card\"]",
        "assertMode": "exists",
        "timeoutMs": 3000,
        "failureMessage": "Navigate node should be visible after search"
      }
    },
    {
      "id": "cap",
      "type": "screenshot",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Capture filtered",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "clear",
      "type": "type",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Clear search",
        "selector": "[data-testid=\"node-palette-search-input\"] /*dup-1*/",
        "text": "",
        "clearFirst": true,
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "count-cleared",
      "type": "evaluate",
      "position": {
        "x": 2200,
        "y": -100
      },
      "data": {
        "label": "Count after clear",
        "expression": "document.querySelectorAll('[data-testid^=\"node-palette-\"][data-testid$=\"-card\"]').length",
        "storeAs": "clearedNodes"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "nav",
      "target": "proj",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "proj",
      "target": "wait-workflows",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "work",
      "target": "wait1",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait1",
      "target": "assert-palette",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "assert-palette",
      "target": "count-before",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "count-before",
      "target": "search",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "search",
      "target": "count-after",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "count-after",
      "target": "assert-navigate-visible",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "assert-navigate-visible",
      "target": "cap",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "cap",
      "target": "clear",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "clear",
      "target": "count-cleared",
      "type": "smoothstep"
    },
    {
      "id": "e-wait-work",
      "source": "wait-workflows",
      "target": "work",
      "type": "smoothstep"
    }
  ]
}
