{
  "metadata": {
    "description": "Validates selecting an example prompt in the AI modal and using it to generate a workflow",
    "requirement": "BAS-AI-EXAMPLE-PROMPT",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-dashboard",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for dashboard",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open first project",
        "selector": "[data-testid=\"project-card\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-project-detail",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for project detail",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "click-new-workflow",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Click New Workflow button",
        "selector": "[data-testid=\"new-workflow-button\"]",
        "timeoutMs": 10000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-ai-modal",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for AI modal to appear",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-ai-modal-visible",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "AI Workflow Generator modal is visible",
        "selector": "[role=\"dialog\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "AI modal should appear after clicking New Workflow"
      }
    },
    {
      "id": "capture-ai-modal",
      "type": "screenshot",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Capture AI modal initial state",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "assert-example-prompts-visible",
      "type": "assert",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Example prompts section is visible",
        "selector": "[data-testid=\"ai-example-prompt-0\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Example prompts should be displayed in AI modal"
      }
    },
    {
      "id": "click-example-prompt",
      "type": "click",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Click first example prompt",
        "selector": "[data-testid=\"ai-example-prompt-0\"]",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "wait-for-prompt-populate",
      "type": "wait",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Wait for prompt to populate",
        "durationMs": 1000,
        "waitType": "duration"
      }
    },
    {
      "id": "verify-prompt-populated",
      "type": "evaluate",
      "position": {
        "x": 2200,
        "y": -100
      },
      "data": {
        "label": "Verify prompt textarea has content",
        "expression": "(() => { const textarea = document.querySelector('textarea[placeholder*=\"prompt\"], textarea[placeholder*=\"describe\"], textarea'); if (!textarea) return false; return textarea.value.length > 10; })()",
        "storeAs": "promptHasContent"
      }
    },
    {
      "id": "verify-workflow-name-populated",
      "type": "evaluate",
      "position": {
        "x": 2400,
        "y": -100
      },
      "data": {
        "label": "Verify workflow name input has content",
        "expression": "(() => { const input = document.querySelector('input[placeholder*=\"name\"], input[type=\"text\"]'); if (!input) return false; return input.value.length > 0; })()",
        "storeAs": "nameHasContent"
      }
    },
    {
      "id": "capture-populated-modal",
      "type": "screenshot",
      "position": {
        "x": 2600,
        "y": 0
      },
      "data": {
        "label": "Capture modal with populated prompt",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "assert-generate-button-enabled",
      "type": "evaluate",
      "position": {
        "x": 2800,
        "y": -100
      },
      "data": {
        "label": "Generate button should be enabled",
        "expression": "(() => { const button = document.querySelector('[data-testid=\"ai-generate-button\"]'); if (!button) return false; return !button.disabled && !button.hasAttribute('disabled'); })()",
        "storeAs": "generateButtonEnabled"
      }
    }
  ],
  "edges": [
    {"id": "e1", "source": "navigate-dashboard", "target": "wait-for-dashboard", "type": "smoothstep"},
    {"id": "e2", "source": "wait-for-dashboard", "target": "click-project", "type": "smoothstep"},
    {"id": "e3", "source": "click-project", "target": "wait-for-project-detail", "type": "smoothstep"},
    {"id": "e4", "source": "wait-for-project-detail", "target": "click-new-workflow", "type": "smoothstep"},
    {"id": "e5", "source": "click-new-workflow", "target": "wait-for-ai-modal", "type": "smoothstep"},
    {"id": "e6", "source": "wait-for-ai-modal", "target": "assert-ai-modal-visible", "type": "smoothstep"},
    {"id": "e7", "source": "assert-ai-modal-visible", "target": "capture-ai-modal", "type": "smoothstep"},
    {"id": "e8", "source": "capture-ai-modal", "target": "assert-example-prompts-visible", "type": "smoothstep"},
    {"id": "e9", "source": "assert-example-prompts-visible", "target": "click-example-prompt", "type": "smoothstep"},
    {"id": "e10", "source": "click-example-prompt", "target": "wait-for-prompt-populate", "type": "smoothstep"},
    {"id": "e11", "source": "wait-for-prompt-populate", "target": "verify-prompt-populated", "type": "smoothstep"},
    {"id": "e12", "source": "verify-prompt-populated", "target": "verify-workflow-name-populated", "type": "smoothstep"},
    {"id": "e13", "source": "verify-workflow-name-populated", "target": "capture-populated-modal", "type": "smoothstep"},
    {"id": "e14", "source": "capture-populated-modal", "target": "assert-generate-button-enabled", "type": "smoothstep"}
  ]
}
