{
  "metadata": {
    "description": "Validates the 'Switch to Manual Builder' button in AI modal creates an empty workflow and loads the builder",
    "requirement": "BAS-AI-SWITCH-MANUAL",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-dashboard",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for dashboard",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open first project",
        "selector": "[data-testid=\"project-card\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-project-detail",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for project detail",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "click-new-workflow",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Click New Workflow button",
        "selector": "[data-testid=\"new-workflow-button\"]",
        "timeoutMs": 10000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-ai-modal",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for AI modal",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-ai-modal-visible",
      "type": "assert",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "AI modal is visible",
        "selector": "[role=\"dialog\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "AI modal should appear"
      }
    },
    {
      "id": "capture-ai-modal",
      "type": "screenshot",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Capture AI modal",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "assert-manual-button-visible",
      "type": "assert",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Manual builder button is visible",
        "selector": "[data-testid=\"switch-to-manual-button\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Switch to Manual Builder button should be visible"
      }
    },
    {
      "id": "click-manual-button",
      "type": "click",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Click Switch to Manual Builder",
        "selector": "[data-testid=\"switch-to-manual-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-modal-close",
      "type": "wait",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Wait for modal to close",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-modal-closed",
      "type": "assert",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "AI modal is closed",
        "selector": "[role=\"dialog\"] h2",
        "assertMode": "not_exists",
        "timeoutMs": 5000,
        "failureMessage": "AI modal should close after clicking manual builder button"
      }
    },
    {
      "id": "wait-for-builder-load",
      "type": "wait",
      "position": {
        "x": 2400,
        "y": 0
      },
      "data": {
        "label": "Wait for builder to load",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "assert-builder-visible",
      "type": "assert",
      "position": {
        "x": 2600,
        "y": 0
      },
      "data": {
        "label": "Workflow builder canvas is visible",
        "selector": ".react-flow, [data-testid=\"workflow-builder-canvas\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Workflow builder should load after switching to manual"
      }
    },
    {
      "id": "verify-url-changed",
      "type": "evaluate",
      "position": {
        "x": 2800,
        "y": -100
      },
      "data": {
        "label": "Verify URL changed to workflow view",
        "expression": "window.location.pathname.includes('/workflows/')",
        "storeAs": "urlChangedToWorkflow"
      }
    },
    {
      "id": "assert-palette-visible",
      "type": "assert",
      "position": {
        "x": 3000,
        "y": 0
      },
      "data": {
        "label": "Node palette is visible",
        "selector": "[data-testid^=\"node-palette-\"]",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Node palette should be visible in builder"
      }
    },
    {
      "id": "capture-builder",
      "type": "screenshot",
      "position": {
        "x": 3200,
        "y": 0
      },
      "data": {
        "label": "Capture workflow builder",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {"id": "e1", "source": "navigate-dashboard", "target": "wait-for-dashboard", "type": "smoothstep"},
    {"id": "e2", "source": "wait-for-dashboard", "target": "click-project", "type": "smoothstep"},
    {"id": "e3", "source": "click-project", "target": "wait-for-project-detail", "type": "smoothstep"},
    {"id": "e4", "source": "wait-for-project-detail", "target": "click-new-workflow", "type": "smoothstep"},
    {"id": "e5", "source": "click-new-workflow", "target": "wait-for-ai-modal", "type": "smoothstep"},
    {"id": "e6", "source": "wait-for-ai-modal", "target": "assert-ai-modal-visible", "type": "smoothstep"},
    {"id": "e7", "source": "assert-ai-modal-visible", "target": "capture-ai-modal", "type": "smoothstep"},
    {"id": "e8", "source": "capture-ai-modal", "target": "assert-manual-button-visible", "type": "smoothstep"},
    {"id": "e9", "source": "assert-manual-button-visible", "target": "click-manual-button", "type": "smoothstep"},
    {"id": "e10", "source": "click-manual-button", "target": "wait-for-modal-close", "type": "smoothstep"},
    {"id": "e11", "source": "wait-for-modal-close", "target": "assert-modal-closed", "type": "smoothstep"},
    {"id": "e12", "source": "assert-modal-closed", "target": "wait-for-builder-load", "type": "smoothstep"},
    {"id": "e13", "source": "wait-for-builder-load", "target": "assert-builder-visible", "type": "smoothstep"},
    {"id": "e14", "source": "assert-builder-visible", "target": "verify-url-changed", "type": "smoothstep"},
    {"id": "e15", "source": "verify-url-changed", "target": "assert-palette-visible", "type": "smoothstep"},
    {"id": "e16", "source": "assert-palette-visible", "target": "capture-builder", "type": "smoothstep"}
  ]
}
