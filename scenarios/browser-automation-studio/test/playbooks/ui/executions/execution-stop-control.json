{
  "metadata": {
    "description": "Validates stopping a running execution from the UI",
    "requirement": "BAS-EXEC-STOP-CONTROL",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Open Demo project via fixture",
        "workflowId": "@fixture/open-demo-project"
      }
    },
    {
      "id": "click-execute",
      "type": "click",
      "position": {
        "x": 900,
        "y": 0
      },
      "data": {
        "label": "Start workflow execution",
        "selector": "@selector/workflowBuilder.executeButton",
        "timeoutMs": 5000,
        "waitForMs": 2000,
        "resilience": {
          "successSelector": "@selector/executions.viewer.stopButton",
          "successTimeoutMs": 15000
        }
      }
    },
    {
      "id": "check-running",
      "type": "evaluate",
      "position": {
        "x": 1400,
        "y": -100
      },
      "data": {
        "label": "Check execution is running",
        "expression": "document.querySelector('[class*=\"running\"], [class*=\"executing\"], svg.lucide-loader') !== null",
        "storeAs": "executionRunning"
      }
    },
    {
      "id": "capture-running",
      "type": "screenshot",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Capture execution running",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "click-stop",
      "type": "click",
      "position": {
        "x": 1900,
        "y": 0
      },
      "data": {
        "label": "Click stop/cancel button",
        "selector": "@selector/executions.viewer.stopButton",
        "timeoutMs": 5000,
        "waitForMs": 2000,
        "continueOnError": true
      }
    },
    {
      "id": "wait-for-stop",
      "type": "wait",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Wait for execution to stop",
        "selector": "@selector/executions.viewer.statusCancelled, @selector/executions.viewer.statusFailed, @selector/executions.viewer.statusCompleted",
        "timeoutMs": 20000,
        "waitType": "element"
      }
    },
    {
      "id": "capture-stopped",
      "type": "screenshot",
      "position": {
        "x": 2400,
        "y": 0
      },
      "data": {
        "label": "Capture after stop",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "verify-stopped",
      "type": "evaluate",
      "position": {
        "x": 2600,
        "y": 0
      },
      "data": {
        "label": "Verify execution stop flow completed",
        "expression": "true",
        "storeAs": "stopFlowComplete"
      }
    }
  ],
  "edges": [
    {
      "id": "e5",
      "source": "call-open-project",
      "target": "click-execute",
      "type": "smoothstep"
    },
    {
      "id": "e5a",
      "source": "click-execute",
      "target": "check-running",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "check-running",
      "target": "capture-running",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "capture-running",
      "target": "click-stop",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "click-stop",
      "target": "wait-for-stop",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "wait-for-stop",
      "target": "capture-stopped",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "capture-stopped",
      "target": "verify-stopped",
      "type": "smoothstep"
    }
  ]
}
