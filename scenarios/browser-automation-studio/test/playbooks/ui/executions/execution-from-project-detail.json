{
  "metadata": {
    "description": "Validates workflow execution triggered from project detail view and monitors execution status",
    "requirement": "BAS-EXEC-FROM-PROJECT",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "navigate-dashboard",
      "type": "navigate",
      "position": {
        "x": 0,
        "y": 0
      },
      "data": {
        "label": "Open BAS dashboard",
        "destinationType": "scenario",
        "scenario": "browser-automation-studio",
        "scenarioPath": "/",
        "waitUntil": "networkidle0",
        "timeoutMs": 45000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-dashboard",
      "type": "wait",
      "position": {
        "x": 200,
        "y": 0
      },
      "data": {
        "label": "Wait for dashboard",
        "selector": "[data-testid=\"projects-grid\"]",
        "timeoutMs": 10000,
        "waitForMs": 1000,
        "waitType": "element"
      }
    },
    {
      "id": "click-project",
      "type": "click",
      "position": {
        "x": 400,
        "y": 0
      },
      "data": {
        "label": "Open first project",
        "selector": "[data-testid=\"project-card\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-project-detail",
      "type": "wait",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Wait for project detail",
        "selector": "h1",
        "timeoutMs": 5000,
        "waitForMs": 1500,
        "waitType": "element"
      }
    },
    {
      "id": "wait-for-workflows",
      "type": "wait",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Wait for workflow list to load",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "capture-before-execution",
      "type": "screenshot",
      "position": {
        "x": 1000,
        "y": -100
      },
      "data": {
        "label": "Capture workflow list before execution",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "find-execute-button",
      "type": "wait",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Wait for execute button to be visible",
        "selector": "[data-testid=\"workflow-execute-button\"]",
        "timeoutMs": 5000,
        "waitForMs": 500,
        "waitType": "element",
        "continueOnError": true
      }
    },
    {
      "id": "hover-workflow-card",
      "type": "hover",
      "position": {
        "x": 1400,
        "y": -100
      },
      "data": {
        "label": "Hover over workflow card to reveal actions",
        "selector": "[data-testid*=\"workflow\"]:first-of-type, [class*=\"workflow-card\"]:first-of-type",
        "timeoutMs": 3000,
        "waitForMs": 500
      }
    },
    {
      "id": "click-execute",
      "type": "click",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Click execute button",
        "selector": "[data-testid=\"workflow-execute-button\"]:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-execution-start",
      "type": "wait",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Wait for execution to start",
        "durationMs": 2500,
        "waitType": "duration"
      }
    },
    {
      "id": "check-execution-indicator",
      "type": "evaluate",
      "position": {
        "x": 2000,
        "y": -100
      },
      "data": {
        "label": "Check for execution indicators",
        "expression": "document.querySelector('[data-testid*=\"execution\"], [class*=\"executing\"], [class*=\"running\"], .animate-spin, [aria-label*=\"Executing\"]') !== null",
        "storeAs": "executionStarted"
      }
    },
    {
      "id": "capture-execution-started",
      "type": "screenshot",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Capture execution in progress",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-for-completion",
      "type": "wait",
      "position": {
        "x": 2400,
        "y": 0
      },
      "data": {
        "label": "Wait for execution to complete or stabilize",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "capture-final-state",
      "type": "screenshot",
      "position": {
        "x": 2600,
        "y": 0
      },
      "data": {
        "label": "Capture final state",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "navigate-dashboard",
      "target": "wait-for-dashboard",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "wait-for-dashboard",
      "target": "click-project",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "click-project",
      "target": "wait-for-project-detail",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "wait-for-project-detail",
      "target": "wait-for-workflows",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "wait-for-workflows",
      "target": "capture-before-execution",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "capture-before-execution",
      "target": "find-execute-button",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "find-execute-button",
      "target": "hover-workflow-card",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "hover-workflow-card",
      "target": "click-execute",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-execute",
      "target": "wait-for-execution-start",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "wait-for-execution-start",
      "target": "check-execution-indicator",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "check-execution-indicator",
      "target": "capture-execution-started",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "capture-execution-started",
      "target": "wait-for-completion",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "wait-for-completion",
      "target": "capture-final-state",
      "type": "smoothstep"
    }
  ]
}
