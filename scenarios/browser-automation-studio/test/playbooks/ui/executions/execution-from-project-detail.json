{
  "metadata": {
    "description": "Validates workflow execution triggered from project detail view and monitors execution status",
    "requirement": "BAS-EXEC-FROM-PROJECT",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Open Demo project via fixture",
        "workflowId": "@fixture/open-demo-project"
      }
    },
    {
      "id": "wait-for-workflows",
      "type": "wait",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Wait for workflow list to load",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "capture-before-execution",
      "type": "screenshot",
      "position": {
        "x": 1000,
        "y": -100
      },
      "data": {
        "label": "Capture workflow list before execution",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "hover-workflow-card",
      "type": "hover",
      "position": {
        "x": 1200,
        "y": -100
      },
      "data": {
        "label": "Hover over workflow card to reveal actions",
        "selector": "@selector/workflowCard:first-of-type",
        "timeoutMs": 3000,
        "waitForMs": 1000
      }
    },
    {
      "id": "find-execute-button",
      "type": "wait",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Wait for execute button to appear after hover",
        "selector": "@selector/workflowExecuteButton",
        "timeoutMs": 5000,
        "waitForMs": 500,
        "waitType": "element"
      }
    },
    {
      "id": "click-execute",
      "type": "click",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Click execute button",
        "selector": "@selector/workflowExecuteButton:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000
      }
    },
    {
      "id": "wait-for-execution-start",
      "type": "wait",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Wait for execution to start",
        "durationMs": 2500,
        "waitType": "duration"
      }
    },
    {
      "id": "check-execution-indicator",
      "type": "evaluate",
      "position": {
        "x": 2000,
        "y": -100
      },
      "data": {
        "label": "Check for execution indicators",
        "expression": "document.querySelector('@selector/executionItem, @selector/executionStatus, @selector/executionStopButton)') !== null",
        "storeAs": "executionStarted"
      }
    },
    {
      "id": "capture-execution-started",
      "type": "screenshot",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Capture execution in progress",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "wait-for-completion",
      "type": "wait",
      "position": {
        "x": 2400,
        "y": 0
      },
      "data": {
        "label": "Wait for execution to complete or stabilize",
        "durationMs": 3000,
        "waitType": "duration"
      }
    },
    {
      "id": "capture-final-state",
      "type": "screenshot",
      "position": {
        "x": 2600,
        "y": 0
      },
      "data": {
        "label": "Capture final state",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-project-to-wait-for-workflows",
      "source": "call-open-project",
      "target": "wait-for-workflows",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "wait-for-workflows",
      "target": "capture-before-execution",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "capture-before-execution",
      "target": "hover-workflow-card",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "hover-workflow-card",
      "target": "find-execute-button",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "find-execute-button",
      "target": "click-execute",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-execute",
      "target": "wait-for-execution-start",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "wait-for-execution-start",
      "target": "check-execution-indicator",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "check-execution-indicator",
      "target": "capture-execution-started",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "capture-execution-started",
      "target": "wait-for-completion",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "wait-for-completion",
      "target": "capture-final-state",
      "type": "smoothstep"
    }
  ]
}
