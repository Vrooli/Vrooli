{
  "metadata": {
    "description": "Validates execution result export functionality",
    "requirement": "BAS-REPLAY-EXPORT-BUNDLE",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Open Demo project via fixture",
        "workflowId": "@fixture/open-demo-project"
      }
    },
    {
      "id": "navigate-to-executions",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Navigate to Executions tab",
        "selector": "@selector/projects.tabs.executions",
        "timeoutMs": 5000,
        "waitForMs": 2000,
        "continueOnError": true
      }
    },
    {
      "id": "capture-executions-list",
      "type": "screenshot",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Capture executions list",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "find-execution-entry",
      "type": "assert",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Verify execution entries exist",
        "selector": "@selector/executions.list.item",
        "assertMode": "exists",
        "timeoutMs": 5000,
        "failureMessage": "Should have at least one execution"
      }
    },
    {
      "id": "click-execution",
      "type": "click",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Open execution details",
        "selector": "@selector/executions.actions.viewButton",
        "timeoutMs": 5000,
        "waitForMs": 1000,
        "resilience": {
          "successSelector": "@selector/executions.viewer.root"
        }
      }
    },
    {
      "id": "capture-execution-viewer",
      "type": "screenshot",
      "position": {
        "x": 1900,
        "y": 0
      },
      "data": {
        "label": "Capture execution viewer",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "find-export-button",
      "type": "evaluate",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Check for export/download button",
        "expression": "!!document.querySelector('@selector/executions.actions.exportReplayButton')",
        "storeAs": "hasExportButton"
      }
    },
    {
      "id": "capture-export-controls",
      "type": "screenshot",
      "position": {
        "x": 2400,
        "y": 0
      },
      "data": {
        "label": "Capture export controls",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "check-replay-artifacts",
      "type": "evaluate",
      "position": {
        "x": 2600,
        "y": 0
      },
      "data": {
        "label": "Verify replay artifacts available",
        "expression": "!!document.querySelector('[class*=\"replay\"], [class*=\"artifact\"], [class*=\"screenshot\"]')",
        "storeAs": "hasReplayArtifacts"
      }
    },
    {
      "id": "verify-export-flow",
      "type": "screenshot",
      "position": {
        "x": 2800,
        "y": 0
      },
      "data": {
        "label": "Final export flow verification",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-project-to-navigate-to-executions",
      "source": "call-open-project",
      "target": "navigate-to-executions",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "navigate-to-executions",
      "target": "capture-executions-list",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "capture-executions-list",
      "target": "find-execution-entry",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "find-execution-entry",
      "target": "click-execution",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-execution",
      "target": "capture-execution-viewer",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "capture-execution-viewer",
      "target": "find-export-button",
      "type": "smoothstep"
    },
    {
      "id": "e12",
      "source": "find-export-button",
      "target": "capture-export-controls",
      "type": "smoothstep"
    },
    {
      "id": "e13",
      "source": "capture-export-controls",
      "target": "check-replay-artifacts",
      "type": "smoothstep"
    },
    {
      "id": "e14",
      "source": "check-replay-artifacts",
      "target": "verify-export-flow",
      "type": "smoothstep"
    }
  ]
}
