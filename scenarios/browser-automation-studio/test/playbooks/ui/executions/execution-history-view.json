{
  "metadata": {
    "description": "Validates execution history tab displays execution list and allows selecting executions to view details",
    "requirement": "BAS-EXEC-HISTORY-VIEW",
    "version": 1
  },
  "settings": {
    "executionViewport": {
      "width": 1920,
      "height": 1080,
      "preset": "desktop"
    }
  },
  "nodes": [
    {
      "id": "call-open-project",
      "type": "workflowCall",
      "position": {
        "x": 600,
        "y": 0
      },
      "data": {
        "label": "Open Demo project via fixture",
        "workflowId": "@fixture/open-demo-project"
      }
    },
    {
      "id": "click-executions-tab",
      "type": "click",
      "position": {
        "x": 800,
        "y": 0
      },
      "data": {
        "label": "Click Execution History tab",
        "selector": "@selector/projects.tabs.executions",
        "timeoutMs": 5000,
        "waitForMs": 1500
      }
    },
    {
      "id": "wait-for-execution-list",
      "type": "wait",
      "position": {
        "x": 1000,
        "y": 0
      },
      "data": {
        "label": "Wait for execution history to load",
        "durationMs": 2000,
        "waitType": "duration"
      }
    },
    {
      "id": "click-filter-failed",
      "type": "click",
      "position": {
        "x": 1100,
        "y": -120
      },
      "data": {
        "label": "Filter to failed executions",
        "selector": "@selector/executions.filters.filter(filter=failed)",
        "timeoutMs": 5000,
        "waitForMs": 1000
      }
    },
    {
      "id": "wait-after-filter",
      "type": "wait",
      "position": {
        "x": 1250,
        "y": -120
      },
      "data": {
        "label": "Wait for filtered list",
        "durationMs": 1000,
        "waitType": "duration"
      }
    },
    {
      "id": "capture-execution-history",
      "type": "screenshot",
      "position": {
        "x": 1200,
        "y": 0
      },
      "data": {
        "label": "Capture execution history view",
        "fullPage": true,
        "waitForMs": 500
      }
    },
    {
      "id": "check-executions-exist",
      "type": "evaluate",
      "position": {
        "x": 1400,
        "y": 0
      },
      "data": {
        "label": "Check if executions are visible",
        "expression": "document.querySelectorAll('@selector/executions.list.item, @selector/executions.list.card, @selector/executions.actions.viewButton').length > 0",
        "storeAs": "hasExecutions"
      }
    },
    {
      "id": "click-first-execution",
      "type": "click",
      "position": {
        "x": 1600,
        "y": 0
      },
      "data": {
        "label": "Click first execution (if exists)",
        "selector": "@selector/executions.list.item:first-of-type, @selector/executions.list.card:first-of-type, @selector/executions.actions.viewButton:first-of-type",
        "timeoutMs": 5000,
        "waitForMs": 2000,
        "continueOnError": true
      }
    },
    {
      "id": "wait-for-execution-details",
      "type": "wait",
      "position": {
        "x": 1800,
        "y": 0
      },
      "data": {
        "label": "Wait for execution details to load",
        "durationMs": 1500,
        "waitType": "duration"
      }
    },
    {
      "id": "check-viewer-visible",
      "type": "evaluate",
      "position": {
        "x": 2000,
        "y": 0
      },
      "data": {
        "label": "Check if execution viewer is visible",
        "expression": "document.querySelector('@selector/executions.viewer.root, @selector/executions.viewer.logs, @selector/executions.viewer.screenshots') !== null",
        "storeAs": "viewerVisible"
      }
    },
    {
      "id": "capture-execution-viewer",
      "type": "screenshot",
      "position": {
        "x": 2200,
        "y": 0
      },
      "data": {
        "label": "Capture execution viewer",
        "fullPage": true,
        "waitForMs": 500
      }
    }
  ],
  "edges": [
    {
      "id": "call-open-project-to-click-executions-tab",
      "source": "call-open-project",
      "target": "click-executions-tab",
      "type": "smoothstep"
    },
    {
      "id": "e5",
      "source": "click-executions-tab",
      "target": "wait-for-execution-list",
      "type": "smoothstep"
    },
    {
      "id": "e6",
      "source": "wait-for-execution-list",
      "target": "click-filter-failed",
      "type": "smoothstep"
    },
    {
      "id": "e6-filter",
      "source": "click-filter-failed",
      "target": "wait-after-filter",
      "type": "smoothstep"
    },
    {
      "id": "e6-filter-wait",
      "source": "wait-after-filter",
      "target": "capture-execution-history",
      "type": "smoothstep"
    },
    {
      "id": "e7",
      "source": "capture-execution-history",
      "target": "check-executions-exist",
      "type": "smoothstep"
    },
    {
      "id": "e8",
      "source": "check-executions-exist",
      "target": "click-first-execution",
      "type": "smoothstep"
    },
    {
      "id": "e9",
      "source": "click-first-execution",
      "target": "wait-for-execution-details",
      "type": "smoothstep"
    },
    {
      "id": "e10",
      "source": "wait-for-execution-details",
      "target": "check-viewer-visible",
      "type": "smoothstep"
    },
    {
      "id": "e11",
      "source": "check-viewer-visible",
      "target": "capture-execution-viewer",
      "type": "smoothstep"
    }
  ]
}
