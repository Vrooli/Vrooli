{
  "name": "browser-automation-studio-ui",
  "version": "1.0.0",
  "description": "Visual browser automation workflow builder",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./dist/bootstrap.js",
    "./bootstrap": "./dist/bootstrap.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bash -c '${VROOLI_ROOT:-$(git rev-parse --show-toplevel)}/scripts/lib/ui-guard.sh npx vite'",
    "build": "tsc && npx vite build",
    "preview": "npx vite preview",
    "test": "bash ./scripts/run-vitest.sh",
    "test:stores": "vitest run --project stores",
    "test:components": "vitest run --project components-core --project components-palette",
    "test:workflow-builder": "vitest run --project workflow-builder-basic --project workflow-builder-view --project workflow-builder-toolbar --project workflow-builder-drag --project workflow-builder-autosave",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@reactflow/background": "^11.3.0",
    "@reactflow/controls": "^11.2.0",
    "@reactflow/core": "^11.10.1",
    "@reactflow/minimap": "^11.7.0",
    "@tanstack/react-query": "^5.17.0",
    "@vrooli/api-base": "file:../../../packages/api-base",
    "@vrooli/iframe-bridge": "file:../../../packages/iframe-bridge",
    "@vrooli/vitest-requirement-reporter": "workspace:*",
    "clsx": "^2.1.0",
    "date-fns": "^3.2.0",
    "express": "^5.1.0",
    "lucide-react": "^0.312.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-split": "^2.0.14",
    "react-syntax-highlighter": "^15.5.0",
    "reactflow": "^11.10.1",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.1.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
