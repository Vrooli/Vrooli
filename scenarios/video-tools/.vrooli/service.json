{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "parent": "vrooli",
    "name": "video-tools",
    "displayName": "Video Tools",
    "description": "Video processing, editing, and conversion utilities",
    "version": "1.0.0",
    "type": "business-application",
    "category": "media",
    "tags": [
      "tools",
      "utilities",
      "developers"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/video-tools"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999",
      "description": "Main API port"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Application health check configuration",
      "endpoints": {
        "api": "/health",
        "metrics": "/api/metrics"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Application",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/video-tools-api"
            ]
          },
          {
            "type": "cli",
            "command": "video-tools",
            "targets": [
              "video-tools"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "create-directories",
          "run": "mkdir -p data logs temp",
          "description": "Create required directory structure"
        },
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance",
          "condition": {
            "resource_enabled": "qdrant"
          }
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o video-tools-api ./cmd/server/main.go",
          "description": "Build Go API server",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "[ -f ui/package.json ] && cd ui && npm install --silent || echo 'UI not present, skipping'",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "[ -f ui/package.json ] && cd ui && npm run build || echo 'UI not present, skipping'",
          "description": "Build React UI for production",
          "condition": {
            "file_exists": "ui/package.json",
            "json_path_exists": "ui/package.json:scripts.build"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Application initialized\\n  API: http://localhost:${API_PORT}\\n  CLI: video-tools --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start application services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./video-tools-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/video-tools-api"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Services running:\\n  API: http://localhost:${API_PORT}\\n  CLI: video-tools --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for video-tools",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute video-tools --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop application services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'video-tools-api' || true; sleep 1; pkill -9 -f 'video-tools-api' 2>/dev/null || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'scenarios/video-tools.*vite' || true; pkill -f 'scenarios/video-tools.*serve' || true; sleep 1; pkill -9 -f 'scenarios/video-tools.*vite' 2>/dev/null || true; pkill -9 -f 'scenarios/video-tools.*serve' 2>/dev/null || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo '\ud83d\uded1 Application services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store tool configurations and processing results",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "data"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache and event bus for real-time operations"
      },
      "minio": {
        "type": "minio",
        "enabled": false,
        "required": false,
        "purpose": "Object storage for files and artifacts"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": false,
        "required": false,
        "purpose": "Vector database for semantic search and AI features"
      },
      "node-red": {
        "type": "node-red",
        "enabled": false,
        "required": false,
        "purpose": "Visual workflow automation"
      },
      "ollama": {
        "type": "ollama",
        "enabled": false,
        "required": false,
        "models": [
          "AI_MODEL_PLACEHOLDER"
        ],
        "purpose": "Local AI inference for intelligent features"
      },
      "claude-code": {
        "type": "claude-code",
        "enabled": false,
        "required": false,
        "purpose": "AI-powered development assistance and code generation"
      }
    }
  }
}