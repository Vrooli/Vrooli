{
  "name": "vrooli-assistant",
  "version": "1.0.0",
  "description": "Real-time issue capture and agent spawning overlay for Vrooli",
  "main": "main.js",
  "scripts": {
    "start": "bash -c '${VROOLI_ROOT:-$(git rev-parse --show-toplevel)}/scripts/lib/ui-guard.sh electron .'",
    "start:daemon": "electron . --daemon",
    "build": "electron-builder",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest",
    "test:integration": "npm run start:test",
    "start:test": "electron . --test",
    "electron:test": "electron . --test-mode",
    "test:hotkey": "electron . --test-hotkey"
  },
  "keywords": [
    "vrooli",
    "assistant",
    "overlay",
    "electron",
    "productivity"
  ],
  "author": "Vrooli Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "screenshot-desktop": "^1.12.7"
  },
  "build": {
    "appId": "com.vrooli.assistant",
    "productName": "Vrooli Assistant",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Development"
    }
  }
}
