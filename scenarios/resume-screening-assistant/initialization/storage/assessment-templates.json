  "scoring_methods": {
    "match_count": {
      "description": "Score based on number of keyword matches",
      "formula": "(matches / total_keywords) * 100"
    },
    "range_match": {
      "description": "Score based on matching numeric ranges",
      "formula": "predefined_score_for_range"
    },
    "keyword_presence": {
      "description": "Binary scoring for keyword presence",
      "formula": "present ? 100 : 0"
    },
    "category_match": {
      "description": "Score based on category alignment",
      "formula": "(matching_categories / total_categories) * 100"
    },
    "level_match": {
      "description": "Score based on education level",
      "formula": "predefined_score_for_level"
    },
    "field_match": {
      "description": "Score based on field of study relevance",
      "formula": "relevance_score"
    },
    "certification_count": {
      "description": "Score based on number of relevant certifications",
      "formula": "min(cert_count * 20, 100)"
    },
    "keyword_frequency": {
      "description": "Score based on keyword frequency in text",
      "formula": "normalized_frequency * 100"
    },
    "weighted_match": {
      "description": "Weighted scoring for multiple criteria",
      "formula": "sum(criterion_score * criterion_weight)"
    },
    "bonus_points": {
      "description": "Additional points for preferred qualifications",
      "formula": "min(base_score + bonus, 100)"
    },
    "domain_match": {
      "description": "Score based on domain expertise",
      "formula": "domain_relevance * 100"
    },
    "cultural_alignment": {
      "description": "Score based on cultural fit indicators",
      "formula": "alignment_score"
    }
  },
  "weights": {
    "technical_skills": 0.30,
