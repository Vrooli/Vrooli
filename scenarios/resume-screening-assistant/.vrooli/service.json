{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "resume-screening-assistant",
    "displayName": "Resume Screening Assistant",
    "description": "AI-powered resume screening and candidate evaluation platform with semantic matching and automated assessment workflows",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "business",
      "resume-screening",
      "candidate-evaluation",
      "recruitment",
      "semantic-matching",
      "javascript-ui",
      "retro-futuristic",
      "ai-assessment",
      "job-matching",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "qdrant-vectors",
      "ollama-ai"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/resume-screening-assistant"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Resume screening assistant API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "HyperRecruit 3000 UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Resume Screening Assistant health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Resume Screening Assistant",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/resume-screening-assistant-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "resume-screening-assistant",
            "targets": [
              "resume-screening-assistant"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o resume-screening-assistant-api .",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build resume screening assistant UI"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Resume Screening Assistant initialized\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${API_PORT}\\n  CLI: resume-screening-assistant --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start resume screening assistant with Go API server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./resume-screening-assistant-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/resume-screening-assistant-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Services running:\\n  ðŸŽ¨ UI Dashboard: http://localhost:$UI_PORT\\n  ðŸ“Š n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  âš™ï¸ API: http://localhost:$API_PORT\\n  ðŸ–¥ï¸ CLI: resume-screening-assistant --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for resume-screening-assistant",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"resume-screening-assistant-api\" || true; sleep 1; pkill -9 -f \"resume-screening-assistant-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/resume-screening-assistant.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/resume-screening-assistant.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/job-management-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/resume-processing-pipeline.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/semantic-search-workflow.json",
            "type": "workflow"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "nomic-embed-text"
        ]
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "resume data, job listings, and assessment results",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "data"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "semantic search and candidate-job matching"
      }
    }
  }
}
