{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "knowledge-observatory",
    "displayName": "Knowledge Observatory",
    "description": "Real-time monitoring and management of Vrooli's semantic knowledge system - acts as a consciousness monitor for collective intelligence",
    "version": "1.0.0",
    "type": "scenario",
    "category": "general",
    "tags": [
      "vrooli-enhancement",
      "knowledge-management",
      "semantic-search",
      "qdrant-visualization",
      "intelligence-monitoring",
      "knowledge-health",
      "graph-visualization",
      "go-api",
      "postgres-storage",
      "qdrant-vectors",
      "dashboard-ui"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/knowledge-observatory"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Knowledge Observatory API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Knowledge Observatory UI dashboard port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Standard API/UI health checks",
      "startup_grace_period": 15000,
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 10000,
          "interval": 30000,
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": false
        }
      ]
    },
    "setup": {
      "description": "Build API & UI, install CLI, initialize database",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/knowledge-observatory-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "knowledge-observatory",
            "targets": [
              "knowledge-observatory"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI into ~/.vrooli/bin"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o knowledge-observatory-api .",
          "description": "Build Go API binary (knowledge-observatory-api) in api/ directory"
        },
        {
          "name": "setup-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize PostgreSQL schema and seed knowledge-observatory data"
        },
        {
          "name": "install-ui-deps",
          "run": "if [ -f ui/package.json ]; then cd ui && npm install; else echo 'ui/ not present yet'; fi",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "if [ -f ui/package.json ]; then cd ui && npm run build; else echo 'ui/ not present yet'; fi",
          "description": "Build production UI"
        },
        {
          "name": "show-urls",
          "run": "echo 'üî≠ Knowledge Observatory initialized\\n  üìä API: http://localhost:${API_PORT}\\n  üåê UI: http://localhost:${UI_PORT}\\n  üéØ CLI: knowledge-observatory --help'",
          "description": "Display access URLs for API and UI"
        }
      ]
    },
    "develop": {
      "description": "Launch API and production UI bundle via Node server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./knowledge-observatory-api",
          "background": true,
          "description": "Start Go API server",
          "condition": {
            "file_exists": "api/knowledge-observatory-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'üî≠ Knowledge Observatory running:\\n  üìä API: http://localhost:${API_PORT}\\n  üåê UI: http://localhost:${UI_PORT}\\n  üéØ CLI: knowledge-observatory --help'",
          "description": "Display access URLs for API and UI after startup"
        }
      ]
    },
    "test": {
      "description": "Execute phased test suite",
      "steps": [
        {
          "name": "run-tests",
          "run": "./test/run-tests.sh",
          "description": "Run structure/unit/integration/business/performance phases"
        }
      ]
    },
    "stop": {
      "description": "Stop background processes",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f 'knowledge-observatory-api' || true",
          "description": "Stop Go API"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "description": "Primary vector database containing all semantic knowledge to monitor and search"
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Knowledge metadata, quality metrics, search history, and configuration storage",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": false,
        "required": false,
        "description": "Enhanced semantic analysis and natural language query understanding"
      }
    },
    "scenarios": {}
  }
}
