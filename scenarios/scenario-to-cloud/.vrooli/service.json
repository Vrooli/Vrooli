{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "scenario-to-cloud",
    "displayName": "Scenario To Cloud",
    "description": "Deploy one scenario and its dependencies to cloud targets (VPS first), orchestrated by deployment-manager.",
    "version": "0.0.1",
    "type": "business-application",
    "category": "deployment",
    "tags": [
      "react-ui",
      "go-api",
      "deployment",
      "packager"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/scenario-to-cloud"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Go API server",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "React UI",
      "range": "35000-39999"
    },
    "websocket": {
      "env_var": "WS_PORT",
      "description": "WebSocket channel",
      "range": "25000-29999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Standard API/UI health checks",
      "startup_grace_period": 15000,
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 10000,
          "interval": 30000,
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": false
        }
      ]
    },
    "setup": {
      "description": "Build API & UI, install CLI",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/scenario-to-cloud-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "scenario-to-cloud",
            "targets": [
              "scenario-to-cloud"
            ]
          },
          {
            "type": "command",
            "command": "test -d ui/node_modules && [ \"$(ls -A ui/node_modules 2>/dev/null)\" ]"
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI into ~/.vrooli/bin"
        },
        {
          "name": "build-api",
          "run": "cd api && GOWORK=off go mod download && GOWORK=off go build -o scenario-to-cloud-api .",
          "description": "Build Go API binary (api/scenario-to-cloud-api)"
        },
        {
          "name": "install-ui-deps",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm install; else echo 'ui/ not present yet'; fi",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm run build; else echo 'ui/ not present yet'; fi",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo \"API: http://localhost:${API_PORT}\" && echo \"UI: http://localhost:${UI_PORT}\"",
          "description": "Display access URLs"
        }
      ]
    },
    "develop": {
      "description": "Launch API and production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && exec ./scenario-to-cloud-api",
          "background": true,
          "description": "Start Go API server",
          "condition": {
            "file_exists": "api/scenario-to-cloud-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"API: http://localhost:${API_PORT}\" && echo \"UI: http://localhost:${UI_PORT}\"",
          "description": "Display access URLs"
        }
      ]
    },
    "production": {
      "description": "Start API and production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && exec ./scenario-to-cloud-api",
          "background": true,
          "description": "Start Go API server",
          "condition": {
            "file_exists": "api/scenario-to-cloud-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"API: http://localhost:${API_PORT}\" && echo \"UI: http://localhost:${UI_PORT}\"",
          "description": "Display access URLs"
        }
      ]
    },
    "test": {
      "description": "Execute test suite via test-genie",
      "steps": [
        {
          "name": "run-tests",
          "run": "test-genie execute scenario-to-cloud structure standards dependencies lint docs unit integration business",
          "description": "Run test-genie orchestrated test suite (fast, deterministic phases)"
        }
      ]
    },
    "stop": {
      "description": "Stop background processes",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f 'scenario-to-cloud-api' || true",
          "description": "Stop Go API"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {}
  }
}
