{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "scenario-to-mcp",
    "displayName": "Scenario to MCP",
    "description": "Add Model Context Protocol (MCP) support to any Vrooli scenario, enabling external AI tools to discover and use scenario capabilities",
    "version": "1.0.0",
    "tags": [
      "vrooli-enhancement",
      "mcp",
      "ai-tools",
      "integration",
      "interoperability",
      "automation",
      "tool-discovery",
      "react-ui",
      "go-api",
      "postgres-storage"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/scenario-to-mcp"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Main API port for MCP management",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "React dashboard UI port",
      "range": "35000-39999"
    },
    "registry": {
      "env_var": "REGISTRY_PORT",
      "description": "MCP registry discovery service port",
      "range": "3290-3299"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Scenario to MCP health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "registry_endpoint",
          "type": "http",
          "target": "http://localhost:${REGISTRY_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Scenario to MCP",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/scenario-to-mcp-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "scenario-to-mcp",
            "targets": [
              "scenario-to-mcp"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install React UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React dashboard"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o scenario-to-mcp-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Scenario to MCP initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Registry: http://localhost:${REGISTRY_PORT}/registry\\n  CLI: scenario-to-mcp --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Scenario to MCP services",
      "steps": [
        {
          "name": "start-api",
          "run": "export DATABASE_URL=$(./lib/get-db-url.sh) && cd api && ./scenario-to-mcp-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/scenario-to-mcp-api"
          }
        },
        {
          "name": "start-registry",
          "run": "export DATABASE_URL=$(./lib/get-db-url.sh) && cd api && ./scenario-to-mcp-api --registry-mode",
          "description": "Start MCP registry service",
          "background": true,
          "condition": {
            "file_exists": "api/scenario-to-mcp-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start Express server with built React dashboard",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Registry: http://localhost:${REGISTRY_PORT}/registry\\n  CLI: scenario-to-mcp --help\\n\\nKey endpoints:\\n  GET /api/v1/mcp/endpoints - List all MCP endpoints\\n  POST /api/v1/mcp/add - Add MCP to scenario\\n  GET /api/v1/mcp/registry - Service discovery'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for scenario-to-mcp",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop all services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"scenario-to-mcp-api\" || true; sleep 1; pkill -9 -f \"scenario-to-mcp-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"npm run dev\" || true; pkill -f \"vite\" || true",
          "description": "Stop UI development server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store MCP registry, endpoint metadata, and usage analytics",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": false,
        "required": false,
        "purpose": "Cache MCP endpoint discovery for performance"
      }
    }
  }
}
