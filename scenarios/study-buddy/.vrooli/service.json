{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "study-buddy",
    "displayName": "Study Buddy",
    "description": "AI-powered study assistant for personalized learning",
    "version": "1.0.0",
    "tags": [
      "personal-assistant",
      "education",
      "learning",
      "study",
      "flashcards",
      "quiz",
      "spaced-repetition",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "30250-30499",
      "fallback": "auto",
      "description": "Study Buddy API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "36750-36999",
      "fallback": "auto",
      "description": "Study Buddy UI port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/study-material-processor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/flashcard-generator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/quiz-generator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/study-plan-generator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/progress-analyzer.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/spaced-repetition-engine.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/adaptive-learning-engine.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/content-generator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/pomodoro-timer.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/study-session-tracker.json",
            "type": "workflow"
          }
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store study materials, progress, and user data",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "script"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Vector storage for semantic search of study materials"
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Session caching and temporary data"
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "purpose": "Local LLM for content generation and learning assistance",
        "models": [
          "llama3.2",
          "nomic-embed-text"
        ]
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Study Buddy",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/study-buddy-api"
            ]
          },
          {
            "type": "cli",
            "command": "study-buddy"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "chmod +x cli/study-buddy && ln -sf $(pwd)/cli/study-buddy /usr/local/bin/study-buddy 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o study-buddy-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'Study Buddy initialized - UI: http://localhost:${UI_PORT} - API: http://localhost:${SERVICE_PORT} - CLI: study-buddy --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Study Buddy with API and UI servers",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./study-buddy-api &",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/study-buddy-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT npm start &",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null && curl -sf http://localhost:$UI_PORT > /dev/null",
          "description": "Wait for services to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'Services running - UI: http://localhost:${UI_PORT} - API: http://localhost:${SERVICE_PORT} - CLI: study-buddy --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Study Buddy API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-study-materials",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/study/materials",
          "description": "Test API study materials endpoint"
        },
        {
          "name": "test-cli-help",
          "run": "study-buddy --help",
          "description": "Test CLI help command"
        }
      ]
    },
    "stop": {
      "description": "Stop Study Buddy services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'study-buddy-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'npm.*start' || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'Study Buddy services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
