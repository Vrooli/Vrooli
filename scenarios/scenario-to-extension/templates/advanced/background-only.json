{
    "name": "Background Only", 
    "description": "Extension with only a background service worker. No UI or content scripts.",
    "use_cases": [
        "API polling and monitoring",
        "Cross-tab coordination", 
        "Scheduled tasks and alarms",
        "Browser event handling",
        "Headless automation"
    ],
    "manifest_template": {
        "manifest_version": 3,
        "name": "{{APP_NAME}}",
        "version": "{{VERSION}}",
        "description": "{{APP_DESCRIPTION}}",
        "permissions": [
            "background",
            "storage",
            "alarms",
            "tabs"
        ],
        "background": {
            "service_worker": "background.js",
            "type": "module"
        },
        "icons": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png", 
            "128": "icons/icon-128.png"
        }
    },
    "files": [
        "manifest.json",
        "background.js",
        "icons/"
    ],
    "excluded_files": [
        "content.js",
        "popup.html",
        "popup.js"
    ],
    "template_variables": {
        "DEBUG_MODE": false,
        "AUTO_SYNC_INTERVAL": 5
    }
}