{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "idea-generator",
    "displayName": "Idea Generator",
    "description": "AI-powered idea generation platform with document processing, semantic search, and agent refinement",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "business-applications",
      "ideation",
      "brainstorming",
      "ai",
      "creativity",
      "innovation",
      "document-processing",
      "semantic-search",
      "custom-ui",
      "multi-agent",
      "go-api",
      "n8n-workflows",
      "nodejs-server",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "minio-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 23750,
      "fallback": "auto",
      "description": "Idea generator coordination API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 31008,
      "fallback": "auto",
      "description": "Creative brainstorming web interface port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "shared_workflows": [
        "ollama",
        "embedding-generator",
        "smart-semantic-search"
      ],
      "initialization": [
        {
          "file": "initialization/n8n/idea-generation-workflow.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/document-processing-pipeline.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/agent-refinement-workflow.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/semantic-search-workflow.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/campaign-sync-workflow.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/chat-refinement-workflow.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2",
        "mistral",
        "nomic-embed-text"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store campaigns, ideas, chat history, and user data",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "script"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "script"
        }
      ]
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": true,
      "purpose": "Store uploaded documents and processed content",
      "initialization": [
        {
          "file": "initialization/storage/minio/buckets.json",
          "type": "config"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector database for semantic search of ideas and documents - enables AI-powered similarity matching and content discovery",
      "initialization": [
        {
          "file": "initialization/storage/qdrant/collections.json",
          "type": "config"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache and real-time chat session management"
    },
    "unstructured-io": {
      "type": "unstructured-io",
      "enabled": true,
      "required": true,
      "purpose": "Document processing and text extraction for uploaded files"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Idea Generator health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Idea Generator",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/idea-generator-api"
            ]
          },
          {
            "type": "cli",
            "command": "idea-generator"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o idea-generator-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install Node.js UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Idea Generator initialized\\n  Web UI: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${API_PORT}\\n  Vector Search: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  Document Storage: http://localhost:${RESOURCE_PORTS[minio]}\\n  CLI: idea-generator --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start idea generator with Go API server and Node.js UI",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && env PORT=$API_PORT ./idea-generator-api",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/idea-generator-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && env UI_PORT=$UI_PORT API_URL=http://localhost:$API_PORT npm start",
          "description": "Start Node.js UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$API_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo '\ud83d\ude80 Idea Generator running:\\n  Web UI: http://localhost:$UI_PORT\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$API_PORT\\n  CLI: idea-generator --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test idea generator API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-campaigns-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/campaigns",
          "description": "Test API campaigns endpoint"
        },
        {
          "name": "test-workflows-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/workflows",
          "description": "Test API workflows endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats idea-generator.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/idea-generator.bats"
          }
        },
        {
          "name": "test-integration",
          "run": "./test.sh",
          "description": "Run integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop idea generator services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'idea-generator-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f \"ui/server.js\" || pkill -f \"node.*server.js\" || true",
          "description": "Stop Node.js UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo '\ud83d\uded1 Idea Generator services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}