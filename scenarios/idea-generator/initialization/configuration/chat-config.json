      "max_response_time": 18000
    },
    "synthesize": {
      "name": "Synthesis Agent",
      "avatar": "üîÆ",
      "color": "#EC4899",
      "personality": "integrative and holistic",
      "response_style": "unified perspective with connections",
      "max_response_time": 25000
    },
    "validate": {
      "name": "Validator Agent",
      "avatar": "‚úÖ",
