{
  "websocket": {
    "enabled": true,
    "port": 5683,
    "path": "/ws/chat",
    "heartbeat_interval": 30000,
    "reconnect_attempts": 5,
    "reconnect_delay": 1000
  },
  "session": {
    "max_duration": 3600000,
    "idle_timeout": 300000,
    "auto_save_interval": 10000,
    "max_messages_per_session": 1000
  },
  "agents": {
