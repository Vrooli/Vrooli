{
  "name": "core-debugger-ui",
  "version": "1.0.0",
  "description": "Status dashboard for Vrooli core infrastructure debugger",
  "private": true,
  "scripts": {
    "dev": "bash -c '${VROOLI_ROOT:-$(git rev-parse --show-toplevel)}/scripts/lib/ui-guard.sh VITE_PORT=${VITE_PORT:-5173} vite --host 0.0.0.0'",
    "build": "tsc && vite build",
    "preview": "vite preview --host 0.0.0.0 --port ${UI_PORT:-4173}",
    "start": "bash -c '${VROOLI_ROOT:-$(git rev-parse --show-toplevel)}/scripts/lib/ui-guard.sh node server.js'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.0"
  }
}
