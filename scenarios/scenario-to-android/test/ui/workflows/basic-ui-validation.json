{
  "name": "scenario-to-android-ui-validation",
  "description": "Validate scenario-to-android UI renders correctly and server is accessible",
  "version": "1.0.0",
  "test_type": "ui_automation",
  "target_scenario": "scenario-to-android",
  "steps": [
    {
      "name": "health_check",
      "description": "Verify UI server is running and healthy",
      "action": "http_request",
      "url": "http://localhost:${UI_PORT}/health",
      "method": "GET",
      "expected_status": 200,
      "expected_body_contains": ["healthy", "readiness"],
      "timeout_ms": 5000
    },
    {
      "name": "load_homepage",
      "description": "Load the UI homepage",
      "action": "navigate",
      "url": "http://localhost:${UI_PORT}",
      "wait_for_selector": "body",
      "timeout_ms": 10000
    },
    {
      "name": "verify_page_title",
      "description": "Verify page title contains scenario name",
      "action": "check_text",
      "selector": "h1, title",
      "expected_contains": "Android",
      "required": true
    },
    {
      "name": "verify_server_status",
      "description": "Verify server status indicator is visible",
      "action": "check_element",
      "selector": "#server-status, .status-indicator",
      "expected_state": "visible",
      "required": false
    },
    {
      "name": "screenshot_homepage",
      "description": "Capture screenshot of homepage for visual validation",
      "action": "screenshot",
      "output_path": "/tmp/scenario-to-android-ui-test.png",
      "full_page": true
    },
    {
      "name": "verify_api_connectivity",
      "description": "Verify UI shows API connectivity status",
      "action": "check_text",
      "selector": "body",
      "expected_contains": "API",
      "required": false
    }
  ],
  "success_criteria": {
    "required_steps": ["health_check", "load_homepage", "screenshot_homepage"],
    "optional_steps": ["verify_page_title", "verify_server_status", "verify_api_connectivity"],
    "max_execution_time_ms": 30000
  },
  "cleanup": {
    "close_browser": true,
    "remove_temp_files": false
  },
  "metadata": {
    "created": "2025-10-19",
    "author": "AI Agent",
    "tags": ["ui", "validation", "smoke-test"],
    "priority": "high"
  }
}
