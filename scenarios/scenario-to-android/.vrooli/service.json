{
  "service": {
    "name": "scenario-to-android",
    "displayName": "Scenario To Android",
    "parent": "vrooli",
    "type": "scenario",
    "category": "deployment",
    "tags": [],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/scenario-to-android"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    },
    "description": "Transform Vrooli scenarios into native Android applications with full device capabilities",
    "version": "1.0.0"
  },
  "version": "1.0.0",
  "keywords": [
    "android",
    "mobile",
    "apk",
    "native",
    "webview",
    "play-store",
    "deployment"
  ],
  "requirements": {
    "node_version": ">=18.0.0",
    "platform": [
      "linux",
      "darwin"
    ],
    "memory": "2GB",
    "disk": "5GB",
    "external_tools": [
      "android-sdk",
      "gradle",
      "java"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999",
      "description": "Android build API server port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999",
      "description": "Android build UI server port"
    }
  },
  "android_config": {
    "min_sdk": 24,
    "target_sdk": 34,
    "compile_sdk": 34,
    "build_tools": "34.0.0",
    "gradle_version": "8.2.0",
    "default_permissions": [
      "INTERNET",
      "ACCESS_NETWORK_STATE"
    ],
    "optional_features": [
      "camera",
      "location",
      "notifications",
      "storage",
      "biometric"
    ],
    "architectures": [
      "arm64-v8a",
      "armeabi-v7a",
      "x86",
      "x86_64"
    ]
  },
  "deployment": {
    "type": "service",
    "auto_start": true,
    "health_check_interval": 30,
    "restart_policy": "on-failure",
    "max_restarts": 3
  },
  "lifecycle": {
    "health": {
      "description": "Scenario to Android health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize scenario-to-android",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/scenario-to-android-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "scenario-to-android",
            "targets": [
              "scenario-to-android"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go build -o scenario-to-android-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Scenario to Android initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: scenario-to-android --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start scenario-to-android services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./scenario-to-android-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/scenario-to-android-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Serve production UI bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Scenario to Android running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"scenario-to-android-api\" || true; sleep 1; pkill -9 -f \"scenario-to-android-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "# WARNING: Could not determine UI technology, using generic pattern\npkill -f \"scenarios/scenario-to-android/ui\" || true; sleep 1; pkill -9 -f \"scenarios/scenario-to-android/ui\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for scenario-to-android",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "required": [
        {
          "name": "ollama",
          "purpose": "AI-powered code generation for Android app templates and build scripts",
          "models": [
            "llama3.2"
          ]
        }
      ],
      "optional": [
        {
          "name": "minio",
          "purpose": "Store generated APKs and build artifacts",
          "fallback": "Local filesystem storage"
        },
        {
          "name": "redis",
          "purpose": "Cache build configurations and templates",
          "fallback": "Rebuild from scratch each time"
        },
        {
          "name": "postgres",
          "purpose": "Track build history and app metadata",
          "fallback": "JSON file storage"
        }
      ]
    }
  }
}
