{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "codex-console",
    "displayName": "Codex Console",
    "description": "Secure iframe-embedded telepresence layer for the Codex CLI",
    "version": "0.1.0",
    "tags": [
      "codex",
      "telepresence",
      "terminal",
      "iframe",
      "go-api",
      "vanilla-js"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Codex Console API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Codex Console UI port",
      "range": "35000-39999"
    }
  },
  "resources": {},
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Codex Console health check",
      "endpoints": {
        "api": "/healthz"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/healthz",
          "critical": true,
          "timeout": 8000,
          "interval": 30000
        }
      ],
      "timeout": 8000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Codex Console services and dependencies",
      "steps": [
        {
          "name": "prepare-storage",
          "run": "mkdir -p data/sessions",
          "description": "Create storage directory for transcript archives"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod tidy && go build -o codex-console-api .",
          "description": "Build Go API server"
        },
        {
          "name": "show-next-steps",
          "run": "echo 'Codex Console ready. Use make run to launch services.'",
          "description": "Display next-step guidance"
        }
      ]
    },
    "develop": {
      "description": "Run Codex Console API and UI servers via lifecycle",
      "steps": [
        {
          "name": "build-api",
          "run": "cd api && go build -o codex-console-api .",
          "description": "Build Go API server binary"
        },
        {
          "name": "start-api",
          "run": "cd api && ./codex-console-api",
          "description": "Start Go API server",
          "background": true,
          "condition": {
            "file_exists": "api/codex-console-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI proxy server",
          "background": true,
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"UI: http://localhost:${UI_PORT}  |  API: http://localhost:${API_PORT}\"",
          "description": "Display local access URLs"
        }
      ]
    },
    "test": {
      "description": "Placeholder tests for Codex Console",
      "steps": [
        {
          "name": "lint-and-build",
          "run": "cd api && go vet ./...",
          "description": "Run Go vet checks"
        }
      ]
    },
    "stop": {
      "description": "Stop Codex Console services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"codex-console-api\" || true; sleep 1; pkill -9 -f \"codex-console-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/codex-console/ui/server.js\" || true; sleep 1; pkill -9 -f \"scenarios/codex-console/ui/server.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}