{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "chore-tracking",
    "displayName": "ChoreQuest",
    "description": "Gamified chore tracking with points, achievements, and cute quirky UX for making cleaning fun",
    "version": "1.0.0",
    "tags": [
      "personal-assistant",
      "lifestyle",
      "chores",
      "gamification",
      "cleaning",
      "tasks",
      "points",
      "achievements",
      "family",
      "javascript-ui",
      "fun",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 22750,
      "fallback": "auto",
      "description": "ChoreQuest API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 30800,
      "fallback": "auto",
      "description": "ChoreQuest UI port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "shared_workflows": [
        "ollama"
      ],
      "initialization": [
        {
          "file": "initialization/n8n/chore-scheduler.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/points-calculator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/achievement-tracker.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/reward-manager.json",
          "type": "workflow"
        }
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store users, chores, points, achievements, rewards, and schedules",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Cache leaderboard, active sessions, and real-time point updates"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Chore Tracking health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize ChoreQuest",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/chore-tracking-api"
            ]
          },
          {
            "type": "cli",
            "command": "chore-tracking"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x chore-tracker && ln -sf $(pwd)/chore-tracker /usr/local/bin/chore-tracker",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o chore-tracker-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸŽ® ChoreQuest initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start ChoreQuest services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && env PORT=$API_PORT ./chore-tracker-api",
          "description": "Start API server",
          "background": true,
          "condition": {
            "file_exists": "api/chore-tracker-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "timeout 30 sh -c 'until curl -sf http://localhost:$API_PORT/health >/dev/null 2>&1; do sleep 1; done'",
          "description": "Wait for API to be ready"
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && env PORT=$UI_PORT API_URL=http://localhost:$API_PORT npm start",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'ðŸš€ ChoreQuest running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test ChoreQuest services",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-chores",
          "run": "curl -sf http://localhost:$API_PORT/api/chores",
          "description": "Test chores endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop ChoreQuest services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'chore-tracker-api' || true; pkill -f 'npm.*chore-tracking' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}