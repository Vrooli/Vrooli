{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "image-generation-pipeline",
    "displayName": "Enterprise Image Generation Pipeline",
    "description": "Enterprise-grade AI image generation platform with voice briefings, multi-brand management, and quality control",
    "version": "1.0.0",
    "type": "business-application",
    "category": "creative-tools",
    "tags": [
      "visual-generation",
      "voice-enabled",
      "enterprise-ready",
      "multimodal",
      "windmill-ui",
      "high-revenue-potential",
      "brand-management",
      "quality-control",
      "comfyui-workflows"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Image generation API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/main-workflow.json",
            "type": "workflow"
          }
        ],
        "sharedWorkflows": ["ollama", "embedding-generator"]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/windmill-app.json",
            "type": "app"
          }
        ]
      },
      "comfyui": {
        "type": "comfyui",
        "enabled": true,
        "required": true,
        "purpose": "AI image generation workflows",
        "initialization": [
          {
            "file": "initialization/workflows/comfyui/brand-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/workflows/comfyui/qc-workflow.json",
            "type": "workflow"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.1:8b",
          "nomic-embed-text",
          "llava:13b"
        ]
      },
      "whisper": {
        "type": "whisper",
        "enabled": true,
        "required": true,
        "purpose": "voice-to-text for image briefings"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "campaign and brand data",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "purpose": "style and brand vector embeddings"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "generated images and brand assets storage"
      },
      "vault": {
        "type": "vault",
        "enabled": false,
        "required": false,
        "purpose": "API keys and secrets management"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Enterprise Image Generation Pipeline",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o image-generation-pipeline-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Image Generation Pipeline initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  ComfyUI: http://localhost:${RESOURCE_PORTS[comfyui]}\\n  API: http://localhost:${SERVICE_PORT}\\n  CLI: image-generation-pipeline --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start image generation pipeline with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./image-generation-pipeline-api &",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/image-generation-pipeline-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Image Generation Pipeline running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  ComfyUI: http://localhost:${RESOURCE_PORTS[comfyui]}\\n  API: http://localhost:$SERVICE_PORT\\n  CLI: image-generation-pipeline --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test image generation pipeline API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-campaigns-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/campaigns",
          "description": "Test API campaigns endpoint"
        },
        {
          "name": "test-generation-endpoint",
          "run": "bash test/test-generation-endpoint.sh",
          "description": "Test API image generation endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats image-generation-pipeline.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/image-generation-pipeline.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop image generation pipeline services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'image-generation-pipeline-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Image Generation Pipeline services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
