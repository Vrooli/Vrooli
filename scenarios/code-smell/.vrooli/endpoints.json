{
  "$schema": "../../../scripts/scenarios/schemas/endpoints.schema.json",
  "version": "1.0.0",
  "endpoints": [
    {
      "id": "health",
      "path": "/api/v1/health",
      "method": "GET",
      "summary": "Service health",
      "category": "system",
      "description": "Aggregated service health including rules engine readiness."
    },
    {
      "id": "health-live",
      "path": "/api/v1/health/live",
      "method": "GET",
      "summary": "Liveness check",
      "category": "system",
      "description": "Fast liveness probe for orchestration."
    },
    {
      "id": "health-ready",
      "path": "/api/v1/health/ready",
      "method": "GET",
      "summary": "Readiness check",
      "category": "system",
      "description": "Confirms rules engine and workers are ready."
    },
    {
      "id": "analyze",
      "path": "/api/v1/code-smell/analyze",
      "method": "POST",
      "summary": "Analyze code",
      "category": "analysis",
      "description": "Runs the smell detector against submitted file paths."
    },
    {
      "id": "list-rules",
      "path": "/api/v1/code-smell/rules",
      "method": "GET",
      "summary": "List rules",
      "category": "rules",
      "description": "Returns available detection rules and metadata."
    },
    {
      "id": "autofix",
      "path": "/api/v1/code-smell/fix",
      "method": "POST",
      "summary": "Apply fix",
      "category": "remediation",
      "description": "Requests an auto-fix / reviewer workflow for a violation."
    },
    {
      "id": "queue",
      "path": "/api/v1/code-smell/queue",
      "method": "GET",
      "summary": "View queue",
      "category": "analysis",
      "description": "Shows queued smell investigations awaiting action."
    },
    {
      "id": "learn",
      "path": "/api/v1/code-smell/learn",
      "method": "POST",
      "summary": "Submit learning feedback",
      "category": "analysis",
      "description": "Feeds positive/negative signals into the learning system."
    },
    {
      "id": "stats",
      "path": "/api/v1/code-smell/stats",
      "method": "GET",
      "summary": "Usage stats",
      "category": "analysis",
      "description": "Returns aggregated run statistics and auto-fix rates."
    },
    {
      "id": "docs",
      "path": "/api/v1/docs",
      "method": "GET",
      "summary": "API docs",
      "category": "system",
      "description": "Serves the built API documentation bundle."
    }
  ]
}
