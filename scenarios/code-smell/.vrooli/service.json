{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "code-smell",
    "displayName": "Code Smell Detector",
    "description": "Self-improving code quality guardian with AI-powered smell detection and auto-fixing",
    "version": "1.0.0",
    "tags": [
      "analysis",
      "quality",
      "lint",
      "smell",
      "technical-debt",
      "auto-fix",
      "maintenance"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/code-smell"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "enabled": true,
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999"
    }
  },
  "initialization": {
    "rules": {
      "path": "initialization/rules/",
      "hot_reload": true,
      "watch_interval": 1000,
      "default_files": [
        "default.yaml",
        "vrooli-specific.yaml"
      ]
    },
    "database": {
      "migrations": "initialization/storage/postgres/migrations/",
      "seed_data": "initialization/storage/postgres/seed.sql"
    }
  },
  "configuration": {
    "auto_fix": {
      "enabled": true,
      "risk_levels": [
        "safe"
      ],
      "batch_size": 10,
      "dry_run_default": false
    },
    "analysis": {
      "parallel_workers": 4,
      "file_extensions": [
        ".js",
        ".ts",
        ".jsx",
        ".tsx",
        ".go",
        ".py",
        ".sh",
        ".yaml",
        ".json"
      ],
      "ignore_patterns": [
        "node_modules",
        ".git",
        "dist",
        "build",
        ".next",
        "__pycache__"
      ],
      "max_file_size_mb": 10
    },
    "learning": {
      "enabled": true,
      "confidence_threshold": 0.8,
      "min_examples": 5,
      "retention_days": 90
    },
    "performance": {
      "cache_ttl_seconds": 900,
      "max_memory_mb": 2048,
      "request_timeout_seconds": 30
    }
  },
  "deployment": {
    "docker": {
      "image": "vrooli/code-smell:latest",
      "build_context": "./",
      "dockerfile": "Dockerfile"
    },
    "health_checks": {
      "startup": {
        "path": "/api/v1/health",
        "interval": 5,
        "timeout": 3,
        "retries": 10
      },
      "liveness": {
        "path": "/api/v1/health/live",
        "interval": 30,
        "timeout": 5
      },
      "readiness": {
        "path": "/api/v1/health/ready",
        "interval": 10,
        "timeout": 3
      }
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Code Smell Detector health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Code Smell Detector",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/code-smell-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "code-smell",
            "targets": [
              "code-smell"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install Code Smell CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o code-smell-api .",
          "description": "Build Go API server binary",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React dashboard"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd75\ufe0f Code Smell Detector initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: code-smell --help'",
          "description": "Display service URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop code-smell services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"code-smell-api\" || true; sleep 1; pkill -9 -f \"code-smell-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "true",
          "description": "Stop UI process"
        }
      ]
    },
    "develop": {
      "description": "Development mode",
      "steps": [
        {
          "name": "build-api",
          "run": "cd api && go build -o code-smell-api .",
          "description": "Build API server"
        },
        {
          "name": "start-api",
          "run": "cd api && ./code-smell-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/code-smell-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && UI_PORT=${UI_PORT} NODE_ENV=production node server.js",
          "description": "Serve production UI bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd0d Code Smell Detector running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Health: http://localhost:${UI_PORT}/health'",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for code-smell",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "required": [
        {
          "name": "postgres",
          "purpose": "Store rules, violations, history, and learned patterns",
          "config": {
            "database": "code_smell",
            "schema": "public"
          }
        },
        {
          "name": "resource-claude-code",
          "purpose": "AI-powered pattern detection beyond regex capabilities",
          "config": {
            "model": "claude-3-opus",
            "max_tokens": 4000
          }
        }
      ],
      "optional": [
        {
          "name": "redis",
          "purpose": "Cache analysis results for performance",
          "fallback": "In-memory cache with 15-minute TTL"
        },
        {
          "name": "visited-tracker",
          "purpose": "Skip analysis of unchanged files",
          "fallback": "Timestamp-based change detection"
        }
      ]
    }
  }
}
