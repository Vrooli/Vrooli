{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "research-assistant",
    "displayName": "AI Research Assistant",
    "description": "Enterprise-grade AI research platform with DeepSearch-quality reports, chatbot interface, and automated scheduling",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "ai-research",
      "research-automation",
      "competitive-intelligence",
      "knowledge-management",
      "privacy-focused",
      "custom-ui",
      "market-analysis",
      "content-synthesis",
      "searxng-integration",
      "rag-system",
      "go-api",
      "n8n-workflows",
      "express-ui",
      "postgres-storage",
      "qdrant-vectors",
      "minio-storage",
      "ollama-ai"
    ]
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/n8n/chat-rag-workflow.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/main-workflow.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/research-orchestrator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/scheduled-reports.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "qwen2.5:32b",
        "nomic-embed-text",
        "llama3.2:3b"
      ]
    },
    "unstructured-io": {
      "type": "unstructured-io",
      "enabled": true,
      "required": false,
      "purpose": "document processing and text extraction"
    },
    "browserless": {
      "type": "browserless",
      "enabled": true,
      "required": false,
      "purpose": "web scraping for research content"
    },
    "searxng": {
      "type": "searxng",
      "enabled": true,
      "required": true,
      "purpose": "privacy-focused web search"
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "research data and report storage"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "vector embeddings for RAG system"
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": false,
      "purpose": "document and asset storage"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 27750,
      "fallback": "auto",
      "description": "Research assistant API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 31001,
      "fallback": "auto",
      "description": "Research assistant UI dashboard port"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Research Assistant health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Research Assistant",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/research-assistant-api"
            ]
          },
          {
            "type": "cli",
            "command": "research-assistant"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o research-assistant-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Research Assistant initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${API_PORT}\\n  SearXNG: http://localhost:${RESOURCE_PORTS[searxng]}\\n  CLI: research-assistant --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start research assistant with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && ./research-assistant-api",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/research-assistant-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
        {
          "name": "wait-for-api",
          "run": "../../scripts/lib/utils/wait-for-service.sh http://localhost:$API_PORT/health 15 2",
          "description": "Wait for API server to be ready"
        },
        {
          "name": "wait-for-ui",
          "run": "sleep 3 && curl -sf http://localhost:$UI_PORT/health > /dev/null",
          "description": "Wait for UI server to be ready"
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:$UI_PORT\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$API_PORT\\n  SearXNG: http://localhost:${RESOURCE_PORTS[searxng]}\\n  CLI: research-assistant --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test research assistant Go API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-reports-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/reports",
          "description": "Test API reports endpoint"
        },
        {
          "name": "test-dashboard-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/dashboard/stats",
          "description": "Test API dashboard endpoint"
        },
        {
          "name": "run-integration-tests",
          "run": "./test.sh",
          "description": "Execute integration test suite",
          "condition": {
            "file_exists": "test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop research assistant services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'research-assistant-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'node.*server.js' || true",
          "description": "Stop UI Node.js server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Research Assistant services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}