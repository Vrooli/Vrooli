{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "research-assistant",
    "displayName": "AI Research Assistant",
    "description": "Enterprise-grade AI research platform with DeepSearch-quality reports, chatbot interface, and automated scheduling",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "ai-research",
      "research-automation",
      "competitive-intelligence",
      "knowledge-management",
      "privacy-focused",
      "custom-ui",
      "market-analysis",
      "content-synthesis",
      "searxng-integration",
      "rag-system",
      "go-api",
      "n8n-workflows",
      "express-ui",
      "postgres-storage",
      "qdrant-vectors",
      "minio-storage",
      "ollama-ai"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/research-assistant"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Research assistant API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Research assistant UI dashboard port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Research Assistant health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Research Assistant",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/research-assistant-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "research-assistant",
            "targets": [
              "research-assistant"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o research-assistant-api .",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build research assistant UI"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Research Assistant initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${API_PORT}\\n  SearXNG: http://localhost:${RESOURCE_PORTS[searxng]}\\n  CLI: research-assistant --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start research assistant with Go API server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./research-assistant-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/research-assistant-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && UI_PORT=$UI_PORT API_URL=http://localhost:$API_PORT node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"API: http://localhost:$API_PORT\" && echo \"UI: http://localhost:$UI_PORT\"",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for research-assistant",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute research-assistant --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"research-assistant-api\" || true; sleep 1; pkill -9 -f \"research-assistant-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/research-assistant.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/research-assistant.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/chat-rag-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/main-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/research-orchestrator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/scheduled-reports.json",
            "type": "workflow"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "qwen2.5:32b",
          "nomic-embed-text",
          "llama3.2:3b"
        ]
      },
      "unstructured-io": {
        "type": "unstructured-io",
        "enabled": true,
        "required": false,
        "purpose": "document processing and text extraction"
      },
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": false,
        "purpose": "web scraping for research content"
      },
      "searxng": {
        "type": "searxng",
        "enabled": true,
        "required": true,
        "purpose": "privacy-focused web search"
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "research data and report storage"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "vector embeddings for RAG system"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": false,
        "purpose": "document and asset storage"
      }
    }
  }
}