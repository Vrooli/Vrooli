{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "bedtime-story-generator",
    "displayName": "Bedtime Story Generator",
    "description": "Interactive bedtime story generator with time-aware children's room UI and age-appropriate content",
    "version": "1.0.0",
    "tags": [
      "kid-friendly",
      "education",
      "storytelling",
      "bedtime",
      "children",
      "family",
      "interactive",
      "time-aware",
      "postgres-storage",
      "ollama-ai",
      "age-appropriate",
      "reading",
      "creative"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": [
      "education",
      "family",
      "creative"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/bedtime-story-generator"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Story generation and management API",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Interactive story reader UI",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Bedtime Story Generator health checks",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "resource",
          "target": "postgres",
          "critical": true
        },
        {
          "name": "ollama_availability",
          "type": "resource",
          "target": "ollama",
          "critical": true
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Bedtime Story Generator",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/bedtime-story-generator-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "bedtime-story-generator",
            "targets": [
              "bedtime-story-generator"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "populate-resources",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add scenario data to resources"
        },
        {
          "name": "install-cli",
          "run": "mkdir -p ~/.local/bin && chmod +x cli/bedtime-story-generator && { ln -sf $(pwd)/cli/bedtime-story-generator ~/.local/bin/bedtime-story-generator && ln -sf $(pwd)/cli/bedtime-story-generator ~/.local/bin/bedtime-story; } 2>/dev/null || true",
          "description": "Install CLI globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o bedtime-story-generator-api .",
          "description": "Build API server"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI for production"
        },
        {
          "name": "initialize-database",
          "run": "cd initialization/storage/postgres && resource-postgres content execute --file schema.sql 2>/dev/null || true",
          "description": "Create database schema"
        },
        {
          "name": "seed-sample-stories",
          "run": "cd initialization/storage/postgres && resource-postgres content execute --file seed.sql 2>/dev/null || true",
          "description": "Add sample stories"
        },
        {
          "name": "show-urls",
          "run": "echo \"Bedtime Story Generator ready - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: bedtime-story --help\"",
          "description": "Display access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Bedtime Story Generator with production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./bedtime-story-generator-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/bedtime-story-generator-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start Express server with built React app",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"Services running - Story Reader: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT}\"",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for bedtime-story-generator",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop all services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"bedtime-story-generator-api\" || true; sleep 1; pkill -9 -f \"bedtime-story-generator-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/bedtime-story-generator.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/bedtime-story-generator.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store stories, reading history, and preferences",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "purpose": "Generate age-appropriate bedtime stories",
        "models": [
          "llama3.2:3b"
        ],
        "configuration": {
          "temperature": 0.8,
          "max_tokens": 2000
        }
      },
      "redis": {
        "type": "redis",
        "enabled": false,
        "required": false,
        "purpose": "Cache frequently read stories for performance",
        "fallback": "Direct PostgreSQL queries"
      }
    }
  }
}
