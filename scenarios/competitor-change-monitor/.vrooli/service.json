{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "competitor-change-monitor",
    "displayName": "Competitor Change Monitor",
    "description": "Track competitor websites and repositories for relevant changes with AI-powered analysis and alerting",
    "version": "1.0.0",
    "tags": [
      "monitoring-application",
      "business-intelligence",
      "monitoring",
      "competitor-analysis",
      "change-detection",
      "web-scraping",
      "github-tracking",
      "alerts",
      "javascript-ui",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "ollama-ai"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/competitor-change-monitor"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Competitor Monitor API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Competitor Monitor UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Competitor Change Monitor health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Competitor Change Monitor",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/competitor-change-monitor-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "competitor-change-monitor",
            "targets": [
              "competitor-change-monitor"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install CLI command",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o competitor-change-monitor-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build dashboard assets"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd0d Competitor Monitor initialized\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Competitor Monitor services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./competitor-change-monitor-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/competitor-change-monitor-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && UI_PORT=${UI_PORT} API_PORT=${API_PORT} API_URL=\"http://localhost:${API_PORT}\" NODE_ENV=production node server.js",
          "description": "Serve production dashboard bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Competitor Monitor running:\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for competitor-change-monitor",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute competitor-change-monitor --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"competitor-change-monitor-api\" || true; sleep 1; pkill -9 -f \"competitor-change-monitor-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/competitor-change-monitor.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/competitor-change-monitor.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "shared_workflows": [
          "ollama",
          "web-scraper",
          "change-detector",
          "notification-dispatcher"
        ],
        "initialization": [
          {
            "file": "initialization/n8n/website-monitor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/github-monitor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/change-analyzer.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/alert-manager.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/scheduled-scanner.json",
            "type": "workflow"
          }
        ]
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store competitors, monitoring targets, change history, and alerts",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "Cache scraped content and real-time monitoring state"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "purpose": "Analyze changes for relevance and generate insights"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      }
    },
    "scenarios": {}
  }
}