{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "competitor-change-monitor",
    "displayName": "Competitor Change Monitor",
    "description": "Track competitor websites and repositories for relevant changes with AI-powered analysis and alerting",
    "version": "1.0.0",
    "tags": [
      "monitoring-application",
      "business-intelligence",
      "monitoring",
      "competitor-analysis",
      "change-detection",
      "web-scraping",
      "github-tracking",
      "alerts",
      "javascript-ui",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 23000,
      "fallback": "auto",
      "description": "Competitor Monitor API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 31000,
      "fallback": "auto",
      "description": "Competitor Monitor UI port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "shared_workflows": [
        "ollama",
        "web-scraper",
        "change-detector",
        "notification-dispatcher"
      ],
      "initialization": [
        {
          "file": "initialization/n8n/website-monitor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/github-monitor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/change-analyzer.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/alert-manager.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/scheduled-scanner.json",
          "type": "workflow"
        }
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store competitors, monitoring targets, change history, and alerts",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Cache scraped content and real-time monitoring state"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "purpose": "Analyze changes for relevance and generate insights"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Competitor Change Monitor health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Competitor Change Monitor",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/competitor-change-monitor-api"
            ]
          },
          {
            "type": "cli",
            "command": "competitor-change-monitor"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x competitor-monitor && ln -sf $(pwd)/competitor-monitor ~/.local/bin/competitor-monitor 2>/dev/null || true",
          "description": "Install CLI command"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o competitor-monitor-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'üîç Competitor Monitor initialized\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Competitor Monitor services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && ./competitor-monitor-api",
          "description": "Start API server",
          "background": true,
          "condition": {
            "file_exists": "api/competitor-monitor-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$API_PORT/health || (sleep 3 && curl -sf http://localhost:$API_PORT/health)",
          "description": "Wait for API to be ready"
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'üöÄ Competitor Monitor running:\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test Competitor Monitor services",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-competitors",
          "run": "curl -sf http://localhost:$API_PORT/api/competitors",
          "description": "Test competitors endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop Competitor Monitor services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'competitor-monitor-api' || true; pkill -f 'npm.*competitor-monitor' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}