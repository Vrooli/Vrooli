{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "smart-file-photo-manager",
    "displayName": "Smart File Photo Manager",
    "description": "AI-powered semantic file organization and management system with intelligent photo categorization, document processing, and duplicate detection",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "productivity",
      "file-management",
      "photo-organization",
      "ai-tagging",
      "semantic-search",
      "duplicate-detection",
      "document-processing",
      "windmill-ui",
      "automation",
      "go-api",
      "n8n-workflows",
      "windmill-apps",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "minio-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "29750-29999",
      "fallback": "auto",
      "description": "Smart file manager coordination API port"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store file metadata, processing history, and AI-generated suggestions",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "script"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "script"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector database for semantic file search, image similarity matching, and content embeddings",
      "initialization": [
        {
          "file": "initialization/storage/qdrant/collections.json",
          "type": "collection"
        }
      ]
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": true,
      "purpose": "Object storage for original files, processed versions, and thumbnails",
      "initialization": [
        {
          "file": "initialization/storage/minio/buckets.json",
          "type": "bucket"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Caching file metadata and processing job queue management"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llava:13b",
        "llama3.2",
        "nomic-embed-text"
      ]
    },
    "unstructured-io": {
      "type": "unstructured-io",
      "enabled": true,
      "required": true,
      "purpose": "Document text extraction and content parsing"
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/file-embedding-generator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/smart-image-analyzer.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/file-semantic-search.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/file-processor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/document-processor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/duplicate-detector.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/batch-processor.json",
          "type": "workflow"
        }
      ]
    },
    "windmill": {
      "type": "windmill",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/windmill/apps/file-manager-ui.json",
          "type": "app"
        }
      ]
    }
  },
  "sharedWorkflows": [
    "ollama",
    "embedding-generator"
  ],
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Smart File Photo Manager",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/smart-file-photo-manager-api"
            ]
          },
          {
            "type": "cli",
            "command": "smart-file-photo-manager"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o smart-file-photo-manager-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Smart File Photo Manager initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  MinIO Console: http://localhost:${RESOURCE_PORTS[minio]}\\n  CLI: smart-file-photo-manager --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start smart file photo manager with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./smart-file-photo-manager-api &",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/smart-file-photo-manager-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Smart File Photo Manager running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$SERVICE_PORT\\n  MinIO Console: http://localhost:${RESOURCE_PORTS[minio]}\\n  CLI: smart-file-photo-manager --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test smart file photo manager API and workflows",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-files-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/files",
          "description": "Test API files endpoint"
        },
        {
          "name": "test-search-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/search?q=test",
          "description": "Test API search endpoint"
        },
        {
          "name": "test-upload-endpoint",
          "run": "bash test/test-upload-endpoint.sh",
          "description": "Test file upload endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats smart-file-photo-manager.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/smart-file-photo-manager.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop smart file photo manager services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'smart-file-photo-manager-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Smart File Photo Manager services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
