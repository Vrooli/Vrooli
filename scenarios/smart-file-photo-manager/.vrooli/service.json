{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "smart-file-photo-manager",
    "displayName": "Smart File Photo Manager",
    "description": "AI-powered semantic file organization and management system with intelligent photo categorization, document processing, and duplicate detection",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "productivity",
      "file-management",
      "photo-organization",
      "ai-tagging",
      "semantic-search",
      "duplicate-detection",
      "document-processing",
      "automation",
      "go-api",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "minio-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Smart file manager coordination API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Smart File Photo Manager UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store file metadata, processing history, and AI-generated suggestions",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector database for semantic file search, image similarity matching, and content embeddings",
      "initialization": [
        {
          "file": "initialization/storage/qdrant/collections.json",
          "type": "collection"
        }
      ]
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": true,
      "purpose": "Object storage for original files, processed versions, and thumbnails",
      "initialization": [
        {
          "file": "initialization/storage/minio/buckets.json",
          "type": "bucket"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Caching file metadata and processing job queue management"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llava:13b",
        "llama3.2",
        "nomic-embed-text"
      ]
    },
    "unstructured-io": {
      "type": "unstructured-io",
      "enabled": true,
      "required": true,
      "purpose": "Document text extraction and content parsing"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Smart File Photo Manager health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Smart File Photo Manager",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "smart-file-photo-manager-api"
             ]
           },
            {
              "type": "cli",
              "targets": [
                "smart-file-photo-manager"
              ]
            },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o smart-file-photo-manager-api .",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Smart File Photo Manager initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  MinIO Console: http://localhost:${RESOURCE_PORTS[minio]}\\n  CLI: smart-file-photo-manager --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start smart file photo manager with Go API server",
      "steps": [
         {
           "name": "start-api",
           "run": "cd api && ./smart-file-photo-manager-api",
           "description": "Start Go API server in background",
           "background": true,
           "condition": {
             "file_exists": "api/smart-file-photo-manager-api"
           }
         },
        {
          "name": "install-ui-dependencies",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start Node.js UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/server.js"
          }
        },
         {
           "name": "show-urls",
           "run": "echo 'ðŸš€ Smart File Photo Manager running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:$API_PORT\\n  MinIO Console: http://localhost:${RESOURCE_PORTS[minio]}\\n  CLI: smart-file-photo-manager --help'",
           "description": "Display all running service URLs"
         }
      ]
    },
    "test": {
      "description": "Test smart file photo manager API and workflows",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-files-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/files",
          "description": "Test API files endpoint"
        },
        {
          "name": "test-search-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/search?q=test",
          "description": "Test API search endpoint"
        },
        {
          "name": "test-upload-endpoint",
          "run": "bash test/test-upload-endpoint.sh",
          "description": "Test file upload endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats smart-file-photo-manager.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/smart-file-photo-manager.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"smart-file-photo-manager-api\" || true; sleep 1; pkill -9 -f \"smart-file-photo-manager-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/smart-file-photo-manager.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/smart-file-photo-manager.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
