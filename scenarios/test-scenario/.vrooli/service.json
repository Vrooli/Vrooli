{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "test-scenario",
    "description": "Test scenario for Vrooli",
    "displayName": "Test Scenario",
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "tags": [],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/test-scenario"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    },
    "version": "1.0.0"
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999",
      "description": "Primary API port"
    }
  },
  "lifecycle": {
    "setup": {
      "description": "Prepare test-scenario binaries and CLI",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/test-scenario-api"
            ]
          },
          {
            "type": "cli",
            "command": "test-scenario",
            "targets": [
              "test-scenario"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install CLI helpers",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o test-scenario-api .",
          "description": "Build Go API binary",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'test-scenario initialized - API: http://localhost:${API_PORT} - CLI: test-scenario --help'",
          "description": "Display service endpoints"
        }
      ]
    },
    "develop": {
      "description": "Start test-scenario API server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./test-scenario-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/test-scenario-api"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'test-scenario running - API: http://localhost:${API_PORT} - CLI: test-scenario --help'",
          "description": "Display service endpoints"
        }
      ]
    },
    "health": {
      "endpoints": {
        "api": "/health"
      },
      "description": "Test Scenario health check configuration",
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "version": "2.0.0",
    "test": {
      "description": "Comprehensive phased testing for test-scenario",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute test-scenario --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      }
    },
    "scenarios": {}
  }
}