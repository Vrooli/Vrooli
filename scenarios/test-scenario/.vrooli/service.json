{
  "name": "test-scenario",
  "version": "1.0.0",
  "description": "Test scenario for Vrooli",
  "lifecycle": {
    "health": {
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "description": "Test Scenario health check configuration",
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "version": "2.0.0"
  },
  "ports": {
    "api": {
      "env_var": "API_PORT"
    },
    "ui": {
      "env_var": "UI_PORT"
    }
  }
}
