{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "email-outreach-manager",
    "displayName": "Email Outreach Manager",
    "description": "AI-powered personalized email campaign generation and execution with contact intelligence integration",
    "version": "1.0.0",
    "tags": [
      "email-marketing",
      "ai-template-generation",
      "contact-personalization",
      "campaign-automation",
      "drip-sequences",
      "contact-book-integration",
      "mail-in-a-box-integration",
      "ollama-ai",
      "go-api",
      "postgres-storage",
      "redis-queue",
      "marketing-intelligence",
      "relationship-aware-communications"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/email-outreach-manager"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Email Outreach Manager API port for campaign management services",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Email Outreach Manager UI port for campaign management dashboard",
      "range": "35000-39999"
    }
  },
  "dependencies": {
    "scenarios": {
      "contact-book": {
        "required": false,
        "purpose": "Recipient data enrichment and personalization intelligence",
        "fallback": "Manual recipient data entry with warning indicators",
        "version": "1.0.0",
        "versionRange": ">=0.0.0"
      }
    },
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Primary storage for campaigns, templates, recipients, drip sequences, and analytics data",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "purpose": "AI template generation and email personalization using shared ollama.json workflow"
      },
      "mail-in-a-box": {
        "type": "mail-in-a-box",
        "enabled": true,
        "required": true,
        "purpose": "Email delivery infrastructure for sending campaigns with proper SMTP handling"
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "Campaign sending queue, rate limiting, and performance optimization"
      }
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Email Outreach Manager health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "query": "SELECT COUNT(*) FROM campaigns",
          "critical": true,
          "timeout": 3000,
          "interval": 60000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 20000
    },
    "setup": {
      "description": "Initialize Email Outreach Manager with database schema and dependencies",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/email-outreach-manager-api"
            ]
          },
          {
            "type": "cli",
            "command": "email-outreach-manager",
            "targets": [
              "email-outreach-manager"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o email-outreach-manager-api .",
          "description": "Build Go API server binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "setup-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize PostgreSQL schema and seed data"
        },
        {
          "name": "verify-dependencies",
          "run": "echo \"Verifying dependencies...\" && (command -v contact-book &>/dev/null && echo \"\u2705 contact-book CLI available\" || echo \"\u26a0\ufe0f  contact-book CLI not found - manual data entry will be used\")",
          "description": "Check optional dependencies"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI for production",
          "condition": {
            "json_path_exists": "ui/package.json:scripts.build"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Email Outreach Manager initialized\\n  API: http://localhost:${EMAIL_OUTREACH_API_PORT}\\n  UI: http://localhost:${EMAIL_OUTREACH_UI_PORT}\\n  CLI: email-outreach-manager --help\\n  Database: PostgreSQL ready'",
          "description": "Display service access information"
        }
      ]
    },
    "develop": {
      "description": "Start Email Outreach Manager API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./email-outreach-manager-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/email-outreach-manager-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npx serve -s dist -l ${UI_PORT}",
          "description": "Start UI production server",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Email Outreach Manager running:\\n  API: http://localhost:$API_PORT\\n  UI: http://localhost:$UI_PORT\\n  CLI: email-outreach-manager --help\\n  Health: http://localhost:$API_PORT/health'",
          "description": "Display service access URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for email-outreach-manager",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop Email Outreach Manager services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"email-outreach-manager-api\" || true; sleep 1; pkill -9 -f \"email-outreach-manager-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "# WARNING: Could not determine UI technology, using generic pattern\npkill -f \"scenarios/email-outreach-manager/ui\" || true; sleep 1; pkill -9 -f \"scenarios/email-outreach-manager/ui\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
