{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "date-night-planner",
    "displayName": "Date Night Planner",
    "description": "AI-powered date planning with couple personalization and local integration",
    "version": "1.0.0",
    "tags": [
      "personal-life",
      "relationships",
      "dating",
      "planning",
      "personalization",
      "local-events",
      "couples",
      "romantic",
      "multi-scenario-integration",
      "preference-learning",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "ollama-ai",
      "pastel-aesthetic"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/date-night-planner"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Date Night Planner API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Date Night Planner UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Date Night Planner health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "database_connection",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health/database",
          "critical": true,
          "timeout": 3000,
          "interval": 60000
        },
        {
          "name": "n8n_workflows",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health/workflows",
          "critical": false,
          "timeout": 10000,
          "interval": 120000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Date Night Planner",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/date-night-planner-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "date-night-planner",
            "targets": [
              "date-night-planner"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "validate-integrations",
          "run": "echo 'Validating scenario integrations...' && if command -v scenario-authenticator >/dev/null; then echo 'âœ… scenario-authenticator available'; else echo 'âš ï¸ scenario-authenticator not found - will use fallback mode'; fi && if command -v contact-book >/dev/null; then echo 'âœ… contact-book available'; else echo 'âš ï¸ contact-book not found - will use fallback mode'; fi && if command -v local-info-scout >/dev/null; then echo 'âœ… local-info-scout available'; else echo 'âš ï¸ local-info-scout not found - will use fallback mode'; fi",
          "description": "Validate integration dependencies and fallback modes"
        },
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate semantic embeddings for venue and activity matching"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add scenario data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o date-night-planner-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI for production"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ’• Date Night Planner initialized!\\n  ðŸ’– UI: http://localhost:${UI_PORT}\\n  ðŸ”— API: http://localhost:${API_PORT}\\n  ðŸ“± CLI: date-night-planner --help\\n\\nðŸŒŸ Integration Status:\\n  ðŸ” Auth: scenario-authenticator $(command -v scenario-authenticator >/dev/null && echo \"âœ…\" || echo \"âŒ (fallback mode)\")\\n  ðŸ“š Contacts: contact-book $(command -v contact-book >/dev/null && echo \"âœ…\" || echo \"âŒ (fallback mode)\")\\n  ðŸ—ºï¸ Local Info: local-info-scout $(command -v local-info-scout >/dev/null && echo \"âœ…\" || echo \"âŒ (fallback mode)\")\\n  ðŸ” Research: research-assistant $(command -v research-assistant >/dev/null && echo \"âœ…\" || echo \"âŒ (fallback mode)\")'",
          "description": "Display service access URLs and integration status"
        }
      ]
    },
    "develop": {
      "description": "Start Date Night Planner with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./date-night-planner-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/date-night-planner-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && UI_PORT=${UI_PORT} API_PORT=${API_PORT} NODE_ENV=production node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ’• Date Night Planner Services Running!\\n  ðŸ’– UI: http://localhost:${UI_PORT}\\n  ðŸ”— API: http://localhost:${API_PORT}\\n  ðŸ“± CLI: date-night-planner --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for date-night-planner",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"date-night-planner-api\" || true; sleep 1; pkill -9 -f \"date-night-planner-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/date-night-planner.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/date-night-planner.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/date-orchestrator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/preference-analyzer.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/venue-matcher.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/memory-recorder.json",
            "type": "workflow"
          }
        ]
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store couples, date plans, preferences, and memories",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "data"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "purpose": "Generate creative date ideas and analyze preferences via shared workflow",
        "models": [
          "llama3.2",
          "nomic-embed-text"
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "Cache frequently accessed preferences and venue data for performance"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "purpose": "Semantic search of date activities and venue matching for enhanced personalization"
      }
    }
  }
}
