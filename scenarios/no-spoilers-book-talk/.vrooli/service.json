{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "no-spoilers-book-talk",
    "displayName": "No Spoilers Book Talk",
    "description": "AI-powered spoiler-free book discussions with progress-aware content filtering",
    "version": "1.0.0",
    "tags": [
      "education",
      "literature",
      "reading",
      "spoiler-free",
      "discussion",
      "progress-tracking",
      "rag-pipeline",
      "vector-search",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "qdrant-vectors",
      "position-aware-filtering",
      "book-analysis",
      "literary-discussion"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/no-spoilers-book-talk"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Book talk API server port",
      "range": "15000-19999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "No Spoilers Book Talk health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "qdrant_connection",
          "type": "http",
          "target": "http://localhost:${RESOURCE_PORTS[qdrant]}/health",
          "critical": true,
          "timeout": 3000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize No Spoilers Book Talk scenario",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/no-spoilers-book-talk-api"
            ]
          },
          {
            "type": "cli",
            "command": "no-spoilers-book-talk",
            "targets": [
              "no-spoilers-book-talk"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "create-data-directory",
          "run": "mkdir -p data/books data/uploads data/temp",
          "description": "Create data directories for book storage"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o no-spoilers-book-talk-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "initialize-qdrant-collections",
          "run": "vrooli resource qdrant collection create book-content --vector-size 1024 --distance cosine || echo 'Collection may already exist'",
          "description": "Create Qdrant collection for book embeddings"
        },
        {
          "name": "populate-resources",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add scenario data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udcda No Spoilers Book Talk initialized\\n  API: http://localhost:${API_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Qdrant: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  CLI: no-spoilers-book-talk --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start book talk with API server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./no-spoilers-book-talk-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/no-spoilers-book-talk-api"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udcda No Spoilers Book Talk running:\\n  API: http://localhost:$API_PORT\\n  Upload books: POST /api/v1/books/upload\\n  Start chat: POST /api/v1/books/{book_id}/chat\\n  CLI: no-spoilers-book-talk --help'",
          "description": "Display running service information"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for no-spoilers-book-talk",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"no-spoilers-book-talk-api\" || true; sleep 1; pkill -9 -f \"no-spoilers-book-talk-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store book metadata, user progress, and conversation history",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Vector database for book content embeddings with position metadata for spoiler-free search"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "purpose": "Local LLM for text embeddings and chat responses",
        "models": [
          "mxbai-embed-large",
          "llama3.2",
          "phi3.5",
          "nomic-embed-text"
        ]
      },
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "purpose": "Automation workflows for book processing and chat orchestration",
        "initialization": [
          {
            "file": "initialization/n8n/book-processor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/safe-chat-orchestrator.json",
            "type": "workflow"
          }
        ]
      },
      "minio": {
        "type": "minio",
        "enabled": false,
        "required": false,
        "purpose": "Original book file storage and backup (fallback to local filesystem)"
      }
    }
  }
}
