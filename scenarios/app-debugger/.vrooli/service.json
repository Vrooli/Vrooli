{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "app-debugger",
    "displayName": "App Debugger",
    "description": "Professional debugging and error analysis platform for Vrooli applications",
    "version": "1.0.0",
    "tags": [
      "development-tool",
      "development",
      "debugging",
      "maintenance",
      "error-analysis",
      "performance",
      "monitoring",
      "logs",
      "profiling",
      "javascript-ui",
      "terminal-ui",
      "nodejs-ui",
      "go-api",
      "postgres-storage"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "App Debugger API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "App Debugger UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store debug sessions, error logs, performance metrics, and fix history",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache real-time debugging data, performance metrics, and active session state"
    },
    "questdb": {
      "type": "questdb",
      "enabled": true,
      "required": false,
      "purpose": "Time-series storage for performance metrics and error frequency analysis"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "App Debugger health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize App Debugger",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "app-debugger-api"
             ]
           },
           {
             "type": "cli",
             "targets": [
               "app-debugger"
             ]
           },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x app-debugger && ln -sf $(pwd)/app-debugger ~/.local/bin/app-debugger 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o app-debugger-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ› App Debugger initialized\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start App Debugger services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./app-debugger-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/app-debugger-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true
        },
         {
           "name": "show-urls",
           "run": "echo 'ðŸš€ App Debugger running:\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${API_PORT}'",
           "description": "Display service URLs"
         }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing using shared scenario runner",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased testing pipeline"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"app-debugger-api\" || true; sleep 1; pkill -9 -f \"app-debugger-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/app-debugger.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/app-debugger.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
