{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "app-debugger",
    "displayName": "App Debugger",
    "description": "Professional debugging and error analysis platform for Vrooli applications",
    "version": "1.0.0",
    "tags": [
      "development-tool",
      "development",
      "debugging",
      "error-analysis",
      "performance",
      "monitoring",
      "logs",
      "profiling",
      "javascript-ui",
      "terminal-ui",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "21000-21249",
      "fallback": "auto",
      "description": "App Debugger API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "30250-30499",
      "fallback": "auto",
      "description": "App Debugger UI port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "shared_workflows": [
        "ollama",
        "rate-limiter"
      ],
      "initialization": [
        {
          "file": "initialization/n8n/error-analyzer.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/fix-suggester.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/log-monitor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/performance-profiler.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/debug-orchestrator.json",
          "type": "workflow"
        }
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store debug sessions, error logs, performance metrics, and fix history",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache real-time debugging data, performance metrics, and active session state"
    },
    "questdb": {
      "type": "questdb",
      "enabled": true,
      "required": false,
      "purpose": "Time-series storage for performance metrics and error frequency analysis"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize App Debugger",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/app-debugger"
            ]
          },
          {
            "type": "cli",
            "command": "app-debugger"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x app-debugger && ln -sf $(pwd)/app-debugger /usr/local/bin/app-debugger 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o app-debugger-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'üêõ App Debugger initialized\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start App Debugger services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./app-debugger-api &",
          "description": "Start API server",
          "background": true,
          "condition": {
            "file_exists": "api/app-debugger-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT npm start &",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'üöÄ App Debugger running:\n  UI: http://localhost:${UI_PORT}\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test App Debugger services",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-apps",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/apps",
          "description": "Test apps endpoint"
        },
        {
          "name": "test-errors",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/errors",
          "description": "Test errors endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop App Debugger services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'app-debugger-api' || true; pkill -f 'npm.*app-debugger' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}
