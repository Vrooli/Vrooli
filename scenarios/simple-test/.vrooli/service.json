{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "simple-test",
    "displayName": "Simple Test App",
    "description": "Minimal test app for lifecycle validation",
    "version": "1.0.0",
    "tags": [
      "application",
      "testing",
      "test",
      "minimal",
      "framework-validation",
      "nodejs-ui",
      "postgres-storage"
    ]
  },
  "ports": {
    "app": {
      "env_var": "SERVICE_PORT",
      "range": "36250-36499",
      "fallback": "auto",
      "description": "Main application port"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "test data storage"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Simple Test App",
      "condition": {
        "checks": [
          {
            "type": "dependencies",
            "paths": [
              "package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Simple Test App initialized\\n  Application: http://localhost:${SERVICE_PORT}\\n  Health: http://localhost:${SERVICE_PORT}/health'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start development server",
      "steps": [
        {
          "name": "start-app",
          "run": "PORT=${SERVICE_PORT} npm start",
          "description": "Start the application server in background",
          "background": true
        },
        {
          "name": "wait-for-app",
          "run": "sleep 2 && curl -sf http://localhost:${SERVICE_PORT}/health > /dev/null",
          "description": "Wait for application to be ready",
          "retry": {
            "max_attempts": 10,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Application: http://localhost:${SERVICE_PORT}'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run application tests",
      "steps": [
        {
          "name": "test-app-health",
          "run": "curl -sf http://localhost:${SERVICE_PORT}/health",
          "description": "Test application health endpoint"
        },
        {
          "name": "run-unit-tests",
          "run": "npm test",
          "description": "Run unit test suite",
          "condition": {
            "file_exists": "package.json"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop application services",
      "steps": [
        {
          "name": "stop-app",
          "run": "pkill -f 'npm start' || true",
          "description": "Stop application processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Simple Test App services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
