{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "agent-dashboard",
    "displayName": "Agent Dashboard",
    "description": "Dashboard for managing and monitoring all active agents",
    "version": "1.0.0",
    "tags": [
      "vrooli-helper",
      "system-management",
      "agents",
      "monitoring",
      "orchestration",
      "dashboard",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage"
    ],
    "license": "MIT"
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/agent-status-monitor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/agent-health-checker.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/agent-orchestrator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/multi-agent-coordinator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/agent-realtime-monitor.json",
          "type": "workflow"
        }
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "models": [
        "llama3.2:3b"
      ]
    }
  },
  "ports": {
    "ui": {
      "env_var": "UI_PORT",
      "port": 30100,
      "description": "Agent Dashboard UI port"
    },
    "api": {
      "env_var": "API_PORT",
      "port": 20000,
      "description": "Agent Dashboard API port"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Agent Dashboard health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Agent Dashboard",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/agent-dashboard-api"
            ]
          },
          {
            "type": "cli",
            "command": "agent-dashboard"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "chmod +x cli/agent-dashboard && ln -sf $(pwd)/cli/agent-dashboard ~/.local/bin/agent-dashboard 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o agent-dashboard-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'Agent Dashboard initialized - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: agent-dashboard --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Agent Dashboard with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./agent-dashboard-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/agent-dashboard-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "show-running-services",
          "run": "echo 'Services running - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: agent-dashboard --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Agent Dashboard API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-agents-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/agents",
          "description": "Test API agents endpoint"
        },
        {
          "name": "test-cli-status",
          "run": "agent-dashboard status",
          "description": "Test CLI status command"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f agent-dashboard.start-api 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f agent-dashboard.start-ui 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "shared_workflows": [
      "ollama",
      "rate-limiter",
      "chain-of-thought-orchestrator"
    ]
  }
}