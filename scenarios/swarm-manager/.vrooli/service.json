{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "swarm-manager",
    "displayName": "Swarm Manager",
    "description": "Autonomous task orchestrator that coordinates work across all Vrooli scenarios",
    "version": "1.0.0",
    "tags": [
      "orchestration",
      "task-management",
      "automation",
      "ai-coordinator",
      "vrooli-core"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 8090,
      "fallback": "8095",
      "description": "Swarm Manager API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 31011,
      "fallback": "31011",
      "description": "Swarm Manager dashboard UI port"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "description": "Task metadata, execution history, and configuration storage",
      "schema": "swarm_manager"
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "description": "Task locks, real-time updates, and pub/sub messaging"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "description": "Task embeddings, pattern recognition, and learning system"
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "description": "Orchestration workflows and task execution pipelines"
    },
    "claude-code": {
      "type": "claude-code",
      "enabled": true,
      "required": true,
      "description": "Task analysis, priority estimation, and work execution"
    },
    "ollama": {
      "type": "ollama",
      "enabled": false,
      "required": false,
      "description": "Local LLM for lightweight task analysis"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Swarm Manager health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/",
        "metrics": "/api/metrics"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Swarm Manager",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/swarm-manager-api"
            ]
          },
          {
            "type": "directories",
            "targets": [
              "tasks/active",
              "tasks/backlog",
              "tasks/completed",
              "tasks/staged",
              "tasks/failed"
            ]
          }
        ]
      },
      "steps": [
        {
          "name": "verify-directories",
          "run": "ls -la tasks/ | head -5"
        },
        {
          "name": "build-api",
          "run": "cd api && go build -o swarm-manager-api main.go"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install --prefer-offline --no-audit --no-fund --loglevel error"
        }
      ]
    },
    "develop": {
      "description": "Start Swarm Manager services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./swarm-manager-api",
          "background": true
        },
        {
          "name": "wait-for-api",
          "run": "timeout 30 bash -c 'until curl -s http://localhost:${API_PORT:-8095}/health > /dev/null 2>&1; do sleep 1; done' || exit 1"
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "background": true
        },
        {
          "name": "show-status",
          "run": "echo 'âœ… Swarm Manager is running at http://localhost:${UI_PORT:-31011}'"
        }
      ]
    },
    "test": {
      "description": "Run Swarm Manager tests",
      "steps": [
        {
          "name": "run-tests",
          "run": "cd api && go test ./..."
        }
      ]
    },
    "shutdown": {
      "description": "Stop Swarm Manager services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f swarm-manager-api || true; pkill -f 'node server.js' || true"
        }
      ]
    }
  }
}