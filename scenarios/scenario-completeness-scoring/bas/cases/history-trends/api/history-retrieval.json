{
  "metadata": {
    "name": "history-retrieval",
    "description": "Tests the score history storage and retrieval API endpoints",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"SCS-HIST-001\", \"SCS-HIST-002\", \"SCS-HIST-004\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "calculate-score",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "POST",
          "url": "{{API_URL}}/api/v1/scores/scenario-completeness-scoring/calculate",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Calculate score to create history entry"
        }
      }
    },
    {
      "id": "get-history",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/scores/scenario-completeness-scoring/history?limit=10",
          "expected_status": 200
        },
        "metadata": {
          "label": "Get score history"
        }
      }
    },
    {
      "id": "verify-limit",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/scores/scenario-completeness-scoring/history?limit=5",
          "expected_status": 200
        },
        "metadata": {
          "label": "Verify history limit parameter"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "calculate-score",
      "target": "get-history",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "get-history",
      "target": "verify-limit",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
