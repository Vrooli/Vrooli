{
  "metadata": {
    "name": "Trend Analysis E2E Test",
    "description": "Tests the trend detection and analysis API endpoints",
    "tags": ["e2e", "api", "trends"],
    "requirements": ["SCS-HIST-003"],
    "reset": "none"
  },
  "settings": {},
  "nodes": [
    {
      "id": "1",
      "type": "http_request",
      "data": {
        "label": "Get scenario trend analysis",
        "method": "GET",
        "url": "{{API_URL}}/api/v1/scores/scenario-completeness-scoring/trends",
        "headers": {
          "Content-Type": "application/json"
        },
        "assertions": [
          {"type": "status_code", "expected": 200},
          {"type": "json_path_exists", "path": "$.scenario"},
          {"type": "json_path_exists", "path": "$.trend"},
          {"type": "json_path_exists", "path": "$.summary"}
        ],
        "notes": "Verify trend analysis returns scenario name, trend type, and summary"
      }
    },
    {
      "id": "2",
      "type": "http_request",
      "data": {
        "label": "Get all scenarios trends",
        "method": "GET",
        "url": "{{API_URL}}/api/v1/trends",
        "assertions": [
          {"type": "status_code", "expected": 200},
          {"type": "json_path_exists", "path": "$.trends"}
        ],
        "notes": "Verify all-scenarios trend endpoint returns trends array"
      }
    }
  ],
  "edges": [
    {"id": "e1", "source": "1", "target": "2", "type": "smoothstep"}
  ]
}
