{
  "metadata": {
    "name": "breaker-status",
    "description": "Tests the circuit breaker status and reset API endpoints",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"SCS-CB-004\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "get-breaker-status",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/health/circuit-breaker",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Get circuit breaker status"
        }
      }
    },
    {
      "id": "reset-breakers",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "POST",
          "url": "{{API_URL}}/api/v1/health/circuit-breaker/reset",
          "expected_status": 200
        },
        "metadata": {
          "label": "Reset all circuit breakers"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "get-breaker-status",
      "target": "reset-breakers",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
