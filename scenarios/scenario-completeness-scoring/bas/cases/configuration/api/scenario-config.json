{
  "metadata": {
    "name": "scenario-config",
    "description": "Tests updating global configuration (weights and toggles)",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"SCS-CFG-004\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "reset-config",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "POST",
          "url": "{{API_URL}}/api/v1/config/reset",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Reset configuration to defaults"
        }
      }
    },
    {
      "id": "update-config",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "PUT",
          "url": "{{API_URL}}/api/v1/config",
          "headers": {"Content-Type": "application/json"},
          "body": "{\"version\": \"1.0.0\", \"weights\": {\"quality\": 40, \"coverage\": 20, \"quantity\": 20, \"ui\": 20}}",
          "expected_status": 200
        },
        "metadata": {
          "label": "Update configuration weights"
        }
      }
    },
    {
      "id": "verify-config",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/config",
          "expected_status": 200
        },
        "metadata": {
          "label": "Verify configuration saved"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "reset-config",
      "target": "update-config",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "update-config",
      "target": "verify-config",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
