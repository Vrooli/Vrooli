{
  "metadata": {
    "name": "config-retrieval",
    "description": "Tests the configuration retrieval and update API endpoints",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"SCS-CFG-001\", \"SCS-CFG-004\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "get-global-config",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/config",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Get global configuration"
        }
      }
    },
    {
      "id": "get-thresholds",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/config/thresholds",
          "expected_status": 200
        },
        "metadata": {
          "label": "Get all thresholds"
        }
      }
    },
    {
      "id": "get-utility-thresholds",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/config/thresholds/utility",
          "expected_status": 200
        },
        "metadata": {
          "label": "Get utility category thresholds"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "get-global-config",
      "target": "get-thresholds",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "get-thresholds",
      "target": "get-utility-thresholds",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
