{
  "metadata": {
    "name": "presets",
    "description": "Tests the configuration schema, retrieval, and reset API endpoints",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"SCS-CFG-003\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "get-schema",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/config/schema",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Get configuration schema"
        }
      }
    },
    {
      "id": "get-config",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/config",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Get configuration"
        }
      }
    },
    {
      "id": "reset-config",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "POST",
          "url": "{{API_URL}}/api/v1/config/reset",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Reset configuration"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "get-schema",
      "target": "get-config",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    },
    {
      "id": "e2",
      "source": "get-config",
      "target": "reset-config",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
