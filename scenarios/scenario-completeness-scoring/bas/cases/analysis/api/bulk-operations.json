{
  "metadata": {
    "name": "bulk-operations",
    "description": "Tests bulk score refresh and cross-scenario comparison API endpoints",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"SCS-ANALYSIS-003\", \"SCS-ANALYSIS-004\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "bulk-refresh",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "POST",
          "url": "{{API_URL}}/api/v1/scores/refresh-all",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Bulk refresh all scores"
        }
      }
    },
    {
      "id": "compare-scenarios",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "POST",
          "url": "{{API_URL}}/api/v1/compare",
          "headers": {"Content-Type": "application/json"},
          "body": "{\"scenarios\": [\"scenario-completeness-scoring\"]}",
          "expected_status": 200
        },
        "metadata": {
          "label": "Compare scenarios"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "bulk-refresh",
      "target": "compare-scenarios",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
