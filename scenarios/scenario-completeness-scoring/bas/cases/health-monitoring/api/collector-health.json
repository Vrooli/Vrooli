{
  "metadata": {
    "name": "collector-health",
    "description": "Tests the health monitoring and collector status API endpoints",
    "labels": {
      "reset": "none",
      "requirements_json": "[\"SCS-HEALTH-001\", \"SCS-HEALTH-003\"]"
    }
  },
  "settings": {
    "viewport_width": 1440,
    "viewport_height": 900
  },
  "nodes": [
    {
      "id": "get-collector-health",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "GET",
          "url": "{{API_URL}}/api/v1/health/collectors",
          "headers": {"Content-Type": "application/json"},
          "expected_status": 200
        },
        "metadata": {
          "label": "Get collector health status"
        }
      }
    },
    {
      "id": "test-requirements-collector",
      "action": {
        "type": "ACTION_TYPE_HTTP_REQUEST",
        "http_request": {
          "method": "POST",
          "url": "{{API_URL}}/api/v1/health/collectors/requirements/test",
          "expected_status": 200
        },
        "metadata": {
          "label": "Test requirements collector"
        }
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "get-collector-health",
      "target": "test-requirements-collector",
      "type": "WORKFLOW_EDGE_TYPE_SMOOTHSTEP"
    }
  ]
}
