{
  "metadata": {
    "name": "Dashboard Overview E2E Test",
    "description": "Tests the UI dashboard showing all scenarios with scores, trends, and health status",
    "tags": ["e2e", "ui", "dashboard"],
    "requirements": ["SCS-UI-001", "SCS-UI-006"],
    "reset": "none"
  },
  "settings": {},
  "nodes": [
    {
      "id": "1",
      "type": "navigate",
      "data": {
        "label": "Navigate to dashboard",
        "url": "{{UI_URL}}",
        "waitFor": "[data-testid='dashboard']"
      }
    },
    {
      "id": "2",
      "type": "assertion",
      "data": {
        "label": "Verify dashboard container",
        "selector": "[data-testid='dashboard']",
        "assertions": [
          {"type": "visible"}
        ],
        "notes": "Dashboard root container is visible"
      }
    },
    {
      "id": "3",
      "type": "assertion",
      "data": {
        "label": "Verify scenarios table",
        "selector": "[data-testid='scenarios-table']",
        "assertions": [
          {"type": "visible"}
        ],
        "notes": "Scenarios table is rendered"
      }
    },
    {
      "id": "4",
      "type": "assertion",
      "data": {
        "label": "Verify sparkline charts",
        "selector": "[data-testid='sparkline']",
        "assertions": [
          {"type": "exists"}
        ],
        "notes": "Sparkline trend charts are present"
      }
    },
    {
      "id": "5",
      "type": "assertion",
      "data": {
        "label": "Verify trend indicators",
        "selector": "[data-testid='trend-indicator']",
        "assertions": [
          {"type": "exists"}
        ],
        "notes": "Trend indicators are present"
      }
    }
  ],
  "edges": [
    {"id": "e1", "source": "1", "target": "2", "type": "smoothstep"},
    {"id": "e2", "source": "2", "target": "3", "type": "smoothstep"},
    {"id": "e3", "source": "3", "target": "4", "type": "smoothstep"},
    {"id": "e4", "source": "4", "target": "5", "type": "smoothstep"}
  ]
}
