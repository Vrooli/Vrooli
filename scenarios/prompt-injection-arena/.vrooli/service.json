{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "prompt-injection-arena",
    "displayName": "Prompt Injection Arena",
    "description": "Defensive security platform for prompt injection testing and research with competitive leaderboards",
    "version": "1.0.0",
    "tags": [
      "security",
      "prompt-injection",
      "ai-safety",
      "testing",
      "research",
      "defensive-security",
      "leaderboards",
      "go-api",
      "postgres-storage",
      "ollama-integration",
      "n8n-workflows",
      "qdrant-vectors"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/prompt-injection-arena"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Prompt injection arena API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Arena web interface port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Prompt injection arena health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Prompt Injection Arena",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/prompt-injection-arena-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "prompt-injection-arena",
            "targets": [
              "prompt-injection-arena"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o prompt-injection-arena-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add scenario data to resources"
        },
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate injection technique embeddings for similarity search"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Prompt Injection Arena initialized\\n  Web UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: prompt-injection-arena --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start prompt injection arena with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./prompt-injection-arena-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/prompt-injection-arena-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Serve production UI bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Services running:\\n  Arena UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: prompt-injection-arena --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for prompt-injection-arena",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"prompt-injection-arena-api\" || true; sleep 1; pkill -9 -f \"prompt-injection-arena-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/prompt-injection-arena.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/prompt-injection-arena.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store injection library, agent configs, test results, leaderboards",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "data"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "mistral",
          "codellama",
          "qwen2.5:7b",
          "nomic-embed-text"
        ],
        "purpose": "Execute agent configurations against injection tests safely"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "purpose": "Vector database for semantic similarity of injection techniques - enables clustering and discovery of related attack patterns"
      },
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/security-sandbox.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/injection-tester.json",
            "type": "workflow"
          }
        ]
      }
    }
  }
}
