{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "personal-digital-twin",
    "displayName": "Personal Digital Twin",
    "description": "AI-powered personal assistant that learns your communication style, preferences, and knowledge to act as your digital representative",
    "version": "1.0.0",
    "tags": [
      "personal-assistant",
      "ai-assistants",
      "digital-twin",
      "ai-persona",
      "machine-learning",
      "chat-interface",
      "voice-cloning",
      "knowledge-base",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "qdrant-vectors",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "port": 26500,
      "fallback": "auto",
      "description": "Main API port for digital twin service"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 33750,
      "fallback": "auto",
      "description": "Web UI port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/data-ingestion.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/model-training.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/persona-chat.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2",
        "mistral",
        "nomic-embed-text"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store user data, conversation history, and persona configuration",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "script"
        },
        {
          "file": "initialization/postgres/seed.sql",
          "type": "script"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector database for semantic search of personal knowledge base, conversation patterns, and style embeddings",
      "initialization": [
        {
          "file": "initialization/qdrant/collections.json",
          "type": "config"
        }
      ]
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Personal Digital Twin",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/personal-digital-twin-api"
            ]
          },
          {
            "type": "cli",
            "command": "personal-digital-twin"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o personal-digital-twin-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "npm-install",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Personal Digital Twin initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: personal-digital-twin --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Personal Digital Twin services",
      "steps": [
        {
          "name": "ensure-api-built",
          "run": "if [ ! -f api/personal-digital-twin-api ]; then echo 'Building API...'; cd api && go mod download && go build -o personal-digital-twin-api main.go && echo 'API built successfully'; else echo 'API binary already exists'; fi",
          "description": "Ensure API binary exists"
        },
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./personal-digital-twin-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/personal-digital-twin-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "wait-for-ui",
          "run": "sleep 2 && curl -sf http://localhost:$UI_PORT > /dev/null",
          "description": "Wait for UI server to be ready",
          "retry": {
            "max_attempts": 10,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:$SERVICE_PORT\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: personal-digital-twin --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Personal Digital Twin services",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-data-ingestion",
          "run": "bash test/test-data-ingestion.sh",
          "description": "Test data ingestion workflow"
        },
        {
          "name": "test-persona-creation",
          "run": "bash test/test-persona-creation.sh",
          "description": "Test persona creation"
        },
        {
          "name": "test-chat-interaction",
          "run": "bash test/test-chat-interaction.sh",
          "description": "Test chat interaction"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats personal-digital-twin.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/personal-digital-twin.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop Personal Digital Twin services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'personal-digital-twin-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Personal Digital Twin services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
