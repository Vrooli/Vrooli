{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "picker-wheel",
    "displayName": "Picker Wheel",
    "description": "Fun, interactive decision-making tool with customizable spinning wheels and weighted random selection",
    "version": "1.0.0",
    "tags": [
      "utility",
      "decision-tools",
      "decision-making",
      "random-selection",
      "interactive",
      "weighted-probability",
      "arcade-style",
      "api-available",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 27100,
      "description": "Main API port for wheel operations"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 34300,
      "description": "Web UI server port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/wheel-spinner.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/wheel-manager.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/history-tracker.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/option-suggester.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "purpose": "Intelligent option suggestions via shared ollama workflow",
      "models": [
        "phi3.5:3.8b"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store wheels, options, and spin history",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "script"
        }
      ]
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Picker Wheel",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/picker-wheel-api"
            ]
          },
          {
            "type": "cli",
            "command": "picker-wheel"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "chmod +x cli/picker-wheel && ln -sf $(pwd)/cli/picker-wheel /usr/local/bin/picker-wheel 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o picker-wheel-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'Picker Wheel initialized - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: picker-wheel --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Picker Wheel with API and UI servers",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && env PORT=$API_PORT ./picker-wheel-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/picker-wheel-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && env PORT=$UI_PORT API_URL=http://localhost:$API_PORT npm start",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 2 && curl -sf http://localhost:$API_PORT/health > /dev/null && curl -sf http://localhost:$UI_PORT > /dev/null",
          "description": "Wait for services to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'Services running - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: picker-wheel --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Picker Wheel API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-spin-endpoint",
          "run": "curl -sf -X POST http://localhost:$API_PORT/api/spin -H 'Content-Type: application/json' -d '{\\\"wheel_id\\\":\\\"yes-or-no\\\"}'",
          "description": "Test API spin endpoint"
        },
        {
          "name": "test-cli-spin",
          "run": "picker-wheel spin yes-or-no",
          "description": "Test CLI spin command"
        }
      ]
    },
    "stop": {
      "description": "Stop Picker Wheel services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'picker-wheel-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'npm.*start' || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'Picker Wheel services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}