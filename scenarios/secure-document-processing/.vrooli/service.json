{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "secure-document-processing",
    "displayName": "Secure Document Processing",
    "description": "Enterprise-grade secure document processing pipeline with encryption, compliance, and semantic search capabilities",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "document-processing",
      "security",
      "encryption",
      "compliance",
      "enterprise",
      "semantic-search",
      "automation",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "qdrant-vectors",
      "minio-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 29600,
      "fallback": "auto",
      "description": "Secure document processing coordination API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 31009,
      "fallback": "auto",
      "description": "Secure document processing UI port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/n8n/document-intake.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/process-orchestrator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/prompt-processor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/workflow-executor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/semantic-indexer.json",
          "type": "workflow"
        }
      ]
    },
    "windmill": {
      "type": "windmill",
      "enabled": false,
      "required": false,
      "initialization": [
        {
          "file": "initialization/automation/windmill/document-portal.json",
          "type": "app"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2",
        "mistral",
        "nomic-embed-text"
      ]
    },
    "unstructured-io": {
      "type": "unstructured-io",
      "enabled": true,
      "required": true,
      "purpose": "Document parsing and content extraction from various formats (PDF, DOCX, images, etc.)"
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Document metadata, processing jobs, workflows, and audit trails",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": true,
      "purpose": "Encrypted document storage with job-based organization and versioning"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": false,
      "purpose": "Vector database for semantic search of document content and metadata"
    },
    "vault": {
      "type": "vault",
      "enabled": true,
      "required": true,
      "purpose": "Encryption key management, access control, and audit trail for document security"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Secure Document Processing health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Secure Document Processing Pipeline",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/secure-document-processing-api"
            ]
          },
          {
            "type": "cli",
            "command": "secure-document-processing"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o secure-document-processing-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Secure Document Processing initialized\\n  UI: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${API_PORT}\\n  MinIO Storage: http://localhost:${RESOURCE_PORTS[minio]}\\n  Vault: http://localhost:${RESOURCE_PORTS[vault]}\\n  CLI: secure-document-processing --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start secure document processing pipeline with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && env PORT=$API_PORT ./secure-document-processing-api",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/secure-document-processing-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$API_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && env UI_PORT=$UI_PORT node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-ui",
          "run": "sleep 2 && curl -sf http://localhost:$UI_PORT/health > /dev/null",
          "description": "Wait for UI server to be ready",
          "retry": {
            "max_attempts": 10,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  UI: http://localhost:$UI_PORT\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$API_PORT\\n  MinIO: http://localhost:${RESOURCE_PORTS[minio]}\\n  Vault: http://localhost:${RESOURCE_PORTS[vault]}\\n  CLI: secure-document-processing --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test secure document processing pipeline API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-documents-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/documents",
          "description": "Test API documents endpoint"
        },
        {
          "name": "test-processing-jobs-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/jobs",
          "description": "Test API processing jobs endpoint"
        },
        {
          "name": "test-workflows-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/workflows",
          "description": "Test API workflows endpoint"
        },
        {
          "name": "test-custom-functionality",
          "run": "bash custom-tests.sh",
          "description": "Run custom scenario tests"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats secure-document-processing.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/secure-document-processing.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop secure document processing services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'secure-document-processing-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Secure Document Processing services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}