{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "secure-document-processing",
    "displayName": "Secure Document Processing",
    "description": "Enterprise-grade secure document processing pipeline with encryption, compliance, and semantic search capabilities",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "document-processing",
      "security",
      "encryption",
      "compliance",
      "enterprise",
      "semantic-search",
      "automation",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "qdrant-vectors",
      "minio-storage",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Secure document processing coordination API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Secure document processing UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/automation/n8n/document-intake.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/process-orchestrator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/prompt-processor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/workflow-executor.json",
          "type": "workflow"
        },
        {
          "file": "initialization/automation/n8n/semantic-indexer.json",
          "type": "workflow"
        }
      ]
    },
    "windmill": {
      "type": "windmill",
      "enabled": false,
      "required": false,
      "initialization": [
        {
          "file": "initialization/automation/windmill/document-portal.json",
          "type": "app"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2",
        "mistral",
        "nomic-embed-text"
      ]
    },
    "unstructured-io": {
      "type": "unstructured-io",
      "enabled": true,
      "required": true,
      "purpose": "Document parsing and content extraction from various formats (PDF, DOCX, images, etc.)"
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Document metadata, processing jobs, workflows, and audit trails",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "minio": {
      "type": "minio",
      "enabled": true,
      "required": true,
      "purpose": "Encrypted document storage with job-based organization and versioning"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": false,
      "purpose": "Vector database for semantic search of document content and metadata"
    },
    "vault": {
      "type": "vault",
      "enabled": true,
      "required": true,
      "purpose": "Encryption key management, access control, and audit trail for document security"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Secure Document Processing health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Secure Document Processing Pipeline",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "secure-document-processing-api"
            ]
          },
          {
            "type": "cli",
            "targets": [
              "secure-document-processing"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o secure-document-processing-api .",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Secure Document Processing initialized\\n  UI: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${API_PORT}\\n  MinIO Storage: http://localhost:${RESOURCE_PORTS[minio]}\\n  Vault: http://localhost:${RESOURCE_PORTS[vault]}\\n  CLI: secure-document-processing --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start secure document processing pipeline with Go API server",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./secure-document-processing-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/secure-document-processing-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Services running:\\n  UI: http://localhost:$UI_PORT\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$API_PORT\\n  MinIO: http://localhost:${RESOURCE_PORTS[minio]}\\n  Vault: http://localhost:${RESOURCE_PORTS[vault]}\\n  CLI: secure-document-processing --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing using modern testing architecture",
      "steps": [
        {
          "name": "run-comprehensive-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"secure-document-processing-api\" || true; sleep 1; pkill -9 -f \"secure-document-processing-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/secure-document-processing.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/secure-document-processing.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
