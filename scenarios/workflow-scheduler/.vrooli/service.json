{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "workflow-scheduler",
    "displayName": "Workflow Scheduler",
    "description": "Enterprise-grade cron scheduling platform for orchestrating Vrooli workflows with centralized management, execution tracking, and intelligent retry handling",
    "version": "1.0.0",
    "tags": [
      "infrastructure",
      "automation-tools",
      "scheduling",
      "cron",
      "automation",
      "workflow-orchestration",
      "time-based-triggers",
      "job-scheduler",
      "task-automation",
      "go-api",
      "postgres-storage",
      "redis-cache"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/workflow-scheduler"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Workflow Scheduler REST API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Workflow Scheduler UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Workflow Scheduler health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Workflow Scheduler platform",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/workflow-scheduler-api",
              "cli/workflow-scheduler"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "workflow-scheduler",
            "targets": [
              "workflow-scheduler"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "base-setup",
          "run": "bash ../../scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources (database schema, workflows)"
        },
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install scheduler CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && pnpm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && pnpm run build",
          "description": "Build UI production bundle"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o workflow-scheduler-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Workflow Scheduler initialized\\n  API: http://localhost:${API_PORT}\\n  Database: postgresql://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/workflow_scheduler\\n  Redis: redis://localhost:${RESOURCE_PORTS[redis]}\\n  CLI: scheduler-cli --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Workflow Scheduler with API server and scheduling engine",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./workflow-scheduler-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/workflow-scheduler-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "configure-redis",
          "run": "redis-cli -p ${RESOURCE_PORTS[redis]} CONFIG SET notify-keyspace-events Ex > /dev/null 2>&1 || true",
          "description": "Configure Redis for keyspace notifications"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Workflow Scheduler running:\\n  API: http://localhost:$API_PORT\\n  API Docs: http://localhost:$API_PORT/docs\\n  CLI: scheduler-cli --help\\n\\nQuick Start:\\n  scheduler-cli create --name \"Daily Report\" --cron \"0 9 * * *\" --url http://your-webhook-url'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for workflow-scheduler",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"workflow-scheduler-api\" || true; sleep 1; pkill -9 -f \"workflow-scheduler-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/workflow-scheduler.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/workflow-scheduler.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store schedule definitions, execution history, metrics, and configuration",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Execution locks, distributed caching, pub/sub for real-time updates"
      },
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      }
    },
    "scenarios": {}
  }
}
