{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "travel-map-filler",
    "displayName": "Travel Map Filler",
    "description": "Interactive world map for tracking and visualizing travel history with achievements",
    "version": "1.0.0",
    "tags": [
      "lifestyle",
      "travel",
      "mapping",
      "visualization",
      "achievements",
      "semantic-search",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "qdrant-vectors"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT_API",
      "range": "31000-31249",
      "fallback": "auto",
      "description": "Main API port"
    },
    "ui": {
      "env_var": "SERVICE_PORT_UI",
      "range": "37500-37749",
      "fallback": "auto",
      "description": "UI server port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/travel-tracker.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/travel-search.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/travel-list.json",
            "type": "workflow"
          }
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/qdrant/collections.json",
            "type": "collection"
          }
        ]
      }
    }
  },
  "ui": {
    "type": "javascript",
    "path": "ui/",
    "port": "ui"
  },
  "api": {
    "type": "go",
    "path": "api/",
    "port": "api"
  },
  "cli": {
    "executable": "cli/travel-map",
    "commands": [
      {
        "name": "add",
        "description": "Add a new travel location",
        "usage": "travel-map add <location> [options]"
      },
      {
        "name": "search",
        "description": "Search travel memories",
        "usage": "travel-map search <query>"
      },
      {
        "name": "stats",
        "description": "View travel statistics",
        "usage": "travel-map stats"
      },
      {
        "name": "list",
        "description": "List all travels",
        "usage": "travel-map list [options]"
      }
    ]
  },
  "health_check": {
    "endpoint": "/api/health",
    "interval": 30,
    "timeout": 5
  },
  "test": {
    "scenarios": [
      {
        "path": "test/scenario-test.yaml"
      }
    ]
  }
}
