{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "travel-map-filler",
    "displayName": "Travel Map Filler",
    "description": "Interactive world map application for tracking and visualizing your travel history",
    "version": "1.0.0",
    "tags": [
      "travel",
      "visualization",
      "mapping",
      "achievements",
      "analytics",
      "personal-tracking",
      "go-api",
      "nodejs-ui",
      "n8n-workflows",
      "postgres-storage",
      "qdrant-vectors",
      "interactive-map",
      "location-tracking"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Travel Map API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Travel Map UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store travel records, achievements, and user data",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector database for semantic search of travel memories",
      "initialization": [
        {
          "file": "initialization/qdrant/collections.json",
          "type": "collection"
        }
      ]
    },
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "purpose": "Workflow automation for travel processing and achievement calculation",
      "initialization": [
        {
          "file": "initialization/n8n/travel-tracker.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/travel-search.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/travel-list.json",
          "type": "workflow"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "purpose": "Generate travel insights and recommendations",
      "models": [
        "llama3.2:3b",
        "nomic-embed-text"
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Cache map data for fast loading"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Travel Map Filler health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Travel Map Filler",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "travel-map-filler-api"
            ]
          },
          {
            "type": "cli",
            "targets": [
              "travel-map-filler"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o travel-map-filler-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x travel-map && ln -sf $(pwd)/travel-map ~/.local/bin/travel-map 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'Travel Map Filler initialized - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: travel-map --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Travel Map Filler with Go API and Node.js UI",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./travel-map-filler-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/travel-map-filler-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "show-urls",
          "run": "echo 'Travel Map Filler running - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: travel-map --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario tests"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"travel-map-filler-api\" || true; sleep 1; pkill -9 -f \"travel-map-filler-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/travel-map-filler.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/travel-map-filler.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
