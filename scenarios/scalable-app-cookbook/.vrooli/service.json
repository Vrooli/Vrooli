{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "scalable-app-cookbook",
    "displayName": "Scalable App Cookbook",
    "description": "Comprehensive architectural patterns cookbook for building maintainable, scalable applications",
    "version": "1.0.0",
    "tags": [
      "technical-reference",
      "architecture",
      "patterns",
      "scalability",
      "enterprise",
      "cookbook",
      "best-practices",
      "microservices",
      "design-patterns",
      "postgres-storage",
      "go-api",
      "documentation"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Scalable app cookbook API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Scalable app cookbook web interface",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store architectural patterns, recipes, implementations, and search metadata",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": false,
      "purpose": "Generate pattern explanations, recommendations, and code examples on demand",
      "models": [
        "codellama",
        "mistral"
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Scalable App Cookbook health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "target": "scalable_app_cookbook",
          "critical": true,
          "timeout": 3000,
          "interval": 60000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Scalable App Cookbook with database and pattern library",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "scalable-app-cookbook-api"
             ]
           },
            {
              "type": "cli",
              "targets": ["scalable-app-cookbook"]
            },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-dependencies",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database with architectural patterns"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o scalable-app-cookbook-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Scalable App Cookbook initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: scalable-app-cookbook --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Scalable App Cookbook services for development",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./scalable-app-cookbook-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/scalable-app-cookbook-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm run dev",
          "description": "Start React development server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Services running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: scalable-app-cookbook --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Scalable App Cookbook functionality",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:${API_PORT}/health || echo 'API not running'",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-pattern-search",
          "run": "curl -sf http://localhost:${API_PORT}/api/v1/patterns/search?chapter=Part\\ A || echo 'Search endpoint not available'",
          "description": "Test pattern search endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats scalable-app-cookbook.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/scalable-app-cookbook.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"scalable-app-cookbook-api\" || true; sleep 1; pkill -9 -f \"scalable-app-cookbook-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/scalable-app-cookbook.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/scalable-app-cookbook.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
