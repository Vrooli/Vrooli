{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "bookmark-intelligence-hub",
    "displayName": "Bookmark Intelligence Hub",
    "description": "Transform social media bookmarks into organized, actionable intelligence across platforms",
    "version": "1.0.0",
    "tags": [
      "automation",
      "social-media",
      "intelligence",
      "categorization",
      "productivity",
      "multi-tenant",
      "bookmark-management",
      "action-suggestion",
      "cross-platform",
      "go-api",
      "huginn-automation",
      "browserless-fallback",
      "postgres-storage",
      "content-analysis"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/bookmark-intelligence-hub"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Main bookmark intelligence API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Bookmark management dashboard UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Bookmark Intelligence Hub health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "target": "postgresql://postgres:${POSTGRES_PASSWORD}@localhost:${RESOURCE_PORTS[postgres]}/vrooli",
          "critical": true,
          "timeout": 5000,
          "interval": 60000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Bookmark Intelligence Hub",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/bookmark-intelligence-hub-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "bookmark-intelligence-hub",
            "targets": [
              "bookmark-intelligence-hub"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o bookmark-intelligence-hub-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database schema and seed data"
        },
        {
          "name": "configure-huginn-agents",
          "run": "echo 'Huginn agents will be configured automatically on first API startup'",
          "description": "Prepare Huginn automation agents"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd16 Bookmark Intelligence Hub initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Huginn: http://localhost:${RESOURCE_PORTS[huginn]}\\n  CLI: bookmark-intelligence-hub --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start bookmark intelligence hub with API server and UI",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./bookmark-intelligence-hub-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/bookmark-intelligence-hub-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start Node.js UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd16 Bookmark Intelligence Hub running:\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Huginn: http://localhost:${RESOURCE_PORTS[huginn]}\\n  Browserless: http://localhost:${RESOURCE_PORTS[browserless]}\\n  CLI: bookmark-intelligence-hub --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for bookmark-intelligence-hub",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute bookmark-intelligence-hub --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"bookmark-intelligence-hub-api\" || true; sleep 1; pkill -9 -f \"bookmark-intelligence-hub-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/bookmark-intelligence-hub.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/bookmark-intelligence-hub.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store bookmark metadata, categorization rules, user profiles, and action history",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "data"
          }
        ]
      },
      "huginn": {
        "type": "huginn",
        "enabled": true,
        "required": true,
        "purpose": "Primary social media scraping and monitoring agent orchestration",
        "initialization": [
          {
            "file": "initialization/automation/huginn/bookmark-scraper.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/huginn/reddit-monitor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/huginn/twitter-monitor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/huginn/tiktok-monitor.json",
            "type": "workflow"
          }
        ]
      },
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": true,
        "purpose": "Fallback browser automation for platforms with strict bot detection"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": false,
        "required": false,
        "purpose": "Semantic similarity matching for improved categorization (optional enhancement)"
      },
      "ollama": {
        "type": "ollama",
        "enabled": false,
        "required": false,
        "purpose": "Local LLM for content analysis and categorization (optional enhancement)",
        "models": [
          "llama3.2",
          "mistral",
          "nomic-embed-text"
        ]
      }
    }
  }
}