{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "bookmark-intelligence-hub",
    "displayName": "Bookmark Intelligence Hub",
    "description": "Transform social media bookmarks into organized, actionable intelligence across platforms",
    "version": "1.0.0",
    "tags": [
      "automation",
      "social-media",
      "intelligence",
      "categorization",
      "productivity",
      "multi-tenant",
      "bookmark-management",
      "action-suggestion",
      "cross-platform",
      "go-api",
      "huginn-automation",
      "browserless-fallback",
      "postgres-storage",
      "content-analysis"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Main bookmark intelligence API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Bookmark management dashboard UI port",
      "range": "3000-3999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store bookmark metadata, categorization rules, user profiles, and action history",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "huginn": {
      "type": "huginn",
      "enabled": true,
      "required": true,
      "purpose": "Primary social media scraping and monitoring agent orchestration",
      "initialization": [
        {
          "file": "initialization/automation/huginn/bookmark-scraper.json",
          "type": "agent"
        },
        {
          "file": "initialization/automation/huginn/reddit-monitor.json",
          "type": "agent"
        },
        {
          "file": "initialization/automation/huginn/twitter-monitor.json",
          "type": "agent"
        },
        {
          "file": "initialization/automation/huginn/tiktok-monitor.json",
          "type": "agent"
        }
      ]
    },
    "browserless": {
      "type": "browserless",
      "enabled": true,
      "required": true,
      "purpose": "Fallback browser automation for platforms with strict bot detection"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": false,
      "required": false,
      "purpose": "Semantic similarity matching for improved categorization (optional enhancement)"
    },
    "ollama": {
      "type": "ollama",
      "enabled": false,
      "required": false,
      "purpose": "Local LLM for content analysis and categorization (optional enhancement)",
      "models": [
        "llama3.2",
        "mistral",
        "nomic-embed-text"
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Bookmark Intelligence Hub health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 30000
        },
        {
          "name": "postgres_connection",
          "type": "postgres",
          "target": "postgresql://postgres:${POSTGRES_PASSWORD}@localhost:${RESOURCE_PORTS[postgres]}/vrooli",
          "critical": true,
          "timeout": 5000,
          "interval": 60000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Bookmark Intelligence Hub",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/bookmark-intelligence-hub-api"
            ]
          },
          {
            "type": "cli",
            "command": "bookmark-intelligence-hub"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o bookmark-intelligence-hub-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database schema and seed data"
        },
        {
          "name": "configure-huginn-agents",
          "run": "echo 'Huginn agents will be configured automatically on first API startup'",
          "description": "Prepare Huginn automation agents"
        },
        {
          "name": "install-ui-dependencies",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ”– Bookmark Intelligence Hub initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Huginn: http://localhost:${RESOURCE_PORTS[huginn]}\\n  CLI: bookmark-intelligence-hub --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start bookmark intelligence hub with API server and UI",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./bookmark-intelligence-hub-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/bookmark-intelligence-hub-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm start",
          "description": "Start UI development server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸ”– Bookmark Intelligence Hub running:\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Huginn: http://localhost:${RESOURCE_PORTS[huginn]}\\n  Browserless: http://localhost:${RESOURCE_PORTS[browserless]}\\n  CLI: bookmark-intelligence-hub --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test bookmark intelligence hub API, CLI, and integrations",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-profiles-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/v1/profiles",
          "description": "Test API profiles endpoint"
        },
        {
          "name": "test-bookmark-processing",
          "run": "bash test/test-bookmark-processing.sh",
          "description": "Test bookmark processing functionality"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats bookmark-intelligence-hub.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/bookmark-intelligence-hub.bats"
          }
        },
        {
          "name": "test-huginn-integration",
          "run": "bash test/test-huginn-integration.sh",
          "description": "Test Huginn agent integration"
        },
        {
          "name": "test-ui-build",
          "run": "cd ui && npm run build",
          "description": "Test UI build process",
          "condition": {
            "file_exists": "ui/package.json"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f bookmark-intelligence-hub.start-api 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f bookmark-intelligence-hub.start-ui 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}