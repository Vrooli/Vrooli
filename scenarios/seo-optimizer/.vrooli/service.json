{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "seo-optimizer",
    "displayName": "SEO Optimizer",
    "description": "Comprehensive SEO analysis and optimization platform for improving search rankings",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "marketing-tools",
      "seo",
      "search-optimization",
      "keyword-research",
      "content-optimization",
      "technical-seo",
      "rank-tracking",
      "competitor-analysis",
      "javascript-ui",
      "nodejs-ui",
      "go-api",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "ollama-ai"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/seo-optimizer"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "SEO Optimizer API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "SEO Optimizer UI port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "SEO Optimizer health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize SEO Optimizer",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/seo-optimizer-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "seo-optimizer",
            "targets": [
              "seo-optimizer"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "if [ -f .vrooli/app-identity.json ]; then if curl -fsS http://localhost:6333/health >/dev/null 2>&1; then vrooli resource qdrant embeddings refresh --force || echo 'Embeddings generation skipped (non-critical failure)'; else echo 'Embeddings refresh skipped (qdrant unavailable)'; fi; else echo 'Embeddings refresh skipped (identity not initialized)'; fi",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "mkdir -p ~/.local/bin && chmod +x cli/seo-optimizer && ln -sf $(pwd)/cli/seo-optimizer ~/.local/bin/seo-optimizer",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o seo-optimizer-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸ” SEO Optimizer initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start SEO Optimizer services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./seo-optimizer-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/seo-optimizer-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ SEO Optimizer running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for seo-optimizer",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"seo-optimizer-api\" || true; sleep 1; pkill -9 -f \"seo-optimizer-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/seo-optimizer.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/seo-optimizer.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store SEO audits, keyword data, rankings, and competitor analysis",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache SEO analysis results and API responses"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "purpose": "Store content embeddings for semantic SEO analysis",
        "initialization": [
          {
            "file": "initialization/qdrant/collections.json",
            "type": "config"
          }
        ]
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2:3b",
          "nomic-embed-text"
        ]
      },
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": true,
        "purpose": "Web crawling for SEO audits and competitor analysis"
      }
    }
  }
}
