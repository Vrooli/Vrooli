#!/bin/bash

set -euo pipefail

API_BASE="${MAINTENANCE_API_URL:-http://localhost:3250}/api/v1"
SCRIPT_NAME="maintenance-orchestrator"

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Helper functions
print_success() {
    echo -e "${GREEN}✅ $1${NC}"
}

print_error() {
    echo -e "${RED}❌ $1${NC}" >&2
}

print_info() {
    echo -e "${BLUE}ℹ️  $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}⚠️  $1${NC}"
}

show_help() {
    cat << EOF
Maintenance Orchestrator CLI - Control plane for system maintenance

Usage: $SCRIPT_NAME <command> [options]

Commands:
    status              Show status of all maintenance scenarios
    list                List all discovered maintenance scenarios
    activate <id>       Activate a specific maintenance scenario
    deactivate <id>     Deactivate a specific maintenance scenario
    preset list         List available presets
    preset apply <id>   Apply a preset configuration
    preset create <name> Create a preset from current state
    stop-all           Emergency stop - deactivate all scenarios
    help               Show this help message
    version            Show version information

Options:
    --json             Output in JSON format
    --verbose          Show detailed information
    --filter <tag>     Filter scenarios by tag
    --timer <minutes>  Auto-deactivate after N minutes (activate only)

Examples:
    $SCRIPT_NAME status
    $SCRIPT_NAME list --filter security
    $SCRIPT_NAME activate dependency-updater --timer 60
    $SCRIPT_NAME preset apply security-only
    $SCRIPT_NAME stop-all

Environment:
    MAINTENANCE_API_URL   Base URL for API (default: http://localhost:3250)

EOF
}

# API call function
api_call() {
    local method="$1"
    local endpoint="$2"
    local data="${3:-}"
    
    if [ -n "$data" ]; then
        curl -s -X "$method" \
             -H "Content-Type: application/json" \
             -d "$data" \
             "${API_BASE}${endpoint}"
    else
        curl -s -X "$method" "${API_BASE}${endpoint}"
    fi
}

# Command: status
cmd_status() {
    local json_output=false
    local verbose=false
    
    while [[ $# -gt 0 ]]; do
        case $1 in
            --json) json_output=true ;;
            --verbose) verbose=true ;;
            *) print_error "Unknown option: $1"; exit 1 ;;
        esac
        shift
    done
    
    local response=$(api_call GET "/status")
    
    if [ "$json_output" = true ]; then
        echo "$response" | jq '.'
    else
        local health=$(echo "$response" | jq -r '.health')
        local total=$(echo "$response" | jq -r '.totalScenarios')
        local active=$(echo "$response" | jq -r '.activeScenarios')
        local inactive=$(echo "$response" | jq -r '.inactiveScenarios')
        
        echo "=== Maintenance Orchestrator Status ==="
        echo "Health:     $health"
        echo "Total:      $total scenarios"
        echo -e "Active:     ${GREEN}$active${NC}"
        echo -e "Inactive:   ${YELLOW}$inactive${NC}"
        
        if [ "$verbose" = true ]; then
            echo ""
            echo "=== Recent Activity ==="
            echo "$response" | jq -r '.recentActivity[] | "\(.timestamp | split("T")[1] | split(".")[0]) \(.action) \(.scenario // .preset // "")"'
        fi
    fi
}

# Command: list
cmd_list() {
    local json_output=false
    local filter=""
    
    while [[ $# -gt 0 ]]; do
        case $1 in
            --json) json_output=true ;;
            --filter) filter="$2"; shift ;;
            --active-only) filter="active" ;;
            *) print_error "Unknown option: $1"; exit 1 ;;
        esac
        shift
    done
    
    local response=$(api_call GET "/scenarios")
    
    if [ "$json_output" = true ]; then
        echo "$response" | jq '.'
    else
        echo "=== Discovered Maintenance Scenarios ==="
        echo ""
        
        if [ -n "$filter" ] && [ "$filter" != "active" ]; then
            response=$(echo "$response" | jq --arg tag "$filter" '.scenarios[] | select(.tags[] | contains($tag))')
        elif [ "$filter" = "active" ]; then
            response=$(echo "$response" | jq '.scenarios[] | select(.isActive == true)')
        else
            response=$(echo "$response" | jq '.scenarios[]')
        fi
        
        echo "$response" | jq -r '. | "[\(if .isActive then "ACTIVE" else "INACTIVE" end)] \(.name) - \(.displayName // .name)"' | while read line; do
            if [[ "$line" == *"[ACTIVE]"* ]]; then
                echo -e "${GREEN}$line${NC}"
            else
                echo "$line"
            fi
        done
    fi
}

# Command: activate
cmd_activate() {
    if [ $# -lt 1 ]; then
        print_error "Scenario ID required"
        echo "Usage: $SCRIPT_NAME activate <scenario-id> [--timer <minutes>]"
        exit 1
    fi
    
    local scenario_id="$1"
    shift
    
    local timer=""
    while [[ $# -gt 0 ]]; do
        case $1 in
            --timer) timer="$2"; shift ;;
            *) print_error "Unknown option: $1"; exit 1 ;;
        esac
        shift
    done
    
    local response=$(api_call POST "/scenarios/$scenario_id/activate")
    
    if echo "$response" | jq -e '.success' > /dev/null; then
        print_success "Activated $scenario_id"
        
        if [ -n "$timer" ]; then
            print_info "Auto-deactivate scheduled in $timer minutes"
            (
                sleep "${timer}m"
                api_call POST "/scenarios/$scenario_id/deactivate" > /dev/null
                print_info "Auto-deactivated $scenario_id after $timer minutes"
            ) &
        fi
    else
        print_error "Failed to activate $scenario_id"
        echo "$response" | jq -r '.message // "Unknown error"'
        exit 1
    fi
}

# Command: deactivate
cmd_deactivate() {
    if [ $# -lt 1 ]; then
        print_error "Scenario ID required"
        echo "Usage: $SCRIPT_NAME deactivate <scenario-id>"
        exit 1
    fi
    
    local scenario_id="$1"
    local response=$(api_call POST "/scenarios/$scenario_id/deactivate")
    
    if echo "$response" | jq -e '.success' > /dev/null; then
        print_success "Deactivated $scenario_id"
    else
        print_error "Failed to deactivate $scenario_id"
        echo "$response" | jq -r '.message // "Unknown error"'
        exit 1
    fi
}

# Command: preset
cmd_preset() {
    if [ $# -lt 1 ]; then
        print_error "Preset subcommand required"
        echo "Usage: $SCRIPT_NAME preset <list|apply|create> [options]"
        exit 1
    fi
    
    local subcommand="$1"
    shift
    
    case "$subcommand" in
        list)
            local response=$(api_call GET "/presets")
            echo "=== Available Presets ==="
            echo "$response" | jq -r '.presets[] | "• \(.name) - \(.description)"'
            ;;
            
        apply)
            if [ $# -lt 1 ]; then
                print_error "Preset ID required"
                echo "Usage: $SCRIPT_NAME preset apply <preset-id>"
                exit 1
            fi
            
            local preset_id="$1"
            print_warning "Applying preset: $preset_id"
            read -p "Continue? (y/N) " -n 1 -r
            echo
            
            if [[ $REPLY =~ ^[Yy]$ ]]; then
                local response=$(api_call POST "/presets/$preset_id/apply")
                
                if echo "$response" | jq -e '.success' > /dev/null; then
                    print_success "Applied preset: $preset_id"
                    
                    local activated=$(echo "$response" | jq -r '.activated | length')
                    local deactivated=$(echo "$response" | jq -r '.deactivated | length')
                    
                    echo "Activated: $activated scenarios"
                    echo "Deactivated: $deactivated scenarios"
                else
                    print_error "Failed to apply preset"
                    exit 1
                fi
            else
                echo "Cancelled"
            fi
            ;;
            
        create)
            if [ $# -lt 1 ]; then
                print_error "Preset name required"
                echo "Usage: $SCRIPT_NAME preset create <name>"
                exit 1
            fi
            
            local preset_name="$1"
            print_info "Creating preset from current state: $preset_name"
            # This would need additional API endpoint
            print_warning "Preset creation not yet implemented in API"
            ;;
            
        *)
            print_error "Unknown preset subcommand: $subcommand"
            exit 1
            ;;
    esac
}

# Command: stop-all
cmd_stop_all() {
    print_warning "This will deactivate ALL maintenance scenarios!"
    read -p "Are you sure? (y/N) " -n 1 -r
    echo
    
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        local response=$(api_call POST "/stop-all")
        
        if echo "$response" | jq -e '.success' > /dev/null; then
            local count=$(echo "$response" | jq -r '.deactivated | length')
            print_success "Emergency stop executed. Deactivated $count scenarios."
        else
            print_error "Failed to execute emergency stop"
            exit 1
        fi
    else
        echo "Cancelled"
    fi
}

# Command: version
cmd_version() {
    echo "$SCRIPT_NAME version 1.0.0"
    echo "API endpoint: $API_BASE"
}

# Main command router
main() {
    if [ $# -eq 0 ]; then
        show_help
        exit 0
    fi
    
    local command="$1"
    shift
    
    case "$command" in
        status) cmd_status "$@" ;;
        list) cmd_list "$@" ;;
        activate) cmd_activate "$@" ;;
        deactivate) cmd_deactivate "$@" ;;
        preset) cmd_preset "$@" ;;
        stop-all) cmd_stop_all "$@" ;;
        help) show_help ;;
        version) cmd_version ;;
        *)
            print_error "Unknown command: $command"
            echo "Run '$SCRIPT_NAME help' for usage information"
            exit 1
            ;;
    esac
}

# Check dependencies
if ! command -v curl &> /dev/null; then
    print_error "curl is required but not installed"
    exit 1
fi

if ! command -v jq &> /dev/null; then
    print_error "jq is required but not installed"
    exit 1
fi

# Run main function
main "$@"