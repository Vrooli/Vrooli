{
  "name": "email-triage-ui",
  "version": "1.0.0",
  "description": "AI-powered multi-tenant email management dashboard",
  "main": "src/main.js",
  "scripts": {
    "start": "bash -c '${VROOLI_ROOT:-$(git rev-parse --show-toplevel)}/scripts/lib/ui-guard.sh http-server -p ${UI_PORT:-3201} -c-1 --cors'",
    "dev": "bash -c '${VROOLI_ROOT:-$(git rev-parse --show-toplevel)}/scripts/lib/ui-guard.sh http-server -p ${UI_PORT:-3201} -c-1 --cors'",
    "build": "rm -rf dist && mkdir -p dist && cp -R src/. dist/ && if [ -d health ]; then cp -R health dist/; fi",
    "test": "UI_PORT=${UI_PORT:-36114} API_PORT=${API_PORT:-19525} jest --testTimeout=10000",
    "serve": "http-server -p 3201 -c-1"
  },
  "dependencies": {
    "http-server": "^14.1.1",
    "@vrooli/iframe-bridge": "file:../../../packages/iframe-bridge"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "keywords": [
    "email",
    "triage",
    "ai",
    "automation",
    "dashboard",
    "saas"
  ],
  "author": "Vrooli AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vrooli/scenarios.git",
    "directory": "scenarios/email-triage"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
