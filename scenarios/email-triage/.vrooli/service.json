{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "email-triage",
    "displayName": "Email Triage",
    "description": "AI-powered multi-tenant email management and triage system",
    "version": "1.0.0",
    "parent": "vrooli",
    "type": "scenario",
    "category": "automation",
    "tags": [],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/email-triage"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999"
    }
  },
  "endpoints": {
    "api": "http://localhost:3200",
    "ui": "http://localhost:3201",
    "health": "http://localhost:3200/health"
  },
  "database": {
    "name": "email_triage",
    "migrations": "initialization/postgres/",
    "required_tables": [
      "users",
      "email_accounts",
      "triage_rules",
      "processed_emails"
    ]
  },
  "authentication": {
    "provider": "scenario-authenticator",
    "required": true,
    "jwt_validation": "http://localhost:8080/api/v1/auth/validate"
  },
  "deployment": {
    "startup_script": "api/start.sh",
    "health_check_path": "/health",
    "environment_variables": {
      "DATABASE_URL": "postgres://postgres:password@localhost/email_triage",
      "QDRANT_URL": "http://localhost:6333",
      "AUTH_SERVICE_URL": "http://localhost:8080",
      "MAIL_SERVER_URL": "localhost",
      "NOTIFICATION_HUB_URL": "http://localhost:8081"
    }
  },
  "ai_features": {
    "rule_generation": true,
    "semantic_search": true,
    "priority_scoring": true,
    "models": {
      "embeddings": "all-MiniLM-L6-v2",
      "rule_generation": "phi3.5:3.8b",
      "classification": "phi3.5:3.8b"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 5,
          "interval": 10,
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5,
          "interval": 10,
          "critical": false
        }
      ]
    },
    "setup": {
      "description": "Initialize Email Triage",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/email-triage-api"
            ]
          },
          {
            "type": "cli",
            "command": "email-triage",
            "targets": [
              "email-triage"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o email-triage-api .",
          "description": "Build Go API binary",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo \"\ud83d\ude80 Email Triage initialized: API http://localhost:${API_PORT} UI http://localhost:${UI_PORT} CLI email-triage --help\"",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start email-triage services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && DEV_MODE=true API_PORT=${API_PORT:-19525} UI_PORT=${UI_PORT:-36114} DATABASE_URL=${DATABASE_URL:-postgres://postgres:password@localhost/email_triage} QDRANT_URL=${QDRANT_URL:-http://localhost:6333} AUTH_SERVICE_URL=${AUTH_SERVICE_URL:-http://localhost:8080} MAIL_SERVER_URL=${MAIL_SERVER_URL:-localhost} NOTIFICATION_HUB_URL=${NOTIFICATION_HUB_URL:-http://localhost:8081} OLLAMA_URL=${OLLAMA_URL:-http://localhost:11434} ./email-triage-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/email-triage-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && UI_PORT=${UI_PORT} API_PORT=${API_PORT} API_BASE_URL=\"http://localhost:${API_PORT}\" NODE_ENV=production node server.js",
          "description": "Start UI production server",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"\ud83d\ude80 Email Triage running: API: http://localhost:${API_PORT:-19544} UI: http://localhost:${UI_PORT:-36294} Health: http://localhost:${API_PORT:-19544}/health\"",
          "description": "Display service access URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop email-triage services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"email-triage-api\" || true; sleep 1; pkill -9 -f \"email-triage-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/email-triage/ui\" || true; sleep 1; pkill -9 -f \"scenarios/email-triage/ui\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for email-triage",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "required": [
        "postgres",
        "qdrant",
        "scenario-authenticator",
        "mail-in-a-box"
      ],
      "optional": [
        "notification-hub",
        "ollama",
        "redis"
      ]
    }
  }
}
