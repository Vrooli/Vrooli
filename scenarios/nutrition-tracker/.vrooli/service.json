{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "nutrition-tracker",
    "displayName": "Nutrition Tracker",
    "description": "Smart nutrition tracking with calorie counting, macro tracking, and AI-powered meal suggestions",
    "version": "1.0.0",
    "tags": [
      "saas-applications",
      "health",
      "nutrition",
      "calorie-tracking",
      "macro-tracking",
      "meal-planning",
      "ai-suggestions",
      "fitness",
      "go-api",
      "nodejs-ui",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "qdrant-vectors",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 26000,
      "fallback": "auto",
      "description": "Nutrition tracker API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 33250,
      "fallback": "auto",
      "description": "Nutrition tracker UI port"
    }
  },
  "resources": {
    "n8n": {
      "type": "n8n",
      "enabled": true,
      "required": true,
      "initialization": [
        {
          "file": "initialization/n8n/calorie-calculator.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/macro-tracker.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/meal-suggester.json",
          "type": "workflow"
        },
        {
          "file": "initialization/n8n/nutrition-analyzer.json",
          "type": "workflow"
        }
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store user profiles, food entries, meals, and nutrition data",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "script"
        },
        {
          "file": "initialization/postgres/seed.sql",
          "type": "script"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache nutrition data and user session management"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": true,
      "purpose": "Vector search for similar foods and meal suggestions"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "llama3.2"
      ]
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Nutrition Tracker",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/nutrition-tracker-api"
            ]
          },
          {
            "type": "cli",
            "command": "nutrition-tracker"
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o nutrition-tracker-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-cli",
          "run": "chmod +x cli/nutrition-tracker",
          "description": "Make CLI executable"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'Nutrition Tracker initialized - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Nutrition Tracker services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && env PORT=$API_PORT ./nutrition-tracker-api",
          "description": "Start API server",
          "background": true
        },
        {
          "name": "start-ui",
          "run": "cd ui && env PORT=$UI_PORT API_URL=http://localhost:$API_PORT node server.js",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'Services running - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test Nutrition Tracker",
      "steps": [
        {
          "name": "validate",
          "run": "./test/validate.sh",
          "description": "Run validation tests"
        }
      ]
    },
    "stop": {
      "description": "Stop Nutrition Tracker services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f nutrition-tracker-api || true",
          "description": "Stop API server"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'node server.js' || true",
          "description": "Stop UI server"
        }
      ]
    }
  }
}