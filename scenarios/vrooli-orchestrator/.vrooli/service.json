{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "vrooli-orchestrator",
    "displayName": "Vrooli Orchestrator",
    "description": "Contextual environment orchestration and startup profile management - intelligently configure Vrooli for different user contexts and use cases",
    "version": "1.0.0",
    "tags": [
      "vrooli-core",
      "orchestration",
      "environment-management",
      "profile-management",
      "context-switching",
      "automation",
      "infrastructure",
      "go-api",
      "postgres-storage",
      "browser-automation",
      "resource-lifecycle"
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/vrooli-orchestrator"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Orchestrator management API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Profile management dashboard port",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Vrooli Orchestrator health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Vrooli Orchestrator",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/vrooli-orchestrator-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "vrooli-orchestrator",
            "targets": [
              "vrooli-orchestrator"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add orchestrator data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o vrooli-orchestrator-api .",
          "description": "Build Go orchestration API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build profile management UI"
        },
        {
          "name": "create-default-profiles",
          "run": "vrooli-orchestrator create-profile developer --resources postgres,n8n,ollama --scenarios system-monitor,app-debugger --description 'Full development environment with monitoring tools'",
          "description": "Create default developer profile",
          "condition": {
            "binary_exists": "vrooli-orchestrator"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Vrooli Orchestrator initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: vrooli-orchestrator --help\\n\\nProfile Management:\\n  vrooli-orchestrator list-profiles\\n  vrooli-orchestrator activate developer\\n  vrooli-orchestrator deactivate'",
          "description": "Display service access URLs and basic commands"
        }
      ]
    },
    "develop": {
      "description": "Start orchestrator with API server and dashboard UI",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./vrooli-orchestrator-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/vrooli-orchestrator-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "description": "Serve profile management dashboard from production bundle",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Orchestrator services running:\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: vrooli-orchestrator --help\\n\\nQuick Commands:\\n  vrooli-orchestrator status\\n  vrooli-orchestrator list-profiles\\n  vrooli-orchestrator activate <profile-name>'",
          "description": "Display all running service URLs and commands"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for vrooli-orchestrator",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test-genie execute vrooli-orchestrator --preset comprehensive",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop orchestrator services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"vrooli-orchestrator-api\" || true; sleep 1; pkill -9 -f \"vrooli-orchestrator-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"ui.*npm.*start\" || true; sleep 1; pkill -9 -f \"ui.*npm.*start\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store profile configurations, activation history, and usage analytics",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "data"
          }
        ]
      },
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": false,
        "purpose": "Auto-open browser tabs for dashboard URLs in profiles",
        "fallback": "Manual URL display to user console"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      }
    },
    "scenarios": {}
  }
}