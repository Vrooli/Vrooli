{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "referral-program-generator",
    "displayName": "Referral Program Generator",
    "description": "Automated referral/affiliate program generation and implementation for Vrooli scenarios with AI-driven branding analysis and revenue optimization",
    "version": "1.0.0",
    "tags": [
      "monetization",
      "business-intelligence",
      "referral-programs",
      "affiliate-management",
      "revenue-optimization",
      "branding-analysis",
      "go-api",
      "postgres-storage",
      "automated-implementation",
      "cross-scenario-enhancement"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Referral program generation and management API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Referral program dashboard UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Referral tracking, commission calculations, and analytics storage",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "scenario-authenticator": {
      "type": "scenario",
      "enabled": true,
      "required": true,
      "purpose": "User account management and referral profile creation"
    },
    "resource-claude-code": {
      "type": "resource",
      "enabled": true,
      "required": false,
      "purpose": "Automated implementation of referral logic in target scenarios"
    },
    "browserless": {
      "type": "browserless",
      "enabled": true,
      "required": false,
      "purpose": "Web crawling for deployed scenario analysis and validation screenshots"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": false,
      "purpose": "Vector database for semantic search of optimal referral patterns and marketing copy templates"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Referral Program Generator health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Referral Program Generator",
       "condition": {
         "checks": [
           {
             "type": "binaries",
             "targets": [
               "referral-program-generator-api"
             ]
           },
           {
             "type": "cli",
             "targets": [
               "referral-program-generator"
             ]
           },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "create-directories",
          "run": "mkdir -p scripts lib ui/dist data test",
          "description": "Create required directory structure"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o referral-program-generator-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "setup-database",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Initialize database schema and seed data"
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm install && npm run build",
          "description": "Build referral program dashboard UI",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Referral Program Generator initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: referral-program-generator --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start referral program generator with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./referral-program-generator-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/referral-program-generator-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm run dev -- --port ${UI_PORT}",
          "description": "Start UI development server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"API: http://localhost:$API_PORT\" && echo \"UI: http://localhost:$UI_PORT\"",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Test referral program generator API, CLI, and core functionality",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-branding-analysis",
          "run": "bash test/test-branding-analysis.sh",
          "description": "Test branding analysis functionality"
        },
        {
          "name": "test-program-generation",
          "run": "bash test/test-program-generation.sh",
          "description": "Test referral program generation"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats referral-program-generator.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/referral-program-generator.bats"
          }
        },
        {
          "name": "test-database-operations",
          "run": "bash test/test-database-operations.sh",
          "description": "Test database operations and migrations"
        }
      ]
    },
    "stop": {
      "description": "Stop referral program generator services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"referral-program-generator-api\" || true; sleep 1; pkill -9 -f \"referral-program-generator-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/referral-program-generator.*vite\" || true; sleep 1; pkill -9 -f \"scenarios/referral-program-generator.*vite\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
