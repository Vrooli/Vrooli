{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "scenario-generator-v1",
    "displayName": "Scenario Generator V1",
    "description": "A simplified meta-scenario that generates Vrooli scenarios using Claude Code AI",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "ai-development",
      "meta-scenario",
      "code-generation",
      "claude-code",
      "scenario-builder",
      "nodejs-ui",
      "go-api",
      "pipeline-orchestration",
      "postgres-storage",
      "redis-cache",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "port": 29000,
      "fallback": "auto",
      "description": "Scenario generator API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 35300,
      "fallback": "auto",
      "description": "Scenario Generator UI port"
    }
  },
  "resources": {
    "claude-code": {
      "type": "claude-code",
      "enabled": true,
      "required": true,
      "purpose": "AI-powered scenario generation and code creation"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "models": [
        "phi3.5:3.8b",
        "llama3.2",
        "mistral"
      ]
    },
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "scenario metadata and generation tracking",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Cache generation state and temporary workflow data"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Scenario Generator health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Scenario Generator V1",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/scenario-generator-v1-api"
            ]
          },
          {
            "type": "cli",
            "command": "scenario-generator-v1"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add scenario generator data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install scenario generator CLI globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o scenario-generator-v1-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "check-claude-code",
          "run": "resource-claude-code test smoke >/dev/null 2>&1 || echo 'Claude Code not available - generation features will be limited'",
          "description": "Verify Claude Code availability for AI generation"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Scenario Generator V1 initialized\\n  API: http://localhost:${API_PORT}\\n  Database: localhost:${RESOURCE_PORTS[postgres]}\\n  CLI: scenario-generator'",
          "description": "Display service access information"
        }
      ]
    },
    "develop": {
      "description": "Start scenario generator services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./scenario-generator-v1-api",
          "description": "Start Go API server in background",
          "background": true
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start React UI in development mode",
          "background": true
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  API: http://localhost:${API_PORT}\\n  UI: http://localhost:3000\\n  CLI: scenario-generator help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run scenario generator tests",
      "steps": [
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:${API_PORT}/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-claude-code",
          "run": "resource-claude-code status >/dev/null 2>&1",
          "description": "Test Claude Code availability"
        },
        {
          "name": "run-integration-tests",
          "run": "./test.sh",
          "description": "Execute integration test suite",
          "condition": {
            "file_exists": "test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "source-pm",
          "run": "source \"${APP_ROOT}/scripts/lib/process-manager.sh\" 2>/dev/null || true",
          "description": "Source process manager"
        },
        {
          "name": "stop-api",
          "run": "pm::stop \"vrooli.develop.scenario-generator-v1.start-api\" 2>/dev/null || pkill -f \"scenario-generator-v1-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pm::stop \"vrooli.develop.scenario-generator-v1.start-ui\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
