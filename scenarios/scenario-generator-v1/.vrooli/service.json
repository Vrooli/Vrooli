{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "scenario-generator-v1",
    "displayName": "Scenario Generator V1",
    "description": "A simplified meta-scenario that generates Vrooli scenarios using Claude Code AI",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "ai-development",
      "meta-scenario",
      "code-generation",
      "claude-code",
      "scenario-builder",
      "nodejs-ui",
      "go-api",
      "n8n-workflows",
      "postgres-storage",
      "redis-cache",
      "ollama-ai"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "29000-29249",
      "fallback": "auto",
      "description": "Scenario generator API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "shared_workflows": [
          "ollama",
          "claude-code-executor",
          "workflow-creator-fixer",
          "file-list-writer"
        ],
        "initialization": [
          {
            "file": "initialization/n8n/scenario-generator-orchestrator.json",
            "type": "workflow",
            "description": "Main orchestration workflow for scenario generation"
          }
        ]
      }
    },
    "agents": {
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": true,
        "purpose": "AI-powered scenario generation and code creation"
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "phi3.5:3.8b",
          "llama3.2",
          "mistral"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "scenario metadata and generation tracking",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "script"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "Cache generation state and temporary workflow data"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Scenario Generator V1",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/populate/populate.sh .",
          "description": "Add scenario generator data to resources"
        },
        {
          "name": "check-claude-code",
          "run": "resource-claude-code test smoke >/dev/null 2>&1 || echo 'Claude Code not available - generation features will be limited'",
          "description": "Verify Claude Code availability for AI generation"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install scenario generator CLI globally"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Scenario Generator V1 initialized\\n  n8n Workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  Database: localhost:${RESOURCE_PORTS[postgres]}\\n  CLI: scenario-generator'",
          "description": "Display service access information"
        }
      ]
    },
    "develop": {
      "description": "Start scenario generator services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && go run main.go &",
          "description": "Start Go API server in background",
          "background": true
        },
        {
          "name": "wait-for-api",
          "run": "sleep 3 && curl -sf http://localhost:${SERVICE_PORT}/health > /dev/null",
          "description": "Wait for API to be ready",
          "retry": {
            "max_attempts": 10,
            "delay": 2
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm start &",
          "description": "Start React UI in development mode",
          "background": true
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  API: http://localhost:${SERVICE_PORT}\\n  UI: http://localhost:3000\\n  CLI: scenario-generator help'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run scenario generator tests",
      "steps": [
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:${SERVICE_PORT}/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-claude-code",
          "run": "resource-claude-code status >/dev/null 2>&1",
          "description": "Test Claude Code availability"
        },
        {
          "name": "run-integration-tests",
          "run": "./test.sh",
          "description": "Execute integration test suite",
          "condition": {
            "file_exists": "test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop scenario generator services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'go run main.go' || true; pkill -f 'npm start' || true",
          "description": "Stop API and UI processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Scenario Generator V1 services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
