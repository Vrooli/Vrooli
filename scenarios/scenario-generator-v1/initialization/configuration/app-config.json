{
  "$schema": "../../../../.vrooli/schemas/app-config.schema.json",
  "app": {
    "name": "Scenario Generator V1",
    "displayName": "AI-Powered Scenario Generator",
    "version": "1.0.0",
    "description": "Autonomous scenario development pipeline using Claude Code AI integration",
    "category": "development-tools",
    "author": "Vrooli Platform",
    "license": "MIT",
    "homepage": "http://localhost:8080",
    "repository": "https://github.com/vrooli/scenarios/scenario-generator-v1"
  },
  
  "ui": {
    "theme": {
      "primary_color": "#06b6d4",
      "secondary_color": "#3b82f6", 
      "accent_color": "#8b5cf6",
      "background": "gradient",
      "dark_mode": true
    },
    "layout": {
      "header": {
        "show_logo": true,
        "show_navigation": true,
        "show_user_menu": false
      },
      "sidebar": {
        "enabled": false
      },
      "footer": {
        "enabled": true,
        "show_version": true,
        "show_links": true
      }
    },
    "features": {
      "search": {
        "enabled": true,
        "placeholder": "Search scenarios...",
        "debounce_ms": 300
      },
      "filtering": {
        "enabled": true,
        "default_filters": ["category", "complexity", "status"]
      },
      "real_time_updates": {
        "enabled": true,
        "refresh_interval": 30000
      }
    }
  },

  "generation": {
    "defaults": {
      "complexity": "intermediate",
      "category": "business-automation",
      "planning_iterations": 3,
      "implementation_iterations": 2, 
      "validation_iterations": 5,
      "timeout_ms": 300000
    },
    "limits": {
      "max_concurrent_generations": 3,
      "max_planning_iterations": 5,
      "max_implementation_iterations": 5,
      "max_validation_iterations": 10,
      "max_prompt_length": 10000,
      "max_scenario_name_length": 100
    },
    "claude_integration": {
      "model_preferences": ["claude-3-sonnet", "claude-3-haiku"],
      "temperature": 0.7,
      "max_tokens": 4000,
      "retry_attempts": 3,
      "timeout_ms": 120000
    }
  },

  "templates": {
    "categories": [
      "business-automation",
      "ai-assistant", 
      "data-processing",
      "customer-service",
      "content-generation",
      "analytics",
      "e-commerce",
      "education",
      "healthcare",
      "financial",
      "other"
    ],
    "complexity_levels": [
      {
        "id": "simple",
        "name": "Simple",
        "description": "1-3 resources, basic functionality",
        "revenue_range": [10000, 20000],
        "estimated_hours": "10-20"
      },
      {
        "id": "intermediate", 
        "name": "Intermediate",
        "description": "4-6 resources, moderate complexity",
        "revenue_range": [15000, 35000],
        "estimated_hours": "20-40"
      },
      {
        "id": "advanced",
        "name": "Advanced", 
        "description": "7+ resources, high complexity",
        "revenue_range": [25000, 50000],
        "estimated_hours": "40-80"
      }
    ]
  },

  "validation": {
    "enabled": true,
    "auto_fix_enabled": true,
    "validation_rules": {
      "require_service_json": true,
      "require_readme": true,
      "require_deployment_scripts": true,
      "validate_resource_references": true,
      "check_file_structure": true
    },
    "deployment": {
      "auto_deploy_on_validation_success": false,
      "require_manual_approval": true,
      "deployment_environment": "development"
    }
  },

  "analytics": {
    "enabled": true,
    "track_events": [
      "scenario_generation_started",
      "scenario_generation_completed", 
      "scenario_generation_failed",
      "template_used",
      "scenario_deployed",
      "validation_passed",
      "validation_failed"
    ],
    "metrics": {
      "success_rate": {
        "enabled": true,
        "target": 85
      },
      "average_generation_time": {
        "enabled": true,
        "target": 1800000
      },
      "resource_utilization": {
        "enabled": true
      }
    }
  },

  "notifications": {
    "enabled": true,
    "channels": {
      "browser": {
        "enabled": true,
        "persist": true
      },
      "email": {
        "enabled": false,
        "smtp_config": null
      }
    },
    "events": {
      "generation_completed": {
        "enabled": true,
        "channels": ["browser"]
      },
      "generation_failed": {
        "enabled": true,
        "channels": ["browser"]
      },
      "validation_failed": {
        "enabled": true,
        "channels": ["browser"] 
      }
    }
  },

  "storage": {
    "generated_scenarios_path": "/tmp/generated-scenarios",
    "cleanup_policy": {
      "enabled": true,
      "max_age_days": 30,
      "max_total_size_gb": 10
    },
    "backup": {
      "enabled": false,
      "frequency": "daily",
      "retention_days": 7
    }
  },

  "security": {
    "api_authentication": {
      "required": false,
      "method": "none"
    },
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "requests_per_hour": 1000
    },
    "input_validation": {
      "sanitize_prompts": true,
      "max_prompt_length": 10000,
      "blocked_patterns": [
        "eval\\(",
        "exec\\(",
        "__import__",
        "system\\(",
        "shell_exec"
      ]
    }
  },

  "development": {
    "debug_mode": false,
    "verbose_logging": false,
    "mock_claude_responses": false,
    "test_data": {
      "load_sample_scenarios": true,
      "load_sample_templates": true
    }
  },

  "performance": {
    "caching": {
      "enabled": true,
      "ttl_seconds": 3600,
      "max_size_mb": 100
    },
    "compression": {
      "enabled": true,
      "level": 6
    },
    "connection_pooling": {
      "enabled": true,
      "max_connections": 20,
      "idle_timeout_ms": 30000
    }
  }
}