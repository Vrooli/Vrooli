{
    "name": "Basic Desktop App",
    "description": "Simple desktop application with essential features. Perfect for most scenarios that need basic desktop functionality.",
    "use_cases": [
        "Web applications that need file system access",
        "Scenarios requiring offline operation",
        "Simple tools and utilities",
        "Basic productivity applications"
    ],
    "features": {
        "splash_screen": true,
        "system_tray": false,
        "auto_updater": true,
        "native_menus": true,
        "single_instance": true,
        "dev_tools": true,
        "file_operations": true,
        "notifications": true,
        "multi_window": false,
        "deep_linking": false
    },
    "window_config": {
        "width": 1200,
        "height": 800,
        "min_width": 800,
        "min_height": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "frame": true,
        "transparent": false,
        "always_on_top": false
    },
    "template_variables": {
        "ENABLE_SPLASH": true,
        "ENABLE_MENU": true,
        "ENABLE_SYSTEM_TRAY": false,
        "ENABLE_AUTO_UPDATER": true,
        "ENABLE_SINGLE_INSTANCE": true,
        "ENABLE_DEV_TOOLS": true,
        "WINDOW_WIDTH": 1200,
        "WINDOW_HEIGHT": 800,
        "WINDOW_BACKGROUND": "#f5f5f5",
        "SPLASH_BACKGROUND_START": "#4a90e2",
        "SPLASH_BACKGROUND_END": "#357abd",
        "SPLASH_TEXT_COLOR": "#ffffff",
        "SPLASH_ACCENT_COLOR": "#64b5f6"
    },
    "supported_server_types": [
        "node",
        "static", 
        "external"
    ],
    "required_files": [
        "main.ts",
        "preload.ts",
        "splash.html",
        "package.json.template",
        "tsconfig.json"
    ],
    "excluded_files": [],
    "build_config": {
        "platforms": ["win", "mac", "linux"],
        "auto_sign": false,
        "publish_stores": false,
        "enterprise_features": false
    },
    "customization_points": [
        {
            "name": "Basic Menu Structure",
            "description": "Standard File/Edit/View/Help menu structure",
            "location": "main.ts:createApplicationMenu"
        },
        {
            "name": "Simple IPC Handlers", 
            "description": "File operations and basic system information",
            "location": "main.ts:IPC_HANDLERS"
        },
        {
            "name": "Clean Splash Design",
            "description": "Professional splash screen with app branding",
            "location": "splash.html"
        }
    ],
    "example_scenarios": [
        "picker-wheel",
        "qr-code-generator", 
        "palette-gen",
        "notes",
        "nutrition-tracker"
    ]
}