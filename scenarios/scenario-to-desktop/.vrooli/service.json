{
  "name": "scenario-to-desktop",
  "version": "1.0.0",
  "description": "Transform Vrooli scenarios into professional desktop applications using Electron and other frameworks",
  "type": "scenario",
  "category": "automation",
  "keywords": ["desktop", "electron", "native", "cross-platform", "packaging", "distribution"],
  "author": "Vrooli Platform",
  "license": "MIT",
  
  "capabilities": [
    "desktop_app_generation",
    "cross_platform_packaging", 
    "native_os_integration",
    "template_system",
    "build_automation"
  ],
  
  "requirements": {
    "node_version": ">=18.0.0",
    "platform": ["linux", "darwin", "win32"],
    "memory": "512MB",
    "disk": "100MB"
  },
  
  "services": {
    "api": {
      "enabled": true,
      "path": "./api",
      "port": 3202,
      "healthcheck": "/api/v1/health"
    },
    "cli": {
      "enabled": true,
      "path": "./cli",
      "binary": "scenario-to-desktop"
    },
    "ui": {
      "enabled": true,
      "path": "./ui",
      "port": 3203
    }
  },
  
  "resources": {
    "required": [],
    "optional": [
      {
        "name": "browserless",
        "purpose": "Desktop application testing and screenshot validation",
        "fallback": "Manual testing workflow"
      },
      {
        "name": "postgres",
        "purpose": "Store desktop application templates and build history",
        "fallback": "File-based template storage"
      },
      {
        "name": "redis",
        "purpose": "Cache compiled applications and build artifacts",
        "fallback": "Local filesystem caching"
      }
    ]
  },
  
  "apis": {
    "endpoints": [
      {
        "method": "GET",
        "path": "/api/v1/health",
        "description": "Health check endpoint"
      },
      {
        "method": "GET",
        "path": "/api/v1/status",
        "description": "Desktop generation system status"
      },
      {
        "method": "GET",
        "path": "/api/v1/templates",
        "description": "List available desktop application templates"
      },
      {
        "method": "POST",
        "path": "/api/v1/desktop/generate",
        "description": "Generate desktop application from scenario configuration"
      },
      {
        "method": "GET",
        "path": "/api/v1/desktop/status/{build_id}",
        "description": "Check desktop build status and get deployment info"
      },
      {
        "method": "POST",
        "path": "/api/v1/desktop/build",
        "description": "Build a desktop application project"
      },
      {
        "method": "POST",
        "path": "/api/v1/desktop/test",
        "description": "Test desktop application functionality"
      },
      {
        "method": "POST",
        "path": "/api/v1/desktop/package",
        "description": "Package desktop application for distribution"
      }
    ]
  },
  
  "cli_commands": [
    {
      "name": "status",
      "description": "Show desktop generation system status",
      "flags": ["--json", "--verbose"]
    },
    {
      "name": "generate",
      "description": "Generate desktop application for a scenario",
      "arguments": ["scenario_name"],
      "flags": ["--framework", "--template", "--platforms", "--output", "--features"]
    },
    {
      "name": "build",
      "description": "Build a desktop application project",
      "arguments": ["desktop_path"],
      "flags": ["--platforms", "--sign", "--publish"]
    },
    {
      "name": "test",
      "description": "Test desktop application functionality",
      "arguments": ["app_path"],
      "flags": ["--platforms", "--headless"]
    },
    {
      "name": "package",
      "description": "Package desktop application for distribution",
      "arguments": ["app_path"],
      "flags": ["--store", "--enterprise"]
    },
    {
      "name": "templates",
      "description": "List available templates",
      "flags": ["--json", "--detail"]
    }
  ],
  
  "events": {
    "published": [
      {
        "name": "desktop.build.started",
        "description": "Desktop application build started"
      },
      {
        "name": "desktop.build.completed",
        "description": "Desktop application build completed successfully"
      },
      {
        "name": "desktop.build.failed",
        "description": "Desktop application build failed"
      },
      {
        "name": "desktop.deployed",
        "description": "Desktop application deployed to distribution channels"
      }
    ],
    "consumed": [
      {
        "name": "scenario.updated",
        "description": "Scenario was updated, may trigger desktop app regeneration"
      },
      {
        "name": "resource.browserless.ready",
        "description": "Browserless resource is available for testing"
      }
    ]
  },
  
  "integrations": {
    "provides_to": [
      {
        "scenario": "system-monitor",
        "capability": "Native desktop system monitoring application",
        "interface": "API/CLI"
      },
      {
        "scenario": "personal-digital-twin",
        "capability": "Offline-capable desktop assistant application",
        "interface": "API/CLI"
      },
      {
        "scenario": "document-manager",
        "capability": "Desktop document management with native file integration",
        "interface": "API/CLI"
      }
    ],
    "consumes_from": [
      {
        "scenario": "browserless",
        "capability": "Desktop application UI testing and screenshot capture",
        "fallback": "Manual testing instructions"
      },
      {
        "scenario": "notification-hub",
        "capability": "Build completion notifications",
        "fallback": "CLI output only"
      }
    ]
  },
  
  "deployment": {
    "type": "service",
    "auto_start": true,
    "health_check_interval": 30,
    "restart_policy": "on-failure",
    "max_restarts": 3
  },
  
  "monitoring": {
    "metrics": [
      "desktop_apps_generated",
      "build_success_rate",
      "average_build_time",
      "template_usage_stats",
      "platform_distribution"
    ],
    "logs": {
      "level": "info",
      "format": "json",
      "rotation": "daily"
    }
  },
  
  "security": {
    "permissions": ["file_system", "network", "process"],
    "sandbox": false,
    "code_signing": {
      "required": false,
      "development": false,
      "production": true
    }
  },
  
  "development": {
    "hot_reload": true,
    "debug_mode": true,
    "test_runner": "jest",
    "linting": true
  },
  
  "metadata": {
    "created": "2025-09-04",
    "updated": "2025-09-04",
    "status": "active",
    "maturity": "stable",
    "documentation": "README.md",
    "repository": "https://github.com/vrooli/vrooli",
    "issues": "https://github.com/vrooli/vrooli/issues",
    "homepage": "https://vrooli.com/scenarios/scenario-to-desktop"
  }
}