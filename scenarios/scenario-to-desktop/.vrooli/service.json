{
  "service": {
    "name": "scenario-to-desktop"
  },
  "version": "1.0.0",
  "description": "Transform Vrooli scenarios into professional desktop applications using Electron and other frameworks",
  "type": "scenario",
  "category": "automation",
  "keywords": [
    "desktop",
    "electron",
    "native",
    "cross-platform",
    "packaging",
    "distribution"
  ],
  "author": "Vrooli Platform",
  "license": "MIT",
  "requirements": {
    "node_version": ">=18.0.0",
    "platform": [
      "linux",
      "darwin",
      "win32"
    ],
    "memory": "512MB",
    "disk": "100MB"
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999",
      "description": "Desktop build API server port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999",
      "description": "Desktop build UI server port"
    }
  },
  "cli_commands": [
    {
      "name": "status",
      "description": "Show desktop generation system status",
      "flags": [
        "--json",
        "--verbose"
      ]
    },
    {
      "name": "generate",
      "description": "Generate desktop application for a scenario",
      "arguments": [
        "scenario_name"
      ],
      "flags": [
        "--framework",
        "--template",
        "--platforms",
        "--output",
        "--features"
      ]
    },
    {
      "name": "build",
      "description": "Build a desktop application project",
      "arguments": [
        "desktop_path"
      ],
      "flags": [
        "--platforms",
        "--sign",
        "--publish"
      ]
    },
    {
      "name": "test",
      "description": "Test desktop application functionality",
      "arguments": [
        "app_path"
      ],
      "flags": [
        "--platforms",
        "--headless"
      ]
    },
    {
      "name": "package",
      "description": "Package desktop application for distribution",
      "arguments": [
        "app_path"
      ],
      "flags": [
        "--store",
        "--enterprise"
      ]
    },
    {
      "name": "templates",
      "description": "List available templates",
      "flags": [
        "--json",
        "--detail"
      ]
    }
  ],
  "integrations": {
    "provides_to": [
      {
        "scenario": "system-monitor",
        "capability": "Native desktop system monitoring application",
        "interface": "API/CLI"
      },
      {
        "scenario": "personal-digital-twin",
        "capability": "Offline-capable desktop assistant application",
        "interface": "API/CLI"
      },
      {
        "scenario": "document-manager",
        "capability": "Desktop document management with native file integration",
        "interface": "API/CLI"
      }
    ],
    "consumes_from": [
      {
        "scenario": "browserless",
        "capability": "Desktop application UI testing and screenshot capture",
        "fallback": "Manual testing instructions"
      },
      {
        "scenario": "notification-hub",
        "capability": "Build completion notifications",
        "fallback": "CLI output only"
      }
    ]
  },
  "deployment": {
    "type": "service",
    "auto_start": true,
    "health_check_interval": 30,
    "restart_policy": "on-failure",
    "max_restarts": 3
  },
  "development": {
    "hot_reload": true,
    "debug_mode": true,
    "test_runner": "jest",
    "linting": true
  },
  "metadata": {
    "created": "2025-09-04",
    "updated": "2025-09-04",
    "status": "active",
    "maturity": "stable",
    "documentation": "README.md",
    "repository": "https://github.com/vrooli/vrooli",
    "issues": "https://github.com/vrooli/vrooli/issues",
    "homepage": "https://vrooli.com/scenarios/scenario-to-desktop"
  },
  "lifecycle": {
    "health": {
      "description": "Scenario to Desktop health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize scenario-to-desktop",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/scenario-to-desktop-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "scenario-to-desktop",
            "targets": [
              "scenario-to-desktop"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go build -o scenario-to-desktop-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && pnpm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && pnpm run build",
          "description": "Build production UI"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Scenario to Desktop initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  CLI: scenario-to-desktop --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start scenario-to-desktop services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./scenario-to-desktop-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/scenario-to-desktop-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true,
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\ude80 Scenario to Desktop running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"scenario-to-desktop-api\" || true; sleep 1; pkill -9 -f \"scenario-to-desktop-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/scenario-to-desktop.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/scenario-to-desktop.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    },
    "test": {
      "description": "Run scenario tests",
      "steps": [
        {
          "name": "test-api",
          "run": "cd api && go test -v -timeout 120s -coverprofile=coverage.out ./...",
          "description": "Run API unit tests"
        },
        {
          "name": "test-cli",
          "run": "cd cli && bats scenario-to-desktop.bats || echo 'CLI tests not yet implemented'",
          "description": "Run CLI tests"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "required": [],
      "optional": [
        "browserless",
        "postgres",
        "redis"
      ],
      "details": {
        "browserless": {
          "purpose": "Desktop application testing and screenshot validation",
          "fallback": "Manual testing workflow"
        },
        "postgres": {
          "purpose": "Store desktop application templates and build history",
          "fallback": "File-based template storage"
        },
        "redis": {
          "purpose": "Cache compiled applications and build artifacts",
          "fallback": "Local filesystem caching"
        }
      }
    }
  }
}
