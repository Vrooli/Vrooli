{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "secrets-manager",
    "displayName": "Secrets Manager",
    "description": "Dark chrome security dashboard for discovering, validating, and provisioning secrets required by Vrooli resources",
    "version": "1.0.0",
    "type": "business-application",
    "category": "general",
    "tags": [
      "react-ui",
      "vite",
      "go-api",
      "secrets-management",
      "vault",
      "postgres"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/secrets-manager"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Secrets Manager API",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "React Vite dashboard",
      "range": "35000-39999"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Standard API/UI health checks",
      "startup_grace_period": 15000,
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "timeout": 10000,
          "interval": 30000,
          "critical": true
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "timeout": 5000,
          "interval": 30000,
          "critical": false
        }
      ]
    },
    "setup": {
      "description": "Install CLI, build API, initialize database, and produce a production UI bundle",
      "condition": {
        "description": "Check if binaries, CLI, and UI bundle exist",
        "checks": [
          {
            "type": "binaries",
            "paths": ["api/secrets-manager-api"],
            "description": "API binary produced by build-api step"
          },
          {
            "type": "cli",
            "command": "secrets-manager",
            "targets": ["secrets-manager"],
            "description": "CLI must be installed"
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src",
            "description": "Production UI bundle built from source"
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install the secrets-manager CLI"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o secrets-manager-api .",
          "description": "Build the Go API server binary (secrets-manager-api) inside api/ directory for lifecycle execution"
        },
        {
          "name": "initialize-database",
          "run": "../../resources/postgres/cli.sh content add initialization/storage/postgres/schema.sql",
          "description": "Ensure the tracking schema exists"
        },
        {
          "name": "seed-database",
          "run": "../../resources/postgres/cli.sh content add initialization/storage/postgres/seed.sql",
          "description": "Seed baseline secret definitions"
        },
        {
          "name": "install-ui-deps",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm install; fi",
          "description": "Install UI dependencies"
        },
        {
          "name": "build-ui",
          "run": "if [ -f ui/package.json ]; then cd ui && pnpm run build; fi",
          "description": "Build production UI bundle against the lifecycle-assigned API port"
        },
        {
          "name": "show-urls",
          "run": "echo '‚úÖ Setup complete!' && echo '' && echo 'üîó Access points:' && echo \"  API: http://localhost:${API_PORT}/health\" && echo \"  UI:  http://localhost:${UI_PORT}\" && echo '' && echo '‚ñ∂Ô∏è  Start with: make start'",
          "description": "Display access URLs after setup"
        }
      ]
    },
    "develop": {
      "description": "Start the Go API and serve production UI bundle",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./secrets-manager-api",
          "background": true,
          "description": "Run the API server",
          "condition": {
            "file_exists": "api/secrets-manager-api"
          }
        },
        {
          "name": "start-ui",
          "run": "if [ -z \"${API_PORT:-}\" ] || [ -z \"${UI_PORT:-}\" ]; then echo 'API_PORT and UI_PORT must be provided by the lifecycle system'; exit 1; fi; cd ui && node server.cjs",
          "background": true,
          "description": "Serve production UI bundle via Express server",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "sleep 2 && echo '' && echo 'üöÄ Secrets Manager is running!' && echo '' && echo 'üîó Access points:' && echo \"  API Health: http://localhost:${API_PORT}/health\" && echo \"  Dashboard:  http://localhost:${UI_PORT}\" && echo '' && echo 'üìä View logs: make logs' && echo 'üõë Stop: make stop'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run phased scenario tests",
      "steps": [
        {
          "name": "run-tests",
          "run": "cd test && ./run-tests.sh",
          "description": "Execute structure/unit/integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop background services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f 'secrets-manager-api' || true",
          "description": "Stop Go API"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f 'pnpm run dev' || true",
          "description": "Stop Vite dev server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "vault": {
        "type": "vault",
        "enabled": true,
        "required": true,
        "description": "Secure secret storage and validation"
      },
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Secrets metadata and scan history"
      },
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": false,
        "description": "Launch vulnerability-fixing agents"
      }
    }
  }
}
