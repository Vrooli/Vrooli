{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "scenario-auditor",
    "displayName": "Scenario Auditor",
    "description": "Comprehensive standards enforcement system for auditing and improving all scenarios across API security, UI practices, configuration compliance, and testing standards",
    "version": "1.0.0",
    "tags": [
      "standards-enforcement",
      "quality-assurance",
      "security-audit",
      "configuration-validation",
      "ui-testing",
      "rule-engine",
      "ai-integration",
      "vrooli-core"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com"
      }
    ],
    "parent": "vrooli",
    "type": "scenario",
    "category": "general",
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/scenario-auditor"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Scenario Auditor REST API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "port": 36224,
      "description": "Auditing dashboard UI port"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Scenario Auditor health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Scenario Auditor",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/scenario-auditor-api"
            ]
          },
          {
            "type": "cli",
            "command": "scenario-auditor"
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          }
        ]
      },
      "steps": [
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o scenario-auditor-api .",
          "description": "Build API server binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install --prefer-offline --no-audit --no-fund --loglevel error",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI"
        },
        {
          "name": "show-urls",
          "run": "echo \"✅ Scenario Auditor is ready:\" && echo \"  Dashboard: http://localhost:${UI_PORT}\" && echo \"  API: http://localhost:${API_PORT}/api/v1\" && echo \"  Health: http://localhost:${API_PORT}/api/v1/health\""
        }
      ]
    },
    "develop": {
      "description": "Start Scenario Auditor services in development mode",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./scenario-auditor-api",
          "background": true,
          "description": "Start Go API server in background",
          "condition": {
            "file_exists": "api/scenario-auditor-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && NODE_ENV=production node server.js",
          "background": true,
          "description": "Serve production UI bundle",
          "condition": {
            "file_exists": "ui/dist/index.html"
          }
        },
        {
          "name": "show-urls",
          "run": "echo \"✅ Scenario Auditor is running:\" && echo \"  Dashboard: http://localhost:${UI_PORT}\" && echo \"  API: http://localhost:${API_PORT}/api/v1\" && echo \"  Health: http://localhost:${API_PORT}/api/v1/health\""
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for scenario-auditor",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop Scenario Auditor services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"scenario-auditor-api\" || true; sleep 1; pkill -9 -f \"scenario-auditor-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"vite.*scenario-auditor\" || true; sleep 1; pkill -9 -f \"vite.*scenario-auditor\" 2>/dev/null || true",
          "description": "Stop Vite dev server"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "description": "Stores rule definitions, scan results, user preferences, and audit history",
        "schema": "scenario_auditor"
      },
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": true,
        "description": "AI agent spawning for automated fix generation and rule creation"
      },
      "opencode": {
        "type": "opencode",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (resource_cli)"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "description": "Auto-detected via analyzer (heuristic)"
      }
    },
    "scenarios": {
      "app-issue-tracker": {
        "required": true,
        "version": "2.0.0-file-based",
        "versionRange": ">=2.0.0-file-based",
        "description": "Auto-detected dependency via scenario_port_cli"
      }
    }
  }
}
