{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "parent": "vrooli",
    "name": "data-tools",
    "displayName": "Data Tools",
    "description": "Comprehensive data processing and analysis toolkit",
    "version": "1.0.0",
    "type": "business-application",
    "category": "productivity",
    "tags": [
      "tools",
      "utilities",
      "developers"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/data-tools"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "https://github.com/Vrooli/Vrooli/tree/master/docs",
    "support": {
      "issues": "https://github.com/Vrooli/Vrooli/issues"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "15000-19999",
      "description": "Main API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "35000-39999",
      "description": "Web UI dashboard port"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Application health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/health",
        "metrics": "/api/metrics"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 5000,
          "interval": 60000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Application",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/data-tools-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "data-tools",
            "targets": [
              "data-tools"
            ]
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "create-directories",
          "run": "mkdir -p data logs temp",
          "description": "Create required directory structure"
        },
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance",
          "condition": {
            "resource_enabled": "qdrant"
          }
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o data-tools-api ./cmd/server/",
          "description": "Build Go API server",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install --silent",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI for production",
          "condition": {
            "json_path_exists": "ui/package.json:scripts.build"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Application initialized\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  CLI: data-tools --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start application services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./data-tools-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/data-tools-api"
          }
        },
        {
          "name": "start-ui",
          "run": "test -f ui/package.json && cd ui && npm run dev -- --port $UI_PORT --host 0.0.0.0 || (echo 'UI not enabled' && tail -f /dev/null)",
          "description": "Start UI development server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Services running:\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  CLI: data-tools --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing for data-tools",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute phased scenario test suite"
        }
      ]
    },
    "stop": {
      "description": "Stop application services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'data-tools-api' || true; sleep 1; pkill -9 -f 'data-tools-api' 2>/dev/null || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'scenarios/data-tools.*vite' || true; pkill -f 'scenarios/data-tools.*serve' || true; sleep 1; pkill -9 -f 'scenarios/data-tools.*vite' 2>/dev/null || true; pkill -9 -f 'scenarios/data-tools.*serve' 2>/dev/null || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Application services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  },
  "dependencies": {
    "resources": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store tool configurations and processing results",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "data"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache and event bus for real-time operations"
      },
      "minio": {
        "type": "minio",
        "enabled": false,
        "required": false,
        "purpose": "Object storage for files and artifacts"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": false,
        "required": false,
        "purpose": "Vector database for semantic search and AI features"
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "purpose": "Workflow automation and business logic orchestration",
        "initialization": [
          {
            "file": "initialization/automation/windmill/windmill-app.json",
            "type": "app"
          }
        ]
      },
      "node-red": {
        "type": "node-red",
        "enabled": false,
        "required": false,
        "purpose": "Visual workflow automation (alternative to Windmill)"
      },
      "ollama": {
        "type": "ollama",
        "enabled": false,
        "required": false,
        "models": [
          "llama3.2"
        ],
        "purpose": "Local AI inference for intelligent features"
      },
      "claude-code": {
        "type": "claude-code",
        "enabled": false,
        "required": false,
        "purpose": "AI-powered development assistance and code generation"
      }
    }
  }
}
