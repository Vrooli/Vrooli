{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "roi-fit-analysis",
    "displayName": "ROI Fit Analysis",
    "description": "Deep financial research tool for ROI analysis and investment decision-making",
    "version": "1.0.0",
    "tags": [
      "business-application",
      "finance",
      "roi",
      "investment",
      "financial-analysis",
      "market-research",
      "business-strategy",
      "decision-making",
      "risk-assessment",
      "opportunity-analysis",
      "javascript-ui",
      "nodejs-ui",
      "go-api",
      "postgres-storage",
      "redis-cache", 
      "qdrant-vectors",
      "ollama-ai",
      "native-go-analysis"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "ROI Fit Analysis API port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "ROI Fit Analysis UI port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Store analysis data, research results, and investment metrics",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache research data and session storage"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": true,
      "required": false,
      "purpose": "Vector storage for market research and investment opportunity matching"
    },
    "ollama": {
      "type": "ollama",
      "enabled": true,
      "required": true,
      "purpose": "Local LLM for financial analysis and market research"
    },
    "browserless": {
      "type": "browserless",
      "enabled": true,
      "required": true,
      "purpose": "Web scraping for financial data and market research"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "ROI Fit Analysis health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize ROI Fit Analysis",
      "condition": {
        "checks": [
           {
             "type": "binaries",
             "targets": [
               "roi-fit-analysis-api"
             ]
           },
            {
              "type": "cli",
              "targets": ["roi-fit-analysis"]
            },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "chmod +x cli/roi-fit && ln -sf $(pwd)/cli/roi-fit ~/.local/bin/roi-fit 2>/dev/null || true",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o roi-fit-analysis-api .",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ROI Fit Analysis initialized - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: roi-fit --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start ROI Fit Analysis with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./roi-fit-analysis-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/roi-fit-analysis-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && node server.js",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "show-urls",
          "run": "echo 'Services running - UI: http://localhost:${UI_PORT} - API: http://localhost:${API_PORT} - CLI: roi-fit --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test ROI Fit Analysis API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build . && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-analysis-endpoint",
          "run": "curl -sf http://localhost:$API_PORT/api/analysis",
          "description": "Test API analysis endpoint"
        },
        {
          "name": "test-cli-help",
          "run": "roi-fit --help",
          "description": "Test CLI help command"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"roi-fit-analysis-api\" || true; sleep 1; pkill -9 -f \"roi-fit-analysis-api\" 2>/dev/null || true",
          "description": "Stop API process"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"scenarios/roi-fit-analysis.*server\\.js\" || true; sleep 1; pkill -9 -f \"scenarios/roi-fit-analysis.*server\\.js\" 2>/dev/null || true",
          "description": "Stop UI process"
        }
      ]
    }
  }
}
