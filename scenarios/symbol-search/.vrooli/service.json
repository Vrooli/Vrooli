{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "symbol-search",
    "displayName": "Symbol Search",
    "description": "Comprehensive ASCII and Unicode symbol search and filtering engine with performance optimization for large datasets",
    "version": "1.0.0",
    "tags": [
      "developer-tools",
      "unicode",
      "symbol-search",
      "ascii",
      "text-processing",
      "api",
      "filtering",
      "performance-optimized",
      "cross-scenario-utility",
      "character-database"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "description": "Symbol search API server port",
      "range": "15000-19999"
    },
    "ui": {
      "env_var": "UI_PORT",
      "description": "Symbol search UI server port",
      "range": "35000-39999"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Unicode character database with efficient indexing for search performance",
      "initialization": [
        {
          "file": "initialization/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/postgres/seed.sql",
          "type": "seed"
        }
      ]
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Symbol search service health monitoring",
      "endpoints": {
        "api": "/health",
        "ui": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/health",
          "critical": false,
          "timeout": 3000,
          "interval": 45000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Symbol Search scenario",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/symbol-search-api"
            ]
          },
          {
            "type": "ui-bundle",
            "bundle_path": "ui/dist/index.html",
            "source_dir": "ui/src"
          },
          {
            "type": "cli",
            "command": "symbol-search",
            "targets": [
              "symbol-search"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "populate-unicode-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Populate Unicode character database"
        },
        {
          "name": "install-cli",
          "run": "bash cli/install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o symbol-search-api .",
          "description": "Build Go API server binary",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build production UI bundle"
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd0d Symbol Search initialized\\n  API: http://localhost:${API_PORT}\\n  UI: http://localhost:${UI_PORT}\\n  CLI: symbol-search --help\\n\\nSearch endpoints:\\n  GET /api/search?q=heart&category=symbols\\n  GET /api/categories\\n  GET /api/character/{codepoint}'",
          "description": "Display service access URLs and usage"
        }
      ]
    },
    "develop": {
      "description": "Start symbol search with API and UI servers",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && ./symbol-search-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/symbol-search-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm run dev",
          "description": "Start UI development server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "show-urls",
          "run": "echo '\ud83d\udd0d Symbol Search running:\\n  API: http://localhost:$API_PORT\\n  UI: http://localhost:$UI_PORT\\n  CLI: symbol-search --help\\n\\nAPI Endpoints:\\n  GET /api/search - Search symbols\\n  GET /api/categories - List categories\\n  GET /api/blocks - List Unicode blocks\\n  GET /api/character/{codepoint} - Character details'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run phased test suite",
      "steps": [
        {
          "name": "run-phased-tests",
          "run": "test/run-tests.sh",
          "description": "Execute structure, dependency, unit, integration, business, and performance phases"
        }
      ]
    },
    "stop": {
      "description": "Stop services",
      "steps": [
        {
          "name": "stop-api",
          "run": "pkill -f \"symbol-search-api\" || true; sleep 1; pkill -9 -f \"symbol-search-api\" 2>/dev/null || true",
          "description": "Stop API server"
        },
        {
          "name": "stop-ui",
          "run": "pkill -f \"npm.*run.*dev\" || true; pkill -f \"vite\" || true",
          "description": "Stop UI development server"
        }
      ]
    }
  }
}
