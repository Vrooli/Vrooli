{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "qr-code-generator",
    "displayName": "QR Code Generator",
    "description": "Fun retro-style QR code generator with customization options and batch processing",
    "version": "1.0.0",
    "type": "utility-application",
    "category": "utilities",
    "tags": [
      "qr-code",
      "generator",
      "utility",
      "batch-processing",
      "javascript-ui"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "9100-9199",
      "fallback": "auto",
      "description": "QR code generator API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3100-3199",
      "fallback": "auto",
      "description": "QR code generator UI port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "shared_workflows": [
          "file-list-writer",
          "ollama",
          "intelligent-text-classifier",
          "cache-manager"
        ],
        "initialization": [
          {
            "file": "initialization/n8n/qr-generator-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/batch-qr-processor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/qr-art-generator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/qr-puzzle-generator.json",
            "type": "workflow"
          }
        ]
      }
    },
    "storage": {
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache generated QR codes and track batch jobs"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize QR Code Generator",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o qr-generator-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸŽ¨ QR Code Generator initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start QR code generator services",
      "steps": [
        {
          "name": "ensure-api-built",
          "run": "if [ ! -f api/qr-generator-api ]; then echo 'Building API...'; cd api && go mod download && go build -o qr-generator-api main.go && echo 'API built successfully'; else echo 'API binary already exists'; fi",
          "description": "Ensure API binary exists"
        },
        {
          "name": "ensure-ui-deps",
          "run": "if [ ! -d ui/node_modules ]; then echo 'Installing UI dependencies...'; cd ui && npm install && echo 'UI dependencies installed'; else echo 'UI dependencies already installed'; fi",
          "description": "Ensure UI dependencies installed"
        },
        {
          "name": "start-api-server",
          "run": "cd api && echo 'Starting API on port ${SERVICE_PORT}...' && PORT=${SERVICE_PORT} N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} REDIS_URL=redis://localhost:${RESOURCE_PORTS[redis]} nohup ./qr-generator-api > api.log 2>&1 &",
          "description": "Start API server",
          "background": true
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && echo 'Starting UI on port ${UI_PORT}...' && PORT=${UI_PORT} API_URL=http://localhost:${SERVICE_PORT} nohup npm start > ui.log 2>&1 &",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'ðŸš€ QR Code Generator running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test QR code generator",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-generation",
          "run": "curl -X POST http://localhost:$SERVICE_PORT/generate -H 'Content-Type: application/json' -d '{\"text\":\"test\",\"size\":256}'",
          "description": "Test QR generation"
        }
      ]
    },
    "stop": {
      "description": "Stop QR code generator",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'qr-generator-api' || true; pkill -f 'npm.*qr-code-generator' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}