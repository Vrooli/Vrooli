{
  "version": "1.1.0",
  "description": "Defines controlled copying rules for critical files. Remaining scenario files are copied automatically with exclusion patterns.",
  "bulk_copy": {
    "enabled": true,
    "description": "After manifest rules, copy all remaining scenario files not already copied",
    "exclude_patterns": [
      ".git",
      ".git/**",
      "node_modules",
      "node_modules/**",
      ".DS_Store",
      "Thumbs.db",
      "*.log",
      ".env.local",
      ".env.*.local",
      "coverage",
      "coverage/**",
      ".nyc_output",
      ".nyc_output/**",
      "dist",
      "build",
      ".cache",
      ".cache/**",
      "*.tmp",
      "*.temp",
      ".vscode/settings.json",
      ".idea/workspace.xml"
    ]
  },
  "copy_rules": [
    {
      "name": "core-lifecycle",
      "source": "scripts/lib",
      "destination": "scripts/lib",
      "type": "directory",
      "from": "vrooli",
      "optional": false
    },
    {
      "name": "main-entrypoint",
      "source": "scripts/manage.sh",
      "destination": "scripts/manage.sh",
      "type": "file",
      "from": "vrooli",
      "optional": false,
      "executable": true
    },
    {
      "name": "runtime-engine",
      "source": "scripts/resources/populate/populate.sh",
      "destination": "scripts/resources/populate/populate.sh",
      "type": "file",
      "from": "vrooli",
      "required": true,
      "executable": true
    },
    {
      "name": "populate-lib",
      "source": "scripts/resources/populate/lib",
      "destination": "scripts/resources/populate/lib",
      "type": "directory",
      "from": "vrooli",
      "required": true
    },
    {
      "name": "port-registry",
      "source": "scripts/resources/port_registry.sh",
      "destination": "scripts/resources/port_registry.sh",
      "type": "file",
      "from": "vrooli",
      "required": true
    },
    {
      "name": "gitignore",
      "source": ".gitignore",
      "destination": ".gitignore",
      "type": "file",
      "from": "vrooli",
      "required": true
    },
    {
      "name": "vrooli-schemas",
      "source": ".vrooli/schemas",
      "destination": ".vrooli/schemas",
      "type": "directory",
      "from": "vrooli",
      "required": true
    },
    {
      "name": "scenario-config",
      "source": ".vrooli",
      "destination": ".vrooli",
      "type": "directory",
      "from": "scenario",
      "optional": true,
      "merge": "overlay",
      "process": [
        "substitute_variables"
      ]
    },
    {
      "name": "shared-initialization",
      "source": "initialization",
      "destination": "initialization",
      "type": "directory",
      "from": "vrooli",
      "optional": true,
      "merge": "overlay",
      "process": [
        "filter_by_service_references"
      ]
    },
    {
      "name": "scenario-data",
      "source": "initialization",
      "destination": "initialization",
      "type": "directory",
      "from": "scenario",
      "optional": true,
      "merge": "overlay"
    },
    {
      "name": "scenario-scripts",
      "source": "scripts",
      "destination": "scripts",
      "type": "directory",
      "from": "scenario",
      "optional": true,
      "merge": "overlay",
      "process": [
        "adjust_app_root_depth"
      ]
    },
    {
      "name": "scenario-deployment",
      "source": "deployment",
      "destination": "deployment",
      "type": "directory",
      "from": "scenario",
      "optional": true,
      "process": [
        "adjust_app_root_depth"
      ]
    },
    {
      "name": "scenario-test",
      "source": "test.sh",
      "destination": "test.sh",
      "type": "file",
      "from": "scenario",
      "optional": true,
      "executable": true,
      "process": [
        "adjust_app_root_depth"
      ]
    },
    {
      "name": "scenario-readme",
      "source": "README.md",
      "destination": "README.md",
      "type": "file",
      "from": "scenario",
      "optional": true
    },
    {
      "name": "scenario-api",
      "source": "api",
      "destination": "api",
      "type": "directory",
      "from": "scenario",
      "optional": true
    },
    {
      "name": "scenario-ui",
      "source": "ui",
      "destination": "ui",
      "type": "directory",
      "from": "scenario",
      "optional": true
    },
    {
      "name": "scenario-cli",
      "source": "cli",
      "destination": "cli",
      "type": "directory",
      "from": "scenario",
      "optional": true,
      "process": [
        "adjust_app_root_depth"
      ]
    },
    {
      "name": "scenario-prompts",
      "source": "prompts",
      "destination": "prompts",
      "type": "directory",
      "from": "scenario",
      "optional": true
    }
  ]
}
