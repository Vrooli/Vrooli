{
  "metadata": {
    "name": "Admin Portal Smoke",
    "reset": "full",
    "description": "Placeholder React Flow BAS workflow for admin login and nav",
    "notes": "Replace with real selectors and session handling; legacy factory playbooks were removed."
  },
  "nodes": [
    {
      "id": "nav-login",
      "type": "navigate",
      "data": {
        "url": "${BASE_URL}/admin/login"
      }
    },
    {
      "id": "fill-email",
      "type": "type",
      "data": {
        "selector": "@selector/admin.login.email",
        "text": "${ADMIN_EMAIL}"
      }
    },
    {
      "id": "fill-password",
      "type": "type",
      "data": {
        "selector": "@selector/admin.login.password",
        "text": "${ADMIN_PASSWORD}"
      }
    },
    {
      "id": "click-submit",
      "type": "click",
      "data": {
        "selector": "@selector/admin.login.submit"
      }
    },
    {
      "id": "assert-home",
      "type": "assertText",
      "data": {
        "selector": "@selector/admin.home.title",
        "text": "Admin"
      }
    }
  ],
  "edges": [
    {
      "id": "e1",
      "source": "nav-login",
      "target": "fill-email",
      "type": "smoothstep"
    },
    {
      "id": "e2",
      "source": "fill-email",
      "target": "fill-password",
      "type": "smoothstep"
    },
    {
      "id": "e3",
      "source": "fill-password",
      "target": "click-submit",
      "type": "smoothstep"
    },
    {
      "id": "e4",
      "source": "click-submit",
      "target": "assert-home",
      "type": "smoothstep"
    }
  ]
}
