{
  "name": "react-vite",
  "displayName": "React + Vite Scenario",
  "description": "Full-stack React/TypeScript UI with Go API, CLI, lifecycle metadata, and requirements seed.",
  "stack": [
    "react",
    "vite",
    "typescript",
    "go",
    "cli"
  ],
  "requiredVars": {
    "SCENARIO_ID": {
      "flag": "id",
      "description": "Scenario slug used for folder names, binaries, CLI binary, and module paths"
    },
    "SCENARIO_DISPLAY_NAME": {
      "flag": "display-name",
      "description": "Human-friendly name shown in dashboards and UI shells"
    },
    "SCENARIO_DESCRIPTION": {
      "flag": "description",
      "description": "One-sentence summary that appears in service.json and status output"
    }
  },
  "optionalVars": {
    "SCENARIO_CATEGORY": {
      "flag": "category",
      "description": "Service category used in service.json",
      "default": "ai_tools"
    },
    "DATABASE_NAME": {
      "flag": "database",
      "description": "Default Postgres database/schema name",
      "default": "{{SCENARIO_ID}}"
    },
    "AUTHOR": {
      "flag": "author",
      "description": "Initial progress log author",
      "default": "Generator Agent"
    },
    "DATE": {
      "flag": "date",
      "description": "Initial progress log date",
      "default": "{{CURRENT_DATE}}"
    }
  },
  "docs": {
    "generatorGuide": "docs/scenarios/getting-started.md",
    "requirementsGuide": "docs/testing/guides/requirement-tracking-quick-start.md",
    "templateGuide": "scripts/scenarios/templates/react-vite/README.md"
  },
  "postHooks": [
    {
      "description": "Install UI dependencies (pnpm install --dir ui)",
      "cmd": "pnpm install",
      "cwd": "ui"
    },
    {
      "description": "Sync Go modules (go mod tidy)",
      "cmd": "go mod tidy",
      "cwd": "api"
    }
  ]
}
