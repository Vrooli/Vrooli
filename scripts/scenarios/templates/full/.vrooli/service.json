        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "APPLICATION_NAME_PLACEHOLDER",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "COMPANY_NAME_PLACEHOLDER",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#PRIMARY_COLOR_PLACEHOLDER",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "DATABASE_NAME_PLACEHOLDER",
          "description": "Database name"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "AUTH_PROVIDER_PLACEHOLDER",
          "sso": false
        },
        "notifications": {
          "enabled": true,
          "channels": [
            "email",
            "webhook"
          ]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "payments": {
          "enabled": false,
          "provider": "PAYMENT_PROVIDER_PLACEHOLDER"
        }
      },
      "integrations": [
        {
          "name": "INTEGRATION_NAME_PLACEHOLDER",
          "type": "INTEGRATION_TYPE_PLACEHOLDER",
          "required": false
        }
      ]
    },
    "aiGeneration": {
      "enabled": true,
      "placeholders": {
        "business": [
          "VALUE_PROPOSITION_PLACEHOLDER",
          "TARGET_MARKET_PLACEHOLDER",
          "PAIN_POINT_*_PLACEHOLDER",
          "SOLUTION_DESCRIPTION_PLACEHOLDER"
        ],
        "technical": [
          "SCENARIO_ID_PLACEHOLDER",
          "DATABASE_NAME_PLACEHOLDER",
          "CLI_NAME_PLACEHOLDER"
        ],
        "revenue": [
          "*_REVENUE_PLACEHOLDER",
          "TOTAL_ESTIMATE_PLACEHOLDER",
          "DEVELOPMENT_COST_PLACEHOLDER"
        ]
      },
      "instructions": "Replace all _PLACEHOLDER values with specific details for the target scenario"
    }
  }
}
