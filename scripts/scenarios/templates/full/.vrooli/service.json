{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "parent": "vrooli",
    "name": "SCENARIO_ID_PLACEHOLDER",
    "displayName": "SCENARIO_NAME_PLACEHOLDER",
    "description": "SCENARIO_DESCRIPTION_PLACEHOLDER",
    "version": "SCENARIO_VERSION_PLACEHOLDER",
    "type": "business-application",
    "category": "CATEGORY_PLACEHOLDER",
    "tags": [
      "INDUSTRY_TAG_PLACEHOLDER",
      "SOLUTION_TYPE_PLACEHOLDER",
      "TARGET_MARKET_PLACEHOLDER"
    ],
    "maintainers": [
      {
        "name": "MAINTAINER_NAME_PLACEHOLDER",
        "email": "MAINTAINER_EMAIL_PLACEHOLDER",
        "url": "MAINTAINER_URL_PLACEHOLDER"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scenarios/SCENARIO_ID_PLACEHOLDER"
    },
    "license": "LICENSE_TYPE_PLACEHOLDER",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "SUPPORT_EMAIL_PLACEHOLDER",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "CHAT_URL_PLACEHOLDER"
    }
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "8090-8999",
      "description": "Main API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3000-3999",
      "description": "Web UI dashboard port"
    }
  },
  "components": {
    "api": {
      "enabled": true,
      "language": "go",
      "path": "api",
      "main": "main.go",
      "description": "Go-based API server with REST endpoints"
    },
    "ui": {
      "enabled": true,
      "framework": "react",
      "path": "ui",
      "main": "index.html",
      "description": "React-based web interface"
    },
    "cli": {
      "enabled": true,
      "language": "bash",
      "path": "cli",
      "command": "CLI_NAME_PLACEHOLDER",
      "description": "Command-line interface for scenario operations"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "PRIMARY_DATABASE_PURPOSE_PLACEHOLDER",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": true,
      "purpose": "Cache and event bus for real-time operations"
    },
    "minio": {
      "type": "minio",
      "enabled": false,
      "required": false,
      "purpose": "Object storage for files and artifacts"
    },
    "qdrant": {
      "type": "qdrant",
      "enabled": false,
      "required": false,
      "purpose": "Vector database for semantic search and AI features"
    },
    "windmill": {
      "type": "windmill",
      "enabled": true,
      "required": true,
      "purpose": "Workflow automation and business logic orchestration",
      "initialization": [
        {
          "file": "initialization/automation/windmill/windmill-app.json",
          "type": "app"
        }
      ]
    },
    "node-red": {
      "type": "node-red",
      "enabled": false,
      "required": false,
      "purpose": "Visual workflow automation (alternative to Windmill)"
    },
    "ollama": {
      "type": "ollama",
      "enabled": false,
      "required": false,
      "models": [
        "AI_MODEL_PLACEHOLDER"
      ],
      "purpose": "Local AI inference for intelligent features"
    },
    "claude-code": {
      "type": "claude-code",
      "enabled": false,
      "required": false,
      "purpose": "AI-powered development assistance and code generation"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Application health check configuration",
      "endpoints": {
        "api": "/health",
        "ui": "/",
        "metrics": "/api/metrics"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        },
        {
          "name": "ui_endpoint",
          "type": "http",
          "target": "http://localhost:${UI_PORT}/",
          "critical": false,
          "timeout": 5000,
          "interval": 60000
        }
      ],
      "timeout": 10000,
      "interval": 30000,
      "startup_grace_period": 15000
    },
    "setup": {
      "description": "Initialize Application",
      "condition": {
        "checks": [
          {
            "type": "binaries",
            "targets": [
              "api/SCENARIO_ID_PLACEHOLDER-api"
            ]
          },
          {
            "type": "cli",
            "command": "CLI_NAME_PLACEHOLDER"
          },
          {
            "type": "dependencies",
            "paths": [
              "ui/package.json"
            ]
          },
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "create-directories",
          "run": "mkdir -p data logs temp",
          "description": "Create required directory structure"
        },
        {
          "name": "generate-embeddings",
          "run": "vrooli resource qdrant embeddings refresh --force || echo \"Embeddings generation skipped (not critical)\"",
          "description": "Generate code embeddings for AI assistance",
          "condition": {
            "resource_enabled": "qdrant"
          }
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/install.sh"
          }
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o SCENARIO_ID_PLACEHOLDER-api ./cmd/server/main.go",
          "description": "Build Go API server",
          "condition": {
            "file_exists": "api/go.mod"
          }
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install --silent",
          "description": "Install UI dependencies",
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "build-ui",
          "run": "cd ui && npm run build",
          "description": "Build React UI for production",
          "condition": {
            "file_exists": "ui/package.json",
            "json_path_exists": "ui/package.json:scripts.build"
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Application initialized\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  CLI: CLI_NAME_PLACEHOLDER --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start application services",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && env PORT=$API_PORT WINDMILL_BASE_URL=http://localhost:${RESOURCE_PORTS[windmill]} ./SCENARIO_ID_PLACEHOLDER-api",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/SCENARIO_ID_PLACEHOLDER-api"
          }
        },
        {
          "name": "start-ui-dev",
          "run": "cd ui && npm run dev -- --port $UI_PORT --host 0.0.0.0",
          "description": "Start UI development server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json",
            "json_path_exists": "ui/package.json:scripts.dev"
          }
        },
        {
          "name": "start-ui-prod",
          "run": "cd ui && npx serve -s build -l $UI_PORT",
          "description": "Start UI production server",
          "background": true,
          "condition": {
            "file_exists": "ui/build/index.html",
            "not": {
              "json_path_exists": "ui/package.json:scripts.dev"
            }
          }
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Services running:\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  API: http://localhost:${API_PORT}\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  CLI: CLI_NAME_PLACEHOLDER --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Comprehensive phased testing using modern testing architecture",
      "steps": [
        {
          "name": "run-comprehensive-tests",
          "run": "test/run-tests.sh",
          "description": "Execute comprehensive phased testing (structure, dependencies, unit, integration, business, performance)"
        }
      ]
    },
    "stop": {
      "description": "Stop application services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'SCENARIO_ID_PLACEHOLDER-api' || true; sleep 1; pkill -9 -f 'SCENARIO_ID_PLACEHOLDER-api' 2>/dev/null || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'scenarios/SCENARIO_ID_PLACEHOLDER.*vite' || true; pkill -f 'scenarios/SCENARIO_ID_PLACEHOLDER.*serve' || true; sleep 1; pkill -9 -f 'scenarios/SCENARIO_ID_PLACEHOLDER.*vite' 2>/dev/null || true; pkill -9 -f 'scenarios/SCENARIO_ID_PLACEHOLDER.*serve' 2>/dev/null || true",
          "description": "Stop UI server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Application services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:{{ UI_PORT }}",
      "api": "http://localhost:{{ API_PORT }}",
      "health": "http://localhost:{{ API_PORT }}/health"
    },
    "initialization": {
      "phases": [
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/storage/postgres/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/storage/postgres/seed.sql"
            }
          ]
        },
        {
          "name": "workflow-deployment",
          "parallel": true,
          "tasks": [
            {
              "name": "deploy-windmill-apps",
              "type": "resource-inject",
              "target": "automation.windmill",
              "config": "initialization/automation/windmill/"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "load-app-config",
              "type": "config",
              "file": "initialization/configuration/app-config.json"
            },
            {
              "name": "set-feature-flags",
              "type": "config",
              "file": "initialization/configuration/feature-flags.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "5m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "{{ urls.health }}",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "{{ urls.health }}",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "workflows": {
          "endpoint": "http://localhost:${RESOURCE_PORTS[windmill]}/api/version",
          "interval": "60s",
          "timeout": "10s"
        },
        "database": {
          "type": "tcp",
          "port": 5432,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "100ms",
          "p95": "500ms",
          "p99": "1000ms"
        },
        "throughput": {
          "rps": 100,
          "concurrent": 10
        },
        "errorRate": {
          "threshold": "1%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "delete-workflows",
          "type": "resource-cleanup",
          "target": "automation.windmill"
        },
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS {{ DATABASE_NAME }}"
        },
        {
          "name": "clear-storage",
          "type": "resource-cleanup",
          "target": "storage.minio"
        }
      ]
    }
  },
  "api": {
    "base_url": "http://localhost:${API_PORT}/api",
    "endpoints": [
      {
        "path": "/health",
        "method": "GET",
        "description": "Health check endpoint"
      },
      {
        "path": "/api/status",
        "method": "GET",
        "description": "Application status and version information"
      }
    ]
  },
  "ui": {
    "enabled": true,
    "path": "/",
    "description": "React-based web interface",
    "features": [
      "responsive-design",
      "real-time-updates",
      "dashboard-interface"
    ]
  },
  "cli": {
    "command": "CLI_NAME_PLACEHOLDER",
    "install_script": "./cli/install.sh",
    "description": "Command-line interface for scenario operations"
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "VALUE_PROPOSITION_PLACEHOLDER",
      "targetMarket": "TARGET_MARKET_PLACEHOLDER",
      "painPoints": [
        "PAIN_POINT_1_PLACEHOLDER",
        "PAIN_POINT_2_PLACEHOLDER",
        "PAIN_POINT_3_PLACEHOLDER"
      ],
      "solution": "SOLUTION_DESCRIPTION_PLACEHOLDER",
      "competitiveAdvantage": "COMPETITIVE_ADVANTAGE_PLACEHOLDER",
      "revenuePotential": {
        "initial": "$INITIAL_REVENUE_PLACEHOLDER",
        "recurring": "$RECURRING_REVENUE_PLACEHOLDER",
        "expansion": "$EXPANSION_REVENUE_PLACEHOLDER",
        "totalEstimate": "$TOTAL_ESTIMATE_PLACEHOLDER"
      },
      "marketDemand": {
        "level": "DEMAND_LEVEL_PLACEHOLDER",
        "growth": "GROWTH_RATE_PLACEHOLDER",
        "evidence": "MARKET_EVIDENCE_PLACEHOLDER"
      },
      "roi": {
        "developmentCost": "$DEVELOPMENT_COST_PLACEHOLDER",
