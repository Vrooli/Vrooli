{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "2.0.0",
  "service": {
    "name": "basic-scenario-template",
    "displayName": "Basic Scenario Template",
    "description": "Minimal integration testing template for validating resource connectivity",
    "version": "1.0.0",
    "type": "integration-test",
    "tags": [
      "template",
      "testing",
      "integration"
    ]
  },
  "ports": {
    "api": {
      "env_var": "API_PORT",
      "range": "8090-8999",
      "description": "Main API port"
    }
  },
  "resources": {
    "postgres": {
      "type": "postgres",
      "enabled": true,
      "required": true,
      "purpose": "Primary database for test data storage",
      "initialization": [
        {
          "file": "initialization/storage/postgres/schema.sql",
          "type": "schema"
        },
        {
          "file": "initialization/storage/postgres/seed.sql",
          "type": "seed"
        }
      ]
    },
    "redis": {
      "type": "redis",
      "enabled": true,
      "required": false,
      "purpose": "Caching and session storage for testing"
    }
  },
  "lifecycle": {
    "version": "2.0.0",
    "health": {
      "description": "Basic scenario template health check configuration",
      "endpoints": {
        "api": "/health"
      },
      "checks": [
        {
          "name": "api_endpoint",
          "type": "http",
          "target": "http://localhost:${API_PORT}/health",
          "critical": true,
          "timeout": 5000,
          "interval": 30000
        }
      ],
      "timeout": 5000,
      "interval": 30000,
      "startup_grace_period": 10000
    },
    "setup": {
      "description": "Initialize Basic Scenario Template",
      "condition": {
        "checks": [
          {
            "type": "resources",
            "populated": true
          }
        ]
      },
      "steps": [
        {
          "name": "create-directories",
          "run": "mkdir -p data logs",
          "description": "Create required directory structure"
        },
        {
          "name": "add-data",
          "run": "../../scripts/resources/populate/populate.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "set-permissions",
          "run": "chmod +x test.sh || true",
          "description": "Set executable permissions"
        }
      ]
    },
    "develop": {
      "description": "Start basic template services",
      "steps": [
        {
          "name": "show-status",
          "run": "echo 'ðŸ§ª Basic Template ready for testing\\n  Resources: PostgreSQL, Redis\\n  Test: ./test.sh or make test'"
        }
      ]
    },
    "test": {
      "description": "Test basic template functionality",
      "steps": [
        {
          "name": "run-integration-tests",
          "run": "bash test.sh",
          "description": "Run integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop template services",
      "steps": [
        {
          "name": "cleanup",
          "run": "echo 'ðŸ›‘ Basic template stopped - no services to clean up'",
          "description": "Cleanup confirmation"
        }
      ]
    }
  }
}