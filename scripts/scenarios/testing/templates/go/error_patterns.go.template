// ComprehensiveTestSuite runs a full suite of tests for a REST resource
type ComprehensiveTestSuite struct {
	ResourceName   string
	BasePath       string
	Handler        http.HandlerFunc
	ExecuteRequest func(handler http.HandlerFunc, req HTTPTestRequest) (interface{}, error)
	SetupTestData  func(t *testing.T) interface{}
	CleanupFunc    func(testData interface{})
}

// RunAll executes comprehensive testing for a REST resource
func (suite *ComprehensiveTestSuite) RunAll(t *testing.T) {
	t.Run(fmt.Sprintf("%s_Comprehensive_Tests", suite.ResourceName), func(t *testing.T) {
		// Setup
		var testData interface{}
		if suite.SetupTestData != nil {
			testData = suite.SetupTestData(t)
		}

		// Cleanup
		if suite.CleanupFunc != nil {
			defer suite.CleanupFunc(testData)
		}

		// Create handler test suite
		handlerSuite := &HandlerTestSuite{
			HandlerName:    suite.ResourceName + "Handler",
			Handler:        suite.Handler,
			BaseURL:        suite.BasePath,
			ExecuteRequest: suite.ExecuteRequest,
		}

		// Run different pattern categories
		t.Run("RESTPatterns", func(t *testing.T) {
			patterns := RESTResourcePatterns(suite.BasePath, suite.ResourceName)
			handlerSuite.RunErrorTests(t, patterns)
		})

		t.Run("CreatePatterns", func(t *testing.T) {
			patterns := CreateEndpointPatterns(suite.BasePath)
			handlerSuite.RunErrorTests(t, patterns)
		})

		t.Run("UpdatePatterns", func(t *testing.T) {
			patterns := UpdateEndpointPatterns(suite.BasePath, suite.ResourceName)
			handlerSuite.RunErrorTests(t, patterns)
		})

		t.Run("DeletePatterns", func(t *testing.T) {
			patterns := DeleteEndpointPatterns(suite.BasePath, suite.ResourceName)
			handlerSuite.RunErrorTests(t, patterns)
		})

		// Add success tests placeholder
		t.Run("SuccessPatterns", func(t *testing.T) {
			t.Log("Success patterns should be implemented by individual scenarios")
		})
	})
}