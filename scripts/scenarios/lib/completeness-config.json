{
  "version": "2.0.0",
  "description": "Centralized configuration for completeness scoring and validation quality analysis",

  "scoring": {
    "weights": {
      "quality": 50,
      "coverage": 15,
      "quantity": 10,
      "ui": 25
    },
    "quality_breakdown": {
      "requirement_pass_rate": 20,
      "target_pass_rate": 15,
      "test_pass_rate": 15
    },
    "coverage_breakdown": {
      "test_coverage_ratio": 8,
      "depth_score": 7
    },
    "quantity_breakdown": {
      "requirements": 4,
      "targets": 3,
      "tests": 3
    },
    "ui_breakdown": {
      "template_check": 10,
      "component_complexity": 5,
      "api_integration": 6,
      "routing": 1.5,
      "code_volume": 2.5
    }
  },

  "thresholds": {
    "default_category": "utility",
    "categories": {
      "utility": {
        "description": "Simple tools (picker-wheel, math-tools)",
        "requirements": { "ok": 10, "good": 15, "excellent": 25 },
        "targets": { "ok": 8, "good": 12, "excellent": 20 },
        "tests": { "ok": 15, "good": 25, "excellent": 40 },
        "ui": {
          "file_count": { "ok": 15, "good": 25, "excellent": 40 },
          "total_loc": { "ok": 300, "good": 600, "excellent": 1200 },
          "api_endpoints": { "ok": 2, "good": 4, "excellent": 8 }
        }
      },
      "business-application": {
        "description": "SaaS apps (chore-tracking, invoice-generator)",
        "requirements": { "ok": 25, "good": 40, "excellent": 60 },
        "targets": { "ok": 15, "good": 25, "excellent": 35 },
        "tests": { "ok": 40, "good": 60, "excellent": 100 },
        "ui": {
          "file_count": { "ok": 30, "good": 50, "excellent": 80 },
          "total_loc": { "ok": 1500, "good": 3000, "excellent": 6000 },
          "api_endpoints": { "ok": 5, "good": 10, "excellent": 20 }
        }
      },
      "automation": {
        "description": "Orchestration (deployment-manager, tidiness-manager)",
        "requirements": { "ok": 15, "good": 25, "excellent": 40 },
        "targets": { "ok": 12, "good": 18, "excellent": 28 },
        "tests": { "ok": 25, "good": 40, "excellent": 70 },
        "ui": {
          "file_count": { "ok": 20, "good": 35, "excellent": 60 },
          "total_loc": { "ok": 800, "good": 1800, "excellent": 3500 },
          "api_endpoints": { "ok": 4, "good": 8, "excellent": 15 }
        }
      },
      "platform": {
        "description": "Infrastructure (token-economy, notification-hub)",
        "requirements": { "ok": 30, "good": 50, "excellent": 80 },
        "targets": { "ok": 20, "good": 30, "excellent": 45 },
        "tests": { "ok": 50, "good": 80, "excellent": 120 },
        "ui": {
          "file_count": { "ok": 40, "good": 70, "excellent": 120 },
          "total_loc": { "ok": 2000, "good": 4500, "excellent": 8000 },
          "api_endpoints": { "ok": 8, "good": 15, "excellent": 30 }
        }
      },
      "developer_tools": {
        "description": "Dev tooling (scenario-auditor, browser-automation-studio)",
        "requirements": { "ok": 20, "good": 30, "excellent": 50 },
        "targets": { "ok": 12, "good": 20, "excellent": 30 },
        "tests": { "ok": 30, "good": 50, "excellent": 80 },
        "ui": {
          "file_count": { "ok": 25, "good": 45, "excellent": 75 },
          "total_loc": { "ok": 1000, "good": 2500, "excellent": 5000 },
          "api_endpoints": { "ok": 4, "good": 8, "excellent": 15 }
        }
      }
    }
  },

  "validation": {
    "min_layers": {
      "p0_requirements": 2,
      "p1_requirements": 2,
      "p2_requirements": 1,
      "p3_requirements": 1
    },
    "acceptable_ratios": {
      "manual_validation": 0.10,
      "one_to_one_target_mapping": 0.15,
      "test_to_requirement_tolerance": 0.10
    },
    "complete_with_manual_threshold": 5,
    "monolithic_test_threshold": 4,
    "monolithic_test_high_severity": 6,
    "test_quality": {
      "minimum_loc": 20,
      "minimum_test_functions": 3,
      "minimum_assertion_density": 0.1,
      "minimum_quality_score": 4
    },
    "playbook_quality": {
      "minimum_file_size": 100
    }
  },

  "penalties": {
    "insufficient_test_coverage": {
      "description": "Suspicious 1:1 test-to-requirement ratio",
      "base_penalty": 5,
      "severity": "medium"
    },
    "invalid_test_location": {
      "description": "Requirements reference unsupported test/ directories",
      "multiplier": 25,
      "max_penalty": 25,
      "severity_threshold": 0.5
    },
    "monolithic_test_files": {
      "description": "Test files validate â‰¥4 requirements each",
      "per_violation": 2,
      "max_penalty": 15,
      "severity_threshold": 6
    },
    "ungrouped_operational_targets": {
      "description": "Excessive 1:1 target-to-requirement mappings",
      "multiplier": 10,
      "max_penalty": 10,
      "severity_threshold": 0.5
    },
    "insufficient_validation_layers": {
      "description": "Critical requirements lack multi-layer validation",
      "multiplier": 20,
      "max_penalty": 20,
      "severity": "high"
    },
    "superficial_test_implementation": {
      "description": "Test files appear superficial",
      "per_file": 1,
      "max_penalty": 10,
      "severity": "medium"
    },
    "missing_test_automation": {
      "description": "Excessive manual validation usage",
      "ratio_multiplier": 10,
      "per_complete_requirement": 1,
      "max_complete_count": 5,
      "max_penalty": 15,
      "severity_threshold": 10
    }
  },

  "classifications": {
    "production_ready": {
      "min_score": 96,
      "max_score": 100,
      "description": "Production ready, excellent validation coverage"
    },
    "nearly_ready": {
      "min_score": 81,
      "max_score": 95,
      "description": "Nearly ready, final polish and edge cases"
    },
    "mostly_complete": {
      "min_score": 61,
      "max_score": 80,
      "description": "Mostly complete, needs refinement and validation"
    },
    "functional_incomplete": {
      "min_score": 41,
      "max_score": 60,
      "description": "Functional but incomplete, needs more features/tests"
    },
    "foundation_laid": {
      "min_score": 21,
      "max_score": 40,
      "description": "Foundation laid, core features in progress"
    },
    "early_stage": {
      "min_score": 0,
      "max_score": 20,
      "description": "Just starting, needs significant development"
    }
  },

  "staleness": {
    "warning_threshold_hours": 48
  }
}
