{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "picker-wheel",
    "displayName": "Picker Wheel",
    "description": "Fun random selection tool with customizable spinning wheel for decision-making and games",
    "version": "1.0.0",
    "type": "entertainment-application",
    "category": "entertainment",
    "tags": [
      "random",
      "selection",
      "wheel",
      "decision",
      "game",
      "picker",
      "spinner",
      "javascript-ui",
      "retro",
      "casino"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8700-8799",
      "fallback": "auto",
      "description": "Picker Wheel API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3700-3799",
      "fallback": "auto",
      "description": "Picker Wheel UI port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "shared_workflows": [
          "ollama"
        ],
        "initialization": [
          {
            "file": "initialization/n8n/wheel-spinner.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/wheel-manager.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/history-tracker.json",
            "type": "workflow"
          }
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store wheel configurations, spin history, and user preferences",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache active wheel sessions and real-time spin animations"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Picker Wheel",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install-cli.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o picker-wheel-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸŽ° Picker Wheel initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start Picker Wheel services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} POSTGRES_URL=postgres://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/picker_wheel REDIS_URL=redis://localhost:${RESOURCE_PORTS[redis]} ./picker-wheel-api &",
          "description": "Start API server",
          "background": true,
          "condition": {
            "file_exists": "api/picker-wheel-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT npm start &",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'ðŸŽ¯ Picker Wheel running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test Picker Wheel services",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-wheels",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/wheels",
          "description": "Test wheels endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop Picker Wheel services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'picker-wheel-api' || true; pkill -f 'npm.*picker-wheel' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}