{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "picker-wheel",
    "displayName": "Picker Wheel",
    "description": "Fun random selection wheel with customizable options and animated spinning",
    "version": "1.0.0",
    "type": "entertainment-application",
    "category": "saas-applications",
    "tags": [
      "decision-making",
      "random-selection",
      "entertainment",
      "arcade-style",
      "interactive-ui"
    ]
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/wheel-spinner.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/wheel-manager.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/history-tracker.json",
            "type": "workflow"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": false,
        "models": ["llama3.2:3b"],
        "purpose": "intelligent option suggestions"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "wheel configurations and history",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "session caching and real-time updates"
      }
    }
  },
  "ports": {
    "ui": {
      "env_var": "UI_PORT",
      "range": "3500-3599",
      "fallback": "auto",
      "description": "Picker Wheel UI port"
    },
    "api": {
      "env_var": "API_PORT",
      "range": "8500-8599",
      "fallback": "auto",
      "description": "Picker Wheel API port"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Picker Wheel",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x picker-wheel && ./picker-wheel --version",
          "description": "Install CLI command"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod tidy && go mod download && go build -o picker-wheel-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "install-ui-deps",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        }
      ]
    },
    "develop": {
      "description": "Start Picker Wheel app",
      "steps": [
        {
          "name": "start-api",
          "run": "cd api && PORT=$API_PORT ./picker-wheel-api &",
          "description": "Start API server",
          "background": true
        },
        {
          "name": "start-ui",
          "run": "cd ui && PORT=$UI_PORT API_PORT=$API_PORT node server.js &",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸŽ¯ Picker Wheel running:\\n  UI: http://localhost:'$UI_PORT'\\n  API: http://localhost:'$API_PORT",
          "description": "Display service URLs"
        }
      ]
    },
    "test": {
      "description": "Test Picker Wheel",
      "steps": [
        {
          "name": "test-api-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation"
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$API_PORT/health",
          "description": "Test API health endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop Picker Wheel",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'picker-wheel-api' || true; pkill -f 'node server.js' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}