{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "app-issue-tracker",
    "displayName": "App Issue Tracker",
    "description": "Centralized issue tracking hub for all Vrooli-generated applications with AI-powered investigation",
    "version": "1.0.0",
    "type": "vrooli-enhancement",
    "category": "vrooli-helpers",
    "tags": [
      "issue-tracking",
      "ai-investigation",
      "debugging",
      "monitoring",
      "claude-integration",
      "windmill-ui",
      "semantic-search"
    ]
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/claude-investigation.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/issue-ingestion.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/apps/dashboard.json",
            "type": "app"
          },
          {
            "file": "initialization/automation/windmill/apps/metrics.json",
            "type": "app"
          },
          {
            "file": "initialization/automation/windmill/apps/agents.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "nomic-embed-text",
          "llama3.2"
        ]
      }
    },
    "agents": {
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": false,
        "purpose": "AI-powered issue investigation and code analysis"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "issue tracking data and metadata"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "semantic search for similar issues"
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "caching and real-time updates"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": false,
        "purpose": "issue artifacts and attachments storage"
      }
    }
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Issue tracker API server port"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize App Issue Tracker",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "ln -sf \"$(pwd)/cli/vrooli-tracker.sh\" /usr/local/bin/vrooli-tracker && chmod +x /usr/local/bin/vrooli-tracker",
          "description": "Install CLI command globally"
        },
        {
          "name": "generate-api-token",
          "run": "openssl rand -hex 32 > /tmp/issue-tracker-api-token && echo 'API Token generated: '$(cat /tmp/issue-tracker-api-token)",
          "description": "Generate secure API access token"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ App Issue Tracker initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  CLI: vrooli-tracker --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start issue tracker API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd deployment && ./startup.sh",
          "description": "Start issue tracker services"
        }
      ]
    },
    "test": {
      "description": "Test issue tracker functionality",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash test.sh",
          "description": "Run integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop issue tracker services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'issue-tracker' || true",
          "description": "Stop all issue tracker processes"
        }
      ]
    }
  }
}
