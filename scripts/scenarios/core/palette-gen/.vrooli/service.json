{
  "$schema": "../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "palette-gen",
    "displayName": "Palette Gen - AI Color Palette Generator",
    "description": "AI-powered color palette generator with harmony analysis, accessibility checking, and multiple export formats",
    "version": "1.0.0",
    "type": "business-application",
    "category": "design-tools",
    "tags": [
      "design",
      "colors",
      "palette",
      "accessibility",
      "WCAG",
      "creative"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "support@vrooli.com",
        "url": "https://vrooli.com"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/palette-gen"
    },
    "license": "MIT",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Main API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3000-3999",
      "fallback": "auto",
      "description": "UI server port"
    }
  },
  "dependencies": {
    "resources": {
      "required": [
        "n8n",
        "ollama",
        "redis"
      ],
      "optional": []
    },
    "scenarios": []
  },
  "environment": {
    "base": {
      "NODE_ENV": "production",
      "REDIS_URL": "${service.redis.url}",
      "N8N_URL": "${service.n8n.url}",
      "OLLAMA_URL": "${service.ollama.url}"
    },
    "api": {
      "SERVICE_NAME": "palette-gen-api",
      "API_VERSION": "v1"
    },
    "ui": {
      "UI_SERVICE_NAME": "palette-gen-ui",
      "API_BASE_URL": "http://localhost:${SERVICE_PORT}"
    }
  },
  "initialization": {
    "n8n": {
      "workflows": [
        {
          "file": "initialization/n8n/palette-generator.json",
          "name": "Palette Generator",
          "active": true
        },
        {
          "file": "initialization/n8n/color-harmony-analyzer.json",
          "name": "Color Harmony Analyzer",
          "active": true
        },
        {
          "file": "initialization/n8n/accessibility-checker.json",
          "name": "Accessibility Checker",
          "active": true
        }
      ]
    }
  },
  "health": {
    "api": {
      "endpoint": "/health",
      "method": "GET",
      "timeout": 5000,
      "interval": 30000,
      "retries": 3
    },
    "ui": {
      "endpoint": "/",
      "method": "GET",
      "timeout": 5000,
      "interval": 30000,
      "retries": 3
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "outputs": ["stdout", "file"],
    "file": {
      "path": "./logs",
      "maxSize": "10m",
      "maxFiles": 5,
      "compress": true
    }
  },
  "features": {
    "ui": true,
    "api": true,
    "cli": true,
    "realtime": false,
    "auth": false
  },
  "deployment": {
    "scalable": true,
    "stateless": false,
    "containerized": true,
    "platforms": ["docker", "kubernetes", "standalone"]
  }
}
