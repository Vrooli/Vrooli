{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "study-buddy",
    "displayName": "Study Buddy",
    "description": "AI-powered study assistant for personalized learning",
    "version": "1.0.0",
    "type": "education",
    "category": "education",
    "tags": ["learning", "study", "flashcards", "quiz", "spaced-repetition"]
  },
  "ports": {
    "api": {
      "env_var": "STUDY_BUDDY_API_PORT",
      "range": "3030-3039",
      "fallback": "auto",
      "description": "Study Buddy API port"
    },
    "ui": {
      "env_var": "STUDY_BUDDY_UI_PORT",
      "range": "3020-3029",
      "fallback": "auto",
      "description": "Study Buddy UI port"
    }
  },
  "resources": {
    "n8n": {
      "required": true,
      "workflows": [
        {
          "path": "initialization/n8n/study-material-processor.json",
          "active": true
        },
        {
          "path": "initialization/n8n/flashcard-generator.json",
          "active": true
        },
        {
          "path": "initialization/n8n/quiz-generator.json",
          "active": true
        },
        {
          "path": "initialization/n8n/study-plan-generator.json",
          "active": true
        },
        {
          "path": "initialization/n8n/progress-analyzer.json",
          "active": true
        },
        {
          "path": "initialization/n8n/spaced-repetition-engine.json",
          "active": true
        },
        {
          "path": "initialization/n8n/adaptive-learning-engine.json",
          "active": true
        },
        {
          "path": "initialization/n8n/content-generator.json",
          "active": true
        },
        {
          "path": "initialization/n8n/pomodoro-timer.json",
          "active": true
        },
        {
          "path": "initialization/n8n/study-session-tracker.json",
          "active": true
        }
      ]
    },
    "postgres": {
      "required": true,
      "databases": [
        {
          "name": "study_buddy",
          "schema": "initialization/postgres/schema.sql"
        }
      ]
    },
    "ollama": {
      "required": true,
      "models": ["llama3.2", "nomic-embed-text"]
    },
    "qdrant": {
      "required": true,
      "collections": []
    },
    "redis": {
      "required": true,
      "purpose": "session-cache"
    }
  },
  "ui": {
    "style": "clean-cute-lofi",
    "framework": "vanilla-js",
    "theme": {
      "primary": "#8B5CF6",
      "secondary": "#EC4899",
      "background": "#FFF5F5",
      "text": "#1F2937"
    }
  },
  "api": {
    "framework": "go",
    "endpoints": [
      "/api/study/materials",
      "/api/study/flashcards",
      "/api/study/quiz",
      "/api/study/progress",
      "/api/study/sessions",
      "/api/study/plans"
    ]
  },
  "cli": {
    "command": "study-buddy",
    "subcommands": [
      "add-material",
      "generate-flashcards",
      "start-quiz",
      "study-session",
      "view-progress",
      "create-plan"
    ]
  }
}