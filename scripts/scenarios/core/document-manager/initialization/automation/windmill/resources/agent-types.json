{
  "agent_types": {
    "drift_detector": {
      "name": "Documentation Drift Detector",
      "description": "Detects when documentation diverges from code implementation using semantic analysis",
      "icon": "alert-triangle",
      "color": "#8b5cf6",
      "category": "analysis",
      "capabilities": [
        "Code-documentation comparison",
        "Semantic analysis of changes",
        "API endpoint validation",
        "Function signature matching"
      ],
      "default_config": {
        "scan_patterns": ["*.md", "*.mdx", "*.rst", "docs/**/*"],
        "code_patterns": ["*.ts", "*.tsx", "*.js", "*.jsx", "*.py", "*.java"],
        "drift_threshold": 0.3,
        "semantic_analysis": true,
        "ignore_patterns": ["node_modules/**", "dist/**", "build/**"],
        "api_endpoint_check": true,
        "function_signature_check": true
      },
      "default_schedule": "0 */6 * * *",
      "estimated_execution_time": "5-15 minutes",
      "resource_requirements": {
        "ollama": true,
        "qdrant": true,
        "postgres": true
      }
    },
    "link_validator": {
      "name": "Link Validator",
      "description": "Comprehensive link validation with retry logic and detailed reporting",
      "icon": "external-link",
      "color": "#ef4444",
      "category": "validation",
      "capabilities": [
        "Internal link validation",
        "External link checking",
        "Anchor link verification",
        "Image reference validation",
        "Redirect handling"
      ],
      "default_config": {
        "check_external": true,
        "check_internal": true,
        "check_anchors": true,
        "check_images": true,
        "timeout_ms": 5000,
        "retry_count": 2,
        "retry_delay_ms": 1000,
        "ignore_patterns": ["localhost", "127.0.0.1", "example.com", "test.com"],
        "follow_redirects": true,
        "max_redirects": 5,
        "user_agent": "Documentation-Manager-Bot/1.0"
      },
      "default_schedule": "0 2 * * *",
      "estimated_execution_time": "10-30 minutes",
      "resource_requirements": {
        "browserless": false,
        "postgres": true
      }
    },
    "organization_analyzer": {
      "name": "Documentation Organization Analyzer",
      "description": "Analyzes and suggests improvements to documentation structure and organization",
      "icon": "folder-tree",
      "color": "#f97316",
      "category": "structure",
      "capabilities": [
        "Content hierarchy analysis",
        "Navigation structure review",
        "Table of contents generation",
        "Cross-reference optimization",
        "Duplicate content detection"
      ],
      "default_config": {
        "max_depth": 5,
        "ideal_sections": ["Overview", "Installation", "Quick Start", "Usage", "API Reference", "Examples", "FAQ", "Troubleshooting"],
        "check_navigation": true,
        "suggest_toc": true,
        "detect_duplicates": true,
        "cross_reference_check": true,
        "heading_consistency_check": true,
        "min_section_length": 50
      },
      "default_schedule": "0 0 * * 1",
      "estimated_execution_time": "15-45 minutes",
      "resource_requirements": {
        "ollama": true,
        "qdrant": true,
        "postgres": true
      }
    },
    "coverage_checker": {
      "name": "Documentation Coverage Checker",
      "description": "Identifies undocumented code, missing examples, and coverage gaps",
      "icon": "bar-chart-3",
      "color": "#3b82f6",
      "category": "coverage",
      "capabilities": [
        "Code documentation coverage",
        "API endpoint documentation",
        "Example coverage analysis",
        "Test case documentation",
        "Configuration documentation"
      ],
      "default_config": {
        "min_coverage": 80,
        "check_functions": true,
        "check_classes": true,
        "check_modules": true,
        "check_exports": true,
        "ignore_private": true,
        "ignore_test_files": true,
        "generate_stubs": false,
        "check_examples": true,
        "check_config_docs": true
      },
      "default_schedule": "0 0 * * *",
      "estimated_execution_time": "20-60 minutes",
      "resource_requirements": {
        "ollama": true,
        "unstructured_io": true,
        "postgres": true
      }
    },
    "meta_optimizer": {
      "name": "Meta Agent Optimizer",
      "description": "Monitors other agents and suggests system-wide optimizations",
      "icon": "cpu",
      "color": "#10b981",
      "category": "optimization",
      "capabilities": [
        "Agent performance analysis",
        "System optimization suggestions",
        "Resource usage optimization",
        "Schedule optimization",
        "Configuration tuning"
      ],
      "default_config": {
        "analyze_performance": true,
        "suggest_new_agents": true,
        "remove_inactive": true,
        "performance_window_days": 30,
        "min_suggestion_threshold": 0.7,
        "schedule_optimization": true,
        "resource_usage_analysis": true,
        "cost_benefit_analysis": true
      },
      "default_schedule": "0 0 * * 0",
      "estimated_execution_time": "30-90 minutes",
      "resource_requirements": {
        "ollama": true,
        "postgres": true,
        "redis": true
      }
    },
    "style_consistency": {
      "name": "Style Consistency Checker",
      "description": "Ensures consistent writing style, tone, and formatting across documentation",
      "icon": "palette",
      "color": "#a855f7",
      "category": "quality",
      "capabilities": [
        "Writing style analysis",
        "Tone consistency checking",
        "Formatting validation",
        "Terminology consistency",
        "Brand voice compliance"
      ],
      "default_config": {
        "check_tone": true,
        "check_terminology": true,
        "check_formatting": true,
        "style_guide_url": null,
        "brand_terms": [],
        "preferred_spellings": {},
        "max_sentence_length": 25,
        "readability_target": "grade_8"
      },
      "default_schedule": "0 4 * * 2",
      "estimated_execution_time": "10-30 minutes",
      "resource_requirements": {
        "ollama": true,
        "postgres": true
      }
    },
    "accessibility_checker": {
      "name": "Accessibility Validator",
      "description": "Validates documentation accessibility and suggests improvements",
      "icon": "accessibility",
      "color": "#06b6d4",
      "category": "accessibility",
      "capabilities": [
        "Alt text validation",
        "Heading structure analysis",
        "Color contrast checking",
        "Screen reader compatibility",
        "Keyboard navigation testing"
      ],
      "default_config": {
        "check_alt_text": true,
        "check_heading_structure": true,
        "check_color_contrast": true,
        "check_focus_indicators": true,
        "wcag_level": "AA",
        "contrast_ratio_threshold": 4.5
      },
      "default_schedule": "0 6 * * 3",
      "estimated_execution_time": "15-45 minutes",
      "resource_requirements": {
        "browserless": true,
        "postgres": true
      }
    },
    "translation_checker": {
      "name": "Translation Validator",
      "description": "Validates and suggests improvements for multilingual documentation",
      "icon": "languages",
      "color": "#84cc16",
      "category": "localization",
      "capabilities": [
        "Translation completeness",
        "Cultural adaptation review",
        "Terminology consistency across languages",
        "Regional formatting validation"
      ],
      "default_config": {
        "source_language": "en",
        "target_languages": [],
        "check_completeness": true,
        "check_terminology": true,
        "check_cultural_adaptation": false,
        "translation_quality_threshold": 0.8
      },
      "default_schedule": "0 8 * * 4",
      "estimated_execution_time": "20-60 minutes",
      "resource_requirements": {
        "ollama": true,
        "postgres": true
      }
    },
    "custom": {
      "name": "Custom Agent",
      "description": "User-defined agent with custom configuration and behavior",
      "icon": "settings",
      "color": "#6b7280",
      "category": "custom",
      "capabilities": [
        "Configurable analysis patterns",
        "Custom validation rules",
        "Flexible scheduling",
        "Extensible functionality"
      ],
      "default_config": {
        "analysis_type": "generic",
        "custom_patterns": [],
        "validation_rules": [],
        "output_format": "json"
      },
      "default_schedule": null,
      "estimated_execution_time": "Variable",
      "resource_requirements": {
        "postgres": true
      }
    }
  },
