{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "audio-intelligence-platform",
    "displayName": "Audio Intelligence Platform",
    "description": "AI-powered audio intelligence platform for transcription, analysis, semantic search, and knowledge extraction",
    "version": "1.0.0",
    "type": "business-application",
    "category": "business",
    "tags": [
      "audio-processing",
      "content-automation",
      "transcription",
      "windmill-ui",
      "media-production",
      "audio-intelligence",
      "content-generation"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Audio intelligence API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/transcription-pipeline.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/ai-analysis-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/semantic-search.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/transcription-manager-app.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "whisper": {
        "type": "whisper",
        "enabled": true,
        "required": true
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.1:8b",
          "nomic-embed-text"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "transcription metadata and analytics",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "audio files and transcription storage"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "semantic search for transcriptions"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Audio Intelligence Platform",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install-cli.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o audio-intelligence-platform-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Audio Intelligence Platform initialized\\n  Windmill Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Whisper API: http://localhost:${RESOURCE_PORTS[whisper]}\\n  Ollama API: http://localhost:${RESOURCE_PORTS[ollama]}\\n  Qdrant DB: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  MinIO Storage: http://localhost:${RESOURCE_PORTS[minio]}\\n  API: http://localhost:${SERVICE_PORT}\\n  CLI: audio-intelligence-platform --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start audio intelligence platform with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} WINDMILL_BASE_URL=http://localhost:${RESOURCE_PORTS[windmill]} WHISPER_BASE_URL=http://localhost:${RESOURCE_PORTS[whisper]} OLLAMA_BASE_URL=http://localhost:${RESOURCE_PORTS[ollama]} POSTGRES_URL=postgres://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/audio_intelligence_platform MINIO_ENDPOINT=localhost:${RESOURCE_PORTS[minio]} QDRANT_URL=http://localhost:${RESOURCE_PORTS[qdrant]} ./audio-intelligence-platform-api &",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/audio-intelligence-platform-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Audio Intelligence Platform running:\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Whisper: http://localhost:${RESOURCE_PORTS[whisper]}\\n  Ollama: http://localhost:${RESOURCE_PORTS[ollama]}\\n  Qdrant: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  MinIO: http://localhost:${RESOURCE_PORTS[minio]}\\n  API: http://localhost:$SERVICE_PORT\\n  CLI: audio-intelligence-platform --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test audio intelligence platform API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-transcription-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/transcriptions",
          "description": "Test API transcriptions endpoint"
        },
        {
          "name": "test-analysis-endpoint",
          "run": "bash test/test-analysis-endpoint.sh",
          "description": "Test API analysis endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats audio-intelligence-platform.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/audio-intelligence-platform.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop audio intelligence platform services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'audio-intelligence-platform-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Audio Intelligence Platform services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
