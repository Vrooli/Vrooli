{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "audio-intelligence-platform",
    "displayName": "Audio Intelligence Platform",
    "description": "AI-powered audio intelligence platform for transcription, analysis, semantic search, and knowledge extraction",
    "version": "1.0.0",
    "type": "business-application",
    "category": "business",
    "tags": [
      "audio-processing",
      "content-automation",
      "transcription",
      "windmill-ui",
      "media-production",
      "audio-intelligence",
      "content-generation"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Audio intelligence API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "file": "initialization/automation/n8n/transcription-pipeline.json"
            },
            {
              "file": "initialization/automation/n8n/ai-analysis-workflow.json"
            },
            {
              "file": "initialization/automation/n8n/semantic-search.json"
            }
          ]
        }
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "file": "initialization/automation/windmill/transcription-manager-app.json"
            }
          ]
        }
      }
    },
    "ai": {
      "whisper": {
        "type": "whisper",
        "enabled": true,
        "required": true
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.1:8b",
          "nomic-embed-text"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "transcription metadata and analytics"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "audio files and transcription storage"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "semantic search for transcriptions"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Audio Intelligence Platform",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/lib/resources/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Audio Intelligence Platform initialized\\n  Windmill Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Whisper API: http://localhost:${RESOURCE_PORTS[whisper]}\\n  Ollama API: http://localhost:${RESOURCE_PORTS[ollama]}\\n  Qdrant DB: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  MinIO Storage: http://localhost:${RESOURCE_PORTS[minio]}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start audio intelligence platform services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh",
          "description": "Start platform services"
        }
      ]
    },
    "test": {
      "description": "Run audio intelligence platform tests",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash test.sh",
          "description": "Execute integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop audio intelligence platform services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'audio-intelligence' || true",
          "description": "Stop all platform processes"
        }
      ]
    }
  }
}