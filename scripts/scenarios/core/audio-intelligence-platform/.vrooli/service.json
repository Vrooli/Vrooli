{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "audio-intelligence-platform",
    "displayName": "Audio Intelligence Platform",
    "description": "AI-powered audio intelligence platform for transcription, analysis, semantic search, and knowledge extraction",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "audio-processing",
      "content-automation",
      "transcription",
      "windmill-ui",
      "media-production",
      "audio-intelligence",
      "content-generation"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "file": "initialization/automation/n8n/transcription-pipeline.json"
            },
            {
              "file": "initialization/automation/n8n/ai-analysis-workflow.json"
            },
            {
              "file": "initialization/automation/n8n/semantic-search.json"
            }
          ]
        }
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "file": "initialization/automation/windmill/transcription-manager-app.json"
            }
          ]
        }
      }
    },
    "ai": {
      "whisper": {
        "type": "whisper",
        "enabled": true,
        "required": true
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.1:8b",
          "nomic-embed-text"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "transcription metadata and analytics"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "audio files and transcription storage"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "semantic search for transcriptions"
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "api": "http://localhost:3000/api/audio-intelligence-platform",
      "health": "http://localhost:3000/api/audio-intelligence-platform/health",
      "windmill": "${service.windmill.url}",
      "n8n": "${service.n8n.url}"
    },
    "initialization": {
      "phases": [
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/storage/postgres/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/storage/postgres/seed.sql"
            }
          ]
        },
        {
          "name": "ai-setup",
          "parallel": true,
          "tasks": [
            {
              "name": "verify-whisper",
              "type": "resource-inject",
              "target": "ai.whisper",
              "timeout": "2m"
            },
            {
              "name": "load-ai-models",
              "type": "resource-inject",
              "target": "ai.ollama",
              "timeout": "10m"
            }
          ]
        },
        {
          "name": "optional-services-setup",
          "parallel": true,
          "tasks": [
            {
              "name": "setup-vector-collections",
              "type": "resource-inject",
              "target": "storage.qdrant",
              "timeout": "2m"
            },
            {
              "name": "setup-file-storage",
              "type": "resource-inject",
              "target": "storage.minio",
              "timeout": "2m"
            },
            {
              "name": "deploy-n8n-workflows",
              "type": "resource-inject",
              "target": "automation.n8n",
              "timeout": "3m"
            },
            {
              "name": "deploy-windmill-apps",
              "type": "resource-inject",
              "target": "automation.windmill",
              "timeout": "3m"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "set-transcription-settings",
              "type": "config",
              "file": "initialization/configuration/transcription-config.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "2m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "${service.vrooli.url}/api/audio-intelligence-platform/health",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "${service.vrooli.url}/api/audio-intelligence-platform/health",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "whisper": {
          "endpoint": "${service.whisper.url}/health",
          "interval": "60s",
          "timeout": "10s"
        },
        "ollama": {
          "endpoint": "${service.ollama.url}/api/tags",
          "interval": "60s",
          "timeout": "15s"
        },
        "windmill": {
          "endpoint": "${service.windmill.url}/api/version",
          "interval": "60s",
          "timeout": "10s"
        },
        "n8n": {
          "endpoint": "${service.n8n.url}/healthz",
          "interval": "60s",
          "timeout": "10s"
        },
        "minio": {
          "endpoint": "${service.minio.url}/minio/health/live",
          "interval": "60s",
          "timeout": "10s"
        },
        "qdrant": {
          "endpoint": "${service.qdrant.url}/health",
          "interval": "60s",
          "timeout": "10s"
        },
        "database": {
          "type": "tcp",
          "port": 5433,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "1000ms",
          "p95": "5000ms",
          "p99": "15000ms"
        },
        "throughput": {
          "rps": 3,
          "concurrent": 5
        },
        "errorRate": {
          "threshold": "5%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "delete-windmill-apps",
          "type": "resource-cleanup",
          "target": "automation.windmill"
        },
        {
          "name": "delete-n8n-workflows",
          "type": "resource-cleanup",
          "target": "automation.n8n"
        },
        {
          "name": "clear-file-storage",
          "type": "resource-cleanup",
          "target": "storage.minio"
        },
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS audio_intelligence_platform"
        },
        {
          "name": "clear-vector-collections",
          "type": "resource-cleanup",
          "target": "storage.qdrant"
        }
      ]
    },
    "testing": {
      "enabled": true,
      "timeout": "45m",
      "script": "./test.sh",
      "ui": {
        "required": false,
        "type": "windmill",
        "url": "${service.windmill.url}"
      },
      "performance": {
        "loadTest": {
          "users": 3,
          "duration": "5m",
          "rampUp": "1m"
        }
      }
    },
    "resources": {
      "requests": {
        "cpu": "800m",
        "memory": "2Gi"
      },
      "limits": {
        "cpu": "3000m",
        "memory": "6Gi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Complete audio intelligence platform for transcription, AI analysis, semantic search, and knowledge extraction from any audio content",
      "targetMarket": "Enterprises, content creators, media companies, educational institutions, research organizations, and audio production studios",
      "painPoints": [
        "Manual transcription and analysis consuming hours per audio file",
        "Inconsistent content quality and formatting across episodes",
        "Difficulty in making audio content searchable and extracting actionable insights"
      ],
      "solution": "AI-powered platform providing automated transcription, intelligent analysis, semantic search, and comprehensive knowledge extraction from audio",
      "competitiveAdvantage": "Integration of Whisper transcription with AI-powered content analysis and professional workflow automation",
      "revenuePotential": {
        "initial": "$3,000",
        "recurring": "$12,000",
        "expansion": "$25,000",
        "totalEstimate": "$40,000"
      },
      "marketDemand": {
        "level": "very-high",
        "growth": "40% annually",
        "evidence": "Explosive growth in audio content across podcasts, meetings, lectures, and increasing demand for audio intelligence tools"
      },
      "roi": {
        "developmentCost": "$5,000",
        "timeToMarket": "2 weeks",
        "breakEven": "3 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "5m",
        "responseTime": {
          "p50": "1000ms",
          "p95": "5000ms",
          "p99": "15000ms"
        },
        "throughput": {
          "minimum": 2,
          "target": 3,
          "peak": 10
        },
        "availability": "99.5%",
        "errorRate": "<5%"
      },
      "resources": {
        "cpu": {
          "minimum": "1.5",
          "target": "3.0",
          "maximum": "6.0"
        },
        "memory": {
          "minimum": "3Gi",
          "target": "6Gi",
          "maximum": "12Gi"
        },
        "storage": {
          "database": "50Gi",
          "audio": "500Gi",
          "transcriptions": "100Gi"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "Audio Intelligence Platform",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Your Company",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#f59e0b",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "audio_intelligence_platform",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "default": 3000,
          "description": "Application port"
        },
        "WHISPER_PORT": {
          "type": "number",
          "default": 8090,
          "description": "Whisper transcription service port"
        },
        "WINDMILL_PORT": {
          "type": "number",
          "default": 8000,
          "description": "Windmill UI port"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": false
        },
        "notifications": {
          "enabled": true,
          "channels": [
            "email",
            "webhook"
          ]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "transcription": {
          "enabled": true,
          "provider": "whisper"
        },
        "contentAnalysis": {
          "enabled": true,
          "provider": "ollama"
        },
        "vectorSearch": {
          "enabled": true,
          "provider": "qdrant"
        },
        "workflowAutomation": {
          "enabled": true,
          "provider": "n8n"
        }
      },
      "integrations": [
        {
          "name": "Audio Hosting Platforms",
          "type": "api",
          "required": false
        },
        {
          "name": "Audio Processing Tools",
          "type": "webhook",
          "required": false
        },
        {
          "name": "Content Management Systems",
          "type": "api",
          "required": false
        }
      ]
    },
    "category": "ai-content-creation",
    "complexity": "intermediate",
    "marketDemand": "very-high"
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Audio Intelligence Platform",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/lib/resources/runtime-engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Audio Intelligence Platform initialized\\n  Windmill Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Whisper API: http://localhost:${RESOURCE_PORTS[whisper]}\\n  Ollama API: http://localhost:${RESOURCE_PORTS[ollama]}\\n  Qdrant DB: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  MinIO Storage: http://localhost:${RESOURCE_PORTS[minio]}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start audio intelligence platform services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh",
          "description": "Start platform services"
        }
      ]
    },
    "test": {
      "description": "Run audio intelligence platform tests",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash test.sh",
          "description": "Execute integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop audio intelligence platform services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'audio-intelligence' || true",
          "description": "Stop all platform processes"
        }
      ]
    }
  }
}
