{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "research-assistant",
    "displayName": "AI Research Assistant",
    "description": "Enterprise-grade AI research platform with DeepSearch-quality reports, chatbot interface, and automated scheduling",
    "version": "1.0.0",
    "type": "business-application",
    "category": "ai-research",
    "tags": [
      "research-automation",
      "competitive-intelligence",
      "knowledge-management",
      "privacy-focused",
      "windmill-ui",
      "market-analysis",
      "content-synthesis",
      "searxng-integration",
      "rag-system"
    ]
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "file": "initialization/automation/n8n/chat-rag-workflow.json"
            },
            {
              "file": "initialization/automation/n8n/main-workflow.json"
            },
            {
              "file": "initialization/automation/n8n/research-orchestrator.json"
            },
            {
              "file": "initialization/automation/n8n/scheduled-reports.json"
            }
          ]
        }
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "file": "initialization/automation/windmill/dashboard-app.json"
            },
            {
              "file": "initialization/automation/windmill/windmill-app.json"
            }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "qwen2.5:32b",
          "nomic-embed-text",
          "llama3.2:3b"
        ]
      },
      "unstructured-io": {
        "type": "unstructured-io",
        "enabled": true,
        "required": false,
        "purpose": "document processing and text extraction"
      }
    },
    "agents": {
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": false,
        "purpose": "web scraping for research content"
      }
    },
    "search": {
      "searxng": {
        "type": "searxng",
        "enabled": true,
        "required": true,
        "purpose": "privacy-focused web search"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "research data and report storage"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "vector embeddings for RAG system"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": false,
        "purpose": "document and asset storage"
      }
    }
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Research assistant API port"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize research assistant environment",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/lib/resources/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Research Assistant initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  SearXNG: http://localhost:${RESOURCE_PORTS[searxng]}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start research assistant services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh &",
          "description": "Start all research assistant services in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3 && curl -sf http://localhost:${RESOURCE_PORTS[windmill]}/api/version > /dev/null",
          "description": "Wait for services to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 2
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  SearXNG: http://localhost:${RESOURCE_PORTS[searxng]}'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run research assistant tests",
      "steps": [
        {
          "name": "test-services-health",
          "run": "curl -sf http://localhost:${RESOURCE_PORTS[windmill]}/api/version && curl -sf http://localhost:${RESOURCE_PORTS[n8n]}/healthz",
          "description": "Test service health endpoints"
        },
        {
          "name": "run-integration-tests",
          "run": "./test.sh",
          "description": "Execute integration test suite",
          "condition": {
            "file_exists": "test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop research assistant services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'startup.sh' || true",
          "description": "Stop research assistant processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Research Assistant services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}