{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "research-assistant",
    "displayName": "AI Research Assistant",
    "description": "Enterprise-grade AI research platform with DeepSearch-quality reports, chatbot interface, and automated scheduling",
    "version": "1.0.0",
    "type": "business-application",
    "category": "ai-research",
    "tags": [
      "research-automation",
      "competitive-intelligence",
      "knowledge-management",
      "privacy-focused",
      "windmill-ui",
      "market-analysis",
      "content-synthesis",
      "searxng-integration",
      "rag-system"
    ]
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/chat-rag-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/main-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/research-orchestrator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/scheduled-reports.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/dashboard-app.json",
            "type": "app"
          },
          {
            "file": "initialization/automation/windmill/windmill-app.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "qwen2.5:32b",
          "nomic-embed-text",
          "llama3.2:3b"
        ]
      },
      "unstructured-io": {
        "type": "unstructured-io",
        "enabled": true,
        "required": false,
        "purpose": "document processing and text extraction"
      }
    },
    "agents": {
      "browserless": {
        "type": "browserless",
        "enabled": true,
        "required": false,
        "purpose": "web scraping for research content"
      }
    },
    "search": {
      "searxng": {
        "type": "searxng",
        "enabled": true,
        "required": true,
        "purpose": "privacy-focused web search"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "research data and report storage"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "vector embeddings for RAG system"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": false,
        "purpose": "document and asset storage"
      }
    }
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Research assistant API port"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Research Assistant",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o research-assistant-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Research Assistant initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  SearXNG: http://localhost:${RESOURCE_PORTS[searxng]}\\n  CLI: research-assistant --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start research assistant with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./research-assistant-api &",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/research-assistant-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$SERVICE_PORT\\n  SearXNG: http://localhost:${RESOURCE_PORTS[searxng]}\\n  CLI: research-assistant --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test research assistant Go API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-reports-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/reports",
          "description": "Test API reports endpoint"
        },
        {
          "name": "test-dashboard-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/dashboard/stats",
          "description": "Test API dashboard endpoint"
        },
        {
          "name": "run-integration-tests",
          "run": "./test.sh",
          "description": "Execute integration test suite",
          "condition": {
            "file_exists": "test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop research assistant services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'research-assistant-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Research Assistant services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}