      "authorization": {
        "type": "rbac"
      },
      "encryption": {
        "transit": true,
        "atRest": true
      }
    },
    "observability": {
      "logging": {
        "enabled": true,
        "level": "info"
      },
      "metrics": {
        "enabled": true,
        "provider": "prometheus"
      },
      "tracing": {
        "enabled": false,
        "provider": "jaeger"
