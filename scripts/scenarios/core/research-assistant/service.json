          "type": "automation",
          "name": "windmill",
          "optional": true,
          "version": "*"
        }
      ]
    },
    "pricing": {
      "model": "subscription",
      "currency": "USD",
      "tiers": [
        {
          "name": "Basic",
          "price": 2000,
          "interval": "month",
          "features": []
        },
        {
          "name": "Professional",
          "price": 6000,
          "interval": "month",
          "features": []
        }
      ]
    },
    "scenarios": {
      "initialization": {
        "resources": {
          "postgres": {
            "data": [
              {
                "type": "schema",
                "file": "scenarios/research-assistant/initialization/database/schema.sql",
                "format": "sql"
              },
              {
                "type": "seed",
                "file": "scenarios/research-assistant/initialization/database/seed.sql",
                "format": "sql"
              }
            ]
          }
        },
        "order": [],
