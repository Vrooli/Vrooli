      "healthChecks": {
        "readiness": {
          "httpGet": {
            "path": "/health",
            "port": 8080,
            "scheme": "HTTP"
          },
          "periodSeconds": 30,
          "timeoutSeconds": 5
        },
        "liveness": {
          "httpGet": {
            "path": "/health",
            "port": 8080,
            "scheme": "HTTP"
          },
          "periodSeconds": 60,
          "timeoutSeconds": 5
        }
      },
      "endpoints": [
        {
          "name": "api",
          "protocol": "http",
          "path": "/api/research-assistant",
          "port": 3000,
          "public": true
        },
        {
          "name": "health",
          "protocol": "http",
          "path": "/api/research-assistant/health",
          "port": 3000,
          "public": false
        }
      ]
    },
    "deployment": {
      "replicas": 1,
      "strategy": "recreate",
      "resources": {
        "requests": {
          "cpu": "100m",
          "memory": "128Mi"
        },
        "limits": {
