{
  "templates": [
    {
      "id": "pros_cons_basic",
      "name": "Basic Pros and Cons",
      "pattern": "pros_cons_analysis",
      "description": "Simple template for weighing advantages and disadvantages",
      "structure": {
        "prompt": "Analyze {{subject}} by listing pros and cons",
        "sections": ["pros", "cons", "summary"],
        "output_format": "structured_list"
      }
    },
    {
      "id": "swot_comprehensive",
      "name": "Comprehensive SWOT",
      "pattern": "swot_analysis",
      "description": "Full SWOT analysis with strategic recommendations",
      "structure": {
        "prompt": "Perform SWOT analysis for {{subject}} in context of {{context}}",
        "sections": ["strengths", "weaknesses", "opportunities", "threats", "strategy"],
        "scoring": true
      }
    },
    {
      "id": "risk_matrix",
      "name": "Risk Assessment Matrix",
      "pattern": "risk_assessment",
      "description": "Evaluate risks by probability and impact",
      "structure": {
        "prompt": "Assess risks for {{action}} considering {{constraints}}",
        "dimensions": ["probability", "impact", "mitigation"],
        "risk_levels": ["low", "medium", "high", "critical"]
      }
    },
    {
      "id": "devil_advocate",
      "name": "Devil's Advocate",
      "pattern": "devil_advocate",
      "description": "Challenge assumptions and find weaknesses",
      "structure": {
        "prompt": "Challenge the following proposal: {{proposal}}",
        "approach": "adversarial",
        "focus_areas": ["assumptions", "logic_gaps", "overlooked_risks", "alternative_views"]
      }
    },
    {
      "id": "introspection_loop",
      "name": "Self-Review Loop",
      "pattern": "introspection",
      "description": "Agent reviews its own reasoning process",
      "structure": {
        "prompt": "Review your reasoning for {{decision}} and identify potential biases or errors",
        "steps": ["initial_reasoning", "bias_check", "assumption_validation", "confidence_assessment"],
        "iteration_count": 3
      }
    },
    {
      "id": "multi_perspective",
      "name": "Six Thinking Hats",
      "pattern": "multi_perspective",
      "description": "Analyze from multiple perspectives",
      "structure": {
        "prompt": "Analyze {{topic}} from six perspectives",
        "perspectives": {
          "white": "facts and information",
          "red": "emotions and intuition",
          "black": "caution and critical thinking",
          "yellow": "optimism and benefits",
          "green": "creativity and alternatives",
          "blue": "process and control"
        }
      }
    },
    {
      "id": "assumption_checker",
      "name": "Assumption Validator",
      "pattern": "assumption_checking",
      "description": "Identify and validate underlying assumptions",
      "structure": {
        "prompt": "Identify assumptions in {{statement}} and evaluate their validity",
        "validation_criteria": ["evidence", "logic", "precedent", "expert_opinion"],
        "confidence_scoring": true
      }
    },
    {
      "id": "bias_detector",
      "name": "Cognitive Bias Scanner",
      "pattern": "bias_detection",
      "description": "Detect common cognitive biases in reasoning",
      "structure": {
        "prompt": "Analyze {{reasoning}} for cognitive biases",
        "bias_types": [
          "confirmation_bias",
          "anchoring_bias",
          "availability_heuristic",
          "dunning_kruger",
          "sunk_cost_fallacy"
        ],
        "mitigation_suggestions": true
      }
    },
    {
      "id": "yes_man_avoider",
      "name": "Contrarian Perspective",
      "pattern": "yes_man_avoidance",
      "description": "Actively seek dissenting opinions and alternatives",
      "structure": {
        "prompt": "Provide contrarian analysis for {{proposal}}",
        "requirements": [
          "must_disagree_with_at_least_one_major_point",
          "suggest_alternative_approach",
          "identify_overlooked_negatives"
        ]
      }
    }
  ],
  "categories": {
    "analytical": ["pros_cons_basic", "swot_comprehensive", "risk_matrix"],
    "critical": ["devil_advocate", "assumption_checker", "bias_detector"],
    "creative": ["multi_perspective", "yes_man_avoider"],
    "reflective": ["introspection_loop"]
  },
  "default_models": {
    "analytical": "mistral",
    "critical": "llama3.2",
    "creative": "llama3.2",
    "reflective": "codellama"
  }
}