{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "agent-metareasoning-manager",
    "displayName": "Agent Metareasoning Manager",
    "description": "Dashboard for managing metareasoning tools (prompts, workflows) that enhance agent decision-making",
    "version": "1.0.0",
    "type": "vrooli-enhancement",
    "category": "vrooli-helpers",
    "tags": [
      "metareasoning",
      "decision-support",
      "ai-enhancement",
      "reasoning-patterns",
      "windmill-ui",
      "prompt-management",
      "workflow-orchestration"
    ]
  },
  "repository": {
    "mirrors": []
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql",
        "enabled": true,
        "version": "16",
        "required": true,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/storage/postgres/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/storage/postgres/seed.sql"
            }
          ]
        }
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true
      },
      "vault": {
        "type": "vault",
        "enabled": false,
        "required": false
      }
    },
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "file": "initialization/automation/n8n/pros-cons-analyzer.json"
            },
            {
              "file": "initialization/automation/n8n/swot-analysis.json"
            },
            {
              "file": "initialization/automation/n8n/risk-assessment.json"
            },
            {
              "file": "initialization/automation/n8n/self-review.json"
            },
            {
              "file": "initialization/automation/n8n/reasoning-chain.json"
            }
          ]
        }
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "file": "initialization/automation/windmill/metareasoning-orchestrator.json"
            },
            {
              "file": "initialization/automation/windmill/prompt-tester.json"
            }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "mistral",
          "codellama"
        ]
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "steps": [
        {
          "name": "inject-resource-data",
          "run": "scripts/lib/resources/runtime-engine.sh .",
          "description": "Inject SQL schemas, workflows, and configurations"
        },
        {
          "name": "install-cli",
          "run": "ln -sf \"$(pwd)/cli/metareasoning-cli.sh\" /usr/local/bin/metareasoning && chmod +x /usr/local/bin/metareasoning",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/metareasoning-cli.sh"
          }
        },
        {
          "name": "prepare-api",
          "run": "cd api && npm install --production && npm run build",
          "description": "Install API server dependencies and compile TypeScript",
          "condition": {
            "file_exists": "api/package.json"
          }
        },
        {
          "name": "show-access-urls",
          "run": "echo 'ðŸš€ Agent Metareasoning Manager initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  CLI: metareasoning --help'",
          "description": "Display service access URLs and CLI info"
        }
      ]
    },
    "develop": {
      "description": "Start metareasoning manager with API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && METAREASONING_API_PORT=8093 POSTGRES_PORT=${RESOURCE_PORTS[postgres]} REDIS_PORT=${RESOURCE_PORTS[redis]} N8N_PORT=${RESOURCE_PORTS[n8n]} WINDMILL_PORT=${RESOURCE_PORTS[windmill]} npm run dev &",
          "description": "Build TypeScript and start API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/server.ts"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 3 && curl -sf http://localhost:8093/api/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 10,
            "delay": 2
          },
          "condition": {
            "file_exists": "api/server.ts"
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:8093/api\\n  CLI: metareasoning --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test metareasoning manager API and CLI",
      "steps": [
        {
          "name": "type-check-api",
          "run": "cd api && npm run type-check",
          "description": "TypeScript type checking",
          "condition": {
            "file_exists": "api/tsconfig.json"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:8093/api/health",
          "description": "Test API health endpoint",
          "condition": {
            "file_exists": "api/server.ts"
          }
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats metareasoning-cli.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/metareasoning-cli.bats"
          }
        },
        {
          "name": "test-api-endpoints",
          "run": "cd api && npm test",
          "description": "Run API test suite",
          "condition": {
            "file_exists": "api/package.json"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop metareasoning manager services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'node.*server.js' || true",
          "description": "Stop API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Metareasoning Manager services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}