{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "agent-metareasoning-manager",
    "displayName": "Agent Metareasoning Manager",
    "description": "Dashboard for managing metareasoning tools (prompts, workflows) that enhance agent decision-making",
    "version": "1.0.0",
    "type": "vrooli-enhancement",
    "category": "vrooli-helpers",
    "tags": [
      "metareasoning",
      "decision-support",
      "ai-enhancement",
      "reasoning-patterns",
      "windmill-ui",
      "prompt-management",
      "workflow-orchestration"
    ]
  },
  "repository": {
    "mirrors": []
  },
  "resources": {
    "system": {
      "go": {
        "type": "go",
        "enabled": true,
        "version": "1.21",
        "required": true,
        "description": "Go runtime for minimal coordination API"
      }
    },
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "file": "initialization/automation/n8n/pros-cons-analyzer.json"
            },
            {
              "file": "initialization/automation/n8n/swot-analysis.json"
            },
            {
              "file": "initialization/automation/n8n/risk-assessment.json"
            },
            {
              "file": "initialization/automation/n8n/self-review.json"
            },
            {
              "file": "initialization/automation/n8n/reasoning-chain.json"
            }
          ]
        }
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "file": "initialization/automation/windmill/metareasoning-orchestrator.json"
            },
            {
              "file": "initialization/automation/windmill/prompt-tester.json"
            }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "mistral",
          "codellama"
        ]
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Agent Metareasoning Manager",
      "steps": [
        {
          "name": "inject-resource-data",
          "run": "scripts/lib/resources/runtime-engine.sh .",
          "description": "Inject n8n workflows and Windmill apps"
        },
        {
          "name": "install-cli",
          "run": "ln -sf \"$(pwd)/cli/metareasoning-cli.sh\" /usr/local/bin/metareasoning && chmod +x /usr/local/bin/metareasoning",
          "description": "Install CLI command globally",
          "condition": {
            "file_exists": "cli/metareasoning-cli.sh"
          }
        },
        {
          "name": "build-go-api",
          "run": "cd api && go mod download && go build -o metareasoning-api main.go",
          "description": "Build Go coordination API binary",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "show-access-urls",
          "run": "echo 'ðŸš€ Agent Metareasoning Manager initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:8093\\n  CLI: metareasoning --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start metareasoning manager with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=8093 N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} WINDMILL_BASE_URL=http://localhost:${RESOURCE_PORTS[windmill]} ./metareasoning-api &",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/metareasoning-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:8093/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Windmill: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:8093\\n  CLI: metareasoning --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test metareasoning manager Go API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:8093/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-workflows-endpoint",
          "run": "curl -sf http://localhost:8093/workflows",
          "description": "Test API workflows endpoint"
        },
        {
          "name": "test-analyze-endpoint",
          "run": "curl -sf -X POST -H 'Content-Type: application/json' -d '{\"input\":\"test decision\",\"context\":\"test context\"}' http://localhost:8093/analyze/pros-cons",
          "description": "Test API analysis endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats metareasoning-cli.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/metareasoning-cli.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop metareasoning manager services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'metareasoning-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Metareasoning Manager services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}