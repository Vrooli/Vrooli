{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "brand-manager",
    "displayName": "AI Brand Manager",
    "description": "Complete AI-powered branding solution with logo generation, copywriting, and automated app integration via Claude Code agents",
    "version": "1.0.0",
    "type": "business-application",
    "category": "business",
    "tags": [
      "brand-generation",
      "visual-design",
      "copywriting",
      "app-integration",
      "windmill-ui",
      "claude-code-agents",
      "asset-management"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Brand manager API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "file": "initialization/automation/n8n/brand-pipeline.json"
            },
            {
              "file": "initialization/automation/n8n/claude-spawner.json"
            },
            {
              "file": "initialization/automation/n8n/integration-monitor.json"
            }
          ]
        }
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "file": "initialization/automation/windmill/brand-manager-ui.json"
            },
            {
              "file": "initialization/automation/windmill/integration-dashboard.json"
            }
          ]
        }
      }
    },
    "ai": {
      "comfyui": {
        "type": "comfyui",
        "enabled": true,
        "required": true,
        "purpose": "AI image generation for logos, icons, and brand assets"
      }
    },
    "agents": {
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": false,
        "purpose": "automated app integration and code generation"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "brand management data and project metadata"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "brand assets, logos, icons, and exported files storage"
      },
      "vault": {
        "type": "vault",
        "enabled": true,
        "required": false,
        "purpose": "API keys and integration tokens storage"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize AI Brand Manager",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/lib/resources/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ AI Brand Manager initialized\\n  Windmill Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  ComfyUI: http://localhost:${RESOURCE_PORTS[comfyui]}\\n  API: http://localhost:${SERVICE_PORT}\\n  MinIO Storage: http://localhost:${RESOURCE_PORTS[minio]}\\n  Vault: http://localhost:${RESOURCE_PORTS[vault]}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start brand manager services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh",
          "description": "Start brand manager services"
        }
      ]
    },
    "test": {
      "description": "Test brand manager functionality",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash test.sh",
          "description": "Execute integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop brand manager services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'brand-manager' || true",
          "description": "Stop all brand manager processes"
        }
      ]
    }
  }
}