{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "simple-test",
    "displayName": "Simple Test App",
    "description": "Minimal test app for lifecycle validation",
    "version": "1.0.0",
    "type": "application",
    "tags": [
      "test",
      "minimal",
      "framework-validation"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/simple-test"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql", 
        "enabled": true,
        "version": "16",
        "required": true,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/storage/postgres/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/storage/postgres/seed.sql"
            }
          ]
        }
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "health": "http://localhost:3000/health"
    },
    "testing": {
      "enabled": true,
      "timeout": "10m",
      "script": "./npm test",
      "ui": {
        "required": false,
        "type": "web",
        "url": "http://localhost:3000"
      }
    },
    "resources": {
      "requests": {
        "cpu": "100m",
        "memory": "256Mi"
      },
      "limits": {
        "cpu": "500m", 
        "memory": "512Mi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "testing",
      "valueProposition": "Framework validation and testing infrastructure",
      "targetMarket": "Internal development and CI/CD pipelines",
      "revenuePotential": {
        "initial": "$0",
        "recurring": "$0", 
        "expansion": "$0",
        "totalEstimate": "$0"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "30s",
        "responseTime": {
          "p50": "100ms",
          "p95": "500ms",
          "p99": "1000ms"
        },
        "throughput": {
          "minimum": 10,
          "target": 50,
          "peak": 100
        },
        "availability": "99.9%",
        "errorRate": "<0.1%"
      }
    },
    "category": "testing",
    "complexity": "simple",
    "marketDemand": "internal"
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Simple Test App environment",
      "steps": [
        {
          "name": "inject-resource-data",
          "run": "scripts/scenarios/injection/runtime-engine.sh scripts/scenarios/core/simple-test/.vrooli/service.json",
          "description": "Inject SQL schemas, workflows, and configurations"
        },
        {
          "name": "show-access-urls",
          "run": "echo 'âœ… Simple Test App initialized\\n  ðŸ“± Application: http://localhost:3000'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start development server",
      "steps": [
        {
          "name": "start",
          "run": "npm start"
        }
      ]
    },
    "build": {
      "description": "Build app",
      "steps": [
        {
          "name": "build",
          "run": "npm run build"
        }
      ]
    },
    "test": {
      "description": "Run tests",
      "steps": [
        {
          "name": "test",
          "run": "npm test"
        }
      ]
    }
  }
}