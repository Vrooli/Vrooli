{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "system-monitor",
    "displayName": "AI System Monitor",
    "description": "Server monitoring with AI-driven anomaly investigation and automated reporting",
    "version": "1.0.0",
    "type": "application",
    "tags": [
      "system-monitoring",
      "anomaly-detection",
      "ai-investigation",
      "infrastructure-monitoring",
      "alerting",
      "performance-analytics"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "System monitor API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3000-3999",
      "fallback": "auto",
      "description": "System monitor dashboard port"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store monitoring data and configuration",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "script"
          }
        ]
      },
      "questdb": {
        "type": "questdb",
        "enabled": true,
        "required": true,
        "purpose": "High-performance time-series database for metrics"
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Real-time metrics and alert caching"
      }
    },
    "automation": {
      "node-red": {
        "type": "node-red",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/node-red/anomaly-detector.json",
            "type": "flow"
          },
          {
            "file": "initialization/automation/node-red/metric-collector.json",
            "type": "flow"
          }
        ]
      },
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/scheduled-reports.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/threshold-monitor.json",
            "type": "workflow"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": false,
        "models": [
          "llama3.2:3b"
        ]
      }
    },
    "agents": {
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": false
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize AI System Monitor",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ System Monitor initialized\\n  Dashboard: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Node-RED flows: http://localhost:${RESOURCE_PORTS[node-red]}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start system monitor services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh",
          "description": "Start system monitor services"
        }
      ]
    },
    "test": {
      "description": "Test system monitor functionality",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash test.sh",
          "description": "Run integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop system monitor services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'system-monitor' || true",
          "description": "Stop all system monitor processes"
        }
      ]
    }
  }
}