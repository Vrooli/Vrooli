{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "podcast-transcription-assistant",
    "displayName": "Podcast Transcription Assistant",
    "description": "AI-powered podcast transcription with summaries, key points extraction, and show notes generation",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "audio-processing",
      "content-automation",
      "transcription",
      "windmill-ui",
      "media-production",
      "podcast-creator",
      "content-generation"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/podcast-transcription-assistant"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql",
        "enabled": true,
        "version": "16",
        "required": true,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/database/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/database/seed.sql"
            }
          ]
        }
      },
      "minio": {
        "type": "minio",
        "enabled": false,
        "required": false,
        "initialization": {
          "buckets": [
            {
              "name": "podcast-audio",
              "policy": "private"
            },
            {
              "name": "transcriptions",
              "policy": "private"
            },
            {
              "name": "show-notes",
              "policy": "private"
            }
          ]
        }
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": false,
        "required": false,
        "initialization": {
          "collections": [
            {
              "name": "podcast-content",
              "config": {
                "vectors": {
                  "size": 384,
                  "distance": "Cosine"
                }
              }
            },
            {
              "name": "episode-similarity",
              "config": {
                "vectors": {
                  "size": 384,
                  "distance": "Cosine"
                }
              }
            }
          ]
        }
      }
    },
    "ai": {
      "whisper": {
        "enabled": true,
        "required": true
      },
      "ollama": {
        "enabled": true,
        "required": true,
        "models": ["llama3.1:8b", "nomic-embed-text"]
      }
    },
    "automation": {
      "windmill": {
        "enabled": false,
        "required": false,
        "initialization": {
          "apps": [
            {
              "path": "f/podcast-assistant/dashboard",
              "file": "initialization/ui/windmill-podcast-app.json",
              "summary": "Podcast Content Management Dashboard"
            }
          ],
          "scripts": [
            {
              "name": "transcription-processor",
              "file": "initialization/scripts/transcription-processor.ts",
              "language": "typescript"
            },
            {
              "name": "show-notes-generator",
              "file": "initialization/scripts/show-notes-generator.ts",
              "language": "typescript"
            }
          ]
        }
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "api": "http://localhost:3000/api/podcast-transcription-assistant",
      "health": "http://localhost:3000/api/podcast-transcription-assistant/health",
      "windmill": "http://localhost:8000"
    },
    "initialization": {
      "phases": [
        {
          "name": "pre-validation",
          "tasks": [
            {
              "name": "validate-resources",
              "type": "script",
              "script": "./deployment/validate.sh",
              "timeout": "30s"
            }
          ]
        },
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/seed.sql"
            }
          ]
        },
        {
          "name": "ai-setup",
          "parallel": true,
          "tasks": [
            {
              "name": "verify-whisper",
              "type": "resource-inject",
              "target": "ai.whisper",
              "timeout": "2m"
            },
            {
              "name": "load-ai-models",
              "type": "resource-inject",
              "target": "ai.ollama",
              "timeout": "10m"
            }
          ]
        },
        {
          "name": "optional-services-setup",
          "parallel": true,
          "tasks": [
            {
              "name": "setup-vector-collections",
              "type": "resource-inject",
              "target": "storage.qdrant",
              "timeout": "2m"
            },
            {
              "name": "deploy-windmill-apps",
              "type": "resource-inject",
              "target": "automation.windmill",
              "config": "initialization/ui/",
              "timeout": "3m"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "load-app-config",
              "type": "config",
              "file": "initialization/configuration/app-config.json"
            },
            {
              "name": "set-transcription-settings",
              "type": "config",
              "file": "initialization/configuration/transcription-settings.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "2m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "http://localhost:3000/api/podcast-transcription-assistant/health",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "http://localhost:3000/api/podcast-transcription-assistant/health",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "whisper": {
          "endpoint": "http://localhost:8090/health",
          "interval": "60s",
          "timeout": "10s"
        },
        "ollama": {
          "endpoint": "http://localhost:11434/api/tags",
          "interval": "60s",
          "timeout": "15s"
        },
        "windmill": {
          "endpoint": "http://localhost:8000/api/version",
          "interval": "60s",
          "timeout": "10s"
        },
        "qdrant": {
          "endpoint": "http://localhost:6333/health",
          "interval": "60s",
          "timeout": "10s"
        },
        "database": {
          "type": "tcp",
          "port": 5432,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "1000ms",
          "p95": "5000ms",
          "p99": "15000ms"
        },
        "throughput": {
          "rps": 3,
          "concurrent": 5
        },
        "errorRate": {
          "threshold": "5%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "delete-windmill-apps",
          "type": "resource-cleanup",
          "target": "automation.windmill"
        },
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS podcast_transcription_assistant"
        },
        {
          "name": "clear-vector-collections",
          "type": "resource-cleanup",
          "target": "storage.qdrant"
        }
      ]
    },
    "testing": {
      "enabled": true,
      "timeout": "45m",
      "script": "./test.sh",
      "ui": {
        "required": false,
        "type": "windmill",
        "url": "http://localhost:8000"
      },
      "performance": {
        "loadTest": {
          "users": 3,
          "duration": "5m",
          "rampUp": "1m"
        }
      }
    },
    "resources": {
      "requests": {
        "cpu": "800m",
        "memory": "2Gi"
      },
      "limits": {
        "cpu": "3000m",
        "memory": "6Gi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Complete podcast content automation platform for transcription, analysis, and show notes generation",
      "targetMarket": "Podcast creators, media companies, content agencies, and audio production studios",
      "painPoints": [
        "Manual transcription and show notes creation consuming hours per episode",
        "Inconsistent content quality and formatting across episodes",
        "Difficulty in making podcast content searchable and discoverable"
      ],
      "solution": "AI-powered podcast assistant providing automated transcription, intelligent summaries, and professional show notes generation",
      "competitiveAdvantage": "Integration of Whisper transcription with AI-powered content analysis and professional workflow automation",
      "revenuePotential": {
        "initial": "$3,000",
        "recurring": "$12,000",
        "expansion": "$25,000",
        "totalEstimate": "$40,000"
      },
      "marketDemand": {
        "level": "very-high",
        "growth": "40% annually",
        "evidence": "Explosive growth in podcast industry and increasing demand for content automation tools"
      },
      "roi": {
        "developmentCost": "$5,000",
        "timeToMarket": "2 weeks",
        "breakEven": "3 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "5m",
        "responseTime": {
          "p50": "1000ms",
          "p95": "5000ms",
          "p99": "15000ms"
        },
        "throughput": {
          "minimum": 2,
          "target": 3,
          "peak": 10
        },
        "availability": "99.5%",
        "errorRate": "<5%"
      },
      "resources": {
        "cpu": {
          "minimum": "1.5",
          "target": "3.0",
          "maximum": "6.0"
        },
        "memory": {
          "minimum": "3Gi",
          "target": "6Gi",
          "maximum": "12Gi"
        },
        "storage": {
          "database": "50Gi",
          "audio": "500Gi",
          "transcriptions": "100Gi"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "Podcast Transcription Assistant",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Your Company",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#f59e0b",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "podcast_transcription_assistant",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "default": 3000,
          "description": "Application port"
        },
        "WHISPER_PORT": {
          "type": "number",
          "default": 8090,
          "description": "Whisper transcription service port"
        },
        "WINDMILL_PORT": {
          "type": "number",
          "default": 8000,
          "description": "Windmill UI port"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": false
        },
        "notifications": {
          "enabled": true,
          "channels": ["email", "webhook"]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "transcription": {
          "enabled": true,
          "provider": "whisper"
        },
        "contentAnalysis": {
          "enabled": true,
          "provider": "ollama"
        },
        "vectorSearch": {
          "enabled": false,
          "provider": "qdrant"
        },
        "workflowAutomation": {
          "enabled": false,
          "provider": "windmill"
        }
      },
      "integrations": [
        {
          "name": "Podcast Hosting Platforms",
          "type": "api",
          "required": false
        },
        {
          "name": "Audio Processing Tools",
          "type": "webhook",
          "required": false
        },
        {
          "name": "Content Management Systems",
          "type": "api",
          "required": false
        }
      ]
    },
    "category": "ai-content-creation",
    "complexity": "intermediate",
    "marketDemand": "very-high"
  }
}
