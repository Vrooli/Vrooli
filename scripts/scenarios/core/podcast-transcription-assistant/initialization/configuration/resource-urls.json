{
  "ai": {
    "ollama": {
      "base_url": "http://localhost:11434",
      "health_endpoint": "/api/tags",
      "generate_endpoint": "/api/generate",
      "embeddings_endpoint": "/api/embeddings",
      "timeout_seconds": 30
    },
    "whisper": {
      "base_url": "http://localhost:8090",
      "health_endpoint": "/",
      "transcribe_endpoint": "/transcribe",
      "timeout_seconds": 60
    }
  },
  
  "automation": {
    "n8n": {
      "base_url": "http://localhost:5678",
      "health_endpoint": "/healthz",
      "api_endpoint": "/api/v1",
      "webhook_endpoint": "/webhook",
      "workflows_endpoint": "/api/v1/workflows",
      "timeout_seconds": 30
    },
    "windmill": {
      "base_url": "http://localhost:5681",
      "health_endpoint": "/api/version",
      "api_endpoint": "/api",
      "apps_endpoint": "/api/apps",
      "scripts_endpoint": "/api/scripts",
      "timeout_seconds": 30
    }
  },
  
  "storage": {
    "postgres": {
      "host": "localhost",
      "port": 5433,
      "database": "podcast_transcription_assistant",
      "username": "postgres",
      "password": "postgres",
      "connection_url": "postgresql://postgres:postgres@localhost:5433/podcast_transcription_assistant",
      "max_connections": 20,
      "timeout_seconds": 30
    },
    "minio": {
      "base_url": "http://localhost:9000",
      "console_url": "http://localhost:9001",
      "access_key": "minioadmin",
      "secret_key": "minioadmin",
      "bucket": "podcast-transcription-assistant-assets",
      "timeout_seconds": 30
    },
    "qdrant": {
      "base_url": "http://localhost:6333",
      "health_endpoint": "/",
      "collections_endpoint": "/collections",
      "points_endpoint": "/collections/{collection}/points",
      "timeout_seconds": 30
    }
  },
  
  "application": {
    "base_url": "http://localhost:3000",
    "api_prefix": "/api/podcast-transcription-assistant",
    "health_endpoint": "/api/podcast-transcription-assistant/health",
    "metrics_endpoint": "/api/podcast-transcription-assistant/metrics",
    "status_endpoint": "/api/podcast-transcription-assistant/status"
  },
  
  "webhooks": {
    "transcription_pipeline": "http://localhost:5678/webhook/transcription-upload",
    "ai_analysis": "http://localhost:5678/webhook/ai-analysis", 
    "semantic_search": "http://localhost:5678/webhook/semantic-search"
  },
  
  "monitoring": {
    "health_check_interval_seconds": 30,
    "metrics_collection_interval_seconds": 60,
    "alert_endpoints": {
      "errors": "/api/podcast-transcription-assistant/alerts/errors",
      "performance": "/api/podcast-transcription-assistant/alerts/performance",
      "resource_health": "/api/podcast-transcription-assistant/alerts/resources"
    }
  }
}