{
  "app": {
    "name": "Podcast Transcription Assistant",
    "id": "podcast-transcription-assistant",
    "version": "1.0.0",
    "description": "AI-powered podcast transcription with summaries, key points extraction, and semantic search",
    "complexity": "intermediate",
    "categories": ["ai-content-creation", "audio-processing", "content-automation"]
  },
  
  "runtime": {
    "environment": "development",
    "debug": true,
    "log_level": "info",
    "session_timeout_minutes": 30,
    "max_concurrent_users": 10,
    "request_timeout_seconds": 300
  },
  
  "features": {
    "ai_processing": true,
    "speech_recognition": true,
    "image_generation": false,
    "document_processing": false,
    "workflow_automation": true,
    "screen_automation": false,
    "web_automation": false,
    "vector_search": true,
    "file_storage": true,
    "analytics": false,
    "search": false,
    "professional_ui": true,
    "real_time_dashboard": false
  },
  
  "business": {
    "value_proposition": "Complete podcast content automation platform for transcription, analysis, and show notes generation",
    "target_markets": ["Podcast creators", "Media companies", "Content agencies", "Audio production studios"],
    "revenue_potential": {
      "initial": 3000,
      "recurring": 12000,
      "expansion": 25000,
      "total_estimate": 40000
    },
    "market_demand": "very-high"
  },
  
  "ai": {
    "default_model": "llama3.1:8b",
    "temperature": 0.7,
    "max_tokens": 2048,
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "models": {
      "text": ["llama3.1:8b", "qwen2.5-coder:7b"],
      "vision": ["llava:7b", "llama3.2-vision:11b"],
      "embedding": ["nomic-embed-text:latest"]
    }
  },
  
  "workflows": {
    "default_timeout_seconds": 300,
    "max_concurrent_executions": 5,
    "retry_failed_workflows": true,
    "retry_attempts": 2,
    "enable_webhooks": true,
    "webhook_auth_required": false
  },
  
  "storage": {
    "max_file_size_mb": 500,
    "allowed_file_types": [
      "audio/mpeg", "audio/wav", "audio/m4a", "audio/ogg", "audio/flac", "audio/mp4",
      "text/plain", "application/json"
    ],
    "retention_days": 365,
    "enable_compression": true
  },
  
  "transcription": {
    "whisper_model": "base",
    "language_detection": "auto",
    "word_timestamps": true,
    "confidence_threshold": 0.8,
    "max_duration_minutes": 180,
    "supported_formats": ["mp3", "wav", "m4a", "ogg", "flac", "mp4"],
    "preprocessing": {
      "normalize_audio": true,
      "remove_silence": false,
      "noise_reduction": false
    }
  },
  
  "search": {
    "embedding_model": "nomic-embed-text",
    "vector_dimensions": 384,
    "similarity_threshold": 0.7,
    "max_results": 50,
    "chunk_size": 512,
    "chunk_overlap": 50
  },
  
  "analysis": {
    "default_temperature": 0.7,
    "max_tokens": 2048,
    "auto_analyze": false,
    "available_types": ["summary", "key_insights", "custom"],
    "templates": [
      {
        "name": "Action Items",
        "prompt": "Extract all action items and tasks mentioned in this transcription."
      },
      {
        "name": "Decision Points",
        "prompt": "Identify all decisions that were made during this conversation."
      },
      {
        "name": "Questions Raised",
        "prompt": "List all questions that were asked or discussed."
      },
      {
        "name": "Technical Details",
        "prompt": "Focus on technical concepts and implementation details."
      }
    ]
  },
  
  "performance": {
    "cache_enabled": true,
    "cache_ttl_seconds": 3600,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    },
    "monitoring": {
      "collect_metrics": true,
      "metrics_retention_days": 7,
      "performance_alerts": true
    }
  },
  
  "security": {
    "cors_enabled": true,
    "cors_origins": ["http://localhost:3000", "http://localhost:5681"],
    "api_key_required": false,
    "session_security": {
      "secure_cookies": false,
      "same_site": "lax",
      "session_rotation": true
    },
    "content_security": {
      "validate_uploads": true,
      "scan_for_malware": false,
      "max_request_size_mb": 500
    }
  },
  
  "ui": {
    "theme": "professional",
    "primary_color": "#2563eb",
    "brand_name": "Podcast Transcription Assistant",
    "show_advanced_features": false,
    "enable_dark_mode": true,
    "enable_accessibility": true,
    "default_language": "en",
    "items_per_page": 20,
    "default_view": "grid"
  },
  
  "integrations": {
    "webhook_endpoints": {
      "status_updates": "/api/webhooks/status",
      "completion_notifications": "/api/webhooks/completed",
      "error_alerts": "/api/webhooks/errors"
    },
    "external_apis": {
      "timeout_seconds": 30,
      "retry_attempts": 3,
      "cache_responses": true
    },
    "n8n_workflows": {
      "transcription_pipeline": "http://localhost:5678/webhook/transcription-upload",
      "ai_analysis": "http://localhost:5678/webhook/ai-analysis",
      "semantic_search": "http://localhost:5678/webhook/semantic-search"
    }
  },
  
  "export": {
    "formats": ["txt", "pdf", "json", "srt"],
    "default_format": "txt",
    "include_metadata": true,
    "include_timestamps": true
  },
  
  "notifications": {
    "completion": {
      "enabled": true,
      "ui_notification": true,
      "email_enabled": false,
      "webhook_enabled": false
    },
    "errors": {
      "enabled": true,
      "ui_notification": true,
      "email_enabled": false,
      "log_level": "error"
    },
    "progress": {
      "enabled": true,
      "interval_seconds": 10,
      "websocket_enabled": true
    }
  },
  
  "development": {
    "hot_reload": true,
    "mock_external_services": false,
    "verbose_logging": true,
    "enable_debug_endpoints": true,
    "simulate_latency": false
  }
}