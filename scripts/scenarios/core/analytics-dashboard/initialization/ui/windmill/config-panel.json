  "queries": {
    "load_thresholds_config": {
      "type": "postgresql",
      "query": "SELECT key, value FROM resource_monitoring.system_config WHERE key IN ('monitoring', 'alerting', 'thresholds')",
      "runOnLoad": true
    },
    "save_thresholds_config": {
      "type": "postgresql",
      "query": "INSERT INTO resource_monitoring.system_config (key, value, updated_by) VALUES ('thresholds', $1, 'dashboard_user') ON CONFLICT (key) DO UPDATE SET value = $1, updated_at = NOW()",
      "runOnLoad": false
    },
    "get_alert_rules": {
      "type": "postgresql",
      "query": "SELECT * FROM resource_monitoring.alert_rules ORDER BY severity DESC, rule_name",
      "runOnLoad": true
    },
    "save_notification_config": {
      "type": "postgresql",
      "query": "UPDATE resource_monitoring.notification_channels SET config = $1, is_enabled = $2 WHERE channel_type = $3",
      "runOnLoad": false
    },
    "send_test_sms": {
      "type": "webhook",
      "url": "http://localhost:5678/webhook/alert-handler",
      "method": "POST",
      "data": {
        "resource_name": "test",
        "severity": "info",
        "message": "Test SMS from configuration panel",
        "source": "config_test"
      },
      "runOnLoad": false
    },
    "send_test_email": {
      "type": "webhook",
      "url": "http://localhost:5678/webhook/alert-handler",
      "method": "POST",
      "data": {
        "resource_name": "test",
        "severity": "warning",
        "message": "Test email from configuration panel",
        "source": "config_test"
      },
      "runOnLoad": false
    },
    "check_vault_secrets": {
      "type": "http",
      "url": "http://localhost:8200/v1/sys/health",
      "method": "GET",
      "runOnLoad": false
    }
