{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "name": "analytics-dashboard",
    "version": "1.0.0",
    "displayName": "Real-time Analytics Dashboard",
    "description": "Live monitoring dashboard with streaming data, time-series storage, and AI-powered insights",
    "tags": [
      "real-time",
      "time-series",
      "iot",
      "monitoring",
      "operational-intelligence",
      "windmill-ui",
      "enterprise-ready"
    ],
    "labels": {
      "category": "real-time-monitoring",
      "complexity": "advanced",
      "market-demand": "very-high"
    },
    "annotations": {
      "value-proposition": "Real-time operational intelligence platform for IoT, financial, and business metrics",
      "generated-from": "manifest-to-service-converter",
      "conversion-date": "2025-08-04T02:14:42Z"
    }
  },
  "spec": {
    "type": "application",
    "category": "real-time-monitoring",
    "capabilities": [
      "ai-processing",
      "workflow-automation",
      "file-storage",
      "web-automation"
    ],
    "dependencies": {
      "resources": [
        {
          "type": "automation",
          "name": "node-red",
          "optional": false,
          "version": "*"
        },
        {
          "type": "timeseries",
          "name": "questdb",
          "optional": false,
          "version": "*"
        },
        {
          "type": "agent",
          "name": "browserless",
          "optional": false,
          "version": "*"
        },
        {
          "type": "storage",
          "name": "minio",
          "optional": true,
          "version": "*"
        },
        {
          "type": "ai",
          "name": "ollama",
          "optional": true,
          "version": "*"
        },
        {
          "type": "automation",
          "name": "windmill",
          "optional": true,
          "version": "*"
        }
      ]
    },
    "pricing": {
      "model": "subscription",
      "currency": "USD",
      "tiers": [
        {
          "name": "Basic",
          "price": 5000,
          "interval": "month",
          "features": []
        },
        {
          "name": "Professional",
          "price": 12000,
          "interval": "month",
          "features": []
        }
      ]
    },
    "scenarios": {
      "initialization": {
        "resources": {
          "postgres": {
            "data": [
              {
                "type": "schema",
                "file": "scenarios/analytics-dashboard/initialization/database/schema.sql",
                "format": "sql"
              },
              {
                "type": "seed",
                "file": "scenarios/analytics-dashboard/initialization/database/seed.sql",
                "format": "sql"
              }
            ]
          }
        },
        "order": [],
        "parallel": false
      }
    },
    "serve": {
      "healthChecks": {
        "readiness": {
          "httpGet": {
            "path": "/health",
            "port": 8080,
            "scheme": "HTTP"
          },
          "periodSeconds": 30,
          "timeoutSeconds": 5
        },
        "liveness": {
          "httpGet": {
            "path": "/health",
            "port": 8080,
            "scheme": "HTTP"
          },
          "periodSeconds": 60,
          "timeoutSeconds": 5
        }
      },
      "endpoints": [
        {
          "name": "api",
          "protocol": "http",
          "path": "/api/analytics-dashboard",
          "port": 3000,
          "public": true
        },
        {
          "name": "health",
          "protocol": "http",
          "path": "/api/analytics-dashboard/health",
          "port": 3000,
          "public": false
        }
      ]
    },
    "deployment": {
      "replicas": 1,
      "strategy": "recreate",
      "resources": {
        "requests": {
          "cpu": "100m",
          "memory": "128Mi"
        },
        "limits": {
          "cpu": "1000m",
          "memory": "1Gi"
        }
      }
    },
    "security": {
      "authentication": {
        "required": true,
        "type": "jwt"
      },
      "authorization": {
        "type": "rbac"
      },
      "encryption": {
        "transit": true,
        "atRest": true
      }
    },
    "observability": {
      "logging": {
        "enabled": true,
        "level": "info"
      },
      "metrics": {
        "enabled": true,
        "provider": "prometheus"
      },
      "tracing": {
        "enabled": false,
        "provider": "jaeger"
      }
    }
  }
}
