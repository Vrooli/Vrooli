{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "analytics-dashboard",
    "displayName": "Resource Monitoring & Management Platform",
    "description": "Auto-discover and monitor Vrooli resources with real-time alerts, historical tracking, and remote management capabilities",
    "version": "1.0.0",
    "type": "infrastructure-management",
    "tags": [
      "monitoring",
      "resource-management",
      "alerting",
      "auto-discovery",
      "operational-intelligence",
      "windmill-ui",
      "infrastructure"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/analytics-dashboard"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql",
        "enabled": true,
        "version": "16",
        "required": true,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/storage/postgres/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/storage/postgres/seed.sql"
            }
          ]
        }
      },
      "questdb": {
        "type": "questdb",
        "enabled": true,
        "required": true,
        "initialization": {
          "schema": {
            "file": "initialization/storage/questdb/tables.sql"
          }
        }
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "initialization": {
          "description": "Used for alert throttling and real-time status cache"
        }
      },
      "vault": {
        "type": "vault",
        "enabled": true,
        "required": true,
        "initialization": {
          "secrets": [
            {
              "path": "secret/data/monitoring/twilio",
              "description": "Twilio credentials for SMS alerts"
            },
            {
              "path": "secret/data/monitoring/smtp",
              "description": "SMTP credentials for email alerts"
            }
          ]
        }
      },
      "minio": {
        "type": "minio",
        "enabled": false,
        "required": false,
        "initialization": {
          "buckets": [
            {
              "name": "analytics-data",
              "policy": "private"
            }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "enabled": false,
        "required": false,
        "models": []
      }
    },
    "automation": {
      "n8n": {
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "name": "main-orchestration",
              "file": "initialization/automation/n8n/main-orchestration.json",
              "enabled": true,
              "tags": ["orchestration", "api", "gateway"]
            },
            {
              "name": "resource-monitor",
              "file": "initialization/automation/n8n/resource-monitor.json",
              "enabled": true,
              "tags": ["monitoring", "core"]
            },
            {
              "name": "auto-discovery",
              "file": "initialization/automation/n8n/auto-discovery.json",
              "enabled": true,
              "tags": ["discovery", "setup"]
            },
            {
              "name": "alert-handler",
              "file": "initialization/automation/n8n/alert-handler.json",
              "enabled": true,
              "tags": ["alerting", "notifications"]
            }
          ]
        }
      },
      "node-red": {
        "enabled": true,
        "required": true,
        "initialization": {
          "flows": [
            {
              "name": "metrics-collector",
              "file": "initialization/automation/node-red/metrics-collector.json",
              "enabled": true,
              "tags": ["core", "metrics", "real-time"]
            }
          ]
        }
      },
      "windmill": {
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "path": "f/monitoring/dashboard",
              "file": "initialization/ui/windmill/dashboard-app.json",
              "summary": "Resource Monitoring Dashboard"
            },
            {
              "path": "f/monitoring/config",
              "file": "initialization/ui/windmill/config-panel.json",
              "summary": "Resource Configuration Panel"
            },
            {
              "path": "f/monitoring/docs",
              "file": "initialization/ui/windmill/docs-page.json",
              "summary": "Documentation and Help"
            }
          ],
          "scripts": []
        }
      }
    },
    "agents": {
      "browserless": {
        "enabled": true,
        "required": true,
        "mode": "service"
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "api": "http://localhost:3000/api/analytics-dashboard",
      "health": "http://localhost:3000/api/analytics-dashboard/health",
      "questdb": "${service.questdb.url}"
    },
    "initialization": {
      "phases": [
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/storage/postgres/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/storage/postgres/seed.sql"
            },
            {
              "name": "setup-questdb",
              "type": "resource-inject",
              "target": "storage.questdb",
              "timeout": "60s"
            }
          ]
        },
        {
          "name": "workflow-deployment",
          "parallel": true,
          "tasks": [
            {
              "name": "deploy-node-red-flows",
              "type": "resource-inject",
              "target": "automation.node-red",
              "config": "initialization/automation/node-red/"
            },
            {
              "name": "deploy-windmill-apps",
              "type": "resource-inject",
              "target": "automation.windmill",
              "config": "initialization/ui/windmill/"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "load-app-config",
              "type": "config",
              "file": "initialization/configuration/app-config.json"
            },
            {
              "name": "set-feature-flags",
              "type": "config",
              "file": "initialization/configuration/feature-flags.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "2m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "http://localhost:3000/api/analytics-dashboard/health",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "http://localhost:3000/api/analytics-dashboard/health",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "questdb": {
          "endpoint": "${service.questdb.url}/status",
          "interval": "60s",
          "timeout": "10s"
        },
        "node-red": {
          "endpoint": "${service.node-red.url}/settings",
          "interval": "60s",
          "timeout": "10s"
        },
        "database": {
          "type": "tcp",
          "port": 5433,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "100ms",
          "p95": "500ms",
          "p99": "1000ms"
        },
        "throughput": {
          "rps": 200,
          "concurrent": 50
        },
        "errorRate": {
          "threshold": "1%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "delete-node-red-flows",
          "type": "resource-cleanup",
          "target": "automation.node-red"
        },
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS analytics_dashboard"
        },
        {
          "name": "clear-questdb",
          "type": "resource-cleanup",
          "target": "storage.questdb"
        },
        {
          "name": "clear-storage",
          "type": "resource-cleanup",
          "target": "storage.minio"
        }
      ]
    },
    "testing": {
      "enabled": true,
      "timeout": "30m",
      "script": "./test.sh",
      "ui": {
        "required": true,
        "type": "node-red",
        "url": "${service.node-red.url}"
      },
      "performance": {
        "loadTest": {
          "users": 50,
          "duration": "10m",
          "rampUp": "1m"
        }
      }
    },
    "resources": {
      "requests": {
        "cpu": "100m",
        "memory": "128Mi"
      },
      "limits": {
        "cpu": "1000m",
        "memory": "1Gi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Comprehensive resource monitoring and management for Vrooli's infrastructure with automated alerts and self-healing capabilities",
      "targetMarket": "DevOps teams, platform operators, and Vrooli deployments needing infrastructure visibility",
      "painPoints": [
        "Manual resource discovery and configuration",
        "Alert fatigue from unthrottled notifications",
        "Lack of unified dashboard for 20+ resources",
        "No historical metrics for capacity planning"
      ],
      "solution": "Auto-discovering monitoring platform with smart alerting, one-click management, and historical analysis",
      "competitiveAdvantage": "Purpose-built for Vrooli's resource ecosystem with native integration and auto-discovery",
      "revenuePotential": {
        "initial": "Infrastructure cost savings",
        "recurring": "Reduced downtime and operational efficiency",
        "expansion": "Self-healing capabilities",
        "totalEstimate": "Critical for platform operations"
      },
      "marketDemand": {
        "level": "very-high",
        "growth": "35% annually",
        "evidence": "Essential for managing 20+ local resources efficiently"
      },
      "roi": {
        "developmentCost": "$3,000",
        "timeToMarket": "1 week",
        "breakEven": "2 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "3m",
        "responseTime": {
          "p50": "50ms",
          "p95": "200ms",
          "p99": "500ms"
        },
        "throughput": {
          "minimum": 100,
          "target": 200,
          "peak": 1000
        },
        "availability": "99.95%",
        "errorRate": "<0.5%"
      },
      "resources": {
        "cpu": {
          "minimum": "1.0",
          "target": "2.0",
          "maximum": "4.0"
        },
        "memory": {
          "minimum": "1Gi",
          "target": "2Gi",
          "maximum": "4Gi"
        },
        "storage": {
          "database": "50Gi",
          "timeseries": "100Gi",
          "files": "20Gi"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "Analytics Dashboard",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Your Company",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#059669",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "analytics_dashboard",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "default": 3000,
          "description": "Application port"
        },
        "QUESTDB_PORT": {
          "type": "number",
          "default": 9009,
          "description": "QuestDB web console port"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": false
        },
        "notifications": {
          "enabled": true,
          "channels": ["email", "webhook", "slack"]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "realtime": {
          "enabled": true,
          "provider": "questdb"
        }
      },
      "integrations": [
        {
          "name": "IoT Sensors",
          "type": "mqtt",
          "required": false
        },
        {
          "name": "External APIs",
          "type": "rest",
          "required": false
        }
      ]
    },
    "category": "real-time-monitoring",
    "complexity": "advanced",
    "marketDemand": "very-high"
  }
}
