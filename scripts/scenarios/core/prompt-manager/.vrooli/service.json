{
  "$schema": "../../schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "prompt-manager",
    "displayName": "Personal Prompt Manager",
    "description": "Campaign-based prompt storage and management tool with API access, CLI, and web interface for organizing AI prompts",
    "version": "1.0.0",
    "type": "productivity-application",
    "category": "personal-tools",
    "tags": [
      "prompt-management",
      "ai-tools",
      "productivity",
      "personal-assistant",
      "campaign-organization",
      "cli-tool"
    ],
    "author": {
      "name": "Vrooli Team",
      "email": "team@vrooli.com"
    },
    "repository": {
      "type": "scenario",
      "path": "scripts/scenarios/core/prompt-manager"
    }
  },
  "resources": {
    "postgres": {
      "enabled": true,
      "version": "latest",
      "database": "prompt_manager",
      "description": "Primary data storage for campaigns, prompts, tags, and metadata",
      "required": true,
      "port": 5433,
      "initialization": {
        "schema": "initialization/storage/postgres/schema.sql",
        "seed_data": "initialization/storage/postgres/seed.sql"
      }
    },
    "qdrant": {
      "enabled": true,
      "version": "latest",
      "description": "Vector database for semantic search of prompts",
      "required": false,
      "port": 6333,
      "collections": [
        {
          "name": "prompts",
          "vector_size": 384,
          "distance": "Cosine"
        }
      ]
    },
    "ollama": {
      "enabled": false,
      "version": "latest", 
      "description": "Local LLM for prompt testing and enhancement suggestions",
      "required": false,
      "port": 11434,
      "recommended_models": [
        "nomic-embed-text",
        "llama3.2"
      ]
    }
  },
  "services": {
    "api": {
      "name": "prompt-manager-api",
      "description": "Go backend API server providing RESTful endpoints",
      "language": "go",
      "port": 8085,
      "path": "api/main.go",
      "build_command": "go mod tidy && go build -o prompt-manager-api main.go",
      "start_command": "./prompt-manager-api",
      "health_check": "/health",
      "endpoints": {
        "campaigns": "/api/campaigns",
        "prompts": "/api/prompts", 
        "search": "/api/search/prompts",
        "tags": "/api/tags",
        "health": "/health"
      },
      "environment": {
        "PORT": "8085",
        "POSTGRES_URL": "postgres://postgres:postgres@localhost:5433/prompt_manager?sslmode=disable",
        "QDRANT_URL": "http://localhost:6333",
        "OLLAMA_URL": "http://localhost:11434"
      }
    },
    "ui": {
      "name": "prompt-manager-ui",
      "description": "React web interface with campaign sidebar and prompt editor",
      "language": "javascript",
      "framework": "react",
      "port": 3005,
      "path": "ui",
      "build_command": "npm install && npm run build",
      "start_command": "npm start",
      "environment": {
        "PORT": "3005",
        "REACT_APP_API_URL": "http://localhost:8085"
      },
      "features": [
        "Campaign management",
        "Prompt editor",
        "Search functionality",
        "Dark mode support",
        "Responsive design",
        "Copy to clipboard",
        "Usage tracking"
      ]
    },
    "cli": {
      "name": "prompt-manager",
      "description": "Command-line interface for quick prompt operations",
      "language": "bash",
      "path": "cli/prompt-manager",
      "install_script": "cli/install-cli.sh",
      "commands": [
        "status",
        "campaigns",
        "add",
        "list",
        "search", 
        "show",
        "use",
        "quick",
        "help"
      ],
      "environment": {
        "PROMPT_MANAGER_API_URL": "http://localhost:8085"
      }
    }
  },
  "deployment": {
    "startup_script": "deployment/startup.sh",
    "validation_script": "deployment/validate.sh",
    "dependencies": {
      "system": [
        "go",
        "node",
        "npm",
        "curl",
        "jq",
        "psql"
      ],
      "go": [
        "github.com/google/uuid",
        "github.com/gorilla/handlers",
        "github.com/gorilla/mux",
        "github.com/lib/pq"
      ],
      "npm": [
        "react",
        "react-dom",
        "axios",
        "lucide-react",
        "react-textarea-autosize",
        "tailwindcss"
      ]
    }
  },
  "configuration": {
    "app_config": "initialization/configuration/app-config.json",
    "campaign_templates": "initialization/configuration/campaign-templates.json"
  },
  "testing": {
    "test_specification": "scenario-test.yaml",
    "test_types": [
      "infrastructure",
      "api",
      "ui",
      "cli", 
      "integration",
      "performance"
    ]
  },
  "usage": {
    "startup_time": "30-60 seconds",
    "memory_usage": "~200MB",
    "storage_requirements": "~50MB initial",
    "recommended_hardware": {
      "cpu": "1 core",
      "ram": "512MB",
      "storage": "1GB"
    }
  },
  "features": {
    "core": [
      "Campaign-based organization",
      "Full-text search",
      "Usage tracking",
      "Tag management",
      "Multiple interfaces (Web, CLI, API)"
    ],
    "optional": [
      "Semantic search (requires Qdrant)",
      "Prompt testing (requires Ollama)",
      "Vector embeddings"
    ],
    "planned": [
      "Export functionality",
      "Import from other tools",
      "Collaboration features",
      "Advanced analytics"
    ]
  },
  "documentation": {
    "quick_start": "Open http://localhost:3005 after startup",
    "api_docs": "Available at http://localhost:8085/health",
    "cli_help": "Run 'prompt-manager help' for CLI documentation"
  }
}