{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "personal-digital-twin",
    "displayName": "Personal Digital Twin",
    "description": "Platform for creating personalized AI agents that learn from user data and provide tailored interactions",
    "version": "1.0.0",
    "type": "business-application",
    "category": "ai-applications",
    "tags": [
      "ai-personalization",
      "digital-twin",
      "fine-tuning",
      "vector-search",
      "conversation-ai",
      "data-ingestion",
      "persona-management"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Main digital twin management API port"
    },
    "chat": {
      "env_var": "CHAT_PORT",
      "range": "8000-8999",
      "fallback": "auto",
      "description": "Chat interface API port"
    }
  },
  "shared_workflows": [
    "ollama",
    "embedding-generator",
    "smart-semantic-search",
    "structured-data-extractor"
  ],
  "resources": {
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "mistral",
          "codellama",
          "nomic-embed-text"
        ],
        "purpose": "AI model inference for chat and embeddings generation"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store persona data, conversations, training jobs, and metadata",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Vector database for semantic memory and document embeddings",
        "initialization": [
          {
            "file": "initialization/qdrant/collections.json",
            "type": "script"
          }
        ]
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": false,
        "purpose": "File storage for documents, model checkpoints, and snapshots"
      }
    },
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/data-ingestion.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/persona-chat.json",
            "type": "workflow"
          }
        ],
        "purpose": "Data ingestion pipelines and chat workflows"
      }
    },
    "ai-processing": {
      "unstructured-io": {
        "type": "unstructured-io",
        "enabled": true,
        "required": false,
        "purpose": "Document processing and text extraction"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Personal Digital Twin platform",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install-cli.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o personal-digital-twin-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Personal Digital Twin initialized\\n  UI: http://localhost:3080\\n  Data Workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  Chat API: http://localhost:${CHAT_PORT}\\n  CLI: personal-digital-twin --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start personal digital twin platform with APIs and workflows",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT CHAT_PORT=$CHAT_PORT POSTGRES_URL=postgres://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/digital_twin QDRANT_URL=http://localhost:${RESOURCE_PORTS[qdrant]} OLLAMA_URL=http://localhost:${RESOURCE_PORTS[ollama]} N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} MINIO_URL=http://localhost:${RESOURCE_PORTS[minio]} ./personal-digital-twin-api &",
          "description": "Start Go API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/personal-digital-twin-api"
          }
        },
        {
          "name": "start-ui",
          "run": "cd ui && npm install && PORT=3080 npm run dev &",
          "description": "Start UI server",
          "background": true,
          "condition": {
            "file_exists": "ui/package.json"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 3 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for main API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "wait-for-chat-api",
          "run": "curl -sf http://localhost:$CHAT_PORT/health > /dev/null",
          "description": "Wait for chat API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Personal Digital Twin running:\\n  UI: http://localhost:3080\\n  Data Workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$SERVICE_PORT\\n  Chat API: http://localhost:$CHAT_PORT\\n  CLI: personal-digital-twin --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test personal digital twin API and workflows",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test main API health endpoint"
        },
        {
          "name": "test-chat-health",
          "run": "curl -sf http://localhost:$CHAT_PORT/health",
          "description": "Test chat API health endpoint"
        },
        {
          "name": "test-persona-creation",
          "run": "bash test/test-persona-creation.sh",
          "description": "Test persona creation endpoint"
        },
        {
          "name": "test-data-ingestion",
          "run": "bash test/test-data-ingestion.sh",
          "description": "Test data ingestion workflow"
        },
        {
          "name": "test-chat-interaction",
          "run": "bash test/test-chat-interaction.sh",
          "description": "Test chat functionality"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats personal-digital-twin.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/personal-digital-twin.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop personal digital twin services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'personal-digital-twin-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Personal Digital Twin services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
EOF < /dev/null
