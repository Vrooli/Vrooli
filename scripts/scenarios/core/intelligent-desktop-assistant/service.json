{
  "$schema": "../../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "intelligent-desktop-assistant",
    "displayName": "Intelligent Desktop Assistant",
    "description": "AI-powered desktop automation assistant that understands screen content and executes complex workflows",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "desktop-automation",
      "screen-analysis",
      "customer-service",
      "task-automation",
      "basic-scenario"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/intelligent-desktop-assistant"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql",
        "enabled": true,
        "version": "16",
        "required": true,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/database/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/database/seed.sql"
            }
          ]
        }
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": false,
        "required": false,
        "initialization": {
          "collections": [
            {
              "name": "automation-knowledge",
              "config": {
                "vectors": {
                  "size": 384,
                  "distance": "Cosine"
                }
              }
            },
            {
              "name": "screen-patterns",
              "config": {
                "vectors": {
                  "size": 384,
                  "distance": "Cosine"
                }
              }
            }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "enabled": true,
        "required": true,
        "models": ["llama3.1:8b", "llava:13b", "nomic-embed-text"]
      },
      "whisper": {
        "enabled": false,
        "required": false
      }
    },
    "agents": {
      "agent-s2": {
        "enabled": true,
        "required": true,
        "mode": "service"
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "api": "http://localhost:3000/api/intelligent-desktop-assistant",
      "health": "http://localhost:3000/api/intelligent-desktop-assistant/health",
      "agent-s2": "http://localhost:4113"
    },
    "initialization": {
      "phases": [
        {
          "name": "pre-validation",
          "tasks": [
            {
              "name": "validate-resources",
              "type": "script",
              "script": "./deployment/validate.sh",
              "timeout": "30s"
            }
          ]
        },
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/seed.sql"
            }
          ]
        },
        {
          "name": "ai-setup",
          "parallel": true,
          "tasks": [
            {
              "name": "load-ai-models",
              "type": "resource-inject",
              "target": "ai.ollama",
              "timeout": "12m"
            },
            {
              "name": "setup-vector-collections",
              "type": "resource-inject",
              "target": "storage.qdrant",
              "timeout": "2m"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "load-app-config",
              "type": "config",
              "file": "initialization/configuration/app-config.json"
            },
            {
              "name": "set-feature-flags",
              "type": "config",
              "file": "initialization/configuration/feature-flags.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "2m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "http://localhost:3000/api/intelligent-desktop-assistant/health",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "http://localhost:3000/api/intelligent-desktop-assistant/health",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "agent-s2": {
          "endpoint": "http://localhost:4113/health",
          "interval": "60s",
          "timeout": "10s"
        },
        "ollama": {
          "endpoint": "http://localhost:11434/api/tags",
          "interval": "60s",
          "timeout": "15s"
        },
        "qdrant": {
          "endpoint": "http://localhost:6333/health",
          "interval": "60s",
          "timeout": "10s"
        },
        "database": {
          "type": "tcp",
          "port": 5432,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "300ms",
          "p95": "1000ms",
          "p99": "3000ms"
        },
        "throughput": {
          "rps": 20,
          "concurrent": 10
        },
        "errorRate": {
          "threshold": "3%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS intelligent_desktop_assistant"
        },
        {
          "name": "clear-vector-collections",
          "type": "resource-cleanup",
          "target": "storage.qdrant"
        }
      ]
    },
    "testing": {
      "enabled": true,
      "timeout": "30m",
      "script": "./test.sh",
      "ui": {
        "required": false,
        "type": "api",
        "url": "http://localhost:3000/api/intelligent-desktop-assistant"
      },
      "performance": {
        "loadTest": {
          "users": 10,
          "duration": "5m",
          "rampUp": "30s"
        }
      }
    },
    "resources": {
      "requests": {
        "cpu": "500m",
        "memory": "1Gi"
      },
      "limits": {
        "cpu": "2000m",
        "memory": "4Gi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Intelligent automation assistant for business workflows and customer service tasks",
      "targetMarket": "Small to medium businesses, customer service teams, and knowledge workers needing desktop automation",
      "painPoints": [
        "Repetitive desktop tasks consuming significant time daily",
        "Inconsistent execution of complex multi-step workflows",
        "Need for 24/7 customer service automation without human intervention"
      ],
      "solution": "AI-powered desktop assistant with screen analysis and intelligent workflow automation capabilities",
      "competitiveAdvantage": "Advanced screen understanding with Agent-S2 integration and local AI processing for privacy",
      "revenuePotential": {
        "initial": "$3,000",
        "recurring": "$8,000",
        "expansion": "$15,000",
        "totalEstimate": "$26,000"
      },
      "marketDemand": {
        "level": "high",
        "growth": "25% annually",
        "evidence": "Growing demand for RPA and desktop automation solutions in SMB market"
      },
      "roi": {
        "developmentCost": "$4,000",
        "timeToMarket": "2 weeks",
        "breakEven": "3 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "4m",
        "responseTime": {
          "p50": "300ms",
          "p95": "1000ms",
          "p99": "3000ms"
        },
        "throughput": {
          "minimum": 10,
          "target": 20,
          "peak": 100
        },
        "availability": "99.7%",
        "errorRate": "<3%"
      },
      "resources": {
        "cpu": {
          "minimum": "1.0",
          "target": "2.0",
          "maximum": "4.0"
        },
        "memory": {
          "minimum": "2Gi",
          "target": "4Gi",
          "maximum": "8Gi"
        },
        "storage": {
          "database": "20Gi",
          "vectors": "10Gi",
          "screenshots": "50Gi"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "Intelligent Desktop Assistant",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Your Company",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#0ea5e9",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "intelligent_desktop_assistant",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "default": 3000,
          "description": "Application port"
        },
        "AGENT_S2_PORT": {
          "type": "number",
          "default": 4113,
          "description": "Agent-S2 automation port"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": false
        },
        "notifications": {
          "enabled": true,
          "channels": ["email", "webhook"]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "screenAnalysis": {
          "enabled": true,
          "provider": "agent-s2"
        },
        "voiceInput": {
          "enabled": false,
          "provider": "whisper"
        }
      },
      "integrations": [
        {
          "name": "CRM Systems",
          "type": "api",
          "required": false
        },
        {
          "name": "Help Desk Software",
          "type": "webhook",
          "required": false
        },
        {
          "name": "Business Applications",
          "type": "automation",
          "required": false
        }
      ]
    },
    "category": "ai-assistance",
    "complexity": "advanced",
    "marketDemand": "high"
  }
}
