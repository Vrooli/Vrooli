{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "chore-tracking",
    "displayName": "ChoreQuest",
    "description": "Gamified chore tracking with points, achievements, and cute quirky UX for making cleaning fun",
    "version": "1.0.0",
    "type": "lifestyle-application",
    "category": "lifestyle",
    "tags": [
      "chores",
      "gamification",
      "cleaning",
      "tasks",
      "points",
      "achievements",
      "family",
      "javascript-ui",
      "fun"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8700-8799",
      "fallback": "auto",
      "description": "ChoreQuest API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3700-3799",
      "fallback": "auto",
      "description": "ChoreQuest UI port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "shared_workflows": [
          "ollama"
        ],
        "initialization": [
          {
            "file": "initialization/n8n/chore-scheduler.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/points-calculator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/achievement-tracker.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/reward-manager.json",
            "type": "workflow"
          }
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store users, chores, points, achievements, rewards, and schedules",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "seed"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": false,
        "purpose": "Cache leaderboard, active sessions, and real-time point updates"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize ChoreQuest",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && chmod +x chore-tracker && ln -sf $(pwd)/chore-tracker /usr/local/bin/chore-tracker",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o chore-tracker-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸŽ® ChoreQuest initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start ChoreQuest services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} POSTGRES_URL=postgres://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/chore_tracking REDIS_URL=redis://localhost:${RESOURCE_PORTS[redis]} ./chore-tracker-api &",
          "description": "Start API server",
          "background": true,
          "condition": {
            "file_exists": "api/chore-tracker-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT npm start &",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'ðŸš€ ChoreQuest running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test ChoreQuest services",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-chores",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/chores",
          "description": "Test chores endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop ChoreQuest services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'chore-tracker-api' || true; pkill -f 'npm.*chore-tracking' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}
