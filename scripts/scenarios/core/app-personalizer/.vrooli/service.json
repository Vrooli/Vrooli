{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "app-personalizer",
    "displayName": "App Personalizer",
    "description": "Customize generated apps using prompts or digital twins for personalized experiences",
    "version": "1.0.0",
    "type": "business-application",
    "category": "business",
    "tags": [
      "personalization",
      "customization",
      "app-modification",
      "digital-twin",
      "branding"
    ]
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "file": "initialization/automation/n8n/personalization-pipeline.json"
            }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "codellama"
        ]
      }
    },
    "agents": {
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": false,
        "purpose": "modify app code based on personalization requirements"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "app personalization metadata and configurations"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": false,
        "purpose": "app versions and modification history storage"
      }
    }
  },
  "ports": {
    "ui": {
      "env_var": "UI_PORT",
      "range": "3000-3999",
      "fallback": "auto",
      "description": "Personalization UI port"
    },
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Personalization API port"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize App Personalizer",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ App Personalizer initialized\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  UI: http://localhost:${UI_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start App Personalizer services",
      "steps": [
        {
          "name": "start-services",
          "run": "echo 'Starting App Personalizer services...'",
          "description": "Start personalization services"
        }
      ]
    },
    "test": {
      "description": "Test App Personalizer functionality",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash scenario-test.yaml",
          "description": "Run scenario tests"
        }
      ]
    },
    "stop": {
      "description": "Stop App Personalizer services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'app-personalizer' || true",
          "description": "Stop all personalizer processes"
        }
      ]
    }
  }
}