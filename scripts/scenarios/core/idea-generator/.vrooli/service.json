{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "idea-generator",
    "displayName": "Idea Generator",
    "description": "AI-powered idea generation platform with document processing, semantic search, and agent refinement",
    "version": "1.0.0",
    "type": "business-application",
    "category": "business-applications",
    "tags": [
      "ideation",
      "brainstorming",
      "ai",
      "creativity",
      "innovation",
      "document-processing",
      "semantic-search",
      "windmill-ui",
      "multi-agent"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Idea generator coordination API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "shared_workflows": [
          "ollama",
          "embedding-generator",
          "smart-semantic-search"
        ],
        "initialization": [
          {
            "file": "initialization/n8n/idea-generation-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/document-processing-pipeline.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/agent-refinement-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/semantic-search-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/campaign-sync-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/chat-refinement-workflow.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/idea-generator-app.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "mistral",
          "nomic-embed-text"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store campaigns, ideas, chat history, and user data",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "Store uploaded documents and processed content",
        "initialization": [
          {
            "file": "initialization/storage/minio/buckets.json",
            "type": "config"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Vector database for semantic search of ideas and documents - enables AI-powered similarity matching and content discovery",
        "initialization": [
          {
            "file": "initialization/storage/qdrant/collections.json",
            "type": "config"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache and real-time chat session management"
      }
    },
    "utility": {
      "unstructured-io": {
        "type": "unstructured-io",
        "enabled": true,
        "required": true,
        "purpose": "Document processing and text extraction for uploaded files"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Idea Generator",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o idea-generator-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Idea Generator initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  Vector Search: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  Document Storage: http://localhost:${RESOURCE_PORTS[minio]}\\n  CLI: idea-generator --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start idea generator with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT ./idea-generator-api &",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/idea-generator-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Idea Generator running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$SERVICE_PORT\\n  CLI: idea-generator --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test idea generator API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-campaigns-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/campaigns",
          "description": "Test API campaigns endpoint"
        },
        {
          "name": "test-workflows-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/workflows",
          "description": "Test API workflows endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats idea-generator.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/idea-generator.bats"
          }
        },
        {
          "name": "test-integration",
          "run": "./test.sh",
          "description": "Run integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop idea generator services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'idea-generator-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Idea Generator services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}