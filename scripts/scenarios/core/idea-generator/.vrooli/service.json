{
  "version": "1.0.0",
  "service": {
    "name": "idea-generator",
    "displayName": "Idea Generator",
    "description": "AI-powered idea generation platform with document processing, semantic search, and agent refinement",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "ideation",
      "brainstorming",
      "ai",
      "creativity",
      "innovation"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ]
  },
  "resources": {
    "storage": {
      "postgres": {
        "enabled": true,
        "purpose": "Store ideas, templates, and user data"
      },
      "minio": {
        "enabled": true,
        "buckets": [
          "documents",
          "exports",
          "templates"
        ],
        "purpose": "Store documents and generated content"
      },
      "qdrant": {
        "enabled": true,
        "purpose": "Vector storage for semantic search"
      }
    },
    "automation": {
      "n8n": {
        "enabled": true,
        "workflows": [
          "idea-generation-workflow",
          "document-processing-pipeline",
          "agent-refinement-workflow",
          "semantic-search-workflow"
        ],
        "purpose": "Orchestrate idea generation and refinement workflows"
      }
    },
    "ai": {
      "ollama": {
        "enabled": true,
        "models": [
          "llama3.2",
          "mistral"
        ],
        "purpose": "Generate and refine ideas"
      }
    }
  },
  "deployment": {
    "ports": {
      "ui": 3500,
      "api": 8500
    }
  },
  "features": {
    "idea_templates": {
      "enabled": true,
      "description": "Pre-built templates for various idea types"
    },
    "document_processing": {
      "enabled": true,
      "description": "Process documents to extract ideas and context"
    },
    "semantic_search": {
      "enabled": true,
      "description": "Search ideas using semantic similarity"
    },
    "agent_refinement": {
      "enabled": true,
      "description": "Use AI agents to refine and expand ideas"
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Idea Generator",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/lib/resources/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Idea Generator initialized\\n  Windmill Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Qdrant Vector Search: http://localhost:${RESOURCE_PORTS[qdrant]}\\n  MinIO Document Storage: http://localhost:${RESOURCE_PORTS[minio]}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start idea generator services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh",
          "description": "Start idea generator services"
        }
      ]
    },
    "test": {
      "description": "Test idea generator functionality",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash test.sh",
          "description": "Execute integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop idea generator services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'idea-generator' || true",
          "description": "Stop all idea generator processes"
        }
      ]
    },
    "build": {
      "description": "Build idea generator artifacts",
      "steps": [
        {
          "name": "build-artifacts",
          "run": "./scripts/manage.sh build"
        }
      ]
    },
    "test": {
      "description": "Run idea generator tests",
      "steps": [
        {
          "name": "run-tests",
          "run": "./test.sh"
        }
      ]
    },
    "clean": {
      "description": "Clean build artifacts and temporary files",
      "steps": [
        {
          "name": "clean-artifacts",
          "run": "rm -rf dist/ build/ .next/ node_modules/ .cache/ || true"
        }
      ]
    }
  }
}