{
  "semantic_search": {
    "enabled": true,
    "embedding_model": "text-embedding-ada-002",
    "embedding_dimensions": 1536,
    "similarity_threshold": 0.7,
    "max_results": 20,
    "boost_factors": {
      "title_match": 2.0,
      "exact_phrase": 1.5,
      "recent_items": 1.2,
      "same_campaign": 1.3,
      "user_created": 1.1
    }
  },
  "hybrid_search": {
    "enabled": true,
    "combine_semantic_and_keyword": true,
    "semantic_weight": 0.7,
    "keyword_weight": 0.3,
    "rerank_results": true
  },
  "filters": {
    "available_filters": [
      {
        "name": "campaign",
        "type": "select",
        "label": "Campaign",
        "field": "campaign_id"
      },
      {
        "name": "status",
        "type": "multiselect", 
        "label": "Status",
        "field": "status",
        "options": ["draft", "refined", "archived", "finalized"]
      },
      {
        "name": "category",
        "type": "multiselect",
        "label": "Category", 
        "field": "category"
      },
      {
        "name": "tags",
        "type": "tags",
        "label": "Tags",
        "field": "tags"
      },
      {
        "name": "date_range",
        "type": "daterange",
        "label": "Created",
        "field": "created_at"
      },
      {
        "name": "score_range", 
        "type": "range",
        "label": "Score",
        "field": "score",
        "min": 0,
        "max": 10
      },
      {
        "name": "content_type",
        "type": "select",
        "label": "Type",
        "options": ["idea", "document"],
        "default": "all"
      }
    ]
  },
  "faceted_search": {
    "enabled": true,
    "max_facet_values": 10,
    "facets": [
      {
        "field": "category",
        "label": "Categories",
        "type": "terms"
      },
      {
        "field": "tags",
        "label": "Tags", 
        "type": "terms",
        "max_values": 15
      },
      {
        "field": "status",
        "label": "Status",
        "type": "terms"
      },
      {
        "field": "created_at",
        "label": "Time Period",
        "type": "date_histogram",
        "interval": "month"
      }
    ]
  },
  "autocomplete": {
    "enabled": true,
    "min_characters": 2,
    "max_suggestions": 8,
    "include_recent_searches": true,
    "include_popular_terms": true,
    "fuzzy_matching": true,
    "highlight_matches": true
  },
  "search_analytics": {
    "enabled": true,
    "track_queries": true,
    "track_clicks": true,
    "track_zero_results": true,
    "popular_terms_window": "30d"
  },
  "performance": {
    "cache_results": true,
    "cache_ttl": 300,
    "debounce_delay": 300,
    "pagination_size": 20,
    "preload_next_page": true
  },
  "relevance_tuning": {
    "title_boost": 3.0,
    "content_boost": 1.0,
    "tags_boost": 2.0,
    "recent_boost_decay": "7d",
    "user_interaction_boost": 1.5
  },
  "query_expansion": {
    "enabled": true,
    "synonym_matching": true,
    "stemming": true,
    "fuzzy_distance": 2
  },
  "result_ranking": {
    "factors": [
      {
        "name": "relevance",
        "weight": 0.4
      },
      {
        "name": "recency", 
        "weight": 0.2
      },
      {
        "name": "user_interaction",
        "weight": 0.2
      },
      {
        "name": "content_quality",
        "weight": 0.2
      }
    ]
  }
}