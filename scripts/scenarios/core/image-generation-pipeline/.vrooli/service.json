{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "image-generation-pipeline",
    "displayName": "Enterprise Image Generation Pipeline",
    "description": "Enterprise-grade AI image generation platform with voice briefings, multi-brand management, and quality control",
    "version": "1.0.0",
    "type": "business-application",
    "category": "creative-tools",
    "tags": [
      "visual-generation",
      "voice-enabled",
      "enterprise-ready",
      "multimodal",
      "windmill-ui",
      "high-revenue-potential",
      "brand-management",
      "quality-control",
      "comfyui-workflows"
    ]
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            { "file": "initialization/automation/n8n/main-workflow.json" }
          ]
        }
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            { "file": "initialization/automation/windmill/windmill-app.json" }
          ]
        }
      },
      "comfyui": {
        "type": "comfyui",
        "enabled": true,
        "required": true,
        "purpose": "AI image generation workflows",
        "initialization": {
          "workflows": [
            { "file": "initialization/workflows/comfyui/brand-workflow.json" },
            { "file": "initialization/workflows/comfyui/qc-workflow.json" }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": ["llama3.1:8b", "nomic-embed-text", "llava:13b"]
      },
      "whisper": {
        "type": "whisper",
        "enabled": true,
        "required": true,
        "purpose": "voice-to-text for image briefings"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "campaign and brand data"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "purpose": "style and brand vector embeddings"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "generated images and brand assets storage"
      },
      "vault": {
        "type": "vault",
        "enabled": false,
        "required": false,
        "purpose": "API keys and secrets management"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize image generation pipeline",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/lib/resources/runtime-engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Image Generation Pipeline initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  ComfyUI: http://localhost:${RESOURCE_PORTS[comfyui]}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start image generation services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh",
          "description": "Start all image generation services"
        }
      ]
    },
    "test": {
      "description": "Run image generation tests",
      "steps": [
        {
          "name": "run-tests",
          "run": "./test.sh",
          "description": "Execute integration tests"
        }
      ]
    }
  }
}