{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "inheritance": {
    "extends": "../../../../../.vrooli/service.json",
    "merge": {
      "strategy": "merge",
      "arrays": "concat"
    }
  },
  "service": {
    "name": "image-generation-pipeline",
    "displayName": "Enterprise Image Generation Pipeline",
    "description": "Enterprise-grade AI image generation platform with voice briefings, multi-brand management, and quality control",
    "version": "1.0.0",
    "type": "business-application",
    "category": "creative-tools",
    "tags": [
      "visual-generation",
      "voice-enabled",
      "enterprise-ready",
      "multimodal",
      "windmill-ui",
      "high-revenue-potential",
      "brand-management",
      "quality-control",
      "comfyui-workflows"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Image generation API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "file": "initialization/automation/n8n/main-workflow.json"
            }
          ]
        }
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "file": "initialization/automation/windmill/windmill-app.json"
            }
          ]
        }
      },
      "comfyui": {
        "type": "comfyui",
        "enabled": true,
        "required": true,
        "purpose": "AI image generation workflows",
        "initialization": {
          "workflows": [
            {
              "file": "initialization/workflows/comfyui/brand-workflow.json"
            },
            {
              "file": "initialization/workflows/comfyui/qc-workflow.json"
            }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.1:8b",
          "nomic-embed-text",
          "llava:13b"
        ]
      },
      "whisper": {
        "type": "whisper",
        "enabled": true,
        "required": true,
        "purpose": "voice-to-text for image briefings"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "campaign and brand data"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": false,
        "purpose": "style and brand vector embeddings"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "generated images and brand assets storage"
      },
      "vault": {
        "type": "vault",
        "enabled": false,
        "required": false,
        "purpose": "API keys and secrets management"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize image generation pipeline",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/lib/resources/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Image Generation Pipeline initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  ComfyUI: http://localhost:${RESOURCE_PORTS[comfyui]}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start image generation services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh &",
          "description": "Start all image generation services in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3 && curl -sf http://localhost:${RESOURCE_PORTS[windmill]}/api/version > /dev/null",
          "description": "Wait for services to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 2
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  ComfyUI: http://localhost:${RESOURCE_PORTS[comfyui]}'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run image generation tests",
      "steps": [
        {
          "name": "test-services-health",
          "run": "curl -sf http://localhost:${RESOURCE_PORTS[windmill]}/api/version && curl -sf http://localhost:${RESOURCE_PORTS[n8n]}/healthz && curl -sf http://localhost:${RESOURCE_PORTS[comfyui]}",
          "description": "Test service health endpoints"
        },
        {
          "name": "run-integration-tests",
          "run": "./test.sh",
          "description": "Execute integration test suite",
          "condition": {
            "file_exists": "test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop image generation services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'startup.sh' || true",
          "description": "Stop image generation processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Image Generation Pipeline services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}