{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "scenario-generator-v1",
    "displayName": "Scenario Generator V1",
    "description": "A meta-scenario that generates Vrooli scenarios from customer requirements using AI",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "meta-scenario",
      "code-generation",
      "ai-development",
      "saas-generator",
      "business-automation",
      "claude-code",
      "ultra-high-revenue-potential"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/scenario-generator-v1"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql",
        "enabled": true,
        "version": "16",
        "required": true,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/database/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/database/seed.sql"
            }
          ]
        }
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "initialization": {
          "buckets": [
            {
              "name": "generated-scenarios",
              "policy": "private"
            },
            {
              "name": "scenario-templates",
              "policy": "private"
            },
            {
              "name": "customer-requirements",
              "policy": "private"
            },
            {
              "name": "code-artifacts",
              "policy": "private"
            }
          ]
        }
      },
      "redis": {
        "type": "redis",
        "enabled": false,
        "required": false
      }
    },
    "ai": {
      "ollama": {
        "enabled": false,
        "required": false,
        "models": ["llama3.1:8b", "nomic-embed-text"]
      }
    },
    "automation": {
      "windmill": {
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "path": "f/scenario-generator/dashboard",
              "file": "initialization/ui/windmill-generator-app.json",
              "summary": "Scenario Generation Dashboard"
            }
          ],
          "scripts": [
            {
              "name": "scenario-processor",
              "file": "initialization/scripts/scenario-processor.ts",
              "language": "typescript"
            },
            {
              "name": "code-generator",
              "file": "initialization/scripts/code-generator.ts",
              "language": "typescript"
            },
            {
              "name": "requirement-analyzer",
              "file": "initialization/scripts/requirement-analyzer.ts",
              "language": "typescript"
            }
          ]
        }
      },
      "n8n": {
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "name": "scenario-generation-pipeline",
              "file": "initialization/workflows/n8n/generation-pipeline.json",
              "enabled": true,
              "tags": ["generation", "automation"]
            },
            {
              "name": "code-review-workflow",
              "file": "initialization/workflows/n8n/code-review.json",
              "enabled": true,
              "tags": ["quality", "review"]
            }
          ]
        }
      }
    },
    "agents": {
      "claude-code": {
        "enabled": true,
        "required": true,
        "mode": "service"
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "api": "http://localhost:3000/api/scenario-generator-v1",
      "health": "http://localhost:3000/api/scenario-generator-v1/health",
      "windmill": "http://localhost:8000",
      "n8n": "http://localhost:5678",
      "minio": "http://localhost:9000",
      "claude-code": "http://localhost:4112"
    },
    "initialization": {
      "phases": [
        {
          "name": "pre-validation",
          "tasks": [
            {
              "name": "validate-resources",
              "type": "script",
              "script": "./deployment/validate.sh",
              "timeout": "30s"
            }
          ]
        },
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/seed.sql"
            }
          ]
        },
        {
          "name": "storage-setup",
          "parallel": true,
          "tasks": [
            {
              "name": "setup-minio-buckets",
              "type": "resource-inject",
              "target": "storage.minio",
              "timeout": "2m"
            },
            {
              "name": "setup-redis-cache",
              "type": "resource-inject",
              "target": "storage.redis",
              "timeout": "1m"
            }
          ]
        },
        {
          "name": "ai-setup",
          "tasks": [
            {
              "name": "configure-claude-code",
              "type": "resource-inject",
              "target": "agents.claude-code",
              "timeout": "3m"
            },
            {
              "name": "load-ai-models",
              "type": "resource-inject",
              "target": "ai.ollama",
              "timeout": "10m"
            }
          ]
        },
        {
          "name": "workflow-deployment",
          "parallel": true,
          "tasks": [
            {
              "name": "deploy-n8n-workflows",
              "type": "resource-inject",
              "target": "automation.n8n",
              "config": "initialization/workflows/n8n/",
              "timeout": "5m"
            },
            {
              "name": "deploy-windmill-apps",
              "type": "resource-inject",
              "target": "automation.windmill",
              "config": "initialization/ui/",
              "timeout": "3m"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "load-app-config",
              "type": "config",
              "file": "initialization/configuration/app-config.json"
            },
            {
              "name": "set-generation-settings",
              "type": "config",
              "file": "initialization/configuration/generation-settings.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "3m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "http://localhost:3000/api/scenario-generator-v1/health",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "http://localhost:3000/api/scenario-generator-v1/health",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "windmill": {
          "endpoint": "http://localhost:8000/api/version",
          "interval": "60s",
          "timeout": "10s"
        },
        "n8n": {
          "endpoint": "http://localhost:5678/api/v1/info",
          "interval": "60s",
          "timeout": "10s"
        },
        "claude-code": {
          "endpoint": "http://localhost:4112/health",
          "interval": "60s",
          "timeout": "15s"
        },
        "minio": {
          "endpoint": "http://localhost:9000/minio/health/ready",
          "interval": "60s",
          "timeout": "10s"
        },
        "ollama": {
          "endpoint": "http://localhost:11434/api/tags",
          "interval": "60s",
          "timeout": "15s"
        },
        "redis": {
          "type": "tcp",
          "port": 6379,
          "interval": "30s"
        },
        "database": {
          "type": "tcp",
          "port": 5432,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "2000ms",
          "p95": "10000ms",
          "p99": "30000ms"
        },
        "throughput": {
          "rps": 2,
          "concurrent": 3
        },
        "errorRate": {
          "threshold": "5%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "delete-windmill-apps",
          "type": "resource-cleanup",
          "target": "automation.windmill"
        },
        {
          "name": "delete-n8n-workflows",
          "type": "resource-cleanup",
          "target": "automation.n8n"
        },
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS scenario_generator_v1"
        },
        {
          "name": "clear-storage-buckets",
          "type": "resource-cleanup",
          "target": "storage.minio"
        }
      ]
    },
    "testing": {
      "enabled": true,
      "timeout": "60m",
      "script": "./test.sh",
      "ui": {
        "required": true,
        "type": "windmill",
        "url": "http://localhost:8000"
      },
      "performance": {
        "loadTest": {
          "users": 2,
          "duration": "10m",
          "rampUp": "2m"
        }
      }
    },
    "resources": {
      "requests": {
        "cpu": "2000m",
        "memory": "4Gi"
      },
      "limits": {
        "cpu": "8000m",
        "memory": "16Gi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Revolutionary AI-powered SaaS generator that creates complete business applications from customer requirements in minutes",
      "targetMarket": "Software development agencies, digital transformation consultants, entrepreneurs, and enterprises seeking rapid application development",
      "painPoints": [
        "Custom software development taking months and costing hundreds of thousands of dollars",
        "Shortage of skilled developers creating bottlenecks in digital transformation",
        "Need for rapid prototyping and MVP development to validate business ideas quickly"
      ],
      "solution": "AI-powered scenario generator that automatically creates complete SaaS applications with full deployment configurations from natural language requirements",
      "competitiveAdvantage": "First-to-market meta-scenario system using Claude Code for autonomous application generation with complete infrastructure automation",
      "revenuePotential": {
        "initial": "$25,000",
        "recurring": "$75,000",
        "expansion": "$200,000",
        "totalEstimate": "$300,000"
      },
      "marketDemand": {
        "level": "ultra-high",
        "growth": "60% annually",
        "evidence": "Explosive demand for no-code/low-code solutions and AI-powered development tools in the face of developer shortage"
      },
      "roi": {
        "developmentCost": "$30,000",
        "timeToMarket": "6 weeks",
        "breakEven": "8 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "12m",
        "responseTime": {
          "p50": "2000ms",
          "p95": "10000ms",
          "p99": "30000ms"
        },
        "throughput": {
          "minimum": 1,
          "target": 2,
          "peak": 5
        },
        "availability": "99.0%",
        "errorRate": "<5%"
      },
      "resources": {
        "cpu": {
          "minimum": "4.0",
          "target": "8.0",
          "maximum": "16.0"
        },
        "memory": {
          "minimum": "8Gi",
          "target": "16Gi",
          "maximum": "32Gi"
        },
        "storage": {
          "database": "500Gi",
          "scenarios": "2Ti",
          "templates": "500Gi",
          "code-artifacts": "1Ti"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "Scenario Generator V1",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Your Company",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#9333ea",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "scenario_generator_v1",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "default": 3000,
          "description": "Application port"
        },
        "WINDMILL_PORT": {
          "type": "number",
          "default": 8000,
          "description": "Windmill UI port"
        },
        "N8N_PORT": {
          "type": "number",
          "default": 5678,
          "description": "n8n workflow editor port"
        },
        "CLAUDE_CODE_PORT": {
          "type": "number",
          "default": 4112,
          "description": "Claude Code agent port"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": true
        },
        "notifications": {
          "enabled": true,
          "channels": ["email", "webhook", "slack"]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "codeGeneration": {
          "enabled": true,
          "provider": "claude-code"
        },
        "workflowAutomation": {
          "enabled": true,
          "provider": "n8n"
        },
        "uiGeneration": {
          "enabled": true,
          "provider": "windmill"
        },
        "scenarioTemplates": {
          "enabled": true,
          "provider": "minio"
        }
      },
      "integrations": [
        {
          "name": "Version Control Systems",
          "type": "api",
          "required": false
        },
        {
          "name": "Cloud Deployment Services",
          "type": "api",
          "required": false
        },
        {
          "name": "Customer Requirements Management",
          "type": "webhook",
          "required": false
        }
      ]
    },
    "category": "ai-development",
    "complexity": "advanced",
    "marketDemand": "ultra-high"
  }
}
