{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "scenario-generator-v1",
    "displayName": "Scenario Generator V1",
    "description": "A meta-scenario that generates Vrooli scenarios from customer requirements using AI",
    "version": "1.0.0",
    "type": "business-application",
    "category": "ai-development",
    "tags": [
      "meta-scenario",
      "code-generation",
      "ai-development",
      "saas-generator",
      "business-automation",
      "claude-code",
      "ultra-high-revenue-potential"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Scenario generator API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/main-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/planning-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/building-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/validation-workflow.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/scenario-dashboard-app.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": false,
        "required": false,
        "models": [
          "llama3.1:8b",
          "nomic-embed-text"
        ]
      }
    },
    "agents": {
      "claude-code": {
        "type": "claude-code",
        "enabled": true,
        "required": true,
        "purpose": "AI-powered code generation and scenario building"
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "scenario templates and generation metadata"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "generated scenario artifacts and templates"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Scenario Generator V1",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "check-claude-code",
          "run": "bash ${VROOLI_ROOT:-/home/matthalloran8/Vrooli}/scripts/resources/agents/claude-code/manage.sh --action health-check --check-type basic || echo 'Claude Code not available - generation features will be limited'",
          "description": "Verify Claude Code availability for AI generation"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Scenario Generator V1 initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Storage: http://localhost:${RESOURCE_PORTS[minio]}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start scenario generator services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh &",
          "description": "Start all scenario generator services in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3 && curl -sf http://localhost:${RESOURCE_PORTS[windmill]}/api/version > /dev/null",
          "description": "Wait for services to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 2
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Storage: http://localhost:${RESOURCE_PORTS[minio]}'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run scenario generator tests",
      "steps": [
        {
          "name": "test-services-health",
          "run": "curl -sf http://localhost:${RESOURCE_PORTS[windmill]}/api/version && curl -sf http://localhost:${RESOURCE_PORTS[n8n]}/healthz",
          "description": "Test service health endpoints"
        },
        {
          "name": "run-integration-tests",
          "run": "./test.sh",
          "description": "Execute integration test suite",
          "condition": {
            "file_exists": "test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop scenario generator services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'startup.sh' || true",
          "description": "Stop scenario generator processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Scenario Generator V1 services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
