{
  "scenario_generator": {
    "version": "1.0.0",
    "defaults": {
      "planning_iterations": 3,
      "implementation_iterations": 2,
      "validation_iterations": 5,
      "max_concurrent_scenarios": 3,
      "timeout_minutes": 60
    },
    "campaigns": {
      "categories": [
        "SaaS Businesses",
        "AI Assistants",
        "Automation Tools",
        "Analytics Platforms",
        "Content Creation",
        "Custom Projects"
      ]
    },
    "complexity_levels": {
      "simple": {
        "name": "Simple",
        "estimated_value": "$5K-$15K",
        "typical_duration_minutes": 15
      },
      "intermediate": {
        "name": "Intermediate",
        "estimated_value": "$15K-$35K",
        "typical_duration_minutes": 30
      },
      "advanced": {
        "name": "Advanced",
        "estimated_value": "$35K-$75K",
        "typical_duration_minutes": 60
      }
    },
    "claude_code": {
      "max_turns_per_batch": 50,
      "retry_on_failure": true,
      "retry_attempts": 3,
      "allowed_tools": "Read,Edit,Write,MultiEdit,Bash,Grep,Glob,LS,WebSearch,WebFetch"
    },
    "validation": {
      "scenario_to_app_path": "${VROOLI_ROOT:-/home/matthalloran8/Vrooli}/scripts/scenarios/tools/scenario-to-app.sh",
      "max_validation_attempts": 10,
      "dry_run_first": true
    },
    "storage": {
      "artifacts_bucket": "scenario-artifacts",
      "plans_bucket": "scenario-plans",
      "outputs_bucket": "scenario-outputs"
    },
    "ui": {
      "refresh_interval_seconds": 5,
      "max_logs_per_scenario": 1000,
      "enable_dark_mode": true
    }
  }
}