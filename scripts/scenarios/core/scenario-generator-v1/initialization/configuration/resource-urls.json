{
  "ai": {
    "ollama": {
      "base_url": "${OLLAMA_URL:-http://localhost:11434}",
      "health_endpoint": "/api/tags",
      "generate_endpoint": "/api/generate",
      "embeddings_endpoint": "/api/embeddings",
      "timeout_seconds": 30
    },
    "whisper": {
      "base_url": "${WHISPER_URL:-http://localhost:8090}",
      "health_endpoint": "/",
      "transcribe_endpoint": "/transcribe",
      "timeout_seconds": 60
    },
    "comfyui": {
      "base_url": "${COMFYUI_URL:-http://localhost:8188}",
      "health_endpoint": "/",
      "api_endpoint": "/api",
      "upload_endpoint": "/upload",
      "timeout_seconds": 120
    },
    "unstructured_io": {
      "base_url": "${UNSTRUCTURED_IO_URL:-http://localhost:11450}",
      "health_endpoint": "/healthcheck",
      "process_endpoint": "/general/v0/general",
      "timeout_seconds": 60
    }
  },
  
  "automation": {
    "n8n": {
      "base_url": "${N8N_URL:-http://localhost:5678}",
      "health_endpoint": "/healthz",
      "api_endpoint": "/api/v1",
      "webhook_endpoint": "/webhook",
      "workflows_endpoint": "/api/v1/workflows",
      "timeout_seconds": 30
    },
    "windmill": {
      "base_url": "${WINDMILL_URL:-http://localhost:5681}",
      "health_endpoint": "/api/version",
      "api_endpoint": "/api",
      "apps_endpoint": "/api/apps",
      "scripts_endpoint": "/api/scripts",
      "timeout_seconds": 30
    },
    "node_red": {
      "base_url": "${NODE_RED_URL:-http://localhost:1880}",
      "health_endpoint": "/",
      "api_endpoint": "/",
      "flows_endpoint": "/flows",
      "admin_endpoint": "/admin",
      "timeout_seconds": 30
    },
    "huginn": {
      "base_url": "${HUGINN_URL:-http://localhost:4111}",
      "health_endpoint": "/",
      "api_endpoint": "/api/v1",
      "agents_endpoint": "/api/v1/agents",
      "timeout_seconds": 30
    }
  },
  
  "agents": {
    "agent_s2": {
      "base_url": "${AGENT_S2_URL:-http://localhost:4113}",
      "health_endpoint": "/health",
      "screenshot_endpoint": "/screenshot",
      "mouse_endpoint": "/mouse",
      "keyboard_endpoint": "/keyboard",
      "timeout_seconds": 30
    },
    "browserless": {
      "base_url": "${BROWSERLESS_URL:-http://localhost:4110}",
      "health_endpoint": "/",
      "screenshot_endpoint": "/chrome/screenshot",
      "pdf_endpoint": "/chrome/pdf",
      "timeout_seconds": 60
    },
    "claude_code": {
      "type": "cli",
      "command": "claude",
      "timeout_seconds": 300
    }
  },
  
  "search": {
    "searxng": {
      "base_url": "${SEARXNG_URL:-http://localhost:9200}",
      "health_endpoint": "/",
      "search_endpoint": "/search",
      "api_endpoint": "/search",
      "timeout_seconds": 30
    }
  },
  
  "storage": {
    "postgres": {
      "host": "${POSTGRES_HOST:-localhost}",
      "port": "${POSTGRES_PORT:-5433}",
      "database": "${POSTGRES_DB:-scenario_generator_v1}",
      "username": "${POSTGRES_USER:-postgres}",
      "password": "${POSTGRES_PASSWORD:-postgres}",
      "connection_url": "postgresql://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD:-postgres}@${POSTGRES_HOST:-localhost}:${POSTGRES_PORT:-5433}/${POSTGRES_DB:-scenario_generator_v1}",
      "max_connections": 20,
      "timeout_seconds": 30
    },
    "redis": {
      "host": "${REDIS_HOST:-localhost}",
      "port": "${REDIS_PORT:-6380}",
      "database": 0,
      "connection_url": "redis://${REDIS_HOST:-localhost}:${REDIS_PORT:-6380}/0",
      "max_connections": 10,
      "timeout_seconds": 5
    },
    "minio": {
      "base_url": "${MINIO_URL:-http://localhost:9000}",
      "console_url": "${MINIO_CONSOLE_URL:-http://localhost:9001}",
      "access_key": "${MINIO_ACCESS_KEY:-minioadmin}",
      "secret_key": "${MINIO_SECRET_KEY:-minioadmin}",
      "bucket": "${MINIO_BUCKET:-scenario-generator-v1-assets}",
      "timeout_seconds": 30
    },
    "qdrant": {
      "base_url": "${QDRANT_URL:-http://localhost:6333}",
      "health_endpoint": "/",
      "collections_endpoint": "/collections",
      "points_endpoint": "/collections/{collection}/points",
      "timeout_seconds": 30
    },
    "questdb": {
      "http_url": "${QUESTDB_HTTP_URL:-http://localhost:9010}",
      "influx_url": "${QUESTDB_INFLUX_URL:-http://localhost:9011}",
      "health_endpoint": "/",
      "query_endpoint": "/exec",
      "timeout_seconds": 30
    },
    "vault": {
      "base_url": "${VAULT_URL:-http://localhost:8200}",
      "health_endpoint": "/v1/sys/health",
      "secrets_endpoint": "/v1/secret",
      "timeout_seconds": 15
    }
  },
  
  "application": {
    "base_url": "http://localhost:3000",
    "api_prefix": "/api/scenario-generator-v1",
    "health_endpoint": "/api/scenario-generator-v1/health",
    "metrics_endpoint": "/api/scenario-generator-v1/metrics",
    "status_endpoint": "/api/scenario-generator-v1/status"
  },
  
  "monitoring": {
    "health_check_interval_seconds": 30,
    "metrics_collection_interval_seconds": 60,
    "alert_endpoints": {
      "errors": "/api/scenario-generator-v1/alerts/errors",
      "performance": "/api/scenario-generator-v1/alerts/performance",
      "resource_health": "/api/scenario-generator-v1/alerts/resources"
    }
  }
}