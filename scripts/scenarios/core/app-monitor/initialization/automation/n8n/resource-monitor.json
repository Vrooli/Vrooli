          "value": {
            "app_id": "={{ $json.app_id }}",
            "status": "running",
            "cpu_usage": "={{ $json.cpu_usage }}",
            "memory_usage": "={{ $json.memory_usage }}",
            "network_in": "={{ $json.network_in }}",
            "network_out": "={{ $json.network_out }}",
            "container_id": "={{ $json.container_id }}",
            "pid": "={{ $json.pid }}",
            "timestamp": "={{ $json.timestamp }}"
          },
          "schema": []
        },
        "options": {}
      },
      "id": "7u8v9w0x-1y2z-3a4b-5c6d-7e8f9g0h1i2j",
