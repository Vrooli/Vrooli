      "id": "4r5s6t7u-8v9w-0x1y-2z3a-4b5c6d7e8f9g",
      "name": "Process Each App",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 3,
      "position": [
        700,
        300
      ]
    },
    {
      "parameters": {
        "url": "=unix:///var/run/docker.sock:/containers/{{ $json.config.container_name || $json.name }}/stats?stream=false",
        "options": {
          "timeout": 10000,
          "response": {
            "response": {
              "fullResponse": true,
              "neverError": true
            }
          }
        }
      },
      "id": "5s6t7u8v-9w0x-1y2z-3a4b-5c6d7e8f9g0h",
      "name": "Get Container Stats",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        920,
        300
      ]
    },
    {
      "parameters": {
        "jsCode": "// Parse Docker stats and calculate metrics\nconst stats = $input.item.json.body;\nconst app = $('Get Running Apps').item.json;\n\nif (!stats || stats.statusCode !== 200) {\n  return {\n    json: {\n      app_id: app.id,\n      cpu_usage: 0,\n      memory_usage: 0,\n      error: 'Failed to get container stats'\n    }\n  };\n}\n\nconst data = typeof stats === 'string' ? JSON.parse(stats) : stats;\n\n// Calculate CPU percentage\nconst cpuDelta = data.cpu_stats.cpu_usage.total_usage - data.precpu_stats.cpu_usage.total_usage;\nconst systemDelta = data.cpu_stats.system_cpu_usage - data.precpu_stats.system_cpu_usage;\nconst cpuPercent = systemDelta > 0 ? (cpuDelta / systemDelta) * data.cpu_stats.online_cpus * 100 : 0;\n\n// Calculate Memory usage\nconst memoryUsage = data.memory_stats.usage;\nconst memoryLimit = data.memory_stats.limit;\nconst memoryPercent = memoryLimit > 0 ? (memoryUsage / memoryLimit) * 100 : 0;\n\n// Network stats\nconst networks = data.networks || {};\nlet networkIn = 0;\nlet networkOut = 0;\n\nObject.values(networks).forEach(net => {\n  networkIn += net.rx_bytes || 0;\n  networkOut += net.tx_bytes || 0;\n});\n\nreturn {\n  json: {\n    app_id: app.id,\n    cpu_usage: Math.round(cpuPercent * 100) / 100,\n    memory_usage: Math.round(memoryPercent * 100) / 100,\n    memory_bytes: memoryUsage,\n    network_in: networkIn,\n    network_out: networkOut,\n    container_id: data.id,\n    pid: data.pids_stats?.current || 0,\n    timestamp: new Date().toISOString()\n  }\n};"
      },
      "id": "6t7u8v9w-0x1y-2z3a-4b5c-6d7e8f9g0h1i",
      "name": "Calculate Metrics",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1140,
        300
      ]
    },
    {
      "parameters": {
        "operation": "insert",
        "table": "app_status",
        "columns": {
