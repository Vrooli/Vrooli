{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "secure-document-processing",
    "displayName": "Secure Document Processing Pipeline",
    "description": "Enterprise-grade secure document processing with encryption, audit trails, and compliance automation",
    "version": "1.0.0",
    "type": "business-application",
    "category": "security",
    "tags": [
      "compliance-focused",
      "enterprise-ready",
      "high-revenue-potential",
      "hipaa",
      "gdpr",
      "sox-compliance",
      "security-first",
      "zero-trust",
      "audit-trails"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Secure document processing API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/document-intake.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/process-orchestrator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/prompt-processor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/workflow-executor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/semantic-indexer.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/document-portal.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "unstructured-io": {
        "type": "unstructured-io",
        "enabled": true,
        "required": true,
        "purpose": "secure document processing and text extraction"
      },
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.1:8b",
          "nomic-embed-text"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "document metadata and audit trails"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "encrypted document storage"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "document vector search and compliance metadata"
      },
      "vault": {
        "type": "vault",
        "enabled": true,
        "required": true,
        "purpose": "encryption keys and compliance credentials"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Secure Document Processing Pipeline",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Secure Document Processing initialized\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Vault: http://localhost:${RESOURCE_PORTS[vault]}\\n  Storage: http://localhost:${RESOURCE_PORTS[minio]}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start secure document processing services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh &",
          "description": "Start all secure processing services in background",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 5 && curl -sf http://localhost:${RESOURCE_PORTS[windmill]}/api/version > /dev/null",
          "description": "Wait for services to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 2
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Services running:\\n  Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Vault: http://localhost:${RESOURCE_PORTS[vault]}\\n  Storage: http://localhost:${RESOURCE_PORTS[minio]}'",
          "description": "Display running service URLs"
        }
      ]
    },
    "test": {
      "description": "Run secure document processing tests",
      "steps": [
        {
          "name": "test-services-health",
          "run": "curl -sf http://localhost:${RESOURCE_PORTS[windmill]}/api/version && curl -sf http://localhost:${RESOURCE_PORTS[n8n]}/healthz && curl -sf http://localhost:${RESOURCE_PORTS[vault]}/v1/sys/health",
          "description": "Test service health endpoints"
        },
        {
          "name": "run-integration-tests",
          "run": "./test.sh",
          "description": "Execute integration test suite",
          "condition": {
            "file_exists": "test.sh"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop secure document processing services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'startup.sh' || true",
          "description": "Stop secure processing processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Secure Document Processing services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
