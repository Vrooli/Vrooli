{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "vault-secrets-integration",
    "displayName": "Vault Secrets Integration",
    "description": "Secure secrets management integration for workflow automation platforms",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "secrets-management",
      "security",
      "devops",
      "zero-trust",
      "workflow-integration",
      "enterprise-security"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/vault-secrets-integration"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql",
        "enabled": false,
        "version": "16",
        "required": false,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/database/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/database/seed.sql"
            }
          ]
        }
      },
      "vault": {
        "type": "vault",
        "enabled": true,
        "required": true,
        "initialization": {
          "secrets": [
            {
              "path": "workflow-secrets/api-keys",
              "description": "API keys for external services"
            },
            {
              "path": "workflow-secrets/database-credentials",
              "description": "Database connection credentials"
            },
            {
              "path": "workflow-secrets/oauth-tokens",
              "description": "OAuth tokens and refresh tokens"
            },
            {
              "path": "workflow-secrets/certificates",
              "description": "SSL certificates and private keys"
            }
          ]
        }
      }
    },
    "automation": {
      "n8n": {
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "name": "vault-secrets-demo",
              "file": "initialization/workflows/n8n/vault-integration-demo.json",
              "enabled": true,
              "tags": ["vault", "secrets", "demo"]
            },
            {
              "name": "secure-api-workflow",
              "file": "initialization/workflows/n8n/secure-api-workflow.json",
              "enabled": true,
              "tags": ["api", "security", "production"]
            }
          ]
        }
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "api": "http://localhost:3000/api/vault-secrets-integration",
      "health": "http://localhost:3000/api/vault-secrets-integration/health",
      "vault": "http://localhost:8200",
      "n8n": "http://localhost:5678"
    },
    "initialization": {
      "phases": [
        {
          "name": "pre-validation",
          "tasks": [
            {
              "name": "validate-resources",
              "type": "script",
              "script": "./deployment/validate.sh",
              "timeout": "30s"
            }
          ]
        },
        {
          "name": "security-setup",
          "tasks": [
            {
              "name": "initialize-vault",
              "type": "resource-inject",
              "target": "storage.vault",
              "timeout": "3m"
            }
          ]
        },
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/seed.sql"
            }
          ]
        },
        {
          "name": "workflow-deployment",
          "tasks": [
            {
              "name": "deploy-n8n-workflows",
              "type": "resource-inject",
              "target": "automation.n8n",
              "config": "initialization/workflows/n8n/",
              "timeout": "5m"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "load-app-config",
              "type": "config",
              "file": "initialization/configuration/app-config.json"
            },
            {
              "name": "configure-vault-integration",
              "type": "config",
              "file": "initialization/configuration/vault-integration.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "2m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "http://localhost:3000/api/vault-secrets-integration/health",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "vault-integration-test",
              "type": "script",
              "script": "./deployment/vault-integration-test.sh",
              "timeout": "2m"
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "http://localhost:3000/api/vault-secrets-integration/health",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "vault": {
          "endpoint": "http://localhost:8200/v1/sys/health",
          "interval": "60s",
          "timeout": "10s"
        },
        "n8n": {
          "endpoint": "http://localhost:5678/api/v1/info",
          "interval": "60s",
          "timeout": "10s"
        },
        "database": {
          "type": "tcp",
          "port": 5432,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "200ms",
          "p95": "800ms",
          "p99": "2000ms"
        },
        "throughput": {
          "rps": 15,
          "concurrent": 10
        },
        "errorRate": {
          "threshold": "2%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "delete-n8n-workflows",
          "type": "resource-cleanup",
          "target": "automation.n8n"
        },
        {
          "name": "revoke-vault-secrets",
          "type": "resource-cleanup",
          "target": "storage.vault"
        },
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS vault_secrets_integration"
        }
      ]
    },
    "testing": {
      "enabled": true,
      "timeout": "25m",
      "script": "./test.sh",
      "ui": {
        "required": true,
        "type": "n8n",
        "url": "http://localhost:5678"
      },
      "performance": {
        "loadTest": {
          "users": 10,
          "duration": "3m",
          "rampUp": "30s"
        }
      }
    },
    "resources": {
      "requests": {
        "cpu": "300m",
        "memory": "512Mi"
      },
      "limits": {
        "cpu": "1000m",
        "memory": "2Gi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Enterprise secrets management integration for secure workflow automation with zero-trust architecture",
      "targetMarket": "DevOps teams, security engineers, and enterprises requiring secure workflow automation with centralized secrets management",
      "painPoints": [
        "Hardcoded secrets in workflow configurations creating security vulnerabilities",
        "Manual secrets rotation and management across multiple automation platforms",
        "Lack of centralized audit trails for secrets access in automated workflows"
      ],
      "solution": "Integrated secrets management platform connecting HashiCorp Vault with n8n workflows for secure automation",
      "competitiveAdvantage": "First comprehensive integration between Vault and workflow automation platforms with automated secrets rotation",
      "revenuePotential": {
        "initial": "$3,000",
        "recurring": "$12,000",
        "expansion": "$25,000",
        "totalEstimate": "$40,000"
      },
      "marketDemand": {
        "level": "high",
        "growth": "30% annually",
        "evidence": "Growing demand for DevSecOps solutions and zero-trust security architectures in enterprise automation"
      },
      "roi": {
        "developmentCost": "$5,000",
        "timeToMarket": "2 weeks",
        "breakEven": "3 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "4m",
        "responseTime": {
          "p50": "200ms",
          "p95": "800ms",
          "p99": "2000ms"
        },
        "throughput": {
          "minimum": 10,
          "target": 15,
          "peak": 50
        },
        "availability": "99.8%",
        "errorRate": "<2%"
      },
      "resources": {
        "cpu": {
          "minimum": "0.5",
          "target": "1.0",
          "maximum": "2.0"
        },
        "memory": {
          "minimum": "1Gi",
          "target": "2Gi",
          "maximum": "4Gi"
        },
        "storage": {
          "database": "10Gi",
          "vault-storage": "50Gi",
          "workflows": "5Gi"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "Vault Secrets Integration",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Your Company",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#fbbf24",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "vault_secrets_integration",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "default": 3000,
          "description": "Application port"
        },
        "VAULT_PORT": {
          "type": "number",
          "default": 8200,
          "description": "HashiCorp Vault port"
        },
        "N8N_PORT": {
          "type": "number",
          "default": 5678,
          "description": "n8n workflow editor port"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": false
        },
        "notifications": {
          "enabled": true,
          "channels": ["email", "webhook"]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "secretsManagement": {
          "enabled": true,
          "provider": "vault"
        },
        "workflowAutomation": {
          "enabled": true,
          "provider": "n8n"
        },
        "auditLogging": {
          "enabled": true,
          "provider": "vault"
        }
      },
      "integrations": [
        {
          "name": "CI/CD Pipelines",
          "type": "api",
          "required": false
        },
        {
          "name": "Identity Providers",
          "type": "oidc",
          "required": false
        },
        {
          "name": "Monitoring Systems",
          "type": "webhook",
          "required": false
        }
      ]
    },
    "category": "security",
    "complexity": "intermediate",
    "marketDemand": "high"
  }
}
