{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "smart-file-photo-manager",
    "displayName": "Smart File Photo Manager",
    "description": "Semantic file and photo management with AI-powered organization suggestions",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "file-management",
      "photo-management",
      "ai-organization",
      "semantic-search"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "File manager API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3000-3999",
      "fallback": "auto",
      "description": "File manager UI port"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store file metadata, organization structure, and settings",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Caching and real-time updates"
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Vector database for semantic search of files and images"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "Object storage for files, processed files, thumbnails, and exports"
      }
    },
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/file-processor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/image-analyzer.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/document-processor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/embedding-generator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/duplicate-detector.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/organization-suggester.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/batch-processor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/semantic-search.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/apps/file-manager-ui.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llava:13b",
          "llama3.2",
          "nomic-embed-text"
        ]
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Smart File Photo Manager",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Smart File Photo Manager initialized\\n  File Manager UI: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start file manager services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh",
          "description": "Start file manager services"
        }
      ]
    },
    "test": {
      "description": "Test file manager functionality",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash test.sh",
          "description": "Run integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop file manager services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'file-manager' || true",
          "description": "Stop all file manager processes"
        }
      ]
    }
  }
}