{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "campaign-content-studio",
    "displayName": "Campaign Content Studio",
    "description": "AI-powered content studio for automated campaign creation, content generation, and multi-channel marketing",
    "version": "1.0.0",
    "type": "business-application",
    "category": "business",
    "tags": [
      "content-generation",
      "campaign-management",
      "marketing-automation",
      "document-processing",
      "windmill-ui",
      "ai-content"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Campaign content studio API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/campaign-management.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/content-generation.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/document-processing.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/search-retrieval.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/campaign-dashboard.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "mistral"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "campaign content data and project metadata"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Campaign Content Studio",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Campaign Content Studio initialized\\n  Windmill Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  Ollama API: http://localhost:${RESOURCE_PORTS[ollama]}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start campaign content studio services",
      "steps": [
        {
          "name": "start-services",
          "run": "cd deployment && ./startup.sh",
          "description": "Start campaign content studio services"
        }
      ]
    },
    "test": {
      "description": "Test campaign content studio functionality",
      "steps": [
        {
          "name": "run-tests",
          "run": "bash test.sh",
          "description": "Execute integration tests"
        }
      ]
    },
    "stop": {
      "description": "Stop campaign content studio services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'campaign-content' || true",
          "description": "Stop all campaign content studio processes"
        }
      ]
    }
  }
}
