{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "campaign-content-studio",
    "displayName": "Campaign Content Studio",
    "description": "AI-powered content studio for automated campaign creation, content generation, and multi-channel marketing",
    "version": "1.0.0",
    "type": "business-application",
    "category": "business",
    "tags": [
      "content-generation",
      "campaign-management",
      "marketing-automation",
      "document-processing",
      "windmill-ui",
      "ai-content"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Campaign content studio API port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/n8n/campaign-management.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/content-generation.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/document-processing.json",
            "type": "workflow"
          },
          {
            "file": "initialization/automation/n8n/search-retrieval.json",
            "type": "workflow"
          }
        ]
      },
      "windmill": {
        "type": "windmill",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/automation/windmill/campaign-dashboard.json",
            "type": "app"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "mistral",
          "nomic-embed-text"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Campaign metadata, document tracking, content history",
        "initialization": [
          {
            "file": "initialization/storage/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/storage/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "Document embeddings for semantic search and context retrieval"
      },
      "minio": {
        "type": "minio",
        "enabled": true,
        "required": true,
        "purpose": "File storage for documents and generated assets"
      }
    },
    "generation": {
      "comfyui": {
        "type": "comfyui",
        "enabled": true,
        "required": false,
        "purpose": "Image generation for blog posts and social media content"
      }
    },
    "processing": {
      "unstructured-io": {
        "type": "unstructured-io",
        "enabled": true,
        "required": false,
        "purpose": "Document text extraction from PDFs, DOCX, and other formats"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Campaign Content Studio",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o campaign-content-studio-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸš€ Campaign Content Studio initialized\\n  Windmill Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  CLI: campaign-content-studio --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start campaign content studio with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} WINDMILL_BASE_URL=http://localhost:${RESOURCE_PORTS[windmill]} POSTGRES_URL=postgres://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/campaign_content_studio QDRANT_URL=http://localhost:${RESOURCE_PORTS[qdrant]} MINIO_URL=http://localhost:${RESOURCE_PORTS[minio]} ./campaign-content-studio-api &",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/campaign-content-studio-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'ðŸš€ Campaign Content Studio running:\\n  Windmill Dashboard: http://localhost:${RESOURCE_PORTS[windmill]}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:$SERVICE_PORT\\n  CLI: campaign-content-studio --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test campaign content studio API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-campaigns-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/campaigns",
          "description": "Test API campaigns endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats campaign-content-studio.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/campaign-content-studio.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop campaign content studio services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'campaign-content-studio-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'ðŸ›‘ Campaign Content Studio services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}
