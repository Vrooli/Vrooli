{
  "app": {
    "name": "Campaign Content Studio",
    "id": "campaign-content-studio",
    "version": "1.0.0",
    "description": "Campaign-based AI content assistant with document context management, semantic search, and multi-format content generation",
    "complexity": "intermediate",
    "categories": ["ai-assistant", "content-creation", "campaign-management"]
  },
  
  "runtime": {
    "environment": "development",
    "debug": true,
    "log_level": "info",
    "session_timeout_minutes": 60,
    "max_concurrent_users": 25,
    "request_timeout_seconds": 300
  },
  
  "features": {
    "campaign_management": true,
    "document_processing": true,
    "semantic_search": true,
    "ai_content_generation": true,
    "context_awareness": true,
    "multi_format_content": true,
    "image_generation": true,
    "file_storage": true,
    "vector_search": true,
    "workflow_automation": true,
    "professional_ui": true,
    "content_history": true,
    "document_embedding": true
  },
  
  "business": {
    "value_proposition": "Campaign-based AI content assistant with intelligent document context and multi-format generation capabilities",
    "target_markets": ["content_creators", "marketing_agencies", "small_businesses"],
    "revenue_potential": {
      "initial": "$25,000",
      "recurring": "$45,000",
      "expansion": "$75,000",
      "total_estimate": "$145,000"
    },
    "market_demand": "very-high"
  },
  
  "ai": {
    "default_model": "llama3.1:8b",
    "temperature": 0.7,
    "max_tokens": 2048,
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "models": {
      "text": ["llama3.1:8b", "qwen2.5-coder:7b"],
      "vision": ["llava:7b", "llama3.2-vision:11b"],
      "embedding": ["nomic-embed-text:latest"]
    }
  },
  
  "workflows": {
    "default_timeout_seconds": 300,
    "max_concurrent_executions": 5,
    "retry_failed_workflows": true,
    "retry_attempts": 2,
    "enable_webhooks": true,
    "webhook_auth_required": false
  },
  
  "storage": {
    "max_file_size_mb": 50,
    "allowed_file_types": [
      "application/pdf",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "text/plain",
      "text/markdown",
      "text/html",
      "text/csv",
      "application/json"
    ],
    "retention_days": 90,
    "enable_compression": true,
    "vector_storage": {
      "embedding_dimensions": 384,
      "similarity_threshold": 0.7,
      "max_chunks_per_document": 50
    }
  },
  
  "performance": {
    "cache_enabled": true,
    "cache_ttl_seconds": 3600,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    },
    "monitoring": {
      "collect_metrics": true,
      "metrics_retention_days": 7,
      "performance_alerts": true
    }
  },
  
  "security": {
    "cors_enabled": true,
    "cors_origins": ["http://localhost:3000", "http://localhost:5681"],
    "api_key_required": false,
    "session_security": {
      "secure_cookies": false,
      "same_site": "lax",
      "session_rotation": true
    },
    "content_security": {
      "validate_uploads": true,
      "scan_for_malware": false,
      "max_request_size_mb": 100
    }
  },
  
  "ui": {
    "theme": "modern",
    "primary_color": "#2563eb",
    "brand_name": "Campaign Content Studio",
    "show_advanced_features": true,
    "enable_dark_mode": true,
    "enable_accessibility": true,
    "default_language": "en",
    "campaign_tabs": {
      "max_visible_tabs": 8,
      "enable_tab_reordering": true,
      "show_campaign_stats": true
    }
  },
  
  "integrations": {
    "webhook_endpoints": {
      "campaign_updates": "/api/campaign-content-studio/campaigns",
      "document_processing": "/api/campaign-content-studio/documents",
      "content_generation": "/api/campaign-content-studio/generate",
      "search_retrieval": "/api/campaign-content-studio/search"
    },
    "external_apis": {
      "timeout_seconds": 60,
      "retry_attempts": 3,
      "cache_responses": true
    },
    "n8n_workflows": {
      "campaign_management": "campaign-management",
      "document_processing": "document-processing",
      "content_generation": "content-generation",
      "search_retrieval": "search-retrieval"
    }
  },
  
  "campaigns": {
    "max_campaigns_per_user": 10,
    "default_campaign_settings": {
      "content_preferences": {
        "default_content_type": "blog_post",
        "max_content_length": 2048,
        "include_images": true,
        "seo_optimization": true
      },
      "brand_guidelines": {
        "tone": "professional",
        "formality": "moderate",
        "target_audience": "general"
      }
    },
    "content_generation": {
      "max_context_documents": 10,
      "similarity_threshold": 0.7,
      "default_temperature": 0.7,
      "supported_content_types": [
        "blog_post",
        "social_media", 
        "email",
        "marketing_copy",
        "product_description"
      ]
    },
    "document_management": {
      "max_documents_per_campaign": 100,
      "auto_processing": true,
      "extract_metadata": true,
      "generate_embeddings": true,
      "chunk_size": 1000,
      "chunk_overlap": 100
    }
  },
  
  "development": {
    "hot_reload": true,
    "mock_external_services": false,
    "verbose_logging": true,
    "enable_debug_endpoints": true,
    "simulate_latency": false
  }
}