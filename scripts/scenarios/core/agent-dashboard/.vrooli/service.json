{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "agent-dashboard",
    "displayName": "Agent Dashboard",
    "description": "Dashboard for managing and monitoring all active agents",
    "version": "1.0.0",
    "type": "vrooli-helper",
    "category": "system-management",
    "tags": ["agents", "monitoring", "orchestration", "dashboard"],
    "license": "MIT"
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/agent-status-monitor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/agent-health-checker.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/agent-orchestrator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/multi-agent-coordinator.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/agent-realtime-monitor.json",
            "type": "workflow"
          }
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": false,
        "models": ["llama3.2:3b"]
      }
    }
  },
  "ports": {
    "ui": {
      "range": [9000, 9099]
    },
    "api": {
      "range": [4000, 4099]
    }
  },
  "lifecycle": {
    "start": ["ui", "api"],
    "health_check": {
      "enabled": true,
      "interval": 15
    }
  },
  "dependencies": {
    "shared_workflows": [
      "ollama",
      "rate-limiter",
      "chain-of-thought-orchestrator"
    ]
  }
}