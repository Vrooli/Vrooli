{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "typing-test",
    "displayName": "Retro Typing Challenge",
    "description": "Nostalgic typing test with arcade-style UI, real-time stats, global leaderboard, and typing improvement tracking",
    "version": "1.0.0",
    "type": "game-application",
    "category": "games",
    "tags": [
      "typing-test",
      "game",
      "arcade",
      "retro",
      "skill-improvement",
      "leaderboard",
      "javascript-ui",
      "fun"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "9200-9299",
      "fallback": "auto",
      "description": "Typing test API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3200-3299",
      "fallback": "auto",
      "description": "Typing test UI port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "shared_workflows": [
          "ollama"
        ],
        "initialization": [
          {
            "file": "initialization/n8n/typing-stats-processor.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/leaderboard-manager.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/typing-coach.json",
            "type": "workflow"
          }
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "Store typing test results, user stats, and leaderboard data",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "schema"
          }
        ]
      },
      "redis": {
        "type": "redis",
        "enabled": true,
        "required": true,
        "purpose": "Cache current typing sessions and real-time leaderboard updates"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Typing Test Challenge",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install-cli.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o typing-test-api main.go",
          "description": "Build Go API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'ðŸŽ® Typing Test Challenge initialized\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display service URLs"
        }
      ]
    },
    "develop": {
      "description": "Start typing test services",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} POSTGRES_URL=postgres://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/typing_test REDIS_URL=redis://localhost:${RESOURCE_PORTS[redis]} ./typing-test-api &",
          "description": "Start API server",
          "background": true,
          "condition": {
            "file_exists": "api/typing-test-api"
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && PORT=$UI_PORT API_URL=http://localhost:$SERVICE_PORT npm start &",
          "description": "Start UI server",
          "background": true
        },
        {
          "name": "wait-for-services",
          "run": "sleep 3",
          "description": "Wait for services to start"
        },
        {
          "name": "show-running",
          "run": "echo 'ðŸš€ Typing Test running:\\n  UI: http://localhost:${UI_PORT}\\n  API: http://localhost:${SERVICE_PORT}'",
          "description": "Display running services"
        }
      ]
    },
    "test": {
      "description": "Test typing test services",
      "steps": [
        {
          "name": "test-api",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health"
        },
        {
          "name": "test-leaderboard",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/leaderboard",
          "description": "Test leaderboard endpoint"
        }
      ]
    },
    "stop": {
      "description": "Stop typing test services",
      "steps": [
        {
          "name": "stop-services",
          "run": "pkill -f 'typing-test-api' || true; pkill -f 'npm.*typing-test' || true",
          "description": "Stop all services"
        }
      ]
    }
  }
}