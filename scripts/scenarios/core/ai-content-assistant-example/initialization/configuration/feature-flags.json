{
  "campaign_features": {
    "campaign_management": {
      "enabled": true,
      "max_campaigns_per_user": 10,
      "campaign_templates": true,
      "campaign_analytics": true,
      "campaign_sharing": false
    },
    
    "multi_campaign_support": {
      "enabled": true,
      "tab_interface": true,
      "campaign_switching": true,
      "bulk_operations": true
    },
    
    "campaign_collaboration": {
      "enabled": false,
      "team_access": false,
      "role_permissions": false,
      "comment_system": false
    }
  },
  
  "ai_features": {
    "context_aware_generation": {
      "enabled": true,
      "document_context": true,
      "semantic_search": true,
      "relevance_scoring": true,
      "context_preview": true
    },
    
    "text_generation": {
      "enabled": true,
      "models": ["llama3.1:8b"],
      "max_tokens": 4000,
      "temperature_range": [0.1, 1.0],
      "content_templates": true
    },
    
    "speech_to_text": {
      "enabled": true,
      "supported_formats": ["wav", "mp3", "ogg", "m4a"],
      "max_audio_duration_seconds": 600,
      "voice_to_content": true
    },
    
    "image_generation": {
      "enabled": true,
      "supported_formats": ["png", "jpg", "jpeg"],
      "max_resolution": "1200x800",
      "blog_headers": true,
      "social_media_graphics": true,
      "auto_generation": true
    },
    
    "document_processing": {
      "enabled": true,
      "supported_formats": ["pdf", "docx", "txt", "html", "md"],
      "max_file_size_mb": 50,
      "auto_text_extraction": true,
      "metadata_extraction": true,
      "content_chunking": true
    },
    
    "embedding_generation": {
      "enabled": true,
      "model": "nomic-embed-text:latest",
      "dimensions": 384,
      "batch_processing": true,
      "incremental_updates": true
    }
  },
  
  "content_management_features": {
    "content_history": {
      "enabled": true,
      "version_tracking": true,
      "content_analytics": true,
      "export_options": true
    },
    
    "content_templates": {
      "enabled": true,
      "custom_templates": true,
      "template_sharing": false,
      "template_marketplace": false
    },
    
    "content_optimization": {
      "enabled": true,
      "seo_suggestions": true,
      "readability_analysis": false,
      "sentiment_analysis": false
    }
  },
  
  "automation_features": {
    "workflow_automation": {
      "enabled": true,
      "max_concurrent_workflows": 10,
      "webhook_support": true,
      "scheduling_support": false
    },
    
    "batch_processing": {
      "enabled": true,
      "bulk_document_upload": true,
      "batch_content_generation": false,
      "scheduled_generation": false
    }
  },
  
  "storage_features": {
    "campaign_isolation": {
      "enabled": true,
      "separate_storage_buckets": true,
      "campaign_specific_access": true,
      "data_segregation": true
    },
    
    "file_storage": {
      "enabled": true,
      "public_access": false,
      "versioning": true,
      "encryption": false,
      "automatic_cleanup": true
    },
    
    "semantic_search": {
      "enabled": true,
      "embedding_dimensions": 384,
      "similarity_threshold": 0.7,
      "max_results": 100,
      "campaign_scoped_search": true,
      "real_time_search": true
    },
    
    "content_backup": {
      "enabled": true,
      "automatic_backups": true,
      "backup_retention_days": 90,
      "point_in_time_recovery": false
    }
  },
  
  "business_features": {
    "campaign_analytics": {
      "enabled": true,
      "content_performance": true,
      "generation_metrics": true,
      "usage_tracking": true,
      "roi_tracking": false
    },
    
    "user_management": {
      "enabled": true,
      "multi_tenancy": false,
      "role_based_access": false,
      "session_management": true,
      "user_preferences": true
    },
    
    "api_access": {
      "enabled": true,
      "rate_limiting": true,
      "api_key_auth": false,
      "webhook_support": true,
      "rest_api": true
    },
    
    "monitoring_alerts": {
      "enabled": true,
      "error_notifications": true,
      "performance_alerts": true,
      "resource_health_alerts": true,
      "campaign_alerts": true
    }
  },
  
  "integration_features": {
    "campaign_import_export": {
      "enabled": true,
      "export_formats": ["json", "csv", "markdown"],
      "bulk_export": true,
      "campaign_templates": true
    },
    
    "content_export": {
      "enabled": true,
      "formats": ["markdown", "html", "plain_text"],
      "bulk_export": true,
      "scheduled_exports": false
    }
  },
  
  "development_features": {
    "debug_mode": {
      "enabled": true,
      "verbose_logging": true,
      "performance_profiling": true,
      "mock_services": false,
      "workflow_debugging": true
    },
    
    "testing_utilities": {
      "enabled": true,
      "sample_campaigns": true,
      "test_content_generation": true,
      "integration_tests": true
    }
  },
  
  "experimental_features": {
    "ai_campaign_optimization": {
      "enabled": false,
      "auto_content_suggestions": false,
      "learning_from_performance": false
    },
    
    "advanced_context_understanding": {
      "enabled": false,
      "cross_campaign_insights": false,
      "semantic_relationships": false
    },
    
    "predictive_content_generation": {
      "enabled": false,
      "trend_analysis": false,
      "content_recommendations": false
    }
  }
}