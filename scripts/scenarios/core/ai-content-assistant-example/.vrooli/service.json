{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "ai-content-assistant-example",
    "displayName": "AI Content Assistant",
    "description": "Multi-modal AI assistant for content creation with voice input, text generation, and professional UI",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "ai-assistant",
      "content-creation",
      "voice-enabled",
      "workflow-automation",
      "analytics-dashboard",
      "enterprise-ready",
      "high-revenue-potential",
      "example-scenario"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/ai-content-assistant-example"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql",
        "enabled": true,
        "version": "16",
        "required": true,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/database/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/database/seed.sql"
            }
          ]
        }
      },
      "minio": {
        "type": "minio",
        "enabled": false,
        "required": false,
        "initialization": {
          "buckets": [
            {
              "name": "ai-content-assistant",
              "policy": "private"
            }
          ]
        }
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": false,
        "required": false,
        "initialization": {
          "collections": []
        }
      }
    },
    "ai": {
      "ollama": {
        "enabled": true,
        "required": true,
        "models": ["llama3.1:8b"]
      },
      "whisper": {
        "enabled": true,
        "required": true
      }
    },
    "automation": {
      "n8n": {
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "name": "main-workflow",
              "file": "initialization/workflows/n8n/main-workflow.json",
              "enabled": true,
              "tags": ["core", "automation"]
            }
          ],
          "credentials": [
            {
              "name": "api-auth",
              "type": "httpAuth",
              "config": {
                "url": "{{ API_URL }}",
                "authType": "bearer"
              }
            }
          ]
        }
      },
      "windmill": {
        "enabled": true,
        "required": true,
        "initialization": {
          "apps": [
            {
              "path": "f/ai-content-assistant/dashboard",
              "file": "initialization/ui/windmill-app.json",
              "summary": "AI Content Assistant Dashboard"
            }
          ],
          "scripts": []
        }
      },
      "comfyui": {
        "enabled": false,
        "required": false
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "api": "http://localhost:3000/api/ai-content-assistant-example",
      "health": "http://localhost:3000/api/ai-content-assistant-example/health"
    },
    "initialization": {
      "phases": [
        {
          "name": "pre-validation",
          "tasks": [
            {
              "name": "validate-resources",
              "type": "script",
              "script": "./deployment/validate.sh",
              "timeout": "30s"
            }
          ]
        },
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/seed.sql"
            }
          ]
        },
        {
          "name": "workflow-deployment",
          "parallel": true,
          "tasks": [
            {
              "name": "deploy-n8n-workflows",
              "type": "resource-inject",
              "target": "automation.n8n",
              "config": "initialization/workflows/n8n/"
            },
            {
              "name": "deploy-windmill-apps",
              "type": "resource-inject",
              "target": "automation.windmill",
              "config": "initialization/ui/"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "load-app-config",
              "type": "config",
              "file": "initialization/configuration/app-config.json"
            },
            {
              "name": "set-feature-flags",
              "type": "config",
              "file": "initialization/configuration/feature-flags.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "2m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "http://localhost:3000/api/ai-content-assistant-example/health",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "http://localhost:3000/api/ai-content-assistant-example/health",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "workflows": {
          "endpoint": "http://localhost:5678/api/v1/info",
          "interval": "60s",
          "timeout": "10s"
        },
        "database": {
          "type": "tcp",
          "port": 5432,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "100ms",
          "p95": "500ms",
          "p99": "1000ms"
        },
        "throughput": {
          "rps": 100,
          "concurrent": 10
        },
        "errorRate": {
          "threshold": "1%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "delete-workflows",
          "type": "resource-cleanup",
          "target": "automation.n8n"
        },
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS ai_content_assistant"
        },
        {
          "name": "clear-storage",
          "type": "resource-cleanup",
          "target": "storage.minio"
        }
      ]
    },
    "testing": {
      "enabled": true,
      "timeout": "30m",
      "script": "./test.sh",
      "ui": {
        "required": true,
        "type": "windmill",
        "url": "http://localhost:3000"
      },
      "performance": {
        "loadTest": {
          "users": 10,
          "duration": "5m",
          "rampUp": "30s"
        }
      }
    },
    "resources": {
      "requests": {
        "cpu": "100m",
        "memory": "128Mi"
      },
      "limits": {
        "cpu": "1000m",
        "memory": "1Gi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Complete AI-powered content creation suite with voice interface and professional analytics",
      "targetMarket": "Content creators, marketing teams, and businesses needing AI-assisted content generation",
      "painPoints": [
        "Time-consuming manual content creation",
        "Inconsistent content quality and tone",
        "Lack of voice-to-text workflow integration"
      ],
      "solution": "Multi-modal AI assistant combining voice input, text generation, and automated workflows for efficient content creation",
      "competitiveAdvantage": "Integrated voice interface with professional UI and workflow automation",
      "revenuePotential": {
        "initial": "$15,000",
        "recurring": "$30,000",
        "expansion": "$45,000",
        "totalEstimate": "$90,000"
      },
      "marketDemand": {
        "level": "very-high",
        "growth": "25% annually",
        "evidence": "Growing demand for AI content tools and voice interfaces"
      },
      "roi": {
        "developmentCost": "$5,000",
        "timeToMarket": "2 weeks",
        "breakEven": "3 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "2m",
        "responseTime": {
          "p50": "100ms",
          "p95": "500ms",
          "p99": "1000ms"
        },
        "throughput": {
          "minimum": 50,
          "target": 100,
          "peak": 500
        },
        "availability": "99.9%",
        "errorRate": "<1%"
      },
      "resources": {
        "cpu": {
          "minimum": "0.5",
          "target": "1.0",
          "maximum": "2.0"
        },
        "memory": {
          "minimum": "512Mi",
          "target": "1Gi",
          "maximum": "2Gi"
        },
        "storage": {
          "database": "10Gi",
          "files": "20Gi"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "AI Content Assistant",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Your Company",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#2563eb",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "ai_content_assistant",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "default": 3000,
          "description": "Application port"
        },
        "API_PORT": {
          "type": "number",
          "default": 3000,
          "description": "API server port"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": false
        },
        "notifications": {
          "enabled": true,
          "channels": ["email", "webhook"]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "payments": {
          "enabled": false,
          "provider": "stripe"
        }
      },
      "integrations": [
        {
          "name": "Content APIs",
          "type": "api",
          "required": false
        }
      ]
    },
    "category": "ai-assistance",
    "complexity": "intermediate",
    "marketDemand": "very-high"
  }
}
