{
  "app": {
    "name": "Resume Screening Assistant",
    "version": "1.0.0",
    "description": "AI-powered recruitment dashboard with drag-and-drop resume upload and semantic search",
    "theme": "light",
    "layout": "responsive"
  },
  "ui": {
    "branding": {
      "title": "Resume Screening Assistant",
      "subtitle": "AI-Powered Recruitment Dashboard",
      "logo_url": null,
      "primary_color": "#667eea",
      "secondary_color": "#764ba2",
      "accent_color": "#16a34a"
    },
    "components": {
      "search_bar": {
        "placeholder": "Search candidates by skills, experience, or keywords...",
        "max_length": 500,
        "debounce_ms": 300
      },
      "job_tabs": {
        "default_tab": "All Jobs",
        "max_tabs": 10,
        "closeable": false,
        "scrollable": true
      },
      "file_upload": {
        "accepted_types": [
          "application/pdf",
          "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
          "text/plain",
          "application/rtf"
        ],
        "max_file_size_mb": 10,
        "multiple": false,
        "drag_drop_enabled": true
      },
      "candidate_grid": {
        "items_per_page": 10,
        "sortable_columns": ["candidate_name", "score", "experience_years", "status"],
        "filterable_columns": ["skills", "status", "education_level"],
        "default_sort": {
          "column": "score",
          "direction": "desc"
        }
      },
      "search_results": {
        "items_per_page": 15,
        "highlight_query": true,
        "show_snippets": true,
        "result_types": ["candidate", "job"]
      }
    }
  },
  "api": {
    "base_url": "http://localhost:5678/webhook",
    "timeout_ms": 30000,
    "retry_attempts": 3,
    "endpoints": {
      "resume_upload": "/resume-upload",
      "job_management": "/jobs",
      "semantic_search": "/search",
      "health_check": "/health"
    }
  },
  "resources": {
    "n8n": {
      "url": "http://localhost:5678",
      "enabled": true,
      "workflows": [
        "resume-processing-pipeline",
        "job-management-workflow",
        "semantic-search-workflow"
      ]
    },
    "windmill": {
      "url": "http://localhost:8000",
      "enabled": true,
      "scripts": [
        "job_matcher",
        "semantic_search",
        "resume_processor"
      ]
    },
    "ollama": {
      "url": "http://localhost:11434",
      "enabled": true,
      "models": {
        "analysis": "llama3.1:8b",
        "embedding": "nomic-embed-text"
      }
    },
    "unstructured_io": {
      "url": "http://localhost:11450",
      "enabled": true,
      "endpoints": {
        "general": "/general/v0/general"
      }
    },
    "qdrant": {
      "url": "http://localhost:6333",
      "enabled": true,
      "collections": ["resumes", "job-descriptions", "candidate-profiles"]
    },
    "postgres": {
      "url": "http://localhost:5433",
      "enabled": true,
      "database": "resume_screening_assistant"
    },
    "minio": {
      "url": "http://localhost:9000",
      "enabled": false,
      "buckets": [
        "resume-uploads",
        "processed-documents",
        "candidate-photos"
      ]
    }
  },
  "features": {
    "semantic_search": {
      "enabled": true,
      "min_query_length": 2,
      "max_results": 50,
      "default_threshold": 0.6,
      "search_types": ["candidates", "jobs", "both"]
    },
    "resume_processing": {
      "enabled": true,
      "auto_score": true,
      "extract_contact_info": true,
      "generate_embeddings": true,
      "supported_formats": ["pdf", "docx", "txt", "rtf"]
    },
    "job_matching": {
      "enabled": true,
      "auto_match": true,
      "similarity_threshold": 0.7,
      "max_candidates_per_job": 100
    },
    "analytics": {
      "enabled": true,
      "track_searches": true,
      "track_uploads": true,
      "track_user_actions": true
    },
    "notifications": {
      "enabled": true,
      "channels": ["ui", "webhook"],
      "events": [
        "resume_processed",
        "high_score_candidate",
        "job_created"
      ]
    }
  },
  "performance": {
    "caching": {
      "enabled": true,
      "cache_duration_minutes": 15,
      "cache_search_results": true,
      "cache_job_lists": true
    },
    "pagination": {
      "default_page_size": 10,
      "max_page_size": 100
    },
    "lazy_loading": {
      "enabled": true,
      "components": ["candidate_grid", "search_results"]
    }
  },
  "security": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    },
    "file_upload": {
      "virus_scanning": false,
      "size_limits": {
        "max_file_size_mb": 10,
        "max_total_size_mb": 100
      }
    },
    "data_protection": {
      "mask_email": false,
      "mask_phone": false,
      "encryption_at_rest": true
    }
  },
  "customization": {
    "job_templates": [
      {
        "name": "Software Engineer",
        "required_skills": ["JavaScript", "React", "Node.js"],
        "experience_required": 3
      },
      {
        "name": "Data Scientist",
        "required_skills": ["Python", "SQL", "Machine Learning"],
        "experience_required": 2
      },
      {
        "name": "Product Manager",
        "required_skills": ["Product Strategy", "Agile", "Analytics"],
        "experience_required": 4
      }
    ],
    "skill_categories": {
      "technical": [
        "Programming Languages",
        "Frameworks",
        "Databases",
        "Cloud Platforms",
        "DevOps Tools"
      ],
      "soft_skills": [
        "Leadership",
        "Communication",
        "Problem Solving",
        "Team Management",
        "Project Management"
      ]
    },
    "scoring_weights": {
      "skills_match": 0.5,
      "experience_match": 0.3,
      "education_match": 0.2
    }
  },
  "debugging": {
    "enabled": false,
    "log_level": "info",
    "log_api_calls": false,
    "show_processing_times": true
  },
  "deployment": {
    "environment": "production",
    "base_url": "http://localhost:8000",
    "health_check_interval_seconds": 30,
    "auto_refresh_data": true,
    "auto_refresh_interval_seconds": 300
  }
}