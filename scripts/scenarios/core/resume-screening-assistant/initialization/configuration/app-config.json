{
  "scenario": {
    "id": "resume-screening-assistant",
    "name": "Resume Screening Assistant",
    "version": "1.0.0",
    "description": "AI-powered recruitment automation for resume parsing, candidate scoring, and job matching"
  },
  "application": {
    "port": 3000,
    "basePath": "/resume-screening-assistant",
    "apiPrefix": "/api/resume-screening-assistant",
    "environment": "production",
    "logLevel": "info",
    "corsOrigins": ["http://localhost:3000", "http://localhost:8080"]
  },
  "processing": {
    "maxFileSize": "10MB",
    "supportedFormats": ["pdf", "docx", "txt", "rtf"],
    "batchSize": 10,
    "concurrentProcessing": 3,
    "timeout": 300000,
    "retryAttempts": 3
  },
  "assessment": {
    "scoringModel": "llama3.2:3b",
    "scoringDimensions": [
      "technical_skills",
      "experience_level",
      "education",
      "leadership",
      "cultural_fit"
    ],
    "scoreRange": {
      "min": 0,
      "max": 100
    },
    "matchingThreshold": 70,
    "recommendationCategories": [
      "highly_recommended",
      "recommended",
      "maybe",
      "not_recommended"
    ]
  },
  "vectorDatabase": {
    "collectionPrefix": "rsa",
    "vectorSize": 384,
    "distance": "Cosine",
    "indexing": {
      "enabled": true,
      "threshold": 1000,
      "optimizationInterval": 3600
    }
  },
  "storage": {
    "provider": "minio",
    "buckets": {
      "uploads": "resume-screening-assistant-uploads",
      "reports": "resume-screening-assistant-reports",
      "backups": "resume-screening-assistant-backups"
    },
    "retentionDays": 90,
    "encryption": true
  },
  "notifications": {
    "enabled": true,
    "channels": ["email", "webhook"],
    "events": [
      "resume_processed",
      "candidate_matched",
      "assessment_complete",
      "batch_complete"
    ]
  },
  "security": {
    "authentication": "optional",
    "rateLimit": {
      "enabled": true,
      "windowMs": 900000,
      "maxRequests": 100
    },
    "dataProtection": {
      "piiRedaction": true,
      "encryptAtRest": true,
      "auditLogging": true
    }
  },
  "features": {
    "resumeParsing": true,
    "candidateScoring": true,
    "jobMatching": true,
    "bulkProcessing": true,
    "reportGeneration": true,
    "apiAccess": true,
    "webhooks": true,
    "analytics": true
  },
  "integrations": {
    "browserless": {
      "enabled": false,
      "features": ["linkedin_scraping", "profile_enrichment"]
    },
    "n8n": {
      "enabled": false,
      "workflows": ["resume_pipeline", "notification_handler"]
    },
    "windmill": {
      "enabled": false,
      "apps": ["recruitment_dashboard", "candidate_portal"]
    }
  }
}