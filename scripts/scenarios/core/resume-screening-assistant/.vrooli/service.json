{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "parent": "vrooli",
    "name": "resume-screening-assistant",
    "displayName": "Resume Screening Assistant",
    "description": "AI-powered resume screening and candidate evaluation platform with semantic matching and automated assessment workflows",
    "version": "1.0.0",
    "type": "business-application",
    "category": "business",
    "tags": [
      "resume-screening",
      "candidate-evaluation",
      "recruitment",
      "semantic-matching",
      "javascript-ui",
      "retro-futuristic",
      "ai-assessment",
      "job-matching"
    ]
  },
  "ports": {
    "api": {
      "env_var": "SERVICE_PORT",
      "range": "8090-8999",
      "fallback": "auto",
      "description": "Resume screening assistant API port"
    },
    "ui": {
      "env_var": "UI_PORT",
      "range": "3000-3999",
      "fallback": "auto",
      "description": "HyperRecruit 3000 UI port"
    }
  },
  "resources": {
    "automation": {
      "n8n": {
        "type": "n8n",
        "enabled": true,
        "required": true,
        "initialization": [
          {
            "file": "initialization/n8n/job-management-workflow.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/resume-processing-pipeline.json",
            "type": "workflow"
          },
          {
            "file": "initialization/n8n/semantic-search-workflow.json",
            "type": "workflow"
          }
        ]
      }
    },
    "ai": {
      "ollama": {
        "type": "ollama",
        "enabled": true,
        "required": true,
        "models": [
          "llama3.2",
          "nomic-embed-text"
        ]
      }
    },
    "storage": {
      "postgres": {
        "type": "postgres",
        "enabled": true,
        "required": true,
        "purpose": "resume data, job listings, and assessment results",
        "initialization": [
          {
            "file": "initialization/postgres/schema.sql",
            "type": "script"
          },
          {
            "file": "initialization/postgres/seed.sql",
            "type": "script"
          }
        ]
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": true,
        "required": true,
        "purpose": "semantic search and candidate-job matching"
      }
    }
  },
  "lifecycle": {
    "version": "1.0.0",
    "setup": {
      "description": "Initialize Resume Screening Assistant",
      "steps": [
        {
          "name": "base-setup",
          "run": "bash scripts/lib/setup.sh",
          "description": "Execute generic setup (e.g. network, system, git)"
        },
        {
          "name": "add-data",
          "run": "scripts/resources/injection/engine.sh .",
          "description": "Add app data to resources"
        },
        {
          "name": "install-cli",
          "run": "cd cli && ./install.sh",
          "description": "Install CLI command globally"
        },
        {
          "name": "build-api",
          "run": "cd api && go mod download && go build -o resume-screening-assistant-api main.go",
          "description": "Build Go coordination API binary"
        },
        {
          "name": "setup-ui",
          "run": "cd ui && npm install",
          "description": "Install UI dependencies"
        },
        {
          "name": "show-urls",
          "run": "echo 'üöÄ Resume Screening Assistant initialized\\n  UI Dashboard: http://localhost:${UI_PORT}\\n  n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  API: http://localhost:${SERVICE_PORT}\\n  CLI: resume-screening-assistant --help'",
          "description": "Display service access URLs"
        }
      ]
    },
    "develop": {
      "description": "Start resume screening assistant with Go API server",
      "steps": [
        {
          "name": "start-api-server",
          "run": "cd api && PORT=$SERVICE_PORT N8N_BASE_URL=http://localhost:${RESOURCE_PORTS[n8n]} WINDMILL_BASE_URL=http://localhost:${RESOURCE_PORTS[windmill]} POSTGRES_URL=postgres://postgres:postgres@localhost:${RESOURCE_PORTS[postgres]}/resume_screening QDRANT_URL=http://localhost:${RESOURCE_PORTS[qdrant]} ./resume-screening-assistant-api &",
          "description": "Start Go coordination API server in background",
          "background": true,
          "condition": {
            "file_exists": "api/resume-screening-assistant-api"
          }
        },
        {
          "name": "wait-for-api",
          "run": "sleep 2 && curl -sf http://localhost:$SERVICE_PORT/health > /dev/null",
          "description": "Wait for API server to be ready",
          "retry": {
            "max_attempts": 15,
            "delay": 1
          }
        },
        {
          "name": "start-ui-server",
          "run": "cd ui && UI_PORT=$UI_PORT SERVICE_PORT=$SERVICE_PORT npm start &",
          "description": "Start UI server in background",
          "background": true
        },
        {
          "name": "wait-for-ui",
          "run": "sleep 2 && curl -sf http://localhost:$UI_PORT/health > /dev/null",
          "description": "Wait for UI server to be ready",
          "retry": {
            "max_attempts": 10,
            "delay": 1
          }
        },
        {
          "name": "show-running-services",
          "run": "echo 'üöÄ Services running:\\n  üé® UI Dashboard: http://localhost:$UI_PORT\\n  üìä n8n workflows: http://localhost:${RESOURCE_PORTS[n8n]}\\n  ‚öôÔ∏è API: http://localhost:$SERVICE_PORT\\n  üñ•Ô∏è CLI: resume-screening-assistant --help'",
          "description": "Display all running service URLs"
        }
      ]
    },
    "test": {
      "description": "Test resume screening assistant Go API and CLI",
      "steps": [
        {
          "name": "test-go-build",
          "run": "cd api && go build -o test-build main.go && rm test-build",
          "description": "Test Go compilation",
          "condition": {
            "file_exists": "api/main.go"
          }
        },
        {
          "name": "test-api-health",
          "run": "curl -sf http://localhost:$SERVICE_PORT/health",
          "description": "Test API health endpoint"
        },
        {
          "name": "test-jobs-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/jobs",
          "description": "Test API jobs endpoint"
        },
        {
          "name": "test-candidates-endpoint",
          "run": "curl -sf http://localhost:$SERVICE_PORT/api/candidates",
          "description": "Test API candidates endpoint"
        },
        {
          "name": "test-search-endpoint",
          "run": "bash test/test-search-endpoint.sh",
          "description": "Test API semantic search endpoint"
        },
        {
          "name": "test-cli-commands",
          "run": "cd cli && bats resume-screening-assistant.bats",
          "description": "Run CLI test suite",
          "condition": {
            "file_exists": "cli/resume-screening-assistant.bats"
          }
        }
      ]
    },
    "stop": {
      "description": "Stop resume screening assistant services",
      "steps": [
        {
          "name": "stop-api-server",
          "run": "pkill -f 'resume-screening-assistant-api' || true",
          "description": "Stop Go API server processes"
        },
        {
          "name": "stop-ui-server",
          "run": "pkill -f 'node.*server.js' || true",
          "description": "Stop UI server process"
        },
        {
          "name": "confirm-stop",
          "run": "echo 'üõë Resume Screening Assistant services stopped'",
          "description": "Confirm services stopped"
        }
      ]
    }
  }
}