{
  "$schema": "../../../../.vrooli/schemas/service.schema.json",
  "version": "1.0.0",
  "service": {
    "name": "business-process-automation",
    "displayName": "Business Process Automation",
    "description": "AI-powered workflow automation combining n8n orchestration with intelligent decision making",
    "version": "1.0.0",
    "type": "business-application",
    "tags": [
      "workflow-automation",
      "enterprise-ready",
      "process-optimization",
      "rpa",
      "digital-transformation"
    ],
    "maintainers": [
      {
        "name": "Vrooli Team",
        "email": "team@vrooli.com",
        "url": "https://github.com/Vrooli"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/Vrooli/Vrooli",
      "directory": "/scripts/scenarios/core/business-process-automation"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/Vrooli/Vrooli",
    "documentation": "./README.md",
    "support": {
      "email": "support@vrooli.com",
      "issues": "https://github.com/Vrooli/Vrooli/issues",
      "chat": "https://discord.gg/vrooli"
    }
  },
  "resources": {
    "storage": {
      "postgres": {
        "type": "postgresql",
        "enabled": true,
        "version": "16",
        "required": true,
        "initialization": {
          "data": [
            {
              "type": "schema",
              "file": "initialization/database/schema.sql"
            },
            {
              "type": "seed",
              "file": "initialization/database/seed.sql"
            }
          ]
        }
      },
      "qdrant": {
        "type": "qdrant",
        "enabled": false,
        "required": false,
        "initialization": {
          "collections": [
            {
              "name": "process-knowledge",
              "config": {
                "vectors": {
                  "size": 384,
                  "distance": "Cosine"
                }
              }
            }
          ]
        }
      },
      "minio": {
        "type": "minio",
        "enabled": false,
        "required": false,
        "initialization": {
          "buckets": [
            {
              "name": "process-documents",
              "policy": "private"
            }
          ]
        }
      }
    },
    "ai": {
      "ollama": {
        "enabled": true,
        "required": true,
        "models": ["llama3.1:8b", "nomic-embed-text"]
      }
    },
    "automation": {
      "n8n": {
        "enabled": true,
        "required": true,
        "initialization": {
          "workflows": [
            {
              "name": "process-automation-workflow",
              "file": "initialization/workflows/n8n/main-workflow.json",
              "enabled": true,
              "tags": ["core", "automation", "process"]
            }
          ],
          "credentials": [
            {
              "name": "api-auth",
              "type": "httpAuth",
              "config": {
                "url": "{{ API_URL }}",
                "authType": "bearer"
              }
            }
          ]
        }
      },
      "node-red": {
        "enabled": false,
        "required": false,
        "initialization": {
          "flows": [
            {
              "name": "legacy-process-flow",
              "file": "initialization/workflows/node-red/legacy-flow.json",
              "enabled": false,
              "tags": ["legacy", "integration"]
            }
          ]
        }
      }
    },
    "agents": {
      "agent-s2": {
        "enabled": true,
        "required": true,
        "mode": "service"
      }
    }
  },
  "deployment": {
    "target": "docker",
    "strategy": "rolling-update",
    "urls": {
      "application": "http://localhost:3000",
      "api": "http://localhost:3000/api/business-process-automation",
      "health": "http://localhost:3000/api/business-process-automation/health",
      "n8n": "http://localhost:5678",
      "agent-s2": "http://localhost:4113"
    },
    "initialization": {
      "phases": [
        {
          "name": "pre-validation",
          "tasks": [
            {
              "name": "validate-resources",
              "type": "script",
              "script": "./deployment/validate.sh",
              "timeout": "30s"
            }
          ]
        },
        {
          "name": "database-setup",
          "tasks": [
            {
              "name": "apply-schema",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/schema.sql"
            },
            {
              "name": "seed-data",
              "type": "sql",
              "target": "storage.postgres",
              "file": "initialization/database/seed.sql"
            }
          ]
        },
        {
          "name": "ai-setup",
          "tasks": [
            {
              "name": "load-ai-models",
              "type": "resource-inject",
              "target": "ai.ollama",
              "timeout": "10m"
            }
          ]
        },
        {
          "name": "workflow-deployment",
          "parallel": true,
          "tasks": [
            {
              "name": "deploy-n8n-workflows",
              "type": "resource-inject",
              "target": "automation.n8n",
              "config": "initialization/workflows/n8n/"
            },
            {
              "name": "deploy-node-red-flows",
              "type": "resource-inject",
              "target": "automation.node-red",
              "config": "initialization/workflows/node-red/"
            }
          ]
        },
        {
          "name": "application-configuration",
          "tasks": [
            {
              "name": "load-app-config",
              "type": "config",
              "file": "initialization/configuration/app-config.json"
            },
            {
              "name": "set-feature-flags",
              "type": "config",
              "file": "initialization/configuration/feature-flags.json"
            }
          ]
        },
        {
          "name": "startup",
          "tasks": [
            {
              "name": "start-application",
              "type": "script",
              "script": "./deployment/startup.sh",
              "timeout": "2m"
            }
          ]
        },
        {
          "name": "post-validation",
          "tasks": [
            {
              "name": "health-check",
              "type": "healthcheck",
              "target": "http://localhost:3000/api/business-process-automation/health",
              "timeout": "30s",
              "retries": 3
            },
            {
              "name": "monitor-startup",
              "type": "script",
              "script": "./deployment/monitor.sh",
              "background": true
            }
          ]
        }
      ]
    },
    "monitoring": {
      "enabled": true,
      "healthChecks": {
        "application": {
          "endpoint": "http://localhost:3000/api/business-process-automation/health",
          "interval": "30s",
          "timeout": "5s",
          "threshold": 3
        },
        "n8n": {
          "endpoint": "http://localhost:5678/api/v1/info",
          "interval": "60s",
          "timeout": "10s"
        },
        "agent-s2": {
          "endpoint": "http://localhost:4113/health",
          "interval": "60s",
          "timeout": "10s"
        },
        "ollama": {
          "endpoint": "http://localhost:11434/api/tags",
          "interval": "60s",
          "timeout": "15s"
        },
        "database": {
          "type": "tcp",
          "port": 5432,
          "interval": "30s"
        }
      },
      "metrics": {
        "responseTime": {
          "p50": "200ms",
          "p95": "1000ms",
          "p99": "2000ms"
        },
        "throughput": {
          "rps": 50,
          "concurrent": 20
        },
        "errorRate": {
          "threshold": "2%"
        }
      }
    },
    "cleanup": {
      "enabled": true,
      "tasks": [
        {
          "name": "delete-workflows",
          "type": "resource-cleanup",
          "target": "automation.n8n"
        },
        {
          "name": "delete-node-red-flows",
          "type": "resource-cleanup",
          "target": "automation.node-red"
        },
        {
          "name": "drop-database",
          "type": "sql",
          "target": "storage.postgres",
          "query": "DROP DATABASE IF EXISTS business_process_automation"
        },
        {
          "name": "clear-vector-collections",
          "type": "resource-cleanup",
          "target": "storage.qdrant"
        },
        {
          "name": "clear-storage",
          "type": "resource-cleanup",
          "target": "storage.minio"
        }
      ]
    },
    "testing": {
      "enabled": true,
      "timeout": "30m",
      "script": "./test.sh",
      "ui": {
        "required": true,
        "type": "n8n",
        "url": "http://localhost:5678"
      },
      "performance": {
        "loadTest": {
          "users": 20,
          "duration": "5m",
          "rampUp": "30s"
        }
      }
    },
    "resources": {
      "requests": {
        "cpu": "500m",
        "memory": "512Mi"
      },
      "limits": {
        "cpu": "2000m",
        "memory": "4Gi"
      }
    }
  },
  "metadata": {
    "businessModel": {
      "purpose": "commercial",
      "valueProposition": "Enterprise process automation with AI-powered decision making for digital transformation",
      "targetMarket": "Mid to large enterprises seeking digital transformation and process optimization",
      "painPoints": [
        "Manual, repetitive business processes consuming valuable time",
        "Inconsistent process execution and decision making",
        "Lack of intelligent automation with contextual decision making"
      ],
      "solution": "AI-powered business process automation platform combining workflow orchestration with intelligent decision making",
      "competitiveAdvantage": "Integration of n8n workflow automation with AI agents and contextual decision making",
      "revenuePotential": {
        "initial": "$5,000",
        "recurring": "$15,000",
        "expansion": "$35,000",
        "totalEstimate": "$55,000"
      },
      "marketDemand": {
        "level": "very-high",
        "growth": "40% annually",
        "evidence": "Digital transformation and RPA market growth driving demand for intelligent automation"
      },
      "roi": {
        "developmentCost": "$8,000",
        "timeToMarket": "3 weeks",
        "breakEven": "4 months"
      }
    },
    "performance": {
      "targets": {
        "initializationTime": "5m",
        "responseTime": {
          "p50": "200ms",
          "p95": "1000ms",
          "p99": "2000ms"
        },
        "throughput": {
          "minimum": 20,
          "target": 50,
          "peak": 200
        },
        "availability": "99.9%",
        "errorRate": "<2%"
      },
      "resources": {
        "cpu": {
          "minimum": "1.0",
          "target": "2.0",
          "maximum": "4.0"
        },
        "memory": {
          "minimum": "1Gi",
          "target": "2Gi",
          "maximum": "8Gi"
        },
        "storage": {
          "database": "20Gi",
          "vectors": "10Gi",
          "files": "50Gi"
        }
      }
    },
    "customization": {
      "variables": {
        "APP_NAME": {
          "type": "string",
          "default": "Business Process Automation",
          "description": "Application display name"
        },
        "COMPANY_NAME": {
          "type": "string",
          "default": "Your Company",
          "description": "Customer company name"
        },
        "PRIMARY_COLOR": {
          "type": "string",
          "default": "#7c3aed",
          "description": "Brand primary color"
        },
        "DATABASE_NAME": {
          "type": "string",
          "default": "business_process_automation",
          "description": "Database name"
        },
        "APP_PORT": {
          "type": "number",
          "default": 3000,
          "description": "Application port"
        },
        "N8N_PORT": {
          "type": "number",
          "default": 5678,
          "description": "n8n workflow editor port"
        }
      },
      "features": {
        "authentication": {
          "enabled": true,
          "provider": "jwt",
          "sso": true
        },
        "notifications": {
          "enabled": true,
          "channels": ["email", "webhook", "slack", "teams"]
        },
        "analytics": {
          "enabled": true,
          "provider": "internal"
        },
        "ai": {
          "enabled": true,
          "provider": "ollama"
        }
      },
      "integrations": [
        {
          "name": "Enterprise Systems",
          "type": "rest-api",
          "required": false
        },
        {
          "name": "Legacy Systems",
          "type": "database",
          "required": false
        }
      ]
    },
    "category": "ai-automation",
    "complexity": "advanced",
    "marketDemand": "very-high"
  }
}
