{
  "discovery_sources": [
    {
      "name": "DockerHub AI",
      "url": "https://hub.docker.com/search?q=&type=image&category=ai",
      "type": "docker_hub_search",
      "category": "ai",
      "priority": 8,
      "enabled": true,
      "fetch_method": "api",
      "api_endpoint": "https://hub.docker.com/v2/search/repositories/?query=ai&page_size=50",
      "rate_limit": {
        "requests_per_hour": 100,
        "delay_between_requests": 36
      },
      "filters": {
        "min_stars": 10,
        "exclude_patterns": ["test", "demo", "example", "deprecated"],
        "include_official": true
      }
    },
    {
      "name": "DockerHub Automation",
      "url": "https://hub.docker.com/search?q=&type=image&category=automation",
      "type": "docker_hub_search",
      "category": "automation",
      "priority": 7,
      "enabled": true,
      "fetch_method": "api",
      "api_endpoint": "https://hub.docker.com/v2/search/repositories/?query=automation&page_size=50",
      "rate_limit": {
        "requests_per_hour": 100,
        "delay_between_requests": 36
      },
      "filters": {
        "min_stars": 5,
        "exclude_patterns": ["test", "demo", "example"],
        "keywords": ["workflow", "ci", "cd", "pipeline", "jenkins", "gitlab"]
      }
    },
    {
      "name": "DockerHub Storage",
      "url": "https://hub.docker.com/search?q=database&type=image",
      "type": "docker_hub_search", 
      "category": "storage",
      "priority": 9,
      "enabled": true,
      "fetch_method": "api",
      "api_endpoint": "https://hub.docker.com/v2/search/repositories/?query=database&page_size=50",
      "rate_limit": {
        "requests_per_hour": 100,
        "delay_between_requests": 36
      },
      "filters": {
        "min_stars": 20,
        "keywords": ["database", "storage", "cache", "redis", "mongo", "postgres", "mysql", "elasticsearch"]
      }
    },
    {
      "name": "DockerHub Monitoring",
      "url": "https://hub.docker.com/search?q=monitoring&type=image",
      "type": "docker_hub_search",
      "category": "monitoring", 
      "priority": 6,
      "enabled": true,
      "fetch_method": "api",
      "api_endpoint": "https://hub.docker.com/v2/search/repositories/?query=monitoring&page_size=50",
      "rate_limit": {
        "requests_per_hour": 100,
        "delay_between_requests": 36
      },
      "filters": {
        "min_stars": 15,
        "keywords": ["monitoring", "metrics", "prometheus", "grafana", "observability", "logging"]
      }
    },
    {
      "name": "Awesome Self-Hosted",
      "url": "https://raw.githubusercontent.com/awesome-selfhosted/awesome-selfhosted/master/README.md",
      "type": "markdown_list",
      "category": "all",
      "priority": 9,
      "enabled": true,
      "fetch_method": "http",
      "rate_limit": {
        "requests_per_hour": 60,
        "delay_between_requests": 60
      },
      "parsing": {
        "format": "markdown",
        "section_patterns": [
          "## Analytics",
          "## Automation", 
          "## Communication",
          "## Content Management Systems",
          "## Database Management",
          "## File Transfer & Synchronization",
          "## Media Streaming",
          "## Monitoring",
          "## Password Managers",
          "## Search Engines"
        ],
        "link_pattern": "\\[([^\\]]+)\\]\\(([^)]+)\\)",
        "description_pattern": " - (.+?)(?:\\s\\[[^\\]]+\\]|$)"
      },
      "filters": {
        "exclude_patterns": ["demo", "archived", "unmaintained"],
        "min_github_stars": 50
      }
    },
    {
      "name": "ArtifactHub AI",
      "url": "https://artifacthub.io/api/v1/packages/search?kind=0&ts_query_web=ai",
      "type": "artifact_hub_api",
      "category": "ai",
      "priority": 7,
      "enabled": true,
      "fetch_method": "api",
      "rate_limit": {
        "requests_per_hour": 200,
        "delay_between_requests": 18
      },
      "filters": {
        "package_kinds": ["helm", "olm"],
        "exclude_patterns": ["test", "example"],
        "min_version_count": 2
      }
    },
    {
      "name": "ArtifactHub Automation",
      "url": "https://artifacthub.io/api/v1/packages/search?kind=0&ts_query_web=automation",
      "type": "artifact_hub_api",
      "category": "automation",
      "priority": 6,
      "enabled": true,
      "fetch_method": "api",
      "rate_limit": {
        "requests_per_hour": 200,
        "delay_between_requests": 18
      },
      "filters": {
        "keywords": ["ci", "cd", "workflow", "pipeline", "automation"],
        "exclude_patterns": ["test", "demo"]
      }
    },
    {
      "name": "GitHub Trending AI",
      "url": "https://api.github.com/search/repositories?q=topic:artificial-intelligence+topic:docker&sort=stars&order=desc",
      "type": "github_api",
      "category": "ai",
      "priority": 8,
      "enabled": true,
      "fetch_method": "api",
      "rate_limit": {
        "requests_per_hour": 60,
        "delay_between_requests": 60
      },
      "filters": {
        "min_stars": 100,
        "has_dockerfile": true,
        "topics": ["artificial-intelligence", "machine-learning", "deep-learning", "nlp"],
        "exclude_archived": true,
        "max_age_days": 365
      },
      "auth": {
        "type": "github_token",
        "required": false
      }
    },
    {
      "name": "GitHub Trending Storage",
      "url": "https://api.github.com/search/repositories?q=topic:database+topic:docker&sort=stars&order=desc",
      "type": "github_api",
      "category": "storage",
      "priority": 8,
      "enabled": true,
      "fetch_method": "api",
      "rate_limit": {
        "requests_per_hour": 60,
        "delay_between_requests": 60
      },
      "filters": {
        "min_stars": 200,
        "has_dockerfile": true,
        "topics": ["database", "storage", "cache"],
        "exclude_archived": true
      }
    },
    {
      "name": "Bitnami Charts",
      "url": "https://charts.bitnami.com/bitnami/index.yaml",
      "type": "helm_repository",
      "category": "all",
      "priority": 7,
      "enabled": true,
      "fetch_method": "http",
      "rate_limit": {
        "requests_per_hour": 100,
        "delay_between_requests": 36
      },
      "parsing": {
        "format": "yaml",
        "charts_key": "entries"
      },
      "filters": {
        "exclude_patterns": ["test", "example", "deprecated"],
        "categories": ["ai-machine-learning", "analytics", "automation", "database"]
      }
    }
  ],
  "discovery_settings": {
    "max_concurrent_sources": 3,
    "discovery_interval_hours": 6,
    "retry_failed_after_hours": 24,
    "max_resources_per_run": 100,
    "enable_ai_categorization": true,
    "ai_categorization_model": "llama3.2",
    "ai_categorization_temperature": 0.3,
    "deduplication": {
      "enabled": true,
      "match_criteria": ["name", "repository_url", "docker_image"],
      "fuzzy_matching": true,
      "similarity_threshold": 0.8
    }
  },
  "resource_scoring": {
    "github_stars_weight": 0.3,
    "docker_pulls_weight": 0.2,
    "last_updated_weight": 0.2,
    "documentation_quality_weight": 0.1,
    "community_activity_weight": 0.1,
    "official_status_weight": 0.1,
    "max_score": 10.0,
    "min_score_for_processing": 3.0
  },
  "blacklist": {
    "domains": [
      "malicious-site.com",
      "spam-docker-images.net"
    ],
    "repositories": [
      "compromised/repo",
      "test/demo-only"
    ],
    "keywords": [
      "malware",
      "virus",
      "trojan",
      "backdoor",
      "exploit"
    ]
  },
  "quality_filters": {
    "min_description_length": 20,
    "require_readme": false,
    "require_license": false,
    "max_image_size_gb": 5.0,
    "require_health_check": false,
    "security_scanning": {
      "enabled": false,
      "max_vulnerabilities": 10,
      "exclude_low_severity": true
    }
  }
}