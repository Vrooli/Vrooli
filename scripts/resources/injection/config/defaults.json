{
  "version": "1.0.0",
  "scenarios": {
    "vrooli-core": {
      "description": "Core Vrooli workflows and automations for platform functionality",
      "version": "1.0.0",
      "resources": {
        "n8n": {
          "workflows": [
            {
              "name": "user-onboarding-flow",
              "file": "scenarios/vrooli-core/workflows/n8n/user-onboarding.json",
              "enabled": true,
              "tags": ["core", "users", "onboarding"]
            },
            {
              "name": "ai-tier-orchestration",
              "file": "scenarios/vrooli-core/workflows/n8n/ai-tier-coordination.json",
              "enabled": true,
              "tags": ["ai", "core", "orchestration"]
            }
          ],
          "credentials": [
            {
              "name": "vrooli-api-auth",
              "type": "httpAuth",
              "config": {
                "url": "http://localhost:3000/api",
                "authType": "bearer"
              }
            }
          ]
        },
        "windmill": {
          "scripts": [
            {
              "path": "f/vrooli/user_analytics",
              "file": "scenarios/vrooli-core/scripts/windmill/user_analytics.ts",
              "summary": "Generate user behavior analytics and reports",
              "schema": "scenarios/vrooli-core/schemas/windmill/user_analytics.json",
              "language": "typescript"
            },
            {
              "path": "f/vrooli/resource_monitor",
              "file": "scenarios/vrooli-core/scripts/windmill/resource_monitor.py",
              "summary": "Monitor resource health and performance",
              "language": "python"
            }
          ],
          "apps": [
            {
              "path": "f/vrooli/admin_dashboard",
              "file": "scenarios/vrooli-core/apps/windmill/admin_dashboard.json",
              "summary": "Vrooli admin control panel and monitoring interface"
            }
          ]
        },
        "node-red": {
          "flows": [
            {
              "name": "resource-health-monitor",
              "file": "scenarios/vrooli-core/flows/node-red/health-monitor.json",
              "deploy": true
            },
            {
              "name": "event-bus-monitor",
              "file": "scenarios/vrooli-core/flows/node-red/event-bus-monitor.json",
              "deploy": true
            }
          ]
        },
        "postgres": {
          "data": [
            {
              "type": "schema",
              "file": "scenarios/vrooli-core/sql/core-extensions.sql"
            }
          ]
        },
        "questdb": {
          "data": [
            {
              "type": "schema",
              "file": "scenarios/vrooli-core/sql/metrics-tables.sql"
            }
          ]
        }
      }
    },
    "example-ecommerce": {
      "description": "Complete e-commerce store scenario with product catalog, orders, and payments",
      "version": "1.0.0",
      "dependencies": ["vrooli-core"],
      "resources": {
        "n8n": {
          "workflows": [
            {
              "name": "order-processing-pipeline",
              "file": "scenarios/example-ecommerce/workflows/n8n/order-processing.json",
              "enabled": true,
              "tags": ["ecommerce", "orders", "processing"]
            },
            {
              "name": "inventory-management",
              "file": "scenarios/example-ecommerce/workflows/n8n/inventory-sync.json",
              "enabled": true,
              "tags": ["ecommerce", "inventory", "sync"]
            },
            {
              "name": "payment-processing",
              "file": "scenarios/example-ecommerce/workflows/n8n/payment-gateway.json",
              "enabled": true,
              "tags": ["ecommerce", "payments", "stripe"]
            }
          ]
        },
        "windmill": {
          "apps": [
            {
              "path": "f/ecommerce/store_dashboard",
              "file": "scenarios/example-ecommerce/apps/windmill/store-dashboard.json",
              "summary": "E-commerce store management dashboard"
            },
            {
              "path": "f/ecommerce/product_catalog",
              "file": "scenarios/example-ecommerce/apps/windmill/product-catalog.json",
              "summary": "Product catalog management interface"
            },
            {
              "path": "f/ecommerce/order_management",
              "file": "scenarios/example-ecommerce/apps/windmill/order-management.json",
              "summary": "Order processing and fulfillment interface"
            }
          ],
          "scripts": [
            {
              "path": "f/ecommerce/inventory_sync",
              "file": "scenarios/example-ecommerce/scripts/windmill/inventory_sync.ts",
              "summary": "Synchronize inventory across multiple platforms",
              "language": "typescript"
            }
          ]
        },
        "postgres": {
          "data": [
            {
              "type": "schema",
              "file": "scenarios/example-ecommerce/sql/ecommerce-schema.sql"
            },
            {
              "type": "seed",
              "file": "scenarios/example-ecommerce/sql/sample-products.sql"
            }
          ]
        },
        "minio": {
          "buckets": [
            {
              "name": "product-images",
              "policy": "public-read"
            },
            {
              "name": "order-documents",
              "policy": "private"
            }
          ],
          "data": [
            {
              "type": "directory",
              "bucket": "product-images",
              "source": "scenarios/example-ecommerce/assets/images/",
              "recursive": true
            }
          ]
        },
        "node-red": {
          "flows": [
            {
              "name": "order-status-notifications",
              "file": "scenarios/example-ecommerce/flows/node-red/order-notifications.json",
              "deploy": true
            }
          ]
        }
      }
    },
    "saas-analytics": {
      "description": "SaaS analytics platform with real-time dashboards and reporting",
      "version": "1.0.0",
      "dependencies": ["vrooli-core"],
      "resources": {
        "windmill": {
          "apps": [
            {
              "path": "f/analytics/dashboard",
              "file": "scenarios/saas-analytics/apps/windmill/analytics-dashboard.json",
              "summary": "Real-time analytics dashboard"
            }
          ],
          "scripts": [
            {
              "path": "f/analytics/data_processor",
              "file": "scenarios/saas-analytics/scripts/windmill/data_processor.py",
              "summary": "Process and aggregate analytics data",
              "language": "python"
            }
          ]
        },
        "questdb": {
          "data": [
            {
              "type": "schema",
              "file": "scenarios/saas-analytics/sql/analytics-tables.sql"
            }
          ]
        },
        "node-red": {
          "flows": [
            {
              "name": "data-ingestion-pipeline",
              "file": "scenarios/saas-analytics/flows/node-red/data-ingestion.json",
              "deploy": true
            }
          ]
        }
      }
    }
  },
  "active": []
}