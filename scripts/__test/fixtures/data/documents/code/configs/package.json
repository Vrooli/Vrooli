{
  "name": "@vrooli/test-fixtures",
  "version": "2.1.0",
  "description": "Test fixtures and utilities for Vrooli resource ecosystem testing",
  "keywords": [
    "vrooli",
    "ai",
    "automation",
    "resources",
    "testing",
    "fixtures"
  ],
  "author": "Vrooli Team <team@vrooli.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vrooli/Vrooli.git",
    "directory": "scripts/resources/tests/fixtures"
  },
  "bugs": {
    "url": "https://github.com/Vrooli/Vrooli/issues"
  },
  "homepage": "https://vrooli.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "documents",
    "workflows",
    "images",
    "audio",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist coverage .nyc_output",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run build && npm run validate",
    "generate:fixtures": "ts-node scripts/generate-fixtures.ts",
    "validate:fixtures": "ts-node scripts/validate-fixtures.ts",
    "clean:fixtures": "ts-node scripts/clean-fixtures.ts",
    "docs:generate": "typedoc --out docs src",
    "docs:serve": "http-server docs -p 8080 -o",
    "benchmark": "ts-node scripts/benchmark.ts",
    "security:audit": "npm audit --audit-level moderate",
    "update:dependencies": "npm-check-updates -u && npm install"
  },
  "dependencies": {
    "@types/node": "^20.10.0",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/csv-writer": "^1.6.6",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/mime-types": "^2.1.4",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "npm-check-updates": "^16.14.11",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "node": ">=18.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal"
          ],
          "newlines-between": "always"
        }
      ],
      "no-console": "warn",
      "prefer-const": "error"
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "browserslist": [
    "node >= 18"
  ],
  "config": {
    "fixtures": {
      "documentsPath": "./documents",
      "imagesPath": "./images",
      "audioPath": "./audio",
      "workflowsPath": "./workflows"
    },
    "validation": {
      "strictMode": true,
      "validateOnLoad": true,
      "maxFileSize": "100MB"
    },
    "generation": {
      "batchSize": 10,
      "parallelProcessing": true,
      "outputFormat": "json"
    }
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Vrooli"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  }
}