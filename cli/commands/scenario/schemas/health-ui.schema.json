{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UI Health Check Response",
  "description": "Schema for UI service health check responses. UI services MUST include api_connectivity to report their connection status to the backend API.",
  "type": "object",
  "required": ["status", "service", "timestamp", "readiness", "api_connectivity"],
  "definitions": {
    "errorObject": {
      "type": "object",
      "description": "Standardized error structure",
      "properties": {
        "code": {
          "type": "string",
          "description": "Machine-readable error code (e.g., CONNECTION_REFUSED, TIMEOUT)"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "category": {
          "type": "string",
          "enum": ["network", "configuration", "authentication", "resource", "internal"],
          "description": "Error category for automated handling"
        },
        "retryable": {
          "type": "boolean",
          "description": "Whether retrying the operation might succeed"
        },
        "details": {
          "type": "object",
          "description": "Optional additional error context",
          "additionalProperties": true
        }
      },
      "required": ["code", "message", "category", "retryable"],
      "additionalProperties": false
    }
  },
  "properties": {
    "status": {
      "type": "string",
      "enum": ["healthy", "degraded", "unhealthy"],
      "description": "Overall health status of the UI service"
    },
    "service": {
      "type": "string",
      "description": "Name of the UI service (e.g., 'test-genie-ui')"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the health check (REQUIRED)"
    },
    "readiness": {
      "type": "boolean",
      "description": "Whether the service is ready to serve traffic (true) or still initializing/draining (false). Distinguishes startup state from operational health."
    },
    "api_connectivity": {
      "type": "object",
      "description": "REQUIRED: Information about the UI's connection to its backend API",
      "required": ["connected", "api_url", "last_check"],
      "properties": {
        "connected": {
          "type": "boolean",
          "description": "Whether the UI can successfully reach the API"
        },
        "api_url": {
          "type": "string",
          "format": "uri",
          "description": "The API URL the UI is attempting to connect to"
        },
        "last_check": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of the last connectivity check"
        },
        "error": {
          "oneOf": [
            {"$ref": "#/definitions/errorObject"},
            {"type": "null"}
          ],
          "description": "Structured error information if connection failed, null if successful"
        },
        "latency_ms": {
          "type": ["number", "null"],
          "minimum": 0,
          "description": "Round-trip latency in milliseconds, null if connection failed"
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Optional performance metrics",
      "properties": {
        "memory_usage_mb": {
          "type": "number",
          "minimum": 0
        },
        "cpu_usage_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "active_connections": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  },
  "additionalProperties": true
}