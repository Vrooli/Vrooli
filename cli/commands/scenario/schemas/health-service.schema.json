{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generic Service Health Check Response",
  "description": "Schema for generic service health check responses (workers, background services, etc.)",
  "type": "object",
  "required": ["status", "service", "timestamp", "readiness"],
  "definitions": {
    "errorObject": {
      "type": "object",
      "description": "Standardized error structure",
      "properties": {
        "code": {
          "type": "string",
          "description": "Machine-readable error code (e.g., CONNECTION_REFUSED, TIMEOUT)"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "category": {
          "type": "string",
          "enum": ["network", "configuration", "authentication", "resource", "internal"],
          "description": "Error category for automated handling"
        },
        "retryable": {
          "type": "boolean",
          "description": "Whether retrying the operation might succeed"
        },
        "details": {
          "type": "object",
          "description": "Optional additional error context",
          "additionalProperties": true
        }
      },
      "required": ["code", "message", "category", "retryable"],
      "additionalProperties": false
    }
  },
  "properties": {
    "status": {
      "type": "string",
      "enum": ["healthy", "degraded", "unhealthy"],
      "description": "Overall health status of the service"
    },
    "service": {
      "type": "string",
      "description": "Name of the service (REQUIRED)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the health check (REQUIRED)"
    },
    "readiness": {
      "type": "boolean",
      "description": "Whether the service is ready to serve traffic (true) or still initializing/draining (false). Distinguishes startup state from operational health."
    },
    "status_notes": {
      "description": "Optional human-readable notes that explain degraded or unhealthy states",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      ]
    },
    "uptime_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Service uptime in seconds"
    },
    "dependencies": {
      "type": "object",
      "description": "Optional health status for additional dependencies consumed by the service",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "connected": {
            "type": "boolean"
          },
          "latency_ms": {
            "type": ["number", "null"],
            "minimum": 0
          },
          "error": {
            "oneOf": [
              {"$ref": "#/definitions/errorObject"},
              {"type": "null"}
            ],
            "description": "Structured error information if connection failed, null if successful"
          }
        },
        "additionalProperties": true
      }
    },
    "metrics": {
      "type": "object",
      "description": "Optional performance metrics",
      "additionalProperties": true
    },
    "build": {
      "type": "object",
      "description": "Metadata describing the build that produced this service instance",
      "properties": {
        "commit": {
          "type": "string",
          "description": "Source control revision identifier"
        },
        "version": {
          "type": "string",
          "description": "Semantic version or tag for the build"
        },
        "environment": {
          "type": "string",
          "description": "Deployment environment identifier (e.g., local, staging, prod)"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
