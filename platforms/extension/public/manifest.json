{
    "manifest_version": 3,
    "name": "{{APP_NAME}}",
    "version": "1.0.0",
    "description": "{{APP_DESCRIPTION}}",
    
    "_comment_permissions": "Add only the permissions your app needs. Common ones are listed below.",
    "permissions": [
        "storage",
        "activeTab"
        
        // Uncomment permissions as needed:
        // "tabs",              // Access to tab information
        // "scripting",         // Inject scripts into pages
        // "contextMenus",      // Add right-click menu items
        // "notifications",     // Show desktop notifications  
        // "alarms",            // Schedule tasks
        // "webRequest",        // Intercept network requests
        // "cookies",           // Access cookies
        // "history",           // Access browsing history
        // "bookmarks",         // Manage bookmarks
        // "downloads",         // Manage downloads
        // "identity",          // OAuth2 authentication
        // "clipboardRead",     // Read clipboard
        // "clipboardWrite"     // Write to clipboard
    ],
    
    "_comment_host_permissions": "Specify which websites your extension can access. Use specific patterns.",
    "host_permissions": [
        "{{API_ENDPOINT}}/*"
        
        // Examples of other patterns:
        // "https://*.example.com/*",   // All subdomains
        // "*://example.com/*",         // HTTP and HTTPS
        // "<all_urls>"                 // Access all sites (avoid if possible)
    ],
    
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    
    "action": {
        "default_popup": "index.html",
        "default_title": "{{APP_NAME}}",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    
    "_comment_commands": "Keyboard shortcuts for quick actions. Users can customize these.",
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+{{SHORTCUT_KEY}}",
                "mac": "Command+Shift+{{SHORTCUT_KEY}}"
            },
            "description": "Open {{APP_NAME}}"
        },
        "{{PRIMARY_ACTION_ID}}": {
            "suggested_key": {
                "default": "Alt+Shift+{{SHORTCUT_KEY}}",
                "mac": "Alt+Shift+{{SHORTCUT_KEY}}"
            },
            "description": "{{PRIMARY_ACTION}}"
        }
    },
    
    "_comment_content_scripts": "Uncomment if you need to inject scripts into web pages.",
    // "content_scripts": [
    //     {
    //         "matches": ["https://*.example.com/*"],
    //         "js": ["content.js"],
    //         "css": ["content.css"],
    //         "run_at": "document_end",
    //         "all_frames": false
    //     }
    // ],
    
    "_comment_web_accessible": "Resources that web pages can access from your extension.",
    // "web_accessible_resources": [
    //     {
    //         "resources": ["images/*.png", "styles/*.css"],
    //         "matches": ["https://*.example.com/*"]
    //     }
    // ],
    
    "_comment_externally_connectable": "Allow specific websites to communicate with your extension.",
    // "externally_connectable": {
    //     "matches": ["https://{{APP_DOMAIN}}/*"]
    // },
    
    "_comment_options_page": "A full settings page instead of popup.",
    // "options_page": "options.html",
    // "options_ui": {
    //     "page": "options.html",
    //     "open_in_tab": true
    // },
    
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    
    "minimum_chrome_version": "88"
}