{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SwarmBusinessModelConfiguration",
  "description": "Business model specific configuration patterns and templates",
  "type": "object",
  "properties": {
    "inferenceFarm": {
      "$ref": "#/definitions/InferenceFarmConfig"
    },
    "saas": {
      "$ref": "#/definitions/SaaSConfig"
    },
    "appliance": {
      "$ref": "#/definitions/ApplianceConfig"
    }
  },
  "definitions": {
    "InferenceFarmConfig": {
      "type": "object",
      "description": "Configuration for inference farm business model",
      "properties": {
        "serverSpecs": {
          "type": "object",
          "description": "Hardware specifications for inference servers",
          "properties": {
            "cpuModel": { "type": "string", "default": "Ryzen 7950X" },
            "gpuModel": { "type": "string", "enum": ["4070 Ti Super", "P40", "4090", "A100"] },
            "ramGB": { "type": "number", "minimum": 32, "maximum": 256 },
            "storageGB": { "type": "number", "minimum": 1000 },
            "powerConsumptionW": { "type": "number", "minimum": 300, "maximum": 800 }
          },
          "required": ["gpuModel", "ramGB"],
          "additionalProperties": false
        },
        "economicTargets": {
          "type": "object",
          "description": "Economic targets for inference farm operations",
          "properties": {
            "monthlyProfitGrowth": {
              "type": "array",
              "description": "Target profit progression over time",
              "items": {
                "type": "object",
                "properties": {
                  "month": { "type": "number" },
                  "targetProfit": { "type": "number" }
                },
                "required": ["month", "targetProfit"]
              }
            },
            "reinvestmentRate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Percentage of profit to reinvest in new hardware",
              "default": 0.5
            },
            "breakEvenMonths": {
              "type": "number",
              "minimum": 1,
              "description": "Expected months to break even on new hardware"
            },
            "targetUtilization": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Target GPU utilization rate",
              "default": 0.8
            }
          },
          "required": ["monthlyProfitGrowth", "reinvestmentRate"],
          "additionalProperties": false
        },
        "swarmAllocation": {
          "type": "object",
          "description": "Resource allocation across swarm tiers",
          "properties": {
            "directorAllocation": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Percentage of resources for director swarms",
              "default": 0.1
            },
            "infrastructureAllocation": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Percentage of resources for infrastructure swarms",
              "default": 0.3
            },
            "profitAllocation": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Percentage of resources for profit swarms",
              "default": 0.6
            }
          },
          "additionalProperties": false
        },
        "isolationPolicies": {
          "type": "object",
          "description": "Isolation requirements for different swarm types",
          "properties": {
            "profitSwarmIsolation": {
              "type": "string",
              "enum": ["full-container", "vm"],
              "description": "Required isolation level for profit swarms",
              "default": "full-container"
            },
            "clientDataSeparation": {
              "type": "boolean",
              "description": "Whether client data must be isolated",
              "default": true
            },
            "networkSegmentation": {
              "type": "boolean",
              "description": "Whether to use network segmentation",
              "default": true
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["serverSpecs", "economicTargets"],
      "additionalProperties": false
    },
    "SaaSConfig": {
      "type": "object",
      "description": "Configuration for SaaS business model",
      "properties": {
        "scalingMetrics": {
          "type": "object",
          "description": "Metrics for SaaS scaling and growth",
          "properties": {
            "targetMAU": {
              "type": "number",
              "minimum": 1000,
              "description": "Target Monthly Active Users"
            },
            "conversionRate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Free to paid conversion rate target",
              "default": 0.03
            },
            "churnRate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Monthly churn rate target",
              "default": 0.03
            },
            "arpu": {
              "type": "number",
              "minimum": 0,
              "description": "Average Revenue Per User monthly target"
            }
          },
          "required": ["targetMAU", "arpu"],
          "additionalProperties": false
        },
        "pricingTiers": {
          "type": "array",
          "description": "SaaS pricing tier definitions",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "monthlyPrice": { "type": "number", "minimum": 0 },
              "features": {
                "type": "array",
                "items": { "type": "string" }
              },
              "resourceLimits": {
                "type": "object",
                "properties": {
                  "maxSwarms": { "type": "number" },
                  "maxRoutines": { "type": "number" },
                  "maxAgents": { "type": "number" },
                  "computeHours": { "type": "number" }
                },
                "additionalProperties": false
              }
            },
            "required": ["name", "monthlyPrice", "features"],
            "additionalProperties": false
          }
        },
        "customerAcquisition": {
          "type": "object",
          "description": "Customer acquisition configuration",
          "properties": {
            "targetCAC": {
              "type": "number",
              "minimum": 0,
              "description": "Target Customer Acquisition Cost"
            },
            "organicChannels": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Organic acquisition channels to focus on"
            },
            "paidChannels": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Paid acquisition channels and budgets"
            },
            "contentStrategy": {
              "type": "object",
              "properties": {
                "blogPostsPerMonth": { "type": "number" },
                "videoContentPerMonth": { "type": "number" },
                "socialMediaPosts": { "type": "number" }
              },
              "additionalProperties": false
            }
          },
          "required": ["targetCAC"],
          "additionalProperties": false
        },
        "infrastructureRequirements": {
          "type": "object",
          "description": "Infrastructure needs for SaaS deployment",
          "properties": {
            "baseHostingCost": {
              "type": "number",
              "description": "Monthly base hosting cost in USD"
            },
            "scalingThresholds": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "userCount": { "type": "number" },
                  "additionalCost": { "type": "number" }
                },
                "required": ["userCount", "additionalCost"]
              }
            },
            "cdnCosts": { "type": "number" },
            "databaseCosts": { "type": "number" },
            "monitoringCosts": { "type": "number" }
          },
          "required": ["baseHostingCost"],
          "additionalProperties": false
        }
      },
      "required": ["scalingMetrics", "pricingTiers", "customerAcquisition"],
      "additionalProperties": false
    },
    "ApplianceConfig": {
      "type": "object",
      "description": "Configuration for appliance business model",
      "properties": {
        "hardwareSpecs": {
          "type": "object",
          "description": "Appliance hardware specifications",
          "properties": {
            "formFactor": {
              "type": "string",
              "enum": ["mini-tower", "desktop", "rack-mount", "edge-device"],
              "description": "Physical form factor"
            },
            "targetBOM": {
              "type": "number",
              "description": "Target Bill of Materials cost in USD"
            },
            "gpuModel": {
              "type": "string",
              "enum": ["4070 Ti", "P40", "RTX 4060", "integrated"],
              "description": "GPU model for appliance"
            },
            "ramGB": { "type": "number", "minimum": 8, "maximum": 64 },
            "storageGB": { "type": "number", "minimum": 256 },
            "powerConsumptionW": { "type": "number", "maximum": 500 },
            "operatingSystem": {
              "type": "string",
              "enum": ["ubuntu-immutable", "debian", "custom-linux"],
              "default": "ubuntu-immutable"
            }
          },
          "required": ["formFactor", "targetBOM", "gpuModel", "ramGB"],
          "additionalProperties": false
        },
        "businessModel": {
          "type": "object",
          "description": "Appliance business model configuration",
          "properties": {
            "salesModel": {
              "type": "string",
              "enum": ["sale", "lease", "hybrid"],
              "description": "Primary sales model"
            },
            "salePrice": {
              "type": "number",
              "minimum": 1000,
              "description": "One-time sale price in USD"
            },
            "leasePrice": {
              "type": "number",
              "minimum": 50,
              "description": "Monthly lease price in USD"
            },
            "apiMargins": {
              "type": "number",
              "description": "Monthly API service margins in USD"
            },
            "supportCosts": {
              "type": "number",
              "description": "Monthly support cost per unit in USD"
            },
            "warrantyPeriod": {
              "type": "number",
              "description": "Warranty period in months"
            }
          },
          "required": ["salesModel"],
          "additionalProperties": false
        },
        "deploymentRequirements": {
          "type": "object",
          "description": "Deployment and installation requirements",
          "properties": {
            "selfInstallTarget": {
              "type": "number",
              "description": "Target installation time in minutes"
            },
            "requiredBandwidth": {
              "type": "number",
              "description": "Minimum internet bandwidth in Mbps"
            },
            "powerRequirements": {
              "type": "object",
              "properties": {
                "voltage": { "type": "number" },
                "amperage": { "type": "number" },
                "plugType": { "type": "string" }
              }
            },
            "environmentalLimits": {
              "type": "object",
              "properties": {
                "maxTempC": { "type": "number" },
                "maxHumidity": { "type": "number" },
                "noiseLevel": { "type": "number" }
              }
            }
          },
          "required": ["selfInstallTarget"],
          "additionalProperties": false
        },
        "customerSupport": {
          "type": "object",
          "description": "Customer support configuration",
          "properties": {
            "supportTiers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "responseTime": { "type": "string" },
                  "channels": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "cost": { "type": "number" }
                },
                "required": ["name", "responseTime", "channels"]
              }
            },
            "remoteAccess": {
              "type": "boolean",
              "description": "Whether remote support access is available"
            },
            "autoLogCollection": {
              "type": "boolean",
              "description": "Automatic log collection for support"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["hardwareSpecs", "businessModel", "deploymentRequirements"],
      "additionalProperties": false
    }
  }
}