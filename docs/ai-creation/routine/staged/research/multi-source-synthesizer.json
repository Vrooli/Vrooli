                "outputMap": {
                  "commonThemes": "sharedInsights",
                  "conflictingInfo": "discrepancies",
                  "uniqueInsights": "exclusiveFindings"
                }
              },
              {
                "id": "step-4",
                "name": "Synthesize Findings",
                "description": "Combines all findings into unified analysis",
                "subroutineId": "7829564732190848741",
                "inputMap": {
                  "sharedInsights": "commonThemes",
                  "discrepancies": "conflictingInfo",
                  "exclusiveFindings": "uniqueInsights",
                  "credibilityRatings": "sourceQuality"
                },
                "outputMap": {
                  "unifiedSynthesis": "integratedAnalysis",
                  "confidenceLevel": "synthesisConfidence",
                  "knowledgeGaps": "identifiedGaps"
                }
              },
              {
                "id": "step-5",
                "name": "Generate Unified Report",
                "description": "Creates comprehensive report with all sources cited",
                "subroutineId": "7829564732190848729",
                "inputMap": {
