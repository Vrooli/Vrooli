    {
      "id": "7829564732190847680",
      "publicId": "research-paper-v1-0",
      "versionLabel": "1.0.0",
      "versionNotes": "Initial version - Comprehensive research paper development assistance",
      "isComplete": true,
      "isPrivate": false,
      "versionIndex": 0,
      "isAutomatable": true,
      "resourceSubType": "RoutineMultiStep",
      "config": {
        "__version": "1.0",
        "graph": {
          "__type": "Sequential",
          "schema": {
            "steps": [
              {
                "id": "step-1",
                "name": "Define Research Scope",
                "description": "Clarifies research question, objectives, and methodology approach",
                "subroutineId": "7829564732190849590",
                "inputMap": {
                  "researchTopic": "initialTopic",
                  "academicLevel": "studyLevel",
                  "researchGoals": "objectives"
                },
                "outputMap": {
                  "researchQuestion": "focusedQuestion",
                  "scope": "researchBoundaries",
                  "methodology": "approachPlan"
                }
              },
              {
                "id": "step-2",
                "name": "Conduct Literature Review",
                "description": "Identifies key sources, theories, and existing research",
                "subroutineId": "7829564732190849593",
                "inputMap": {
                  "researchQuestion": "focusedQuestion",
                  "keywords": "searchTerms",
                  "academicDatabases": "sourcePreferences"
                },
                "outputMap": {
                  "keySourcesList": "relevantLiterature",
                  "theoreticalFramework": "conceptualBasis",
                  "researchGaps": "knowledgeGaps"
                }
              },
              {
                "id": "step-3",
                "name": "Create Paper Outline",
                "description": "Structures paper with logical flow and section organization",
                "subroutineId": "7829564732190849596",
                "inputMap": {
                  "researchQuestion": "focusedQuestion",
                  "theoreticalFramework": "conceptualBasis",
                  "paperFormat": "academicStyle"
                },
                "outputMap": {
                  "paperStructure": "documentOutline",
                  "sectionPlan": "contentOrganization",
                  "argumentFlow": "logicalSequence"
                }
              },
              {
                "id": "step-4",
                "name": "Develop Thesis Statement",
                "description": "Crafts strong, focused thesis with supporting arguments",
                "subroutineId": "7829564732190849599",
                "inputMap": {
                  "researchQuestion": "focusedQuestion",
                  "researchGaps": "knowledgeGaps",
                  "argumentFlow": "logicalSequence"
                },
                "outputMap": {
                  "thesisStatement": "centralArgument",
                  "supportingPoints": "keyArguments",
                  "counterarguments": "alternativeViews"
                }
              },
              {
                "id": "step-5",
                "name": "Write Section Drafts",
                "description": "Provides writing guidance and structure for each section",
                "subroutineId": "7829564732190849602",
                "inputMap": {
                  "paperStructure": "documentOutline",
                  "centralArgument": "thesisStatement",
                  "relevantLiterature": "keySourcesList"
                },
                "outputMap": {
                  "sectionDrafts": "writtenSections",
                  "citationGuide": "referenceFormat",
                  "transitionStrategies": "flowConnections"
                }
              },
              {
                "id": "step-6",
                "name": "Review and Refine",
                "description": "Evaluates coherence, argument strength, and academic standards",
                "subroutineId": "7829564732190849605",
                "inputMap": {
                  "completeDraft": "fullPaper",
                  "academicStandards": "qualityCriteria",
                  "citationStyle": "referenceRequirements"
                },
                "outputMap": {
                  "revisionSuggestions": "improvementPlan",
                  "strengthAssessment": "paperQuality",
                  "finalChecklist": "submissionPrep"
                }
              }
            ],
            "rootContext": {
              "inputMap": {
                "topic": "initialTopic",
                "level": "studyLevel",
                "format": "academicStyle",
                "deadline": "timeframe"
              },
              "outputMap": {
                "documentOutline": "researchPlan",
                "centralArgument": "thesis",
                "writtenSections": "paperDrafts",
                "improvementPlan": "revisionGuide"
              }
            },
            "executionMode": "sequential"
          }
        },
        "formInput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "topic",
                "id": "topic_input",
                "label": "Research Topic",
                "type": "TextInput",
                "isRequired": true,
                "placeholder": "What is your research topic or area of interest?"
              },
              {
                "fieldName": "level",
                "id": "level_input",
                "label": "Academic Level",
                "type": "Selector",
                "isRequired": true,
                "options": [
                  "high-school",
                  "undergraduate",
                  "graduate",
                  "masters",
                  "doctoral",
                  "professional"
                ]
              },
              {
                "fieldName": "format",
                "id": "format_input",
                "label": "Paper Format/Style",
                "type": "Selector",
                "isRequired": true,
                "options": [
                  "apa",
                  "mla",
                  "chicago",
                  "harvard",
                  "ieee",
                  "vancouver",
                  "custom"
                ]
              },
              {
                "fieldName": "deadline",
                "id": "deadline_input",
                "label": "Target Completion",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "1-month",
                "options": [
                  "1-week",
                  "2-weeks",
                  "1-month",
                  "2-months",
                  "semester",
                  "flexible"
                ]
              },
              {
                "fieldName": "paperType",
                "id": "paper_type_input",
                "label": "Paper Type",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "research-paper",
                "options": [
                  "research-paper",
                  "literature-review",
                  "case-study",
                  "argumentative",
                  "analytical",
                  "thesis",
                  "dissertation"
                ]
              },
              {
                "fieldName": "length",
                "id": "length_input",
                "label": "Target Length",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "10-15-pages",
                "options": [
                  "5-10-pages",
                  "10-15-pages",
                  "15-25-pages",
                  "25-50-pages",
                  "50+-pages"
                ]
              },
              {
                "fieldName": "sources",
                "id": "sources_input",
                "label": "Preferred Source Types",
                "type": "JSON",
                "isRequired": false,
                "placeholder": "Academic journals, books, databases, etc."
              }
            ]
          }
        },
        "formOutput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "researchPlan",
                "id": "research_plan_output",
                "label": "Complete Research Plan",
                "type": "JSON"
              },
              {
                "fieldName": "thesis",
                "id": "thesis_output",
                "label": "Thesis Statement & Arguments",
                "type": "JSON"
              },
              {
                "fieldName": "paperDrafts",
                "id": "paper_drafts_output",
                "label": "Section Drafts & Writing Guide",
                "type": "JSON"
              },
              {
                "fieldName": "revisionGuide",
                "id": "revision_guide_output",
                "label": "Revision & Improvement Guide",
                "type": "JSON"
              }
            ]
          }
        },
        "executionStrategy": "reasoning",
        "allowStrategyOverride": false,
        "subroutineStrategies": {
          "0": "reasoning",
          "1": "reasoning",
          "2": "reasoning",
          "3": "reasoning",
          "4": "reasoning",
          "5": "reasoning"
        }
      },
      "translations": [
        {
          "id": "7829564732190847681",
          "language": "en",
          "name": "Research Paper Assistant",
          "description": "Comprehensive academic writing support system that guides through the entire research paper process from topic refinement to final revision. Includes literature review guidance, thesis development, outline creation, and quality assessment.",
          "instructions": "Specify your research topic, academic level, and paper requirements. The routine will guide you through systematic research planning, literature review, thesis development, outline creation, writing assistance, and revision strategies tailored to academic standards."
        }
      ]
    }
