        "graph": {
          "__type": "Sequential",
          "schema": {
            "steps": [
              {
                "id": "step-1",
                "name": "Assess Current Knowledge",
                "description": "Evaluates existing skills and knowledge baseline",
                "subroutineId": "7829564732190849167",
                "inputMap": {
                  "learningGoal": "targetSkill",
                  "currentExperience": "existingKnowledge",
                  "assessmentMethod": "evaluationApproach"
                },
                "outputMap": {
                  "skillGaps": "knowledgeDeficits",
                  "currentLevel": "baselineAssessment",
                  "strengths": "existingCapabilities"
                }
              },
              {
                "id": "step-2",
                "name": "Define Learning Objectives",
                "description": "Creates specific, measurable learning goals and milestones",
                "subroutineId": "7829564732190849170",
                "inputMap": {
                  "learningGoal": "targetSkill",
                  "skillGaps": "knowledgeDeficits",
                  "timeframe": "learningDuration",
                  "learningStyle": "preferredMethods"
                },
                "outputMap": {
                  "objectives": "learningGoals",
                  "milestones": "progressMarkers",
                  "successMetrics": "completionCriteria"
                }
              },
              {
                "id": "step-3",
                "name": "Design Learning Sequence",
                "description": "Structures topics in optimal learning order with dependencies",
                "subroutineId": "7829564732190849173",
                "inputMap": {
                  "objectives": "learningGoals",
                  "skillGaps": "knowledgeDeficits",
                  "learningStyle": "preferredMethods",
                  "complexity": "difficultyProgression"
                },
                "outputMap": {
                  "learningModules": "courseSequence",
                  "prerequisites": "dependencyMap",
                  "difficultyProgression": "skillBuilding"
                }
              },
              {
                "id": "step-4",
                "name": "Select Resources & Methods",
                "description": "Chooses optimal learning materials and methodologies",
                "subroutineId": "7829564732190849176",
                "inputMap": {
                  "learningModules": "courseSequence",
                  "learningStyle": "preferredMethods",
                  "budget": "resourceConstraints",
                  "timeAvailable": "studySchedule"
                },
                "outputMap": {
                  "recommendedResources": "learningMaterials",
                  "methodologies": "instructionalApproaches",
                  "alternativeOptions": "backupResources"
                }
              },
              {
                "id": "step-5",
                "name": "Create Study Schedule",
                "description": "Develops realistic timeline with spaced repetition and practice",
                "subroutineId": "7829564732190849179",
                "inputMap": {
                  "learningModules": "courseSequence",
                  "timeAvailable": "studySchedule",
                  "milestones": "progressMarkers",
                  "learningStyle": "preferredMethods"
                },
                "outputMap": {
                  "studyPlan": "timelineSchedule",
                  "practiceSchedule": "reinforcementPlan",
                  "reviewCycles": "retentionStrategy"
                }
              },
              {
                "id": "step-6",
                "name": "Design Progress Tracking",
                "description": "Establishes monitoring system for learning progress and adjustments",
                "subroutineId": "7829564732190849182",
                "inputMap": {
                  "successMetrics": "completionCriteria",
                  "milestones": "progressMarkers",
                  "studyPlan": "timelineSchedule"
                },
                "outputMap": {
                  "trackingSystem": "progressMonitoring",
                  "assessmentSchedule": "evaluationPlan",
                  "adjustmentTriggers": "adaptationRules"
                }
              }
            ],
            "rootContext": {
              "inputMap": {
                "goal": "targetSkill",
                "experience": "existingKnowledge",
                "timeframe": "learningDuration",
                "style": "preferredMethods"
              },
              "outputMap": {
                "courseSequence": "completeLearningPath",
                "timelineSchedule": "studySchedule",
                "learningMaterials": "resourceRecommendations",
                "progressMonitoring": "trackingFramework"
              }
            },
            "executionMode": "sequential"
          }
        },
        "formInput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "goal",
                "id": "goal_input",
                "label": "Learning Goal",
                "type": "TextInput",
                "isRequired": true,
                "placeholder": "What skill or knowledge do you want to acquire?"
              },
              {
                "fieldName": "experience",
                "id": "experience_input",
                "label": "Current Experience Level",
                "type": "Selector",
                "isRequired": true,
                "options": [
                  "complete-beginner",
                  "some-exposure",
                  "basic-knowledge",
                  "intermediate",
                  "advanced-seeking-specialization"
                ]
              },
              {
                "fieldName": "timeframe",
                "id": "timeframe_input",
                "label": "Learning Timeframe",
                "type": "Selector",
                "isRequired": true,
                "options": [
                  "1-month",
                  "3-months",
                  "6-months",
                  "1-year",
                  "ongoing"
                ]
              },
              {
                "fieldName": "style",
                "id": "style_input",
                "label": "Preferred Learning Style",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "mixed",
                "options": [
                  "visual",
                  "auditory",
                  "hands-on",
                  "reading",
                  "mixed",
                  "project-based"
                ]
              },
              {
                "fieldName": "timeAvailable",
                "id": "time_available_input",
                "label": "Weekly Study Time",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "5-10-hours",
                "options": [
                  "1-2-hours",
                  "3-5-hours",
                  "5-10-hours",
                  "10-20-hours",
                  "20+-hours"
                ]
              },
              {
                "fieldName": "budget",
                "id": "budget_input",
                "label": "Learning Budget",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "moderate",
                "options": [
                  "free-only",
                  "minimal",
                  "moderate",
                  "substantial",
                  "unlimited"
                ]
              }
            ]
          }
        },
        "formOutput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "completeLearningPath",
                "id": "complete_learning_path_output",
                "label": "Complete Learning Path",
                "type": "JSON"
              },
              {
                "fieldName": "studySchedule",
                "id": "study_schedule_output",
                "label": "Personalized Study Schedule",
                "type": "JSON"
              },
              {
                "fieldName": "resourceRecommendations",
                "id": "resource_recommendations_output",
                "label": "Learning Resource Recommendations",
                "type": "JSON"
              },
              {
                "fieldName": "trackingFramework",
                "id": "tracking_framework_output",
                "label": "Progress Tracking Framework",
                "type": "JSON"
              }
            ]
          }
        },
