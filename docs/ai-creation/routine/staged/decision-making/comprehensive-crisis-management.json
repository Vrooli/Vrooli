      "id": "7829564732190847788",
      "publicId": "crisis-mgmt-v1-0",
      "versionLabel": "1.0.0",
      "versionNotes": "Initial version - Comprehensive crisis management and emergency response system",
      "isComplete": true,
      "isPrivate": false,
      "versionIndex": 0,
      "isAutomatable": true,
      "resourceSubType": "RoutineMultiStep",
      "config": {
        "__version": "1.0",
        "graph": {
          "__type": "Sequential",
          "schema": {
            "steps": [
              {
                "id": "step-1",
                "name": "Assess Crisis Situation",
                "description": "Rapidly evaluates crisis scope, severity, and immediate threats",
                "subroutineId": "7829564732190848855",
                "inputMap": {
                  "crisisDescription": "situationOverview",
                  "impactAssessment": "consequenceEvaluation",
                  "urgencyLevel": "criticalityRating"
                },
                "outputMap": {
                  "crisisAnalysis": "situationAssessment",
                  "threatEvaluation": "riskProfile",
                  "priorityAreas": "criticalFoci"
                }
              },
              {
                "id": "step-2",
                "name": "Activate Response Team",
                "description": "Mobilizes appropriate personnel and establishes command structure",
                "subroutineId": "7829564732190848858",
                "inputMap": {
                  "situationAssessment": "crisisAnalysis",
                  "availableResources": "resourceInventory",
                  "organizationalStructure": "teamConfiguration"
                },
                "outputMap": {
                  "responseTeam": "activatedPersonnel",
                  "commandStructure": "leadershipHierarchy",
                  "roleAssignments": "responsibilityMatrix"
                }
              },
              {
                "id": "step-3",
                "name": "Implement Immediate Actions",
                "description": "Executes urgent interventions to prevent escalation",
                "subroutineId": "7829564732190848861",
                "inputMap": {
                  "criticalFoci": "priorityAreas",
                  "activatedPersonnel": "responseTeam",
                  "safetyProtocols": "emergencyProcedures"
                },
                "outputMap": {
                  "immediateMeasures": "urgentActions",
                  "safetySecuring": "protectiveMeasures",
                  "stakeholderNotification": "communicationInitiation"
                }
              },
              {
                "id": "step-4",
                "name": "Develop Action Plan",
                "description": "Creates comprehensive strategy for crisis resolution",
                "subroutineId": "7829564732190848864",
                "inputMap": {
                  "riskProfile": "threatEvaluation",
                  "urgentActions": "immediateMeasures",
                  "resourceConstraints": "availableCapabilities"
                },
                "outputMap": {
                  "crisisStrategy": "resolutionPlan",
                  "actionSequence": "implementationSteps",
                  "resourceAllocation": "deploymentPlan"
                }
              },
              {
                "id": "step-5",
                "name": "Execute & Monitor Response",
                "description": "Implements plan while continuously monitoring and adapting",
                "subroutineId": "7829564732190848867",
                "inputMap": {
                  "resolutionPlan": "crisisStrategy",
                  "implementationSteps": "actionSequence",
                  "monitoringProtocols": "trackingMethods"
                },
                "outputMap": {
                  "executionProgress": "implementationStatus",
                  "adaptiveAdjustments": "strategicModifications",
                  "statusReporting": "progressCommunication"
                }
              },
              {
                "id": "step-6",
                "name": "Conduct Recovery & Learning",
                "description": "Manages recovery phase and captures lessons learned",
                "subroutineId": "7829564732190848870",
                "inputMap": {
                  "implementationStatus": "executionProgress",
                  "damageAssessment": "impactEvaluation",
                  "stakeholderFeedback": "responseEvaluation"
                },
                "outputMap": {
                  "recoveryPlan": "restorationStrategy",
                  "lessonsLearned": "improvementInsights",
                  "preventionMeasures": "futurePreparedness"
                }
              }
            ],
            "rootContext": {
              "inputMap": {
                "crisis": "situationOverview",
                "organization": "resourceInventory",
                "stakeholders": "affectedParties",
                "timeline": "responseTimeframe"
              },
              "outputMap": {
                "restorationStrategy": "crisisResolution",
                "improvementInsights": "organizationalLearning",
                "situationAssessment": "crisisAnalysis",
                "futurePreparedness": "preventionFramework"
              }
            },
            "executionMode": "sequential"
          }
        },
        "formInput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "crisis",
                "id": "crisis_input",
                "label": "Crisis Description",
                "type": "TextInput",
                "isRequired": true,
                "placeholder": "Describe the crisis situation in detail"
              },
              {
                "fieldName": "organization",
                "id": "organization_input",
                "label": "Organization Context",
                "type": "JSON",
                "isRequired": true,
                "placeholder": "Organization size, structure, resources, and capabilities"
              },
              {
                "fieldName": "crisisType",
                "id": "crisis_type_input",
                "label": "Crisis Type",
                "type": "Selector",
                "isRequired": true,
                "options": [
                  "natural-disaster",
                  "technology-failure",
                  "security-breach",
                  "financial-crisis",
                  "reputation-damage",
                  "supply-chain-disruption",
                  "health-emergency",
                  "workplace-accident",
                  "legal-regulatory",
                  "operational-failure"
                ]
              },
              {
                "fieldName": "severity",
                "id": "severity_input",
                "label": "Crisis Severity",
                "type": "Selector",
                "isRequired": true,
                "options": [
                  "minor",
                  "moderate",
                  "major",
                  "severe",
                  "catastrophic"
                ]
              },
              {
                "fieldName": "stakeholders",
                "id": "stakeholders_input",
                "label": "Affected Stakeholders",
                "type": "JSON",
                "isRequired": true,
                "placeholder": "Who is affected by this crisis?"
              },
              {
                "fieldName": "timeline",
                "id": "timeline_input",
                "label": "Response Timeline",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "immediate",
                "options": [
                  "immediate",
                  "hours",
                  "days",
                  "weeks",
                  "ongoing"
                ]
              },
              {
                "fieldName": "existingPlans",
                "id": "existing_plans_input",
                "label": "Existing Crisis Plans",
                "type": "JSON",
                "isRequired": false,
                "placeholder": "Do you have existing crisis management or emergency response plans?"
              },
              {
                "fieldName": "resourceLimitations",
                "id": "resource_limitations_input",
                "label": "Resource Constraints",
                "type": "JSON",
                "isRequired": false,
                "placeholder": "What limitations exist in terms of budget, personnel, or capabilities?"
              }
            ]
          }
        },
        "formOutput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "crisisResolution",
                "id": "crisis_resolution_output",
                "label": "Complete Crisis Resolution Plan",
                "type": "JSON"
              },
              {
                "fieldName": "organizationalLearning",
                "id": "organizational_learning_output",
                "label": "Lessons Learned & Improvements",
                "type": "JSON"
              },
              {
                "fieldName": "crisisAnalysis",
                "id": "crisis_analysis_output",
                "label": "Crisis Situation Analysis",
                "type": "JSON"
              },
              {
                "fieldName": "preventionFramework",
                "id": "prevention_framework_output",
                "label": "Future Crisis Prevention Plan",
                "type": "JSON"
              }
            ]
          }
        },
        "executionStrategy": "reasoning",
        "allowStrategyOverride": false,
        "subroutineStrategies": {
          "0": "reasoning",
          "1": "deterministic",
          "2": "deterministic",
          "3": "reasoning",
          "4": "reasoning",
          "5": "reasoning"
        }
      },
      "translations": [
        {
          "id": "7829564732190847789",
          "language": "en",
          "name": "Comprehensive Crisis Management Advisor",
          "description": "Complete crisis management system that assesses situations, activates response teams, implements immediate actions, develops strategies, executes monitored responses, and manages recovery with organizational learning for effective crisis resolution.",
          "instructions": "Describe the crisis situation and organizational context. Specify crisis type, severity, and affected stakeholders. Include timeline and resource constraints. The routine will assess the situation, activate response protocols, create action plans, and guide through resolution and recovery."
        }
      ]
    }
