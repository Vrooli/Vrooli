      "publicId": "crisis-mgmt-v1-0",
      "versionLabel": "1.0.0",
      "versionNotes": "Initial version - Crisis response planning and management guidance",
      "isComplete": true,
      "isPrivate": false,
      "versionIndex": 0,
      "isAutomatable": true,
      "resourceSubType": "RoutineMultiStep",
      "config": {
        "__version": "1.0",
        "graph": {
          "__type": "Sequential",
          "schema": {
            "steps": [
              {
                "id": "step-1",
                "name": "Assess Crisis Situation",
                "description": "Evaluates crisis severity, scope, and immediate threats",
                "subroutineId": "7829564732190848855",
                "inputMap": {
                  "crisisDescription": "situationDetails",
                  "impactScope": "affectedAreas",
                  "urgencyLevel": "timeConstraints"
                },
                "outputMap": {
                  "situationAnalysis": "crisisAssessment",
                  "threatLevel": "severityRating",
                  "affectedStakeholders": "impactedParties"
                }
              },
              {
                "id": "step-2",
                "name": "Establish Crisis Response Team",
                "description": "Identifies key personnel and communication structure",
                "subroutineId": "7829564732190849158",
                "inputMap": {
                  "organizationStructure": "availableResources",
                  "crisisAssessment": "situationAnalysis",
                  "communicationNeeds": "coordinationRequirements"
                },
                "outputMap": {
                  "responseTeam": "crisisLeadership",
                  "rolesResponsibilities": "teamStructure",
                  "communicationProtocol": "coordinationPlan"
                }
              },
              {
                "id": "step-3",
                "name": "Develop Immediate Response Plan",
                "description": "Creates urgent action steps and safety measures",
                "subroutineId": "7829564732190848861",
                "inputMap": {
                  "situationAnalysis": "crisisAssessment",
                  "availableResources": "responseCapacity",
                  "safetyPriorities": "protectionNeeds"
                },
                "outputMap": {
                  "immediateActions": "urgentSteps",
                  "safetyMeasures": "protectionProtocols",
                  "resourceAllocation": "emergencyDeployment"
                }
              },
              {
                "id": "step-4",
                "name": "Plan Stakeholder Communication",
                "description": "Develops messaging strategy for all affected parties",
                "subroutineId": "7829564732190849161",
                "inputMap": {
                  "impactedParties": "affectedStakeholders",
                  "messagingRequirements": "communicationNeeds",
                  "reputationConsiderations": "brandProtection"
                },
                "outputMap": {
                  "communicationStrategy": "messagingPlan",
                  "stakeholderMessages": "targetedCommunications",
                  "mediaResponse": "publicRelationsStrategy"
                }
              },
              {
                "id": "step-5",
                "name": "Implement Recovery Strategy",
                "description": "Establishes medium-term stabilization and restoration",
                "subroutineId": "7829564732190848870",
                "inputMap": {
                  "crisisAssessment": "situationAnalysis",
                  "recoveryGoals": "stabilizationTargets",
                  "reconstructionNeeds": "restorationRequirements"
                },
                "outputMap": {
                  "recoveryPlan": "stabilizationStrategy",
                  "reconstructionSteps": "restorationActions",
                  "timelineEstimates": "recoverySchedule"
                }
              },
              {
                "id": "step-6",
                "name": "Establish Learning Framework",
                "description": "Creates post-crisis analysis and improvement system",
                "subroutineId": "7829564732190849242",
                "inputMap": {
                  "crisisResponse": "managementActions",
                  "outcomesResults": "responseEffectiveness",
                  "improvementAreas": "lessonLearned"
                },
                "outputMap": {
                  "postCrisisAnalysis": "responseEvaluation",
                  "preventionMeasures": "futurePreparation",
                  "improvementPlan": "systemEnhancements"
                }
              }
            ],
            "rootContext": {
              "inputMap": {
                "crisis": "situationDetails",
                "organization": "availableResources",
                "stakeholders": "communicationNeeds",
                "recovery": "stabilizationTargets"
              },
              "outputMap": {
                "crisisAssessment": "situationEvaluation",
                "urgentSteps": "immediateActionPlan",
                "messagingPlan": "communicationStrategy",
                "stabilizationStrategy": "recoveryFramework"
              }
            },
            "executionMode": "sequential"
          }
        },
        "formInput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "crisis",
                "id": "crisis_input",
                "label": "Crisis Description",
                "type": "TextInput",
                "isRequired": true,
                "placeholder": "Describe the crisis situation and its key characteristics"
              },
              {
                "fieldName": "organization",
                "id": "organization_input",
                "label": "Organization Context",
                "type": "JSON",
                "isRequired": true,
                "placeholder": "Organization type, size, resources, and capabilities"
              },
              {
                "fieldName": "stakeholders",
                "id": "stakeholders_input",
                "label": "Key Stakeholders",
                "type": "JSON",
                "isRequired": true,
                "placeholder": "Who needs to be informed and involved?"
              },
              {
                "fieldName": "recovery",
                "id": "recovery_input",
                "label": "Recovery Objectives",
                "type": "JSON",
                "isRequired": false,
                "placeholder": "What does successful recovery look like?"
              },
              {
                "fieldName": "crisisType",
                "id": "crisis_type_input",
                "label": "Crisis Type",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "operational",
                "options": [
                  "natural-disaster",
                  "cyber-security",
                  "financial",
                  "operational",
                  "reputational",
                  "health-safety",
                  "regulatory",
                  "supply-chain",
                  "personnel",
                  "technology",
                  "other"
                ]
              },
              {
                "fieldName": "urgencyLevel",
                "id": "urgency_level_input",
                "label": "Urgency Level",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "high",
                "options": [
                  "moderate",
                  "high",
                  "critical",
                  "emergency"
                ]
              },
              {
                "fieldName": "resourceConstraints",
                "id": "resource_constraints_input",
                "label": "Resource Constraints",
                "type": "JSON",
                "isRequired": false,
                "placeholder": "Budget, personnel, time, or other limitations"
              }
            ]
          }
        },
        "formOutput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "situationEvaluation",
                "id": "situation_evaluation_output",
                "label": "Crisis Situation Evaluation",
                "type": "JSON"
              },
              {
                "fieldName": "immediateActionPlan",
                "id": "immediate_action_plan_output",
                "label": "Immediate Action Plan",
                "type": "JSON"
              },
              {
                "fieldName": "communicationStrategy",
                "id": "communication_strategy_output",
                "label": "Stakeholder Communication Strategy",
                "type": "JSON"
              },
              {
                "fieldName": "recoveryFramework",
                "id": "recovery_framework_output",
                "label": "Recovery & Learning Framework",
                "type": "JSON"
              }
            ]
          }
        },
        "executionStrategy": "reasoning",
        "allowStrategyOverride": false,
        "subroutineStrategies": {
          "0": "reasoning",
          "1": "reasoning",
          "2": "reasoning",
