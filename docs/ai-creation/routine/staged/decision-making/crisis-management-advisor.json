      "translations": [
        {
          "id": "7829564732190847738",
          "language": "en",
          "name": "Crisis Management Advisor",
          "description": "Comprehensive crisis response system that assesses situations, establishes response teams, develops immediate action plans, manages stakeholder communications, implements recovery strategies, and creates learning frameworks for future preparedness.",
          "instructions": "Describe your crisis situation and organizational context. Identify key stakeholders and recovery objectives. The routine will evaluate the crisis, develop immediate response plans, create communication strategies, and establish recovery and learning frameworks."
        }
      ]
