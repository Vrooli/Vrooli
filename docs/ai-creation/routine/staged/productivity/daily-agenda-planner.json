                "inputMap": {
                  "calendarEvents": "existingEvents",
                  "workingHours": "availableHours",
                  "breakPreferences": "breakSettings"
                },
                "outputMap": {
                  "availableSlots": "freeTimeBlocks",
                  "constraints": "schedulingConstraints",
                  "totalAvailableTime": "availableMinutes"
