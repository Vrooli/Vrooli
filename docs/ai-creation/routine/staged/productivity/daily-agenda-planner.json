              },
              {
                "id": "step-3",
                "name": "Generate Time Blocks",
                "description": "Allocates tasks to time slots optimally",
                "subroutineId": "TODO: Need deterministic time block scheduler subroutine",
                "inputMap": {
                  "prioritizedTasks": "sortedTasks",
                  "availableSlots": "freeTimeBlocks",
                  "constraints": "schedulingConstraints",
                  "energyLevels": "energyPatterns"
                },
                "outputMap": {
                  "timeBlockSchedule": "dailySchedule",
                  "conflictWarnings": "schedulingConflicts",
                  "bufferRecommendations": "bufferTime"
                }
              },
              {
                "id": "step-4",
                "name": "Create Final Agenda",
                "description": "Compiles the complete daily agenda with recommendations",
                "subroutineId": "TODO: Need generation subroutine for agenda formatting",
                "inputMap": {
                  "timeBlockSchedule": "dailySchedule",
                  "prioritizedTasks": "sortedTasks",
                  "bufferRecommendations": "bufferTime",
                  "focusPreferences": "focusSettings"
                },
                "outputMap": {
                  "formattedAgenda": "finalAgenda",
                  "dailyInsights": "productivityTips",
                  "focusBlocks": "deepWorkPeriods"
                }
              }
            ],
            "rootContext": {
              "inputMap": {
                "taskList": "allTasks",
                "calendarEvents": "existingEvents",
                "deadlines": "taskDeadlines",
                "priorities": "taskPriorities",
                "energyLevels": "energyPatterns",
