      "config": {
        "__version": "1.0",
        "graph": {
          "__type": "Sequential",
          "schema": {
            "steps": [
              {
                "id": "step-1",
                "name": "Define Problem Clearly",
                "description": "Articulates the problem with precision and clarity",
                "subroutineId": "7829564732190848924",
                "inputMap": {
                  "problemStatement": "initialDescription",
                  "context": "situationalBackground",
                  "stakeholders": "affectedParties"
                },
                "outputMap": {
                  "clarifiedProblem": "preciseProblemStatement",
                  "problemScope": "boundariesDefinition",
                  "rootCauses": "underlyingIssues"
                }
              },
              {
                "id": "step-2",
                "name": "Gather Relevant Information",
                "description": "Collects data, facts, and insights needed for solution",
                "subroutineId": "7829564732190848927",
                "inputMap": {
                  "clarifiedProblem": "preciseProblemStatement",
                  "availableData": "existingInformation",
                  "researchNeeds": "informationGaps"
                },
                "outputMap": {
                  "factualData": "relevantFacts",
                  "constraints": "limitingFactors",
                  "resources": "availableAssets"
                }
              },
              {
                "id": "step-3",
                "name": "Generate Solution Options",
                "description": "Creates multiple potential approaches and solutions",
                "subroutineId": "7829564732190848930",
                "inputMap": {
                  "preciseProblemStatement": "clarifiedProblem",
                  "relevantFacts": "factualData",
                  "limitingFactors": "constraints"
                },
                "outputMap": {
                  "solutionOptions": "potentialSolutions",
                  "creativeSolutions": "innovativeApproaches",
                  "quickWins": "immediateActions"
                }
              },
              {
                "id": "step-4",
                "name": "Evaluate Solutions",
                "description": "Assesses feasibility, impact, and risks of each option",
                "subroutineId": "7829564732190848933",
                "inputMap": {
                  "potentialSolutions": "solutionOptions",
                  "evaluationCriteria": "assessmentFactors",
                  "availableAssets": "resources"
                },
                "outputMap": {
                  "solutionRankings": "prioritizedOptions",
                  "riskAssessment": "potentialDownsides",
                  "feasibilityAnalysis": "implementationViability"
                }
              },
              {
                "id": "step-5",
                "name": "Develop Implementation Plan",
                "description": "Creates detailed action plan for chosen solution",
                "subroutineId": "7829564732190848936",
                "inputMap": {
                  "chosenSolution": "selectedOption",
                  "availableAssets": "resources",
                  "timeline": "implementationTimeframe"
                },
                "outputMap": {
                  "actionPlan": "implementationSteps",
                  "timeline": "executionSchedule",
                  "successMetrics": "measurementCriteria"
                }
              },
              {
                "id": "step-6",
                "name": "Plan Monitoring & Adjustment",
                "description": "Establishes tracking system and adaptation strategies",
                "subroutineId": "7829564732190848939",
                "inputMap": {
                  "implementationSteps": "actionPlan",
                  "measurementCriteria": "successMetrics",
                  "potentialDownsides": "riskAssessment"
                },
                "outputMap": {
                  "monitoringPlan": "trackingSystem",
                  "adjustmentTriggers": "adaptationPoints",
                  "fallbackOptions": "contingencyPlans"
                }
              }
            ],
            "rootContext": {
              "inputMap": {
                "problem": "initialDescription",
                "background": "situationalBackground",
                "criteria": "assessmentFactors",
                "timeframe": "implementationTimeframe"
              },
              "outputMap": {
                "preciseProblemStatement": "problemDefinition",
                "prioritizedOptions": "solutionRecommendations",
                "implementationSteps": "actionPlan",
                "trackingSystem": "monitoringFramework"
              }
            },
            "executionMode": "sequential"
          }
        },
