              },
              {
                "id": "step-2",
                "name": "Deconstruct Problem Elements",
                "description": "Breaks down the problem into fundamental components",
                "subroutineId": "7829564732190850349",
                "inputMap": {
                  "frameAnalysis": "problemAnalysis",
                  "hiddenBiases": "underlyingAssumptions",
                  "scopeBoundaries": "problemBounds"
                },
                "outputMap": {
                  "coreElements": "fundamentalComponents",
                  "causalRelationships": "causeEffectChains",
                  "systemDynamics": "interactionPatterns"
                }
              },
              {
                "id": "step-3",
                "name": "Generate Alternative Frames",
                "description": "Creates multiple new ways to view and understand the problem",
                "subroutineId": "7829564732190850352",
                "inputMap": {
                  "fundamentalComponents": "coreElements",
                  "causeEffectChains": "causalRelationships",
                  "reframingTechniques": "perspectiveMethods"
                },
                "outputMap": {
                  "alternativeFrames": "newPerspectives",
                  "frameVariations": "perspectiveRange",
                  "creativeTwists": "unconventionalAngles"
                }
              },
              {
                "id": "step-4",
                "name": "Explore Solution Spaces",
                "description": "Investigates solution possibilities under each new frame",
                "subroutineId": "7829564732190850355",
                "inputMap": {
                  "newPerspectives": "alternativeFrames",
                  "perspectiveRange": "frameVariations",
                  "solutionConstraints": "feasibilityLimits"
                },
                "outputMap": {
                  "solutionOptions": "emergentSolutions",
                  "innovativeApproaches": "creativeStrategies",
                  "resourceRequirements": "implementationNeeds"
                }
              },
              {
                "id": "step-5",
                "name": "Evaluate Frame Effectiveness",
                "description": "Assesses which reframes offer the most promising paths",
                "subroutineId": "7829564732190850358",
                "inputMap": {
                  "emergentSolutions": "solutionOptions",
                  "creativeStrategies": "innovativeApproaches",
                  "evaluationCriteria": "assessmentStandards"
                },
                "outputMap": {
                  "frameRankings": "perspectiveValue",
                  "solutionViability": "feasibilityAssessment",
                  "implementationStrategy": "executionApproach"
                }
              },
              {
                "id": "step-6",
                "name": "Synthesize Insights",
                "description": "Combines best elements from multiple frames into actionable insights",
                "subroutineId": "7829564732190850361",
                "inputMap": {
                  "perspectiveValue": "frameRankings",
                  "feasibilityAssessment": "solutionViability",
                  "synthesisCriteria": "integrationPrinciples"
                },
                "outputMap": {
                  "reframedProblem": "transformedPerspective",
                  "actionableInsights": "strategicRecommendations",
                  "implementationGuidance": "executionPlan"
                }
              }
