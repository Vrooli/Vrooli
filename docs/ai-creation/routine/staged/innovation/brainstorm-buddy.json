      "translations": [
        {
          "id": "7829564732190847642",
          "language": "en",
          "name": "Brainstorm Buddy",
          "description": "Interactive brainstorming facilitator that guides creative problem-solving sessions. Generates diverse ideas, challenges assumptions, builds on concepts, and organizes results into actionable recommendations.",
          "instructions": "Describe your challenge or opportunity along with any relevant context. Choose your preferred brainstorming style and evaluation criteria. The routine will facilitate a structured ideation session, generate creative solutions, and provide prioritized recommendations with implementation guidance."
        }
