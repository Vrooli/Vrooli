      "config": {
        "__version": "1.0",
        "graph": {
          "__type": "Sequential",
          "schema": {
            "steps": [
              {
                "id": "step-1",
                "name": "Define Challenge & Context",
                "description": "Clarifies the problem or opportunity and establishes constraints",
                "subroutineId": "7829564732190848315",
                "inputMap": {
                  "challengeDescription": "problemStatement",
                  "contextInfo": "situationalContext",
                  "constraints": "limitations"
                },
                "outputMap": {
                  "clarifiedChallenge": "refinedProblem",
                  "scopeBoundaries": "definedScope",
                  "successCriteria": "goalMetrics"
                }
              },
              {
                "id": "step-2",
                "name": "Generate Initial Ideas",
                "description": "Creates diverse initial concepts using various brainstorming techniques",
                "subroutineId": "7829564732190848318",
                "inputMap": {
                  "clarifiedChallenge": "refinedProblem",
                  "brainstormingStyle": "ideationMethod",
                  "diversityLevel": "creativityScope"
                },
                "outputMap": {
                  "initialIdeas": "generatedConcepts",
                  "ideaCategories": "conceptGroups",
                  "wildIdeas": "unconventionalThoughts"
                }
              },
              {
                "id": "step-3",
                "name": "Expand & Build Ideas",
                "description": "Develops promising concepts and creates variations",
                "subroutineId": "7829564732190848321",
                "inputMap": {
                  "initialIdeas": "generatedConcepts",
                  "userFeedback": "selectedConcepts",
                  "buildingTechniques": "expansionMethods"
                },
                "outputMap": {
                  "expandedIdeas": "developedConcepts",
                  "ideaCombinations": "hybridSolutions",
                  "implementationHints": "feasibilityNotes"
                }
              },
              {
                "id": "step-4",
                "name": "Challenge & Provoke",
                "description": "Introduces provocative questions and alternative perspectives",
                "subroutineId": "7829564732190848324",
                "inputMap": {
                  "expandedIdeas": "developedConcepts",
                  "assumptionChecking": "currentAssumptions",
                  "perspectiveShifts": "alternativeViewpoints"
                },
                "outputMap": {
                  "challengedAssumptions": "questionedBeliefs",
                  "newPerspectives": "freshAngles",
                  "disruptiveIdeas": "paradigmShifts"
                }
              },
              {
                "id": "step-5",
                "name": "Organize & Prioritize",
                "description": "Structures ideas and identifies most promising concepts",
                "subroutineId": "7829564732190848327",
                "inputMap": {
                  "allIdeas": "combinedConcepts",
                  "evaluationCriteria": "selectionFactors",
                  "prioritizationMethod": "rankingApproach"
                },
                "outputMap": {
                  "organizedIdeas": "structuredConcepts",
                  "topIdeas": "prioritizedSolutions",
                  "nextSteps": "actionPlan"
                }
              }
            ],
            "rootContext": {
              "inputMap": {
                "challenge": "problemStatement",
                "context": "situationalContext",
                "style": "ideationMethod",
                "criteria": "selectionFactors"
              },
              "outputMap": {
                "structuredConcepts": "brainstormingResults",
                "prioritizedSolutions": "topRecommendations",
                "actionPlan": "implementationGuidance",
                "paradigmShifts": "innovativeInsights"
              }
            },
            "executionMode": "sequential"
          }
        },
        "formInput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "challenge",
                "id": "challenge_input",
                "label": "Challenge or Opportunity",
                "type": "TextInput",
                "isRequired": true,
                "placeholder": "Describe the problem you're trying to solve or opportunity to explore"
              },
              {
                "fieldName": "context",
                "id": "context_input",
                "label": "Context & Background",
                "type": "TextInput",
                "isRequired": false,
                "placeholder": "Relevant background information, stakeholders, or constraints"
              },
              {
                "fieldName": "style",
                "id": "style_input",
                "label": "Brainstorming Style",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "divergent",
                "options": [
                  "divergent",
                  "convergent",
                  "lateral",
                  "analytical",
                  "creative",
                  "systematic"
                ]
              },
              {
                "fieldName": "criteria",
                "id": "criteria_input",
                "label": "Evaluation Criteria",
                "type": "JSON",
                "isRequired": false,
                "placeholder": "How should ideas be evaluated? (feasibility, impact, resources, etc.)"
              },
              {
                "fieldName": "timeConstraint",
                "id": "time_constraint_input",
                "label": "Time Constraint",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "moderate",
                "options": [
                  "quick",
                  "moderate",
                  "thorough",
                  "extensive"
                ]
              }
            ]
          }
        },
        "formOutput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "brainstormingResults",
                "id": "brainstorming_results_output",
                "label": "Complete Brainstorming Results",
                "type": "JSON"
              },
              {
                "fieldName": "topRecommendations",
                "id": "top_recommendations_output",
                "label": "Top Solution Recommendations",
                "type": "JSON"
              },
              {
                "fieldName": "implementationGuidance",
                "id": "implementation_guidance_output",
                "label": "Implementation Guidance",
                "type": "JSON"
              },
              {
                "fieldName": "innovativeInsights",
                "id": "innovative_insights_output",
                "label": "Innovative Insights & Paradigm Shifts",
                "type": "JSON"
              }
            ]
          }
        },
        "executionStrategy": "conversational",
        "allowStrategyOverride": false,
        "subroutineStrategies": {
