                "inputMap": {
                  "currentStrengths": "step2Strengths",
                  "identifiedWeaknesses": "step3Weaknesses",
                  "improvementOpportunities": "step3Improvements"
                },
                "outputMap": {
                  "enhancementSuggestions": "step4Enhancements",
                  "implementationStrategies": "step4Strategies"
