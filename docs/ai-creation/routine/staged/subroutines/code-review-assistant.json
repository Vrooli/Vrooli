{
  "id": "7829564732190847655",
  "publicId": "code-review-v1",
  "resourceType": "Routine",
  "isPrivate": false,
  "permissions": "{}",
  "isInternal": false,
  "tags": [],
  "versions": [
    {
      "id": "7829564732190847656",
      "publicId": "code-review-v1-0",
      "versionLabel": "1.0.0",
      "versionNotes": "Initial version - Comprehensive code analysis with security and performance insights",
      "isComplete": true,
      "isPrivate": false,
      "versionIndex": 0,
      "isAutomatable": true,
      "resourceSubType": "RoutineCode",
      "config": {
        "__version": "1.0",
        "callDataCode": {
          "__version": "1.0",
          "schema": {
            "inputTemplate": {
              "codeToReview": "{{input.sourceCode}}",
              "language": "{{input.programmingLanguage}}",
              "reviewFocus": "{{input.focusAreas}}",
              "context": "{{input.codeContext}}",
              "guidelines": "{{input.codingStandards}}",
              "securityLevel": "{{input.securityRequirements}}"
            },
            "outputMapping": {
              "reviewSummary": "result.summary",
              "codeIssues": "result.issues",
              "securityConcerns": "result.security",
              "performanceOptimizations": "result.performance",
              "styleViolations": "result.style",
              "improvementSuggestions": "result.improvements",
              "approvalRecommendation": "result.approval"
            }
          }
        },
        "formInput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "sourceCode",
                "id": "source_code_input",
                "label": "Source Code",
                "type": "TextInput",
                "isRequired": true,
                "placeholder": "Paste the code to be reviewed"
              },
              {
                "fieldName": "programmingLanguage",
                "id": "programming_language_input",
                "label": "Programming Language",
                "type": "Selector",
                "isRequired": true,
                "options": ["javascript", "typescript", "python", "java", "csharp", "go", "rust", "cpp", "php", "ruby", "swift", "kotlin", "sql", "html-css", "other"]
              },
              {
                "fieldName": "focusAreas",
                "id": "focus_areas_input",
                "label": "Review Focus Areas",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "comprehensive",
                "options": ["comprehensive", "security-focused", "performance-focused", "style-focused", "logic-focused", "maintainability-focused"]
              },
              {
                "fieldName": "codeContext",
                "id": "code_context_input",
                "label": "Code Context",
                "type": "TextInput",
                "isRequired": false,
                "placeholder": "What does this code do? (function, feature, module description)"
              },
              {
                "fieldName": "codingStandards",
                "id": "coding_standards_input",
                "label": "Coding Standards/Guidelines",
                "type": "TextInput",
                "isRequired": false,
                "placeholder": "Specific coding standards or style guides to follow"
              },
              {
                "fieldName": "securityRequirements",
                "id": "security_requirements_input",
                "label": "Security Requirements",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "standard",
                "options": ["basic", "standard", "high", "critical"]
              }
            ]
          }
        },
        "formOutput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "reviewSummary",
                "id": "review_summary_output",
                "label": "Review Summary",
                "type": "JSON"
              },
              {
                "fieldName": "codeIssues",
                "id": "code_issues_output",
                "label": "Code Issues & Bugs",
                "type": "JSON"
              },
              {
                "fieldName": "securityConcerns",
                "id": "security_concerns_output",
                "label": "Security Analysis",
                "type": "JSON"
              },
              {
                "fieldName": "performanceOptimizations",
                "id": "performance_optimizations_output",
                "label": "Performance Recommendations",
                "type": "JSON"
              },
              {
                "fieldName": "styleViolations",
                "id": "style_violations_output",
                "label": "Style & Convention Issues",
                "type": "JSON"
              },
              {
                "fieldName": "improvementSuggestions",
                "id": "improvement_suggestions_output",
                "label": "Improvement Suggestions",
                "type": "JSON"
              },
              {
                "fieldName": "approvalRecommendation",
                "id": "approval_recommendation_output",
                "label": "Approval Recommendation",
                "type": "TextInput"
              }
            ]
          }
        },
        "executionStrategy": "reasoning"
      },
      "translations": [
        {
          "id": "7829564732190847657",
          "language": "en",
          "name": "Code Review Assistant",
          "description": "Comprehensive code analysis tool that examines code for bugs, security vulnerabilities, performance issues, style violations, and maintainability concerns. Provides detailed feedback with improvement suggestions and approval recommendations.",
          "instructions": "Paste your source code and specify the programming language. Choose your review focus areas and security requirements. Include any specific coding standards. The routine will perform thorough analysis and provide categorized feedback with actionable recommendations."
        }
      ]
    }
  ]
}