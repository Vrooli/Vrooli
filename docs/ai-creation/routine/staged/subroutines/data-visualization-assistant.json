{
  "id": "7829564732190847664",
  "publicId": "data-viz-v1",
  "resourceType": "Routine",
  "isPrivate": false,
  "permissions": "{}",
  "isInternal": false,
  "tags": [],
  "versions": [
    {
      "id": "7829564732190847665",
      "publicId": "data-viz-v1-0",
      "versionLabel": "1.0.0",
      "versionNotes": "Initial version - Intelligent chart and visualization recommendations",
      "isComplete": true,
      "isPrivate": false,
      "versionIndex": 0,
      "isAutomatable": true,
      "resourceSubType": "RoutineCode",
      "config": {
        "__version": "1.0",
        "callDataCode": {
          "__version": "1.0",
          "schema": {
            "inputTemplate": {
              "dataset": "{{input.dataSource}}",
              "dataTypes": "{{input.columnTypes}}",
              "purpose": "{{input.visualizationPurpose}}",
              "audience": "{{input.targetAudience}}",
              "constraints": "{{input.displayConstraints}}",
              "insights": "{{input.keyInsights}}"
            },
            "outputMapping": {
              "chartRecommendations": "result.charts",
              "visualDesigns": "result.designs",
              "dataProcessing": "result.processing",
              "narrativeElements": "result.narrative",
              "interactiveFeatures": "result.interactivity",
              "implementationGuide": "result.implementation"
            }
          }
        },
        "formInput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "dataSource",
                "id": "data_source_input",
                "label": "Data Source",
                "type": "JSON",
                "isRequired": true,
                "placeholder": "Your dataset or data description"
              },
              {
                "fieldName": "columnTypes",
                "id": "column_types_input",
                "label": "Data Column Types",
                "type": "JSON",
                "isRequired": false,
                "placeholder": "Describe your data columns (categorical, numerical, temporal, etc.)"
              },
              {
                "fieldName": "visualizationPurpose",
                "id": "visualization_purpose_input",
                "label": "Visualization Purpose",
                "type": "Selector",
                "isRequired": true,
                "options": ["exploratory-analysis", "presentation", "dashboard", "report", "comparison", "trend-analysis", "distribution-analysis", "relationship-analysis", "performance-tracking", "storytelling"]
              },
              {
                "fieldName": "targetAudience",
                "id": "target_audience_input",
                "label": "Target Audience",
                "type": "Selector",
                "isRequired": true,
                "options": ["executives", "analysts", "technical-team", "general-public", "domain-experts", "stakeholders", "customers", "investors", "students", "researchers"]
              },
              {
                "fieldName": "displayConstraints",
                "id": "display_constraints_input",
                "label": "Display Constraints",
                "type": "JSON",
                "isRequired": false,
                "placeholder": "Size limits, color restrictions, platform requirements, etc."
              },
              {
                "fieldName": "keyInsights",
                "id": "key_insights_input",
                "label": "Key Insights to Highlight",
                "type": "TextInput",
                "isRequired": false,
                "placeholder": "What story should the data tell?"
              },
              {
                "fieldName": "interactivityLevel",
                "id": "interactivity_level_input",
                "label": "Interactivity Level",
                "type": "Selector",
                "isRequired": false,
                "defaultValue": "moderate",
                "options": ["static", "basic", "moderate", "highly-interactive", "dashboard-style"]
              }
            ]
          }
        },
        "formOutput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "chartRecommendations",
                "id": "chart_recommendations_output",
                "label": "Recommended Chart Types",
                "type": "JSON"
              },
              {
                "fieldName": "visualDesigns",
                "id": "visual_designs_output",
                "label": "Visual Design Specifications",
                "type": "JSON"
              },
              {
                "fieldName": "dataProcessing",
                "id": "data_processing_output",
                "label": "Data Processing Requirements",
                "type": "JSON"
              },
              {
                "fieldName": "narrativeElements",
                "id": "narrative_elements_output",
                "label": "Narrative & Annotation Guide",
                "type": "JSON"
              },
              {
                "fieldName": "interactiveFeatures",
                "id": "interactive_features_output",
                "label": "Interactive Features Suggestions",
                "type": "JSON"
              },
              {
                "fieldName": "implementationGuide",
                "id": "implementation_guide_output",
                "label": "Implementation Guide",
                "type": "JSON"
              }
            ]
          }
        },
        "executionStrategy": "reasoning"
      },
      "translations": [
        {
          "id": "7829564732190847666",
          "language": "en",
          "name": "Data Visualization Assistant",
          "description": "Intelligent chart and visualization recommendation system that analyzes data characteristics and purpose to suggest optimal visualization types, design specifications, and implementation approaches for effective data storytelling.",
          "instructions": "Provide your dataset or data description along with column types. Specify your visualization purpose and target audience. The routine will recommend appropriate chart types, design specifications, data processing steps, and implementation guidance tailored to your needs."
        }
      ]
    }
  ]
}