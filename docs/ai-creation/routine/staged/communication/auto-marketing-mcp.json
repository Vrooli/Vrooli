                  "inputMap": {
                    "campaignTheme": "campaignTheme",
                    "keyFeatures": "keyFeatures",
                    "benefits": "benefits",
                    "slogans": "slogans",
                    "callToActions": "callToActions"
                  },
                  "outputMap": {
                    "headlines": "landingPageHeadlines",
                    "bodyContent": "landingPageBody",
                    "testimonialFramework": "testimonialFramework"
                  }
                },
                {
                  "id": "step_compile_materials",
                  "name": "Compile Marketing Materials",
                  "description": "Organize all generated content into a comprehensive marketing package",
                  "subroutineId": "TODO: Marketing Materials Compiler subroutine",
                  "inputMap": {
                    "slogans": "slogans",
                    "adCopy": "shortAdCopy",
                    "socialPosts": "socialPosts",
                    "emailContent": "emailBodies",
                    "landingPageContent": "landingPageBody",
