            }
          }
        },
        "formInput": {
          "__version": "1.0",
          "schema": {
            "containers": [],
            "elements": [
              {
                "fieldName": "productInfo",
                "id": "product_info_input",
                "label": "Product/Service Information",
                "type": "Text",
                "isRequired": true,
                "props": {
                  "placeholder": "Describe your product or service, including key features, pricing, and unique aspects...",
                  "minRows": 4
                }
              },
              {
                "fieldName": "targetAudience",
                "id": "target_audience_input",
                "label": "Target Audience",
                "type": "Text",
                "isRequired": true,
                "props": {
                  "placeholder": "Describe your ideal customers: demographics, interests, pain points, needs...",
                  "minRows": 3
                }
              },
              {
                "fieldName": "campaignGoals",
                "id": "campaign_goals_input",
                "label": "Campaign Goals",
                "type": "Text",
                "isRequired": true,
                "props": {
                  "placeholder": "What do you want to achieve? (e.g., brand awareness, sales, leads, engagement...)",
                  "minRows": 2
                }
              },
              {
                "fieldName": "campaignTone",
                "id": "campaign_tone_input",
                "label": "Campaign Tone",
                "type": "Selector",
                "isRequired": true,
                "props": {
                  "options": ["Professional", "Casual", "Playful", "Urgent", "Inspirational", "Educational", "Luxurious"],
                  "defaultValue": "Professional"
                }
              },
              {
                "fieldName": "socialPlatforms",
                "id": "social_platforms_input",
                "label": "Social Media Platforms",
                "type": "Selector",
                "isRequired": true,
                "props": {
                  "multiple": true,
                  "options": ["LinkedIn", "Twitter/X", "Facebook", "Instagram", "TikTok", "YouTube"],
                  "defaultValue": ["LinkedIn", "Twitter/X", "Facebook"]
                }
              },
              {
                "fieldName": "budget",
                "id": "budget_input",
                "label": "Budget Tier",
                "type": "Selector",
                "isRequired": false,
                "props": {
                  "options": ["Minimal", "Small", "Medium", "Large", "Enterprise"],
                  "defaultValue": "Medium"
                }
              }
            ]
          }
        },
