                    "campaignTheme": "campaignTheme",
                    "coreMessages": "coreMessages",
                    "brandVoice": "brandVoice",
                    "platforms": "socialPlatforms"
                  },
                  "outputMap": {
                    "socialPosts": "socialPosts",
                    "hashtags": "hashtags",
