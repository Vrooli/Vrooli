                    "targetAudience": "targetAudience",
                    "campaignTone": "campaignTone",
                    "keyFeatures": "keyFeatures"
                  },
                  "outputMap": {
                    "brandVoice": "brandVoice",
                    "messagingGuidelines": "messagingGuidelines"
                  }
                },
                {
                  "id": "step_create_campaign_theme",
                  "name": "Create Campaign Theme",
