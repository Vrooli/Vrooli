                  "inputMap": {
                    "productInfo": "productInfo",
                    "targetAudience": "targetAudience",
                    "campaignTheme": "campaignTheme",
                    "brandVoice": "brandVoice"
                  },
                  "outputMap": {
                    "slogans": "slogans",
                    "taglines": "taglines"
                  }
                },
                {
                  "id": "step_create_ad_copy",
                  "name": "Create Ad Copy",
                  "description": "Generate advertising copy for various formats",
                  "subroutineId": "TODO: Ad Copy Generator subroutine",
                  "inputMap": {
                    "campaignTheme": "campaignTheme",
                    "slogans": "slogans",
                    "keyFeatures": "keyFeatures",
                    "benefits": "benefits",
                    "brandVoice": "brandVoice"
                  },
                  "outputMap": {
                    "shortAdCopy": "shortAdCopy",
                    "longAdCopy": "longAdCopy",
                    "callToActions": "callToActions"
                  }
                },
                {
                  "id": "step_social_media_content",
                  "name": "Create Social Media Content",
