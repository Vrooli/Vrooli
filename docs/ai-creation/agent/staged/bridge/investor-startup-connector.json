{
  "identity": {
    "name": "investor-startup-connector",
    "version": "1.0.0"
  },
  "goal": "Facilitates funding relationships and communications",
  "role": "bridge",
  "subscriptions": [
    "swarm/goal/created",
    "run/completed",
    "step/completed"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "swarm/goal/created",
        "when": "event.data.description.includes('funding') || event.data.description.includes('investment') || event.data.description.includes('startup')"
      },
      "action": {
        "type": "routine",
        "label": "Funding Bridge",
        "inputMap": {
          "fundingGoals": "event.data.description",
          "startupContext": "event.data.context.startup",
          "investorNetworks": "blackboard.funding.networks",
          "pitchPreparation": "blackboard.funding.pitch"
        }
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "run/completed",
        "when": "event.data.tags.includes('pitch_development') || event.data.tags.includes('investor_outreach')"
      },
      "action": {
        "type": "invoke",
        "purpose": "Connect startups with appropriate investors and facilitate productive funding discussions and relationship building"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "step/completed",
        "when": "event.data.type == 'investor_meeting' || event.data.tags.includes('funding_interaction')"
      },
      "action": {
        "type": "routine",
        "label": "Investment Facilitator",
        "inputMap": {
          "meetingResults": "event.data.output.meeting",
          "investorFeedback": "event.data.feedback",
          "fundingPlatforms": "blackboard.funding.platforms"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "facilitate-meaningful-connections"
    },
    {
      "modality": "permission",
      "target": "connect-funding-stakeholders"
    },
    {
      "modality": "prohibition",
      "target": "misrepresent-investment-opportunities"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "investor-networks",
      "permissions": ["read"],
      "scope": "funding.networks",
      "description": "Investor networks and funding community connections"
    },
    {
      "type": "blackboard",
      "label": "pitch-preparation",
      "permissions": ["read"],
      "scope": "funding.pitch",
      "description": "Pitch preparation tools and presentation resources"
    },
    {
      "type": "blackboard",
      "label": "funding-platforms",
      "permissions": ["read"],
      "scope": "funding.platforms",
      "description": "Funding platforms and investment opportunity databases"
    },
    {
      "type": "routine",
      "label": "Funding Bridge",
      "permissions": ["read"],
      "description": "Bridge connections between startups and investors"
    },
    {
      "type": "routine",
      "label": "Investment Facilitator",
      "permissions": ["read"],
      "description": "Facilitate investment discussions and funding processes"
    }
  ]
}