{
  "identity": {
    "name": "human-ai-collaboration-facilitator",
    "version": "1.0.0"
  },
  "goal": "Helps humans work effectively with AI systems",
  "role": "bridge",
  "subscriptions": [
    "run/decision/requested",
    "safety/pre_action",
    "swarm/team/updated"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "run/decision/requested"
      },
      "action": {
        "type": "routine",
        "label": "Decision Support",
        "inputMap": {
          "decisionContext": "event.data.context",
          "options": "event.data.options",
          "decisionHistory": "blackboard.decisions.history",
          "userPreferences": "blackboard.user.preferences"
        }
      },
      "qos": 2
    },
    {
      "trigger": {
        "topic": "safety/pre_action",
        "when": "event.data.requiresHumanApproval == true"
      },
      "action": {
        "type": "invoke",
        "purpose": "Translate technical AI action details into clear human-understandable explanations and gather informed consent"
      },
      "qos": 2
    },
    {
      "trigger": {
        "topic": "swarm/team/updated",
        "when": "event.data.humanMembers > 0"
      },
      "action": {
        "type": "routine",
        "label": "Collaboration Protocol Setup",
        "inputMap": {
          "teamComposition": "event.data.composition",
          "humanCount": "event.data.humanMembers",
          "aiCapabilities": "blackboard.team.ai.capabilities"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "ensure-human-understanding"
    },
    {
      "modality": "permission",
      "target": "adapt-communication-style"
    },
    {
      "modality": "prohibition",
      "target": "bypass-human-consent"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "collaboration-frameworks",
      "permissions": ["read"],
      "scope": "frameworks.collaboration",
      "description": "Access human-AI collaboration best practices and frameworks"
    },
    {
      "type": "blackboard",
      "label": "interface-adapters",
      "permissions": ["read", "write"],
      "scope": "interfaces.human",
      "description": "Configure and use human interface adaptation tools"
    },
    {
      "type": "blackboard",
      "label": "communication-protocols",
      "permissions": ["read"],
      "scope": "protocols.communication",
      "description": "Read communication protocols and translation rules"
    },
    {
      "type": "blackboard",
      "label": "user-preferences",
      "permissions": ["read"],
      "scope": "user.preferences",
      "description": "Access user communication preferences and settings"
    },
    {
      "type": "routine",
      "label": "Decision Support",
      "permissions": ["read"],
      "description": "Provide decision support with human-friendly explanations"
    },
    {
      "type": "routine",
      "label": "Collaboration Protocol Setup",
      "permissions": ["read"],
      "description": "Establish effective human-AI collaboration protocols"
    }
  ]
}