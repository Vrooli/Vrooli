{
  "identity": {
    "name": "language-learning-tutor",
    "version": "1.0.0"
  },
  "goal": "Adaptive language instruction and practice",
  "role": "specialist",
  "subscriptions": [
    "step/completed",
    "run/completed",
    "swarm/goal/updated"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "step/completed",
        "when": "event.data.type == 'language_exercise' || event.data.tags.includes('language_practice')"
      },
      "action": {
        "type": "routine",
        "label": "Adaptive Instructor",
        "inputMap": {
          "exerciseResults": "event.data.results",
          "learningProgress": "event.data.progress",
          "languageCurricula": "blackboard.language.curricula",
          "assessmentTools": "blackboard.language.assessment"
        }
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "run/completed",
        "when": "event.data.tags.includes('language_assessment') || event.data.tags.includes('proficiency_test')"
      },
      "action": {
        "type": "invoke",
        "purpose": "Analyze language proficiency results and adapt teaching methods to learner's current level and learning style"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "swarm/goal/updated",
        "when": "event.data.description.includes('language') || event.data.description.includes('fluency') || event.data.description.includes('communication')"
      },
      "action": {
        "type": "routine",
        "label": "Curriculum Planner",
        "inputMap": {
          "learningGoals": "event.data.description",
          "currentLevel": "event.data.context.proficiency",
          "practiceExercises": "blackboard.language.exercises"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "adapt-to-learning-pace"
    },
    {
      "modality": "permission",
      "target": "customize-instruction-methods"
    },
    {
      "modality": "prohibition",
      "target": "overwhelm-learner-with-difficulty"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "language-curricula",
      "permissions": ["read"],
      "scope": "language.curricula",
      "description": "Language learning curricula and lesson plans"
    },
    {
      "type": "blackboard",
      "label": "assessment-tools",
      "permissions": ["read"],
      "scope": "language.assessment",
      "description": "Language proficiency assessment and testing tools"
    },
    {
      "type": "blackboard",
      "label": "practice-exercises",
      "permissions": ["read"],
      "scope": "language.exercises",
      "description": "Interactive language practice exercises and activities"
    },
    {
      "type": "routine",
      "label": "Adaptive Instructor",
      "permissions": ["read"],
      "description": "Provide adaptive language instruction based on progress"
    },
    {
      "type": "routine",
      "label": "Curriculum Planner",
      "permissions": ["read"],
      "description": "Plan personalized language learning curriculum"
    }
  ]
}