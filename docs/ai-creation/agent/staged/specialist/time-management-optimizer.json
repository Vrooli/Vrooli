{
  "identity": {
    "name": "time-management-optimizer",
    "version": "1.0.0"
  },
  "goal": "Analyzes and improves personal productivity systems",
  "role": "specialist",
  "subscriptions": [
    "step/completed",
    "run/completed",
    "swarm/resource/updated"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "step/completed"
      },
      "action": {
        "type": "routine",
        "label": "Time Tracker",
        "inputMap": {
          "taskDuration": "event.data.duration",
          "taskType": "event.data.type",
          "expectedDuration": "event.data.expectedDuration",
          "productivityMetrics": "blackboard.productivity.metrics"
        }
      },
      "qos": 0
    },
    {
      "trigger": {
        "topic": "run/completed",
        "when": "event.data.duration > event.data.expectedDuration * 1.5"
      },
      "action": {
        "type": "invoke",
        "purpose": "Analyze time overruns to identify productivity bottlenecks and suggest optimization strategies"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "swarm/resource/updated",
        "when": "event.data.type == 'time' && stats.totalToolCalls > 50"
      },
      "action": {
        "type": "routine",
        "label": "Productivity Analyzer",
        "inputMap": {
          "timeUsage": "stats.totalTime",
          "taskDistribution": "records.latest",
          "optimizationAlgorithms": "blackboard.productivity.algorithms"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "track-time-accurately"
    },
    {
      "modality": "permission",
      "target": "suggest-workflow-changes"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "productivity-metrics",
      "permissions": ["read", "write"],
      "scope": "productivity.metrics.*",
      "description": "Track and analyze productivity metrics and patterns"
    },
    {
      "type": "blackboard",
      "label": "time-tracking",
      "permissions": ["read", "write"],
      "scope": "productivity.timeTracking",
      "description": "Record time usage across different activities"
    },
    {
      "type": "blackboard",
      "label": "optimization-algorithms",
      "permissions": ["read"],
      "scope": "productivity.algorithms",
      "description": "Access time optimization algorithms and strategies"
    },
    {
      "type": "routine",
      "label": "Time Tracker",
      "permissions": ["read"],
      "description": "Track time usage and productivity patterns"
    },
    {
      "type": "routine",
      "label": "Productivity Analyzer",
      "permissions": ["read"],
      "description": "Analyze productivity data and suggest improvements"
    }
  ]
}