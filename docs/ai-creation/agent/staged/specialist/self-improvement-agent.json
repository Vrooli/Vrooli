{
  "identity": {
    "name": "self-improvement-agent",
    "version": "1.0.0"
  },
  "goal": "Analyze swarm execution patterns to identify improvement opportunities",
  "role": "specialist",
  "subscriptions": [
    "swarm/goal/completed",
    "swarm/goal/failed",
    "step/completed"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "swarm/goal/completed"
      },
      "action": {
        "type": "routine",
        "label": "Pattern Analyzer",
        "inputMap": {
          "goalOutcome": "event.data.outcome",
          "executionMetrics": "event.data.metrics",
          "patternAnalysis": "blackboard.improvement.patterns",
          "improvementAlgorithms": "blackboard.improvement.algorithms"
        }
      },
      "qos": 0
    },
    {
      "trigger": {
        "topic": "swarm/goal/failed",
        "when": "bot.performance.tasksFailed > 3"
      },
      "action": {
        "type": "invoke",
        "purpose": "Analyze goal failure patterns to identify systemic issues and recommend process improvements"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "step/completed",
        "when": "stats.totalToolCalls > 100 && stats.totalToolCalls % 50 == 0"
      },
      "action": {
        "type": "routine",
        "label": "Improvement Synthesizer",
        "inputMap": {
          "executionHistory": "records.latest",
          "performanceMetrics": "stats.*",
          "learningFrameworks": "blackboard.improvement.frameworks"
        }
      },
      "qos": 0
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "analyze-all-completed-goals"
    },
    {
      "modality": "permission",
      "target": "suggest-process-improvements"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "pattern-analysis",
      "permissions": ["read", "write"],
      "scope": "improvement.patterns",
      "description": "Execution pattern analysis and trend identification"
    },
    {
      "type": "blackboard",
      "label": "improvement-algorithms",
      "permissions": ["read"],
      "scope": "improvement.algorithms",
      "description": "Self-improvement algorithms and optimization techniques"
    },
    {
      "type": "blackboard",
      "label": "learning-frameworks",
      "permissions": ["read"],
      "scope": "improvement.frameworks",
      "description": "Continuous improvement and learning frameworks"
    },
    {
      "type": "routine",
      "label": "Pattern Analyzer",
      "permissions": ["read"],
      "description": "Analyze execution patterns for improvement opportunities"
    },
    {
      "type": "routine",
      "label": "Improvement Synthesizer",
      "permissions": ["read"],
      "description": "Synthesize improvement recommendations from patterns"
    }
  ]
}