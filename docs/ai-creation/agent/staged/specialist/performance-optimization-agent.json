{
  "identity": {
    "name": "performance-optimization-agent",
    "version": "1.0.0"
  },
  "goal": "Analyze routine execution metrics and optimize swarm performance",
  "role": "specialist",
  "subscriptions": [
    "step/completed",
    "run/completed",
    "swarm/resource/updated"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "step/completed"
      },
      "action": {
        "type": "routine",
        "label": "Performance Analyzer",
        "inputMap": {
          "stepMetrics": "event.data.metrics",
          "duration": "event.data.duration",
          "resourceUsage": "event.data.resourcesUsed",
          "performanceBaselines": "blackboard.performance.baselines"
        }
      },
      "qos": 0
    },
    {
      "trigger": {
        "topic": "run/completed",
        "when": "event.data.duration > blackboard.performance.thresholds.runDuration"
      },
      "action": {
        "type": "invoke",
        "purpose": "Analyze slow runs to identify bottlenecks and suggest performance optimizations"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "swarm/resource/updated",
        "when": "event.data.efficiency < blackboard.performance.thresholds.efficiency"
      },
      "action": {
        "type": "routine",
        "label": "Optimization Strategist",
        "inputMap": {
          "efficiency": "event.data.efficiency",
          "resourceMetrics": "event.data.metrics",
          "optimizationAlgorithms": "blackboard.performance.algorithms",
          "swarmPerformance": "stats.totalCredits"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "track-performance-continuously"
    },
    {
      "modality": "permission",
      "target": "suggest-optimization-strategies"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "performance-analytics",
      "permissions": ["read", "write"],
      "scope": "performance.analytics",
      "description": "Performance metrics and analytics data"
    },
    {
      "type": "blackboard",
      "label": "optimization-algorithms",
      "permissions": ["read"],
      "scope": "performance.algorithms",
      "description": "Performance optimization algorithms and techniques"
    },
    {
      "type": "blackboard",
      "label": "resource-metrics",
      "permissions": ["read"],
      "scope": "performance.resources",
      "description": "Resource utilization metrics and efficiency data"
    },
    {
      "type": "routine",
      "label": "Performance Analyzer",
      "permissions": ["read"],
      "description": "Analyze performance metrics and identify bottlenecks"
    },
    {
      "type": "routine",
      "label": "Optimization Strategist",
      "permissions": ["read"],
      "description": "Develop performance optimization strategies"
    }
  ]
}