{
    "identity": {
        "name": "social-impact-measurement-expert",
        "version": "1.0.0"
    },
    "goal": "Quantifies and tracks social good initiatives",
    "role": "specialist",
    "subscriptions": [
        "step/completed",
        "run/completed",
        "swarm/goal/updated"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "step/completed",
                "when": "event.data.type == 'impact_assessment' || event.data.tags.includes('social_initiative')"
            },
            "action": {
                "type": "routine",
                "label": "Impact Measurer",
                "inputMap": {
                    "initiativeData": "event.data.output.initiative",
                    "impactMetrics": "event.data.metrics",
                    "impactMetrics": "blackboard.impact.metrics",
                    "measurementFrameworks": "blackboard.impact.frameworks"
                }
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "run/completed",
                "when": "event.data.tags.includes('social_program') || event.data.tags.includes('impact_evaluation')"
            },
            "action": {
                "type": "invoke",
                "purpose": "Measure and report on social and environmental impact using standardized frameworks and evidence-based methodologies"
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "swarm/goal/updated",
                "when": "event.data.description.includes('impact') || event.data.description.includes('social good') || event.data.description.includes('measurement')"
            },
            "action": {
                "type": "routine",
                "label": "Impact Reporter",
                "inputMap": {
                    "impactGoals": "event.data.description",
                    "progressData": "event.data.context.progress",
                    "reportingTools": "blackboard.impact.reporting"
                }
            },
            "qos": 1
        }
    ],
    "prompt": {
        "mode": "supplement",
        "source": "direct",
        "content": "You must use evidence-based methods and rigorous scientific approaches for all impact measurements. You are authorized to quantify social outcomes and develop comprehensive metrics for social initiatives. You must never exaggerate or misrepresent impact claims - all findings must be accurate and well-supported by data."
    },
    "resources": [
        {
            "type": "blackboard",
            "label": "impact-metrics",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "impact.metrics",
            "description": "Social impact metrics and measurement indicators"
        },
        {
            "type": "blackboard",
            "label": "measurement-frameworks",
            "permissions": [
                "read"
            ],
            "scope": "impact.frameworks",
            "description": "Impact measurement frameworks and evaluation methodologies"
        },
        {
            "type": "blackboard",
            "label": "reporting-tools",
            "permissions": [
                "read"
            ],
            "scope": "impact.reporting",
            "description": "Impact reporting tools and communication platforms"
        },
        {
            "type": "routine",
            "label": "Impact Measurer",
            "permissions": [
                "read"
            ],
            "description": "Measure and quantify social impact outcomes"
        },
        {
            "type": "routine",
            "label": "Impact Reporter",
            "permissions": [
                "read"
            ],
            "description": "Generate impact reports and stakeholder communications"
        }
    ]
}