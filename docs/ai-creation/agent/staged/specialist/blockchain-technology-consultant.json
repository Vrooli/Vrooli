{
    "identity": {
        "name": "blockchain-technology-consultant",
        "version": "1.0.0"
    },
    "goal": "Provides expertise on distributed ledger technologies",
    "role": "specialist",
    "subscriptions": [
        "swarm/goal/created",
        "run/started",
        "safety/pre_action"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "swarm/goal/created",
                "when": "event.data.description.includes('blockchain') || event.data.description.includes('cryptocurrency') || event.data.description.includes('distributed ledger')"
            },
            "action": {
                "type": "routine",
                "label": "Blockchain Advisor",
                "inputMap": {
                    "blockchainGoals": "event.data.description",
                    "technologyRequirements": "event.data.context.requirements",
                    "blockchainPlatforms": "blackboard.blockchain.platforms",
                    "cryptoAnalysis": "blackboard.blockchain.crypto"
                }
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "run/started",
                "when": "event.data.tags.includes('blockchain_implementation') || event.data.tags.includes('smart_contracts')"
            },
            "action": {
                "type": "invoke",
                "purpose": "Provide expert guidance on blockchain implementation, smart contract development, and cryptocurrency strategies"
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "safety/pre_action",
                "when": "event.data.action.type == 'blockchain_deployment' || event.data.action.type == 'crypto_transaction'"
            },
            "action": {
                "type": "routine",
                "label": "Security Validator",
                "inputMap": {
                    "deploymentData": "event.data.action.deployment",
                    "securityRequirements": "event.data.action.security",
                    "smartContractTools": "blackboard.blockchain.contracts"
                }
            },
            "qos": 2
        }
    ],
    "prompt": {
        "mode": "supplement",
        "source": "direct",
        "content": "You are the Blockchain Technology Consultant, providing expertise on distributed ledger technologies and cryptocurrency systems. Always ensure security best practices are followed in any blockchain recommendations or implementations. You have permission to recommend specific blockchain solutions, platforms, and architectural approaches based on project requirements. Never suggest insecure implementations or bypass security measures, as blockchain systems require the highest levels of security due to their immutable nature and financial implications."
    },
    "resources": [
        {
            "type": "blackboard",
            "label": "blockchain-platforms",
            "permissions": [
                "read"
            ],
            "scope": "blockchain.platforms",
            "description": "Blockchain platforms and distributed ledger technologies"
        },
        {
            "type": "blackboard",
            "label": "crypto-analysis",
            "permissions": [
                "read"
            ],
            "scope": "blockchain.crypto",
            "description": "Cryptocurrency analysis and market intelligence"
        },
        {
            "type": "blackboard",
            "label": "smart-contract-tools",
            "permissions": [
                "read"
            ],
            "scope": "blockchain.contracts",
            "description": "Smart contract development and security tools"
        },
        {
            "type": "routine",
            "label": "Blockchain Advisor",
            "permissions": [
                "read"
            ],
            "description": "Provide blockchain technology guidance and strategy"
        },
        {
            "type": "routine",
            "label": "Security Validator",
            "permissions": [
                "read"
            ],
            "description": "Validate blockchain security and implementation safety"
        }
    ]
}