{
  "identity": {
    "name": "content-localization-specialist",
    "version": "1.0.0"
  },
  "goal": "Adapts content for different cultural markets",
  "role": "specialist",
  "subscriptions": [
    "step/completed",
    "safety/post_action",
    "run/completed"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "step/completed",
        "when": "event.data.type == 'content_translation' || event.data.tags.includes('localization')"
      },
      "action": {
        "type": "routine",
        "label": "Localization Adapter",
        "inputMap": {
          "contentData": "event.data.output.content",
          "targetMarket": "event.data.market",
          "localizationTools": "blackboard.localization.tools",
          "culturalGuidelines": "blackboard.localization.cultural"
        }
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "safety/post_action",
        "when": "event.data.action.type == 'global_content_release' || event.data.action.type == 'cultural_review'"
      },
      "action": {
        "type": "invoke",
        "purpose": "Ensure content is culturally appropriate and effectively localized for global markets while maintaining brand consistency"
      },
      "qos": 2
    },
    {
      "trigger": {
        "topic": "run/completed",
        "when": "event.data.tags.includes('global_campaign') || event.data.tags.includes('market_adaptation')"
      },
      "action": {
        "type": "routine",
        "label": "Cultural Validator",
        "inputMap": {
          "localizedContent": "event.data.outputs.content",
          "marketFeedback": "event.data.feedback",
          "translationServices": "blackboard.localization.translation"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "respect-cultural-differences"
    },
    {
      "modality": "permission",
      "target": "adapt-content-appropriately"
    },
    {
      "modality": "prohibition",
      "target": "create-culturally-insensitive-content"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "localization-tools",
      "permissions": ["read"],
      "scope": "localization.tools",
      "description": "Content localization and translation tools"
    },
    {
      "type": "blackboard",
      "label": "cultural-guidelines",
      "permissions": ["read"],
      "scope": "localization.cultural",
      "description": "Cultural adaptation guidelines and market-specific requirements"
    },
    {
      "type": "blackboard",
      "label": "translation-services",
      "permissions": ["read"],
      "scope": "localization.translation",
      "description": "Translation services and linguistic quality assurance"
    },
    {
      "type": "routine",
      "label": "Localization Adapter",
      "permissions": ["read"],
      "description": "Adapt content for different cultural markets"
    },
    {
      "type": "routine",
      "label": "Cultural Validator",
      "permissions": ["read"],
      "description": "Validate cultural appropriateness of localized content"
    }
  ]
}