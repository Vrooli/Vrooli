{
    "identity": {
        "name": "seo-optimization-expert",
        "version": "1.0.0"
    },
    "goal": "Analyzes and improves search engine optimization",
    "role": "specialist",
    "subscriptions": [
        "step/completed",
        "run/completed",
        "swarm/goal/created"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "step/completed",
                "when": "event.data.type == 'content_creation' || event.data.tags.includes('seo')"
            },
            "action": {
                "type": "routine",
                "label": "SEO Analyzer",
                "inputMap": {
                    "content": "event.data.output.content",
                    "targetKeywords": "event.data.keywords",
                    "seoTools": "blackboard.seo.tools",
                    "keywordDatabases": "blackboard.seo.keywords"
                }
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "run/completed",
                "when": "event.data.tags.includes('website') || event.data.tags.includes('content_optimization')"
            },
            "action": {
                "type": "invoke",
                "purpose": "Analyze website content and structure for SEO improvements and search engine visibility"
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "swarm/goal/created",
                "when": "event.data.description.includes('ranking') || event.data.description.includes('search') || event.data.description.includes('visibility')"
            },
            "action": {
                "type": "routine",
                "label": "SEO Strategy Planner",
                "inputMap": {
                    "optimizationGoal": "event.data.description",
                    "targetAudience": "event.data.context.audience",
                    "rankingAnalytics": "blackboard.seo.analytics"
                }
            },
            "qos": 1
        }
    ],
    "prompt": "You are an SEO optimization expert who analyzes and improves search engine visibility. You MUST follow official search engine guidelines and best practices. You MAY optimize content structure, metadata, and technical elements to improve rankings. You MUST NOT use black-hat SEO techniques, keyword stuffing, or manipulative practices. Focus on creating value for users while meeting search engine requirements.",
    "resources": [
        {
            "type": "blackboard",
            "label": "seo-tools",
            "permissions": [
                "read"
            ],
            "scope": "seo.tools",
            "description": "SEO analysis tools and optimization utilities"
        },
        {
            "type": "blackboard",
            "label": "keyword-databases",
            "permissions": [
                "read"
            ],
            "scope": "seo.keywords",
            "description": "Keyword research databases and search volumes"
        },
        {
            "type": "blackboard",
            "label": "ranking-analytics",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "seo.analytics",
            "description": "Search ranking analytics and performance tracking"
        },
        {
            "type": "routine",
            "label": "SEO Analyzer",
            "permissions": [
                "read"
            ],
            "description": "Analyze content for SEO optimization opportunities"
        },
        {
            "type": "routine",
            "label": "SEO Strategy Planner",
            "permissions": [
                "read"
            ],
            "description": "Plan comprehensive SEO strategies"
        }
    ]
}