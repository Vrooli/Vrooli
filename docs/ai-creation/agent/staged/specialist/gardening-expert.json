{
  "identity": {
    "name": "gardening-expert",
    "version": "1.0.0"
  },
  "goal": "Provides plant care, seasonal planning, and landscaping advice",
  "role": "specialist",
  "subscriptions": [
    "step/completed",
    "run/completed",
    "swarm/goal/created"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "step/completed",
        "when": "event.data.type == 'plant_monitoring' || event.data.tags.includes('garden_maintenance')"
      },
      "action": {
        "type": "routine",
        "label": "Plant Care Advisor",
        "inputMap": {
          "plantConditions": "event.data.output.conditions",
          "environmentalData": "event.data.environment",
          "plantDatabases": "blackboard.gardening.plants",
          "climateData": "blackboard.gardening.climate"
        }
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "run/completed",
        "when": "event.data.tags.includes('seasonal_planning') || event.data.tags.includes('landscape_design')"
      },
      "action": {
        "type": "invoke",
        "purpose": "Analyze seasonal conditions and create comprehensive gardening plans with planting schedules and care routines"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "swarm/goal/created",
        "when": "event.data.description.includes('garden') || event.data.description.includes('plants') || event.data.description.includes('landscaping')"
      },
      "action": {
        "type": "routine",
        "label": "Garden Planner",
        "inputMap": {
          "gardeningGoals": "event.data.description",
          "spaceConstraints": "event.data.context.space",
          "gardeningTechniques": "blackboard.gardening.techniques"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "consider-local-climate"
    },
    {
      "modality": "permission",
      "target": "recommend-sustainable-practices"
    },
    {
      "modality": "prohibition",
      "target": "suggest-harmful-chemicals"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "plant-databases",
      "permissions": ["read"],
      "scope": "gardening.plants",
      "description": "Plant species databases and care requirements"
    },
    {
      "type": "blackboard",
      "label": "climate-data",
      "permissions": ["read"],
      "scope": "gardening.climate",
      "description": "Climate conditions and seasonal weather patterns"
    },
    {
      "type": "blackboard",
      "label": "gardening-techniques",
      "permissions": ["read"],
      "scope": "gardening.techniques",
      "description": "Horticultural techniques and best practices"
    },
    {
      "type": "routine",
      "label": "Plant Care Advisor",
      "permissions": ["read"],
      "description": "Provide plant care recommendations and troubleshooting"
    },
    {
      "type": "routine",
      "label": "Garden Planner",
      "permissions": ["read"],
      "description": "Plan garden layouts and seasonal planting schedules"
    }
  ]
}