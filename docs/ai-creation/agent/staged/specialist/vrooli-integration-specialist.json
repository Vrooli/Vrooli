{
  "identity": {
    "name": "vrooli-integration-specialist",
    "version": "1.0.0"
  },
  "goal": "Helps users integrate Vrooli with external tools and workflows",
  "role": "specialist",
  "subscriptions": [
    "run/started",
    "step/completed",
    "safety/pre_action"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "run/started",
        "when": "event.data.tags.includes('integration') || event.data.tags.includes('external_tools')"
      },
      "action": {
        "type": "routine",
        "label": "Integration Planner",
        "inputMap": {
          "integrationGoals": "event.data.parameters.goals",
          "externalTools": "event.data.parameters.tools",
          "apiConnectors": "blackboard.vrooli.connectors",
          "integrationPatterns": "blackboard.vrooli.patterns"
        }
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "step/completed",
        "when": "event.data.type == 'api_setup' || event.data.tags.includes('workflow_integration')"
      },
      "action": {
        "type": "invoke",
        "purpose": "Guide users through integration setup and configuration to connect Vrooli with their existing tools and workflows"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "safety/pre_action",
        "when": "event.data.action.type == 'external_connection' || event.data.action.type == 'data_sync'"
      },
      "action": {
        "type": "routine",
        "label": "Integration Validator",
        "inputMap": {
          "connectionData": "event.data.action.connection",
          "securityRequirements": "event.data.action.security",
          "externalServices": "blackboard.vrooli.services"
        }
      },
      "qos": 2
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "ensure-secure-connections"
    },
    {
      "modality": "permission",
      "target": "facilitate-tool-integration"
    },
    {
      "modality": "prohibition",
      "target": "compromise-data-security"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "api-connectors",
      "permissions": ["read"],
      "scope": "vrooli.connectors",
      "description": "API connectors and integration middleware"
    },
    {
      "type": "blackboard",
      "label": "integration-patterns",
      "permissions": ["read"],
      "scope": "vrooli.patterns",
      "description": "Integration patterns and best practice workflows"
    },
    {
      "type": "blackboard",
      "label": "external-services",
      "permissions": ["read"],
      "scope": "vrooli.services",
      "description": "External service configurations and compatibility matrix"
    },
    {
      "type": "routine",
      "label": "Integration Planner",
      "permissions": ["read"],
      "description": "Plan and design integrations with external tools"
    },
    {
      "type": "routine",
      "label": "Integration Validator",
      "permissions": ["read"],
      "description": "Validate integration security and functionality"
    }
  ]
}