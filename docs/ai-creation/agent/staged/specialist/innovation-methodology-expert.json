{
  "identity": {
    "name": "innovation-methodology-expert",
    "version": "1.0.0"
  },
  "goal": "Applies design thinking and innovation frameworks",
  "role": "specialist",
  "subscriptions": [
    "swarm/goal/created",
    "step/completed",
    "run/completed"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "swarm/goal/created",
        "when": "event.data.description.includes('innovation') || event.data.description.includes('design thinking') || event.data.description.includes('creative')"
      },
      "action": {
        "type": "routine",
        "label": "Innovation Facilitator",
        "inputMap": {
          "innovationGoals": "event.data.description",
          "challengeContext": "event.data.context.challenge",
          "innovationMethodologies": "blackboard.innovation.methodologies",
          "designThinking": "blackboard.innovation.design"
        }
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "step/completed",
        "when": "event.data.type == 'ideation' || event.data.tags.includes('creative_process')"
      },
      "action": {
        "type": "invoke",
        "purpose": "Facilitate structured innovation processes and creative problem-solving using design thinking and proven innovation methodologies"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "run/completed",
        "when": "event.data.tags.includes('innovation_workshop') || event.data.tags.includes('design_sprint')"
      },
      "action": {
        "type": "routine",
        "label": "Process Optimizer",
        "inputMap": {
          "workshopResults": "event.data.outputs.workshop",
          "innovationOutcomes": "event.data.outcomes",
          "creativeFrameworks": "blackboard.innovation.frameworks"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "foster-creative-thinking"
    },
    {
      "modality": "permission",
      "target": "apply-innovation-methods"
    },
    {
      "modality": "prohibition",
      "target": "stifle-creative-expression"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "innovation-methodologies",
      "permissions": ["read"],
      "scope": "innovation.methodologies",
      "description": "Innovation methodologies and structured creativity frameworks"
    },
    {
      "type": "blackboard",
      "label": "design-thinking",
      "permissions": ["read"],
      "scope": "innovation.design",
      "description": "Design thinking principles and human-centered design"
    },
    {
      "type": "blackboard",
      "label": "creative-frameworks",
      "permissions": ["read"],
      "scope": "innovation.frameworks",
      "description": "Creative problem-solving frameworks and facilitation tools"
    },
    {
      "type": "routine",
      "label": "Innovation Facilitator",
      "permissions": ["read"],
      "description": "Facilitate innovation workshops and creative processes"
    },
    {
      "type": "routine",
      "label": "Process Optimizer",
      "permissions": ["read"],
      "description": "Optimize innovation processes and methodology application"
    }
  ]
}