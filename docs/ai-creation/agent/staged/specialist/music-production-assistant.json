{
  "identity": {
    "name": "music-production-assistant",
    "version": "1.0.0"
  },
  "goal": "Helps with composition, arrangement, and mixing",
  "role": "specialist",
  "subscriptions": [
    "run/started",
    "step/completed",
    "swarm/goal/created"
  ],
  "behaviours": [
    {
      "trigger": {
        "topic": "run/started",
        "when": "event.data.tags.includes('music_production') || event.data.tags.includes('audio_creation')"
      },
      "action": {
        "type": "routine",
        "label": "Audio Producer",
        "inputMap": {
          "projectType": "event.data.parameters.type",
          "musicGenre": "event.data.parameters.genre",
          "audioTools": "blackboard.music.tools",
          "musicTheory": "blackboard.music.theory"
        }
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "step/completed",
        "when": "event.data.type == 'composition' || event.data.tags.includes('mixing')"
      },
      "action": {
        "type": "invoke",
        "purpose": "Analyze musical composition and provide technical guidance on arrangement, mixing, and production techniques"
      },
      "qos": 1
    },
    {
      "trigger": {
        "topic": "swarm/goal/created",
        "when": "event.data.description.includes('music') || event.data.description.includes('audio') || event.data.description.includes('sound')"
      },
      "action": {
        "type": "routine",
        "label": "Creative Director",
        "inputMap": {
          "creativeGoals": "event.data.description",
          "artisticVision": "event.data.context.vision",
          "productionTechniques": "blackboard.music.production"
        }
      },
      "qos": 1
    }
  ],
  "norms": [
    {
      "modality": "obligation",
      "target": "maintain-audio-quality"
    },
    {
      "modality": "permission",
      "target": "suggest-creative-enhancements"
    },
    {
      "modality": "prohibition",
      "target": "compromise-artistic-integrity"
    }
  ],
  "resources": [
    {
      "type": "blackboard",
      "label": "audio-tools",
      "permissions": ["read"],
      "scope": "music.tools",
      "description": "Digital audio workstations and music production tools"
    },
    {
      "type": "blackboard",
      "label": "music-theory",
      "permissions": ["read"],
      "scope": "music.theory",
      "description": "Music theory principles and compositional techniques"
    },
    {
      "type": "blackboard",
      "label": "production-techniques",
      "permissions": ["read"],
      "scope": "music.production",
      "description": "Audio production and mixing techniques"
    },
    {
      "type": "routine",
      "label": "Audio Producer",
      "permissions": ["read"],
      "description": "Provide audio production guidance and technical assistance"
    },
    {
      "type": "routine",
      "label": "Creative Director",
      "permissions": ["read"],
      "description": "Guide creative direction and artistic vision"
    }
  ]
}