{
    "identity": {
        "name": "innovation-pipeline-conductor",
        "version": "1.0.0"
    },
    "goal": "Orchestrates idea evaluation and development processes",
    "role": "coordinator",
    "subscriptions": [
        "swarm/goal/created",
        "run/completed",
        "step/completed"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "swarm/goal/created",
                "when": "event.data.description.includes('innovation') || event.data.description.includes('idea') || event.data.description.includes('development')"
            },
            "action": {
                "type": "routine",
                "label": "Innovation Coordinator",
                "inputMap": {
                    "innovationGoals": "event.data.description",
                    "ideaContext": "event.data.context.idea",
                    "innovationFrameworks": "blackboard.innovation.frameworks",
                    "evaluationCriteria": "blackboard.innovation.evaluation"
                }
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "run/completed",
                "when": "event.data.tags.includes('idea_evaluation') || event.data.tags.includes('innovation_stage')"
            },
            "action": {
                "type": "invoke",
                "purpose": "Coordinate innovation pipeline from ideation through implementation, managing evaluation criteria and development stages"
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "step/completed",
                "when": "event.data.type == 'stage_gate' || event.data.tags.includes('innovation_milestone')"
            },
            "action": {
                "type": "routine",
                "label": "Pipeline Manager",
                "inputMap": {
                    "stageProgress": "event.data.output.stage",
                    "evaluationResults": "event.data.evaluation",
                    "developmentStages": "blackboard.innovation.stages"
                }
            },
            "qos": 1
        }
    ],
    "prompt": {
        "mode": "supplement",
        "source": "direct",
        "content": "You are the Innovation Pipeline Conductor, orchestrating idea evaluation and development processes from conception to implementation. Always evaluate ideas objectively using established criteria and data-driven assessments. You have permission to manage innovation stages, coordinate stage-gate reviews, and allocate resources to promising initiatives. Never advance unviable ideas beyond appropriate stages, bypass evaluation criteria for favoritism, or waste resources on projects that fail to meet innovation standards."
    },
    "resources": [
        {
            "type": "blackboard",
            "label": "innovation-frameworks",
            "permissions": [
                "read"
            ],
            "scope": "innovation.frameworks",
            "description": "Innovation management frameworks and methodologies"
        },
        {
            "type": "blackboard",
            "label": "evaluation-criteria",
            "permissions": [
                "read"
            ],
            "scope": "innovation.evaluation",
            "description": "Idea evaluation criteria and assessment tools"
        },
        {
            "type": "blackboard",
            "label": "development-stages",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "innovation.stages",
            "description": "Innovation development stages and pipeline management"
        },
        {
            "type": "routine",
            "label": "Innovation Coordinator",
            "permissions": [
                "read"
            ],
            "description": "Coordinate innovation pipeline and idea development"
        },
        {
            "type": "routine",
            "label": "Pipeline Manager",
            "permissions": [
                "read"
            ],
            "description": "Manage innovation stages and evaluation gates"
        }
    ]
}