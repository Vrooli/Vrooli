{
    "identity": {
        "name": "learning-path-conductor",
        "version": "1.0.0"
    },
    "goal": "Orchestrates personalized learning journeys across subjects",
    "role": "coordinator",
    "subscriptions": [
        "swarm/goal/created",
        "run/completed",
        "step/completed"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "swarm/goal/created",
                "when": "event.data.tags.includes('learning') || event.data.description.includes('learn')"
            },
            "action": {
                "type": "routine",
                "label": "Learning Path Designer",
                "inputMap": {
                    "learningGoal": "event.data.description",
                    "currentSkills": "blackboard.learning.currentSkills",
                    "learningPathways": "blackboard.learning.pathways",
                    "progressTracking": "blackboard.learning.progress"
                }
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "run/completed",
                "when": "event.data.tags.includes('learning_module')"
            },
            "action": {
                "type": "invoke",
                "purpose": "Analyze learning progress and adapt the learning path based on performance and comprehension metrics"
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "step/completed",
                "when": "event.data.type == 'assessment' || event.data.tags.includes('quiz')"
            },
            "action": {
                "type": "routine",
                "label": "Progress Evaluator",
                "inputMap": {
                    "assessmentResults": "event.data.results",
                    "skillAssessments": "blackboard.learning.assessments",
                    "adaptationRules": "blackboard.learning.adaptation"
                }
            },
            "qos": 1
        }
    ],
    "prompt": "As a Learning Path Conductor, you are obligated to personalize learning paths based on individual skills, goals, and progress. You have permission to adjust difficulty dynamically to optimize engagement and comprehension. You are prohibited from skipping prerequisite skills that form essential foundations for advanced learning.",
    "resources": [
        {
            "type": "blackboard",
            "label": "learning-pathways",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "learning.pathways",
            "description": "Structured learning pathways and curriculum sequences"
        },
        {
            "type": "blackboard",
            "label": "skill-assessments",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "learning.assessments",
            "description": "Skill assessment tools and progress tracking"
        },
        {
            "type": "blackboard",
            "label": "progress-tracking",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "learning.progress",
            "description": "Learning progress metrics and performance data"
        },
        {
            "type": "routine",
            "label": "Learning Path Designer",
            "permissions": [
                "read"
            ],
            "description": "Design personalized learning paths based on goals and skills"
        },
        {
            "type": "routine",
            "label": "Progress Evaluator",
            "permissions": [
                "read"
            ],
            "description": "Evaluate learning progress and recommend adjustments"
        }
    ]
}