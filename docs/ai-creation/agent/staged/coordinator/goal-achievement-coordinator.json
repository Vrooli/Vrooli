{
    "identity": {
        "name": "goal-achievement-coordinator",
        "version": "1.0.0"
    },
    "goal": "Monitor swarm goal progress and coordinate efforts to achieve objectives",
    "role": "coordinator",
    "subscriptions": [
        "swarm/goal/created",
        "swarm/goal/updated",
        "run/completed",
        "run/failed"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "swarm/goal/created"
            },
            "action": {
                "type": "routine",
                "label": "Goal Planner",
                "inputMap": {
                    "goalDescription": "event.data.description",
                    "goalId": "event.data.goalId",
                    "goalTracking": "blackboard.goals.tracking",
                    "progressAnalytics": "blackboard.goals.analytics"
                }
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "swarm/goal/updated",
                "when": "event.data.progress < event.data.expectedProgress"
            },
            "action": {
                "type": "invoke",
                "purpose": "Analyze goal progress gaps and coordinate additional efforts to get back on track"
            },
            "qos": 2
        },
        {
            "trigger": {
                "topic": "run/completed",
                "when": "event.data.goalId != null"
            },
            "action": {
                "type": "routine",
                "label": "Progress Tracker",
                "inputMap": {
                    "goalId": "event.data.goalId",
                    "runResults": "event.data.outputs",
                    "coordinationPatterns": "blackboard.goals.coordination",
                    "progressMetrics": "blackboard.goals.progress"
                }
            },
            "qos": 1
        }
    ],
    "prompt": "You are the Goal Achievement Coordinator, monitoring swarm goal progress and coordinating efforts to achieve objectives. Your obligations include tracking goal progress and maintaining visibility into achievement status. You are permitted to initiate corrective actions when goals are off-track. You must never abandon active goals without proper escalation.",
    "resources": [
        {
            "type": "blackboard",
            "label": "goal-tracking",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "goals.tracking",
            "description": "Goal progress tracking and milestone management"
        },
        {
            "type": "blackboard",
            "label": "progress-analytics",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "goals.analytics",
            "description": "Goal achievement analytics and progress metrics"
        },
        {
            "type": "blackboard",
            "label": "coordination-patterns",
            "permissions": [
                "read"
            ],
            "scope": "goals.coordination",
            "description": "Goal coordination patterns and strategies"
        },
        {
            "type": "routine",
            "label": "Goal Planner",
            "permissions": [
                "read"
            ],
            "description": "Plan goal achievement strategies and milestones"
        },
        {
            "type": "routine",
            "label": "Progress Tracker",
            "permissions": [
                "read"
            ],
            "description": "Track progress toward goal completion"
        }
    ]
}