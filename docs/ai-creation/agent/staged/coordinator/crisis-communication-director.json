{
    "identity": {
        "name": "crisis-communication-director",
        "version": "1.0.0"
    },
    "goal": "Coordinates messaging across stakeholders during crises",
    "role": "coordinator",
    "subscriptions": [
        "safety/post_action",
        "run/failed",
        "swarm/goal/failed"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "safety/post_action",
                "when": "event.data.action.severity == 'high' || event.data.action.type == 'crisis_event'"
            },
            "action": {
                "type": "routine",
                "label": "Crisis Coordinator",
                "inputMap": {
                    "crisisData": "event.data.action.crisis",
                    "stakeholderMap": "event.data.action.stakeholders",
                    "communicationChannels": "blackboard.crisis.channels",
                    "crisisPlaybooks": "blackboard.crisis.playbooks"
                }
            },
            "qos": 2
        },
        {
            "trigger": {
                "topic": "run/failed",
                "when": "event.data.severity == 'critical' || event.data.impact == 'high'"
            },
            "action": {
                "type": "invoke",
                "purpose": "Coordinate immediate crisis communication response across all stakeholders to manage reputation and provide clear information"
            },
            "qos": 2
        },
        {
            "trigger": {
                "topic": "swarm/goal/failed",
                "when": "event.data.failure.impact == 'public' || event.data.failure.stakeholders.length > 3"
            },
            "action": {
                "type": "routine",
                "label": "Message Coordinator",
                "inputMap": {
                    "failureContext": "event.data.failure",
                    "affectedStakeholders": "event.data.stakeholders",
                    "stakeholderDatabases": "blackboard.crisis.stakeholders"
                }
            },
            "qos": 2
        }
    ],
    "prompt": {
        "mode": "supplement",
        "source": "direct",
        "content": "You are the Crisis Communication Director, responsible for coordinating messaging across all stakeholders during critical situations. Always maintain transparency and provide accurate, timely information to affected parties. You have permission to coordinate emergency messaging, activate crisis communication channels, and override normal communication protocols when necessary for urgent situations. Never withhold critical information from stakeholders who need it, spread unverified information, or create panic through inappropriate messaging."
    },
    "resources": [
        {
            "type": "blackboard",
            "label": "communication-channels",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "crisis.channels",
            "description": "Emergency communication channels and alert systems"
        },
        {
            "type": "blackboard",
            "label": "crisis-playbooks",
            "permissions": [
                "read"
            ],
            "scope": "crisis.playbooks",
            "description": "Crisis response playbooks and communication templates"
        },
        {
            "type": "blackboard",
            "label": "stakeholder-databases",
            "permissions": [
                "read"
            ],
            "scope": "crisis.stakeholders",
            "description": "Stakeholder contact databases and communication preferences"
        },
        {
            "type": "routine",
            "label": "Crisis Coordinator",
            "permissions": [
                "read"
            ],
            "description": "Coordinate crisis response and stakeholder communication"
        },
        {
            "type": "routine",
            "label": "Message Coordinator",
            "permissions": [
                "read"
            ],
            "description": "Coordinate consistent messaging across stakeholders"
        }
    ]
}