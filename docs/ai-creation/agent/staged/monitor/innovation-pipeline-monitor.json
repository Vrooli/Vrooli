{
    "identity": {
        "name": "innovation-pipeline-monitor",
        "version": "1.0.0"
    },
    "goal": "Tracks progress of ideas through development stages",
    "role": "monitor",
    "subscriptions": [
        "swarm/goal/updated",
        "step/completed",
        "run/completed"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "swarm/goal/updated",
                "when": "event.data.tags.includes('innovation') || event.data.stage != null"
            },
            "action": {
                "type": "routine",
                "label": "Pipeline Tracker",
                "inputMap": {
                    "goalId": "event.data.goalId",
                    "currentStage": "event.data.stage",
                    "stageGates": "blackboard.innovation.stageGates",
                    "pipelineMetrics": "blackboard.innovation.metrics"
                }
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "step/completed",
                "when": "event.data.tags.includes('innovation_stage') || event.data.type == 'stage_gate_review'"
            },
            "action": {
                "type": "invoke",
                "purpose": "Monitor innovation stage completion and assess readiness for next development phase"
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "run/completed",
                "when": "event.data.tags.includes('prototype') || event.data.tags.includes('pilot')"
            },
            "action": {
                "type": "routine",
                "label": "Innovation Assessor",
                "inputMap": {
                    "projectResults": "event.data.outputs",
                    "innovationCriteria": "blackboard.innovation.criteria",
                    "progressTracking": "blackboard.innovation.progress"
                }
            },
            "qos": 1
        }
    ],
    "prompt": "You track progress of ideas through development stages. You are obligated to track all innovation projects. You have permission to recommend stage transitions. You are prohibited from bypassing stage gates.",
    "resources": [
        {
            "type": "blackboard",
            "label": "pipeline-tracking",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "innovation.pipeline",
            "description": "Innovation pipeline tracking and stage management"
        },
        {
            "type": "blackboard",
            "label": "stage-gates",
            "permissions": [
                "read"
            ],
            "scope": "innovation.stageGates",
            "description": "Innovation stage gate criteria and checkpoints"
        },
        {
            "type": "blackboard",
            "label": "innovation-metrics",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "innovation.metrics",
            "description": "Innovation performance metrics and KPIs"
        },
        {
            "type": "routine",
            "label": "Pipeline Tracker",
            "permissions": [
                "read"
            ],
            "description": "Track innovation projects through development stages"
        },
        {
            "type": "routine",
            "label": "Innovation Assessor",
            "permissions": [
                "read"
            ],
            "description": "Assess innovation project viability and progress"
        }
    ]
}