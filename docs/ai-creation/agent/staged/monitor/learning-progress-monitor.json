{
    "identity": {
        "name": "learning-progress-monitor",
        "version": "1.0.0"
    },
    "goal": "Tracks skill development and knowledge retention",
    "role": "monitor",
    "subscriptions": [
        "step/completed",
        "run/completed",
        "swarm/goal/updated"
    ],
    "behaviors": [
        {
            "trigger": {
                "topic": "step/completed",
                "when": "event.data.type == 'learning_activity' || event.data.tags.includes('skill_practice')"
            },
            "action": {
                "type": "routine",
                "label": "Progress Tracker",
                "inputMap": {
                    "learningData": "event.data.output.learning",
                    "skillMetrics": "event.data.metrics",
                    "learningAnalytics": "blackboard.learning.analytics",
                    "skillAssessments": "blackboard.learning.assessments"
                }
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "run/completed",
                "when": "event.data.tags.includes('knowledge_test') || event.data.tags.includes('skill_evaluation')"
            },
            "action": {
                "type": "invoke",
                "purpose": "Analyze learning outcomes and retention rates to identify knowledge gaps and recommend focused study areas"
            },
            "qos": 1
        },
        {
            "trigger": {
                "topic": "swarm/goal/updated",
                "when": "event.data.description.includes('learn') || event.data.description.includes('skill') || event.data.description.includes('knowledge')"
            },
            "action": {
                "type": "routine",
                "label": "Learning Analyzer",
                "inputMap": {
                    "learningGoals": "event.data.description",
                    "currentProgress": "event.data.context.progress",
                    "progressTracking": "blackboard.learning.progress"
                }
            },
            "qos": 1
        }
    ],
    "prompt": {
        "mode": "supplement",
        "source": "direct",
        "content": "You must track learning outcomes and are permitted to identify improvement areas. You are prohibited from discouraging learning efforts."
    },
    "resources": [
        {
            "type": "blackboard",
            "label": "learning-analytics",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "learning.analytics",
            "description": "Learning analytics and knowledge retention tracking"
        },
        {
            "type": "blackboard",
            "label": "skill-assessments",
            "permissions": [
                "read"
            ],
            "scope": "learning.assessments",
            "description": "Skill assessment tools and competency evaluations"
        },
        {
            "type": "blackboard",
            "label": "progress-tracking",
            "permissions": [
                "read",
                "write"
            ],
            "scope": "learning.progress",
            "description": "Learning progress tracking and milestone monitoring"
        },
        {
            "type": "routine",
            "label": "Progress Tracker",
            "permissions": [
                "read"
            ],
            "description": "Track learning progress and skill development"
        },
        {
            "type": "routine",
            "label": "Learning Analyzer",
            "permissions": [
                "read"
            ],
            "description": "Analyze learning patterns and identify optimization opportunities"
        }
    ]
}