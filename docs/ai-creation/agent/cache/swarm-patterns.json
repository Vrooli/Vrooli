{
  "coordinationPatterns": {
    "hierarchical": {
      "description": "Clear command structure with coordinator agents managing specialist agents",
      "topics": ["task.assigned", "task.completed", "status.update"],
      "agents": ["coordinator", "specialist"],
      "example": "Project manager assigns tasks to team members"
    },
    "peer-to-peer": {
      "description": "Agents collaborate as equals, sharing information and responsibilities",
      "topics": ["peer.request", "peer.response", "collaboration.needed"],
      "agents": ["specialist", "specialist"],
      "example": "Two analysis agents sharing data for comprehensive insights"
    },
    "publish-subscribe": {
      "description": "Agents publish events that other agents subscribe to based on interest",
      "topics": ["event.published", "subscription.matched", "notification.sent"],
      "agents": ["publisher", "subscriber"],
      "example": "Data quality monitor publishes alerts that multiple agents consume"
    },
    "workflow-pipeline": {
      "description": "Sequential processing where each agent adds value and passes to next",
      "topics": ["stage.input", "stage.output", "pipeline.completed"],
      "agents": ["processor", "processor", "finalizer"],
      "example": "Data ingestion → validation → transformation → storage"
    }
  },
  "communicationPatterns": {
    "request-response": {
      "qos": 1,
      "timeout": "30s",
      "retries": 3,
      "topics": ["request.sent", "response.received"]
    },
    "fire-and-forget": {
      "qos": 0,
      "timeout": null,
      "retries": 0,
      "topics": ["notification.sent"]
    },
    "guaranteed-delivery": {
      "qos": 2,
      "timeout": "60s", 
      "retries": 5,
      "topics": ["critical.alert", "system.shutdown"]
    },
    "streaming": {
      "qos": 0,
      "continuous": true,
      "topics": ["data.stream", "metrics.update"]
    }
  },
  "errorHandlingPatterns": {
    "circuit-breaker": {
      "description": "Temporarily stop calling failing services to prevent cascade failures",
      "triggers": ["service.error", "timeout.exceeded"],
      "actions": ["circuit.open", "fallback.activate"]
    },
    "retry-with-backoff": {
      "description": "Retry failed operations with increasing delays",
      "triggers": ["transient.error", "rate.limit.hit"],
      "actions": ["schedule.retry", "increase.delay"]
    },
    "graceful-degradation": {
      "description": "Continue operating with reduced functionality when errors occur",
      "triggers": ["service.unavailable", "resource.exhausted"],
      "actions": ["activate.fallback", "reduce.features"]
    },
    "escalation": {
      "description": "Hand off to human operators or higher-level agents when automation fails",
      "triggers": ["automation.failed", "critical.error"],
      "actions": ["human.notify", "escalate.priority"]
    }
  },
  "scalingPatterns": {
    "horizontal": {
      "description": "Add more instances of the same agent type to handle load",
      "triggers": ["queue.length.high", "response.time.slow"],
      "actions": ["spawn.agent", "distribute.load"]
    },
    "vertical": {
      "description": "Increase resources allocated to existing agents",
      "triggers": ["memory.pressure", "cpu.high"],
      "actions": ["increase.memory", "add.cpu"]
    },
    "elastic": {
      "description": "Automatically scale up and down based on demand",
      "triggers": ["demand.increase", "demand.decrease"],
      "actions": ["auto.scale.up", "auto.scale.down"]
    }
  },
  "topicNamingConventions": {
    "hierarchical": "domain.subdomain.action",
    "examples": [
      "user.auth.login",
      "system.health.check",
      "data.quality.validation",
      "workflow.task.completed",
      "agent.error.detected"
    ],
    "guidelines": [
      "Use lowercase with dots as separators",
      "Start with domain/context",
      "End with specific action or event",
      "Keep names descriptive but concise",
      "Avoid abbreviations unless widely understood"
    ]
  },
  "behaviorRecommendations": {
    "coordinator": {
      "preferredQos": 1,
      "maxBehaviors": 3,
      "commonTriggers": ["workflow.started", "task.completed", "agent.error"],
      "commonActions": ["routine", "invoke"]
    },
    "specialist": {
      "preferredQos": 1,
      "maxBehaviors": 2,
      "commonTriggers": ["task.assigned", "data.received", "analysis.requested"],
      "commonActions": ["routine"]
    },
    "monitor": {
      "preferredQos": 2,
      "maxBehaviors": 3,
      "commonTriggers": ["threshold.exceeded", "error.detected", "health.check"],
      "commonActions": ["routine", "invoke"]
    },
    "bridge": {
      "preferredQos": 1,
      "maxBehaviors": 2,
      "commonTriggers": ["integration.request", "format.conversion", "api.call"],
      "commonActions": ["routine"]
    }
  }
}