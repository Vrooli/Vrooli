{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ğŸ—ï¸ğŸ‹ Server debug: Docker",
            "type": "node",
            "request": "attach",
            "remoteRoot": "/srv/app/packages/server",
            "localRoot": "${workspaceFolder}/packages/server",
            "port": 9229,
            "address": "localhost",
            "protocol": "inspector",
            "restart": true,
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**/*.js"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/server/dist/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/packages/server/dist/**/*.js.map"
            ],
            "dockerRunCommand": "--env --publish 5329:5329 --publish 9229:9229 --name ${containerName} ${image}",
            "exceptionBreakpoints": [
                "uncaught"
            ],
            "smartStep": true
        },
        {
            "name": "ğŸ§‘â€ğŸ’¼ğŸ‹ Jobs debug: Docker",
            "type": "node",
            "request": "attach",
            "remoteRoot": "/srv/app/packages/jobs",
            "localRoot": "${workspaceFolder}/packages/jobs",
            "port": 9230,
            "address": "localhost",
            "protocol": "inspector",
            "restart": true,
            "sourceMaps": true,
            "skipFiles": [
                "/node_modules/**/*.js"
            ],
            "dockerRunCommand": "--env --publish 5329:5329 --publish 9230:9230 --name ${containerName} ${image}",
            "exceptionBreakpoints": [
                "uncaught"
            ],
        },
        {
            "name": "ğŸ“²ğŸ  UI local debug",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "breakOnLoad": true,
            "skipFiles": [
                "/node_modules/**/*.js"
            ]
        },
        {
            "name": "ğŸ“²âœˆï¸ UI remote domain debug",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "<enter_UI_URL_here>",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "breakOnLoad": true,
            "skipFiles": [
                "/node_modules/**/*.js"
            ]
        },
        {
            "name": "ğŸ“²âœˆï¸ UI remote IP debug",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://<enter_SITE_IP_here>:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "breakOnLoad": true,
            "skipFiles": [
                "/node_modules/**/*.js"
            ]
        },
    ]
}