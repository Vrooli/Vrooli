{
  "type": "function",
  "category": "network",
  "function": {
    "name": "validate_url",
    "description": "Validate URL accessibility and get basic information",
    "parameters": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "URL to validate"
        },
        "check_accessibility": {
          "type": "boolean",
          "description": "Test if URL is accessible (makes HEAD request)",
          "default": true
        },
        "timeout": {
          "type": "number",
          "description": "Timeout in seconds for accessibility check",
          "default": 10
        },
        "verify_ssl": {
          "type": "boolean",
          "description": "Verify SSL certificates",
          "default": true
        }
      },
      "required": ["url"]
    }
  }
}