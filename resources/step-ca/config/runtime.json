{
  "name": "step-ca",
  "version": "0.25.0",
  "description": "Private certificate authority with ACME protocol support",
  "category": "security",
  "startup_order": 200,
  "dependencies": ["postgres"],
  "optional_dependencies": ["vault", "keycloak"],
  "startup_timeout": 60,
  "startup_time_estimate": "5-10s",
  "shutdown_timeout": 30,
  "recovery_attempts": 3,
  "priority": "high",
  "health_check": {
    "endpoint": "/health",
    "interval": 30,
    "timeout": 5,
    "retries": 3
  },
  "resource_requirements": {
    "minimum": {
      "cpu": "0.5",
      "memory": "256m",
      "disk": "1G"
    },
    "recommended": {
      "cpu": "1",
      "memory": "512m",
      "disk": "10G"
    }
  },
  "capabilities": [
    "x509-certificates",
    "ssh-certificates",
    "acme-protocol",
    "oidc-integration",
    "hsm-support",
    "certificate-revocation"
  ],
  "interfaces": {
    "api": "https",
    "cli": "step",
    "acme": "rfc8555"
  },
  "configuration": {
    "templates": {
      "development": {
        "default_duration": "24h",
        "max_duration": "72h",
        "require_oidc": false
      },
      "production": {
        "default_duration": "720h",
        "max_duration": "8760h",
        "require_oidc": true
      },
      "testing": {
        "default_duration": "1h",
        "max_duration": "24h",
        "skip_validation": true
      }
    }
  }
}