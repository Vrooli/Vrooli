{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zigbee2MQTT Configuration Schema",
  "type": "object",
  "required": ["mqtt", "serial"],
  
  "properties": {
    "mqtt": {
      "type": "object",
      "description": "MQTT broker configuration",
      "required": ["server"],
      "properties": {
        "server": {
          "type": "string",
          "description": "MQTT broker URL",
          "pattern": "^mqtt(s)?://.*",
          "default": "mqtt://localhost:1883"
        },
        "base_topic": {
          "type": "string",
          "description": "Base MQTT topic",
          "default": "zigbee2mqtt"
        },
        "user": {
          "type": "string",
          "description": "MQTT username"
        },
        "password": {
          "type": "string",
          "description": "MQTT password"
        },
        "client_id": {
          "type": "string",
          "description": "MQTT client ID"
        },
        "keepalive": {
          "type": "integer",
          "description": "MQTT keepalive interval",
          "default": 60
        },
        "version": {
          "type": "integer",
          "description": "MQTT protocol version",
          "enum": [4, 5],
          "default": 4
        }
      }
    },
    
    "serial": {
      "type": "object",
      "description": "Zigbee adapter configuration",
      "required": ["port"],
      "properties": {
        "port": {
          "type": "string",
          "description": "Serial port path",
          "default": "/dev/ttyACM0"
        },
        "adapter": {
          "type": "string",
          "description": "Adapter type",
          "enum": ["auto", "zstack", "deconz", "zigate", "ezsp"],
          "default": "auto"
        },
        "baudrate": {
          "type": "integer",
          "description": "Serial baudrate",
          "default": 115200
        }
      }
    },
    
    "advanced": {
      "type": "object",
      "description": "Advanced configuration",
      "properties": {
        "pan_id": {
          "oneOf": [
            {"type": "integer", "minimum": 1, "maximum": 65534},
            {"type": "string", "const": "GENERATE"}
          ],
          "description": "Zigbee network PAN ID",
          "default": "GENERATE"
        },
        "ext_pan_id": {
          "oneOf": [
            {"type": "array", "items": {"type": "integer"}, "minItems": 8, "maxItems": 8},
            {"type": "string", "const": "GENERATE"}
          ],
          "description": "Extended PAN ID",
          "default": "GENERATE"
        },
        "channel": {
          "type": "integer",
          "description": "Zigbee channel",
          "minimum": 11,
          "maximum": 26,
          "default": 11
        },
        "network_key": {
          "oneOf": [
            {"type": "array", "items": {"type": "integer"}, "minItems": 16, "maxItems": 16},
            {"type": "string", "const": "GENERATE"}
          ],
          "description": "Network encryption key",
          "default": "GENERATE"
        },
        "transmit_power": {
          "type": "integer",
          "description": "Transmit power in dBm",
          "minimum": -20,
          "maximum": 20
        },
        "log_level": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info"
        }
      }
    },
    
    "frontend": {
      "type": "object",
      "description": "Web frontend configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "port": {
          "type": "integer",
          "default": 8080
        },
        "host": {
          "type": "string",
          "default": "0.0.0.0"
        },
        "auth_token": {
          "type": "string",
          "description": "Authentication token"
        }
      }
    },
    
    "permit_join": {
      "type": "boolean",
      "description": "Allow new devices to join",
      "default": false
    },
    
    "homeassistant": {
      "oneOf": [
        {"type": "boolean"},
        {"type": "object", "properties": {
          "discovery_topic": {"type": "string"},
          "status_topic": {"type": "string"},
          "legacy_entity_attributes": {"type": "boolean"},
          "legacy_triggers": {"type": "boolean"}
        }}
      ],
      "description": "Home Assistant integration",
      "default": true
    },
    
    "availability": {
      "oneOf": [
        {"type": "boolean"},
        {"type": "object", "properties": {
          "active": {
            "type": "object",
            "properties": {
              "timeout": {"type": "integer", "default": 10}
            }
          },
          "passive": {
            "type": "object",
            "properties": {
              "timeout": {"type": "integer", "default": 1500}
            }
          }
        }}
      ],
      "description": "Device availability checking",
      "default": true
    },
    
    "devices": {
      "type": "object",
      "description": "Device-specific configuration",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "friendly_name": {"type": "string"},
            "retain": {"type": "boolean"},
            "qos": {"type": "integer", "enum": [0, 1, 2]},
            "homeassistant": {"type": ["boolean", "object"]},
            "debounce": {"type": "integer"},
            "filtered_attributes": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    },
    
    "groups": {
      "type": "object",
      "description": "Device groups",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "friendly_name": {"type": "string"},
            "devices": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    }
  }
}