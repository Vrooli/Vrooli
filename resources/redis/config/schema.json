{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "resource:redis",
  "title": "Redis Resource Configuration",
  "description": "In-memory data structure store for caching, pub/sub, and real-time operations",
  "type": "object",
  "extends": "baseResource",
  "properties": {
  },
  "examples": [
    {
      "title": "Minimal",
      "config": {
        "enabled": true
      }
    },
    {
      "title": "Development",
      "config": {
        "enabled": true,
        "purpose": "Development caching"
      }
    },
    {
      "title": "Production Cache",
      "config": {
        "enabled": true,
        "required": true,
        "purpose": "Production caching and session storage"
      }
    },
    {
      "title": "High Availability",
      "config": {
        "enabled": true,
        "required": true,
        "purpose": "High availability caching cluster"
      }
    },
    {
      "title": "Session Store",
      "config": {
        "enabled": true,
        "purpose": "User session storage"
      }
    }
  ]
}