{
  "resource_name": "openems",
  "version": "1.0.0",
  "startup_order": 750,
  "dependencies": [
    "questdb",
    "redis"
  ],
  "optional_dependencies": [
    "n8n",
    "apache-superset",
    "geonode"
  ],
  "startup_timeout": 60,
  "shutdown_timeout": 30,
  "health_check_interval": 10,
  "startup_time_estimate": "20-40s",
  "recovery_attempts": 3,
  "priority": "high",
  "category": "energy",
  "tags": [
    "energy-management",
    "microgrid",
    "der",
    "scada",
    "iot"
  ],
  "capabilities": {
    "telemetry_ingestion": true,
    "real_time_control": true,
    "api_access": true,
    "web_ui": true,
    "modbus_support": true,
    "simulation_mode": true
  },
  "resource_limits": {
    "memory": "1024m",
    "cpu": "1.0"
  },
  "ports": {
    "http": "${OPENEMS_PORT}",
    "jsonrpc": "${OPENEMS_JSONRPC_PORT}",
    "modbus": "${OPENEMS_MODBUS_PORT}",
    "backend": "${OPENEMS_BACKEND_PORT}"
  },
  "health_endpoints": [
    "http://localhost:${OPENEMS_PORT}/health",
    "http://localhost:${OPENEMS_PORT}/rest/channel/_meta/Version"
  ]
}