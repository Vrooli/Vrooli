{
    "compilerOptions": {
        "target": "ESNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "ESNext"
        ],
        "paths": {
            "@local/consts": [
                "./consts/src/*"
            ],
            "@local/icons": [
                "./icons/src/*"
            ],
            "@local/server": [
                "./server/src/*"
            ],
            "@local/translations": [
                "./translations/src/*"
            ],
            "@local/ui": [
                "./ui/src/*"
            ],
            "@local/uuid": [
                "./uuid/src/*"
            ],
            "@local/utils": [
                "./utils/src/*"
            ],
            "@local/validation": [
                "./validation/src/*"
            ],
        },
        "typeRoots": [
            "./server/src/types",
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "removeComments": true,
    },
    "include": [
        "consts/src/**/*",
        "icons/src/**/*",
        "server/src/**/*",
        "translations/src/**/*",
        "ui/public/**/*",
        "ui/src/**/*",
        "utils/src/**/*",
        "uuid/src/**/*",
        "validation/src/**/*",
    ],
    "exclude": [
        "**/node_modules",
        "**/.*/",
        "server/src/auth/message_signing/rust/pkg/*",
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}