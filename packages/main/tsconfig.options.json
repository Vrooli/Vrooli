{
    "compilerOptions": {
        "target": "ESNext",
        "rootDir": ".",
        "outDir": "./dist",
        "lib": [
            "ESNext"
        ],
        "typeRoots": [
            "./server/src/types"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "removeComments": true
    },
    "include": [
        "server/vite.config.ts",
        "ui/vite.config.ts"
    ],
    "exclude": [
        "**/node_modules",
        "**/.*/",
        "server/src/auth/message_signing/rust/pkg/*"
    ],
}