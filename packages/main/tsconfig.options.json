{
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": ".",
        "paths": {
            "@local/server": [
                "server/dist"
            ],
            "@local/shared": [
                "shared/dist"
            ],
            "@local/ui": [
                "ui/dist"
            ],
        },
        "lib": [
            "ESNext"
        ],
        "typeRoots": [
            "./server/src/types"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "removeComments": true
    },
    "exclude": [
        "**/node_modules",
        "**/.*/",
        "server/src/auth/message_signing/rust/pkg/*"
    ],
}