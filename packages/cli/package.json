{
  "name": "@vrooli/cli",
  "author": "Vrooli",
  "license": "AGPL-3.0-only",
  "version": "2.0.2",
  "description": "Command-line interface for managing Vrooli instances",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "vrooli": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && swc src -d dist --source-maps --ignore \"**/*.test.ts,**/*.test.js,**/*.test.tsx,**/*.test.jsx,**/*.test.cjs,**/*.d.ts,**/__test/**\" --strip-leading-paths && sed -i '1c#!/usr/bin/env node' dist/index.js && chmod +x dist/index.js",
    "dev": "node --experimental-modules --experimental-specifier-resolution=node src/index.ts",
    "lint": "eslint src --ignore-pattern '**/__test/**' --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.spec.ts' --ignore-pattern '**/*.test.hybrid.ts' --cache --cache-location .eslintcache --fix",
    "lint:test": "eslint 'src/**/*.test.ts' --config .eslintrc.test.cjs --cache --cache-location .eslintcache.test --fix",
    "lint:all": "pnpm run lint && pnpm run lint:test",
    "test": "vitest",
    "test-watch": "vitest",
    "test-coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc --noEmit -p tsconfig.test.json",
    "type-check:all": "pnpm run type-check && pnpm run type-check:test",
    "validate": "pnpm run lint && pnpm run type-check",
    "validate:all": "pnpm run lint:all && pnpm run type-check:all"
  },
  "dependencies": {
    "@vrooli/shared": "workspace:*",
    "axios": "^1.7.7",
    "better-sqlite3": "^9.6.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "form-data": "^4.0.1",
    "glob": "^11.0.0",
    "inquirer": "^10.2.2",
    "ora": "^8.1.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.1-nightly.20240914",
    "@swc/core": "^1.7.35",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
