{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        // NOTE: If changing to or from "commonjs", make sure package.json and .swcrc are updated as well
        "target": "ESNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "useDefineForClassFields": true,
        "allowJs": false,
        "strict": false,
        "tsBuildInfoFile": ".tsbuildinfo",
        "noEmit": true,
        "jsx": "react-jsx",
        "types": []
    },
    "include": [
        "src",
        "fonts.d.ts",
        "types.d.ts",
        "sw-template.js",
        "src/api/hooks",
        "public/pkg/libheif/worker.js"
    ],
    "exclude": [
        "**/*.stories.ts",
        "**/*.stories.tsx",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__test/**",
        "**/__tools",
        "**/storybook-static",
        "**/.storybook"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        },
        {
            "path": "../shared"
        }
    ]
}