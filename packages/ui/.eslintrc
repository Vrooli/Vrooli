{
    "extends": [
        "react-app"
    ],
    "ignorePatterns": [
        "build/",
        "dist/",
        "node_modules/"
    ],
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-infix-ops": "error",
        "keyword-spacing": "error",
        "arrow-spacing": "error",
        "prefer-const": "error",
        "no-var": "error",
        "object-shorthand": "error",
        "eol-last": "error",
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": "import",
                "next": "*"
            },
            {
                "blankLine": "never",
                "prev": "import",
                "next": "import"
            }
        ]
    }
}