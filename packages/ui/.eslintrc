{
    "extends": [
        "../../.eslintrc",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:react-perf/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "project": [
            "./tsconfig.json",
            "./tsconfig.test.json",
            "./tsconfig.tools.json"
        ]
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks",
        "react-perf",
        "jsx-a11y"
    ],
    "ignorePatterns": [
        "public/pkg/",
        "vite.config.ts"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js",
                "**/*.test.jsx",
                "**/*.test.ts",
                "**/*.test.tsx"
            ],
            "rules": {
                "jest/no-mocks-import": "off"
            }
        }
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/prop-types": "off",
    }
}