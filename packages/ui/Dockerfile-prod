FROM node:16-alpine

# Set working directory
ARG PROJECT_DIR
ARG VIRTUAL_PORT
WORKDIR ${PROJECT_DIR}

# Install global packages
RUN npm global add serve

# Copy required files
COPY --chown=node:node package.json package-lock.json ./
COPY --chown=node:node packages/ui/package.json packages/ui/dist packages/ui/
COPY --chown=node:node scripts/* scripts/

# Set port
EXPOSE ${VIRTUAL_PORT}