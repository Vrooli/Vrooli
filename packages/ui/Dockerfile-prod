FROM node:22-alpine

# Set working directory
ARG PROJECT_DIR
ARG VIRTUAL_PORT
WORKDIR ${PROJECT_DIR}

# Install global packages
RUN yarn global add serve

# Copy required files
COPY --chown=node:node package.json yarn.lock ./
COPY --chown=node:node packages/ui/package.json packages/ui/serve.json packages/ui/
COPY --chown=node:node packages/ui/dist packages/ui/dist
COPY --chown=node:node scripts/* scripts/

# Configure yarn for workspaces
RUN yarn config set enableLocalWorkspaces true && \
    echo "workspaces-experimental true" > .yarnrc

# Set port
EXPOSE ${VIRTUAL_PORT}
