{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "noEmit": true,
        "allowJs": true,
        "types": [
            "vitest/globals",
            "node",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "src/**/*.roundtrip.test.ts",
        "src/**/*.roundtrip.test.tsx",
        "src/**/*.scenario.test.ts",
        "src/**/*.scenario.test.tsx",
        "src/**/*.integration.test.ts",
        "src/**/*.integration.test.tsx",
        "src/**/*.stories.ts",
        "src/**/*.stories.tsx",
        "src/**/__test/**/*",
        "src/**/__tests/**/*",
        "**/test/**/*",
        "**/tests/**/*",
        "**/fixtures/**/*",
        ".storybook/**/*"
    ],
    "exclude": [
        "**/node_modules",
        "**/dist/**",
        "**/build/**",
        "**/.*/",
        "**/temp/**"
    ]
}