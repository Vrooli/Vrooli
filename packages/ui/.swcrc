{
    "jsc": {
        "minify": {
            "compress": true,
            "mangle": true
        },
        "target": "es2017",
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": false,
            "dynamicImport": false
        },
        "transform": {
            "react": {
                "pragma": "React.createElement",
                "pragmaFrag": "React.Fragment",
                "throwIfNamespace": true,
                "development": false,
                "useBuiltins": false,
                "runtime": "automatic"
            },
            "hidden": {
                "jest": true
            }
        }
    },
    "module": {
        // NOTE: If changing to or from "commonjs", make sure package.json and tsconfig.json are updated as well
        "type": "es6",
        "strict": false,
        "strictMode": true,
        "lazy": false,
        "noInterop": false
    }
}