{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        // NOTE: If changing to or from "commonjs", make sure package.json and .swcrc are updated as well
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "noImplicitThis": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "types": [],
        // Enhanced type safety for jobs package
        "noImplicitAny": true,
        "useUnknownInCatchVariables": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "src/**/__test/**",
        "**/fixtures/**",
        "**/test/**"
    ],
    "references": [
        { "path": "../shared" },
        { "path": "../server" }
    ]
}