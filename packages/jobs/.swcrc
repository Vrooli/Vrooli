{
    "exclude": [
        "/.*\\/types\\.ts$/",
        "/.*\\/types\\.d\\.ts$/"
    ],
    "jsc": {
        "minify": {
            "compress": true,
            "mangle": true
        },
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": true,
            "dynamicImport": true
        },
        "target": "es2017"
    },
    "module": {
        // NOTE: If changing to or from "commonjs", make sure package.json and tsconfig.json are updated as well
        "type": "es6"
    },
    "sourceMaps": true
}