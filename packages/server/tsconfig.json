{
    "compilerOptions": {
        "target": "ESNext",
        // NOTE: If changing to or from "commonjs", make sure package.json and .swcrc are updated as well
        "module": "ESNext",
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "DOM",
            "ESNext",
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "removeComments": true,
        "types": [
            "mocha",
        ]
    },
    "include": [
        "src",
    ],
    "exclude": [
        "**/*.test.ts",
        "**/__test",
        "**/node_modules",
        "**/dist",
        "**/.*/",
    ],
}