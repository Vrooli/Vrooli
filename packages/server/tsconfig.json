{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        // NOTE: If changing to or from "commonjs", make sure package.json and .swcrc are updated as well
        "target": "ES2022",
        "downlevelIteration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "noImplicitThis": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/__test/**"
    ],
    "references": [
        { "path": "../shared" }
    ]
}