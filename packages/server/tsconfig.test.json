{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "allowJs": true,
        "types": [
            "vitest/globals",
            "node"
        ]
    },
    "include": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/__test/**/*",
        "src/**/*",
        "test/**/*",
        "**/__test/**/*",
        "**/fixtures/**/*"
    ],
    "exclude": [
        "**/node_modules",
        "**/dist/**",
        "**/test-dist/**",
        "**/.*/",
        "**/temp/**"
    ]
}