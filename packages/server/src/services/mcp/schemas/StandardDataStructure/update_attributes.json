{
  "description": "Defines the properties for updating a StandardDataStructure through the MCP.",
  "title": "MCP StandardDataStructure Update Attributes",
  "type": "object",
  "properties": {
    "config": {
      "description": "Updated configuration object for the StandardDataStructure.\nThis must be the FULL config object, not a partial update.",
      "$ref": "#/definitions/StandardVersionConfigObject"
    },
    "rootUpdate": {
      "description": "Root resource information for the StandardDataStructure.",
      "type": "object",
      "properties": {
        "isPrivate": {
          "default": false,
          "type": "boolean"
        },
        "tagsConnect": {
          "description": "Tags to associate with the resource.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tagsDisconnect": {
          "description": "Tag IDs to remove from the resource.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resourceType": {
          "type": "string",
          "const": "Standard"
        }
      },
      "required": [
        "isPrivate",
        "resourceType"
      ]
    },
    "isPrivate": {
      "default": false,
      "type": "boolean"
    },
    "isComplete": {
      "default": false,
      "type": "boolean"
    },
    "versionLabel": {
      "type": "string"
    }
  },
  "required": [
    "isPrivate",
    "rootUpdate",
    "versionLabel"
  ],
  "definitions": {
    "StandardVersionConfigObject": {
      "description": "Represents all data that can be stored in a standard's stringified config.\n\nThis includes configuration that doesn't need to be queried while searching\n(e.g., validation options, format settings). Properties like standardType\nare stored directly in the StandardVersion model.",
      "type": "object",
      "properties": {
        "validation": {
          "description": "Validation settings",
          "type": "object",
          "properties": {
            "strictMode": {
              "description": "Whether to enable strict validation",
              "type": "boolean"
            },
            "rules": {
              "description": "Custom validation rules",
              "$ref": "#/definitions/Record<string,unknown>"
            },
            "errorMessages": {
              "description": "Error messages for validation failures",
              "$ref": "#/definitions/Record<string,string>"
            }
          }
        },
        "format": {
          "description": "Format settings for display",
          "type": "object",
          "properties": {
            "defaultFormat": {
              "description": "Default presentation format",
              "type": "string"
            },
            "options": {
              "description": "Custom formatting options",
              "$ref": "#/definitions/Record<string,unknown>"
            }
          }
        },
        "compatibility": {
          "description": "Compatibility information",
          "type": "object",
          "properties": {
            "minimumRequirements": {
              "description": "Minimum system requirements",
              "$ref": "#/definitions/Record<string,string>"
            },
            "knownIssues": {
              "description": "Known compatibility issues",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "compatibleWith": {
              "description": "Compatible with standards",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "compliance": {
          "description": "Compliance information",
          "type": "object",
          "properties": {
            "compliesWith": {
              "description": "Standards this complies with",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "certifications": {
              "description": "Certification information",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Name of certification",
                    "type": "string"
                  },
                  "issuer": {
                    "description": "Issuing organization",
                    "type": "string"
                  },
                  "date": {
                    "description": "Date of certification",
                    "type": "string"
                  },
                  "expiration": {
                    "description": "Expiration date",
                    "type": "string"
                  }
                },
                "required": [
                  "issuer",
                  "name"
                ]
              }
            }
          }
        },
        "schema": {
          "description": "Schema for the standard (typically JSON Schema)",
          "type": "string"
        },
        "schemaLanguage": {
          "description": "What the schema is written in",
          "type": "string"
        },
        "props": {
          "description": "Props that are used to generate the standard",
          "$ref": "#/definitions/Record<string,unknown>"
        },
        "__version": {
          "description": "Store the version number for future compatibility",
          "type": "string"
        },
        "resources": {
          "description": "Resources attached to this entity",
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConfigResource"
          }
        }
      },
      "required": [
        "__version"
      ]
    },
    "Record<string,unknown>": {
      "type": "object"
    },
    "Record<string,string>": {
      "type": "object"
    },
    "ConfigResource": {
      "description": "Resource definition for storing links and external data",
      "type": "object",
      "properties": {
        "link": {
          "description": "Link to the resource",
          "type": "string"
        },
        "usedFor": {
          "description": "Purpose of the resource",
          "enum": [
            "Community",
            "Context",
            "Developer",
            "Donation",
            "ExternalService",
            "Feed",
            "Install",
            "Learning",
            "Notes",
            "OfficialWebsite",
            "Proposal",
            "Related",
            "Researching",
            "Scheduling",
            "Social",
            "Tutorial"
          ],
          "type": "string"
        },
        "translations": {
          "description": "Display info",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "language": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "language",
              "name"
            ]
          }
        }
      },
      "required": [
        "link",
        "translations"
      ]
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}