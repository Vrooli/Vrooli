{
  "description": "Filters for finding resources via MCP.",
  "title": "MCP Resource Find Filters",
  "type": "object",
  "properties": {
    "isLatest": {
      "description": "If this is the latest public version.",
      "type": "boolean"
    },
    "ownedByTeamIdRoot": {
      "description": "ID of the team that owns the root resource.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ownedByUserdRoot": {
      "description": "ID of the user that owns the root resource.",
      "type": "string"
    },
    "rootId": {
      "description": "ID of the root resource.",
      "type": "string"
    },
    "tags": {
      "description": "Filter teams by associated tags.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sortBy": {
      "description": "Sort order for the results.",
      "enum": [
        "CommentsAsc",
        "CommentsDesc",
        "ComplexityAsc",
        "ComplexityDesc",
        "DateCompletedAsc",
        "DateCompletedDesc",
        "DateCreatedAsc",
        "DateCreatedDesc",
        "DateUpdatedAsc",
        "DateUpdatedDesc",
        "ForksAsc",
        "ForksDesc",
        "RunsAsc",
        "RunsDesc"
      ],
      "type": "string"
    },
    "ids": {
      "description": "Filter by specific IDs.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "visibility": {
      "description": "Filter by visibility.",
      "enum": [
        "Own",
        "OwnOrPublic",
        "OwnPrivate",
        "OwnPublic",
        "Public"
      ],
      "type": "string"
    },
    "take": {
      "description": "Number of items to return.",
      "type": "number"
    },
    "after": {
      "description": "Cursor for pagination.",
      "type": "string"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}