{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Bot Find Filters",
  "description": "Filters for finding 'Bot' resources via MCP.",
  "type": "object",
  "properties": {
    "handle": {
      "description": "Filter by bot handle (exact match).",
      "type": "string"
    },
    "sortBy": {
      "description": "Sort order for the results.",
      "enum": [
        "BookmarksAsc",
        "BookmarksDesc",
        "DateCreatedAsc",
        "DateCreatedDesc",
        "DateUpdatedAsc",
        "DateUpdatedDesc"
      ],
      "type": "string"
    },
    "ids": {
      "description": "Filter by specific IDs.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "visibility": {
      "description": "Filter by visibility.",
      "enum": [
        "Own",
        "OwnOrPublic",
        "OwnPrivate",
        "OwnPublic",
        "Public"
      ],
      "type": "string"
    },
    "take": {
      "description": "Number of items to return.",
      "type": "number"
    },
    "after": {
      "description": "Cursor for pagination.",
      "type": "string"
    }
  }
}