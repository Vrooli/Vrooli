      },
      "variant": {
        "description": "Resource type",
        "enum": [
          "Bot",
          "ExternalData",
          "Note",
          "Project",
          "RoutineApi",
          "RoutineCode",
          "RoutineData",
          "RoutineGenerate",
          "RoutineInformational",
          "RoutineInternalAction",
          "RoutineMultiStep",
          "RoutineSmartContract",
          "RoutineWeb",
          "StandardDataStructure",
          "StandardPrompt",
          "Team"
        ],
        "type": "string"
      },
      "op": {
        "description": "The operation to define",
        "enum": [
          "add",
          "delete",
          "find",
          "update"
        ],
        "type": "string"
      }
    },
    "required": [
      "op",
      "toolName",
      "variant"
    ],
    "additionalProperties": false
