{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP StandardPrompt Add Attributes",
  "description": "Defines the properties for adding a new StandardPrompt through the MCP.",
  "type": "object",
  "properties": {
    "config": {
      "description": "Optional StandardPrompt configuration object.",
      "type": "object",
      "properties": {
        "__version": {
          "type": "string",
          "const": "1.0"
        },
        "compatibility": {
          "description": "Compatibility information (not usually needed)",
          "type": "object",
          "properties": {
            "knownIssues": {
              "description": "Known compatibility issues (e.g. \"Doesn't work with such-and-such model\")",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "compatibleWith": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "schema": {
          "description": "The prompt itself",
          "type": "string"
        },
        "props": {
          "description": "Variables that are inserted into the prompt. All variables should appear in the schema in the format {{variableName}}",
          "$ref": "#/definitions/Record<string,unknown>"
        }
      },
      "required": [
        "__version"
      ]
    },
    "resourceSubType": {
      "type": "string",
      "const": "StandardPrompt"
    },
    "rootCreate": {
      "description": "Root resource information for the StandardPrompt.",
      "type": "object",
      "properties": {
        "isPrivate": {
          "default": false,
          "type": "boolean"
        },
        "tagsConnect": {
          "description": "Tags to associate with the resource.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resourceType": {
          "type": "string",
          "const": "Standard"
        }
      },
      "required": [
        "isPrivate",
        "resourceType"
      ]
    },
    "isComplete": {
      "default": false,
      "type": "boolean"
    },
    "versionLabel": {
      "type": "string"
    },
    "isPrivate": {
      "default": false,
      "type": "boolean"
    }
  },
  "required": [
    "isPrivate",
    "resourceSubType",
    "rootCreate",
    "versionLabel"
  ],
  "definitions": {
    "Record<string,unknown>": {
      "type": "object"
    }
  }
}