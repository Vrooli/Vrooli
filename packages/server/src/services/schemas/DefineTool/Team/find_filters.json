{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Team Find Filters",
  "description": "Filters for finding 'Team' resources via MCP.",
  "type": "object",
  "properties": {
    "handle": {
      "description": "Filter by team handle (exact match).",
      "type": "string"
    },
    "memberUserIds": {
      "description": "Find teams containing specific user IDs as members.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "description": "Filter by associated tags.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "isOpenToNewMembers": {
      "description": "Filter teams by whether they are open to new members.",
      "type": "boolean"
    },
    "sortBy": {
      "description": "Sort order for the results.",
      "enum": [
        "BookmarksAsc",
        "BookmarksDesc",
        "DateCreatedAsc",
        "DateCreatedDesc",
        "DateUpdatedAsc",
        "DateUpdatedDesc"
      ],
      "type": "string"
    },
    "ids": {
      "description": "Filter by specific IDs.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "visibility": {
      "description": "Filter by visibility.",
      "enum": [
        "Own",
        "OwnOrPublic",
        "OwnPrivate",
        "OwnPublic",
        "Public"
      ],
      "type": "string"
    },
    "take": {
      "description": "Number of items to return.",
      "type": "number"
    },
    "after": {
      "description": "Cursor for pagination.",
      "type": "string"
    }
  }
}