{
    "name": "server",
    "author": "Vrooli",
    "license": "GPL-3.0",
    "version": "1.9.0",
    "private": true,
    "main": "dist/index.js",
    "type": "module",
    "directories": {
        "test": "tests"
    },
    "prisma": {
        "schema": "./src/db/schema.prisma",
        "seed": "./src/db/seeds/init.ts"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "yarn tsc && yarn post-build",
        "post-build": "yarn post-build-message-signing && yarn post-build-email-templates",
        "post-build-message-signing": "WPATH=\"auth/message_signing/rust/pkg\" && mkdir -p dist/$WPATH && cp src/$WPATH/*.wasm dist/$WPATH/ && cp src/$WPATH/*.json dist/$WPATH/ && [ -f dist/$WPATH/emurgo_message_signing.js ]",
        "post-build-email-templates": "cp -R src/notify/email/templates dist/notify/email/",
        "start-development": "yarn build && nodemon --experimental-modules --experimental-specifier-resolution=node --inspect=0.0.0.0:9229 dist/index.js",
        "start-production": "yarn build && node --experimental-modules --experimental-specifier-resolution=node dist/index.js",
        "prisma-generate": "prisma generate",
        "graphql-generate": "graphql-codegen --config codegen.yml && sed -i 's/__typename?:/__typename:/g' generatedTypes.ts && mv generatedTypes.ts ../shared/consts/src/graphqlTypes.ts"
    },
    "dependencies": {
        "@blockfrost/blockfrost-js": "^4.1.0",
        "@emurgo/cardano-serialization-lib-nodejs": "^9.1.2",
        "@graphql-tools/schema": "^8.2.0",
        "@prisma/client": "4.11.0",
        "@shared/consts": "*",
        "@shared/translations": "*",
        "@shared/utils": "*",
        "@shared/uuid": "*",
        "@shared/validation": "*",
        "apollo-server-express": "^3.3.0",
        "bcrypt": "^5.0.1",
        "bull": "^4.10.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "graphql": "^15.5.1",
        "graphql-upload": "^12.0.0",
        "i18next": "^22.4.10",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "node-cron": "^3.0.0",
        "node-fetch": "^3.2.10",
        "node-ical": "^0.15.3",
        "nodemailer": "^6.6.0",
        "nodemon": "^2.0.7",
        "redis": "4.4.0",
        "stripe": "^11.17.0",
        "twilio": "^3.61.0",
        "typescript": "4.9.5",
        "web-push": "^3.5.0",
        "winston": "^3.7.2"
    },
    "devDependencies": {
        "0x": "^5.5.0",
        "@graphql-codegen/cli": "^2.16.1",
        "@graphql-codegen/typescript": "^2.8.5",
        "@graphql-codegen/typescript-resolvers": "^2.7.10",
        "@types/bcrypt": "^5.0.0",
        "@types/bull": "^3.15.5",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.11",
        "@types/graphql-upload": "^8.0.7",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/node": "^17.0.35",
        "@types/node-cron": "^3.0.1",
        "@types/nodemailer": "^6.4.4",
        "@types/web-push": "^3.3.2"
    }
}
