{
    "name": "@local/server",
    "author": "Vrooli",
    "license": "AGPL-3.0-only",
    "version": "1.9.10",
    "private": true,
    "main": "dist/index.js",
    "type": "module",
    "typings": "src/types.d.ts",
    "prisma": {
        "schema": "./dist/db/schema.prisma",
        "seed": "./dist/db/seeds/init.js"
    },
    "scripts": {
        "pretest": "cd ../shared && yarn build && cd ../server",
        "build-tests": "rimraf dist && NODE_ENV=test swc src -d dist && yarn post-build",
        "test": "yarn build-tests && dotenv -e ../../.env-test -- mocha --file \"dist/__test/setup.js\" \"dist/**/*.test.js\"",
        "test-watch": "yarn build-tests && dotenv -e ../../.env-test -- mocha --watch --file \"dist/__test/setup.js\" \"dist/**/*.test.js\"",
        "lint": "eslint src",
        "build": "rimraf dist && NODE_ENV=production swc src -d dist --source-maps --ignore \"**/*.test.ts,**/*.test.js,**/*.test.tsx,**/*.test.jsx,**/*.test.cjs\" && yarn post-build",
        "pre-prod": "prisma migrate deploy && yarn prisma-generate",
        "pre-develop": "yarn pre-prod && yarn type-check",
        "post-build": "yarn post-build-copy",
        "post-build-copy": "copyfiles -u 1 \"src/**/*.txt\" \"src/**/*.lua\" \"src/**/*.html\" \"src/**/*.prisma\" \"src/**/*.sql\" \"src/auth/message_signing/rust/pkg/*.wasm\" \"src/auth/message_signing/rust/pkg/*.json\" \"src/auth/message_signing/rust/pkg/emurgo_message_signing.cjs\" dist",
        "start-development": "NODE_OPTIONS=\"--max-old-space-size=4096\" nodemon dist/index.js",
        "start-production": "node --experimental-modules --experimental-specifier-resolution=node dist/index.js",
        "prisma-generate": "prisma generate",
        "type-check": "NODE_OPTIONS=\"--max-old-space-size=6144\" tsc --noEmit"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.16.0",
        "@aws-sdk/client-s3": "^3.666.0",
        "@emurgo/cardano-serialization-lib-nodejs": "^9.1.2",
        "@local/shared": "*",
        "@mistralai/mistralai": "^0.2.0",
        "@prisma/client": "6.1.0",
        "bcrypt": "^5.0.1",
        "bull": "^4.11.4",
        "busboy": "^1.6.0",
        "cookie": "^0.7.2",
        "cors": "^2.8.5",
        "express": "^5.0.1",
        "file-type": "^20.0.0",
        "heic-convert": "^1.2.4",
        "i18next": "^22.4.10",
        "isolated-vm": "^5.0.1",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "node-cron": "^3.0.0",
        "node-fetch": "^3.2.10",
        "node-ical": "^0.15.3",
        "nodemailer": "^6.6.0",
        "nodemon": "3.0.2",
        "openai": "4.26.0",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-local": "^1.0.0",
        "prisma": "6.1.0",
        "redis": "^4.6.10",
        "sharp": "^0.32.3",
        "socket.io": "^4.6.2",
        "stopword": "^2.0.8",
        "stripe": "^11.17.0",
        "superjson": "^2.2.1",
        "tiktoken": "^1.0.20",
        "twilio": "^4.23.0",
        "typescript": "5.4.5",
        "web-push": "^3.5.0",
        "winston": "^3.12.0"
    },
    "devDependencies": {
        "0x": "^5.5.0",
        "@swc/cli": "^0.1.63",
        "@swc/core": "^1.3.104",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "^5.0.1",
        "@types/chai-as-promised": "^8.0.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.11",
        "@types/heic-convert": "^1.2.0",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/mocha": "^10.0.10",
        "@types/node": "^17.0.35",
        "@types/node-cron": "^3.0.1",
        "@types/nodemailer": "^6.4.4",
        "@types/passport": "^1.0.17",
        "@types/sinon": "^17.0.3",
        "@types/stopword": "^2.0.0",
        "@types/web-push": "^3.3.2",
        "chai": "^5.1.2",
        "chai-as-promised": "^8.0.1",
        "copyfiles": "^2.4.1",
        "dotenv-cli": "^8.0.0",
        "esmock": "^2.7.0",
        "mocha": "^11.1.0",
        "rimraf": "^5.0.10",
        "sinon": "^19.0.2",
        "testcontainers": "^10.18.0",
        "why-is-node-running": "^2.3.0"
    }
}
