{
    "exclude": [
        "/.*\\/types\\.ts$/",
        "/.*\\/types\\.d\\.ts$/"
    ],
    "jsc": {
        "minify": {
            "compress": true,
            "mangle": true
        },
        "target": "es2017",
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": false,
            "dynamicImport": false
        },
        "transform": {
            "hidden": {
                "jest": true
            }
        }
    },
    "module": {
        "type": "es6",
        "strict": false,
        "strictMode": true,
        "lazy": false,
        "noInterop": false
    }
}