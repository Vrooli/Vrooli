{
    "jsc": {
        "minify": {
            "compress": true,
            "mangle": true
        },
        "target": "esnext",
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": false,
            "dynamicImport": true
        }
    },
    "module": {
        // NOTE: If changing to or from "commonjs", make sure package.json and tsconfig.json are updated as well
        "type": "nodenext",
        "strict": false,
        "strictMode": true,
        "lazy": false,
        "noInterop": false
    }
}