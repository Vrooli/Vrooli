{
    "name": "@vrooli/shared",
    "author": "Vrooli",
    "license": "AGPL-3.0-only",
    "version": "1.9.11",
    "private": true,
    "description": "Common code shared between server and ui",
    "main": "dist/index.js",
    "typings": "src/types.d.ts",
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "test": "vitest run",
        "test-watch": "vitest",
        "test-coverage": "vitest run --coverage",
        "coverage-report": "vitest run --coverage --reporter=html",
        "lint": "eslint src",
        "build": "rimraf dist && cross-env NODE_ENV=production swc src -d dist --ignore \"**/*.test.ts,**/*.test.js,**/*.test.tsx,**/*.test.jsx,**/*.test.cjs\" && pnpm run post-build",
        "post-build": "run-s post-build-copy post-build-fix-imports",
        "post-build-copy": "copyfiles -u 1 \"src/**/*.json\" dist",
        "post-build-fix-imports": "sh ../../scripts/fixImports.sh with dist",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "bpmn-moddle": "^9.0.1",
        "cron-parser": "^5.2.0",
        "i18next": "^22.4.10",
        "iso8601-duration": "^2.1.2",
        "jexl": "^2.3.0",
        "moment": "^2.29.4",
        "moment-timezone": "^0.5.43",
        "nanoid": "^5.1.5",
        "uuid": "^9.0.0",
        "xmlbuilder2": "^3.0.2",
        "yup": "^1.3.3"
    },
    "devDependencies": {
        "@swc-node/register": "^1.10.10",
        "@swc/cli": "^0.1.63",
        "@swc/core": "^1.3.104",
        "@types/bpmn-moddle": "^5.1.11",
        "@types/chai": "^5.0.1",
        "@types/jexl": "^2.3.4",
        "@types/mocha": "^10.0.10",
        "@types/node": "^18.14.1",
        "@types/sinon": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "@vitest/coverage-v8": "^3.0.9",
        "c8": "^10.1.3",
        "chai": "^5.1.2",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^8.0.0",
        "jsdom": "^26.0.0",
        "mocha": "^11.1.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.10",
        "sinon": "^19.0.2",
        "ts-json-schema-generator": "^1.2.0",
        "typescript-json-schema": "^0.65.1",
        "vitest": "~3.0.7"
    },
    "mocha": {
        "timeout": 10000
    },
    "packageManager": "pnpm@10.5.2"
}