{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "node",
            "vitest/globals"
        ],
        "sourceMap": true,
        "noEmit": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx", 
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "src/**/__test/**/*",
        "test/**/*",
        "**/__test/**/*",
        "**/fixtures/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test-dist"
    ]
}