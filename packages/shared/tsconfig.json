{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        // NOTE: If changing to or from "commonjs", make sure package.json and .swcrc are updated as well
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "typeRoots": [
            "../../node_modules/@types",
            "./node_modules/@types",
            "./src/types"
        ],
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "types": []
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/__tools/**",
        "src/__test/**",
        "src/**/__test/**",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}