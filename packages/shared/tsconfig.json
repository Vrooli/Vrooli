{
    "compilerOptions": {
        "target": "ESNext",
        // NOTE: If changing to or from "commonjs", make sure package.json and .swcrc are updated as well
        "module": "esnext",
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "typeRoots": [
            "../../node_modules/@types",
            "./node_modules/@types",
            "./src/types"
        ],
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "declaration": true,
        "types": [
            "mocha",
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/*.test.ts",
        "**/__test",
        "**/node_modules",
        "**/dist",
        "**/.*/",
    ]
}