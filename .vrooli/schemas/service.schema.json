{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vrooli.com/schemas/service.schema.json",
  "title": "Service Configuration Schema",
  "description": "Enhanced service configuration with resource auto-completion support",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema reference"
    },
    "version": {
      "$ref": "common.schema.json#/definitions/semver"
    },
    "service": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "parent": {
          "type": "string",
          "const": "vrooli"
        },
        "displayName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "description": "Scenario classification (e.g., business-application, helper)"
        },
        "category": {
          "type": "string",
          "description": "High-level scenario category"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Free-form keywords for search and filtering"
        },
        "maintainers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "additionalProperties": false
          }
        },
        "repository": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "default": "git"
            },
            "url": {
              "type": "string",
              "format": "uri"
            },
            "directory": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "license": {
          "type": "string"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "documentation": {
          "type": "string",
          "format": "uri"
        },
        "support": {
          "type": "object",
          "properties": {
            "issues": {
              "type": "string",
              "format": "uri"
            }
          },
          "additionalProperties": false
        },
        "importance": {
          "type": "string",
          "enum": [
            "critical",
            "important",
            "standard",
            "experimental"
          ]
        }
      },
      "additionalProperties": false
    },
    "ports": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "env_var": {
            "type": "string"
          },
          "port": {
            "type": [
              "integer",
              "string"
            ]
          },
          "range": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "Scenario and resource dependencies",
      "properties": {
        "resources": {
          "$ref": "resource-definitions.json#/resourceCatalog",
          "description": "Resource dependencies declared under the dependencies namespace"
        },
        "scenarios": {
          "type": "object",
          "description": "Scenario dependencies keyed by scenario identifier",
          "patternProperties": {
            "^[a-z0-9-]+$": {
              "$ref": "#/definitions/scenarioDependency"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "deployment": {
      "type": "object"
    },
    "lifecycle": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "setup": {
          "$ref": "#/definitions/lifecyclePhase"
        },
        "develop": {
          "$ref": "#/definitions/lifecyclePhase"
        },
        "test": {
          "$ref": "#/definitions/lifecyclePhase"
        },
        "stop": {
          "$ref": "#/definitions/lifecyclePhase"
        },
        "shutdown": {
          "$ref": "#/definitions/lifecyclePhase"
        },
        "health": {
          "$ref": "#/definitions/healthPhase"
        },
        "timeout": {
          "type": "number",
          "description": "Default timeout in seconds for lifecycle operations"
        }
      }
    }
  },
  "required": ["dependencies"],
  "allOf": [
    {
      "properties": {
        "dependencies": {
          "anyOf": [
            { "required": ["resources"] },
            { "required": ["scenarios"] }
          ]
        }
      }
    }
  ],
  "definitions": {
    "scenarioDependency": {
      "type": "object",
      "description": "Metadata describing a dependent scenario",
      "properties": {
        "required": {
          "type": "boolean",
          "default": true,
          "description": "Whether the dependency is mandatory"
        },
        "version": {
          "$ref": "common.schema.json#/definitions/semver",
          "description": "Exact scenario version required"
        },
        "versionRange": {
          "type": "string",
          "description": "Semantic version range that is acceptable"
        },
        "description": {
          "type": "string",
          "description": "Human-readable context for the dependency"
        }
      },
      "additionalProperties": false
    },
    "lifecyclePhase": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "condition": {
          "type": "object",
          "properties": {
            "checks": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "run": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "background": {
                "type": "boolean"
              },
              "condition": {
                "type": "object"
              },
              "retry": {
                "type": "object",
                "properties": {
                  "max_attempts": {
                    "type": "integer"
                  },
                  "delay": {
                    "type": "integer"
                  }
                }
              }
            },
            "required": [
              "name",
              "run"
            ]
          }
        }
      }
    },
    "healthPhase": {
      "type": "object",
      "description": "Health check configuration for the service",
      "properties": {
        "description": {
          "type": "string",
          "default": "Service health check configuration"
        },
        "endpoints": {
          "type": "object",
          "description": "Health check endpoints for different service components",
          "properties": {
            "api": {
              "type": "string",
              "default": "/health",
              "description": "API health endpoint path (must be /health for lifecycle orchestration)"
            },
            "ui": {
              "type": "string",
              "default": "/health",
              "description": "UI health endpoint path (standardized to /health for cross-scenario interoperability)"
            },
            "metrics": {
              "type": "string",
              "default": "/metrics",
              "description": "Metrics endpoint path"
            }
          }
        },
        "checks": {
          "type": "array",
          "description": "Specific health checks to perform",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the health check"
              },
              "type": {
                "type": "string",
                "enum": [
                  "http",
                  "tcp",
                  "postgres",
                  "redis",
                  "process",
                  "file"
                ],
                "description": "Type of health check"
              },
              "target": {
                "type": "string",
                "description": "Target for the health check (URL, port, file path, etc.)"
              },
              "critical": {
                "type": "boolean",
                "default": true,
                "description": "Whether this check is critical for service health"
              },
              "timeout": {
                "type": "integer",
                "default": 5000,
                "description": "Timeout in milliseconds"
              },
              "interval": {
                "type": "integer",
                "default": 30000,
                "description": "Check interval in milliseconds"
              }
            },
            "required": [
              "name",
              "type"
            ]
          }
        },
        "timeout": {
          "type": "integer",
          "default": 5000,
          "description": "Default timeout for health checks in milliseconds"
        },
        "interval": {
          "type": "integer",
          "default": 30000,
          "description": "Default interval between health checks in milliseconds"
        },
        "startup_grace_period": {
          "type": "integer",
          "default": 10000,
          "description": "Grace period in milliseconds before first health check"
        }
      }
    }
  }
}
