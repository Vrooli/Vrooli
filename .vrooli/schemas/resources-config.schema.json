{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vrooli Local Resources Configuration",
  "description": "Configuration schema for local services and resources available to Vrooli",
  "type": "object",
  "required": ["version", "enabled"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration schema version"
    },
    "enabled": {
      "type": "boolean",
      "description": "Master switch to enable/disable all local resource functionality"
    },
    "localServices": {
      "type": "object",
      "description": "Configuration for different categories of local services",
      "properties": {
        "ai": {
          "$ref": "#/definitions/aiServices"
        },
        "automation": {
          "$ref": "#/definitions/automationServices"
        },
        "agents": {
          "$ref": "#/definitions/agentServices"
        },
        "storage": {
          "$ref": "#/definitions/storageServices"
        }
      }
    },
    "discovery": {
      "$ref": "#/definitions/discoveryConfig"
    },
    "security": {
      "$ref": "#/definitions/securityConfig"
    },
    "_documentation": {
      "type": "object",
      "description": "Documentation and notes (ignored by parser)"
    }
  },
  "definitions": {
    "healthCheck": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string",
          "description": "API endpoint to check service health"
        },
        "intervalMs": {
          "type": "integer",
          "minimum": 10000,
          "description": "How often to check health in milliseconds"
        },
        "timeoutMs": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 30000,
          "description": "Health check timeout in milliseconds"
        },
        "requiresAuth": {
          "type": "boolean",
          "default": false,
          "description": "Whether health check requires authentication"
        }
      },
      "required": ["intervalMs", "timeoutMs"]
    },
    "aiServices": {
      "type": "object",
      "description": "Local AI/ML model services",
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "baseUrl": {
              "type": "string",
              "format": "uri"
            },
            "expectedModels": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Models expected to be available"
            },
            "model": {
              "type": "string",
              "description": "Single model name for services that use one model"
            },
            "healthCheck": {
              "$ref": "#/definitions/healthCheck"
            }
          },
          "required": ["enabled", "baseUrl"]
        }
      }
    },
    "automationServices": {
      "type": "object",
      "description": "Workflow automation services",
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "baseUrl": {
              "type": "string",
              "format": "uri"
            },
            "apiKey": {
              "type": "string",
              "pattern": "^\\$\\{[A-Z_]+\\}$",
              "description": "Environment variable reference for API key"
            },
            "capabilities": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["workflow", "webhook", "schedule", "flow", "dashboard"]
              }
            },
            "routineMapping": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "prefix": {
                  "type": "string"
                },
                "defaultWorkspace": {
                  "type": "string"
                }
              }
            },
            "healthCheck": {
              "$ref": "#/definitions/healthCheck"
            }
          },
          "required": ["enabled", "baseUrl"]
        }
      }
    },
    "agentServices": {
      "type": "object",
      "description": "Browser automation and agent services",
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "mode": {
              "type": "string",
              "enum": ["standalone", "service"],
              "description": "Whether agent runs as library or external service"
            },
            "baseUrl": {
              "type": "string",
              "format": "uri"
            },
            "token": {
              "type": "string",
              "pattern": "^\\$\\{[A-Z_]+\\}$"
            },
            "executable": {
              "type": "string"
            },
            "browsers": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "headless": {
              "type": "boolean"
            },
            "constraints": {
              "type": "object",
              "properties": {
                "maxInstances": {
                  "type": "integer",
                  "minimum": 1
                },
                "maxMemoryMb": {
                  "type": "integer",
                  "minimum": 128
                },
                "timeoutMs": {
                  "type": "integer",
                  "minimum": 1000
                }
              }
            },
            "sandbox": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "args": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "userDataDir": {
                  "type": "string"
                }
              }
            },
            "healthCheck": {
              "$ref": "#/definitions/healthCheck"
            }
          },
          "required": ["enabled", "mode"]
        }
      }
    },
    "storageServices": {
      "type": "object",
      "description": "Object storage services",
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "endpoint": {
              "type": "string"
            },
            "apiUrl": {
              "type": "string",
              "format": "uri"
            },
            "gatewayUrl": {
              "type": "string",
              "format": "uri"
            },
            "useSSL": {
              "type": "boolean"
            },
            "accessKey": {
              "type": "string",
              "pattern": "^\\$\\{[A-Z_]+\\}$"
            },
            "secretKey": {
              "type": "string",
              "pattern": "^\\$\\{[A-Z_]+\\}$"
            },
            "region": {
              "type": "string"
            },
            "buckets": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "healthCheck": {
              "$ref": "#/definitions/healthCheck"
            }
          },
          "required": ["enabled"]
        }
      }
    },
    "discoveryConfig": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "strategy": {
          "type": "string",
          "enum": ["automatic", "manual", "hybrid"]
        },
        "methods": {
          "type": "object",
          "properties": {
            "portScanning": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "scanIntervalMs": {
                  "type": "integer",
                  "minimum": 60000
                },
                "ports": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                  }
                }
              }
            },
            "dockerIntegration": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "socketPath": {
                  "type": "string"
                },
                "labelPrefix": {
                  "type": "string"
                }
              }
            },
            "processScanning": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "patterns": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "notifications": {
          "type": "object",
          "properties": {
            "onDiscovery": {
              "type": "boolean"
            },
            "onLoss": {
              "type": "boolean"
            }
          }
        }
      },
      "required": ["enabled", "strategy"]
    },
    "securityConfig": {
      "type": "object",
      "properties": {
        "network": {
          "type": "object",
          "properties": {
            "allowedHosts": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "allowCustomHosts": {
              "type": "boolean"
            },
            "enforceHttps": {
              "type": "boolean"
            }
          }
        },
        "authentication": {
          "type": "object",
          "properties": {
            "requireForAll": {
              "type": "boolean"
            },
            "keyStorage": {
              "type": "string",
              "enum": ["environment", "vault", "file"]
            },
            "keyPrefix": {
              "type": "string"
            }
          }
        },
        "rateLimit": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "requestsPerMinute": {
              "type": "integer",
              "minimum": 1
            },
            "burstSize": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "audit": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "logLevel": {
              "type": "string",
              "enum": ["error", "warn", "info", "debug"]
            },
            "retentionDays": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    }
  }
}