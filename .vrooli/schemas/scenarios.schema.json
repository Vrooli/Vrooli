{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vrooli.com/schemas/scenarios.schema.json",
  "title": "Scenario Auto-Conversion Configuration",
  "description": "Configuration for automatic scenario to standalone app conversion",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version"
    },
    "auto_convert": {
      "$ref": "#/definitions/autoConvertConfig",
      "description": "Auto-conversion settings"
    },
    "scenarios": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/scenarioEntry"
      },
      "description": "List of available scenarios"
    }
  },
  "definitions": {
    "autoConvertConfig": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic scenario conversion"
        },
        "output_directory": {
          "type": "string",
          "default": "../generated-apps",
          "description": "Directory for generated standalone apps"
        },
        "watch": {
          "type": "boolean",
          "default": false,
          "description": "Watch for scenario changes and auto-convert"
        },
        "filters": {
          "$ref": "#/definitions/conversionFilters",
          "description": "Filters for scenario conversion"
        },
        "options": {
          "$ref": "#/definitions/conversionOptions",
          "description": "Conversion options"
        }
      }
    },
    "conversionFilters": {
      "type": "object",
      "properties": {
        "whitelist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Only convert these scenarios (empty = no whitelist)"
        },
        "blacklist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Never convert these scenarios"
        },
        "categories": {
          "$ref": "#/definitions/categoryFilter",
          "description": "Category-based filtering"
        },
        "tags": {
          "$ref": "#/definitions/tagFilter",
          "description": "Tag-based filtering"
        },
        "validated_only": {
          "type": "boolean",
          "default": false,
          "description": "Only convert validated scenarios"
        }
      }
    },
    "categoryFilter": {
      "type": "object",
      "properties": {
        "include": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["vrooli-helpers", "saas-applications", "development-tools", "ai-applications", "utilities"]
          },
          "description": "Include these categories"
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["vrooli-helpers", "saas-applications", "development-tools", "ai-applications", "utilities"]
          },
          "description": "Exclude these categories"
        }
      }
    },
    "tagFilter": {
      "type": "object",
      "properties": {
        "include": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Include scenarios with any of these tags"
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Exclude scenarios with any of these tags"
        },
        "require_all": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Only include scenarios with all of these tags"
        }
      }
    },
    "conversionOptions": {
      "type": "object",
      "properties": {
        "preserve_git": {
          "type": "boolean",
          "default": false,
          "description": "Initialize git repository in generated apps"
        },
        "copy_docs": {
          "type": "boolean",
          "default": true,
          "description": "Copy documentation to generated apps"
        },
        "generate_readme": {
          "type": "boolean",
          "default": true,
          "description": "Generate README.md for standalone apps"
        },
        "include_tests": {
          "type": "boolean",
          "default": true,
          "description": "Include test files in generated apps"
        },
        "minimize": {
          "type": "boolean",
          "default": false,
          "description": "Minimize generated app size (exclude non-essential files)"
        }
      }
    },
    "scenarioEntry": {
      "type": "object",
      "required": ["name", "location"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$",
          "description": "Scenario identifier"
        },
        "description": {
          "type": "string",
          "description": "Scenario description"
        },
        "location": {
          "type": "string",
          "description": "Path to scenario directory"
        },
        "category": {
          "type": "string",
          "enum": ["vrooli-helpers", "saas-applications", "development-tools", "ai-applications", "utilities"],
          "description": "Scenario category"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Scenario tags"
        },
        "validated": {
          "type": "boolean",
          "default": false,
          "description": "Whether scenario has been validated"
        },
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether scenario is enabled for conversion"
        },
        "ui": {
          "type": "boolean",
          "default": false,
          "description": "Whether scenario has a UI component"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Other scenarios this depends on"
        }
      }
    }
  }
}